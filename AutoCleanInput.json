{
  "options.auto_run": {
    "type": "checkbox",
    "label": "Autorun Task",
    "val": "false",
    "isOn": "true",
    "isOff": "false"
  },
  "trigger_vector_frame": {
    "type": "fieldset",
    "label": "Task Lock",
    "show_if": "options.auto_run=='true'",
    "repeat": false,
	"fields": {
      "options.autorun_tables": {
        "type": "select",
        "label": "Autorun on table change",
        "bind": "TABLES",
        "multiple": true,
        "required": false
      },
		"options.all_tables": {
		"type": "checkbox",
		"label": "Run all matching key-lock pairs",
		"val": "false",
		"isOn": "true",
		"isOff": "false",
        "breakLine": true
		},
      "trigger_key": {
        "type": "select",
        "label": "Trigger Key",
        "options": {
          "greater": {
            "label": "GREATER THAN"
          },
          "greater_or_equal": {
            "label": "GREATER OR EQUAL"
          },
          "equal": {
            "label": "EQUAL"
          },
          "smaller_or_equal": {
            "label": "SMALLER OR EQUAL"
          },
          "smaller": {
            "label": "SMALLER THAN"
          }
        },
        "val": "larger_or_equal"
      },
      "key_number": {
        "type": "text",
        "label": "Key",
        "val": "1",
        "required": true,
        "breakLine": true
      },  	  
      "trigger_method": {
        "type": "select",
        "label": "Trigger Method",
        "options": {
          "no_lock": {
            "label": "Run without Task Lock"
          },
          "scalar_product_compound": {
            "label": "Compound Scalar Product"
          },
          "scalar_product_all_pins": {
            "label": "Pin by Pin - all matching"
          },
          "scalar_product_min_one_pin": {
            "label": "Pin by Pin - one or more matches"
          },
          "scalar_product_one_pin": {
            "label": "Pin by Pin - one match"
          }
        },
        "val": "scalar_product_compound",
        "breakLine": true
      },
      "options.names": {
        "type": "fieldset",
        "label": "Task Lock Definition",
        "repeat": true,
        "fields": {
          "name": {
            "type": "text",
            "label": "Key Pin",
            "val": "",
            "required": true
          },
          "value": {
            "type": "text",
            "label": "Multiplier",
            "val": "",
            "required": true
          },
          "delete": {
            "type": "button",
            "label": "Delete",
            "function": "DELETE_ROW"
          }
        }
      }
    }
  }
}
