{
  "options.auto_run": {
    "type": "checkbox",
    "label": "Autorun Task",
    "val": "false",
    "isOn": "true",
    "isOff": "false"
  },
  "trigger_vector_frame": {
    "type": "fieldset",
    "label": "Task Trigger",
    "show_if": "options.auto_run=='true'",
    "repeat": false,
    "fields": {
      "options.autorun_tables": {
        "type": "select",
        "label": "Autorun on table change",
        "bind": "TABLES",
        "multiple": true,
        "required": true,
        "breakLine": true
      },
      "trigger_key": {
        "type": "select",
        "label": "Trigger Key",
        "options": {
          "larger": {
            "label": ">="
          },
          "larger_or_equal": {
            "label": ">"
          },
          "equal": {
            "label": "="
          },
          "smaller": {
            "label": "<"
          },
          "smaller_or_equal": {
            "label": "<="
          },
        },
        "val": "larger_or_equal"
      },
      "key_number": {
        "type": "text",
        "label": "Key",
        "val": "1",
        "required": true,
        "breakLine": true
      },  
      "options.names": {
        "type": "fieldset",
        "label": "Task Trigger Vector",
        "repeat": true,
        "fields": {
          "name": {
            "type": "text",
            "label": "Name",
            "val": "",
            "required": true
          },
          "value": {
            "type": "text",
            "label": "Value(real number)",
            "val": "",
            "required": true
          },
          "delete": {
            "type": "button",
            "label": "Delete",
            "function": "DELETE_ROW"
          }
        }
      }
    }
  }
}
