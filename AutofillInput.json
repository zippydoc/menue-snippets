{
  "tables": {
    "type": "fieldset",
    "label": "Select Tables",
    "repeat": true,
    "fields": {
      "table_name": {
        "type": "select",
        "label": "Lookup Table",
        "bind": "TABLES",
        "required": true
      },
      "lookup_header_column": {
        "type": "select",
        "label": "Header Column",
        "table": "this.table_name",
        "bind": "COLUMNS",
        "required": true
      },
      "lookup_value_column": {
        "type": "select",
        "label": "Value Column",
        "table": "this.table_name",
        "bind": "COLUMNS",
        "required": true
      },
      "lookup_mapping_column": {
        "type": "select",
        "label": "Mapping Column",
        "table": "this.table_name",
        "bind": "COLUMNS"
      },
      "delete": {
        "type": "button",
        "label": "Delete",
        "function": "DELETE_ROW"
      }
    }
  }
}