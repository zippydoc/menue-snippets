{
  "options": {
    "type": "fieldset",
    "label": "",
    "style": "box-shadow: 0 0 15px 1px rgba(0, 0, 0, 0.4); border-radius: 3px; background: linear-gradient(rgba(196, 102, 0, 0.6), rgba(155, 89, 182, 0.6));margin-right:5px",
    "repeat": false,
    "fields": {
      "number_of_tiles": {
        "type": "number",
        "label": "Number of Bins",
        "val": "2",
        "required": true,
        "breakLine": true
      },
      "binning_type": {
        "type": "select",
        "label": "Binning Type",
        "options": {
          "equal_records": {
            "label": "Simple Binning"
          },
          "equal_intervals": {
            "label": "Equal Interval Binning"
          }
        },
        "val": "equal_records"
      },
      "equal_records_order": {
        "type": "select",
        "label": "Order",
        "show_if": "binning_type=='equal_records'",
        "options": {
          "keep_current": {
            "label": "Keep Current"
          },
          "asc": {
            "label": "Ascending"
          },
          "desc": {
            "label": "Descending"
          }
        },
        "val": "keep_current"
      },
      "equal_intervals_order": {
        "type": "select",
        "label": "Order",
        "show_if": "binning_type=='equal_intervals'",
        "options": {
          "asc": {
            "label": "Ascending"
          },
          "desc": {
            "label": "Descending"
          }
        },
        "val": "asc",
        "breakLine": true
      }
    },
    "breakLine": true
  }
}
