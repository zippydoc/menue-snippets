{
  "options": {
    "type": "fieldset",
    "标签": "选择选项",
    "repeat": false,
    "fields": {
      "transpose_type": {
        "type": "hidden",
        "val": "crosstab"
      },
      "mirror_matrix.convert_header_to_label": {
        "type": "checkbox",
        "标签": "将标题转换为标签",
        "show_if": "transpose_type=='mirror_matrix'",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "column_name_to_label.columns_to_label": {
        "type": "select",
        "标签": "选择列以转换为标签",
        "show_if": "transpose_type=='column_name_to_label'",
        "table": "input_table",
        "multiple": true,
        "bind": "COLUMNS",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "column_name_to_label.label_column_name": {
        "type": "text",
        "标签": "标签列名",
        "show_if": "transpose_type=='column_name_to_label'",
        "required": true,
        "val": "标签",
        "width": "100%",
        "breakLine": true
      },
      "column_name_to_label.value_column_name": {
        "type": "text",
        "标签": "值列名",
        "show_if": "transpose_type=='column_name_to_label'",
        "required": true,
        "val": "值",
        "width": "100%",
        "breakLine": true
      },
      "crosstab.group_data_by_these_values": {
        "type": "select",
        "标签": "根据这些值对数据进行分组",
        "show_if": "transpose_type=='crosstab'",
        "table": "input_table",
        "multiple": true,
        "bind": "COLUMNS",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "crosstab.change_column_headers": {
        "type": "select",
        "标签": "更改列标题",
        "show_if": "transpose_type=='crosstab'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "crosstab.values_for_new_columns": {
        "type": "select",
        "标签": "新列值",
        "show_if": "transpose_type=='crosstab'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "crosstab.method_for_aggregating_values": {
        "type": "select",
        "标签": "聚合值方法",
        "show_if": "transpose_type=='crosstab'",
        "options": {
          "连接": {
            "标签": "连接"
          },
          "首行": {
            "标签": "首行"
          },
          "后": {
            "标签": "后"
          },
          "总和": {
            "标签": "总和"
          },
          "平均": {
            "标签": "平均"
          },
          "计数": {
            "标签": "计数"
          },
          "已定义用户": {
            "标签": "已定义用户"
          }
        },
        "val": "连接",
        "required": true
      },
      "crosstab.user_defined_str": {
        "type": "text",
        "标签": "用户定义值",
        "show_if": "transpose_type=='crosstab' && crosstab.method_for_aggregating_values=='User Defined'",
        "val": "x",
        "trim": "false",
        "breakLine": true
      },
      "crosstab.separator": {
        "type": "text",
        "标签": "分隔符",
        "show_if": "transpose_type=='crosstab' && method_for_aggregating_values=='Concatenate'",
        "val": ",",
        "trim": "false",
        "required": true,
        "breakLine": true
      }
    }
  }
}