{
  "options": {
    "type": "fieldset",
    "label": "选择选项",
    "repeat": false,
    "fields": {
      "options.taskname": {
        "type": "hidden",
        "val": "direct_planning"
      },
      "options.type": {
        "type": "hidden",
        "val": "custom"
      },
      "options.custom.table": {
        "type": "fieldset",
        "label": "计划职位",
        "repeat": true,
        "fields": {
          "position": {
            "type": "select",
            "label": "位置",
            "options": {
              "Revenues": {
                "label": "Revenues"
              },
              "Cost of Goods Sold": {
                "label": "Cost of Goods Sold"
              },
              "Marketing Expenses": {
                "label": "Marketing Expenses"
              },
              "Operating Expenses": {
                "label": "Operating Expenses"
              },
              "General and Administration Expenses": {
                "label": "General and Administration Expenses"
              },
              "Personnel Expenses": {
                "label": "Personnel Expenses"
              },
              "Tax": {
                "label": "Tax"
              },
              "Capital Expenditure": {
                "label": "Capital Expenditure"
              },
              "Depreciation": {
                "label": "Depreciation"
              },
              "Amortization": {
                "label": "Amortization"
              },
              "Extraordinary Items": {
                "label": "Extraordinary Items"
              },
              "Depretiation & Amortisation": {
                "label": "Depretiation & Amortisation"
              }
            },
            "val": "Revenues",
            "required": true
          },
          "revenues__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Revenues'",
            "options": {
              "Sales": {
                "label": "Sales"
              },
              "Increase(+)/Decrease(-) Inventories": {
                "label": "Increase(+)/Decrease(-) Inventories"
              },
              "Other Revenues": {
                "label": "Other Revenues"
              }
            },
            "val": "Sales",
            "required": true
          },
          "cost_of_goods_sold__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Cost of Goods Sold'",
            "options": {
              "Material Costs": {
                "label": "Material Costs"
              },
              "Purchased Services": {
                "label": "Purchased Services"
              }
            },
            "val": "Material Costs",
            "required": true
          },
          "general_administration_expenses__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='General and Administration Expenses'",
            "options": {
              "Rental Expenses": {
                "label": "Rental Expenses"
              },
              "Cleaning": {
                "label": "Cleaning"
              },
              "Office Items": {
                "label": "Office Items"
              },
              "Consulting": {
                "label": "Consulting"
              },
              "Recruiting": {
                "label": "Recruiting"
              }
            },
            "val": "Rental Expenses",
            "required": true
          },
          "personnel_expenses__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Personnel Expenses'",
            "options": {
              "Fix Salary": {
                "label": "Fix Salary"
              },
              "Bonus": {
                "label": "Bonus"
              },
              "Other Compensation": {
                "label": "Other Compensation"
              }
            },
            "val": "Fix Salary",
            "required": true
          },
          "capital_expenditure__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Capital Expenditure'",
            "options": {
              "Maintenance Capex": {
                "label": "Maintenance Capex"
              },
              "Expansion Capex": {
                "label": "Expansion Capex"
              }
            },
            "val": "Maintenance Capex",
            "required": true
          },
          "extraordinary_items__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Extraordinary Items'",
            "options": {
              "Extraordinary Income": {
                "label": "Extraordinary Income"
              },
              "Extraordinary Expenses": {
                "label": "Extraordinary Expenses"
              }
            },
            "val": "Extraordinary Income",
            "required": true
          },
          "tax__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Tax'",
            "options": {
              "Value Added Tax": {
                "label": "Value Added Tax"
              },
              "Corporate Tax": {
                "label": "Corporate Tax"
              },
              "Trade Tax": {
                "label": "Trade Tax"
              }
            },
            "val": "Value Added Tax",
            "required": true
          },
          "interest__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Interest'",
            "options": {
              "Interest Income": {
                "label": "Interest Income"
              },
              "Interest Expenses": {
                "label": "Interest Expenses"
              }
            },
            "val": "Interest Income",
            "required": true
          },
          "depretiation_amortisation__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Depretiation & Amortisation'",
            "options": {
              "Depretiation": {
                "label": "Depretiation"
              },
              "Amortisation": {
                "label": "Amortisation"
              }
            },
            "val": "Depretiation",
            "required": true
          },
          "item": {
            "type": "text",
            "label": "项目",
            "val": ""
          },
          "amount": {
            "type": "number",
            "label": "金额",
            "val": "",
            "required": true
          },
          "periodicy": {
            "type": "select",
            "label": "周期",
            "required": true,
            "options": {
              "一次性的": {
                "label": "一次性的"
              },
              "每日": {
                "label": "每日"
              },
              "每周": {
                "label": "每周"
              },
              "每月": {
                "label": "每月"
              },
              "季度": {
                "label": "季度"
              },
              "一年一度": {
                "label": "一年一度"
              }
            },
            "val": "一年一度",
            "breakLine": true
          },
          "growth": {
            "type": "number",
            "label": "Growth in %",
            "show_if": "this.periodicy!='One-Off'",
            "val": "",
            "required": true
          },
          "growth_period": {
            "type": "select",
            "label": "增长时段",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "每周": {
                "label": "周环比"
              },
              "每月": {
                "label": "月环比"
              },
              "季度": {
                "label": "季环比"
              },
              "一年一度": {
                "label": "年环比"
              }
            },
            "val": "一年一度"
          },
          "growth_pattern": {
            "type": "select",
            "label": "增长模式",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "复利": {
                "label": "复利"
              },
              "线性": {
                "label": "线性"
              },
              "跳跃式修复": {
                "label": "跳跃式修复"
              }
            },
            "val": "跳跃式修复",
            "breakLine": true
          },
          "initial_date": {
            "type": "date",
            "label": "初始日期",
            "val": "",
            "required": true
          },
          "final_date": {
            "type": "date",
            "label": "最后日期",
            "show_if": "this.periodicy!='One-Off'",
            "val": ""
          },
          "delete": {
            "type": "button",
            "label": "删除",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.output_type": {
        "type": "select",
        "label": "输出类型",
        "required": true,
        "options": {
          "planning_table": {
            "label": "Planning Table"
          },
          "periodicy_table": {
            "label": "Periodicy Table"
          },
          "summary_table": {
            "label": "Summary Table"
          }
        },
        "val": "summary_table"
      },
      "options.summary_table__group_by": {
        "type": "select",
        "label": "分组方式：",
        "show_if": "options.output_type=='summary_table'",
        "multiple": true,
        "options": {
          "年": {
            "label": "年"
          },
          "季度": {
            "label": "季度"
          },
          "月": {
            "label": "月"
          },
          "周": {
            "label": "周"
          },
          "Day": {
            "label": "Day"
          },
          "位置": {
            "label": "位置"
          },
          "Sub Position": {
            "label": "Sub Position"
          },
          "项目": {
            "label": "项目"
          }
        },
        "val": ["年", "季度", "月", "位置"],
        "required": true,
        "breakLine": true
      },
      "options.set_plan_config": {
        "type": "checkbox",
        "label": "Planning Configuration",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "planning_configuration_frame": {
        "type": "fieldset",
        "label": "Planning Configuration",
        "show_if": "options.set_plan_config=='true'",
        "repeat": false,
        "fields": {
          "options.add_categories": {
            "type": "checkbox",
            "label": "Add Categories",
            "val": "false",
            "isOn": "true",
            "isOff": "false"
          },
          "options.categories": {
            "type": "fieldset",
            "label": "Add Categories",
            "show_if": "options.add_categories=='true'",
            "repeat": true,
            "fields": {
              "category": {
                "type": "text",
                "label": "Category",
                "val": "",
                "required": true
              },
              "value": {
                "type": "text",
                "label": "值",
                "val": ""
              },
              "delete": {
                "type": "button",
                "label": "删除",
                "function": "DELETE_ROW"
              }
            },
            "breakLine": true
          },
          "options.set_amount_column_formatting": {
            "type": "checkbox",
            "label": "Set Amount Column Formatting",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "style": "margin-top: 10px"
          },
          "formatting_frame": {
            "type": "fieldset",
            "label": "金额栏的格式",
            "show_if": "options.set_amount_column_formatting=='true'",
            "repeat": false,
            "fields": {
              "options.amount.format__category": {
                "type": "select",
                "label": "金额格式",
                "required": true,
                "options": {
                  "standard": {
                    "label": "标准"
                  },
                  "number": {
                    "label": "数字"
                  },
                  "percentage": {
                    "label": "百分比"
                  },
                  "text": {
                    "label": "文本"
                  },
                  "date": {
                    "label": "日期"
                  },
                  "currency": {
                    "label": "货币"
                  }
                },
                "val": "currency"
              },
              "options.amount.format__rounding": {
                "type": "select",
                "label": "取整",
                "show_if": "options.amount.format__category=='number' || options.amount.format__category=='percentage' || options.amount.format__category=='currency'",
                "required": true,
                "options": {
                  "no_rounding": {
                    "label": "不取整"
                  },
                  "0": {
                    "label": "0 位数"
                  },
                  "1": {
                    "label": "1 位数"
                  },
                  "2": {
                    "label": "2 位数"
                  },
                  "3": {
                    "label": "3 位数"
                  },
                  "4": {
                    "label": "4 位数"
                  },
                  "5": {
                    "label": "5 位数"
                  },
                  "6": {
                    "label": "6 位数"
                  },
                  "7": {
                    "label": "7 位数"
                  },
                  "8": {
                    "label": "8 位数"
                  },
                  "9": {
                    "label": "9 位数"
                  }
                },
                "val": "2"
              },
              "options.amount.format__use_1000_separator": {
                "type": "checkbox",
                "label": "使用 1000 分隔符（.）",
                "show_if": "options.amount.format__category=='number' || options.amount.format__category=='percentage' || options.amount.format__category=='currency'",
                "val": "true",
                "isOn": "true",
                "isOff": "false"
              },
              "options.amount.format__currency_symbol": {
                "type": "select",
                "label": "符号",
                "show_if": "options.amount.format__category=='currency'",
                "required": true,
                "options": {
                  "dollar": {
                    "label": "$"
                  },
                  "euro": {
                    "label": "€"
                  },
                  "pound": {
                    "label": "£"
                  }
                },
                "val": "dollar"
              },
              "options.amount.format__date_format": {
                "type": "select",
                "label": "类型",
                "show_if": "options.amount.format__category=='date'",
                "required": true,
                "options": {
                  "mm/dd/yyyy": {
                    "label": "3/14/2012"
                  },
                  "D, M dd, Y": {
                    "label": "2012年3月14日，星期三"
                  },
                  "yyyy-mm-dd": {
                    "label": "2012-03-14"
                  }
                },
                "val": "mm/dd/yyyy",
                "breakLine": true
              }
            },
            "breakLine": true
          },
          "options.end_date": {
            "type": "date",
            "label": "表格结束日期",
            "show_if": "options.type=='process' || options.type=='custom'",
            "val": "",
            "style": "width: 300px",
            "breakLine": true
          }
        }
      }
    }
  }
}