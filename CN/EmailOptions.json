{
  "options": {
    "type": "fieldset",
    "label": "选择选项",
    "repeat": false,
    "fields": {
      "options.task_type": {
        "type": "select",
        "label": "任务类型",
        "required": true,
        "options": {
          "write_series": {
            "label": "写电子邮件系列"
          },
          "write_email": {
            "label": "写电子邮件"
          },
          "read": {
            "label": "阅读电子邮件"
          }
        },
        "val": "write_email"
      },
      "input_table": {
        "type": "select",
        "label": "选择表格",
        "show_if": "options.task_type=='write_series'",
        "bind": "TABLES",
        "empty": "",
        "required": true
      },
      "info1": {
        "type": "text",
        "label": "",
        "show_if": "options.task_type=='write_series'",
        "val": "Table-Type: TO | CC | BCC | SUBJECT | BODY",
        "disabled": true,
        "style": "width: 100%"
      },
      "options.to": {
        "type": "text",
        "label": "收件人",
        "show_if": "options.task_type=='write_email'",
        "required": true,
        "val": "",
        "placeholder": "user1@domain.com; user2@domain.com;",
        "width": "100%"
      },
      "options.cc": {
        "type": "text",
        "label": "抄送",
        "show_if": "options.task_type=='write_email'",
        "val": "",
        "placeholder": "ccuser1@domain.com; ccuser2@domain.com",
        "width": "100%"
      },
      "options.bcc": {
        "type": "text",
        "label": "密函",
        "show_if": "options.task_type=='write_email'",
        "val": "",
        "placeholder": "bccuser1@domain.com; bccuser1@domain.com",
        "width": "100%"
      },
      "options.subject": {
        "type": "text",
        "label": "主题",
        "show_if": "options.task_type=='write_email'",
        "required": true,
        "val": "",
        "placeholder": "主题",
        "width": "100%"
      },
      "options.body": {
        "type": "textarea",
        "label": "正文",
        "show_if": "options.task_type=='write_email'",
        "val": "",
        "placeholder": "文本",
        "md_no_resize": true,
        "rows": 3,
        "width": "100%"
      }
    }
  },
  "smtp_config_frame": {
    "type": "fieldset",
    "label": "SMTP连接",
    "show_if": "options.task_type=='write_series' || options.task_type=='write_email'",
    "repeat": false,
    "fields": {
      "options.smtp.type": {
        "type": "select",
        "label": "选择SMTP服务器",
        "options": {
          "gmail": {
            "label": "Gmail"
          },
          "custom": {
            "label": "自定义（即将推出）"
          }
        },
        "val": "gmail",
        "required": true,
        "breakLine": true
      },
      "gmail_warning": {
        "type": "text",
        "label": "",
        "show_if": "options.smtp.type=='gmail'",
        "val": "Turn 'Allow less secure apps' ON in https://myaccount.google.com/lesssecureapps",
        "width": "100%",
        "disabled": true
      },
      "options.gmail.user": {
        "type": "text",
        "label": "Gmail用户",
        "show_if": "options.smtp.type=='gmail'",
        "required": true,
        "placeholder": "sender@gmail.com"
      },
      "options.gmail.password": {
        "type": "password",
        "label": "Gmail密码",
        "show_if": "options.smtp.type=='gmail'",
        "required": true
      },
      "options.custom.host": {
        "type": "text",
        "label": "SMTP主机",
        "show_if": "options.smtp.type=='custom'",
        "required": true
      },
      "options.custom.port": {
        "type": "text",
        "label": "SMTP端口",
        "show_if": "options.smtp.type=='custom'",
        "required": true
      },
      "options.custom.user": {
        "type": "text",
        "label": "SMTP用户",
        "show_if": "options.smtp.type=='custom'",
        "required": true
      },
      "options.custom.password": {
        "type": "password",
        "label": "SMTP密码",
        "show_if": "options.smtp.type=='custom'",
        "required": true
      }
    }
  }
}