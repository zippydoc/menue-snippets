{
  "options": {
    "type": "fieldset",
    "label": "选择选项",
    "repeat": false,
    "fields": {
      "options.type": {
        "type": "radio",
        "val": "expand",
        "values": {
          "expand": "展开",
          "compress": "Compress"
        },
        "breakLine": true
      },
      "options.column_to_expand": {
        "type": "select",
        "label": "扩展的列",
        "show_if": "options.type=='expand'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true
      },
      "options.column_to_group": {
        "type": "select",
        "label": "要分组的列",
        "show_if": "options.type=='compress'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true
      },
      "options.column_to_compress": {
        "type": "select",
        "label": "要压缩的列",
        "show_if": "options.type=='compress'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true
      },
      "options.delimiter": {
        "type": "text",
        "label": "分隔符",
        "val": ";",
        "trim": "false",
        "required": true
      },
      "options.new_col_name": {
        "type": "text",
        "label": "新列名",
        "show_if": "options.type=='expand' && options.expand__output_in_new_column=='true'",
        "val": "label",
        "required": true,
        "breakLine": true
      },
      "options.expand__output_in_new_column": {
        "type": "checkbox",
        "label": "在新列中输出",
        "show_if": "options.type=='expand'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.create_new_table": {
        "type": "checkbox",
        "label": "输出为新表格",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      }
    }
  }
}