{
  "options": {
    "type": "fieldset",
    "标签": "选择选项",
    "repeat": false,
    "fields": {
      "options.to": {
        "type": "select",
        "标签": "类型",
        "options": {
          "database": {
            "标签": "导出至数据库"
          },
          "file": {
            "标签": "导出至文件"
          }
        },
        "val": "database",
        "required": true
      },
      "options.export_series": {
        "type": "checkbox",
        "标签": "导出系列",
        "show_if": "options.to=='file'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.file_name_column": {
        "type": "select",
        "标签": "选择文件名列",
        "show_if": "options.to=='file' && options.export_series=='true'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "postgresql_db_credential_box": {
        "type": "fieldset",
        "标签": "数据库连接凭据",
        "show_if": "options.to=='database'",
        "repeat": false,
        "fields": {
          "options.dbms": {
            "type": "select",
            "标签": "选择 DBMS",
            "options": {
              "postgresql": {
                "标签": "PostgreSQL"
              },
              "mysql": {
                "标签": "MySQL"
              },
              "sql_server": {
                "标签": "MS SQL Server"
              },
              "oracle": {
                "标签": "Oracle"
              }
            },
            "val": "postgresql",
            "required": true,
            "breakLine": true
          },
          "options.postgresql_credential.user": {
            "type": "text",
            "标签": "用户",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.postgresql_credential.password": {
            "type": "text",
            "标签": "密码",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.postgresql_credential.host": {
            "type": "text",
            "标签": "主机",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.postgresql_credential.database": {
            "type": "text",
            "标签": "数据库",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          }
        }
      },
      "options.schema_name_to_export": {
        "type": "text",
        "标签": "需导出的 Schema 名称",
        "show_if": "options.to=='database' && options.dbms=='postgresql'",
        "required": true,
        "val": "public",
        "width": "100%",
        "breakLine": true
      },
      "options.webservice": {
        "type": "select",
        "标签": "选择 Web 服务",
        "show_if": "options.to=='file' || options.to=='mytask'",
        "options": {
          "github": {
            "标签": "Github"
          },
          "dropbox": {
            "标签": "Dropbox"
          },
          "ms_one_drive": {
            "标签": "Microsoft OneDrive"
          },
          "google_drive": {
            "标签": "Google 云端硬盘"
          }
        },
        "val": "github",
        "required": true
      },
      "options.export_format": {
        "type": "select",
        "标签": "导出格式",
        "show_if": "options.to=='file'",
        "options": {
          "csv_file": {
            "标签": "CSV 文件"
          },
          "word_by_word": {
            "标签": "逐字"
          },
          "line_by_line": {
            "标签": "逐行"
          }
        },
        "val": "csv_file",
        "required": true,
        "breakLine": true
      },
      "options.github_create_pr": {
        "type": "checkbox",
        "标签": "创建拉取请求",
        "show_if": "options.to=='file' && options.webservice=='github'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.github_token": {
        "type": "text",
        "标签": "指定具有写入权限的Github个人访问令牌：",
        "show_if": "options.to=='file' && options.webservice=='github'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.github_url": {
        "type": "text",
        "标签": "输入链接，如：https://github.com/zippydoc/test",
        "show_if": "options.to=='file' && options.webservice=='github'",
        "val": "https://github.com/zippydoc/public-tables",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.ms_one_drive_token": {
        "type": "text",
        "标签": "Microsoft Graph API访问令牌。你可以在这里得到它 https://ms-oauth.herokuapp.com/",
        "show_if": "options.to=='file' && options.webservice=='ms_one_drive'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.google_authorization_code": {
        "type": "text",
        "标签": "谷歌OAuth授权代码与范围https://www.googleapis.com/auth/drive。你可以在这里得到它https://developers.google.com/oauthplayground/",
        "show_if": "options.to=='file' && options.webservice=='google_drive'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.dropbox_authorization_code": {
        "type": "text",
        "标签": "Dropbox授权代码。你可以在这里得到它https://www.dropbox.com/oauth2/authorize?client_id=9i7woztjp94jrkw&response_type=code",
        "show_if": "options.to=='file' && options.webservice=='dropbox'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.if_duplicated": {
        "type": "select",
        "标签": "如果重复",
        "show_if": "options.to=='database' || (options.to=='file' && options.webservice=='github')",
        "val": "drop_if_exist",
        "options": {
          "drop_if_exist": {
            "标签": "创建或删除（如存在）"
          },
          "error_if_exist": {
            "标签": "新建（如存在则抛出错误）"
          },
          "error_if_not_exist": {
            "标签": "删除（如不存在则抛出错误）"
          },
          "append": {
            "标签": "追加"
          }
        }
      },
      "options.export_task_name": {
        "type": "text",
        "标签": "输入任务名称",
        "show_if": "options.to=='mytask'",
        "required": true,
        "val": "Flow6_Task1_AddColumns",
        "width": "100%",
        "breakLine": true
      }
    }
  }
}