{
  "options": {
    "type": "fieldset",
    "label": "选择选项",
    "repeat": false,
    "fields": {
      "options.type": {
        "type": "select",
        "label": "类型",
        "options": {
          "standard": {
            "label": "生成标准影响曲线"
          },
          "custom": {
            "label": "生成自定义影响曲线"
          },
          "apply": {
            "label": "应用影响曲线"
          }
        },
        "val": "standard",
        "breakLine": true
      },
      "options.standard.start": {
        "type": "text",
        "label": "初始时段",
        "show_if": "options.type=='standard' && options.standard.end_value_equals_initial_value=='no'",
        "val": "1",
        "required": true
      },
      "options.standard.maximum": {
        "type": "text",
        "label": "最大时段",
        "show_if": "options.type=='standard'",
        "val": "50",
        "required": true
      },
      "options.standard.end": {
        "type": "text",
        "label": "期末",
        "show_if": "options.type=='standard'",
        "val": "100",
        "required": true,
        "breakLine": true
      },
      "options.standard.multiplier_at_maximum_impact_level": {
        "type": "text",
        "label": "最大影响级别乘数",
        "show_if": "options.type=='standard'",
        "width": "100%",
        "val": "2",
        "required": true,
        "breakLine": true
      },
      "options.standard.end_value_equals_initial_value": {
        "type": "checkbox",
        "label": "结束值等于初始值",
        "show_if": "options.type=='standard'",
        "width": "100%",
        "val": "yes",
        "isOn": "yes",
        "isOff": "no",
        "breakLine": true
      },
      "options.standard.multiplier_end_value": {
        "type": "text",
        "label": "结尾值乘数",
        "width": "100%",
        "show_if": "options.type=='standard' && options.standard.end_value_equals_initial_value=='no'",
        "val": "",
        "breakLine": true
      },
      "options.standard.maximum_plateau": {
        "type": "checkbox",
        "label": "最大平台曲线",
        "show_if": "options.type=='standard'",
        "width": "100%",
        "val": "yes",
        "isOn": "yes",
        "isOff": "no",
        "breakLine": true
      },
      "options.standard.no_of_periods_prior_defined_maximum_point": {
        "type": "text",
        "label": "确定最大点前的时段数",
        "show_if": "options.type=='standard' && options.standard.maximum_plateau=='yes'",
        "val": "0",
        "style": "width: 250px"
      },
      "options.standard.no_of_periods_post_defined_maximum_point": {
        "type": "text",
        "label": "确定最大点后的时段数",
        "show_if": "options.type=='standard' && options.standard.maximum_plateau=='yes'",
        "val": "0",
        "style": "width: 250px",
        "breakLine": true
      },
      "options.standard.left_slope": {
        "type": "select",
        "label": "左侧",
        "show_if": "options.type=='standard'",
        "options": {
          "vertical": {
            "label": "竖直"
          },
          "linear": {
            "label": "线性"
          },
          "standard_distribution": {
            "label": "标准分布"
          }
        },
        "val": "standard_distribution"
      },
      "options.standard.use_auto_calculated_sigma_for_left_slope": {
        "type": "checkbox",
        "label": "自动计算左求和",
        "show_if": "options.type=='standard' && options.standard.left_slope=='standard_distribution'",
        "val": "true",
        "isOn": "true",
        "isOff": "false"
      },
      "options.standard.left_slope_sigma": {
        "type": "text",
        "label": "左侧求和",
        "show_if": "options.type=='standard' && options.standard.left_slope=='standard_distribution' && options.standard.use_auto_calculated_sigma_for_left_slope=='false'",
        "val": ""
      },
      "options.standard.right_slope": {
        "type": "select",
        "label": "右侧",
        "show_if": "options.type=='standard'",
        "required": true,
        "options": {
          "vertical": {
            "label": "竖直"
          },
          "linear": {
            "label": "线性"
          },
          "standard_distribution": {
            "label": "标准分布"
          }
        },
        "val": "standard_distribution"
      },
      "options.standard.use_auto_calculated_sigma_for_right_slope": {
        "type": "checkbox",
        "label": "自动计算右求和",
        "show_if": "options.type=='standard' && options.standard.right_slope=='standard_distribution'",
        "val": "true",
        "isOn": "true",
        "isOff": "false"
      },
      "options.standard.right_slope_sigma": {
        "type": "text",
        "label": "右侧求和",
        "show_if": "options.type=='standard' && options.standard.right_slope=='standard_distribution' && options.standard.use_auto_calculated_sigma_for_right_slope=='false'",
        "val": "",
        "breakLine": true
      },
      "options.standard.event_name": {
        "type": "text",
        "label": "事件名称",
        "show_if": "options.type=='standard'",
        "val": "Event"
      },
      "options.custom.event_table": {
        "type": "select",
        "label": "事件表格",
        "show_if": "options.type=='custom'",
        "bind": "TABLES",
        "empty": "",
        "required": true,
        "breakLine": true
      },
      "options.custom.event_date_column": {
        "type": "select",
        "label": "事件日期列",
        "show_if": "options.type=='custom'",
        "required": true,
        "table": "options.custom.event_table",
        "bind": "COLUMNS"
      },
      "options.custom.event_name_column": {
        "type": "select",
        "label": "事件名称列",
        "show_if": "options.type=='custom'",
        "required": true,
        "table": "options.custom.event_table",
        "bind": "COLUMNS"
      },
      "options.custom.event_name": {
        "type": "text",
        "label": "事件名称",
        "show_if": "options.type=='custom'",
        "val": "Weekend",
        "required": true,
        "breakLine": true
      },
      "options.custom.base_period": {
        "type": "select",
        "label": "基本时段",
        "show_if": "options.type=='custom'",
        "required": true,
        "options": {
          "months": {
            "label": "前 N 个月"
          },
          "weeks": {
            "label": "前 N 周"
          },
          "days": {
            "label": "前 N 天"
          }
        },
        "val": "days"
      },
      "options.custom.base_period_n": {
        "type": "text",
        "label": "N",
        "show_if": "options.type=='custom'",
        "val": "5",
        "required": true,
        "breakLine": true
      },
      "options.custom.leading_impact_days": {
        "type": "text",
        "label": "前导影响时段",
        "show_if": "options.type=='custom'",
        "val": "0",
        "required": true
      },
      "options.custom.trailing_impact_days": {
        "type": "text",
        "label": "尾随影响时段",
        "show_if": "options.type=='custom'",
        "val": "0",
        "required": true,
        "breakLine": true
      },
      "options.custom.value_column": {
        "type": "select",
        "label": "值列",
        "show_if": "options.type=='custom'",
        "required": true,
        "table": "options.custom.event_table",
        "bind": "COLUMNS",
        "breakLine": true
      },
      "options.custom.average": {
        "type": "hidden",
        "val": "true"
      },
      "options.apply.event_name": {
        "type": "text",
        "label": "事件名称",
        "show_if": "options.type=='apply'",
        "val": "Weekend",
        "required": true,
        "breakLine": true
      },
      "apply_event_table_box": {
        "type": "fieldset",
        "label": "选择事件表格",
        "show_if": "options.type=='apply'",
        "repeat": false,
        "fields": {
          "options.apply.event_table": {
            "type": "select",
            "label": "事件表格",
            "bind": "TABLES",
            "empty": "",
            "required": true,
            "breakLine": true
          },
          "options.apply.event_table_event_date_column": {
            "type": "select",
            "label": "事件日期列",
            "required": true,
            "table": "options.apply.event_table",
            "bind": "COLUMNS"
          },
          "options.apply.event_table_event_name_column": {
            "type": "select",
            "label": "事件名称列",
            "required": true,
            "table": "options.apply.event_table",
            "bind": "COLUMNS"
          },
          "options.apply.event_table_value_column": {
            "type": "select",
            "label": "值列",
            "required": true,
            "table": "options.apply.event_table",
            "bind": "COLUMNS",
            "breakLine": true
          }
        }
      },
      "apply_impact_table_box": {
        "type": "fieldset",
        "label": "选择影响表格",
        "show_if": "options.type=='apply'",
        "repeat": false,
        "fields": {
          "options.apply.impact_table": {
            "type": "select",
            "label": "影响表格",
            "bind": "TABLES",
            "empty": "",
            "required": true,
            "breakLine": true
          },
          "options.apply.on_average": {
            "type": "hidden",
            "val": "true"
          },
          "options.apply.impact_table_event_date_column": {
            "type": "select",
            "label": "事件日期列",
            "required": true,
            "table": "options.apply.impact_table",
            "bind": "COLUMNS"
          },
          "options.apply.impact_table_event_name_column": {
            "type": "select",
            "label": "事件名称列",
            "required": true,
            "table": "options.apply.impact_table",
            "bind": "COLUMNS"
          },
          "options.apply.impact_table_impact_column": {
            "type": "select",
            "label": "影响列",
            "required": true,
            "table": "options.apply.impact_table",
            "bind": "COLUMNS",
            "breakLine": true
          }
        }
      }
    }
  }
}