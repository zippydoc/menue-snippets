{
  "options_box": {
    "type": "fieldset",
    "label": "オプション",
    "repeat": false,
    "fields": {
      "options.provider": {
        "type": "select",
        "label": "支払いプロバイダ",
        "options": {
          "stripe": {
            "label": "Stripe"
          },
          "paypal": {
            "label": "ペイパル
          },
          "payoneer": {
            "label": "Payoneer"
          }
        },
        "val": "stripe",
        "required": true
      },
      "options.type": {
        "type": "select",
        "label": "支払いタイプ",
        "options": {
          "charge": {
            "label": "Charge"
          },
          "transfer": {
            "label": "転送"
          }
        },
        "val": "charge",
        "required": true
      },
      "options.stripe.secret_key": {
        "type": "text",
        "label": "Stripeシークレットキー",
        "show_if": "options.provider=='stripe'",
        "required": true,
        "val": "",
        "width": "100%",
        "breakLine": true
      }
    }
  }
}