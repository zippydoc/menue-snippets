{
  "options": {
    "type": "fieldset",
    "label": "选择选项",
    "repeat": false,
    "fields": {
      "options.type": {
        "type": "hidden",
        "val": "custom"
      },
      "options.custom.table": {
        "type": "fieldset",
        "label": "计划职位",
        "show_if": "options.type=='custom'",
        "repeat": true,
        "fields": {
          "item": {
            "type": "text",
            "label": "项目",
            "val": "",
            "required": true
          },
          "position": {
            "type": "text",
            "label": "位置",
            "val": "",
            "required": true,
            "breakLine": true
          },
          "amount": {
            "type": "number",
            "label": "金额",
            "val": "",
            "required": true
          },
          "initial_date": {
            "type": "date",
            "label": "初始日期",
            "val": "",
            "required": true
          },
          "periodicy": {
            "type": "select",
            "label": "周期",
            "required": true,
            "options": {
              "一次性的": {
                "label": "一次性的"
              },
              "每日": {
                "label": "每日"
              },
              "每周": {
                "label": "每周"
              },
              "每月": {
                "label": "每月"
              },
              "季度": {
                "label": "季度"
              },
              "一年一度": {
                "label": "一年一度"
              }
            },
            "val": "一次性的"
          },
          "growth": {
            "type": "number",
            "label": "Growth in %",
            "show_if": "this.periodicy!='One-Off'",
            "val": "",
            "required": true
          },
          "growth_period": {
            "type": "select",
            "label": "增长时段",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "每周": {
                "label": "每周"
              },
              "每月": {
                "label": "月环比"
              },
              "季度": {
                "label": "季环比"
              },
              "一年一度": {
                "label": "年环比"
              }
            },
            "val": "每周"
          },
          "growth_pattern": {
            "type": "select",
            "label": "增长模式",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "复利": {
                "label": "复利"
              },
              "线性": {
                "label": "线性"
              },
              "跳跃式修复": {
                "label": "跳跃式修复"
              }
            },
            "val": "复利"
          },
          "final_date": {
            "type": "date",
            "label": "最后日期",
            "show_if": "this.periodicy!='One-Off'",
            "val": ""
          },
          "delete": {
            "type": "button",
            "label": "删除",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.end_date": {
        "type": "date",
        "label": "表格结束日期",
        "show_if": "options.type=='process' || options.type=='custom'",
        "val": "",
        "required": true,
        "style": "width: 300px"
      }
    }
  }
}