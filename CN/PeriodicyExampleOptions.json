{
  "options": {
    "type": "fieldset",
    "label": "选择周期选项",
    "repeat": false,
    "fields": {
      "options.type": {
        "type": "hidden",
        "val": "generate"
      },
      "input": {
        "type": "fieldset",
        "label": "选择输入表格",
        "show_if": "options.type=='process'",
        "repeat": false,
        "fields": {
          "input_table": {
            "type": "select",
            "label": "选择表格",
            "bind": "TABLES",
            "empty": "",
            "required": true
          },
          "remove_input_table_after_processing": {
            "type": "hidden",
            "val": "false"
          },
          "is_word": {
            "type": "hidden",
            "val": "false"
          }
        },
        "breakLine": true
      },
      "amount_formatting_frame": {
        "type": "fieldset",
        "label": "金额栏的格式",
        "show_if": "options.type=='generate'",
        "repeat": false,
        "fields": {
          "options.amount.format__category": {
            "type": "select",
            "label": "格式",
            "required": true,
            "options": {
              "standard": {
                "label": "标准"
              },
              "number": {
                "label": "数字"
              },
              "percentage": {
                "label": "百分比"
              },
              "currency": {
                "label": "货币"
              }
            },
            "val": "currency"
          },
          "options.amount.format__rounding": {
            "type": "select",
            "label": "取整",
            "show_if": "options.amount.format__category=='number' || options.amount.format__category=='percentage' || options.amount.format__category=='currency'",
            "required": true,
            "options": {
              "no_rounding": {
                "label": "不取整"
              },
              "0": {
                "label": "0 位数"
              },
              "1": {
                "label": "1 位数"
              },
              "2": {
                "label": "2 位数"
              },
              "3": {
                "label": "3 位数"
              },
              "4": {
                "label": "4 位数"
              },
              "5": {
                "label": "5 位数"
              },
              "6": {
                "label": "6 位数"
              },
              "7": {
                "label": "7 位数"
              },
              "8": {
                "label": "8 位数"
              },
              "9": {
                "label": "9 位数"
              }
            },
            "val": "2"
          },
          "options.amount.format__use_1000_separator": {
            "type": "checkbox",
            "label": "Use 1000 Separator(.)",
            "show_if": "options.amount.format__category=='number' || options.amount.format__category=='percentage' || options.amount.format__category=='currency'",
            "val": "true",
            "isOn": "true",
            "isOff": "false"
          },
          "options.amount.format__currency_symbol": {
            "type": "select",
            "label": "符号",
            "show_if": "options.amount.format__category=='currency'",
            "required": true,
            "options": {
              "dollar": {
                "label": "$"
              },
              "euro": {
                "label": "€"
              },
              "pound": {
                "label": "£"
              }
            },
            "val": "dollar"
          }
        }
      },
      "options.standard_table": {
        "type": "checkbox",
        "label": "标准周期表格",
        "show_if": "options.type=='process'",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "style": "margin-top: 10px",
        "breakLine": true
      },
      "options.initial_date": {
        "type": "select",
        "label": "初始日期",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true
      },
      "options.period": {
        "type": "select",
        "label": "周期性（如每月、每季度）",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true
      },
      "options.final_date": {
        "type": "select",
        "label": "最后日期",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS",
        "breakLine": true
      },
      "options.volume": {
        "type": "select",
        "label": "金额",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS"
      },
      "options.growth": {
        "type": "select",
        "label": "增长",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS"
      },
      "options.growth_period": {
        "type": "select",
        "label": "增长时段",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "options": {
          "selected_period": {
            "label": "等于周期"
          },
          "week_on_week": {
            "label": "周环比"
          },
          "month_on_month": {
            "label": "月环比"
          },
          "quarter_on_quarter": {
            "label": "季环比"
          },
          "year_on_year": {
            "label": "年环比"
          },
          "column": {
            "label": "选择列"
          }
        },
        "val": "selected_period"
      },
      "options.growth_period_column": {
        "type": "select",
        "label": "增长时段列",
        "show_if": "options.type=='process' && options.standard_table=='false' && options.growth_period=='column'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.use_growth_pattern_column": {
        "type": "checkbox",
        "label": "使用增长模式",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "options.growth_pattern_column": {
        "type": "select",
        "label": "增长模式",
        "show_if": "options.type=='process' && options.standard_table=='false' && options.use_growth_pattern_column=='true'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.custom.table": {
        "type": "fieldset",
        "label": "计划职位",
        "show_if": "options.type=='custom'",
        "repeat": true,
        "fields": {
          "item": {
            "type": "text",
            "label": "项目",
            "val": "",
            "required": true
          },
          "position": {
            "type": "text",
            "label": "位置",
            "val": "",
            "required": true,
            "breakLine": true
          },
          "amount": {
            "type": "number",
            "label": "金额",
            "val": "",
            "required": true
          },
          "amount_format__category": {
            "type": "select",
            "label": "金额格式",
            "show_if" : "$index == 0",
            "required": true,
            "options": {
              "standard": {
                "label": "标准"
              },
              "number": {
                "label": "数字"
              },
              "percentage": {
                "label": "百分比"
              },
              "text": {
                "label": "文本"
              },
              "date": {
                "label": "日期"
              },
              "currency": {
                "label": "货币"
              }
            },
            "val": "number"
          },
          "amount_format__rounding": {
            "type": "select",
            "label": "取整",
            "show_if": "$index == 0 && (this.amount_format__category=='number' || this.amount_format__category=='percentage' || this.amount_format__category=='currency')",
            "required": true,
            "options": {
              "no_rounding": {
                "label": "不取整"
              },
              "0": {
                "label": "0 位数"
              },
              "1": {
                "label": "1 位数"
              },
              "2": {
                "label": "2 位数"
              },
              "3": {
                "label": "3 位数"
              },
              "4": {
                "label": "4 位数"
              },
              "5": {
                "label": "5 位数"
              },
              "6": {
                "label": "6 位数"
              },
              "7": {
                "label": "7 位数"
              },
              "8": {
                "label": "8 位数"
              },
              "9": {
                "label": "9 位数"
              }
            },
            "val": "2"
          },
          "amount_format__use_1000_separator": {
            "type": "checkbox",
            "label": "Use 1000 Separator(.)",
            "show_if": "$index == 0 && (this.amount_format__category=='number' || this.amount_format__category=='percentage' || this.amount_format__category=='currency')",
            "val": "true",
            "isOn": "true",
            "isOff": "false"
          },
          "amount_format__currency_symbol": {
            "type": "select",
            "label": "符号",
            "show_if": "$index == 0 && (this.amount_format__category=='currency')",
            "required": true,
            "options": {
              "dollar": {
                "label": "$"
              },
              "euro": {
                "label": "€"
              },
              "pound": {
                "label": "£"
              }
            },
            "val": "dollar"
          },
          "amount_format__date_format": {
            "type": "select",
            "label": "类型",
            "show_if": "$index == 0 && (this.amount_format__category=='date')",
            "required": true,
            "options": {
              "mm/dd/yyyy": {
                "label": "3/14/2012"
              },
              "D, M dd, Y": {
                "label": "2012年3月14日，星期三"
              },
              "yyyy-mm-dd": {
                "label": "2012-03-14"
              }
            },
            "val": "mm/dd/yyyy",
            "breakLine": true
          },
          "initial_date": {
            "type": "date",
            "label": "初始日期",
            "val": "",
            "required": true
          },
          "initial_date_format__date_format": {
            "type": "select",
            "label": "初始日期格式",
            "show_if": "$index == 0",
            "required": true,
            "options": {
              "mm/dd/yyyy": {
                "label": "3/14/2012"
              },
              "D, M dd, Y": {
                "label": "2012年3月14日，星期三"
              },
              "yyyy-mm-dd": {
                "label": "2012-03-14"
              }
            },
            "val": "mm/dd/yyyy",
            "breakLine": true
          },
          "periodicy": {
            "type": "select",
            "label": "周期",
            "required": true,
            "options": {
              "一次性的": {
                "label": "一次性的"
              },
              "每日": {
                "label": "每日"
              },
              "工作-日": {
                "label": "工作-日"
              },
              "每周": {
                "label": "每周"
              },
              "每月": {
                "label": "每月"
              },
              "季度": {
                "label": "季度"
              },
              "一年一度": {
                "label": "一年一度"
              }
            },
            "val": "一次性的"
          },
          "growth": {
            "type": "number",
            "label": "增长",
            "show_if": "this.periodicy!='One-Off'",
            "val": "",
            "required": true
          },
          "growth_period": {
            "type": "select",
            "label": "增长时段",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "每周": {
                "label": "每周"
              },
              "每月": {
                "label": "月环比"
              },
              "季度": {
                "label": "季环比"
              },
              "一年一度": {
                "label": "年环比"
              }
            },
            "val": "每周"
          },
          "growth_pattern": {
            "type": "select",
            "label": "增长模式",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "复利": {
                "label": "复利"
              },
              "线性": {
                "label": "线性"
              },
              "跳跃式修复": {
                "label": "跳跃式修复"
              }
            },
            "val": "复利"
          },
          "final_date": {
            "type": "date",
            "label": "最后日期",
            "show_if": "this.periodicy!='One-Off'",
            "val": ""
          },
          "delete": {
            "type": "button",
            "label": "删除",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.end_date": {
        "type": "date",
        "label": "表格结束日期",
        "show_if": "options.type=='process' || options.type=='custom'",
        "val": "",
        "required": true,
        "style": "width: 300px"
      }
    }
  }
}