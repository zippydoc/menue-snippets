{
  "options": {
    "type": "fieldset",
    "label": "选择周期选项",
    "repeat": false,
    "fields": {
      "options.type": {
        "type": "select",
        "label": "类型",
        "options": {
          "generate": {
            "label": "生成周期示例"
          },
          "process": {
            "label": "处理周期表格"
          }
        },
        "val": "generate",
        "breakLine": true
      },
      "amount_formatting_frame": {
        "type": "fieldset",
        "label": "Amount Column Formatting",
        "show_if": "options.type==''generate''",
        "repeat": false,
        "fields": {
          "options.amount.format__category": {
            "type": "select",
            "label": "格式",
            "required": true,
            "options": {
              "standard": {
                "label": "标准"
              },
              "number": {
                "label": "数字"
              },
              "percentage": {
                "label": "百分比"
              },
              "currency": {
                "label": "货币"
              }
            },
            "val": "currency"
          },
          "options.amount.format__rounding": {
            "type": "select",
            "label": "取整",
            "show_if": "options.amount.format__category==''number'' || options.amount.format__category==''percentage'' || options.amount.format__category==''currency''",
            "required": true,
            "options": {
              "no_rounding": {
                "label": "不取整"
              },
              "0": {
                "label": "0 位数"
              },
              "1": {
                "label": "1 位数"
              },
              "2": {
                "label": "2 位数"
              },
              "3": {
                "label": "3 位数"
              },
              "4": {
                "label": "4 位数"
              },
              "5": {
                "label": "5 位数"
              },
              "6": {
                "label": "6 位数"
              },
              "7": {
                "label": "7 位数"
              },
              "8": {
                "label": "8 位数"
              },
              "9": {
                "label": "9 位数"
              }
            },
            "val": "2"
          },
          "options.amount.format__use_1000_separator": {
            "type": "checkbox",
            "label": "使用 1000 分隔符（.）",
            "show_if": "options.amount.format__category==''number'' || options.amount.format__category==''percentage'' || options.amount.format__category==''currency''",
            "val": "true",
            "isOn": "true",
            "isOff": "false"
          },
          "options.amount.format__currency_symbol": {
            "type": "select",
            "label": "符号",
            "show_if": "options.amount.format__category==''currency''",
            "required": true,
            "options": {
              "dollar": {
                "label": "$"
              },
              "euro": {
                "label": "€"
              },
              "pound": {
                "label": "£"
              }
            },
            "val": "dollar"
          }
        }
      },
      "options.standard_table": {
        "type": "checkbox",
        "label": "标准周期表格",
        "show_if": "options.type==''process''",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.initial_date": {
        "type": "select",
        "label": "初始日期",
        "show_if": "options.type==''process'' && options.standard_table==''false''",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true
      },
      "options.period": {
        "type": "select",
        "label": "Periodicy (e.g. Monthly, Quarterly)",
        "show_if": "options.type==''process'' && options.standard_table==''false''",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true
      },
      "options.final_date": {
        "type": "select",
        "label": "最后日期",
        "show_if": "options.type==''process'' && options.standard_table==''false''",
        "table": "input_table",
        "bind": "COLUMNS",
        "breakLine": true
      },
      "options.volume": {
        "type": "select",
        "label": "金额",
        "show_if": "options.type==''process'' && options.standard_table==''false''",
        "table": "input_table",
        "bind": "COLUMNS"
      },
      "options.growth": {
        "type": "select",
        "label": "增长",
        "show_if": "options.type==''process'' && options.standard_table==''false''",
        "table": "input_table",
        "bind": "COLUMNS"
      },
      "options.growth_period": {
        "type": "select",
        "label": "增长时段",
        "show_if": "options.type==''process'' && options.standard_table==''false''",
        "options": {
          "selected_period": {
            "label": "等于周期"
          },
          "week_on_week": {
            "label": "周环比"
          },
          "month_on_month": {
            "label": "月环比"
          },
          "quarter_on_quarter": {
            "label": "季环比"
          },
          "year_on_year": {
            "label": "年环比"
          },
          "column": {
            "label": "选择列"
          }
        },
        "val": "selected_period"
      },
      "options.growth_period_column": {
        "type": "select",
        "label": "增长时段列",
        "show_if": "options.type==''process'' && options.standard_table==''false'' && options.growth_period==''column''",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.use_growth_pattern_column": {
        "type": "checkbox",
        "label": "使用增长模式",
        "show_if": "options.type==''process'' && options.standard_table==''false''",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "options.growth_pattern_column": {
        "type": "select",
        "label": "增长模式",
        "show_if": "options.type==''process'' && options.standard_table==''false'' && options.use_growth_pattern_column==''true''",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.end_date": {
        "type": "date",
        "label": "表格结束日期",
        "show_if": "options.type==''process''",
        "val": "",
        "required": true,
        "style": "width: 300px"
      }
    }
  }
}