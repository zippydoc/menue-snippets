{
  "input": {
    "type": "fieldset",
    "label": "选择查询表",
    "repeat": false,
    "fields": {
      "tables": {
        "type": "fieldset",
        "label": "选择表格",
        "repeat": true,
        "fields": {
          "table_id": {
            "type": "select",
            "label": "查找表格",
            "bind": "TABLES",
            "required": true
          },
          "lookup_header_column": {
            "type": "select",
            "label": "标题列",
            "table": "this.table_id",
            "bind": "COLUMNS",
            "required": true
          },
          "lookup_value_column": {
            "type": "select",
            "label": "值列",
            "table": "this.table_id",
            "bind": "COLUMNS",
            "required": true
          },
          "lookup_mapping_column": {
            "type": "select",
            "label": "映射列",
            "table": "this.table_id",
            "bind": "COLUMNS"
          },
          "delete": {
            "type": "button",
            "label": "删除",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.treatment": {
        "type": "select",
        "label": "多次出现处理方式",
        "required": true,
        "options": {
          "sum": {
            "label": "总和"
          },
          "min": {
            "label": "最小"
          },
          "max": {
            "label": "最大"
          },
          "shortest": {
            "label": "最短"
          },
          "longest": {
            "label": "最长"
          },
          "first": {
            "label": "首行"
          },
          "last": {
            "label": "后"
          },
          "concatenate": {
            "label": "连接"
          }
        },
        "val": "sum",
        "style": "min-width: 200px"
      },
      "options.treatment_delimiter": {
        "type": "text",
        "label": "分隔符",
        "show_if": "options.treatment=='concatenate'",
        "required": true,
        "minLength": 1,
        "maxLength": 255,
        "val": ";",
        "breakLine": true
      }
    }
  }
}