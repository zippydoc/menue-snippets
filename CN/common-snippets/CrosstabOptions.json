{
  "options": {
    "type": "fieldset",
    "label": "选择选项",
    "repeat": false,
    "fields": {
      "transpose_type": {
        "type": "hidden",
        "val": "crosstab"
      },
      "mirror_matrix.convert_header_to_label": {
        "type": "checkbox",
        "label": "将标题转换为标签",
        "show_if": "transpose_type=='mirror_matrix'",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "column_name_to_label.columns_to_label": {
        "type": "select",
        "label": "选择列以转换为标签",
        "show_if": "transpose_type=='column_name_to_label'",
        "table": "table_id",
        "multiple": true,
        "bind": "COLUMNS",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "column_name_to_label.label_column_name": {
        "type": "text",
        "label": "标签列名",
        "show_if": "transpose_type=='column_name_to_label'",
        "required": true,
        "val": "Label",
        "width": "100%",
        "breakLine": true
      },
      "column_name_to_label.value_column_name": {
        "type": "text",
        "label": "值列名",
        "show_if": "transpose_type=='column_name_to_label'",
        "required": true,
        "val": "Value",
        "width": "100%",
        "breakLine": true
      },
      "crosstab.group_data_by_these_values": {
        "type": "select",
        "label": "根据这些值对数据进行分组",
        "show_if": "transpose_type=='crosstab'",
        "table": "table_id",
        "multiple": true,
        "bind": "COLUMNS",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "crosstab.change_column_headers": {
        "type": "select",
        "label": "更改列标题",
        "show_if": "transpose_type=='crosstab'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "crosstab.values_for_new_columns": {
        "type": "select",
        "label": "新列值",
        "show_if": "transpose_type=='crosstab'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "crosstab.method_for_aggregating_values": {
        "type": "select",
        "label": "聚合值方法",
        "show_if": "transpose_type=='crosstab'",
        "options": {
          "Concatenate": {
            "label": "连接"
          },
          "First": {
            "label": "首行"
          },
          "Last": {
            "label": "后"
          },
          "Sum": {
            "label": "总和"
          },
          "Average": {
            "label": "平均"
          },
          "Count": {
            "label": "计数"
          },
          "User Defined": {
            "label": "已定义用户"
          }
        },
        "val": "Concatenate",
        "required": true
      },
      "crosstab.user_defined_str": {
        "type": "text",
        "label": "用户定义值",
        "show_if": "transpose_type=='crosstab' && crosstab.method_for_aggregating_values=='User Defined'",
        "val": "x",
        "trim": "false",
        "breakLine": true
      },
      "crosstab.separator": {
        "type": "text",
        "label": "分隔符",
        "show_if": "transpose_type=='crosstab' && method_for_aggregating_values=='Concatenate'",
        "val": ",",
        "trim": "false",
        "required": true,
        "breakLine": true
      }
    }
  }
}