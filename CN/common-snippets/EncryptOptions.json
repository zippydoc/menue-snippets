{
  "options": {
    "type": "fieldset",
    "label": "选择选项",
    "repeat": false,
    "fields": {
      "task_type": {
        "type": "select",
        "label": "任务类型",
        "required": true,
        "options": {
          "encrypt": {
            "label": "加密（安全）"
          },
          "decrypt": {
            "label": "解密（安全）"
          },
          "encrypt_simple": {
            "label": "加密（简单）"
          },
          "decrypt_simple": {
            "label": "解密（简单）"
          },
          "mask": {
            "label": "遮蔽"
          }
        },
        "val": "encrypt"
      },
      "mask_type": {
        "type": "select",
        "label": "遮蔽类型",
        "show_if": "task_type == 'mask'",
        "required": true,
        "options": {
          "trailing": {
            "label": "尾随 N 字符"
          },
          "leading": {
            "label": "前导 N 字符"
          },
          "numbers": {
            "label": "数字"
          },
          "alphabets": {
            "label": "字符"
          },
          "regex": {
            "label": "正则表达式"
          }
        },
        "val": "trailing"
      },
      "password": {
        "type": "password",
        "label": "密码",
        "show_if": "task_type != 'mask'",
        "required": true,
        "minLength": 1,
        "maxLength": 31,
        "val": ""
      },
      "varn": {
        "type": "number",
        "label": "N",
        "show_if": "task_type == 'mask' && (mask_type == 'trailing' || mask_type == 'leading')",
        "required": true,
        "val": "1"
      },
      "regexp": {
        "type": "text",
        "label": "表达式",
        "show_if": "task_type == 'mask' && (mask_type == 'regex')",
        "required": true,
        "val": "",
        "placeholder": "[a-fA-F0-9]"
      },
      "replace": {
        "type": "text",
        "label": "遮蔽字符串",
        "show_if": "task_type == 'mask' && (mask_type == 'regex')",
        "required": true,
        "val": "*",
        "breakLine": true
      }
    }
  }
}