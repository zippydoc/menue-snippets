{
  "options_box": {
    "type": "fieldset",
    "label": "Flexmonster报告选项",
    "show_if": "options.configure_manual=='true'",
    "repeat": false,
    "fields": {
      "options.type": {
        "type": "hidden",
        "val": "stacked_chart"
      },
      "options.chart_type": {
        "type": "hidden",
        "val": "stacked_column"
      },
      "options.add_column_cols": {
        "type": "checkbox",
        "label": "按类别",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.column_cols": {
        "type": "fieldset",
        "label": "Category column(s)",
        "show_if": "options.add_column_cols=='true'",
        "repeat": true,
        "fields": {
          "column_col": {
            "type": "select",
            "label": "类别栏",
            "table": "table_id",
            "bind": "COLUMNS",
            "required": true
          },
          "is_date": {
            "type": "checkbox",
            "label": "Is Date",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "delete": {
            "type": "button",
            "label": "删除",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.row_cols": {
        "type": "fieldset",
        "label": "Series column(s)",
        "repeat": true,
        "fields": {
          "row_col": {
            "type": "select",
            "label": "Series column",
            "table": "table_id",
            "bind": "COLUMNS",
            "required": true
          },
          "is_date": {
            "type": "checkbox",
            "label": "Is Date",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "delete": {
            "type": "button",
            "label": "删除",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.measure_cols": {
        "type": "fieldset",
        "label": "Value column(s)",
        "repeat": true,
        "fields": {
          "measure_col": {
            "type": "select",
            "label": "值列",
            "table": "table_id",
            "bind": "COLUMNS",
            "required": true
          },
          "aggregation": {
            "type": "select",
            "label": "聚合功能",
            "options": {
              "sum": {
                "label": "总和"
              },
              "count": {
                "label": "计数"
              },
              "distinctcount": {
                "label": "区别对待的计数"
              },
              "average": {
                "label": "平均"
              },
              "median": {
                "label": "中位数"
              },
              "product": {
                "label": "产品"
              },
              "min": {
                "label": "最小"
              },
              "max": {
                "label": "最大"
              },
              "stdevp": {
                "label": "Population Standard Deviation"
              },
              "stdevs": {
                "label": "Sample Standard Deviation"
              },
              "percent": {
                "label": "Percent"
              }
            },
            "val": "sum",
            "required": true,
            "breakLine": true
          },
          "delete": {
            "type": "button",
            "label": "删除",
            "function": "DELETE_ROW"
          }
        }
      }
    }
  }
}