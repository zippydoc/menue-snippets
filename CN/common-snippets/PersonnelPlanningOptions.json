{
  "options": {
    "type": "fieldset",
    "label": "选择选项",
    "repeat": false,
    "fields": {
      "task_label": {
        "type": "hidden",
        "val": "personnel_planning"
      },
      "options.type": {
        "type": "hidden",
        "val": "custom"
      },
      "options.custom.table": {
        "type": "fieldset",
        "label": "计划职位",
        "repeat": true,
        "fields": {
          "item": {
            "type": "text",
            "label": "名称",
            "val": "",
            "required": true
          },
          "position": {
            "type": "select",
            "label": "位置",
            "options": {
              "fix salary": {
                "label": "固定工资"
              },
              "bonus": {
                "label": "奖金"
              },
              "other compensation": {
                "label": "其他报酬"
              }
            },
            "val": "fix salary",
            "required": true
          },
          "amount": {
            "type": "number",
            "label": "金额",
            "val": "",
            "required": true
          },
          "initial_date": {
            "type": "date",
            "label": "初始日期",
            "val": "",
            "required": true
          },
          "periodicy": {
            "type": "select",
            "label": "周期",
            "required": true,
            "options": {
              "One-Off": {
                "label": "一次性的"
              },
              "Daily": {
                "label": "每日"
              },
              "Work-Daily": {
                "label": "工作-日"
              },
              "Weekly": {
                "label": "每周"
              },
              "Monthly": {
                "label": "每月"
              },
              "Quarterly": {
                "label": "季度"
              },
              "Yearly": {
                "label": "一年一度"
              }
            },
            "val": "One-Off"
          },
          "growth": {
            "type": "number",
            "label": "增长",
            "show_if": "this.periodicy!='One-Off'",
            "val": "",
            "required": true
          },
          "growth_period": {
            "type": "select",
            "label": "增长时段",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Weekly": {
                "label": "每周"
              },
              "Monthly": {
                "label": "月环比"
              },
              "Quarterly": {
                "label": "季环比"
              },
              "Yearly": {
                "label": "年环比"
              }
            },
            "val": "Weekly"
          },
          "growth_pattern": {
            "type": "select",
            "label": "增长模式",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Compounding": {
                "label": "复利"
              },
              "Linear": {
                "label": "线性"
              },
              "Jump-Fix": {
                "label": "跳跃式修复"
              }
            },
            "val": "Compounding"
          },
          "final_date": {
            "type": "date",
            "label": "最后日期",
            "show_if": "this.periodicy!='One-Off'",
            "val": ""
          },
          "delete": {
            "type": "button",
            "label": "删除",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.end_date": {
        "type": "date",
        "label": "表格结束日期",
        "show_if": "options.type=='process' || options.type=='custom'",
        "val": "",
        "required": true,
        "style": "width: 300px"
      }
    }
  }
}