{
  "options": {
    "type": "fieldset",
    "label": "选择选项",
    "repeat": false,
    "fields": {
      "options.split_method": {
        "type": "select",
        "label": "拆分方式",
        "required": true,
        "options": {
          "standard": {
            "label": "标准"
          },
          "regex": {
            "label": "正则表达式"
          }
        },
        "val": "standard"
      },
      "options.split_type": {
        "type": "select",
        "label": "拆分类型",
        "required": true,
        "options": {
          "split_to_columns": {
            "label": "拆分为列"
          },
          "split_to_rows": {
            "label": "拆分为行"
          }
        },
        "val": "split_to_columns"
      },
      "options.standard_delimiter": {
        "type": "select",
        "label": "拆分分隔符",
        "show_if": "options.split_method=='standard'",
        "required": true,
        "options": {
          "tabs": {
            "label": "标签页"
          },
          "space": {
            "label": "空格"
          },
          "whitespace": {
            "label": "空格"
          },
          "linebreak": {
            "label": "换行"
          },
          "punctuation": {
            "label": "标点"
          },
          "punctuation_whitespace": {
            "label": "标点和空格"
          },
          "custom": {
            "label": "自定义"
          }
        },
        "val": "punctuation"
      },
      "options.delimiter": {
        "type": "text",
        "label": "拆分分隔符",
        "show_if": "options.split_method=='standard' && options.standard_delimiter=='custom'",
        "val": ",",
        "trim": "false",
        "required": true,
        "breakLine": true
      },
      "format_frame": {
        "type": "fieldset",
        "label": "拆分解析格式",
        "show_if": "options.split_method=='regex'",
        "repeat": false,
        "fields": {
          "options.format_to_convert.regular_expression": {
            "type": "text",
            "label": "Parse Regular Expression ( ex: ([a-z]+)\\s([a-z]+) )",
            "val": "[a-z]+\\s[a-z]+",
            "required": true,
            "width": "100%",
            "trim": "false",
            "breakLine": true
          },
          "options.format_to_convert.case_insensitive": {
            "type": "checkbox",
            "label": "不区分大小写",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          }
        }
      },
      "options.n_multi_n": {
        "type": "checkbox",
        "label": "N x N split if multiple columns are selected",
        "show_if": "options.split_type=='split_to_rows'",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      }
    }
  }
}