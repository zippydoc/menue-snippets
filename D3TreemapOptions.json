{
  "options_box": {
    "type": "fieldset",
    "style": "box-shadow: 0 0 15px 1px rgba(0, 0, 0, 0.4); border-radius: 3px; margin-right:5px",
    "label": "",
    "show_if": "options.configure_manual=='true'",
    "repeat": false,
    "fields": {
      "options.chart_type": {
        "type": "hidden",
        "val": "treemap"
      },
      "options.group_cols": {
        "type": "fieldset",
        "label": "Select Group Column(s) in Order",
        "repeat": true,
        "fields": {
          "group_col": {
            "type": "select",
            "label": "Group column",
            "table": "table_id",
            "bind": "COLUMNS",
            "required": true
          },
          "delete": {
            "type": "button",
            "label": "Delete",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.value_col": {
        "type": "select",
        "label": "Select Value Column",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true
      }
    }
  }
}
