{
  "options": {
    "type": "fieldset",
    "label": "Optionen auswählen",
    "repeat": false,
    "fields": {
      "options.position": {
        "type": "select",
        "label": "Position wählen",
        "required": true,
        "options": {
          "add_rows_below_selected_row": {
            "label": "Zeilen unter ausgewählten Zeilen hinzufügen"
          },
          "add_rows_above_selected_row": {
            "label": "Zeilen oberhalb ausgewählter Zeilen hinzufügen"
          },
          "add_rows_at_table_end": {
            "label": "Zeilen am Tabellenende hinzufügen"
          },
          "add_single_row_at_table_end": {
            "label": "Einzelne Zeile am Tabellenende hinzufügen"
          },
          "add_row_after_each_group": {
            "label": "Zeile nach jeder Gruppe hinzufügen"
          }
        },
        "val": "add_rows_below_selected_row",
        "breakLine": true
      },
      "options.group_column": {
        "type": "select",
        "label": "Gruppenspalte",
        "show_if": "options.position=='add_row_after_each_group'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.use_filter": {
        "type": "select",
        "label": "Typ auswählen",
        "show_if": "options.position=='add_rows_below_selected_row' || options.position=='add_rows_above_selected_row' || options.position=='add_rows_at_table_end'",
        "required": true,
        "options": {
          "false": {
            "label": "Für jede Tabellenzeile eine Zeile hinzufügen"
          },
          "true": {
            "label": "Eine Zeile für jede angegebene Zeile hinzufügen"
          }
        },
        "val": "false",
        "breakLine": true
      },
      "filter_box": {
        "type": "fieldset",
        "label": "Filter-Optionen",
        "show_if": "options.use_filter=='true' && (options.position=='add_rows_below_selected_row' || options.position=='add_rows_above_selected_row' || options.position=='add_rows_at_table_end')",
        "repeat": false,
        "fields": {
          "options.filter": {
            "type": "fieldset",
            "label": "Filterbedingungen hinzufügen",
            "repeat": true,
            "fields": {
              "initial_op": {
                "type": "select",
                "label": "Logik-Operator auswählen",
                "required": true,
                "show_if": "$index == 0",
                "options": {
                  "if": {
                    "label": "IF"
                  },
                  "if_not": {
                    "label": "WENN NICHT"
                  }
                },
                "val": "if"
              },
              "op": {
                "type": "select",
                "label": "Logik-Operator auswählen",
                "required": true,
                "show_if": "$index > 0",
                "options": {
                  "and": {
                    "label": "UND"
                  },
                  "or": {
                    "label": "OR"
                  },
                  "and_not": {
                    "label": "UND NICHT"
                  },
                  "or_not": {
                    "label": "ODER NICHT"
                  }
                },
                "val": "and"
              },
              "column": {
                "type": "select",
                "label": "Spalte auswählen",
                "table": "table_id",
                "bind": "COLUMNS",
                "required": true
              },
              "condition": {
                "type": "select",
                "label": "Bediener auswählen",
                "required": true,
                "options": {
                  "CONTAINS": {
                    "label": "ENTHÄLT"
                  },
                  "CONTAINED IN STRING": {
                    "label": "ENTHALTEN IN"
                  },
                  "STARTS WITH": {
                    "label": "STARTET MIT"
                  },
                  "ENDS WITH": {
                    "label": "ENDET MIT"
                  },
                  "=": {
                    "label": "EQUAL"
                  },
                  ">": {
                    "label": "GRÖSSER ALS"
                  },
                  ">=": {
                    "label": "GRÖSSER ODER GLEICH"
                  },
                  "<": {
                    "label": "KLEINER ALS"
                  },
                  "<=": {
                    "label": "KLEINER ODER GLEICH"
                  },
                  "EMPTY": {
                    "label": "IST LEER"
                  },
                  "BLANK": {
                    "label": "IST BLANK"
                  },
                  "IS NULL": {
                    "label": "IS NULL"
                  },
                  "IS TRUE": {
                    "label": "IST WAHR"
                  },
                  "IS FALSE": {
                    "label": "IST FALSCH"
                  },
                  "REGEX MATCH": {
                    "label": "REGEX-MATCH"
                  },
                  "CONTAINED IN TABLE": {
                    "label": "IN TABELLE"
                  },
                  "IN REGEX TABLE": {
                    "label": "IN REGEX-TABELLE"
                  },
                  "DATE": {
                    "label": "DATUM"
                  }
                },
                "val": "CONTAINS"
              },
              "date_condition": {
                "type": "select",
                "label": "Datumsoperator auswählen",
                "required": true,
                "show_if": "this.condition == 'DATE'",
                "options": {
                  "<": {
                    "label": "PRIOR"
                  },
                  "<=": {
                    "label": "PRIOR ODER GLEICH"
                  },
                  "=": {
                    "label": "EQUAL"
                  },
                  ">": {
                    "label": "NACH"
                  },
                  ">=": {
                    "label": "NACHHER ODER GLEICH"
                  }
                },
                "val": "="
              },
              "compare_with": {
                "type": "select",
                "label": "Compare with",
                "required": true,
                "show_if": "this.condition=='CONTAINS' || this.condition=='CONTAINED IN STRING' || this.condition=='STARTS WITH' || this.condition=='ENDS WITH' || this.condition=='=' || this.condition=='>' || this.condition=='>=' || this.condition=='<' || this.condition=='<='",
                "options": {
                  "custom_value": {
                    "label": "Custom value"
                  },
                  "column_value": {
                    "label": "Column value"
                  }
                },
                "val": "custom_value"
              },
              "self_compare_column": {
                "type": "select",
                "label": "Select Compare Column",
                "table": "table_id",
                "bind": "COLUMNS",
                "show_if": "this.compare_with=='column_value' && (this.condition=='CONTAINS' || this.condition=='CONTAINED IN STRING' || this.condition=='STARTS WITH' || this.condition=='ENDS WITH' || this.condition=='=' || this.condition=='>' || this.condition=='>=' || this.condition=='<' || this.condition=='<=')",
                "required": true
              },
              "date_value": {
                "type": "date",
                "label": "Datum auswählen",
                "show_if": "this.condition=='DATE'",
                "val": "",
                "required": true
              },
              "value": {
                "type": "text",
                "label": "Eingangswert",
                "show_if": "this.compare_with=='custom_value' && this.condition != 'DATE' && this.condition != 'EMPTY' && this.condition != 'NOT EMPTY' && this.condition != 'BLANK' && this.condition != 'NOT BLANK' && this.condition != 'IS NULL' && this.condition != 'IS NOT NULL' && this.condition != 'IS TRUE' && this.condition != 'IS FALSE' && this.condition != 'CONTAINED IN TABLE' && this.condition != 'NOT CONTAINED IN TABLE' && this.condition != 'IN REGEX TABLE' && this.condition != 'NOT IN REGEX TABLE'",
                "val": "",
                "required": true
              },
              "case_sensitive": {
                "type": "select",
                "label": "Wählen Sie Case Sensitive",
                "required": true,
                "show_if": "this.condition == 'CONTAINS' || this.condition == 'CONTAINED IN STRING' || this.condition == '=' || this.condition == 'STARTS WITH' || this.condition == 'ENDS WITH' || this.condition == 'REGEX MATCH' || this.condition == 'NOT REGEX MATCH' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "options": {
                  "yes": {
                    "label": "Gehäuse empfindlich"
                  },
                  "no": {
                    "label": "Groß-/Kleinschreibung nicht beachten"
                  }
                },
                "val": "yes"
              },
              "compare_table": {
                "type": "select",
                "label": "Tabelle auswählen",
                "bind": "TABLES",
                "empty": "",
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "required": true
              },
              "compare_column": {
                "type": "select",
                "label": "Spalte auswählen",
                "table": "this.compare_table",
                "bind": "COLUMNS",
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "required": true
              },
              "delete": {
                "type": "button",
                "label": "Lösche",
                "function": "DELETE_ROW"
              }
            }
          },
          "options.apply_to_record": {
            "type": "checkbox",
            "label": "Auf den Datensatz anwenden",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "style": "margin-top: 10px",
            "breakLine": true
          },
          "apply_to_group_box": {
            "type": "fieldset",
            "label": "Anwenden auf Gruppe",
            "show_if": "options.apply_to_record=='false'",
            "repeat": false,
            "fields": {
              "options.apply_to_group_columns": {
                "type": "select",
                "label": "Gruppenspalten auswählen",
                "required": true,
                "width": "100%",
                "table": "table_id",
                "multiple": true,
                "bind": "COLUMNS",
                "breakLine": true
              }
            }
          }
        }
      },
      "options.target_cells": {
        "type": "fieldset",
        "label": "Hinzugefügte Zeile(n) definieren",
        "repeat": true,
        "fields": {
          "column": {
            "type": "select",
            "label": "Spalte auswählen",
            "table": "table_id",
            "bind": "COLUMNS",
            "required": true
          },
          "formula_type": {
            "type": "select",
            "label": "Formel Typ",
            "required": true,
            "options": {
              "copy_selected": {
                "label": "Ausgewählte kopieren"
              },
              "static_value": {
                "label": "Statischer Wert"
              },
              "numeric_formula": {
                "label": "Numerische Formel"
              },
              "text_formula": {
                "label": "Text Formel"
              }
            },
            "val": "copy_selected"
          },
          "static_value": {
            "type": "text",
            "label": "Wert",
            "show_if": "this.formula_type=='static_value'",
            "val": ""
          },
          "numeric_formula": {
            "type": "text",
            "label": "Formula, e.g. [Column1] + 2 * ([Row-1:Column3] - [Column1])",
            "show_if": "this.formula_type=='numeric_formula'",
            "val": "",
            "style": "width: 100%"
          },
          "rounding": {
            "type": "select",
            "label": "Abrunden",
            "show_if": "this.formula_type=='numeric_formula'",
            "required": true,
            "options": {
              "no_rounding": {
                "label": "Keine Rundung"
              },
              "0": {
                "label": "0 Ziffern"
              },
              "1": {
                "label": "1 Ziffern"
              },
              "2": {
                "label": "2 Ziffern"
              },
              "3": {
                "label": "3 Ziffern"
              },
              "4": {
                "label": "4 Ziffern"
              },
              "5": {
                "label": "5 Ziffern"
              },
              "6": {
                "label": "6 Ziffern"
              },
              "7": {
                "label": "7 Ziffern"
              },
              "8": {
                "label": "8 Ziffern"
              },
              "9": {
                "label": "9 Ziffern"
              }
            },
            "val": "no_rounding"
          },
          "text_formula": {
            "type": "text",
            "label": "Formula, e.g. [firstName] + ' ' + [lastName] + ' ' + [Row-1:Column3]",
            "show_if": "this.formula_type=='text_formula'",
            "val": "",
            "style": "width: 100%"
          },
          "use_multi_row": {
            "type": "checkbox",
            "label": "Mehrreihige Optionen",
            "show_if": "options.position!='add_row_after_each_group' && (this.formula_type=='numeric_formula' || this.formula_type=='text_formula')",
            "val": "false",
            "isOn": "true",
            "isOff": "false"
          },
          "if_row_not_exist": {
            "type": "select",
            "label": "Wenn verwiesene Zeile nicht vorhanden",
            "show_if": "options.position!='add_row_after_each_group' && this.use_multi_row=='true' && (this.formula_type=='numeric_formula' || this.formula_type=='text_formula')",
            "required": true,
            "options": {
              "empty": {
                "label": "NULL oder Leer oder 0"
              },
              "closest": {
                "label": "Engster Zeilenwert"
              }
            },
            "val": "empty",
            "breakLine": true
          },
          "delete": {
            "type": "button",
            "label": "Lösche",
            "function": "DELETE_ROW"
          }
        },
        "breakLine": true
      },
      "options.set_date_column": {
        "type": "checkbox",
        "label": "Zeitverschiebung auf eine ausgewählte Datumsspalte anwenden",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "style": "margin-top: 20px",
        "breakLine": true
      },
      "options.date_column": {
        "type": "select",
        "label": "Datumsspalte auswählen",
        "show_if": "options.set_date_column=='true'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true
      },
      "options.period_shift.number": {
        "type": "text",
        "label": "Periodenverschiebung",
        "show_if": "options.set_date_column=='true'",
        "required": true,
        "val": "0"
      },
      "options.period_shift.period": {
        "type": "select",
        "label": "Zeitraum auswählen",
        "show_if": "options.set_date_column=='true'",
        "options": {
          "day": {
            "label": "Tage"
          },
          "week": {
            "label": "Wochen"
          },
          "month": {
            "label": "Monate"
          },
          "year": {
            "label": "Jahre"
          }
        },
        "val": "month"
      }
    }
  }
}