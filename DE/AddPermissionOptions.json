{
  "options": {
    "type": "fieldset",
    "label": "Optionen auswählen",
    "repeat": false,
    "fields": {
      "options.table_permission.set_or_delete": {
        "type": "select",
        "label": "Typ der Aktion",
        "show_if": "input.table_or_flow=='set_table_permissions'",
        "required": true,
        "options": {
          "set_permissions": {
            "label": "Berechtigungen setzen"
          },
          "delete_permissions": {
            "label": "Alle Berechtigungen löschen"
          }
        },
        "val": "set_permissions",
        "breakLine": true
      },
      "options.table_permission.emails": {
        "type": "text",
        "label": "Erlaubte Benutzer (; getrennte Liste)",
        "show_if": "input.table_or_flow=='set_table_permissions' && options.table_permission.set_or_delete=='set_permissions'",
        "required": true,
        "width": "100%"
      },
      "options.table_permission.permissions": {
        "type": "fieldset",
        "label": "Berechtigungen setzen",
        "show_if": "input.table_or_flow=='set_table_permissions' && options.table_permission.set_or_delete=='set_permissions'",
        "repeat": true,
        "fields": {
          "rows_or_columns": {
            "type": "select",
            "label": "Typ für Tabelle",
            "required": true,
            "options": {
              "select_rows": {
                "label": "Zeile(n) auswählen"
              },
              "select_columns": {
                "label": "Spalte(n) auswählen"
              }
            },
            "val": "select_columns"
          },
          "rows": {
            "type": "select",
            "label": "Zeile(n) auswählen",
            "show_if": "this.rows_or_columns=='select_rows'",
            "table": "input.table_id",
            "bind": "LABELS",
            "multiple": true,
            "required": true
          },
          "columns": {
            "type": "select",
            "label": "Spalte(n) auswählen",
            "show_if": "this.rows_or_columns=='select_columns'",
            "table": "input.table_id",
            "bind": "COLUMNS",
            "multiple": true,
            "required": true
          },
          "permission_type": {
            "type": "select",
            "label": "Berechtigungstyp",
            "required": true,
            "options": {
              "READ": {
                "label": "Lesen"
              },
              "WRITE": {
                "label": "Schreiben"
              },
              "PASS-ON": {
                "label": "Weitergeben"
              }
            },
            "val": "READ"
          },
          "delete": {
            "type": "button",
            "label": "Lösche",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.flow_permission.set_or_delete": {
        "type": "select",
        "label": "Typ der Aktion",
        "show_if": "input.table_or_flow=='set_flow_permissions'",
        "required": true,
        "options": {
          "set_permissions": {
            "label": "Berechtigungen setzen"
          }
        },
        "val": "set_permissions",
        "breakLine": true
      },
      "options.flow_permission.emails": {
        "type": "text",
        "label": "Erlaubte Benutzer (; getrennte Liste)",
        "show_if": "input.table_or_flow=='set_flow_permissions' && options.flow_permission.set_or_delete=='set_permissions'",
        "required": true,
        "width": "100%"
      },
      "options.flow_permission.permissions": {
        "type": "fieldset",
        "label": "Berechtigungen setzen",
        "show_if": "input.table_or_flow=='set_flow_permissions' && options.flow_permission.set_or_delete=='set_permissions'",
        "repeat": true,
        "fields": {
          "permission_type": {
            "type": "select",
            "label": "Berechtigungstyp",
            "required": true,
            "options": {
              "READ": {
                "label": "Lesen"
              },
              "WRITE": {
                "label": "Schreiben"
              },
              "PASS-ON": {
                "label": "Weitergeben"
              }
            },
            "val": "READ"
          },
          "delete": {
            "type": "button",
            "label": "Lösche",
            "function": "DELETE_ROW"
          }
        }
      }
    }
  }
}