{
  "input": {
    "type": "fieldset",
    "label": "Lookup-Tabelle auswählen",
    "repeat": false,
    "fields": {
      "tables": {
        "type": "fieldset",
        "label": "Tabellen auswählen",
        "repeat": true,
        "fields": {
          "table_id": {
            "type": "select",
            "label": "Nachschlagetabelle",
            "bind": "TABLES",
            "required": true
          },
          "lookup_header_column": {
            "type": "select",
            "label": "Kopfspalte",
            "table": "this.table_id",
            "bind": "COLUMNS",
            "required": true
          },
          "lookup_value_column": {
            "type": "select",
            "label": "Wert-Spalte",
            "table": "this.table_id",
            "bind": "COLUMNS",
            "required": true
          },
          "lookup_mapping_column": {
            "type": "select",
            "label": "Mapping-Spalte",
            "table": "this.table_id",
            "bind": "COLUMNS"
          },
          "delete": {
            "type": "button",
            "label": "Lösche",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.treatment": {
        "type": "select",
        "label": "Behandlung von Mehrfachvorkommen",
        "required": true,
        "options": {
          "sum": {
            "label": "Summe"
          },
          "min": {
            "label": "Min"
          },
          "max": {
            "label": "Max"
          },
          "shortest": {
            "label": "Kürzeste"
          },
          "longest": {
            "label": "Längste"
          },
          "first": {
            "label": "Erste"
          },
          "last": {
            "label": "Zuletzt"
          },
          "concatenate": {
            "label": "Verketten"
          }
        },
        "val": "sum",
        "style": "min-width: 200px"
      },
      "options.treatment_delimiter": {
        "type": "text",
        "label": "Begrenzer",
        "show_if": "options.treatment=='concatenate'",
        "required": true,
        "minLength": 1,
        "maxLength": 255,
        "val": ";",
        "breakLine": true
      }
    }
  }
}