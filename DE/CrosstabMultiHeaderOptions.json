{
  "options": {
    "type": "fieldset",
    "label": "Optionen auswählen",
    "repeat": false,
    "fields": {
      "transpose_type": {
        "type": "hidden",
        "val": "crosstab"
      },
      "crosstab.group_data_by_these_values": {
        "type": "fieldset",
        "label": "Reihen",
        "repeat": true,
        "fields": {
          "row": {
            "type": "select",
            "label": "Reihe",
            "table": "table_id",
            "bind": "COLUMNS",
            "required": true
          },
          "delete": {
            "type": "button",
            "label": "Lösche",
            "function": "DELETE_ROW"
          }
        }
      },
      "crosstab.change_column_headers": {
        "type": "fieldset",
        "label": "Säulen",
        "repeat": true,
        "fields": {
          "column": {
            "type": "select",
            "label": "Spalte",
            "table": "table_id",
            "bind": "COLUMNS",
            "required": true
          },
          "delete": {
            "type": "button",
            "label": "Lösche",
            "function": "DELETE_ROW"
          }
        }
      },
      "crosstab.values_for_new_columns": {
        "type": "select",
        "label": "Werte",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true
      },
      "crosstab.values_set_format": {
        "type": "checkbox",
        "label": "Werte neu formatieren",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "crosstab_values_format_frame": {
        "type": "fieldset",
        "label": "Werte formatieren",
        "show_if": "crosstab.values_set_format=='true'",
        "repeat": false,
        "fields": {
          "crosstab.values.format__category": {
            "type": "select",
            "label": "Anzeigeformat",
            "required": true,
            "options": {
              "standard": {
                "label": "Standard"
              },
              "number": {
                "label": "Nummer"
              },
              "percentage": {
                "label": "Prozentsatz"
              },
              "text": {
                "label": "Text"
              },
              "date": {
                "label": "Datum"
              },
              "currency": {
                "label": "Währung"
              }
            },
            "val": "standard"
          },
          "crosstab.values.format__rounding": {
            "type": "select",
            "label": "Dezimalstellen für die Anzeige",
            "show_if": "crosstab.values.format__category=='number' || crosstab.values.format__category=='percentage' || crosstab.values.format__category=='currency'",
            "required": true,
            "options": {
              "no_rounding": {
                "label": "Keine Rundung"
              },
              "0": {
                "label": "0 Ziffern"
              },
              "1": {
                "label": "1 Ziffern"
              },
              "2": {
                "label": "2 Ziffern"
              },
              "3": {
                "label": "3 Ziffern"
              },
              "4": {
                "label": "4 Ziffern"
              },
              "5": {
                "label": "5 Ziffern"
              },
              "6": {
                "label": "6 Ziffern"
              },
              "7": {
                "label": "7 Ziffern"
              },
              "8": {
                "label": "8 Ziffern"
              },
              "9": {
                "label": "9 Ziffern"
              }
            },
            "val": "2"
          },
          "crosstab.values.format__use_1000_separator": {
            "type": "checkbox",
            "label": "1000 Trennzeichen(.) verwenden",
            "show_if": "crosstab.values.format__category=='number' || crosstab.values.format__category=='percentage' || crosstab.values.format__category=='currency'",
            "val": "true",
            "isOn": "true",
            "isOff": "false"
          },
          "crosstab.values.format__currency_symbol": {
            "type": "select",
            "label": "Symbol",
            "show_if": "crosstab.values.format__category=='currency'",
            "required": true,
            "options": {
              "dollar": {
                "label": "$"
              },
              "euro": {
                "label": "€"
              },
              "pound": {
                "label": "£"
              },
              "yen": {
                "label": "¥ (Yen, currency of Japan)"
              },
              "colon": {
                "label": "₡ (Colón, currency of Costa Rica)"
              },
              "naira": {
                "label": "₦ (Naira, currency of Nigeria)"
              },
              "rupee": {
                "label": "₨ (Rupee, currency of India)"
              },
              "rupie": {
                "label": "₹ (Rupee, currency of India)"
              },
              "won": {
                "label": "₩ (Won, currency in South Korea and North Korea)"
              },
              "hebrew": {
                "label": "₪ (Currency of Israel)"
              },
              "dong": {
                "label": "₫ (Currency of Vietnam)"
              },
              "kip": {
                "label": "₭ (Kip, currency of Laos)"
              },
              "mongolia": {
                "label": "₮ (Currency of Mongolia)"
              },
              "peso": {
                "label": "₱ (Peso, currency of the Philippines)"
              },
              "guarani": {
                "label": "₲ (Guaraní, currency of Paraguay)"
              },
              "hryvnia": {
                "label": "₴ (Hryvnia, currency of Ukraine)"
              },
              "tenge": {
                "label": "₸ (Tenge, currency of Kazakhstan)"
              },
              "lira": {
                "label": "₺ (Lira, currency of Turkey)"
              },
              "manat": {
                "label": "₼ (Manat, currency of Azerbaijan)"
              },
              "rubles": {
                "label": "₽ (Rubles, currency of Russia)"
              },
              "lari": {
                "label": "₾ (Lari, currency of Georgia)"
              },
              "bitcoin": {
                "label": "₿ (Bitcoin, crypto currency)"
              }
            },
            "val": "dollar"
          },
          "crosstab.values.format__date_format": {
            "type": "select",
            "label": "Typ",
            "show_if": "crosstab.values.format__category=='date'",
            "required": true,
            "options": {
              "mm/dd/yyyy": {
                "label": "3/14/2012"
              },
              "D, M dd, Y": {
                "label": "Mittwoch, 14. März 2012"
              },
              "yyyy-mm-dd": {
                "label": "2012-03-14"
              },
              "m.dd.yyyy": {
                "label": "3.14.2012"
              },
              "m.dd.yy": {
                "label": "3.14.12"
              },
              "dd.m.yyyy": {
                "label": "14.3.2012"
              },
              "dd.m.yy": {
                "label": "14.3.12"
              },
              "M dd, Y": {
                "label": "14. März 2012"
              },
              "dd-mm-yyyy": {
                "label": "14-03-2012"
              },
              "mm-dd-yyyy": {
                "label": "03-14-2012"
              },
              "dd-mm-yy": {
                "label": "14-03-12"
              },
              "mm-dd-yy": {
                "label": "03-14-12"
              }
            },
            "val": "mm/dd/yyyy",
            "breakLine": true
          }
        }
      },
      "crosstab.method_for_aggregating_values": {
        "type": "select",
        "label": "Methode zum Aggregieren von Werten",
        "options": {
          "Concatenate": {
            "label": "Verketten"
          },
          "First": {
            "label": "Erste"
          },
          "Last": {
            "label": "Zuletzt"
          },
          "Sum": {
            "label": "Summe"
          },
          "Average": {
            "label": "Durchschnitt"
          },
          "Count": {
            "label": "Zählen Sie"
          },
          "User Defined": {
            "label": "Benutzerdefiniert"
          }
        },
        "val": "Concatenate",
        "required": true
      },
      "crosstab.user_defined_str": {
        "type": "text",
        "label": "Benutzerdefinierter Wert",
        "show_if": "crosstab.method_for_aggregating_values=='User Defined'",
        "val": "x",
        "trim": "false",
        "breakLine": true
      },
      "crosstab.separator": {
        "type": "text",
        "label": "Separator",
        "show_if": "method_for_aggregating_values=='Concatenate'",
        "val": ",",
        "trim": "false",
        "required": true,
        "breakLine": true
      }
    }
  }
}