{
  "options": {
    "type": "fieldset",
    "label": "Optionen ausw√§hlen",
    "repeat": false,
    "fields": {
      "options.standard.start": {
        "type": "hidden",
        "val": "1"
      },
      "options.standard.multiplier_at_maximum_impact_level": {
        "type": "text",
        "label": "Maximalwert",
        "val": "2",
        "required": true
      },
      "options.standard.maximum": {
        "type": "text",
        "label": "Maximaler Zeitraum",
        "val": "50",
        "required": true
      },
      "options.standard.multiplier_end_value": {
        "type": "text",
        "label": "Endwert",
        "show_if": "options.standard.end_value_equals_initial_value=='no'",
        "val": "1",
        "required": true
      },
      "options.standard.end": {
        "type": "text",
        "label": "Ende Periode",
        "val": "100",
        "required": true,
        "breakLine": true
      },
      "options.standard.end_value_equals_initial_value": {
        "type": "checkbox",
        "label": "Anfangswert und Endwert sind gleich 1",
        "width": "100%",
        "val": "yes",
        "isOn": "yes",
        "isOff": "no",
        "breakLine": true
      },
      "options.standard.maximum_plateau": {
        "type": "checkbox",
        "label": "Maximales Plateau",
        "width": "100%",
        "val": "yes",
        "isOn": "yes",
        "isOff": "no",
        "breakLine": true
      },
      "options.standard.no_of_periods_prior_defined_maximum_point": {
        "type": "text",
        "label": "Anzahl der Perioden vor dem definierten maximalen Punkt",
        "show_if": "options.standard.maximum_plateau=='yes'",
        "val": "0",
        "style": "width: 250px"
      },
      "options.standard.no_of_periods_post_defined_maximum_point": {
        "type": "text",
        "label": "Anzahl der Perioden nach definiertem Maximalpunkt",
        "show_if": "options.standard.maximum_plateau=='yes'",
        "val": "0",
        "style": "width: 250px",
        "breakLine": true
      },
      "options.standard.left_slope": {
        "type": "select",
        "label": "Linke Steigung",
        "options": {
          "vertical": {
            "label": "Vertikal"
          },
          "linear": {
            "label": "Linear"
          },
          "standard_distribution": {
            "label": "Standard-Verteilung"
          }
        },
        "val": "standard_distribution"
      },
      "options.standard.use_auto_calculated_sigma_for_left_slope": {
        "type": "checkbox",
        "label": "Automatisch berechnetes linkes Sigma",
        "show_if": "options.standard.left_slope=='standard_distribution'",
        "val": "true",
        "isOn": "true",
        "isOff": "false"
      },
      "options.standard.left_slope_sigma": {
        "type": "text",
        "label": "Linke Steigung Sigma",
        "show_if": "options.standard.left_slope=='standard_distribution' && options.standard.use_auto_calculated_sigma_for_left_slope=='false'",
        "val": "",
        "breakLine": true
      },
      "options.standard.right_slope": {
        "type": "select",
        "label": "Rechte Steigung",
        "required": true,
        "options": {
          "vertical": {
            "label": "Vertikal"
          },
          "linear": {
            "label": "Linear"
          },
          "standard_distribution": {
            "label": "Standard-Verteilung"
          }
        },
        "val": "standard_distribution"
      },
      "options.standard.use_auto_calculated_sigma_for_right_slope": {
        "type": "checkbox",
        "label": "Automatisch berechnetes rechtes Sigma",
        "show_if": "options.standard.right_slope=='standard_distribution'",
        "val": "true",
        "isOn": "true",
        "isOff": "false"
      },
      "options.standard.right_slope_sigma": {
        "type": "text",
        "label": "Rechte Steigung Sigma",
        "show_if": "options.standard.right_slope=='standard_distribution' && options.standard.use_auto_calculated_sigma_for_right_slope=='false'",
        "val": "",
        "breakLine": true
      }
    }
  }
}