{
  "options_box": {
    "type": "fieldset",
    "label": "Optionen",
    "repeat": false,
    "fields": {
      "options.chart_type": {
        "type": "select",
        "label": "Baumart",
        "required": true,
        "options": {
          "collapsible_tree": {
            "label": "Zusammenklappbarer Baum"
          },
          "tidy_tree": {
            "label": "Aufgeräumter Baum"
          },
          "radial_dendrogram": {
            "label": "Radiales Dendrogramm"
          }
        },
        "val": "collapsible_tree",
        "breakLine": true
      },
      "options.group_cols": {
        "type": "fieldset",
        "label": "Select Group Column(s) in Order",
        "show_if": "options.configure_manual=='true'",
        "repeat": true,
        "fields": {
          "group_col": {
            "type": "select",
            "label": "Gruppenspalte",
            "table": "table_id",
            "bind": "COLUMNS",
            "required": true
          },
          "delete": {
            "type": "button",
            "label": "Lösche",
            "function": "DELETE_ROW"
          }
        }
      }
    }
  }
}