{
  "placeholder": {
    "breakLine": true
  },
  "delete_options": {
    "type": "select",
    "label": "Optionen löschen",
    "required": true,
    "options": {
      "del_table": {
        "label": "Tabelle löschen"
      },
      "del_columns": {
        "label": "Ausgewählte Spalten löschen"
      },
      "del_rows": {
        "label": "Ausgewählte Zeilen löschen"
      }
    },
    "val": "del_table"
  },
  "apply_columns": {
    "type": "select",
    "label": "Zu löschende Spalten auswählen",
    "show_if": "delete_options=='del_columns'",
    "required": true,
    "table": "table_id",
    "multiple": true,
    "bind": "COLUMNS"
  },
  "apply_rows": {
    "type": "select",
    "label": "Zu löschende Zeilen auswählen",
    "show_if": "delete_options=='del_rows'",
    "required": true,
    "table": "table_id",
    "multiple": true,
    "bind": "LABELS"
  }
}