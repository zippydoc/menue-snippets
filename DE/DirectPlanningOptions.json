{
  "options": {
    "type": "fieldset",
    "Beschriftung": "Optionen auswählen",
    "repeat": false,
    "fields": {
      "options.taskname": {
        "type": "hidden",
        "val": "direct_planning"
      },
      "options.type": {
        "type": "hidden",
        "val": "custom"
      },
      "options.custom.table": {
        "type": "fieldset",
        "Beschriftung": "Planungsposition",
        "repeat": true,
        "fields": {
          "position": {
            "type": "select",
            "Beschriftung": "Position",
            "options": {
              "Revenues": {
                "Beschriftung": "Revenues"
              },
              "Cost of Goods Sold": {
                "Beschriftung": "Cost of Goods Sold"
              },
              "Marketing Expenses": {
                "Beschriftung": "Marketing Expenses"
              },
              "Operating Expenses": {
                "Beschriftung": "Operating Expenses"
              },
              "General and Administration Expenses": {
                "Beschriftung": "General and Administration Expenses"
              },
              "Personnel Expenses": {
                "Beschriftung": "Personnel Expenses"
              },
              "Tax": {
                "Beschriftung": "Tax"
              },
              "Capital Expenditure": {
                "Beschriftung": "Capital Expenditure"
              },
              "Depreciation": {
                "Beschriftung": "Depreciation"
              },
              "Amortization": {
                "Beschriftung": "Amortization"
              },
              "Extraordinary Items": {
                "Beschriftung": "Extraordinary Items"
              },
              "Depretiation & Amortisation": {
                "Beschriftung": "Depretiation & Amortisation"
              }
            },
            "val": "Revenues",
            "required": true
          },
          "revenues__sub_position": {
            "type": "select",
            "Beschriftung": "Sub Position",
            "show_if": "this.position=='Revenues'",
            "options": {
              "Sales": {
                "Beschriftung": "Sales"
              },
              "Increase(+)/Decrease(-) Inventories": {
                "Beschriftung": "Increase(+)/Decrease(-) Inventories"
              },
              "Other Revenues": {
                "Beschriftung": "Other Revenues"
              }
            },
            "val": "Sales",
            "required": true
          },
          "cost_of_goods_sold__sub_position": {
            "type": "select",
            "Beschriftung": "Sub Position",
            "show_if": "this.position=='Cost of Goods Sold'",
            "options": {
              "Material Costs": {
                "Beschriftung": "Material Costs"
              },
              "Purchased Services": {
                "Beschriftung": "Purchased Services"
              }
            },
            "val": "Material Costs",
            "required": true
          },
          "general_administration_expenses__sub_position": {
            "type": "select",
            "Beschriftung": "Sub Position",
            "show_if": "this.position=='General and Administration Expenses'",
            "options": {
              "Rental Expenses": {
                "Beschriftung": "Rental Expenses"
              },
              "Cleaning": {
                "Beschriftung": "Cleaning"
              },
              "Office Items": {
                "Beschriftung": "Office Items"
              },
              "Consulting": {
                "Beschriftung": "Consulting"
              },
              "Recruiting": {
                "Beschriftung": "Recruiting"
              }
            },
            "val": "Rental Expenses",
            "required": true
          },
          "personnel_expenses__sub_position": {
            "type": "select",
            "Beschriftung": "Sub Position",
            "show_if": "this.position=='Personnel Expenses'",
            "options": {
              "Fix Salary": {
                "Beschriftung": "Fix Salary"
              },
              "Bonus": {
                "Beschriftung": "Bonus"
              },
              "Other Compensation": {
                "Beschriftung": "Other Compensation"
              }
            },
            "val": "Fix Salary",
            "required": true
          },
          "capital_expenditure__sub_position": {
            "type": "select",
            "Beschriftung": "Sub Position",
            "show_if": "this.position=='Capital Expenditure'",
            "options": {
              "Maintenance Capex": {
                "Beschriftung": "Maintenance Capex"
              },
              "Expansion Capex": {
                "Beschriftung": "Expansion Capex"
              }
            },
            "val": "Maintenance Capex",
            "required": true
          },
          "extraordinary_items__sub_position": {
            "type": "select",
            "Beschriftung": "Sub Position",
            "show_if": "this.position=='Extraordinary Items'",
            "options": {
              "Extraordinary Income": {
                "Beschriftung": "Extraordinary Income"
              },
              "Extraordinary Expenses": {
                "Beschriftung": "Extraordinary Expenses"
              }
            },
            "val": "Extraordinary Income",
            "required": true
          },
          "tax__sub_position": {
            "type": "select",
            "Beschriftung": "Sub Position",
            "show_if": "this.position=='Tax'",
            "options": {
              "Value Added Tax": {
                "Beschriftung": "Value Added Tax"
              },
              "Corporate Tax": {
                "Beschriftung": "Corporate Tax"
              },
              "Trade Tax": {
                "Beschriftung": "Trade Tax"
              }
            },
            "val": "Value Added Tax",
            "required": true
          },
          "interest__sub_position": {
            "type": "select",
            "Beschriftung": "Sub Position",
            "show_if": "this.position=='Interest'",
            "options": {
              "Interest Income": {
                "Beschriftung": "Interest Income"
              },
              "Interest Expenses": {
                "Beschriftung": "Interest Expenses"
              }
            },
            "val": "Interest Income",
            "required": true
          },
          "depretiation_amortisation__sub_position": {
            "type": "select",
            "Beschriftung": "Sub Position",
            "show_if": "this.position=='Depretiation & Amortisation'",
            "options": {
              "Depretiation": {
                "Beschriftung": "Depretiation"
              },
              "Amortisation": {
                "Beschriftung": "Amortisation"
              }
            },
            "val": "Depretiation",
            "required": true
          },
          "item": {
            "type": "text",
            "Beschriftung": "Posten",
            "val": ""
          },
          "amount": {
            "type": "number",
            "Beschriftung": "Betrag",
            "val": "",
            "required": true
          },
          "periodicy": {
            "type": "select",
            "Beschriftung": "Periodizität",
            "required": true,
            "options": {
              "Einmalig": {
                "Beschriftung": "Einmalig"
              },
              "Täglich": {
                "Beschriftung": "Täglich"
              },
              "Wöchentlich": {
                "Beschriftung": "Wöchentlich"
              },
              "Monatlich": {
                "Beschriftung": "Monatlich"
              },
              "vierteljährlich": {
                "Beschriftung": "vierteljährlich"
              },
              "Jährlich": {
                "Beschriftung": "Jährlich"
              }
            },
            "val": "Jährlich",
            "breakLine": true
          },
          "growth": {
            "type": "number",
            "Beschriftung": "Growth in %",
            "show_if": "this.periodicy!='One-Off'",
            "val": "",
            "required": true
          },
          "growth_period": {
            "type": "select",
            "Beschriftung": "Wachstumsperiode",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Wöchentlich": {
                "Beschriftung": "Woche für Woche"
              },
              "Monatlich": {
                "Beschriftung": "Monat für Monat"
              },
              "vierteljährlich": {
                "Beschriftung": "Quartal für Quartal"
              },
              "Jährlich": {
                "Beschriftung": "Jahr auf Jahr"
              }
            },
            "val": "Jährlich"
          },
          "growth_pattern": {
            "type": "select",
            "Beschriftung": "Wachstumsmuster",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Aufsummierung": {
                "Beschriftung": "Aufsummierung"
              },
              "Linear": {
                "Beschriftung": "Linear"
              },
              "Jump-Fix": {
                "Beschriftung": "Jump-Fix"
              }
            },
            "val": "Jump-Fix",
            "breakLine": true
          },
          "initial_date": {
            "type": "date",
            "Beschriftung": "Anfangsdatum",
            "val": "",
            "required": true
          },
          "final_date": {
            "type": "date",
            "Beschriftung": "Endgültiges Datum",
            "show_if": "this.periodicy!='One-Off'",
            "val": ""
          },
          "delete": {
            "type": "button",
            "Beschriftung": "Lösche",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.output_type": {
        "type": "select",
        "Beschriftung": "Ausgabetyp",
        "required": true,
        "options": {
          "planning_table": {
            "Beschriftung": "Planning Table"
          },
          "periodicy_table": {
            "Beschriftung": "Periodicy Table"
          },
          "summary_table": {
            "Beschriftung": "Summary Table"
          }
        },
        "val": "summary_table"
      },
      "options.summary_table__group_by": {
        "type": "select",
        "Beschriftung": "Gruppe von",
        "show_if": "options.output_type=='summary_table'",
        "multiple": true,
        "options": {
          "Jahr": {
            "Beschriftung": "Jahr"
          },
          "Viertel": {
            "Beschriftung": "Viertel"
          },
          "Monat": {
            "Beschriftung": "Monat"
          },
          "Woche": {
            "Beschriftung": "Woche"
          },
          "Day": {
            "Beschriftung": "Day"
          },
          "Position": {
            "Beschriftung": "Position"
          },
          "Sub Position": {
            "Beschriftung": "Sub Position"
          },
          "Posten": {
            "Beschriftung": "Posten"
          }
        },
        "val": ["Jahr", "Viertel", "Monat", "Position"],
        "required": true,
        "breakLine": true
      },
      "options.set_plan_config": {
        "type": "checkbox",
        "Beschriftung": "Planning Configuration",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "planning_configuration_frame": {
        "type": "fieldset",
        "Beschriftung": "Planning Configuration",
        "show_if": "options.set_plan_config=='true'",
        "repeat": false,
        "fields": {
          "options.add_categories": {
            "type": "checkbox",
            "Beschriftung": "Add Categories",
            "val": "false",
            "isOn": "true",
            "isOff": "false"
          },
          "options.categories": {
            "type": "fieldset",
            "Beschriftung": "Add Categories",
            "show_if": "options.add_categories=='true'",
            "repeat": true,
            "fields": {
              "category": {
                "type": "text",
                "Beschriftung": "Category",
                "val": "",
                "required": true
              },
              "value": {
                "type": "text",
                "Beschriftung": "Wert",
                "val": ""
              },
              "delete": {
                "type": "button",
                "Beschriftung": "Lösche",
                "function": "DELETE_ROW"
              }
            },
            "breakLine": true
          },
          "options.set_amount_column_formatting": {
            "type": "checkbox",
            "Beschriftung": "Set Amount Column Formatting",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "style": "margin-top: 10px"
          },
          "formatting_frame": {
            "type": "fieldset",
            "Beschriftung": "Betrags-Spalten-Formatierung",
            "show_if": "options.set_amount_column_formatting=='true'",
            "repeat": false,
            "fields": {
              "options.amount.format__category": {
                "type": "select",
                "Beschriftung": "Betragsformat",
                "required": true,
                "options": {
                  "standard": {
                    "Beschriftung": "Standard"
                  },
                  "number": {
                    "Beschriftung": "Nummer"
                  },
                  "percentage": {
                    "Beschriftung": "Prozentsatz"
                  },
                  "text": {
                    "Beschriftung": "Text"
                  },
                  "date": {
                    "Beschriftung": "Datum"
                  },
                  "currency": {
                    "Beschriftung": "Währung"
                  }
                },
                "val": "currency"
              },
              "options.amount.format__rounding": {
                "type": "select",
                "Beschriftung": "Abrunden",
                "show_if": "options.amount.format__category=='number' || options.amount.format__category=='percentage' || options.amount.format__category=='currency'",
                "required": true,
                "options": {
                  "no_rounding": {
                    "Beschriftung": "Keine Rundung"
                  },
                  "0": {
                    "Beschriftung": "0 Ziffern"
                  },
                  "1": {
                    "Beschriftung": "1 Ziffern"
                  },
                  "2": {
                    "Beschriftung": "2 Ziffern"
                  },
                  "3": {
                    "Beschriftung": "3 Ziffern"
                  },
                  "4": {
                    "Beschriftung": "4 Ziffern"
                  },
                  "5": {
                    "Beschriftung": "5 Ziffern"
                  },
                  "6": {
                    "Beschriftung": "6 Ziffern"
                  },
                  "7": {
                    "Beschriftung": "7 Ziffern"
                  },
                  "8": {
                    "Beschriftung": "8 Ziffern"
                  },
                  "9": {
                    "Beschriftung": "9 Ziffern"
                  }
                },
                "val": "2"
              },
              "options.amount.format__use_1000_separator": {
                "type": "checkbox",
                "Beschriftung": "1000 Trennzeichen(.) verwenden",
                "show_if": "options.amount.format__category=='number' || options.amount.format__category=='percentage' || options.amount.format__category=='currency'",
                "val": "true",
                "isOn": "true",
                "isOff": "false"
              },
              "options.amount.format__currency_symbol": {
                "type": "select",
                "Beschriftung": "Symbol",
                "show_if": "options.amount.format__category=='currency'",
                "required": true,
                "options": {
                  "dollar": {
                    "Beschriftung": "$"
                  },
                  "euro": {
                    "Beschriftung": "€"
                  },
                  "pound": {
                    "Beschriftung": "£"
                  }
                },
                "val": "dollar"
              },
              "options.amount.format__date_format": {
                "type": "select",
                "Beschriftung": "Typ",
                "show_if": "options.amount.format__category=='date'",
                "required": true,
                "options": {
                  "mm/dd/yyyy": {
                    "Beschriftung": "3/14/2012"
                  },
                  "D, M dd, Y": {
                    "Beschriftung": "Mittwoch, 14. März 2012"
                  },
                  "yyyy-mm-dd": {
                    "Beschriftung": "2012-03-14"
                  }
                },
                "val": "mm/dd/yyyy",
                "breakLine": true
              }
            },
            "breakLine": true
          },
          "options.end_date": {
            "type": "date",
            "Beschriftung": "Enddatum der Tabelle",
            "show_if": "options.type=='process' || options.type=='custom'",
            "val": "",
            "style": "width: 300px",
            "breakLine": true
          }
        }
      }
    }
  }
}