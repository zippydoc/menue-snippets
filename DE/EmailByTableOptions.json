{
  "options_frame": {
    "type": "fieldset",
    "label": "Optionen auswählen",
    "repeat": false,
    "fields": {
      "options.task_type": {
        "type": "hidden",
        "val": "write_series"
      },
      "table_id": {
        "type": "select",
        "label": "Tabelle auswählen",
        "bind": "TABLES",
        "empty": "",
        "required": true
      },
      "info2": {
        "type": "text",
        "label": "",
        "val": "Table-Type: TO | CC | BCC | SUBJECT | BODY",
        "disabled": true,
        "style": "width: 100%"
      },
      "options.add_table": {
        "type": "checkbox",
        "label": "Tabelle einbetten",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.embed_mode": {
        "type": "select",
        "label": "Typ der Tabelleneinbettung",
        "show_if": "options.add_table=='true'",
        "options": {
          "embed": {
            "label": "Embed"
          },
          "attach_csv_comma_separated": {
            "label": "Attach as csv (',' - separated)"
          },
          "attach_csv_semicolon_separated": {
            "label": "Attach as csv (';' - separated)"
          }
        },
        "val": "embed",
        "breakLine": true
      },
      "options.embed_table_footer": {
        "type": "text",
        "label": "Tabellenfuß",
        "show_if": "options.add_table=='true'",
        "val": "",
        "style": "width: 100%"
      },
      "info3": {
        "type": "text",
        "label": "",
        "val": "This task only supports users logged in via Microsoft Login",
        "disabled": true,
        "style": "width: 100%"
      }
    }
  }
}