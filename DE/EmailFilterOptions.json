{
  "embed_table_frame": {
    "type": "fieldset",
    "label": "Tabelle einbetten",
    "show_if": "options.add_table=='true'",
    "repeat": false,
    "fields": {
      "options.embed_table_id": {
        "type": "select",
        "label": "Tabelle auswählen",
        "bind": "TABLES",
        "empty": "",
        "required": true,
        "breakLine": true
      },
      "options.apply_filter": {
        "type": "checkbox",
        "label": "Filter anwenden",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      }
    }
  },
  "filter_frame": {
    "type": "fieldset",
    "label": "Filter für Tabelle einbetten",
    "show_if": "options.add_table=='true' && options.apply_filter=='true'",
    "repeat": false,
    "fields": {
      "options.do_not_send_email_if_empty_table": {
        "type": "checkbox",
        "label": "Keine E-Mail senden, wenn der Filter eine leere Tabelle liefert",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.filter": {
        "type": "fieldset",
        "label": "Filterbedingungen hinzufügen",
        "repeat": true,
        "fields": {
          "initial_op": {
            "type": "select",
            "label": "Logik-Operator auswählen",
            "required": true,
            "show_if" :  "$index == 0",
            "options": {
              "if": {
                "label": "IF"
              },
              "if_not": {
                "label": "WENN NICHT"
              }
            },
            "val": "if"
          },
          "op": {
            "type": "select",
            "label": "Logik-Operator auswählen",
            "required": true,
            "show_if" :  "$index > 0",
            "options": {
              "and": {
                "label": "UND"
              },
              "or": {
                "label": "OR"
              },
              "and_not": {
                "label": "UND NICHT"
              },
              "or_not": {
                "label": "ODER NICHT"
              }
            },
            "val": "and"
          },
          "column": {
            "type": "select",
            "label": "Spalte auswählen",
            "table": "options.embed_table_id",
            "bind": "COLUMNS",
            "required": true
          },
          "condition": {
            "type": "select",
            "label": "Bediener auswählen",
            "required": true,
            "options": {
              "CONTAINS": {
                "label": "ENTHÄLT"
              },
              "CONTAINED IN STRING": {
                "label": "ENTHALTEN IN"
              },
              "STARTS WITH": {
                "label": "STARTET MIT"
              },
              "ENDS WITH": {
                "label": "ENDET MIT"
              },
              "=": {
                "label": "EQUAL"
              },
              ">": {
                "label": "GRÖSSER ALS"
              },
              ">=": {
                "label": "GRÖSSER ODER GLEICH"
              },
              "<": {
                "label": "KLEINER ALS"
              },
              "<=": {
                "label": "KLEINER ODER GLEICH"
              },
              "EMPTY": {
                "label": "IST LEER"
              },
              "BLANK": {
                "label": "IST BLANK"
              },
              "IS NULL": {
                "label": "IS NULL"
              },
              "IS TRUE": {
                "label": "IST WAHR"
              },
              "IS FALSE": {
                "label": "IST FALSCH"
              },
              "REGEX MATCH": {
                "label": "REGEX-MATCH"
              },
              "CONTAINED IN TABLE": {
                "label": "IN TABELLE"
              },
              "IN REGEX TABLE": {
                "label": "IN REGEX-TABELLE"
              },
              "DATE": {
                "label": "DATUM"
              }
            },
            "val": "CONTAINS"
          },
          "date_condition": {
            "type": "select",
            "label": "Datumsoperator auswählen",
            "required": true,
            "show_if": "this.condition == 'DATE'",
            "options": {
              "<": {
                "label": "PRIOR"
              },
              "<=": {
                "label": "PRIOR ODER GLEICH"
              },
              "=": {
                "label": "EQUAL"
              },
              ">": {
                "label": "NACH"
              },
              ">=": {
                "label": "NACHHER ODER GLEICH"
              }
            },
            "val": "="
          },
          "compare_with": {
            "type": "select",
            "label": "Compare with",
            "required": true,
            "show_if": "this.condition=='CONTAINS' || this.condition=='CONTAINED IN STRING' || this.condition=='STARTS WITH' || this.condition=='ENDS WITH' || this.condition=='=' || this.condition=='>' || this.condition=='>=' || this.condition=='<' || this.condition=='<='",
            "options": {
              "custom_value": {
                "label": "Custom value"
              },
              "column_value": {
                "label": "Column value"
              }
            },
            "val": "custom_value"
          },
          "self_compare_column": {
            "type": "select",
            "label": "Select Compare Column",
            "table": "table_id",
            "bind": "COLUMNS",
            "show_if": "this.compare_with=='column_value' && (this.condition=='CONTAINS' || this.condition=='CONTAINED IN STRING' || this.condition=='STARTS WITH' || this.condition=='ENDS WITH' || this.condition=='=' || this.condition=='>' || this.condition=='>=' || this.condition=='<' || this.condition=='<=')",
            "required": true
          },
          "date_value": {
            "type": "date",
            "label": "Datum auswählen",
            "show_if": "this.condition=='DATE'",
            "val": "",
            "required": true
          },
          "value": {
            "type": "text",
            "label": "Eingangswert",
            "show_if": "this.compare_with=='custom_value' && this.condition != 'DATE' && this.condition != 'EMPTY' && this.condition != 'NOT EMPTY' && this.condition != 'BLANK' && this.condition != 'NOT BLANK' && this.condition != 'IS NULL' && this.condition != 'IS NOT NULL' && this.condition != 'IS TRUE' && this.condition != 'IS FALSE' && this.condition != 'CONTAINED IN TABLE' && this.condition != 'NOT CONTAINED IN TABLE' && this.condition != 'IN REGEX TABLE' && this.condition != 'NOT IN REGEX TABLE'",
            "val": "",
            "required": true
          },
          "case_sensitive": {
            "type": "select",
            "label": "Wählen Sie Case Sensitive",
            "required": true,
            "show_if": "this.condition == 'CONTAINS' || this.condition == 'CONTAINED IN STRING' || this.condition == '=' || this.condition == 'STARTS WITH' || this.condition == 'ENDS WITH' || this.condition == 'REGEX MATCH' || this.condition == 'NOT REGEX MATCH' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
            "options": {
              "yes": {
                "label": "Gehäuse empfindlich"
              },
              "no": {
                "label": "Groß-/Kleinschreibung nicht beachten"
              }
            },
            "val": "yes"
          },
          "compare_table_id": {
            "type": "select",
            "label": "Tabelle auswählen",
            "bind": "TABLES",
            "empty": "",
            "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
            "required": true
          },
          "compare_column": {
            "type": "select",
            "label": "Spalte auswählen",
            "table": "this.compare_table_id",
            "bind": "COLUMNS",
            "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
            "required": true
          },
          "delete": {
            "type": "button",
            "label": "Lösche",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.apply_to_record": {
        "type": "checkbox",
        "label": "Auf den Datensatz anwenden",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "style": "margin-top: 10px",
        "breakLine": true
      },
      "apply_to_group_box": {
        "type": "fieldset",
        "label": "Anwenden auf Gruppe",
        "show_if": "options.apply_to_record=='false'",
        "repeat": false,
        "fields": {
          "options.apply_to_group_columns": {
            "type": "select",
            "label": "Gruppenspalten auswählen",
            "required": true,
            "width": "100%",
            "table": "options.embed_table_id",
            "multiple": true,
            "bind": "COLUMNS",
            "breakLine": true
          }
        }
      }
    }
  }
}