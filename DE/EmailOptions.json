{
  "info1": {
    "type": "text",
    "label": "",
    "val": "E-mail task is only available as private cloud solution. Please contact sales.",
    "disabled": true,
    "style": "width: 100%"
  },
  "options": {
    "type": "fieldset",
    "label": "Optionen auswählen",
    "repeat": false,
    "fields": {
      "options.task_type": {
        "type": "select",
        "label": "Aufgaben-Typ",
        "required": true,
        "options": {
          "write_series": {
            "label": "E-Mail-Serie schreiben"
          },
          "write_email": {
            "label": "E-Mail schreiben"
          }
        },
        "val": "write_email"
      },
      "input_table": {
        "type": "select",
        "label": "Tabelle auswählen",
        "show_if": "options.task_type=='write_series'",
        "bind": "TABLES",
        "empty": "",
        "required": true
      },
      "info2": {
        "type": "text",
        "label": "",
        "show_if": "options.task_type=='write_series'",
        "val": "Table-Type: TO | CC | BCC | SUBJECT | BODY",
        "disabled": true,
        "style": "width: 100%"
      },
      "options.to": {
        "type": "text",
        "label": "An",
        "show_if": "options.task_type=='write_email'",
        "required": true,
        "val": "",
        "placeholder": "user1@domain.com; user2@domain.com;",
        "width": "100%"
      },
      "options.cc": {
        "type": "text",
        "label": "CC",
        "show_if": "options.task_type=='write_email'",
        "val": "",
        "placeholder": "ccuser1@domain.com; ccuser2@domain.com",
        "width": "100%"
      },
      "options.bcc": {
        "type": "text",
        "label": "BCC",
        "show_if": "options.task_type=='write_email'",
        "val": "",
        "placeholder": "bccuser1@domain.com; bccuser1@domain.com",
        "width": "100%"
      },
      "options.subject": {
        "type": "text",
        "label": "Betreff",
        "show_if": "options.task_type=='write_email'",
        "required": true,
        "val": "",
        "placeholder": "Betreff",
        "width": "100%"
      },
      "options.body": {
        "type": "textarea",
        "label": "Body",
        "show_if": "options.task_type=='write_email'",
        "val": "",
        "placeholder": "Text",
        "md_no_resize": true,
        "rows": 3,
        "width": "100%"
      }
    }
  },
  "smtp_config_frame": {
    "type": "fieldset",
    "label": "SMTP-Verbindung",
    "show_if": "options.task_type=='write_series' || options.task_type=='write_email'",
    "repeat": false,
    "fields": {
      "options.smtp.type": {
        "type": "select",
        "label": "SMTP-Server auswählen",
        "options": {
          "custom": {
            "label": "Benutzerdefiniert (kommt bald)"
          }
        },
        "val": "custom",
        "required": true,
        "breakLine": true
      },
      "gmail_warning": {
        "type": "text",
        "label": "",
        "show_if": "options.smtp.type=='gmail'",
        "val": "Turn 'Allow less secure apps' ON in https://myaccount.google.com/lesssecureapps",
        "width": "100%",
        "disabled": true
      },
      "options.gmail.user": {
        "type": "text",
        "label": "Gmail-Benutzer",
        "show_if": "options.smtp.type=='gmail'",
        "required": true,
        "placeholder": "sender@gmail.com"
      },
      "options.gmail.password": {
        "type": "password",
        "label": "Gmail-Kennwort",
        "show_if": "options.smtp.type=='gmail'",
        "required": true
      },
      "options.custom.host": {
        "type": "text",
        "label": "SMTP-Host",
        "show_if": "options.smtp.type=='custom'",
        "required": true
      },
      "options.custom.port": {
        "type": "text",
        "label": "SMTP-Anschluss",
        "show_if": "options.smtp.type=='custom'",
        "required": true
      },
      "options.custom.user": {
        "type": "text",
        "label": "SMTP-Benutzer",
        "show_if": "options.smtp.type=='custom'",
        "required": true
      },
      "options.custom.password": {
        "type": "password",
        "label": "SMTP-Kennwort",
        "show_if": "options.smtp.type=='custom'",
        "required": true
      }
    }
  }
}