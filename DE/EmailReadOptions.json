{
  "options_frame": {
    "type": "fieldset",
    "label": "Optionen auswählen",
    "repeat": false,
    "fields": {
      "options.task_type": {
        "type": "hidden",
        "val": "read_email"
      },
      "options.all_folders": {
        "type": "checkbox",
        "label": "Alle E-Mail-Ordner importieren",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "options.read_folders": {
        "type": "select",
        "label": "Mail Folder(s) to import",
        "show_if": "options.all_folders=='false'",
        "required": true,
        "multiple": true,
        "options": {
          "Archive": {
            "label": "Archive"
          },
          "Conversation History": {
            "label": "Gesprächsgeschichte"
          },
          "Deleted Items": {
            "label": "Gelöschte Objekte"
          },
          "Drafts": {
            "label": "Entwürfe"
          },
          "Inbox": {
            "label": "Posteingang"
          },
          "Junk Email": {
            "label": "Junk-E-Mail"
          },
          "Outbox": {
            "label": "Postausgang"
          },
          "RSS Feeds": {
            "label": "RSS-Feeds"
          },
          "Sent Items": {
            "label": "Gesendete Objekte"
          },
          "Sync Issues": {
            "label": "Synchronisationsprobleme"
          }
        },
        "val": ["Inbox"],
        "breakLine": true
      },
      "options.all_columns": {
        "type": "checkbox",
        "label": "Alle Spalten importieren",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "options.import_columns": {
        "type": "select",
        "label": "Zu importierende Spalten",
        "show_if": "options.all_columns=='false'",
        "required": true,
        "multiple": true,
        "options": {
          "CreatedAt": {
            "label": "Erstellt am"
          },
          "ReceivedAt": {
            "label": "EmpfangenAt"
          },
          "SentAt": {
            "label": "GesendetAt"
          },
          "Subject": {
            "label": "Betreff"
          },
          "BodyPreview": {
            "label": "BodyPreview"
          },
          "From": {
            "label": "Von"
          },
          "CC": {
            "label": "CC"
          },
          "BCC": {
            "label": "BCC"
          },
          "HasAttachments": {
            "label": "HasAttachments"
          },
          "IsRead": {
            "label": "IstLesen"
          },
          "IsDraft": {
            "label": "IsDraft"
          },
          "WebLink": {
            "label": "WebLink"
          },
          "Body": {
            "label": "Body"
          }
        },
        "val": ["CreatedAt","Subject","BodyPreview","From","HasAttachments","WebLink"]
      },
      "info3": {
        "type": "text",
        "label": "",
        "val": "This task only supports users logged in via Microsoft Login",
        "disabled": true,
        "style": "width: 100%"
      }
    }
  }
}