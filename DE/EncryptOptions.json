{
  "options": {
    "type": "fieldset",
    "label": "Optionen auswählen",
    "repeat": false,
    "fields": {
      "task_type": {
        "type": "select",
        "label": "Aufgaben-Typ",
        "required": true,
        "options": {
          "encrypt": {
            "label": "Verschlüsseln (sicher)"
          },
          "decrypt": {
            "label": "Entschlüsseln (sicher)"
          },
          "encrypt_simple": {
            "label": "Verschlüsseln (einfach)"
          },
          "decrypt_simple": {
            "label": "Entschlüsseln (einfach)"
          },
          "mask": {
            "label": "Maske"
          }
        },
        "val": "encrypt"
      },
      "mask_type": {
        "type": "select",
        "label": "Masken-Typ",
        "show_if": "task_type == ''mask''",
        "required": true,
        "options": {
          "trailing": {
            "label": "Nachlaufende N-Zeichen"
          },
          "leading": {
            "label": "Führende N-Zeichen"
          },
          "numbers": {
            "label": "Zahlen"
          },
          "alphabets": {
            "label": "Zeichen"
          },
          "regex": {
            "label": "Regulärer Ausdruck"
          }
        },
        "val": "trailing"
      },
      "password": {
        "type": "password",
        "label": "Kennwort",
        "show_if": "task_type != ''mask''",
        "required": true,
        "minLength": 1,
        "maxLength": 31,
        "val": ""
      },
      "varn": {
        "type": "number",
        "label": "N",
        "show_if": "task_type == ''mask'' && (mask_type == ''trailing'' || mask_type == ''leading'')",
        "required": true,
        "val": "1"
      },
      "regexp": {
        "type": "text",
        "label": "Ausdruck",
        "show_if": "task_type == ''mask'' && (mask_type == ''regex'')",
        "required": true,
        "val": "",
        "placeholder": "[a-fA-F0-9]"
      },
      "replace": {
        "type": "text",
        "label": "Maskenzeichenfolge",
        "show_if": "task_type == ''mask'' && (mask_type == ''regex'')",
        "required": true,
        "val": "*"
      }
    }
  }
}