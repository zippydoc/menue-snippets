{
  "options": {
    "type": "fieldset",
    "label": "Optionen ausw√§hlen",
    "repeat": false,
    "fields": {
      "options.type": {
        "type": "radio",
        "val": "expand",
        "values": {
          "expand": "Expand",
          "compress": "Compress"
        },
        "breakLine": true
      },
      "options.column_to_expand": {
        "type": "select",
        "label": "Zu erweiternde Spalte",
        "show_if": "options.type=='expand'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true
      },
      "options.column_to_group": {
        "type": "select",
        "label": "Zu gruppierende Spalte",
        "show_if": "options.type=='compress'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true
      },
      "options.column_to_compress": {
        "type": "select",
        "label": "Zu komprimierende Spalte",
        "show_if": "options.type=='compress'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true
      },
      "options.delimiter": {
        "type": "text",
        "label": "Begrenzer",
        "val": ";",
        "trim": "false",
        "required": true
      },
      "options.new_col_name": {
        "type": "text",
        "label": "Neuer Spaltenname",
        "show_if": "options.type=='expand' && options.expand__output_in_new_column=='true'",
        "val": "label",
        "required": true,
        "breakLine": true
      },
      "options.expand__output_in_new_column": {
        "type": "checkbox",
        "label": "Ausgabe in neuer Spalte",
        "show_if": "options.type=='expand'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      }
    }
  }
}