{
  "options": {
    "type": "fieldset",
    "label": "Optionen auswählen",
    "repeat": false,
    "fields": {
      "options.to": {
        "type": "hidden",
        "val": "file"
      },
      "options.webservice": {
        "type": "hidden",
        "val": "dropbox"
      },
      "options.export_format": {
        "type": "select",
        "label": "Format exportieren",
        "options": {
          "csv_file": {
            "label": "Csv-Datei(en)"
          },
          "word_by_word": {
            "label": "Wort für Wort"
          },
          "line_by_line": {
            "label": "Zeile für Zeile"
          }
        },
        "val": "csv_file",
        "required": true,
        "breakLine": true
      },
      "options.if_duplicated": {
        "type": "select",
        "label": "Wenn vorhanden",
        "show_if": "options.webservice=='github'",
        "val": "drop_if_exist",
        "options": {
          "drop_if_exist": {
            "label": "Erstellen oder Verwerfen (falls bereits vorhanden)"
          },
          "error_if_exist": {
            "label": "Neu erstellen (wirft Fehler, wenn vorhanden)"
          },
          "error_if_not_exist": {
            "label": "Ablegen (Fehler werfen, wenn nicht vorhanden)"
          },
          "append": {
            "label": "Anhängen"
          }
        },
        "breakLine": true
      },
      "options.export_series": {
        "type": "checkbox",
        "label": "Serie exportieren",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.file_name_column": {
        "type": "select",
        "label": "Dateinamen-Spalte auswählen",
        "show_if": "options.export_series=='true'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.set_file_path_column": {
        "type": "checkbox",
        "label": "In angegebenen Pfad exportieren",
        "show_if": "options.export_series=='true'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.file_path_column": {
        "type": "select",
        "label": "Dateipfadspalte auswählen",
        "show_if": "options.export_series=='true' && options.set_file_path_column=='true'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      }
    }
  },
  "export_link_token_frame": {
    "type": "fieldset",
    "label": "Link exportieren",
    "repeat": false,
    "fields": {
      "options.github_url": {
        "type": "text",
        "label": "Link eingeben z. B. https://github.com/zippydoc/test",
        "show_if": "options.webservice=='github'",
        "val": "",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.export_dir": {
        "type": "text",
        "label": "Verzeichnis eingeben z.B. /MyZippyDocFiles/SubDir/",
        "show_if": "options.webservice!='github'",
        "val": "/",
        "width": "100%",
        "breakLine": true
      },
      "options.github_token": {
        "type": "text",
        "label": "Geben Sie das persönliche Github-Zugriffstoken an, das Schreibrechte hat:",
        "show_if": "options.webservice=='github'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.github_create_pr": {
        "type": "checkbox",
        "label": "Pull-Anfrage erstellen",
        "show_if": "options.webservice=='github'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.ms_one_drive_token": {
        "type": "text",
        "label": "Microsoft Graph API Zugriffstoken. Sie können es hier erhalten https://ms-oauth.herokuapp.com/",
        "show_if": "options.webservice=='ms_one_drive'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.google_authorization_code": {
        "type": "text",
        "label": "Google OAuth Authorization Code with scope https://www.googleapis.com/auth/drive. You can get it here https://developers.google.com/oauthplayground/",
        "show_if": "options.webservice=='google_drive'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.dropbox_authorization_code": {
        "type": "text",
        "label": "Dropbox Authorization Code. You can get it here https://www.dropbox.com/oauth2/authorize?client_id=9i7woztjp94jrkw&response_type=code",
        "show_if": "options.webservice=='dropbox'",
        "required": true,
        "width": "100%",
        "breakLine": true
      }
    }
  }
}