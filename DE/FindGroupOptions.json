{
  "options": {
    "type": "fieldset",
    "label": "Gruppenoptionen finden",
    "repeat": false,
    "fields": {
      "group_column": {
        "type": "select",
        "label": "Select Group Column",
        "required": true,
        "table": "table_id",
        "bind": "COLUMNS",
        "multiple": false
      },
      "item_column": {
        "type": "select",
        "label": "Select Item Column",
        "required": true,
        "table": "table_id",
        "bind": "COLUMNS",
        "multiple": false,
        "breakLine": true
      },
      "min_group_count": {
        "type": "number",
        "label": "Mindestanzahl der Gruppen",
        "required": true,
        "val": "3"
      },
      "min_group_size": {
        "type": "number",
        "label": "Minimale Gruppengröße",
        "required": true,
        "val": "1",
        "breakLine": true
      },
      "ordered": {
        "type": "select",
        "label": "Geordnet / Ungeordnet",
        "required": true,
        "options": {
          "ordered": {
            "label": "Bestellt"
          },
          "unordered": {
            "label": "Ungeordnet"
          }
        },
        "val": "unordered"
      },
      "item_order": {
        "type": "select",
        "label": "Bestellung",
        "required": true,
        "options": {
          "no": {
            "label": "-"
          },
          "ascending": {
            "label": "Aufsteigend"
          },
          "descending": {
            "label": "Absteigend"
          }
        },
        "val": "no",
        "breakLine": true,
        "show_if": "ordered == 'unordered'"
      },
      "output_type": {
        "type": "select",
        "label": "Ausgabetyp",
        "required": true,
        "options": {
          "item_group_list": {
            "label": "Liste der gefundenen Gruppen"
          },
          "item_group_column": {
            "label": "Gefundene Gruppen zuordnen"
          }
        },
        "val": "item_group_list"
      }
    }
  }
}