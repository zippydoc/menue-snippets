{
  "options": {
    "type": "fieldset",
    "Beschriftung": "Ersatztabelle",
    "repeat": false,
    "fields": {
      "incoming_value_to_replace.type": {
        "type": "hidden",
        "val": "replacement_table"
      },
      "incoming_value_to_replace.value": {
        "type": "text",
        "Beschriftung": "Eingehender Wert zum Ersetzen",
        "required": true,
        "show_if": "incoming_value_to_replace.type=='user_specified_value' || incoming_value_to_replace.type=='begins_with' || incoming_value_to_replace.type=='ends_with'",
        "val": "",
        "style": "min-width: 170px"
      },
      "incoming_value_to_replace.regex": {
        "type": "text",
        "Beschriftung": "Regulärer Ausdruck",
        "required": true,
        "show_if": "incoming_value_to_replace.type=='regex'",
        "val": "(.*),(.*),(.*)\\s(\\d{5})(-\\d{4})?",
        "style": "min-width: 200px"
      },
      "replace_table.table_id": {
        "type": "select",
        "Beschriftung": "Ersatztabelle",
        "show_if": "incoming_value_to_replace.type=='replacement_table'",
        "bind": "TABLES",
        "required": true
      },
      "replace_table.find_column": {
        "type": "select",
        "Beschriftung": "Wählen Sie Spalte suchen",
        "show_if": "incoming_value_to_replace.type=='replacement_table'",
        "table": "replace_table.table_id",
        "bind": "COLUMNS",
        "required": true
      },
      "replace_table.replace_with_column": {
        "type": "select",
        "Beschriftung": "Wählen Sie Ersetzen durch Spalte",
        "show_if": "incoming_value_to_replace.type=='replacement_table'",
        "table": "replace_table.table_id",
        "bind": "COLUMNS",
        "required": true
      },
      "incoming_value_to_replace.partial_match": {
        "type": "select",
        "Beschriftung": "Teilweise Übereinstimmung",
        "show_if": "incoming_value_to_replace.type=='user_specified_value' || incoming_value_to_replace.type=='replacement_table'",
        "options": {
          "full_match": {
            "Beschriftung": "Vollständige Übereinstimmung"
          },
          "full_and_partial_match": {
            "Beschriftung": "Vollständige und teilweise Übereinstimmung"
          },
          "partial_match_only": {
            "Beschriftung": "Nur partielle Übereinstimmung"
          }
        },
        "val": "full_and_partial_match"
      },
      "replace_with.value_type": {
        "type": "select",
        "Beschriftung": "Ersetzen durch",
        "show_if": "incoming_value_to_replace.type!='regex' && incoming_value_to_replace.type!='replacement_table'",
        "options": {
          "user_specified_value": {
            "Beschriftung": "Benutzerdefinierter Wert"
          },
          "average": {
            "Beschriftung": "Spaltendurchschnitt"
          },
          "median": {
            "Beschriftung": "Spalte Median"
          },
          "mode": {
            "Beschriftung": "Spaltenmodus"
          },
          "sum": {
            "Beschriftung": "Spaltensumme"
          },
          "table": {
            "Beschriftung": "Tabellenspalte"
          }
        },
        "val": "user_specified_value",
        "style": "min-width: 190px"
      },
      "replace_with.value": {
        "type": "text",
        "Beschriftung": "Ersetzen durch Wert",
        "show_if": "incoming_value_to_replace.type!='regex' && replace_with.value_type=='user_specified_value' && incoming_value_to_replace.type!='replacement_table'",
        "val": ""
      },
      "replace_with.regex_value": {
        "type": "text",
        "Beschriftung": "Ersetzen durch Wert",
        "show_if": "incoming_value_to_replace.type=='regex' && incoming_value_to_replace.type!='replacement_table'",
        "val": "\\4: \\2, \\3"
      },
      "replace_with.table": {
        "type": "select",
        "Beschriftung": "Tabelle auswählen",
        "show_if": "incoming_value_to_replace.type!='regex' && replace_with.value_type=='table' && incoming_value_to_replace.type!='replacement_table'",
        "bind": "TABLES",
        "required": true
      },
      "replace_with.column": {
        "type": "select",
        "Beschriftung": "Spalte auswählen",
        "show_if": "incoming_value_to_replace.type!='regex' && replace_with.value_type=='table' && incoming_value_to_replace.type!='replacement_table'",
        "table": "replace_with.table",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "replacement_table_notice": {
        "type": "text",
        "Beschriftung": "",
        "show_if": "incoming_value_to_replace.type=='replacement_table'",
        "val": "Line-break will be ignored in replacement table",
        "disabled": true,
        "width": "100%"
      },
      "use_replace_table_filter": {
        "type": "checkbox",
        "Beschriftung": "Use Filter on \"Replace With\" Table",
        "show_if": "incoming_value_to_replace.type=='replacement_table' || (incoming_value_to_replace.type!='regex' && replace_with.value_type=='table')",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "style": "margin-top: 10px",
        "breakLine": true
      },
      "replace_table_filter_option_box": {
        "type": "fieldset",
        "Beschriftung": "\"Replace With\" Table Filter Options",
        "show_if": "use_replace_table_filter=='true' && (incoming_value_to_replace.type=='replacement_table' || (incoming_value_to_replace.type!='regex' && replace_with.value_type=='table'))",
        "repeat": false,
        "fields": {
          "replace_table_filter_option.filter": {
            "type": "fieldset",
            "Beschriftung": "Add Filter Conditions on \"Replace With\" Table",
            "repeat": true,
            "fields": {
              "initial_op": {
                "type": "select",
                "Beschriftung": "Logik-Operator auswählen",
                "required": true,
                "show_if" :  "$index == 0",
                "options": {
                  "if": {
                    "Beschriftung": "IF"
                  },
                  "if_not": {
                    "Beschriftung": "WENN NICHT"
                  }
                },
                "val": "if"
              },
              "op": {
                "type": "select",
                "Beschriftung": "Logik-Operator auswählen",
                "required": true,
                "show_if" :  "$index > 0",
                "options": {
                  "and": {
                    "Beschriftung": "UND"
                  },
                  "or": {
                    "Beschriftung": "OR"
                  },
                  "and_not": {
                    "Beschriftung": "UND NICHT"
                  },
                  "or_not": {
                    "Beschriftung": "ODER NICHT"
                  }
                },
                "val": "and"
              },
              "column": {
                "type": "select",
                "Beschriftung": "Spalte auswählen",
                "table": "replace_with.table",
                "bind": "COLUMNS",
                "required": true
              },
              "condition": {
                "type": "select",
                "Beschriftung": "Bediener auswählen",
                "required": true,
                "options": {
                  "ENTHÄLT": {
                    "Beschriftung": "ENTHÄLT"
                  },
                  "CONTAINED IN STRING": {
                    "Beschriftung": "ENTHALTEN IN"
                  },
                  "STARTET MIT": {
                    "Beschriftung": "STARTET MIT"
                  },
                  "ENDET MIT": {
                    "Beschriftung": "ENDET MIT"
                  },
                  "=": {
                    "Beschriftung": "EQUAL"
                  },
                  ">": {
                    "Beschriftung": "GRÖSSER ALS"
                  },
                  ">=": {
                    "Beschriftung": "GRÖSSER ODER GLEICH"
                  },
                  "<": {
                    "Beschriftung": "KLEINER ALS"
                  },
                  "<=": {
                    "Beschriftung": "KLEINER ODER GLEICH"
                  },
                  "EMPTY": {
                    "Beschriftung": "IST LEER"
                  },
                  "BLANK": {
                    "Beschriftung": "IST BLANK"
                  },
                  "IS NULL": {
                    "Beschriftung": "IS NULL"
                  },
                  "REGEX-MATCH": {
                    "Beschriftung": "REGEX-MATCH"
                  },
                  "CONTAINED IN TABLE": {
                    "Beschriftung": "IN TABELLE"
                  },
                  "IN REGEX-TABELLE": {
                    "Beschriftung": "IN REGEX-TABELLE"
                  },
                  "DATUM": {
                    "Beschriftung": "DATUM"
                  }
                },
                "val": "ENTHÄLT"
              },
              "date_condition": {
                "type": "select",
                "Beschriftung": "Datumsoperator auswählen",
                "required": true,
                "show_if": "this.condition == 'DATE'",
                "options": {
                  "<": {
                    "Beschriftung": "PRIOR"
                  },
                  "<=": {
                    "Beschriftung": "PRIOR ODER GLEICH"
                  },
                  "=": {
                    "Beschriftung": "EQUAL"
                  },
                  ">": {
                    "Beschriftung": "NACH"
                  },
                  ">=": {
                    "Beschriftung": "NACHHER ODER GLEICH"
                  }
                },
                "val": "="
              },
              "case_sensitive": {
                "type": "select",
                "Beschriftung": "Wählen Sie Case Sensitive",
                "required": true,
                "show_if": "this.condition == 'CONTAINS' || this.condition == 'CONTAINED IN STRING' || this.condition == '=' || this.condition == 'STARTS WITH' || this.condition == 'ENDS WITH' || this.condition == 'REGEX MATCH' || this.condition == 'NOT REGEX MATCH' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "options": {
                  "yes": {
                    "Beschriftung": "Gehäuse empfindlich"
                  },
                  "no": {
                    "Beschriftung": "Groß-/Kleinschreibung nicht beachten"
                  }
                },
                "val": "yes"
              },
              "date_value": {
                "type": "date",
                "Beschriftung": "Datum auswählen",
                "show_if": "this.condition=='DATE'",
                "val": "",
                "required": true
              },
              "value": {
                "type": "text",
                "Beschriftung": "Eingangswert",
                "show_if": "this.condition != 'DATE' && this.condition != 'EMPTY' && this.condition != 'NOT EMPTY' && this.condition != 'BLANK' && this.condition != 'NOT BLANK' && this.condition != 'IS NULL' && this.condition != 'IS NOT NULL' && this.condition != 'CONTAINED IN TABLE' && this.condition != 'NOT CONTAINED IN TABLE' && this.condition != 'IN REGEX TABLE' && this.condition != 'NOT IN REGEX TABLE'",
                "val": "",
                "required": true
              },
              "compare_table": {
                "type": "select",
                "Beschriftung": "Tabelle auswählen",
                "bind": "TABLES",
                "empty": "",
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "required": true
              },
              "compare_column": {
                "type": "select",
                "Beschriftung": "Spalte auswählen",
                "table": "this.compare_table",
                "bind": "COLUMNS",
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "required": true
              },
              "delete": {
                "type": "button",
                "Beschriftung": "Lösche",
                "function": "DELETE_ROW"
              }
            }
          },
          "replace_table_filter_option.apply_to_record": {
            "type": "checkbox",
            "Beschriftung": "Apply to Record on \"Replace With\" Table",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "style": "margin-top: 10px",
            "breakLine": true
          },
          "replace_table_filter_option_apply_to_group_box": {
            "type": "fieldset",
            "Beschriftung": "Apply to Group on \"Replace With\" Table",
            "show_if": "replace_table_filter_option.apply_to_record=='false' && (incoming_value_to_replace.type!='replacement_table' && incoming_value_to_replace.type!='regex' && replace_with.value_type=='table')",
            "repeat": false,
            "fields": {
              "replace_table_filter_option.apply_to_group_columns": {
                "type": "select",
                "Beschriftung": "Gruppenspalten auswählen",
                "required": true,
                "width": "100%",
                "table": "replace_with.table",
                "multiple": true,
                "bind": "COLUMNS",
                "breakLine": true
              }
            }
          },
          "replacement_table_filter_option_apply_to_group_box": {
            "type": "fieldset",
            "Beschriftung": "Apply to Group on \"Replace With\" Table",
            "show_if": "replace_table_filter_option.apply_to_record=='false' && incoming_value_to_replace.type=='replacement_table'",
            "repeat": false,
            "fields": {
              "replacement_table_filter_option.apply_to_group_columns": {
                "type": "select",
                "Beschriftung": "Gruppenspalten auswählen",
                "required": true,
                "width": "100%",
                "table": "replace_table.table_id",
                "multiple": true,
                "bind": "COLUMNS",
                "breakLine": true
              }
            }
          }
        }
      }
    }
  }
}