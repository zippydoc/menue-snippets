{
  "options": {
    "type": "fieldset",
    "Beschriftung": "Optionen auswählen",
    "repeat": false,
    "fields": {
      "options.type": {
        "type": "hidden",
        "val": "custom"
      },
      "options.custom.table": {
        "type": "fieldset",
        "Beschriftung": "Planungsposition",
        "repeat": true,
        "fields": {
          "item": {
            "type": "text",
            "Beschriftung": "Posten",
            "val": "",
            "required": true
          },
          "position": {
            "type": "select",
            "Beschriftung": "Position",
            "options": {
              "Umsatzerlöse": {
                "Beschriftung": "Umsatzerlöse"
              },
              "Sonstige Erlöse": {
                "Beschriftung": "Sonstige Erlöse"
              },
              "Selbstkosten": {
                "Beschriftung": "Selbstkosten"
              },
              "Marketing-Aufwand": {
                "Beschriftung": "Marketing-Aufwand"
              },
              "Betriebskosten": {
                "Beschriftung": "Betriebskosten"
              },
              "Allgemeine Verwaltungskosten": {
                "Beschriftung": "Allgemeine Verwaltungskosten"
              },
              "Mietaufwendungen": {
                "Beschriftung": "Mietaufwendungen"
              },
              "Gehälter": {
                "Beschriftung": "Gehälter"
              },
              "Steuer": {
                "Beschriftung": "Steuer"
              },
              "Zinserträge": {
                "Beschriftung": "Zinserträge"
              },
              "Zinsaufwendungen": {
                "Beschriftung": "Zinsaufwendungen"
              },
              "Investition": {
                "Beschriftung": "Investition"
              },
              "Wartungsinvestitionen": {
                "Beschriftung": "Wartungsinvestitionen"
              },
              "Erweiterungsinvestitionen": {
                "Beschriftung": "expansion capex,
              },
              depreciation": {
                "Beschriftung": "Abschreibung"
              },
              "Abschreibung": {
                "Beschriftung": "Abschreibung"
              },
              "außerordentliche Erträge": {
                "Beschriftung": "außerordentliche Erträge"
              },
              "außerordentliche Aufwendungen": {
                "Beschriftung": "außerordentliche Aufwendungen"
              }
            },
            "val": "Umsatzerlöse",
            "required": true
          },
          "amount": {
            "type": "number",
            "Beschriftung": "Betrag",
            "val": "",
            "required": true
          },
          "initial_date": {
            "type": "date",
            "Beschriftung": "Anfangsdatum",
            "val": "",
            "required": true
          },
          "periodicy": {
            "type": "select",
            "Beschriftung": "Periodizität",
            "required": true,
            "options": {
              "Einmalig": {
                "Beschriftung": "Einmalig"
              },
              "Täglich": {
                "Beschriftung": "Täglich"
              },
              "Werktäglich": {
                "Beschriftung": "Werktäglich"
              },
              "Wöchentlich": {
                "Beschriftung": "Wöchentlich"
              },
              "Monatlich": {
                "Beschriftung": "Monatlich"
              },
              "vierteljährlich": {
                "Beschriftung": "vierteljährlich"
              },
              "Jährlich": {
                "Beschriftung": "Jährlich"
              }
            },
            "val": "Einmalig"
          },
          "growth": {
            "type": "number",
            "Beschriftung": "Wachstum",
            "show_if": "this.periodicy!='One-Off'",
            "val": "",
            "required": true
          },
          "growth_period": {
            "type": "select",
            "Beschriftung": "Wachstumsperiode",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Wöchentlich": {
                "Beschriftung": "Wöchentlich"
              },
              "Monatlich": {
                "Beschriftung": "Monat für Monat"
              },
              "vierteljährlich": {
                "Beschriftung": "Quartal für Quartal"
              },
              "Jährlich": {
                "Beschriftung": "Jahr auf Jahr"
              }
            },
            "val": "Wöchentlich"
          },
          "growth_pattern": {
            "type": "select",
            "Beschriftung": "Wachstumsmuster",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Aufsummierung": {
                "Beschriftung": "Aufsummierung"
              },
              "Linear": {
                "Beschriftung": "Linear"
              },
              "Jump-Fix": {
                "Beschriftung": "Jump-Fix"
              }
            },
            "val": "Aufsummierung"
          },
          "final_date": {
            "type": "date",
            "Beschriftung": "Endgültiges Datum",
            "show_if": "this.periodicy!='One-Off'",
            "val": ""
          },
          "delete": {
            "type": "button",
            "Beschriftung": "Lösche",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.end_date": {
        "type": "date",
        "Beschriftung": "Enddatum der Tabelle",
        "show_if": "options.type=='process' || options.type=='custom'",
        "val": "",
        "required": true,
        "style": "width: 300px"
      }
    }
  }
}