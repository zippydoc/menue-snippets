{
  "options": {
    "type": "fieldset",
    "label": "Optionen auswählen",
    "repeat": false,
    "fields": {
      "options.type": {
        "type": "select",
        "label": "Typ",
        "options": {
          "standard": {
            "label": "Standard-Schlagkurve generieren"
          },
          "custom": {
            "label": "Benutzerdefinierte Aufprallkurve generieren"
          },
          "apply": {
            "label": "Ereignis-Kurve anwenden"
          }
        },
        "val": "standard",
        "breakLine": true
      },
      "options.standard.start": {
        "type": "text",
        "label": "Anfänglicher Zeitraum",
        "show_if": "options.type==''standard'' && options.standard.end_value_equals_initial_value==''no''",
        "val": "1",
        "required": true
      },
      "options.standard.maximum": {
        "type": "text",
        "label": "Maximaler Zeitraum",
        "show_if": "options.type==''standard''",
        "val": "50",
        "required": true
      },
      "options.standard.end": {
        "type": "text",
        "label": "Ende Periode",
        "show_if": "options.type==''standard''",
        "val": "100",
        "required": true,
        "breakLine": true
      },
      "options.standard.multiplier_at_maximum_impact_level": {
        "type": "text",
        "label": "Maximaler Multiplikator",
        "show_if": "options.type==''standard''",
        "width": "100%",
        "val": "2",
        "required": true,
        "breakLine": true
      },
      "options.standard.end_value_equals_initial_value": {
        "type": "checkbox",
        "label": "Endwert ist gleich Anfangswert",
        "show_if": "options.type==''standard''",
        "width": "100%",
        "val": "yes",
        "isOn": "yes",
        "isOff": "no",
        "breakLine": true
      },
      "options.standard.multiplier_end_value": {
        "type": "text",
        "label": "Multiplikator Endwert",
        "width": "100%",
        "show_if": "options.type==''standard'' && options.standard.end_value_equals_initial_value==''no''",
        "val": "",
        "breakLine": true
      },
      "options.standard.maximum_plateau": {
        "type": "checkbox",
        "label": "Maximales Plateau",
        "show_if": "options.type==''standard''",
        "width": "100%",
        "val": "yes",
        "isOn": "yes",
        "isOff": "no",
        "breakLine": true
      },
      "options.standard.no_of_periods_prior_defined_maximum_point": {
        "type": "text",
        "label": "Anzahl der Perioden vor dem definierten maximalen Punkt",
        "show_if": "options.type==''standard'' && options.standard.maximum_plateau==''yes''",
        "val": "0",
        "style": "width: 250px"
      },
      "options.standard.no_of_periods_post_defined_maximum_point": {
        "type": "text",
        "label": "Anzahl der Perioden nach definiertem Maximalpunkt",
        "show_if": "options.type==''standard'' && options.standard.maximum_plateau==''yes''",
        "val": "0",
        "style": "width: 250px",
        "breakLine": true
      },
      "options.standard.left_slope": {
        "type": "select",
        "label": "Linke Steigung",
        "show_if": "options.type==''standard''",
        "options": {
          "vertical": {
            "label": "Vertikal"
          },
          "linear": {
            "label": "Linear"
          },
          "standard_distribution": {
            "label": "Standard-Verteilung"
          }
        },
        "val": "standard_distribution"
      },
      "options.standard.use_auto_calculated_sigma_for_left_slope": {
        "type": "checkbox",
        "label": "Automatisch berechnetes linkes Sigma",
        "show_if": "options.type==''standard'' && options.standard.left_slope==''standard_distribution''",
        "val": "true",
        "isOn": "true",
        "isOff": "false"
      },
      "options.standard.left_slope_sigma": {
        "type": "text",
        "label": "Linke Steigung Sigma",
        "show_if": "options.type==''standard'' && options.standard.left_slope==''standard_distribution'' && options.standard.use_auto_calculated_sigma_for_left_slope==''false''",
        "val": ""
      },
      "options.standard.right_slope": {
        "type": "select",
        "label": "Rechte Steigung",
        "show_if": "options.type==''standard''",
        "required": true,
        "options": {
          "vertical": {
            "label": "Vertikal"
          },
          "linear": {
            "label": "Linear"
          },
          "standard_distribution": {
            "label": "Standard-Verteilung"
          }
        },
        "val": "standard_distribution"
      },
      "options.standard.use_auto_calculated_sigma_for_right_slope": {
        "type": "checkbox",
        "label": "Automatisch berechnetes rechtes Sigma",
        "show_if": "options.type==''standard'' && options.standard.right_slope==''standard_distribution''",
        "val": "true",
        "isOn": "true",
        "isOff": "false"
      },
      "options.standard.right_slope_sigma": {
        "type": "text",
        "label": "Rechte Steigung Sigma",
        "show_if": "options.type==''standard'' && options.standard.right_slope==''standard_distribution'' && options.standard.use_auto_calculated_sigma_for_right_slope==''false''",
        "val": "",
        "breakLine": true
      },
      "options.standard.event_name": {
        "type": "text",
        "label": "Ereignis Name",
        "show_if": "options.type==''standard''",
        "val": "Event"
      },
      "options.custom.event_table": {
        "type": "select",
        "label": "Ereignis-Tabelle",
        "show_if": "options.type==''custom''",
        "bind": "TABLES",
        "empty": "",
        "required": true,
        "breakLine": true
      },
      "options.custom.event_date_column": {
        "type": "select",
        "label": "Spalte "Ereignisdatum",
        "show_if": "options.type==''custom''",
        "required": true,
        "table": "options.custom.event_table",
        "bind": "COLUMNS"
      },
      "options.custom.event_name_column": {
        "type": "select",
        "label": "Spalte "Ereignisname",
        "show_if": "options.type==''custom''",
        "required": true,
        "table": "options.custom.event_table",
        "bind": "COLUMNS"
      },
      "options.custom.event_name": {
        "type": "text",
        "label": "Ereignis Name",
        "show_if": "options.type==''custom''",
        "val": "Weekend",
        "required": true,
        "breakLine": true
      },
      "options.custom.base_period": {
        "type": "select",
        "label": "Basiszeitraum",
        "show_if": "options.type==''custom''",
        "required": true,
        "options": {
          "months": {
            "label": "Vor N Monaten"
          },
          "weeks": {
            "label": "Vor N Wochen"
          },
          "days": {
            "label": "Vor N Tagen"
          }
        },
        "val": "days"
      },
      "options.custom.base_period_n": {
        "type": "text",
        "label": "N",
        "show_if": "options.type==''custom''",
        "val": "5",
        "required": true,
        "breakLine": true
      },
      "options.custom.leading_impact_days": {
        "type": "text",
        "label": "Führende Aufschlagperioden",
        "show_if": "options.type==''custom''",
        "val": "0",
        "required": true
      },
      "options.custom.trailing_impact_days": {
        "type": "text",
        "label": "Nachlaufende Einflussperioden",
        "show_if": "options.type==''custom''",
        "val": "0",
        "required": true,
        "breakLine": true
      },
      "options.custom.value_column": {
        "type": "select",
        "label": "Wert-Spalte",
        "show_if": "options.type==''custom''",
        "required": true,
        "table": "options.custom.event_table",
        "bind": "COLUMNS",
        "breakLine": true
      },
      "options.custom.average": {
        "type": "hidden",
        "val": "true"
      },
      "options.apply.event_name": {
        "type": "text",
        "label": "Ereignis Name",
        "show_if": "options.type==''apply''",
        "val": "Weekend",
        "required": true,
        "breakLine": true
      },
      "apply_event_table_box": {
        "type": "fieldset",
        "label": "Ereignistabelle auswählen",
        "show_if": "options.type==''apply''",
        "repeat": false,
        "fields": {
          "options.apply.event_table": {
            "type": "select",
            "label": "Ereignis-Tabelle",
            "bind": "TABLES",
            "empty": "",
            "required": true,
            "breakLine": true
          },
          "options.apply.event_table_event_date_column": {
            "type": "select",
            "label": "Spalte "Ereignisdatum",
            "required": true,
            "table": "options.apply.event_table",
            "bind": "COLUMNS"
          },
          "options.apply.event_table_event_name_column": {
            "type": "select",
            "label": "Spalte "Ereignisname",
            "required": true,
            "table": "options.apply.event_table",
            "bind": "COLUMNS"
          },
          "options.apply.event_table_value_column": {
            "type": "select",
            "label": "Wert-Spalte",
            "required": true,
            "table": "options.apply.event_table",
            "bind": "COLUMNS",
            "breakLine": true
          }
        }
      },
      "apply_impact_table_box": {
        "type": "fieldset",
        "label": "Auswirkungstabelle auswählen",
        "show_if": "options.type==''apply''",
        "repeat": false,
        "fields": {
          "options.apply.impact_table": {
            "type": "select",
            "label": "Auswirkungstabelle",
            "bind": "TABLES",
            "empty": "",
            "required": true,
            "breakLine": true
          },
          "options.apply.on_average": {
            "type": "hidden",
            "val": "true"
          },
          "options.apply.impact_table_event_date_column": {
            "type": "select",
            "label": "Spalte "Ereignisdatum",
            "required": true,
            "table": "options.apply.impact_table",
            "bind": "COLUMNS"
          },
          "options.apply.impact_table_event_name_column": {
            "type": "select",
            "label": "Spalte "Ereignisname",
            "required": true,
            "table": "options.apply.impact_table",
            "bind": "COLUMNS"
          },
          "options.apply.impact_table_impact_column": {
            "type": "select",
            "label": "Impact-Spalte",
            "required": true,
            "table": "options.apply.impact_table",
            "bind": "COLUMNS",
            "breakLine": true
          }
        }
      }
    }
  }
}