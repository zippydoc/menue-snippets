{
  "options": {
    "type": "fieldset", 
    "label": "Optionen auswählen", 
    "repeat": false, 
    "fields": {
      "options.from": {
        "type": "hidden", 
        "val": "web"
      }, 
      "options.webservice": {
        "type": "select", 
        "label": "Webservice auswählen", 
        "options": {
          "github": {
            "label": "Github"
          }, 
          "ms_one_drive": {
            "label": "Microsoft OneDrive"
          }, 
          "dropbox": {
            "label": "Dropbox"
          }, 
          "google_drive": {
            "label": "Google Drive (Coming soon)"
          }
        }, 
        "val": "github", 
        "required": true, 
        "breakLine": true
      }, 
      "options.output_format": {
        "type": "select", 
        "label": "Typ auswählen", 
        "options": {
          "csv_table": {
            "label": "CSV-Tabelle"
          }, 
          "line_by_line": {
            "label": "Zeile für Zeile"
          }, 
          "word_by_word": {
            "label": "Wort für Wort"
          }, 
          "file_list": {
            "label": "Dateiliste"
          }
        }, 
        "val": "csv_table", 
        "required": true
      }, 
      "options.word_pattern_type": {
        "type": "select", 
        "label": "Wort-Muster", 
        "show_if": "options.output_format=='word_by_word' && options.specify_word_pattern=='true'", 
        "options": {
          "regex": {
            "label": "Regulärer Ausdruck"
          }
        }, 
        "val": "regex", 
        "required": true
      }, 
      "options.word_pattern_regex": {
        "type": "text", 
        "label": "Regulärer Ausdruck", 
        "show_if": "options.output_format=='word_by_word' && options.specify_word_pattern=='true' && options.word_pattern_type=='regex'", 
        "required": true, 
        "val": "[a-z][1-9]", 
        "breakLine": true
      }, 
      "options.column_setting": {
        "type": "checkbox", 
        "label": "Column Settings", 
        "show_if": "options.output_format!='file_list'", 
        "val": "false", 
        "isOn": "true", 
        "isOff": "false", 
        "breakLine": true
      }, 
      "column_setting_frame": {
        "type": "fieldset", 
        "label": "Column Settings", 
        "show_if": "options.output_format!='file_list' && options.column_setting=='true'", 
        "repeat": false, 
        "fields": {
          "options.add_row_column": {
            "type": "checkbox", 
            "label": "Spalte "Zeile hinzufügen"", 
            "show_if": "options.output_format=='word_by_word'", 
            "val": "true", 
            "isOn": "true", 
            "isOff": "false", 
            "breakLine": true
          }, 
          "options.add_word_count_column": {
            "type": "checkbox", 
            "label": "Add 'Word Count' Column", 
            "show_if": "options.output_format=='word_by_word'", 
            "val": "false", 
            "isOn": "true", 
            "isOff": "false", 
            "breakLine": true
          }, 
          "options.add_word_nonword_column": {
            "type": "checkbox", 
            "label": "Add 'Word & Non-Word' Column", 
            "show_if": "options.output_format=='word_by_word'", 
            "val": "false", 
            "isOn": "true", 
            "isOff": "false", 
            "breakLine": true
          }, 
          "options.add_section_column": {
            "type": "checkbox", 
            "label": "Abschnittsspalte hinzufügen", 
            "show_if": "options.output_format=='word_by_word'", 
            "val": "true", 
            "isOn": "true", 
            "isOff": "false", 
            "breakLine": true
          }, 
          "section_column_types_frame": {
            "type": "fieldset", 
            "label": "Section Column Types", 
            "show_if": "options.output_format=='word_by_word' && options.add_section_column=='true'", 
            "repeat": false, 
            "fields": {
              "options.section_columns.add_paragraph_section_column": {
                "type": "checkbox", 
                "label": "Absatz", 
                "val": "false", 
                "isOn": "true", 
                "isOff": "false", 
                "breakLine": true
              }, 
              "options.section_columns.add_custom_section_column": {
                "type": "checkbox", 
                "label": "Benutzerdefiniertes Abschnittsbegrenzungszeichen", 
                "val": "false", 
                "isOn": "true", 
                "isOff": "false"
              }, 
              "options.section_columns.custom_delimiter": {
                "type": "text", 
                "label": "Begrenzer(1 Zeichen)", 
                "show_if": "options.section_columns.add_custom_section_column=='true'", 
                "maxLength": 1, 
                "required": true, 
                "breakLine": true
              }, 
              "options.section_columns.add_brackets_punctuation_section_column": {
                "type": "checkbox", 
                "label": "Klammern und Interpunktion", 
                "val": "false", 
                "isOn": "true", 
                "isOff": "false"
              }, 
              "options.section_columns.brackets_punctuation_section_column_type": {
                "type": "select", 
                "label": "Brackets Type", 
                "show_if": "options.section_columns.add_brackets_punctuation_section_column=='true'", 
                "options": {
                  "nesting_structure": {
                    "label": "Nesting Structure"
                  }, 
                  "inner_bracket": {
                    "label": "Inner Bracket"
                  }, 
                  "show_all": {
                    "label": "Alles anzeigen"
                  }
                }, 
                "val": "nesting_structure", 
                "required": true, 
                "breakLine": true
              }
            }
          }, 
          "options.add_filename_column": {
            "type": "checkbox", 
            "label": "Spalte für Dateinamen hinzufügen", 
            "val": "false", 
            "isOn": "true", 
            "isOff": "false", 
            "style": "margin-top: 10px", 
            "breakLine": true
          }
        }
      }, 
      "options.is_cloud_dir": {
        "type": "checkbox", 
        "label": "Verzeichnis importieren", 
        "show_if": "options.output_format!='file_list'", 
        "val": "false", 
        "isOn": "true", 
        "isOff": "false", 
        "style": "margin-top: 10px", 
        "breakLine": true
      }, 
      "options.use_filename_as_output_table_name": {
        "type": "checkbox", 
        "label": "Dateiname als Tabellenname verwenden", 
        "show_if": "options.output_format!='file_list' && options.is_cloud_dir=='false'", 
        "val": "false", 
        "isOn": "true", 
        "isOff": "false", 
        "breakLine": true
      }, 
      "options.unify_in_one_table": {
        "type": "checkbox", 
        "label": "Vereinheitlichen in einer Tabelle", 
        "show_if": "options.output_format!='file_list' && options.is_cloud_dir=='true'", 
        "val": "false", 
        "isOn": "true", 
        "isOff": "false"
      }, 
      "options.suffix": {
        "type": "select", 
        "label": "Suffix", 
        "show_if": "options.output_format!='file_list' && options.is_cloud_dir=='true' && options.unify_in_one_table=='false'", 
        "options": {
          "number": {
            "label": "Nummer"
          }, 
          "filename": {
            "label": "Dateiname"
          }
        }, 
        "val": "number", 
        "required": true, 
        "breakLine": true
      }, 
      "options.is_github_private": {
        "type": "checkbox", 
        "label": "Repository ist privat", 
        "show_if": "options.webservice=='github'", 
        "val": "false", 
        "isOn": "true", 
        "isOff": "false", 
        "breakLine": true
      }, 
      "options.include_subdir": {
        "type": "checkbox", 
        "label": "Unterverzeichnisse einbeziehen", 
        "show_if": "options.output_format=='file_list'", 
        "val": "true", 
        "isOn": "true", 
        "isOff": "false", 
        "breakLine": true
      }, 
      "options.file_list.add_change_date_column": {
        "type": "checkbox", 
        "label": "Spalte "Änderungsdatum hinzufügen"", 
        "show_if": "options.output_format=='file_list'", 
        "val": "false", 
        "isOn": "true", 
        "isOff": "false", 
        "breakLine": true
      }, 
      "options.github_token": {
        "type": "text", 
        "label": "das persönliche Github-Zugangs-Token angeben", 
        "show_if": "options.webservice=='github' && options.is_github_private=='true'", 
        "required": true, 
        "width": "100%", 
        "breakLine": true
      }, 
      "options.link_directory": {
        "type": "text", 
        "label": "Link eingeben z. B. https://github.com/zippydoc/test", 
        "show_if": "options.webservice=='github' && options.output_format!='file_list' && options.is_cloud_dir=='true'", 
        "required": true, 
        "width": "100%", 
        "breakLine": true
      }, 
      "options.link_directory_4_file_list": {
        "type": "text", 
        "label": "Link eingeben z. B. https://github.com/zippydoc/test", 
        "show_if": "options.webservice=='github' && options.output_format=='file_list'", 
        "required": true, 
        "width": "100%", 
        "breakLine": true
      }, 
      "options.link_file": {
        "type": "text", 
        "label": "Link eingeben z. B. https://github.com/zippydoc/test/blob/main/example.csv", 
        "show_if": "options.webservice=='github' && options.is_cloud_dir=='false' && options.output_format=='csv_table'", 
        "required": true, 
        "width": "100%", 
        "breakLine": true
      }, 
      "options.link_text_file": {
        "type": "text", 
        "label": "Link eingeben z.B. https://github.com/zippydoc/test/blob/main/example.txt(json, csv, etc)", 
        "show_if": "options.webservice=='github' && options.is_cloud_dir=='false' && options.output_format!='csv_table' && options.output_format!='file_list'", 
        "required": true, 
        "width": "100%", 
        "breakLine": true
      }, 
      "options.one_drive.access_token": {
        "type": "text", 
        "label": "OAuth Access Token", 
        "show_if": "options.webservice=='ms_one_drive' && options.is_cloud_dir=='false'", 
        "required": true, 
        "width": "100%", 
        "breakLine": true
      }, 
      "options.one_drive.file_path": {
        "type": "text", 
        "label": "Enter path to file e.g. ZippyDoc/Subdir1/test.txt", 
        "show_if": "options.webservice=='ms_one_drive' && options.output_format!='file_list' && options.is_cloud_dir=='false'", 
        "required": true, 
        "width": "100%", 
        "breakLine": true
      }, 
      "options.one_drive.dir_path": {
        "type": "text", 
        "label": "Enter path to dir e.g. ZippyDoc/Subdir1", 
        "show_if": "options.webservice=='ms_one_drive' && (options.output_format=='file_list' || options.is_cloud_dir=='true')", 
        "width": "100%", 
        "breakLine": true
      }, 
      "options.dropbox.auth_code": {
        "type": "text", 
        "label": "Dropbox Authorization Code", 
        "show_if": "options.webservice=='dropbox' && options.is_cloud_dir=='false'", 
        "required": true, 
        "width": "100%", 
        "breakLine": true
      }, 
      "options.dropbox.file_path": {
        "type": "text", 
        "label": "Enter path to file e.g. ZippyDoc/Subdir1/test.txt", 
        "show_if": "options.webservice=='dropbox' && options.output_format!='file_list' && options.is_cloud_dir=='false'", 
        "required": true, 
        "width": "100%", 
        "breakLine": true
      }, 
      "options.dropbox.dir_path": {
        "type": "text", 
        "label": "Enter path to dir e.g. ZippyDoc/Subdir1", 
        "show_if": "options.webservice=='dropbox' && (options.output_format=='file_list' || options.is_cloud_dir=='true')", 
        "width": "100%", 
        "breakLine": true
      }, 
      "dir_filter_frame": {
        "type": "fieldset", 
        "label": "Filtern der Dateien im Verzeichnis", 
        "show_if": "options.output_format!='file_list' && options.is_cloud_dir=='true'", 
        "repeat": false, 
        "fields": {
          "options.dir_filter.filter_type": {
            "type": "select", 
            "label": "Filter Typ", 
            "options": {
              "all": {
                "label": "Alle"
              }, 
              "contains": {
                "label": "Enthält"
              }, 
              "starts_with": {
                "label": "Beginnt mit"
              }, 
              "ends_with": {
                "label": "Endet mit"
              }, 
              "regex": {
                "label": "Regulärer Ausdruck"
              }
            }, 
            "val": "all", 
            "required": true
          }, 
          "options.dir_filter.filter_string": {
            "type": "text", 
            "label": "Zeichenfolge eingeben", 
            "show_if": "options.dir_filter.filter_type!='all'", 
            "required": true, 
            "width": "100%"
          }
        }
      }
    }
  }
}