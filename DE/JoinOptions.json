{
  "options": {
    "type": "fieldset", 
    "label": "Auswaehlen Verbinden Options", 
    "repeat": false, 
    "fields": {
      "join_type": {
        "type": "radio", 
        "label": "Verbinden By", 
        "val": "join_by_specific_field", 
        "values": {
          "join_by_specific_field": "Specific Field", 
          "join_by_record_position": "Record Position"
        }, 
        "breakLine": true
      }, 
      "join_fields": {
        "type": "fieldset", 
        "label": "Verbinden By Columns", 
        "show_if": "join_type=='join_by_specific_field'", 
        "repeat": true, 
        "fields": {
          "left_table_field": {
            "type": "select", 
            "label": "Left Tabelle Column", 
            "table": "left_table.table_id", 
            "bind": "COLUMNS"
          }, 
          "right_table_field": {
            "type": "select", 
            "label": "Right Tabelle Column", 
            "table": "right_table.table_id", 
            "bind": "COLUMNS"
          }, 
          "delete": {
            "type": "button", 
            "label": "Loeschen", 
            "function": "DELETE_ROW"
          }
        }
      }
    }
  }
}
