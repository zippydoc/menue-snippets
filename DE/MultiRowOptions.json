{
  "options_box": {
    "type": "fieldset",
    "label": "Optionen",
    "repeat": false,
    "fields": {
      "options.task": {
        "type": "hidden",
        "val": "multi_row"
      },
      "options.add_columns": {
        "type": "fieldset",
        "label": "Neue Spalten hinzufügen",
        "repeat": true,
        "fields": {
          "new_column_name": {
            "type": "text",
            "label": "Neuer Spaltenname",
            "val": "",
            "breakLine": true
          },
          "multi_row_functions__function": {
            "type": "select",
            "label": "Funktion",
            "required": true,
            "options": {
              "trailing_row_n_average": {
                "label": "Nachlaufender Zeilen-N-Durchschnitt"
              },
              "index_from_row_n": {
                "label": "Index von Zeile-N"
              },
              "absolute_growth": {
                "label": "Absolutes Wachstum"
              },
              "relative_growth": {
                "label": "Relatives Wachstum"
              },
              "compound_growth": {
                "label": "Zusammengesetztes Wachstum"
              }
            },
            "val": "trailing_row_n_average"
          },
          "multi_row_functions__sel_column": {
            "type": "select",
            "label": "Spalte",
            "show_if": "this.multi_row_functions__function=='trailing_row_n_average' || this.multi_row_functions__function=='index_from_row_n' || this.multi_row_functions__function=='absolute_growth' || this.multi_row_functions__function=='relative_growth' || this.multi_row_functions__function=='compound_growth'",
            "table": "input_table",
            "bind": "COLUMNS",
            "required": true
          },
          "multi_row_functions__n_value": {
            "type": "text",
            "label": "N (positive Ganzzahl)",
            "show_if": "this.multi_row_functions__function=='trailing_row_n_average' || this.multi_row_functions__function=='index_from_row_n' || this.multi_row_functions__function=='compound_growth'",
            "val": "1",
            "required": true,
            "breakLine": true
          },
          "format__category": {
            "type": "select",
            "label": "Format",
            "required": true,
            "options": {
              "standard": {
                "label": "Standard"
              },
              "number": {
                "label": "Nummer"
              },
              "percentage": {
                "label": "Prozentsatz"
              },
              "text": {
                "label": "Text"
              },
              "date": {
                "label": "Datum"
              },
              "currency": {
                "label": "Währung"
              }
            },
            "val": "standard"
          },
          "format__rounding": {
            "type": "select",
            "label": "Abrunden",
            "show_if": "this.format__category=='number' || this.format__category=='percentage' || this.format__category=='currency'",
            "required": true,
            "options": {
              "no_rounding": {
                "label": "Keine Rundung"
              },
              "0": {
                "label": "0 Ziffern"
              },
              "1": {
                "label": "1 Ziffern"
              },
              "2": {
                "label": "2 Ziffern"
              },
              "3": {
                "label": "3 Ziffern"
              },
              "4": {
                "label": "4 Ziffern"
              },
              "5": {
                "label": "5 Ziffern"
              },
              "6": {
                "label": "6 Ziffern"
              },
              "7": {
                "label": "7 Ziffern"
              },
              "8": {
                "label": "8 Ziffern"
              },
              "9": {
                "label": "9 Ziffern"
              }
            },
            "val": "2"
          },
          "format__use_1000_separator": {
            "type": "checkbox",
            "label": "Use 1000 Separator(.)",
            "show_if": "this.format__category=='number' || this.format__category=='percentage' || this.format__category=='currency'",
            "val": "true",
            "isOn": "true",
            "isOff": "false"
          },
          "format__currency_symbol": {
            "type": "select",
            "label": "Symbol",
            "show_if": "this.format__category=='currency'",
            "required": true,
            "options": {
              "dollar": {
                "label": "$"
              },
              "euro": {
                "label": "€"
              },
              "pound": {
                "label": "£"
              }
            },
            "val": "dollar"
          },
          "format__date_format": {
            "type": "select",
            "label": "Typ",
            "show_if": "this.format__category=='date'",
            "required": true,
            "options": {
              "mm/dd/yyyy": {
                "label": "3/14/2012"
              },
              "D, M dd, Y": {
                "label": "Mittwoch, 14. März 2012"
              },
              "yyyy-mm-dd": {
                "label": "2012-03-14"
              }
            },
            "val": "mm/dd/yyyy",
            "breakLine": true
          },
          "apply_to_group__enabled": {
            "type": "checkbox",
            "label": "Anwenden auf Gruppe",
            "show_if": "this.task_type!='static_value'",
            "val": "false",
            "isOn": "true",
            "isOff": "false"
          },
          "apply_to_group__group_columns": {
            "type": "select",
            "label": "Gruppenspalte(n)",
            "show_if": "this.apply_to_group__enabled == 'true' && this.task_type!='static_value'",
            "table": "input_table",
            "bind": "COLUMNS",
            "multiple": true,
            "required": true
          },
          "delete": {
            "type": "button",
            "label": "Lösche",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.use_filter": {
        "type": "checkbox",
        "label": "Filter verwenden",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "style": "margin-top: 10px",
        "breakLine": true
      },
      "filter_box": {
        "type": "fieldset",
        "label": "Filter-Optionen",
        "show_if": "options.use_filter=='true'",
        "repeat": false,
        "fields": {
          "options.filter": {
            "type": "fieldset",
            "label": "Filterbedingungen hinzufügen",
            "repeat": true,
            "fields": {
              "initial_op": {
                "type": "select",
                "label": "Logik-Operator auswählen",
                "required": true,
                "show_if" :  "$index == 0",
                "options": {
                  "if": {
                    "label": "IF"
                  },
                  "if_not": {
                    "label": "WENN NICHT"
                  }
                },
                "val": "if"
              },
              "op": {
                "type": "select",
                "label": "Logik-Operator auswählen",
                "required": true,
                "show_if" :  "$index > 0",
                "options": {
                  "and": {
                    "label": "UND"
                  },
                  "or": {
                    "label": "OR"
                  },
                  "and_not": {
                    "label": "UND NICHT"
                  },
                  "or_not": {
                    "label": "ODER NICHT"
                  }
                },
                "val": "and"
              },
              "column": {
                "type": "select",
                "label": "Spalte auswählen",
                "table": "input_table",
                "bind": "COLUMNS",
                "required": true
              },
              "condition": {
                "type": "select",
                "label": "Bediener auswählen",
                "required": true,
                "options": {
                  "ENTHÄLT": {
                    "label": "ENTHÄLT"
                  },
                  "CONTAINED IN STRING": {
                    "label": "ENTHALTEN IN"
                  },
                  "STARTET MIT": {
                    "label": "STARTET MIT"
                  },
                  "ENDET MIT": {
                    "label": "ENDET MIT"
                  },
                  "=": {
                    "label": "EQUAL"
                  },
                  ">": {
                    "label": "GRÖSSER ALS"
                  },
                  ">=": {
                    "label": "GRÖSSER ODER GLEICH"
                  },
                  "<": {
                    "label": "KLEINER ALS"
                  },
                  "<=": {
                    "label": "KLEINER ODER GLEICH"
                  },
                  "EMPTY": {
                    "label": "IST LEER"
                  },
                  "BLANK": {
                    "label": "IST BLANK"
                  },
                  "IS NULL": {
                    "label": "IS NULL"
                  },
                  "REGEX-MATCH": {
                    "label": "REGEX-MATCH"
                  },
                  "CONTAINED IN TABLE": {
                    "label": "IN TABELLE"
                  },
                  "IN REGEX-TABELLE": {
                    "label": "IN REGEX-TABELLE"
                  },
                  "DATUM": {
                    "label": "DATUM"
                  }
                },
                "val": "ENTHÄLT"
              },
              "date_condition": {
                "type": "select",
                "label": "Datumsoperator auswählen",
                "required": true,
                "show_if": "this.condition == 'DATE'",
                "options": {
                  "<": {
                    "label": "PRIOR"
                  },
                  "<=": {
                    "label": "PRIOR ODER GLEICH"
                  },
                  "=": {
                    "label": "EQUAL"
                  },
                  ">": {
                    "label": "NACH"
                  },
                  ">=": {
                    "label": "NACHHER ODER GLEICH"
                  }
                },
                "val": "="
              },
              "case_sensitive": {
                "type": "select",
                "label": "Wählen Sie Case Sensitive",
                "required": true,
                "show_if": "this.condition == 'CONTAINS' || this.condition == 'CONTAINED IN STRING' || this.condition == '=' || this.condition == 'STARTS WITH' || this.condition == 'ENDS WITH' || this.condition == 'REGEX MATCH' || this.condition == 'NOT REGEX MATCH' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "options": {
                  "yes": {
                    "label": "Gehäuse empfindlich"
                  },
                  "no": {
                    "label": "Groß-/Kleinschreibung nicht beachten"
                  }
                },
                "val": "yes"
              },
              "date_value": {
                "type": "date",
                "label": "Datum auswählen",
                "show_if": "this.condition=='DATE'",
                "val": "",
                "required": true
              },
              "value": {
                "type": "text",
                "label": "Eingangswert",
                "show_if": "this.condition != 'DATE' && this.condition != 'EMPTY' && this.condition != 'NOT EMPTY' && this.condition != 'BLANK' && this.condition != 'NOT BLANK' && this.condition != 'IS NULL' && this.condition != 'IS NOT NULL' && this.condition != 'CONTAINED IN TABLE' && this.condition != 'NOT CONTAINED IN TABLE' && this.condition != 'IN REGEX TABLE' && this.condition != 'NOT IN REGEX TABLE'",
                "val": "",
                "required": true
              },
              "compare_table": {
                "type": "select",
                "label": "Tabelle auswählen",
                "bind": "TABLES",
                "empty": "",
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "required": true
              },
              "compare_column": {
                "type": "select",
                "label": "Spalte auswählen",
                "table": "this.compare_table",
                "bind": "COLUMNS",
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "required": true
              },
              "delete": {
                "type": "button",
                "label": "Lösche",
                "function": "DELETE_ROW"
              }
            }
          },
          "options.apply_to_record": {
            "type": "checkbox",
            "label": "Auf den Datensatz anwenden",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "style": "margin-top: 10px",
            "breakLine": true
          },
          "apply_to_group_box": {
            "type": "fieldset",
            "label": "Anwenden auf Gruppe",
            "show_if": "options.apply_to_record=='false'",
            "repeat": false,
            "fields": {
              "options.apply_to_group_columns": {
                "type": "select",
                "label": "Gruppenspalten auswählen",
                "required": true,
                "width": "100%",
                "table": "input_table",
                "multiple": true,
                "bind": "COLUMNS",
                "breakLine": true
              }
            }
          }
        }
      }
    }
  }
}