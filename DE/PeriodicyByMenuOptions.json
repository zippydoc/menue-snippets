{
  "options": {
    "type": "fieldset",
    "label": "Optionen auswählen",
    "repeat": false,
    "fields": {
      "options.task_symbol": {
        "type": "hidden",
        "val": "periodicy_by_menu"
      },
      "options.custom.table": {
        "type": "fieldset",
        "label": "Planungsposition",
        "repeat": true,
        "fields": {
          "item": {
            "type": "text",
            "label": "Posten",
            "val": "",
            "required": true
          },
          "position": {
            "type": "text",
            "label": "Position",
            "val": "",
            "required": true,
            "breakLine": true
          },
          "amount": {
            "type": "number",
            "label": "Betrag",
            "val": "",
            "required": true
          },
          "initial_date": {
            "type": "date",
            "label": "Anfangsdatum",
            "val": "",
            "required": true
          },
          "periodicy": {
            "type": "select",
            "label": "Periodizität",
            "required": true,
            "options": {
              "One-Off": {
                "label": "Einmalig"
              },
              "Daily": {
                "label": "Täglich"
              },
              "Weekly": {
                "label": "Wöchentlich"
              },
              "Monthly": {
                "label": "Monatlich"
              },
              "Quarterly": {
                "label": "vierteljährlich"
              },
              "Yearly": {
                "label": "Jährlich"
              }
            },
            "val": "One-Off"
          },
          "growth": {
            "type": "number",
            "label": "Wachstum in %",
            "show_if": "this.periodicy!='One-Off'",
            "val": "",
            "required": true
          },
          "growth_period": {
            "type": "select",
            "label": "Wachstumsperiode",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Weekly": {
                "label": "Wöchentlich"
              },
              "Monthly": {
                "label": "Monat für Monat"
              },
              "Quarterly": {
                "label": "Quartal für Quartal"
              },
              "Yearly": {
                "label": "Jahr auf Jahr"
              }
            },
            "val": "Weekly"
          },
          "growth_pattern": {
            "type": "select",
            "label": "Wachstumsmuster",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Linear": {
                "label": "Linear"
              },
              "Compounding": {
                "label": "Aufsummierung"
              },
              "Jump-Fix Linear": {
                "label": "Jump-Fix Linear"
              },
              "Jump-Fix Compounding": {
                "label": "Jump-Fix Compounding"
              }
            },
            "val": "Compounding"
          },
          "final_date": {
            "type": "date",
            "label": "Endgültiges Datum",
            "show_if": "this.periodicy!='One-Off'",
            "val": ""
          },
          "delete": {
            "type": "button",
            "label": "Lösche",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.end_date": {
        "type": "date",
        "label": "Enddatum der Tabelle",
        "val": "",
        "required": true,
        "style": "width: 300px"
      }
    }
  }
}