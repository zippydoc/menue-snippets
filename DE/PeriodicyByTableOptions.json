{
  "options": {
    "type": "fieldset",
    "label": "Optionen für die Periodizität auswählen",
    "repeat": false,
    "fields": {
      "options.task_symbol": {
        "type": "hidden",
        "val": "periodicy_by_table"
      },
      "options.standard_table": {
        "type": "checkbox",
        "label": "Standard-Periodensystem",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "style": "margin-top: 10px",
        "breakLine": true
      },
      "options.initial_date": {
        "type": "select",
        "label": "Anfangsdatum",
        "show_if": "options.standard_table=='false'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true
      },
      "options.period": {
        "type": "select",
        "label": "Periodizität (z.B. Monatlich, Vierteljährlich)",
        "show_if": "options.standard_table=='false'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true
      },
      "options.final_date": {
        "type": "select",
        "label": "Endgültiges Datum",
        "show_if": "options.standard_table=='false'",
        "table": "table_id",
        "bind": "COLUMNS",
        "breakLine": true
      },
      "options.volume": {
        "type": "select",
        "label": "Betrag",
        "show_if": "options.standard_table=='false'",
        "table": "table_id",
        "bind": "COLUMNS"
      },
      "options.growth": {
        "type": "select",
        "label": "Wachstum",
        "show_if": "options.standard_table=='false'",
        "table": "table_id",
        "bind": "COLUMNS"
      },
      "options.growth_period": {
        "type": "select",
        "label": "Wachstumsperiode",
        "show_if": "options.standard_table=='false'",
        "options": {
          "selected_period": {
            "label": "Entspricht der Periodizität"
          },
          "week_on_week": {
            "label": "Woche für Woche"
          },
          "month_on_month": {
            "label": "Monat für Monat"
          },
          "quarter_on_quarter": {
            "label": "Quartal für Quartal"
          },
          "year_on_year": {
            "label": "Jahr auf Jahr"
          },
          "column": {
            "label": "Spalte auswählen"
          }
        },
        "val": "selected_period"
      },
      "options.growth_period_column": {
        "type": "select",
        "label": "Spalte Wachstumsperiode",
        "show_if": "options.standard_table=='false' && options.growth_period=='column'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.use_growth_pattern_column": {
        "type": "checkbox",
        "label": "Verwendung Wachstumsmuster",
        "show_if": "options.standard_table=='false'",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "options.growth_pattern_column": {
        "type": "select",
        "label": "Wachstumsmuster",
        "show_if": "options.standard_table=='false' && options.use_growth_pattern_column=='true'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.end_date": {
        "type": "date",
        "label": "Enddatum der Tabelle",
        "val": "",
        "required": true,
        "style": "width: 300px"
      }
    }
  }
}