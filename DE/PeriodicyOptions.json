{
  "options": {
    "type": "fieldset",
    "label": "Optionen für die Periodizität auswählen",
    "repeat": false,
    "fields": {
      "options.type": {
        "type": "select",
        "label": "Typ",
        "options": {
          "generate": {
            "label": "Beispiel für das Erzeugen einer Periodizität"
          },
          "process": {
            "label": "Prozess-Periodentabelle"
          },
          "custom": {
            "label": "Benutzerdefiniert"
          }
        },
        "val": "custom",
        "breakLine": true
      },
      "input": {
        "type": "fieldset",
        "label": "Eingangstabelle auswählen",
        "show_if": "options.type=='process'",
        "repeat": false,
        "fields": {
          "input_table": {
            "type": "select",
            "label": "Tabelle auswählen",
            "bind": "TABLES",
            "empty": "",
            "required": true
          },
          "remove_input_table_after_processing": {
            "type": "hidden",
            "val": "false"
          },
          "is_word": {
            "type": "hidden",
            "val": "false"
          }
        },
        "breakLine": true
      },
      "amount_formatting_frame": {
        "type": "fieldset",
        "label": "Betrags-Spalten-Formatierung",
        "show_if": "options.type=='generate'",
        "repeat": false,
        "fields": {
          "options.amount.format__category": {
            "type": "select",
            "label": "Format",
            "required": true,
            "options": {
              "standard": {
                "label": "Standard"
              },
              "number": {
                "label": "Nummer"
              },
              "percentage": {
                "label": "Prozentsatz"
              },
              "currency": {
                "label": "Währung"
              }
            },
            "val": "currency"
          },
          "options.amount.format__rounding": {
            "type": "select",
            "label": "Abrunden",
            "show_if": "options.amount.format__category=='number' || options.amount.format__category=='percentage' || options.amount.format__category=='currency'",
            "required": true,
            "options": {
              "no_rounding": {
                "label": "Keine Rundung"
              },
              "0": {
                "label": "0 Ziffern"
              },
              "1": {
                "label": "1 Ziffern"
              },
              "2": {
                "label": "2 Ziffern"
              },
              "3": {
                "label": "3 Ziffern"
              },
              "4": {
                "label": "4 Ziffern"
              },
              "5": {
                "label": "5 Ziffern"
              },
              "6": {
                "label": "6 Ziffern"
              },
              "7": {
                "label": "7 Ziffern"
              },
              "8": {
                "label": "8 Ziffern"
              },
              "9": {
                "label": "9 Ziffern"
              }
            },
            "val": "2"
          },
          "options.amount.format__use_1000_separator": {
            "type": "checkbox",
            "label": "Use 1000 Separator(.)",
            "show_if": "options.amount.format__category=='number' || options.amount.format__category=='percentage' || options.amount.format__category=='currency'",
            "val": "true",
            "isOn": "true",
            "isOff": "false"
          },
          "options.amount.format__currency_symbol": {
            "type": "select",
            "label": "Symbol",
            "show_if": "options.amount.format__category=='currency'",
            "required": true,
            "options": {
              "dollar": {
                "label": "$"
              },
              "euro": {
                "label": "€"
              },
              "pound": {
                "label": "£"
              }
            },
            "val": "dollar"
          }
        }
      },
      "options.standard_table": {
        "type": "checkbox",
        "label": "Standard-Periodensystem",
        "show_if": "options.type=='process'",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "style": "margin-top: 10px",
        "breakLine": true
      },
      "options.initial_date": {
        "type": "select",
        "label": "Anfangsdatum",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true
      },
      "options.period": {
        "type": "select",
        "label": "Periodizität (z.B. Monatlich, Vierteljährlich)",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true
      },
      "options.final_date": {
        "type": "select",
        "label": "Endgültiges Datum",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS",
        "breakLine": true
      },
      "options.volume": {
        "type": "select",
        "label": "Betrag",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS"
      },
      "options.growth": {
        "type": "select",
        "label": "Wachstum",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS"
      },
      "options.growth_period": {
        "type": "select",
        "label": "Wachstumsperiode",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "options": {
          "selected_period": {
            "label": "Entspricht der Periodizität"
          },
          "week_on_week": {
            "label": "Woche für Woche"
          },
          "month_on_month": {
            "label": "Monat für Monat"
          },
          "quarter_on_quarter": {
            "label": "Quartal für Quartal"
          },
          "year_on_year": {
            "label": "Jahr auf Jahr"
          },
          "column": {
            "label": "Spalte auswählen"
          }
        },
        "val": "selected_period"
      },
      "options.growth_period_column": {
        "type": "select",
        "label": "Spalte Wachstumsperiode",
        "show_if": "options.type=='process' && options.standard_table=='false' && options.growth_period=='column'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.use_growth_pattern_column": {
        "type": "checkbox",
        "label": "Verwendung Wachstumsmuster",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "options.growth_pattern_column": {
        "type": "select",
        "label": "Wachstumsmuster",
        "show_if": "options.type=='process' && options.standard_table=='false' && options.use_growth_pattern_column=='true'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.custom.table": {
        "type": "fieldset",
        "label": "Planungsposition",
        "show_if": "options.type=='custom'",
        "repeat": true,
        "fields": {
          "item": {
            "type": "text",
            "label": "Posten",
            "val": "",
            "required": true
          },
          "position": {
            "type": "text",
            "label": "Position",
            "val": "",
            "required": true,
            "breakLine": true
          },
          "amount": {
            "type": "number",
            "label": "Betrag",
            "val": "",
            "required": true
          },
          "amount_format__category": {
            "type": "select",
            "label": "Betragsformat",
            "show_if" : "$index == 0",
            "required": true,
            "options": {
              "standard": {
                "label": "Standard"
              },
              "number": {
                "label": "Nummer"
              },
              "percentage": {
                "label": "Prozentsatz"
              },
              "text": {
                "label": "Text"
              },
              "date": {
                "label": "Datum"
              },
              "currency": {
                "label": "Währung"
              }
            },
            "val": "number"
          },
          "amount_format__rounding": {
            "type": "select",
            "label": "Abrunden",
            "show_if": "$index == 0 && (this.amount_format__category=='number' || this.amount_format__category=='percentage' || this.amount_format__category=='currency')",
            "required": true,
            "options": {
              "no_rounding": {
                "label": "Keine Rundung"
              },
              "0": {
                "label": "0 Ziffern"
              },
              "1": {
                "label": "1 Ziffern"
              },
              "2": {
                "label": "2 Ziffern"
              },
              "3": {
                "label": "3 Ziffern"
              },
              "4": {
                "label": "4 Ziffern"
              },
              "5": {
                "label": "5 Ziffern"
              },
              "6": {
                "label": "6 Ziffern"
              },
              "7": {
                "label": "7 Ziffern"
              },
              "8": {
                "label": "8 Ziffern"
              },
              "9": {
                "label": "9 Ziffern"
              }
            },
            "val": "2"
          },
          "amount_format__use_1000_separator": {
            "type": "checkbox",
            "label": "Use 1000 Separator(.)",
            "show_if": "$index == 0 && (this.amount_format__category=='number' || this.amount_format__category=='percentage' || this.amount_format__category=='currency')",
            "val": "true",
            "isOn": "true",
            "isOff": "false"
          },
          "amount_format__currency_symbol": {
            "type": "select",
            "label": "Symbol",
            "show_if": "$index == 0 && (this.amount_format__category=='currency')",
            "required": true,
            "options": {
              "dollar": {
                "label": "$"
              },
              "euro": {
                "label": "€"
              },
              "pound": {
                "label": "£"
              }
            },
            "val": "dollar"
          },
          "amount_format__date_format": {
            "type": "select",
            "label": "Typ",
            "show_if": "$index == 0 && (this.amount_format__category=='date')",
            "required": true,
            "options": {
              "mm/dd/yyyy": {
                "label": "3/14/2012"
              },
              "D, M dd, Y": {
                "label": "Mittwoch, 14. März 2012"
              },
              "yyyy-mm-dd": {
                "label": "2012-03-14"
              }
            },
            "val": "mm/dd/yyyy",
            "breakLine": true
          },
          "initial_date": {
            "type": "date",
            "label": "Anfangsdatum",
            "val": "",
            "required": true
          },
          "initial_date_format__date_format": {
            "type": "select",
            "label": "Anfangsdatum-Format",
            "show_if": "$index == 0",
            "required": true,
            "options": {
              "mm/dd/yyyy": {
                "label": "3/14/2012"
              },
              "D, M dd, Y": {
                "label": "Mittwoch, 14. März 2012"
              },
              "yyyy-mm-dd": {
                "label": "2012-03-14"
              }
            },
            "val": "mm/dd/yyyy",
            "breakLine": true
          },
          "periodicy": {
            "type": "select",
            "label": "Periodizität",
            "required": true,
            "options": {
              "Einmalig": {
                "label": "Einmalig"
              },
              "Täglich": {
                "label": "Täglich"
              },
              "Werktäglich": {
                "label": "Werktäglich"
              },
              "Wöchentlich": {
                "label": "Wöchentlich"
              },
              "Monatlich": {
                "label": "Monatlich"
              },
              "vierteljährlich": {
                "label": "vierteljährlich"
              },
              "Jährlich": {
                "label": "Jährlich"
              }
            },
            "val": "Einmalig"
          },
          "growth": {
            "type": "number",
            "label": "Wachstum",
            "show_if": "this.periodicy!='One-Off'",
            "val": "",
            "required": true
          },
          "growth_period": {
            "type": "select",
            "label": "Wachstumsperiode",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Wöchentlich": {
                "label": "Wöchentlich"
              },
              "Monatlich": {
                "label": "Monat für Monat"
              },
              "vierteljährlich": {
                "label": "Quartal für Quartal"
              },
              "Jährlich": {
                "label": "Jahr auf Jahr"
              }
            },
            "val": "Wöchentlich"
          },
          "growth_pattern": {
            "type": "select",
            "label": "Wachstumsmuster",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Aufsummierung": {
                "label": "Aufsummierung"
              },
              "Linear": {
                "label": "Linear"
              },
              "Jump-Fix": {
                "label": "Jump-Fix"
              }
            },
            "val": "Aufsummierung"
          },
          "final_date": {
            "type": "date",
            "label": "Endgültiges Datum",
            "show_if": "this.periodicy!='One-Off'",
            "val": ""
          },
          "delete": {
            "type": "button",
            "label": "Lösche",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.end_date": {
        "type": "date",
        "label": "Enddatum der Tabelle",
        "show_if": "options.type=='process' || options.type=='custom'",
        "val": "",
        "required": true,
        "style": "width: 300px"
      }
    }
  }
}