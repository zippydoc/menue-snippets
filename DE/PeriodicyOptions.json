{
  "options": {
    "type": "fieldset", 
    "label": "Optionen für die Periodizität auswählen", 
    "repeat": false, 
    "fields": {
      "options.type": {
        "type": "select", 
        "label": "Typ", 
        "options": {
          "generate": {
            "label": "Beispiel für das Erzeugen einer Periodizität"
          }, 
          "process": {
            "label": "Prozess-Periodentabelle"
          }
        }, 
        "val": "generate", 
        "breakLine": true
      }, 
      "amount_formatting_frame": {
        "type": "fieldset", 
        "label": "Amount Column Formatting", 
        "show_if": "options.type=='generate'", 
        "repeat": false, 
        "fields": {
          "options.amount.format__category": {
            "type": "select", 
            "label": "Format", 
            "required": true, 
            "options": {
              "standard": {
                "label": "Standard"
              }, 
              "number": {
                "label": "Nummer"
              }, 
              "percentage": {
                "label": "Prozentsatz"
              }, 
              "currency": {
                "label": "Währung"
              }
            }, 
            "val": "currency"
          }, 
          "options.amount.format__rounding": {
            "type": "select", 
            "label": "Abrunden", 
            "show_if": "options.amount.format__category=='number' || options.amount.format__category=='percentage' || options.amount.format__category=='currency'", 
            "required": true, 
            "options": {
              "no_rounding": {
                "label": "Keine Rundung"
              }, 
              "0": {
                "label": "0 Ziffern"
              }, 
              "1": {
                "label": "1 Ziffern"
              }, 
              "2": {
                "label": "2 Ziffern"
              }, 
              "3": {
                "label": "3 Ziffern"
              }, 
              "4": {
                "label": "4 Ziffern"
              }, 
              "5": {
                "label": "5 Ziffern"
              }, 
              "6": {
                "label": "6 Ziffern"
              }, 
              "7": {
                "label": "7 Ziffern"
              }, 
              "8": {
                "label": "8 Ziffern"
              }, 
              "9": {
                "label": "9 Ziffern"
              }
            }, 
            "val": "2"
          }, 
          "options.amount.format__use_1000_separator": {
            "type": "checkbox", 
            "label": "1000 Trennzeichen(.) verwenden", 
            "show_if": "options.amount.format__category=='number' || options.amount.format__category=='percentage' || options.amount.format__category=='currency'", 
            "val": "true", 
            "isOn": "true", 
            "isOff": "false"
          }, 
          "options.amount.format__currency_symbol": {
            "type": "select", 
            "label": "Symbol", 
            "show_if": "options.amount.format__category=='currency'", 
            "required": true, 
            "options": {
              "dollar": {
                "label": "$"
              }, 
              "euro": {
                "label": "€"
              }, 
              "pound": {
                "label": "£"
              }
            }, 
            "val": "dollar"
          }
        }
      }, 
      "options.standard_table": {
        "type": "checkbox", 
        "label": "Standard-Periodensystem", 
        "show_if": "options.type=='process'", 
        "val": "true", 
        "isOn": "true", 
        "isOff": "false", 
        "breakLine": true
      }, 
      "options.initial_date": {
        "type": "select", 
        "label": "Anfangsdatum", 
        "show_if": "options.type=='process' && options.standard_table=='false'", 
        "table": "input_table", 
        "bind": "COLUMNS", 
        "required": true
      }, 
      "options.period": {
        "type": "select", 
        "label": "Periodizität (z. B. monatlich, vierteljährlich)", 
        "show_if": "options.type=='process' && options.standard_table=='false'", 
        "table": "input_table", 
        "bind": "COLUMNS", 
        "required": true
      }, 
      "options.final_date": {
        "type": "select", 
        "label": "Endgültiges Datum", 
        "show_if": "options.type=='process' && options.standard_table=='false'", 
        "table": "input_table", 
        "bind": "COLUMNS", 
        "breakLine": true
      }, 
      "options.volume": {
        "type": "select", 
        "label": "Betrag", 
        "show_if": "options.type=='process' && options.standard_table=='false'", 
        "table": "input_table", 
        "bind": "COLUMNS"
      }, 
      "options.growth": {
        "type": "select", 
        "label": "Wachstum", 
        "show_if": "options.type=='process' && options.standard_table=='false'", 
        "table": "input_table", 
        "bind": "COLUMNS"
      }, 
      "options.growth_period": {
        "type": "select", 
        "label": "Wachstumsperiode", 
        "show_if": "options.type=='process' && options.standard_table=='false'", 
        "options": {
          "selected_period": {
            "label": "Entspricht der Periodizität"
          }, 
          "week_on_week": {
            "label": "Woche für Woche"
          }, 
          "month_on_month": {
            "label": "Monat für Monat"
          }, 
          "quarter_on_quarter": {
            "label": "Quartal für Quartal"
          }, 
          "year_on_year": {
            "label": "Jahr auf Jahr"
          }, 
          "column": {
            "label": "Spalte auswählen"
          }
        }, 
        "val": "selected_period"
      }, 
      "options.growth_period_column": {
        "type": "select", 
        "label": "Spalte "Wachstumsperiode", 
        "show_if": "options.type=='process' && options.standard_table=='false' && options.growth_period=='column'", 
        "table": "input_table", 
        "bind": "COLUMNS", 
        "required": true, 
        "breakLine": true
      }, 
      "options.use_growth_pattern_column": {
        "type": "checkbox", 
        "label": "Verwendung Wachstumsmuster", 
        "show_if": "options.type=='process' && options.standard_table=='false'", 
        "val": "false", 
        "isOn": "true", 
        "isOff": "false"
      }, 
      "options.growth_pattern_column": {
        "type": "select", 
        "label": "Wachstumsmuster", 
        "show_if": "options.type=='process' && options.standard_table=='false' && options.use_growth_pattern_column=='true'", 
        "table": "input_table", 
        "bind": "COLUMNS", 
        "required": true, 
        "breakLine": true
      }, 
      "options.end_date": {
        "type": "date", 
        "label": "Enddatum der Tabelle", 
        "show_if": "options.type=='process'", 
        "val": "", 
        "required": true, 
        "style": "width: 300px"
      }
    }
  }
}