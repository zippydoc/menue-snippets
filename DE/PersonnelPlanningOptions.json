{
  "options": {
    "type": "fieldset",
    "label": "Optionen auswählen",
    "repeat": false,
    "fields": {
      "task_label": {
        "type": "hidden",
        "val": "personnel_planning"
      },
      "options.type": {
        "type": "hidden",
        "val": "custom"
      },
      "options.custom.table": {
        "type": "fieldset",
        "label": "Planungsposition",
        "repeat": true,
        "fields": {
          "item": {
            "type": "text",
            "label": "Name",
            "val": "",
            "required": true
          },
          "position": {
            "type": "select",
            "label": "Position",
            "options": {
              "fix salary": {
                "label": "Festgehalt"
              },
              "bonus": {
                "label": "Bonus"
              },
              "other compensation": {
                "label": "sonstige Vergütung"
              }
            },
            "val": "fix salary",
            "required": true
          },
          "amount": {
            "type": "number",
            "label": "Betrag",
            "val": "",
            "required": true
          },
          "initial_date": {
            "type": "date",
            "label": "Anfangsdatum",
            "val": "",
            "required": true
          },
          "periodicy": {
            "type": "select",
            "label": "Periodizität",
            "required": true,
            "options": {
              "One-Off": {
                "label": "Einmalig"
              },
              "Daily": {
                "label": "Täglich"
              },
              "Work-Daily": {
                "label": "Werktäglich"
              },
              "Weekly": {
                "label": "Wöchentlich"
              },
              "Monthly": {
                "label": "Monatlich"
              },
              "Quarterly": {
                "label": "vierteljährlich"
              },
              "Yearly": {
                "label": "Jährlich"
              }
            },
            "val": "One-Off"
          },
          "growth": {
            "type": "number",
            "label": "Wachstum",
            "show_if": "this.periodicy!='One-Off'",
            "val": "",
            "required": true
          },
          "growth_period": {
            "type": "select",
            "label": "Wachstumsperiode",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Weekly": {
                "label": "Wöchentlich"
              },
              "Monthly": {
                "label": "Monat für Monat"
              },
              "Quarterly": {
                "label": "Quartal für Quartal"
              },
              "Yearly": {
                "label": "Jahr auf Jahr"
              }
            },
            "val": "Weekly"
          },
          "growth_pattern": {
            "type": "select",
            "label": "Wachstumsmuster",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Compounding": {
                "label": "Aufsummierung"
              },
              "Linear": {
                "label": "Linear"
              },
              "Jump-Fix": {
                "label": "Jump-Fix"
              }
            },
            "val": "Compounding"
          },
          "final_date": {
            "type": "date",
            "label": "Endgültiges Datum",
            "show_if": "this.periodicy!='One-Off'",
            "val": ""
          },
          "delete": {
            "type": "button",
            "label": "Lösche",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.end_date": {
        "type": "date",
        "label": "Enddatum der Tabelle",
        "show_if": "options.type=='process' || options.type=='custom'",
        "val": "",
        "required": true,
        "style": "width: 300px"
      }
    }
  }
}