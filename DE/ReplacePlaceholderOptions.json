{
  "options": {
    "type": "fieldset",
    "label": "Optionen",
    "repeat": false,
    "fields": {
      "options.find_col": {
        "type": "select",
        "label": "Platzhalterspalte",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true
      },
      "options.placeholder_type": {
        "type": "select",
        "label": "Platzhaltertyp",
        "required": true,
        "options": {
          "text": {
            "label": "Text"
          },
          "regex": {
            "label": "Regulärer Ausdruck"
          }
        },
        "val": "text"
      },
      "options.placeholder_text": {
        "type": "text",
        "label": "Platzhalter",
        "show_if": "options.placeholder_type=='text'",
        "val": "",
        "placeholder": "FindText",
        "required": true,
        "breakLine": true
      },
      "options.placeholder_regex": {
        "type": "text",
        "label": "Platzhalter RegEx",
        "show_if": "options.placeholder_type=='regex'",
        "val": "",
        "placeholder": "\\sFindText\\s",
        "required": true
      },
      "options.case_sensitivity": {
        "type": "select",
        "label": "Groß-/Kleinschreibungsunterscheidung",
        "required": true,
        "options": {
          "yes": {
            "label": "Gehäuse empfindlich"
          },
          "no": {
            "label": "Groß-/Kleinschreibung nicht beachten"
          }
        },
        "val": "yes",
        "breakLine": true
      },
      "options.replace_col": {
        "type": "select",
        "label": "Ersetzen durch Spalte",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      }
    }
  }
}