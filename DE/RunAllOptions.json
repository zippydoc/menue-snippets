{
  "options": {
    "type": "fieldset",
    "label": "Alle Optionen ausführen",
    "repeat": false,
    "fields": {
      "input_table_options": {
        "type": "fieldset",
        "label": "Eingabetabellen spezifizieren",
        "breakLine": true,
        "repeat": false,
        "fields": {
          "options.select_type": {
            "type": "select",
            "label": "Typ auswählen",
            "required": true,
            "options": {
              "table_selection": {
                "label": "Tischauswahl"
              },
              "select_by_pattern": {
                "label": "Auswahl nach Mustern"
              }
            },
            "val": "table_selection"
          },
          "options.table_ids": {
            "type": "select",
            "label": "Tabellen auswählen",
            "bind": "TABLES",
            "empty": "",
            "multiple": true,
            "show_if": "options.select_type=='table_selection'",
            "required": true
          },
          "options.filter_params": {
            "type": "fieldset",
            "label": "Spieltische",
            "show_if": "options.select_type=='select_by_pattern'",
            "breakLine": true,
            "repeat": true,
            "fields": {
              "keyword": {
                "type": "text",
                "label": "Schlüsselwort eingeben",
                "required": true,
                "val": ""
              },
              "filter_target": {
                "type": "select",
                "label": "Filter ein",
                "required": true,
                "options": {
                  "table_name": {
                    "label": "Tabelle Name"
                  },
                  "table_tag": {
                    "label": "Tabelle Tag"
                  }
                },
                "val": "table_name"
              },
              "filter_type": {
                "type": "select",
                "label": "Filtertyp",
                "required": true,
                "options": {
                  "equal": {
                    "label": "Gleich"
                  },
                  "contain": {
                    "label": "Enthält"
                  },
                  "start_with": {
                    "label": "Beginnt mit"
                  },
                  "end_with": {
                    "label": "Endet mit"
                  },
                  "regex": {
                    "label": "Regulärer Ausdruck"
                  }
                },
                "val": "equal"
              },
              "delete": {
                "type": "button",
                "label": "Lösche",
                "function": "DELETE_ROW"
              }
            }
          },
          "options.use_waiting_time": {
            "type": "checkbox",
            "label": "Wartezeit hinzufügen",
            "val": "false",
            "isOn": "true",
            "isOff": "false"
          },
          "options.waiting_period": {
            "type": "number",
            "label": "Waiting time (sec)",
            "val": "0",
            "show_if": "options.use_waiting_time!='false'"
          }
        }
      },
      "task_chain": {
        "type": "checkbox",
        "label": "Aufgabenkette",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "schedule_options": {
        "type": "fieldset",
        "label": "Zu planende Aufgaben",
        "show_if": "task_chain == 'true'",
        "repeat": true,
        "fields": {
          "input_task": {
            "type": "select",
            "label": "Aufgabe auswählen",
            "bind": "TASKS",
            "empty": "",
            "required": true
          },
          "waiting_time": {
            "type": "number",
            "label": "Waiting time (sec)",
            "val": "0",
            "required": true
          },
          "delete": {
            "type": "button",
            "label": "Lösche",
            "function": "DELETE_ROW"
          }
        },
        "breakLine": true
      },
      "unify_output_tables": {
        "type": "checkbox",
        "label": "Unify output tables",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      }
    }
  }
}