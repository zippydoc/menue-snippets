            "val": "and"
          },
          "column": {
            "type": "select",
            "label": "Spalte",
            "table": "table_id",
            "bind": "COLUMNS",
            "required": true
          },
          "rows": {
            "type": "select",
            "label": "Condition",
            "required": true,
            "options": {
              "All rows": {
                "label": "All rows"
              },
              "Some rows": {
                "label": "Some rows"
              }
            },
            "val": "All rows"
          },
          "condition": {
            "type": "select",
            "label": "Operator",
            "required": true,
            "options": {
              "CONTAINS": {
                "label": "ENTHÄLT"
              },
              "CONTAINED IN STRING": {
                "label": "ENTHALTEN IN"
              },
              "STARTS WITH": {
                "label": "STARTET MIT"
