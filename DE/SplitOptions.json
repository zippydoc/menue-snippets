{
  "options": {
    "type": "fieldset",
    "label": "Optionen auswählen",
    "repeat": false,
    "fields": {
      "options.split_method": {
        "type": "select",
        "label": "Split-Verfahren",
        "required": true,
        "options": {
          "standard": {
            "label": "Standard"
          },
          "regex": {
            "label": "RegEx"
          }
        },
        "val": "standard"
      },
      "options.split_type": {
        "type": "select",
        "label": "Typ geteilt",
        "required": true,
        "options": {
          "split_to_columns": {
            "label": "Auf Spalten aufteilen"
          },
          "split_to_rows": {
            "label": "Aufteilung in Reihen"
          }
        },
        "val": "split_to_columns"
      },
      "options.standard_delimiter": {
        "type": "select",
        "label": "Trennzeichen",
        "show_if": "options.split_method=='standard'",
        "required": true,
        "options": {
          "tabs": {
            "label": "Tabulator"
          },
          "space": {
            "label": "Leerzeichen"
          },
          "whitespace": {
            "label": "Nicht sichtbare Zeichen"
          },
          "linebreak": {
            "label": "Zeilenumbruch"
          },
          "punctuation": {
            "label": "Zeichensetzung"
          },
          "punctuation_whitespace": {
            "label": "Interpunktion und Leerzeichen u.ä."
          },
          "custom": {
            "label": "Benutzerdefiniert"
          }
        },
        "val": "punctuation"
      },
      "options.delimiter": {
        "type": "text",
        "label": "Trennzeichen",
        "show_if": "options.split_method=='standard' && options.standard_delimiter=='custom'",
        "val": ",",
        "trim": "false",
        "required": true,
        "breakLine": true
      },
      "format_frame": {
        "type": "fieldset",
        "label": "Zu parsendes Format für Split",
        "show_if": "options.split_method=='regex'",
        "repeat": false,
        "fields": {
          "options.format_to_convert.regular_expression": {
            "type": "text",
            "label": "Parse Regular Expression ( ex: ([a-z]+)\\s([a-z]+) )",
            "val": "[a-z]+\\s[a-z]+",
            "required": true,
            "width": "100%",
            "trim": "false",
            "breakLine": true
          },
          "options.format_to_convert.case_insensitive": {
            "type": "checkbox",
            "label": "Groß-/Kleinschreibung nicht beachten",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          }
        }
      },
      "options.n_multi_n": {
        "type": "checkbox",
        "label": "N x N split if multiple columns are selected",
        "show_if": "options.split_type=='split_to_rows'",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      }
    }
  }
}