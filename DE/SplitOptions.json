{
  "options": {
    "type": "fieldset",
    "Beschriftung": "Optionen auswählen",
    "repeat": false,
    "fields": {
      "options.split_method": {
        "type": "select",
        "Beschriftung": "Split-Verfahren",
        "required": true,
        "options": {
          "standard": {
            "Beschriftung": "Standard"
          },
          "regex": {
            "Beschriftung": "RegEx"
          }
        },
        "val": "standard"
      },
      "options.split_type": {
        "type": "select",
        "Beschriftung": "Typ geteilt",
        "required": true,
        "options": {
          "split_to_columns": {
            "Beschriftung": "Auf Spalten aufteilen"
          },
          "split_to_rows": {
            "Beschriftung": "Aufteilung in Reihen"
          }
        },
        "val": "split_to_columns"
      },
      "options.standard_delimiter": {
        "type": "select",
        "Beschriftung": "Trennzeichen",
        "show_if": "options.split_method=='standard'",
        "required": true,
        "options": {
          "tabs": {
            "Beschriftung": "Tabulator"
          },
          "space": {
            "Beschriftung": "Leerzeichen"
          },
          "whitespace": {
            "Beschriftung": "Nicht sichtbare Zeichen"
          },
          "linebreak": {
            "Beschriftung": "Zeilenumbruch"
          },
          "punctuation": {
            "Beschriftung": "Zeichensetzung"
          },
          "punctuation_whitespace": {
            "Beschriftung": "Interpunktion und Leerzeichen u.ä."
          },
          "custom": {
            "Beschriftung": "Benutzerdefiniert"
          }
        },
        "val": "punctuation"
      },
      "options.delimiter": {
        "type": "text",
        "Beschriftung": "Trennzeichen",
        "show_if": "options.split_method=='standard' && options.standard_delimiter=='custom'",
        "val": ",",
        "trim": "false",
        "required": true,
        "breakLine": true
      },
      "format_frame": {
        "type": "fieldset",
        "Beschriftung": "Zu parsendes Format für Split",
        "show_if": "options.split_method=='regex'",
        "repeat": false,
        "fields": {
          "options.format_to_convert.regular_expression": {
            "type": "text",
            "Beschriftung": "Parse Regular Expression ( ex: ([a-z]+)\\s([a-z]+) )",
            "val": "[a-z]+\\s[a-z]+",
            "required": true,
            "width": "100%",
            "trim": "false",
            "breakLine": true
          },
          "options.format_to_convert.case_insensitive": {
            "type": "checkbox",
            "Beschriftung": "Groß-/Kleinschreibung nicht beachten",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          }
        }
      }
    }
  }
}