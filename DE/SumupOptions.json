{
  "actions": {
    "type": "fieldset",
    "label": "Aktionen hinzufügen",
    "repeat": true,
    "fields": {
      "columns": {
        "type": "select",
        "label": "Column(s)",
        "table": "table_id",
		"assign_selected_value_to":"this.output_column_name",
        "bind": "COLUMNS",
        "multiple": true,
        "required": true
      },
      "action": {
        "type": "select",
        "label": "Aktion",
        "options": {
          "group_by": {
            "label": "Gruppe von"
          },
          "count": {
            "label": "Zählen Sie"
          },
          "sum": {
            "label": "Summe"
          },
          "first": {
            "label": "Erste"
          },
          "last": {
            "label": "Zuletzt"
          },
          "shortest": {
            "label": "Kürzeste"
          },
          "longest": {
            "label": "Längste"
          },
          "concatenate": {
            "label": "Verketten"
          },
          "mathematics": {
            "label": "Mathematik"
          }
        },
        "val": "group_by"
      },
      "count_action_category": {
        "type": "select",
        "label": "Aktion Typ",
        "show_if": "this.action=='count'",
        "options": {
          "all": {
            "label": "Alle"
          },
          "distinct": {
            "label": "Unverwechselbar"
          },
          "empty_or_zero": {
            "label": "NULL oder Leer oder 0"
          },
          "non_empty_or_zero": {
            "label": "Nicht leer oder 0"
          }
        },
        "val": "all"
      },
      "action_type1": {
        "type": "select",
        "label": "Aktion Sub-Typ",
        "show_if": "this.action=='count' && (this.count_action_category=='all' || this.count_action_category=='distinct')",
        "options": {
          "-": {
            "label": "-"
          },
          "non_zero": {
            "label": "Nicht 0"
          },
          "non_empty": {
            "label": "Nicht leer"
          },
          "non_null": {
            "label": "Nicht Null"
          },
          "non_blank": {
            "label": "Nicht leer"
          }
        },
        "val": "-"
      },
      "action_type2": {
        "type": "select",
        "label": "Aktion Sub-Typ",
        "show_if": "this.action=='count' && this.count_action_category=='empty_or_zero'",
        "options": {
          "zero": {
            "label": "0"
          },
          "empty": {
            "label": "Leer (NULL oder Leer)"
          },
          "null": {
            "label": "Null"
          },
          "blank": {
            "label": "Leer"
          }
        },
        "val": "zero"
      },
      "action_type3": {
        "type": "select",
        "label": "Aktion Sub-Typ",
        "show_if": "this.action=='count' && this.count_action_category=='non_empty_or_zero'",
        "options": {
          "non_zero": {
            "label": "Nicht 0"
          },
          "non_empty": {
            "label": "Nicht leer"
          },
          "non_null": {
            "label": "Nicht Null"
          },
          "non_blank": {
            "label": "Nicht leer"
          }
        },
        "val": "non_zero"
      },
      "mathematics_action_category": {
        "type": "select",
        "label": "Aktion Typ",
        "show_if": "this.action=='mathematics'",
        "options": {
          "min": {
            "label": "Min"
          },
          "max": {
            "label": "Max"
          },
          "average": {
            "label": "Durchschnitt"
          },
          "median": {
            "label": "Median"
          },
          "standard_deviation": {
            "label": "Standardabweichung"
          },
          "variance": {
            "label": "Abweichung"
          }
        },
        "val": "min"
      },
      "action_type4": {
        "type": "select",
        "label": "Aktion Sub-Typ",
        "show_if": "this.action=='mathematics'",
        "options": {
          "include_zero": {
            "label": "Einschließen 0"
          },
          "exclude_zero": {
            "label": "Ausschließen 0"
          }
        },
        "val": "include_zero"
      },
      "concatenate_separator": {
        "type": "text",
        "label": "Separator",
        "show_if": "this.action=='concatenate'",
        "val": ","
      },
      "output_column_name": {
        "type": "text",
        "label": "Name der Ausgabespalte",
        "val": ""
      },
      "rounding": {
        "type": "select",
        "label": "Abrunden",
        "show_if": "this.action=='sum' || this.action=='mathematics'",
        "required": true,
        "options": {
          "no_rounding": {
            "label": "Keine Rundung"
          },
          "0": {
            "label": "0 Ziffern"
          },
          "1": {
            "label": "1 Ziffern"
          },
          "2": {
            "label": "2 Ziffern"
          },
          "3": {
            "label": "3 Ziffern"
          },
          "4": {
            "label": "4 Ziffern"
          },
          "5": {
            "label": "5 Ziffern"
          },
          "6": {
            "label": "6 Ziffern"
          },
          "7": {
            "label": "7 Ziffern"
          },
          "8": {
            "label": "8 Ziffern"
          },
          "9": {
            "label": "9 Ziffern"
          }
        },
        "val": "no_rounding"
      },
      "delete": {
        "type": "button",
        "label": "Lösche",
        "function": "DELETE_ROW"
      }
    }
  },
  "info1": {
    "type": "textarea",
    "label": "",
    "val": "If more than one columns selected, Output Column Name input value should be used as suffix",
    "disabled": true,
    "style": "width: 100%"
  }
}