{
  "actions": {
    "type": "fieldset",
    "label": "Aktionen hinzufügen",
    "repeat": true,
    "fields": {
      "column": {
        "type": "select",
        "label": "Spalte",
        "table": "input_table",
		"assign_selected_value_to":"this.output_column_name",
        "bind": "COLUMNS"
      },
      "action": {
        "type": "select",
        "label": "Aktion",
        "options": {
          "group_by": {
            "label": "Gruppe von"
          },
          "count": {
            "label": "Zählen"
          },
          "sum": {
            "label": "Summe"
          },
          "first": {
            "label": "Erste"
          },
          "last": {
            "label": "Letzte"
          },
          "shortest": {
            "label": "Kürzeste"
          },
          "longest": {
            "label": "Längste"
          },
          "concatenate": {
            "label": "Verketten"
          },
          "mathematics": {
            "label": "Mathematik"
          }
        }
      },
      "count_action_category": {
        "type": "select",
        "label": "Aktion Typ",
        "show_if": "this.action=='count'",
        "options": {
          "all": {
            "label": "Alle"
          },
          "distinct": {
            "label": "Unverwechselbar"
          },
          "empty_or_zero": {
            "label": "NULL oder Leer oder 0"
          },
          "non_empty_or_zero": {
            "label": "Nicht leer oder 0"
          }
        },
        "val": "all"
      },
      "action_type1": {
        "type": "select",
        "label": "Aktion Sub-Typ",
        "show_if": "this.action=='count' && (this.count_action_category=='all' || this.count_action_category=='distinct')",
        "options": {
          "-": {
            "label": "-"
          },
          "non_zero": {
            "label": "Nicht 0"
          },
          "non_empty": {
            "label": "Nicht leer"
          },
          "non_null": {
            "label": "Nicht Null"
          },
          "non_blank": {
            "label": "Nicht leer"
          }
        },
        "val": "-"
      },
      "action_type2": {
        "type": "select",
        "label": "Aktion Sub-Typ",
        "show_if": "this.action=='count' && this.count_action_category=='empty_or_zero'",
        "options": {
          "zero": {
            "label": "0"
          },
          "empty": {
            "label": "Leer (NULL oder Leer)"
          },
          "null": {
            "label": "Null"
          },
          "blank": {
            "label": "Leer"
          }
        },
        "val": "zero"
      },
      "action_type3": {
        "type": "select",
        "label": "Aktion Sub-Typ",
        "show_if": "this.action=='count' && this.count_action_category=='non_empty_or_zero'",
        "options": {
          "non_zero": {
            "label": "Nicht 0"
          },
          "non_empty": {
            "label": "Nicht leer"
          },
          "non_null": {
            "label": "Nicht Null"
          },
          "non_blank": {
            "label": "Nicht leer"
          }
        },
        "val": "non_zero"
      },
      "mathematics_action_category": {
        "type": "select",
        "label": "Aktion Typ",
        "show_if": "this.action=='mathematics'",
        "options": {
          "min": {
            "label": "Min"
          },
          "max": {
            "label": "Max"
          },
          "average": {
            "label": "Durchschnitt"
          },
          "median": {
            "label": "Median"
          },
          "standard_deviation": {
            "label": "Standardabweichung"
          },
          "variance": {
            "label": "Varianz"
          }
        },
        "val": "min"
      },
      "action_type4": {
        "type": "select",
        "label": "Aktion Sub-Typ",
        "show_if": "this.action=='mathematics'",
        "options": {
          "include_zero": {
            "label": "Einschließen 0"
          },
          "exclude_zero": {
            "label": "Ausschließen 0"
          }
        },
        "val": "include_zero"
      },
      "concatenate_separator": {
        "type": "text",
        "label": "Separator",
        "show_if": "this.action=='concatenate'",
        "val": ","
      },
      "output_column_name": {
        "type": "text",
        "label": "Name der Ausgabespalte",
        "val": ""
      },
      "delete": {
        "type": "button",
        "label": "Lösche",
        "function": "DELETE_ROW"
      }
    }
  }
}