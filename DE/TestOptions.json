{
  "options_box": {
    "type": "fieldset",
    "label": "Optionen auswählen",
    "repeat": false,
    "fields": {
      "options.input_table": {
        "type": "select",
        "label": "Tabelle auswählen",
        "bind": "TABLES",
        "empty": "",
        "required": true,
        "breakLine": true
      },
      "options.field_name_col": {
        "type": "select",
        "label": "Spalte 1",
        "required": true,
        "table": "options.input_table",
        "bind": "COLUMNS"
      },
      "options.field_name_selected_rows": {
        "type": "select",
        "label": "Reihen 1",
        "multiple": true,
        "unique_values_only": true,
        "table": "options.input_table",
        "column_list": "options.field_name_col",
        "bind": "RECORDS",
        "required": true,
        "breakLine": true
      },
      "options.field_value_col": {
        "type": "select",
        "label": "Säule 2",
        "required": true,
        "table": "options.input_table",
        "bind": "COLUMNS"
      },
      "options.field_value_selected_rows": {
        "type": "select",
        "label": "Reihen 2",
        "multiple": true,
        "unique_values_only": true,
        "table": "options.input_table",
        "column_list": "options.field_value_col",
        "bind": "RECORDS",
        "required": true,
        "breakLine": true
      }
    }
  }
}