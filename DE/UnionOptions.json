{
  "options": {
    "type": "fieldset",
    "label": "Union-Optionen",
    "repeat": false,
    "fields": {
      "options.union_type": {
        "type": "select",
        "label": "Union-Typ auswählen",
        "val": "auto_config_by_name",
        "options": {
          "auto_config_by_name": {
            "label": "Auto-Konfiguration nach Name"
          },
          "auto_config_by_position": {
            "label": "Auto-Konfiguration nach Position"
          }
        }
      },
      "options.field_output_type": {
        "type": "select",
        "label": "Spalte Ausgangstyp",
        "show_if": "options.union_type=='auto_config_by_name' || options.union_type=='auto_config_by_position'",
        "val": "output_all_fields",
        "options": {
          "output_all_fields": {
            "label": "Alle Spalten ausgeben"
          },
          "output_common_fields": {
            "label": "Gemeinsame Spalten ausgeben"
          }
        },
        "breakLine": true
      },
      "options.add_table_name_column": {
        "type": "checkbox",
        "label": "Spalte mit Tabellennamen hinzufügen",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      }
    }
  }
}