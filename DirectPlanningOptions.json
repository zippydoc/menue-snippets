{
  "planing_position_frame": {
    "type": "fieldset",
    "label": "Configure planning position",
    "repeat": false,
    "fields": {
      "options.task_symbol": {
        "type": "hidden",
        "val": "direct_planning"
      },
      "options.direct_planning__configure_by_table": {
        "type": "checkbox",
        "label": "Configure by table",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "input_table": {
        "type": "select",
        "label": "Select Table",
        "show_if": "options.direct_planning__configure_by_table=='true'",
        "bind": "TABLES",
        "empty": "",
        "required": true,
        "breakLine": true
      },
      "options.configure_by_table_help": {
        "type": "textarea",
        "label": "",
        "show_if": "options.direct_planning__configure_by_table=='true'",
        "val": "Table Structure ( Initial Date | Periodicy | Final Date | Amount | Growth | Growth Period | Growth Pattern | Payment Days | Balance Sheet Category | Balance Sheet Position )",
        "disabled": true,
        "md_no_resize": true,
        "rows": 4,
        "width": "100%"
      },
      "options.custom.table": {
        "type": "fieldset",
        "label": "Planning Position",
        "show_if": "options.direct_planning__configure_by_table=='false'",
        "repeat": true,
        "fields": {
          "help_1": {
            "type": "text",
            "label": "",
            "val": "Specify Planning Position",
            "disabled": true,
            "breakLine": true
          },
          "position": {
            "type": "select",
            "label": "Position",
            "options": {
              "Revenues": {
                "label": "Revenues"
              },
              "Cost of Goods Sold": {
                "label": "Cost of Goods Sold"
              },
              "Marketing Expenses": {
                "label": "Marketing Expenses"
              },
              "Operating Expenses": {
                "label": "Operating Expenses"
              },
              "General and Administration Expenses": {
                "label": "General and Administration Expenses"
              },
              "Personnel Expenses": {
                "label": "Personnel Expenses"
              },
              "Tax": {
                "label": "Tax"
              },
              "Capital Expenditure": {
                "label": "Capital Expenditure"
              },
              "Depreciation": {
                "label": "Depreciation"
              },
              "Amortization": {
                "label": "Amortization"
              },
              "Extraordinary Items": {
                "label": "Extraordinary Items"
              },
              "Depretiation & Amortisation": {
                "label": "Depretiation & Amortisation"
              }
            },
            "val": "Revenues",
            "required": true
          },
          "revenues__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Revenues'",
            "options": {
              "Sales": {
                "label": "Sales"
              },
              "Increase(+)/Decrease(-) Inventories": {
                "label": "Increase(+)/Decrease(-) Inventories"
              },
              "Other Revenues": {
                "label": "Other Revenues"
              }
            },
            "val": "Sales",
            "required": true
          },
          "cost_of_goods_sold__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Cost of Goods Sold'",
            "options": {
              "Material Costs": {
                "label": "Material Costs"
              },
              "Purchased Services": {
                "label": "Purchased Services"
              }
            },
            "val": "Material Costs",
            "required": true
          },
          "general_administration_expenses__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='General and Administration Expenses'",
            "options": {
              "Rental Expenses": {
                "label": "Rental Expenses"
              },
              "Cleaning": {
                "label": "Cleaning"
              },
              "Office Items": {
                "label": "Office Items"
              },
              "Consulting": {
                "label": "Consulting"
              },
              "Recruiting": {
                "label": "Recruiting"
              }
            },
            "val": "Rental Expenses",
            "required": true
          },
          "personnel_expenses__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Personnel Expenses'",
            "options": {
              "Fix Salary": {
                "label": "Fix Salary"
              },
              "Bonus": {
                "label": "Bonus"
              },
              "Other Compensation": {
                "label": "Other Compensation"
              }
            },
            "val": "Fix Salary",
            "required": true
          },
          "capital_expenditure__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Capital Expenditure'",
            "options": {
              "Maintenance Capex": {
                "label": "Maintenance Capex"
              },
              "Expansion Capex": {
                "label": "Expansion Capex"
              }
            },
            "val": "Maintenance Capex",
            "required": true
          },
          "extraordinary_items__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Extraordinary Items'",
            "options": {
              "Extraordinary Income": {
                "label": "Extraordinary Income"
              },
              "Extraordinary Expenses": {
                "label": "Extraordinary Expenses"
              }
            },
            "val": "Extraordinary Income",
            "required": true
          },
          "tax__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Tax'",
            "options": {
              "Value Added Tax": {
                "label": "Value Added Tax"
              },
              "Corporate Tax": {
                "label": "Corporate Tax"
              },
              "Trade Tax": {
                "label": "Trade Tax"
              }
            },
            "val": "Value Added Tax",
            "required": true
          },
          "interest__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Interest'",
            "options": {
              "Interest Income": {
                "label": "Interest Income"
              },
              "Interest Expenses": {
                "label": "Interest Expenses"
              }
            },
            "val": "Interest Income",
            "required": true
          },
          "depretiation_amortisation__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Depretiation & Amortisation'",
            "options": {
              "Depretiation": {
                "label": "Depretiation"
              },
              "Amortisation": {
                "label": "Amortisation"
              }
            },
            "val": "Depretiation",
            "required": true
          },
          "item": {
            "type": "text",
            "label": "Item",
            "val": "",
            "breakLine": true
          },
          "amount": {
            "type": "number",
            "label": "Amount",
            "val": "",
            "required": true
          },
          "periodicy": {
            "type": "select",
            "label": "Periodicy",
            "required": true,
            "options": {
              "One-Off": {
                "label": "One-Off"
              },
              "Daily": {
                "label": "Daily"
              },
              "Weekly": {
                "label": "Weekly"
              },
              "Monthly": {
                "label": "Monthly"
              },
              "Quarterly": {
                "label": "Quarterly"
              },
              "Yearly": {
                "label": "Yearly"
              }
            },
            "val": "Yearly",
            "breakLine": true
          },
          "initial_date": {
            "type": "date",
            "label": "(Initial) Date",
            "val": "",
            "required": true
          },
          "add_payment_info": {
            "type": "checkbox",
            "label": "Add Payment Information",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "help_2": {
            "type": "text",
            "label": "",
            "val": "Specify Periodicy",
            "disabled": true,
            "breakLine": true
          },
          "growth": {
            "type": "number",
            "label": "Growth in %",
            "show_if": "this.periodicy!='One-Off'",
            "val": "",
            "required": true
          },
          "growth_period": {
            "type": "select",
            "label": "Growth Period",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Weekly": {
                "label": "Week on Week"
              },
              "Monthly": {
                "label": "Month on Month"
              },
              "Quarterly": {
                "label": "Quarter on Quarter"
              },
              "Yearly": {
                "label": "Year on Year"
              }
            },
            "val": "Yearly"
          },
          "growth_pattern": {
            "type": "select",
            "label": "Growth Pattern",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Linear": {
                "label": "Linear"
              },
              "Compounding": {
                "label": "Compounding"
              },
              "Jump-Fix Linear": {
                "label": "Jump-Fix Linear"
              },
              "Jump-Fix Compounding": {
                "label": "Jump-Fix Compounding"
              }
            },
            "val": "Jump-Fix Linear",
            "breakLine": true
          },
          "final_date": {
            "type": "date",
            "label": "Final Date",
            "show_if": "this.periodicy!='One-Off'",
            "val": "",
            "breakLine": true
          },
          "help_3": {
            "type": "text",
            "label": "",
            "val": "Specify Balance Sheet Impact",
            "disabled": true,
            "breakLine": true
          },
          "payment_days": {
            "type": "number",
            "label": "Payment Days",
            "show_if": "this.add_payment_info=='true'",
            "val": "0"
          },
          "bs_impact_auto_configure": {
            "type": "checkbox",
            "label": "Auto configure",
            "show_if": "this.add_payment_info=='true'",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "working_capital_category": {
            "type": "select",
            "label": "Working Capital Category",
            "show_if": "this.add_payment_info=='true'",
            "options": {
              "current_assets": {
                "label": "Current Assets"
              },
              "current_liabilities": {
                "label": "Current Liabilities"
              },
              "property_equipment": {
                "label": "Property and Equipment"
              },
              "longterm_liabilities": {
                "label": "Long-term Liabilities"
              },
              "other_assets": {
                "label": "Other Assets"
              },
              "shareholders_equity": {
                "label": "Shareholder's Equity"
              }
            },
            "val": "current_assets"
          },
          "working_capital_position__current_assets": {
            "type": "select",
            "label": "Working Capital Position",
            "show_if": "this.add_payment_info=='true' && this.working_capital_category=='current_assets'",
            "options": {
              "Cash": {
                "label": "Cash"
              },
              "Inventory": {
                "label": "Inventory"
              }
            },
            "val": "Cash"
          },
          "working_capital_position__current_liabilities": {
            "type": "select",
            "label": "Working Capital Position",
            "show_if": "this.add_payment_info=='true' && this.working_capital_category=='current_liabilities'",
            "options": {
              "Accounts Payable": {
                "label": "Accounts Payable"
              },
              "Income Tax": {
                "label": "Income Tax"
              }
            },
            "val": "Accounts Payable"
          },
          "working_capital_position__property_equipment": {
            "type": "select",
            "label": "Working Capital Position",
            "show_if": "this.add_payment_info=='true' && this.working_capital_category=='property_equipment'",
            "options": {
              "Land": {
                "label": "Land"
              },
              "Buildings": {
                "label": "Buildings"
              }
            },
            "val": "Land"
          },
          "working_capital_position__longterm_liabilities": {
            "type": "select",
            "label": "Working Capital Position",
            "show_if": "this.add_payment_info=='true' && this.working_capital_category=='longterm_liabilities'",
            "options": {
              "Notes": {
                "label": "Notes"
              },
              "Bonds": {
                "label": "Bonds"
              }
            },
            "val": "Notes"
          },
          "working_capital_position__other_assets": {
            "type": "select",
            "label": "Working Capital Position",
            "show_if": "this.add_payment_info=='true' && this.working_capital_category=='other_assets'",
            "options": {
              "Other Assets": {
                "label": "Other Assets"
              }
            },
            "val": "Other Assets"
          },
          "working_capital_position__shareholders_equity": {
            "type": "select",
            "label": "Working Capital Position",
            "show_if": "this.add_payment_info=='true' && this.working_capital_category=='shareholders_equity'",
            "options": {
              "Common Stock": {
                "label": "Common Stock"
              },
              "Retained Earnings": {
                "label": "Retained Earnings"
              }
            },
            "val": "Common Stock",
            "breakLine": true
          },
          "bs_allocation": {
            "type": "select",
            "label": "Balance Sheet Allocation",
            "show_if": "this.add_payment_info=='true'",
            "options": {
              "Profit Loss Cash": {
                "label": "Profit and Loss (+/-) & Cash (+/-)"
              },
              "Asset Liability Increase": {
                "label": "Asset & Liability Increase"
              },
              "Asset Liability Decrease": {
                "label": "Asset & Liability Decrease"
              },
              "Change in Assets": {
                "label": "Change in Assets"
              },
              "Change in Liabilities": {
                "label": "Change in Liabilities"
              },
              "Profit Loss only": {
                "label": "Profit and Loss only"
              },
              "Balance Sheet only": {
                "label": "Balance Sheet only"
              }
            },
            "val": "Profit Loss Cash"
          },
          "delete": {
            "type": "button",
            "label": "Delete",
            "function": "DELETE_ROW"
          }
        }
      }
    }
  },
  "options_frame": {
    "type": "fieldset",
    "label": "Options",
    "repeat": false,
    "fields": {
      "options.output_type": {
        "type": "select",
        "label": "Output Type",
        "required": true,
        "options": {
          "assumption_table": {
            "label": "Assumption Table"
          },
          "details_table": {
            "label": "Details Table"
          },
          "planning_table": {
            "label": "P&L Planning"
          },
          "cash_flow_planning": {
            "label": "Cash Flow Planning"
          },
          "balance_sheet_planning": {
            "label": "Balance Sheet Planning"
          },
          "pl_pivot_popup": {
            "label": "P&L Pivot Pop-up"
          },
          "cash_flow_pivot_popup": {
            "label": "Cash Flow Pivot Pop-up"
          },
          "balance_sheet_pdf": {
            "label": "Balance Sheet PDF"
          }
        },
        "val": "pl_pivot_popup"
      },
      "options.bs_date": {
        "type": "date",
        "label": "Balance Sheet Date",
        "show_if": "options.output_type=='balance_sheet_planning' || options.output_type=='balance_sheet_pdf'",
        "val": "",
        "style": "width: 200px",
        "required": true
      },
      "options.planning_table__group_by": {
        "type": "select",
        "label": "Group By",
        "show_if": "options.output_type=='planning_table' || options.output_type=='cash_flow_planning'",
        "multiple": true,
        "options": {
          "Year": {
            "label": "Year"
          },
          "Quarter": {
            "label": "Quarter"
          },
          "Month": {
            "label": "Month"
          },
          "Week": {
            "label": "Week"
          },
          "Day": {
            "label": "Day"
          },
          "Position": {
            "label": "Position"
          },
          "Sub Position": {
            "label": "Sub Position"
          },
          "Item": {
            "label": "Item"
          }
        },
        "val": ["Year", "Quarter", "Month", "Position"],
        "required": true,
        "breakLine": true
      },
      "options.set_plan_config": {
        "type": "checkbox",
        "label": "Planning Configuration",
        "show_if": "options.direct_planning__configure_by_table=='false'",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "planning_configuration_frame": {
        "type": "fieldset",
        "label": "Planning Configuration",
        "show_if": "options.direct_planning__configure_by_table=='false' && options.set_plan_config=='true'",
        "repeat": false,
        "fields": {
          "options.add_categories": {
            "type": "checkbox",
            "label": "Add Categories",
            "val": "false",
            "isOn": "true",
            "isOff": "false"
          },
          "options.categories": {
            "type": "fieldset",
            "label": "Add Categories",
            "show_if": "options.add_categories=='true'",
            "repeat": true,
            "fields": {
              "category": {
                "type": "text",
                "label": "Category",
                "val": "",
                "required": true
              },
              "value": {
                "type": "text",
                "label": "Value",
                "val": ""
              },
              "delete": {
                "type": "button",
                "label": "Delete",
                "function": "DELETE_ROW"
              }
            },
            "breakLine": true
          },
          "options.set_amount_column_formatting": {
            "type": "checkbox",
            "label": "Set Amount Column Formatting",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "style": "margin-top: 10px"
          },
          "amount_column_formatting_frame": {
            "type": "fieldset",
            "label": "Amount Column Formatting",
            "show_if": "options.set_amount_column_formatting=='true'",
            "repeat": false,
            "fields": {
              "options.amount.format__category": {
                "type": "select",
                "label": "Amount Format",
                "required": true,
                "options": {
                  "standard": {
                    "label": "Standard"
                  },
                  "number": {
                    "label": "Number"
                  },
                  "percentage": {
                    "label": "Percentage"
                  },
                  "text": {
                    "label": "Text"
                  },
                  "date": {
                    "label": "Date"
                  },
                  "currency": {
                    "label": "Currency"
                  }
                },
                "val": "currency"
              },
              "options.amount.format__rounding": {
                "type": "select",
                "label": "Decimal Places for display",
                "show_if": "options.amount.format__category=='number' || options.amount.format__category=='percentage' || options.amount.format__category=='currency'",
                "required": true,
                "options": {
                  "no_rounding": {
                    "label": "No rounding"
                  },
                  "0": {
                    "label": "0 digits"
                  },
                  "1": {
                    "label": "1 digits"
                  },
                  "2": {
                    "label": "2 digits"
                  },
                  "3": {
                    "label": "3 digits"
                  },
                  "4": {
                    "label": "4 digits"
                  },
                  "5": {
                    "label": "5 digits"
                  },
                  "6": {
                    "label": "6 digits"
                  },
                  "7": {
                    "label": "7 digits"
                  },
                  "8": {
                    "label": "8 digits"
                  },
                  "9": {
                    "label": "9 digits"
                  }
                },
                "val": "2"
              },
              "options.amount.format__use_1000_separator": {
                "type": "checkbox",
                "label": "Use 1000 Separator(,)",
                "show_if": "options.amount.format__category=='number' || options.amount.format__category=='percentage' || options.amount.format__category=='currency'",
                "val": "true",
                "isOn": "true",
                "isOff": "false"
              },
              "options.amount.format__currency_symbol": {
                "type": "select",
                "label": "Symbol",
                "show_if": "options.amount.format__category=='currency'",
                "required": true,
                "options": {
                  "dollar": {
                    "label": "$"
                  },
                  "euro": {
                    "label": "€"
                  },
                  "pound": {
                    "label": "£"
                  }
                },
                "val": "dollar"
              },
              "options.amount.format__date_format": {
                "type": "select",
                "label": "Type",
                "show_if": "options.amount.format__category=='date'",
                "required": true,
                "options": {
                  "mm/dd/yyyy": {
                    "label": "3/14/2012"
                  },
                  "D, M dd, Y": {
                    "label": "Wednesday, March 14, 2012"
                  },
                  "yyyy-mm-dd": {
                    "label": "2012-03-14"
                  }
                },
                "val": "mm/dd/yyyy",
                "breakLine": true
              }
            },
            "breakLine": true
          },
          "options.set_date_column_formatting": {
            "type": "checkbox",
            "label": "Set Date Column Formatting",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "style": "margin-top: 10px"
          },
          "date_column_formatting_frame": {
            "type": "fieldset",
            "label": "Date Column Formatting",
            "show_if": "options.set_date_column_formatting=='true'",
            "repeat": false,
            "fields": {
              "options.date.format__category": {
                "type": "hidden",
                "val": "date"
              },
              "options.date.format__date_format": {
                "type": "select",
                "label": "Type",
                "show_if": "options.date.format__category=='date'",
                "required": true,
                "options": {
                  "mm/dd/yyyy": {
                    "label": "3/14/2012"
                  },
                  "D, M dd, Y": {
                    "label": "Wednesday, March 14, 2012"
                  },
                  "yyyy-mm-dd": {
                    "label": "2012-03-14"
                  }
                },
                "val": "mm/dd/yyyy",
                "breakLine": true
              }
            },
            "breakLine": true
          },
          "options.start_date": {
            "type": "date",
            "label": "Start Date of Table",
            "val": ""
          },
          "options.end_date": {
            "type": "date",
            "label": "End Date of Table",
            "val": "",
            "breakLine": true
          }
        }
      }
    }
  }
},