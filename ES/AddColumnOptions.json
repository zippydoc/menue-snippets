{
  "options_box": {
    "type": "fieldset",
    "label": "Opciones",
    "repeat": false,
    "fields": {
      "options.add_columns": {
        "type": "fieldset",
        "label": "Agregar Nuevas Columnas",
        "repeat": true,
        "fields": {
          "new_column_name": {
            "type": "text",
            "label": "Nuevo Nombre de Columna",
            "val": "",
            "breakLine": true
          },
          "task_type": {
            "type": "select",
            "label": "Tipo de Tarea",
            "required": true,
            "options": {
              "static_value": {
                "label": "Valor Estático"
              },
              "numeric_formula": {
                "label": "Formula Numérica"
              },
              "text_formula": {
                "label": "Formula del Texto"
              },
              "multi_column_functions": {
                "label": "Múltiples Columnas"
              },
              "multi_row_functions": {
                "label": "Múltiples Filas"
              }
            },
            "val": "multi_column_functions",
            "breakLine": true
          },
          "multi_column_functions__function": {
            "type": "select",
            "label": "Función",
            "show_if": "this.task_type=='multi_column_functions'",
            "required": true,
            "options": {
              "sum": {
                "label": "Suma"
              },
              "average": {
                "label": "Promedio"
              },
              "median": {
                "label": "Mediana"
              },
              "max": {
                "label": "Máx"
              },
              "min": {
                "label": "Mín"
              },
              "standard_deviation": {
                "label": "Desviación Estándar"
              },
              "product": {
                "label": "Producto"
              },
              "quota": {
                "label": "Cuota"
              },
              "absolute_growth": {
                "label": "Crecimiento Absoluto"
              },
              "relative_growth": {
                "label": "Crecimiento Relativo"
              },
              "compound_growth": {
                "label": "Crecimiento Compuesto"
              }
            },
            "val": "sum"
          },
          "multi_column_functions__sel_columns": {
            "type": "select",
            "label": "Seleccionar Columna(s)",
