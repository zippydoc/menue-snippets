{
  "options": {
    "type": "fieldset",
    "label": "Seleccionar Opciones",
    "repeat": false,
    "fields": {
      "options.table_permission.set_or_delete": {
        "type": "select",
        "label": "Tipo de acción",
        "show_if": "input.table_or_flow=='set_table_permissions'",
        "required": true,
        "options": {
          "set_permissions": {
            "label": "Establecer permisos"
          },
          "delete_permissions": {
            "label": "Eliminar todos los permisos"
          }
        },
        "val": "set_permissions",
        "breakLine": true
      },
      "options.table_permission.emails": {
        "type": "text",
        "label": "Usuarios permitidos (; lista separada)",
        "show_if": "input.table_or_flow=='set_table_permissions' && options.table_permission.set_or_delete=='set_permissions'",
        "required": true,
        "width": "100%"
      },
      "options.table_permission.permissions": {
        "type": "fieldset",
        "label": "Establecer permisos",
        "show_if": "input.table_or_flow=='set_table_permissions' && options.table_permission.set_or_delete=='set_permissions'",
        "repeat": true,
        "fields": {
          "rows_or_columns": {
            "type": "select",
            "label": "Tipo de tabla",
            "required": true,
            "options": {
              "select_rows": {
                "label": "Seleccionar fila(s)"
              },
              "select_columns": {
                "label": "Seleccionar Columna(s)"
              }
            },
            "val": "select_columns"
          },
          "rows": {
            "type": "select",
            "label": "Seleccionar fila(s)",
            "show_if": "this.rows_or_columns=='select_rows'",
            "table": "input.table_id",
            "bind": "LABELS",
            "multiple": true,
            "required": true
          },
          "columns": {
            "type": "select",
            "label": "Seleccionar columna(s)",
            "show_if": "this.rows_or_columns=='select_columns'",
            "table": "input.table_id",
            "bind": "COLUMNS",
            "multiple": true,
            "required": true
          },
          "permission_type": {
            "type": "select",
            "label": "Tipo de permiso",
            "required": true,
            "options": {
              "READ": {
                "label": "Leer"
              },
              "WRITE": {
                "label": "Escribir"
              },
              "PASS-ON": {
                "label": "Pasar"
              }
            },
            "val": "READ"
          },
          "delete": {
            "type": "button",
            "label": "Borrar",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.flow_permission.set_or_delete": {
        "type": "select",
        "label": "Tipo de acción",
        "show_if": "input.table_or_flow=='set_flow_permissions'",
        "required": true,
        "options": {
          "set_permissions": {
            "label": "Establecer permisos"
          }
        },
        "val": "set_permissions",
        "breakLine": true
      },
      "options.flow_permission.emails": {
        "type": "text",
        "label": "Usuarios permitidos (; lista separada)",
        "show_if": "input.table_or_flow=='set_flow_permissions' && options.flow_permission.set_or_delete=='set_permissions'",
        "required": true,
        "width": "100%"
      },
      "options.flow_permission.permissions": {
        "type": "fieldset",
        "label": "Establecer permisos",
        "show_if": "input.table_or_flow=='set_flow_permissions' && options.flow_permission.set_or_delete=='set_permissions'",
        "repeat": true,
        "fields": {
          "permission_type": {
            "type": "select",
            "label": "Tipo de permiso",
            "required": true,
            "options": {
              "READ": {
                "label": "Leer"
              },
              "WRITE": {
                "label": "Escribir"
              },
              "PASS-ON": {
                "label": "Pasar"
              }
            },
            "val": "READ"
          },
          "delete": {
            "type": "button",
            "label": "Borrar",
            "function": "DELETE_ROW"
          }
        }
      }
    }
  }
}