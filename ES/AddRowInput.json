{
  "input": {
    "type": "fieldset", 
    "label": "Seleziona la tabella degli ingressi", 
    "repeat": false, 
    "fields": {
      "input_table": {
        "type": "select", 
        "label": "Seleziona la tabella", 
        "bind": "TABLES", 
        "empty": "", 
        "required": true
      }, 
      "remove_input_table_after_processing": {
        "type": "hidden", 
        "val": "false"
      }, 
      "is_word": {
        "type": "hidden", 
        "val": "false"
      }, 
      "table_type": {
        "type": "select", 
        "label": "Table Type", 
        "required": true, 
        "options": {
          "header_only": {
            "label": "Header only"
          }, 
          "label_only": {
            "label": "Label only"
          }, 
          "matrix": {
            "label": "Matrix"
          }
        }, 
        "val": "header_only", 
        "breakLine": true
      }, 
      "apply_to_all_columns": {
        "type": "checkbox", 
        "label": "Aplicar a todas las columnas", 
        "show_if": "table_type=='header_only' || table_type=='matrix'", 
        "val": "true", 
        "isOn": "true", 
        "isOff": "false"
      }, 
      "columns_to_apply": {
        "type": "select", 
        "label": "Columns to apply", 
        "show_if": "apply_to_all_columns=='false' && (table_type=='header_only' || table_type=='matrix')", 
        "table": "input_table", 
        "bind": "COLUMNS", 
        "multiple": true, 
        "required": true, 
        "breakLine": true
      }
    }
  }
}
