{
  "input": {
    "type": "fieldset",
    "label": "Seleccionar tabla de consulta",
    "repeat": false,
    "fields": {
      "tables": {
        "type": "fieldset",
        "label": "Seleccionar Tablas",
        "repeat": true,
        "fields": {
          "table_id": {
            "type": "select",
            "label": "Tabla de Búsqueda",
            "bind": "TABLES",
            "required": true
          },
          "lookup_header_column": {
            "type": "select",
            "label": "Columna Cabecera",
            "table": "this.table_id",
            "bind": "COLUMNS",
            "required": true
          },
          "lookup_value_column": {
            "type": "select",
            "label": "Columna de Valores",
            "table": "this.table_id",
            "bind": "COLUMNS",
            "required": true
          },
          "lookup_mapping_column": {
            "type": "select",
            "label": "Columna del Mapeo",
            "table": "this.table_id",
            "bind": "COLUMNS"
          },
          "delete": {
            "type": "button",
            "label": "Borrar",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.treatment": {
        "type": "select",
        "label": "Tratamiento de múltiples ocurrencias",
        "required": true,
        "options": {
          "sum": {
            "label": "Suma"
          },
          "min": {
            "label": "Mín"
          },
          "max": {
            "label": "Máx"
          },
          "shortest": {
            "label": "Más Corto"
          },
          "longest": {
            "label": "Más largo"
          },
          "first": {
            "label": "Primero"
          },
          "last": {
            "label": "Última"
          },
          "concatenate": {
            "label": "Concatenar"
          }
        },
        "val": "sum",
        "style": "min-width: 200px"
      },
      "options.treatment_delimiter": {
        "type": "text",
        "label": "Delimitador",
        "show_if": "options.treatment=='concatenate'",
        "required": true,
        "minLength": 1,
        "maxLength": 255,
        "val": ";",
        "breakLine": true
      }
    }
  }
}