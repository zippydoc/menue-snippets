{
  "options": {
    "type": "fieldset",
    "label": "Seleccionar Opciones",
    "repeat": false,
    "fields": {
      "options.standard.start": {
        "type": "hidden",
        "val": "1"
      },
      "options.standard.multiplier_at_maximum_impact_level": {
        "type": "text",
        "label": "Valor máximo",
        "val": "2",
        "required": true
      },
      "options.standard.maximum": {
        "type": "text",
        "label": "Período Máximo",
        "val": "50",
        "required": true
      },
      "options.standard.multiplier_end_value": {
        "type": "text",
        "label": "Valor final",
        "show_if": "options.standard.end_value_equals_initial_value=='no'",
        "val": "1",
        "required": true
      },
      "options.standard.end": {
        "type": "text",
        "label": "Fin del Período",
        "val": "100",
        "required": true,
        "breakLine": true
      },
      "options.standard.end_value_equals_initial_value": {
        "type": "checkbox",
        "label": "Valor inicial y valor final igual a 1",
        "width": "100%",
        "val": "yes",
        "isOn": "yes",
        "isOff": "no",
        "breakLine": true
      },
      "options.standard.maximum_plateau": {
        "type": "checkbox",
        "label": "Meseta Máxima",
        "width": "100%",
        "val": "yes",
        "isOn": "yes",
        "isOff": "no",
        "breakLine": true
      },
      "options.standard.no_of_periods_prior_defined_maximum_point": {
        "type": "text",
        "label": "Número de períodos antes del punto máximo definido",
        "show_if": "options.standard.maximum_plateau=='yes'",
        "val": "0",
        "style": "width: 250px"
      },
      "options.standard.no_of_periods_post_defined_maximum_point": {
        "type": "text",
        "label": "Número de períodos después del punto máximo definido",
        "show_if": "options.standard.maximum_plateau=='yes'",
        "val": "0",
        "style": "width: 250px",
        "breakLine": true
      },
      "options.standard.left_slope": {
        "type": "select",
        "label": "Pendiente Izquierda",
        "options": {
          "vertical": {
            "label": "Vertical"
          },
          "linear": {
            "label": "Lineal"
          },
          "standard_distribution": {
            "label": "Distribución Estándar"
          }
        },
        "val": "standard_distribution"
      },
      "options.standard.use_auto_calculated_sigma_for_left_slope": {
        "type": "checkbox",
        "label": "Sigma izquierdo calculado automáticamente",
        "show_if": "options.standard.left_slope=='standard_distribution'",
        "val": "true",
        "isOn": "true",
        "isOff": "false"
      },
      "options.standard.left_slope_sigma": {
        "type": "text",
        "label": "Sigma de la Pendiente Izquierda",
        "show_if": "options.standard.left_slope=='standard_distribution' && options.standard.use_auto_calculated_sigma_for_left_slope=='false'",
        "val": "",
        "breakLine": true
      },
      "options.standard.right_slope": {
        "type": "select",
        "label": "Pendiente Derecha",
        "required": true,
        "options": {
          "vertical": {
            "label": "Vertical"
          },
          "linear": {
            "label": "Lineal"
          },
          "standard_distribution": {
            "label": "Distribución Estándar"
          }
        },
        "val": "standard_distribution"
      },
      "options.standard.use_auto_calculated_sigma_for_right_slope": {
        "type": "checkbox",
        "label": "Sigma derecho calculado automáticamente",
        "show_if": "options.standard.right_slope=='standard_distribution'",
        "val": "true",
        "isOn": "true",
        "isOff": "false"
      },
      "options.standard.right_slope_sigma": {
        "type": "text",
        "label": "Sigma de la Pendiente Derecha",
        "show_if": "options.standard.right_slope=='standard_distribution' && options.standard.use_auto_calculated_sigma_for_right_slope=='false'",
        "val": "",
        "breakLine": true
      }
    }
  }
}