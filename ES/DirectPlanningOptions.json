{
  "options": {
    "type": "fieldset",
    "Etiqueta": "Seleccionar Opciones",
    "repeat": false,
    "fields": {
      "options.taskname": {
        "type": "hidden",
        "val": "direct_planning"
      },
      "options.type": {
        "type": "hidden",
        "val": "custom"
      },
      "options.custom.table": {
        "type": "fieldset",
        "Etiqueta": "Posición de planificación",
        "repeat": true,
        "fields": {
          "position": {
            "type": "select",
            "Etiqueta": "Posición",
            "options": {
              "Revenues": {
                "Etiqueta": "Revenues"
              },
              "Cost of Goods Sold": {
                "Etiqueta": "Cost of Goods Sold"
              },
              "Marketing Expenses": {
                "Etiqueta": "Marketing Expenses"
              },
              "Operating Expenses": {
                "Etiqueta": "Operating Expenses"
              },
              "General and Administration Expenses": {
                "Etiqueta": "General and Administration Expenses"
              },
              "Personnel Expenses": {
                "Etiqueta": "Personnel Expenses"
              },
              "Tax": {
                "Etiqueta": "Tax"
              },
              "Capital Expenditure": {
                "Etiqueta": "Capital Expenditure"
              },
              "Depreciation": {
                "Etiqueta": "Depreciation"
              },
              "Amortization": {
                "Etiqueta": "Amortization"
              },
              "Extraordinary Items": {
                "Etiqueta": "Extraordinary Items"
              },
              "Depretiation & Amortisation": {
                "Etiqueta": "Depretiation & Amortisation"
              }
            },
            "val": "Revenues",
            "required": true
          },
          "revenues__sub_position": {
            "type": "select",
            "Etiqueta": "Sub Position",
            "show_if": "this.position=='Revenues'",
            "options": {
              "Sales": {
                "Etiqueta": "Sales"
              },
              "Increase(+)/Decrease(-) Inventories": {
                "Etiqueta": "Increase(+)/Decrease(-) Inventories"
              },
              "Other Revenues": {
                "Etiqueta": "Other Revenues"
              }
            },
            "val": "Sales",
            "required": true
          },
          "cost_of_goods_sold__sub_position": {
            "type": "select",
            "Etiqueta": "Sub Position",
            "show_if": "this.position=='Cost of Goods Sold'",
            "options": {
              "Material Costs": {
                "Etiqueta": "Material Costs"
              },
              "Purchased Services": {
                "Etiqueta": "Purchased Services"
              }
            },
            "val": "Material Costs",
            "required": true
          },
          "general_administration_expenses__sub_position": {
            "type": "select",
            "Etiqueta": "Sub Position",
            "show_if": "this.position=='General and Administration Expenses'",
            "options": {
              "Rental Expenses": {
                "Etiqueta": "Rental Expenses"
              },
              "Cleaning": {
                "Etiqueta": "Cleaning"
              },
              "Office Items": {
                "Etiqueta": "Office Items"
              },
              "Consulting": {
                "Etiqueta": "Consulting"
              },
              "Recruiting": {
                "Etiqueta": "Recruiting"
              }
            },
            "val": "Rental Expenses",
            "required": true
          },
          "personnel_expenses__sub_position": {
            "type": "select",
            "Etiqueta": "Sub Position",
            "show_if": "this.position=='Personnel Expenses'",
            "options": {
              "Fix Salary": {
                "Etiqueta": "Fix Salary"
              },
              "Bonus": {
                "Etiqueta": "Bonus"
              },
              "Other Compensation": {
                "Etiqueta": "Other Compensation"
              }
            },
            "val": "Fix Salary",
            "required": true
          },
          "capital_expenditure__sub_position": {
            "type": "select",
            "Etiqueta": "Sub Position",
            "show_if": "this.position=='Capital Expenditure'",
            "options": {
              "Maintenance Capex": {
                "Etiqueta": "Maintenance Capex"
              },
              "Expansion Capex": {
                "Etiqueta": "Expansion Capex"
              }
            },
            "val": "Maintenance Capex",
            "required": true
          },
          "extraordinary_items__sub_position": {
            "type": "select",
            "Etiqueta": "Sub Position",
            "show_if": "this.position=='Extraordinary Items'",
            "options": {
              "Extraordinary Income": {
                "Etiqueta": "Extraordinary Income"
              },
              "Extraordinary Expenses": {
                "Etiqueta": "Extraordinary Expenses"
              }
            },
            "val": "Extraordinary Income",
            "required": true
          },
          "tax__sub_position": {
            "type": "select",
            "Etiqueta": "Sub Position",
            "show_if": "this.position=='Tax'",
            "options": {
              "Value Added Tax": {
                "Etiqueta": "Value Added Tax"
              },
              "Corporate Tax": {
                "Etiqueta": "Corporate Tax"
              },
              "Trade Tax": {
                "Etiqueta": "Trade Tax"
              }
            },
            "val": "Value Added Tax",
            "required": true
          },
          "interest__sub_position": {
            "type": "select",
            "Etiqueta": "Sub Position",
            "show_if": "this.position=='Interest'",
            "options": {
              "Interest Income": {
                "Etiqueta": "Interest Income"
              },
              "Interest Expenses": {
                "Etiqueta": "Interest Expenses"
              }
            },
            "val": "Interest Income",
            "required": true
          },
          "depretiation_amortisation__sub_position": {
            "type": "select",
            "Etiqueta": "Sub Position",
            "show_if": "this.position=='Depretiation & Amortisation'",
            "options": {
              "Depretiation": {
                "Etiqueta": "Depretiation"
              },
              "Amortisation": {
                "Etiqueta": "Amortisation"
              }
            },
            "val": "Depretiation",
            "required": true
          },
          "item": {
            "type": "text",
            "Etiqueta": "Partida",
            "val": ""
          },
          "amount": {
            "type": "number",
            "Etiqueta": "Cantidad",
            "val": "",
            "required": true
          },
          "periodicy": {
            "type": "select",
            "Etiqueta": "Periodicidad",
            "required": true,
            "options": {
              "One-Off": {
                "Etiqueta": "One-Off"
              },
              "Diario": {
                "Etiqueta": "Diario"
              },
              "semanal": {
                "Etiqueta": "semanal"
              },
              "Mensual": {
                "Etiqueta": "Mensual"
              },
              "Trimestral": {
                "Etiqueta": "Trimestral"
              },
              "Anual": {
                "Etiqueta": "Anual"
              }
            },
            "val": "Anual",
            "breakLine": true
          },
          "growth": {
            "type": "number",
            "Etiqueta": "Growth in %",
            "show_if": "this.periodicy!='One-Off'",
            "val": "",
            "required": true
          },
          "growth_period": {
            "type": "select",
            "Etiqueta": "Período de Crecimiento",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "semanal": {
                "Etiqueta": "Semana a Semana"
              },
              "Mensual": {
                "Etiqueta": "Mes a Mes"
              },
              "Trimestral": {
                "Etiqueta": "Trimestre a Trimestre"
              },
              "Anual": {
                "Etiqueta": "Año a Año"
              }
            },
            "val": "Anual"
          },
          "growth_pattern": {
            "type": "select",
            "Etiqueta": "Patrón de Crecimiento",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Compuesto": {
                "Etiqueta": "Compuesto"
              },
              "Lineal": {
                "Etiqueta": "Lineal"
              },
              "Jump-Fix": {
                "Etiqueta": "Jump-Fix"
              }
            },
            "val": "Jump-Fix",
            "breakLine": true
          },
          "initial_date": {
            "type": "date",
            "Etiqueta": "Fecha Inicial",
            "val": "",
            "required": true
          },
          "final_date": {
            "type": "date",
            "Etiqueta": "Fecha Final",
            "show_if": "this.periodicy!='One-Off'",
            "val": ""
          },
          "delete": {
            "type": "button",
            "Etiqueta": "Borrar",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.output_type": {
        "type": "select",
        "Etiqueta": "Tipo de salida",
        "required": true,
        "options": {
          "planning_table": {
            "Etiqueta": "Planning Table"
          },
          "periodicy_table": {
            "Etiqueta": "Periodicy Table"
          },
          "summary_table": {
            "Etiqueta": "Summary Table"
          }
        },
        "val": "summary_table"
      },
      "options.summary_table__group_by": {
        "type": "select",
        "Etiqueta": "Agrupar por",
        "show_if": "options.output_type=='summary_table'",
        "multiple": true,
        "options": {
          "Año": {
            "Etiqueta": "Año"
          },
          "Trimestre": {
            "Etiqueta": "Trimestre"
          },
          "Mes": {
            "Etiqueta": "Mes"
          },
          "Semana": {
            "Etiqueta": "Semana"
          },
          "Day": {
            "Etiqueta": "Day"
          },
          "Posición": {
            "Etiqueta": "Posición"
          },
          "Sub Position": {
            "Etiqueta": "Sub Position"
          },
          "Partida": {
            "Etiqueta": "Partida"
          }
        },
        "val": ["Año", "Trimestre", "Mes", "Posición"],
        "required": true,
        "breakLine": true
      },
      "options.set_plan_config": {
        "type": "checkbox",
        "Etiqueta": "Planning Configuration",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "planning_configuration_frame": {
        "type": "fieldset",
        "Etiqueta": "Planning Configuration",
        "show_if": "options.set_plan_config=='true'",
        "repeat": false,
        "fields": {
          "options.add_categories": {
            "type": "checkbox",
            "Etiqueta": "Add Categories",
            "val": "false",
            "isOn": "true",
            "isOff": "false"
          },
          "options.categories": {
            "type": "fieldset",
            "Etiqueta": "Add Categories",
            "show_if": "options.add_categories=='true'",
            "repeat": true,
            "fields": {
              "category": {
                "type": "text",
                "Etiqueta": "Category",
                "val": "",
                "required": true
              },
              "value": {
                "type": "text",
                "Etiqueta": "Valor",
                "val": ""
              },
              "delete": {
                "type": "button",
                "Etiqueta": "Borrar",
                "function": "DELETE_ROW"
              }
            },
            "breakLine": true
          },
          "options.set_amount_column_formatting": {
            "type": "checkbox",
            "Etiqueta": "Set Amount Column Formatting",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "style": "margin-top: 10px"
          },
          "formatting_frame": {
            "type": "fieldset",
            "Etiqueta": "Formato de la columna de importes",
            "show_if": "options.set_amount_column_formatting=='true'",
            "repeat": false,
            "fields": {
              "options.amount.format__category": {
                "type": "select",
                "Etiqueta": "Formato de importe",
                "required": true,
                "options": {
                  "standard": {
                    "Etiqueta": "Estándar"
                  },
                  "number": {
                    "Etiqueta": "Número"
                  },
                  "percentage": {
                    "Etiqueta": "Porcentaje"
                  },
                  "text": {
                    "Etiqueta": "Texto"
                  },
                  "date": {
                    "Etiqueta": "Fecha"
                  },
                  "currency": {
                    "Etiqueta": "Moneda"
                  }
                },
                "val": "currency"
              },
              "options.amount.format__rounding": {
                "type": "select",
                "Etiqueta": "Redondeo",
                "show_if": "options.amount.format__category=='number' || options.amount.format__category=='percentage' || options.amount.format__category=='currency'",
                "required": true,
                "options": {
                  "no_rounding": {
                    "Etiqueta": "Redondeo de números"
                  },
                  "0": {
                    "Etiqueta": "0 dígitos"
                  },
                  "1": {
                    "Etiqueta": "1 dígitos"
                  },
                  "2": {
                    "Etiqueta": "2 dígitos"
                  },
                  "3": {
                    "Etiqueta": "3 dígitos"
                  },
                  "4": {
                    "Etiqueta": "4 dígitos"
                  },
                  "5": {
                    "Etiqueta": "5 dígitos"
                  },
                  "6": {
                    "Etiqueta": "6 dígitos"
                  },
                  "7": {
                    "Etiqueta": "7 dígitos"
                  },
                  "8": {
                    "Etiqueta": "8 dígitos"
                  },
                  "9": {
                    "Etiqueta": "9 dígitos"
                  }
                },
                "val": "2"
              },
              "options.amount.format__use_1000_separator": {
                "type": "checkbox",
                "Etiqueta": "Usar el Separador de 1000(.)",
                "show_if": "options.amount.format__category=='number' || options.amount.format__category=='percentage' || options.amount.format__category=='currency'",
                "val": "true",
                "isOn": "true",
                "isOff": "false"
              },
              "options.amount.format__currency_symbol": {
                "type": "select",
                "Etiqueta": "Símbolo",
                "show_if": "options.amount.format__category=='currency'",
                "required": true,
                "options": {
                  "dollar": {
                    "Etiqueta": "$"
                  },
                  "euro": {
                    "Etiqueta": "€"
                  },
                  "pound": {
                    "Etiqueta": "£"
                  }
                },
                "val": "dollar"
              },
              "options.amount.format__date_format": {
                "type": "select",
                "Etiqueta": "Tipo",
                "show_if": "options.amount.format__category=='date'",
                "required": true,
                "options": {
                  "mm/dd/yyyy": {
                    "Etiqueta": "3/14/2012"
                  },
                  "D, M dd, Y": {
                    "Etiqueta": "Miércoles, 14 de marzo de 2012"
                  },
                  "yyyy-mm-dd": {
                    "Etiqueta": "40982"
                  }
                },
                "val": "mm/dd/yyyy",
                "breakLine": true
              }
            },
            "breakLine": true
          },
          "options.end_date": {
            "type": "date",
            "Etiqueta": "Fecha de Finalización de la Tabla",
            "show_if": "options.type=='process' || options.type=='custom'",
            "val": "",
            "style": "width: 300px",
            "breakLine": true
          }
        }
      }
    }
  }
}