{
  "options": {
    "type": "fieldset",
    "Etiqueta": "Seleccionar Opciones",
    "repeat": false,
    "fields": {
      "options.task_type": {
        "type": "select",
        "Etiqueta": "Tipo de Tarea",
        "required": true,
        "options": {
          "write_series": {
            "Etiqueta": "Escribir serie de correos electrónicos"
          },
          "write_email": {
            "Etiqueta": "Escribir correo electrónico"
          },
          "read": {
            "Etiqueta": "Leer correos electrónicos"
          }
        },
        "val": "write_email"
      },
      "options.to": {
        "type": "text",
        "Etiqueta": "Para",
        "show_if": "options.task_type=='write_email'",
        "required": true,
        "val": "",
        "placeholder": "user1@domain.com; user2@domain.com;",
        "width": "100%"
      },
      "options.cc": {
        "type": "text",
        "Etiqueta": "CC",
        "show_if": "options.task_type=='write_email'",
        "required": true,
        "val": "",
        "placeholder": "ccuser1@domain.com; ccuser2@domain.com",
        "width": "100%"
      },
      "options.bcc": {
        "type": "text",
        "Etiqueta": "CCO",
        "show_if": "options.task_type=='write_email'",
        "required": true,
        "val": "",
        "placeholder": "bccuser1@domain.com; bccuser1@domain.com",
        "width": "100%"
      },
      "options.subject": {
        "type": "text",
        "Etiqueta": "Asunto",
        "show_if": "options.task_type=='write_email'",
        "required": true,
        "val": "",
        "placeholder": "Asunto",
        "width": "100%"
      },
      "options.body": {
        "type": "text",
        "Etiqueta": "Cuerpo",
        "show_if": "options.task_type=='write_email'",
        "required": true,
        "val": "",
        "placeholder": "Texto",
        "width": "100%"
      }
    }
  },
  "smtp_config_frame": {
    "type": "fieldset",
    "Etiqueta": "Conexión SMTP",
    "show_if": "options.task_type=='write_series' || options.task_type=='write_email'",
    "repeat": false,
    "fields": {
      "options.smtp.type": {
        "type": "select",
        "Etiqueta": "Seleccionar servidor SMTP",
        "options": {
          "gmail": {
            "Etiqueta": "Gmail"
          },
          "custom": {
            "Etiqueta": "Personalizado (próximamente)"
          }
        },
        "val": "gmail",
        "required": true,
        "breakLine": true
      },
      "gmail_warning": {
        "type": "text",
        "Etiqueta": "",
        "show_if": "options.smtp.type=='gmail'",
        "val": "Turn 'Allow less secure apps' ON in https://myaccount.google.com/lesssecureapps",
        "width": "100%",
        "disabled": true
      },
      "options.gmail.user": {
        "type": "text",
        "Etiqueta": "Usuario de Gmail",
        "show_if": "options.smtp.type=='gmail'",
        "required": true,
        "placeholder": "sender@gmail.com"
      },
      "options.gmail.password": {
        "type": "password",
        "Etiqueta": "Contraseña de Gmail",
        "show_if": "options.smtp.type=='gmail'",
        "required": true
      },
      "options.custom.host": {
        "type": "text",
        "Etiqueta": "Host SMTP",
        "show_if": "options.smtp.type=='custom'",
        "required": true
      },
      "options.custom.port": {
        "type": "text",
        "Etiqueta": "Puerto SMTP",
        "show_if": "options.smtp.type=='custom'",
        "required": true
      },
      "options.custom.user": {
        "type": "text",
        "Etiqueta": "Usuario SMTP",
        "show_if": "options.smtp.type=='custom'",
        "required": true
      },
      "options.custom.password": {
        "type": "password",
        "Etiqueta": "Contraseña SMTP",
        "show_if": "options.smtp.type=='custom'",
        "required": true
      }
    }
  }
}