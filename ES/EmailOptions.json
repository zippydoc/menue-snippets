{
  "options": {
    "type": "fieldset",
    "label": "Seleccionar Opciones",
    "repeat": false,
    "fields": {
      "options.task_type": {
        "type": "select",
        "label": "Tipo de Tarea",
        "required": true,
        "options": {
          "write_series": {
            "label": "Write e-mail series"
          },
          "write_email": {
            "label": "Write e-mail"
          },
          "read": {
            "label": "Read e-mails"
          }
        },
        "val": "write_email"
      },
      "options.to": {
        "type": "text",
        "label": "To",
        "show_if": "options.task_type=='write_email'",
        "required": true,
        "val": "",
        "placeholder": "user1@domain.com; user2@domain.com;",
        "width": "100%"
      },
      "options.cc": {
        "type": "text",
        "label": "CC",
        "show_if": "options.task_type=='write_email'",
        "required": true,
        "val": "",
        "placeholder": "ccuser1@domain.com; ccuser2@domain.com",
        "width": "100%"
      },
      "options.bcc": {
        "type": "text",
        "label": "BCC",
        "show_if": "options.task_type=='write_email'",
        "required": true,
        "val": "",
        "placeholder": "bccuser1@domain.com; bccuser1@domain.com",
        "width": "100%"
      },
      "options.subject": {
        "type": "text",
        "label": "Subject",
        "show_if": "options.task_type=='write_email'",
        "required": true,
        "val": "",
        "placeholder": "Subject",
        "width": "100%"
      },
      "options.body": {
        "type": "text",
        "label": "Body",
        "show_if": "options.task_type=='write_email'",
        "required": true,
        "val": "",
        "placeholder": "Texto",
        "width": "100%"
      }
    }
  },
  "smtp_config_frame": {
    "type": "fieldset",
    "label": "SMTP Connection",
    "show_if": "options.task_type=='write_series' || options.task_type=='write_email'",
    "repeat": false,
    "fields": {
      "options.smtp.type": {
        "type": "select",
        "label": "Select SMTP Server",
        "options": {
          "gmail": {
            "label": "Gmail"
          },
          "custom": {
            "label": "Custom (coming soon)"
          }
        },
        "val": "gmail",
        "required": true,
        "breakLine": true
      },
      "gmail_warning": {
        "type": "text",
        "label": "",
        "show_if": "options.smtp.type=='gmail'",
        "val": "Turn 'Allow less secure apps' ON in https://myaccount.google.com/lesssecureapps",
        "width": "100%",
        "disabled": true
      },
      "options.gmail.user": {
        "type": "text",
        "label": "Gmail User",
        "show_if": "options.smtp.type=='gmail'",
        "required": true,
        "placeholder": "sender@gmail.com"
      },
      "options.gmail.password": {
        "type": "password",
        "label": "Gmail Password",
        "show_if": "options.smtp.type=='gmail'",
        "required": true
      },
      "options.custom.host": {
        "type": "text",
        "label": "SMTP Host",
        "show_if": "options.smtp.type=='custom'",
        "required": true
      },
      "options.custom.port": {
        "type": "text",
        "label": "SMTP Port",
        "show_if": "options.smtp.type=='custom'",
        "required": true
      },
      "options.custom.user": {
        "type": "text",
        "label": "SMTP User",
        "show_if": "options.smtp.type=='custom'",
        "required": true
      },
      "options.custom.password": {
        "type": "password",
        "label": "SMTP Password",
        "show_if": "options.smtp.type=='custom'",
        "required": true
      }
    }
  }
}