{
  "options": {
    "type": "fieldset",
    "label": "Seleccionar Opciones",
    "repeat": false,
    "fields": {
      "options.task_type": {
        "type": "select",
        "label": "Tipo de Tarea",
        "required": true,
        "options": {
          "write_series": {
            "label": "Escribir serie de correos electrónicos"
          },
          "write_email": {
            "label": "Escribir correo electrónico"
          },
          "read": {
            "label": "Leer correos electrónicos"
          }
        },
        "val": "write_email"
      },
      "input_table": {
        "type": "select",
        "label": "Seleccionar Tabla",
        "show_if": "options.task_type=='write_series'",
        "bind": "TABLES",
        "empty": "",
        "required": true
      },
      "info1": {
        "type": "text",
        "label": "",
        "show_if": "options.task_type=='write_series'",
        "val": "Table-Type: TO | CC | BCC | SUBJECT | BODY",
        "disabled": true,
        "style": "width: 100%"
      },
      "options.to": {
        "type": "text",
        "label": "Para",
        "show_if": "options.task_type=='write_email'",
        "required": true,
        "val": "",
        "placeholder": "user1@domain.com; user2@domain.com;",
        "width": "100%"
      },
      "options.cc": {
        "type": "text",
        "label": "CC",
        "show_if": "options.task_type=='write_email'",
        "val": "",
        "placeholder": "ccuser1@domain.com; ccuser2@domain.com",
        "width": "100%"
      },
      "options.bcc": {
        "type": "text",
        "label": "CCO",
        "show_if": "options.task_type=='write_email'",
        "val": "",
        "placeholder": "bccuser1@domain.com; bccuser1@domain.com",
        "width": "100%"
      },
      "options.subject": {
        "type": "text",
        "label": "Asunto",
        "show_if": "options.task_type=='write_email'",
        "required": true,
        "val": "",
        "placeholder": "Asunto",
        "width": "100%"
      },
      "options.body": {
        "type": "textarea",
        "label": "Cuerpo",
        "show_if": "options.task_type=='write_email'",
        "val": "",
        "placeholder": "Texto",
        "md_no_resize": true,
        "rows": 3,
        "width": "100%"
      }
    }
  },
  "smtp_config_frame": {
    "type": "fieldset",
    "label": "Conexión SMTP",
    "show_if": "options.task_type=='write_series' || options.task_type=='write_email'",
    "repeat": false,
    "fields": {
      "options.smtp.type": {
        "type": "select",
        "label": "Seleccionar servidor SMTP",
        "options": {
          "gmail": {
            "label": "Gmail"
          },
          "custom": {
            "label": "Personalizado (próximamente)"
          }
        },
        "val": "gmail",
        "required": true,
        "breakLine": true
      },
      "gmail_warning": {
        "type": "text",
        "label": "",
        "show_if": "options.smtp.type=='gmail'",
        "val": "Turn 'Allow less secure apps' ON in https://myaccount.google.com/lesssecureapps",
        "width": "100%",
        "disabled": true
      },
      "options.gmail.user": {
        "type": "text",
        "label": "Usuario de Gmail",
        "show_if": "options.smtp.type=='gmail'",
        "required": true,
        "placeholder": "sender@gmail.com"
      },
      "options.gmail.password": {
        "type": "password",
        "label": "Contraseña de Gmail",
        "show_if": "options.smtp.type=='gmail'",
        "required": true
      },
      "options.custom.host": {
        "type": "text",
        "label": "Host SMTP",
        "show_if": "options.smtp.type=='custom'",
        "required": true
      },
      "options.custom.port": {
        "type": "text",
        "label": "Puerto SMTP",
        "show_if": "options.smtp.type=='custom'",
        "required": true
      },
      "options.custom.user": {
        "type": "text",
        "label": "Usuario SMTP",
        "show_if": "options.smtp.type=='custom'",
        "required": true
      },
      "options.custom.password": {
        "type": "password",
        "label": "Contraseña SMTP",
        "show_if": "options.smtp.type=='custom'",
        "required": true
      }
    }
  }
}