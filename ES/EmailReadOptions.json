{
  "options_frame": {
    "type": "fieldset",
    "label": "Seleccionar Opciones",
    "repeat": false,
    "fields": {
      "options.task_type": {
        "type": "hidden",
        "val": "read_email"
      },
      "options.all_folders": {
        "type": "checkbox",
        "label": "Importar todas las carpetas de correo",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "options.read_folders": {
        "type": "select",
        "label": "Mail Folder(s) to import",
        "show_if": "options.all_folders=='false'",
        "required": true,
        "multiple": true,
        "options": {
          "Archive": {
            "label": "Archive"
          },
          "Conversation History": {
            "label": "Historia de la conversación"
          },
          "Deleted Items": {
            "label": "Elementos eliminados"
          },
          "Drafts": {
            "label": "Borradores"
          },
          "Inbox": {
            "label": "Bandeja de entrada"
          },
          "Junk Email": {
            "label": "Correo basura"
          },
          "Outbox": {
            "label": "Bandeja de salida"
          },
          "RSS Feeds": {
            "label": "Canales RSS"
          },
          "Sent Items": {
            "label": "Artículos enviados"
          },
          "Sync Issues": {
            "label": "Problemas de sincronización"
          }
        },
        "val": ["Inbox"],
        "breakLine": true
      },
      "options.all_columns": {
        "type": "checkbox",
        "label": "Importar todas las columnas",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "options.import_columns": {
        "type": "select",
        "label": "Columnas a importar",
        "show_if": "options.all_columns=='false'",
        "required": true,
        "multiple": true,
        "options": {
          "CreatedAt": {
            "label": "CreatedAt"
          },
          "ReceivedAt": {
            "label": "ReceivedAt"
          },
          "SentAt": {
            "label": "SentAt"
          },
          "Subject": {
            "label": "Asunto"
          },
          "BodyPreview": {
            "label": "CuerpoVista"
          },
          "From": {
            "label": "De"
          },
          "CC": {
            "label": "CC"
          },
          "BCC": {
            "label": "CCO"
          },
          "HasAttachments": {
            "label": "HasAttachments"
          },
          "IsRead": {
            "label": "IsRead"
          },
          "IsDraft": {
            "label": "IsDraft"
          },
          "WebLink": {
            "label": "WebLink"
          },
          "Body": {
            "label": "Cuerpo"
          }
        },
        "val": ["CreatedAt","Subject","BodyPreview","From","HasAttachments","WebLink"]
      },
      "info3": {
        "type": "text",
        "label": "",
        "val": "This task only supports users logged in via Microsoft Login",
        "disabled": true,
        "style": "width: 100%"
      }
    }
  }
}