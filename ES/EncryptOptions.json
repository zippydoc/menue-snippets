{
  "options": {
    "type": "fieldset", 
    "label": "Seleccionar Opciones", 
    "repeat": false, 
    "fields": {
      "task_type": {
        "type": "select", 
        "label": "Tipo de Tarea", 
        "required": true, 
        "options": {
          "encrypt": {
            "label": “Encriptar (seguro)”
          }, 
          "decrypt": {
            "label": “Desencriptar (seguro)”
          }, 
          "encrypt_simple": {
            "label": “Encriptar (simple)”
          }, 
          "decrypt_simple": {
            "label": “Desencriptar (simple)”
          }, 
          "mask": {
            "label": “Máscara”
          }
        }, 
        "val": "encrypt"
      }, 
      "mask_type": {
        "type": "select", 
        "label": “Tipo de Máscara”, 
        "show_if": "task_type == 'mask'", 
        "required": true, 
        "options": {
          "trailing": {
            "label": “Primeros N Caracteres”
          }, 
          "leading": {
            "label": “N Caracteres de Adelante”
          }, 
          "numbers": {
            "label": "Números"
          }, 
          "alphabets": {
            "label": “Caracteres”
          }, 
          "regex": {
            "label": "Expresión Regular"
          }
        }, 
        "val": "trailing"
      }, 
      "password": {
        "type": "password", 
        "label": "Contraseña", 
        "show_if": "task_type != 'mask'", 
        "required": true, 
        "minLength": 1, 
        "maxLength": 31, 
        "val": ""
      }, 
      "varn": {
        "type": "number", 
        "label": "N", 
        "show_if": "task_type == 'mask' && (mask_type == 'trailing' || mask_type == 'leading')", 
        "required": true, 
        "val": "1"
      }, 
      "regexp": {
        "type": "text", 
        "label": “Expresión”, 
        "show_if": "task_type == 'mask' && (mask_type == 'regex')", 
        "required": true, 
        "val": "", 
        "placeholder": "[a-fA-F0-9]"
      }, 
      "replace": {
        "type": "text", 
        "label": “Cadena de máscaras”, 
        "show_if": "task_type == 'mask' && (mask_type == 'regex')", 
        "required": true, 
        "val": "*"
      }
    }
  }
}