{
  "options": {
    "type": "fieldset",
    "label": "Seleccionar Opciones",
    "repeat": false,
    "fields": {
      "options.to": {
        "type": "hidden",
        "val": "database"
      },
      "postgresql_db_credential_box": {
        "type": "fieldset",
        "label": "Credenciales de Conexión para la Base de Datos",
        "repeat": false,
        "fields": {
          "options.dbms": {
            "type": "select",
            "label": "Seleccionar DBMS",
            "options": {
              "postgresql": {
                "label": "PostgreSQL"
              },
              "mysql": {
                "label": "MySQL"
              },
              "sql_server": {
                "label": "Servidor MS SQL"
              },
              "oracle": {
                "label": "Oracle"
              }
            },
            "val": "postgresql",
            "required": true,
            "breakLine": true
          },
          "options.postgresql_credential.user": {
            "type": "text",
            "label": "Usuario",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.postgresql_credential.password": {
            "type": "text",
            "label": "Contraseña",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.postgresql_credential.host": {
            "type": "text",
            "label": "Host",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.postgresql_credential.database": {
            "type": "text",
            "label": "Base de Datos",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          }
        }
      },
      "options.schema_name_to_export": {
        "type": "text",
        "label": "Nombre del esquema al cual hay que exportar",
        "show_if": "options.dbms=='postgresql'",
        "required": true,
        "val": "public",
        "width": "100%",
        "breakLine": true
      },
      "options.if_duplicated": {
        "type": "select",
        "label": "Si está duplicado",
        "val": "drop_if_exist",
        "options": {
          "drop_if_exist": {
            "label": "Crear o Descartar (si ya existe)"
          },
          "error_if_exist": {
            "label": "Crear Nuevo (lanza error si existe)"
          },
          "error_if_not_exist": {
            "label": "Descartar (lanzar error si no existe)"
          },
          "append": {
            "label": "Anexar"
          }
        }
      }
    }
  }
}