{
  "options": {
    "type": "fieldset",
    "label": "Buscar opciones de grupo",
    "repeat": false,
    "fields": {
      "group_column": {
        "type": "select",
        "label": "Select Group Column",
        "required": true,
        "table": "table_id",
        "bind": "COLUMNS",
        "multiple": false
      },
      "item_column": {
        "type": "select",
        "label": "Select Item Column",
        "required": true,
        "table": "table_id",
        "bind": "COLUMNS",
        "multiple": false,
        "breakLine": true
      },
      "min_group_count": {
        "type": "number",
        "label": "Recuento mínimo de grupos",
        "required": true,
        "val": "3"
      },
      "min_group_size": {
        "type": "number",
        "label": "Tamaño mínimo del grupo",
        "required": true,
        "val": "1",
        "breakLine": true
      },
      "ordered": {
        "type": "select",
        "label": "Ordenado / Desordenado",
        "required": true,
        "options": {
          "ordered": {
            "label": "Ordenado"
          },
          "unordered": {
            "label": "Desordenado"
          }
        },
        "val": "unordered"
      },
      "item_order": {
        "type": "select",
        "label": "Orden",
        "required": true,
        "options": {
          "no": {
            "label": "-"
          },
          "ascending": {
            "label": "Ascendente"
          },
          "descending": {
            "label": "Descendente"
          }
        },
        "val": "no",
        "breakLine": true,
        "show_if": "ordered == 'unordered'"
      },
      "output_type": {
        "type": "select",
        "label": "Tipo de salida",
        "required": true,
        "options": {
          "item_group_list": {
            "label": "Lista de grupos encontrados"
          },
          "item_group_column": {
            "label": "Asignar grupos encontrados"
          }
        },
        "val": "item_group_list"
      }
    }
  }
}