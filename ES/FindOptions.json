{
  "options": {
    "type": "fieldset",
    "label": "Selecionar Opções de Procura",
    "repeat": false,
    "fields": {
      "add_column": {
        "type": "text",
        "label": "Nome de coluna para o estado de correspondência",
        "val": "Match",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "use_custom_delimiter": {
        "type": "checkbox",
        "label": "Custom delimiter for multiple matches",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "custom_delimiter": {
        "type": "text",
        "label": "Custom delimiter",
        "show_if": "use_custom_delimiter=='true'",
        "val": ";",
        "required": true
      },
      "do_not_duplicate": {
        "type": "checkbox",
        "label": "Don't duplicate same matches",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "filter_box": {
        "type": "fieldset",
        "label": "Opções de Filtro",
        "repeat": false,
        "fields": {
          "filter": {
            "type": "fieldset",
            "label": "Select Conditions for Match",
            "repeat": true,
            "fields": {
              "initial_op": {
                "type": "select",
                "label": "Selecionar Operador Lógico",
                "required": true,
                "show_if" :  "$index == 0",
                "options": {
                  "if": {
                    "label": "IF"
                  },
                  "if_not": {
                    "label": "IF NOT"
                  }
                },
                "val": "if"
              },
              "op": {
                "type": "select",
                "label": "Selecionar Operador Lógico",
                "show_if" :  "$index > 0",
                "options": {
                  "and": {
                    "label": "AND"
                  },
                  "or": {
                    "label": "OR"
                  },
                  "and_not": {
                    "label": "AND NOT"
                  },
                  "or_not": {
                    "label": "OR NOT"
                  }
                },
                "val": "and"
              },
              "column": {
                "type": "select",
                "label": "Selecionar Coluna",
                "table": "input_table",
                "bind": "COLUMNS",
                "required": true
              },
              "condition": {
                "type": "select",
                "label": "Selecionar Operador",
                "required": true,
                "options": {
                  "CONTÉM": {
                    "label": "CONTÉM"
                  },
                  "CONTAINED IN STRING": {
                    "label": "CONTIDO EM"
                  },
                  "INICIA COM": {
                    "label": "INICIA COM"
                  },
                  "TERMINA COM": {
                    "label": "TERMINA COM"
                  },
                  "=": {
                    "label": "IGUAL"
                  },
                  ">": {
                    "label": "MAIOR QUE"
                  },
                  ">=": {
                    "label": "MAIOR OU IGUAL"
                  },
                  "<": {
                    "label": "MENOR QUE"
                  },
                  "<=": {
                    "label": "MENOR OU IGUAL"
                  },
                  "EMPTY": {
                    "label": "ESTÁ VAZIO"
                  },
                  "BLANK": {
                    "label": "ESTÁ EM BRANCO"
                  },
                  "IS NULL": {
                    "label": "IS NULL"
                  },
                  "CORRESPONDÊNCIA COM EXPRESSÃO REGULAR": {
                    "label": "CORRESPONDÊNCIA COM EXPRESSÃO REGULAR"
                  },
                  "CONTAINED IN TABLE": {
                    "label": "NA TABELA"
                  },
                  "NA TABELA DE EXPRESSÕES REGULARES": {
                    "label": "NA TABELA DE EXPRESSÕES REGULARES"
                  },
                  "DATA": {
                    "label": "DATA"
                  }
                },
                "val": "CONTÉM"
              },
              "date_condition": {
                "type": "select",
                "label": "Selecionar Operador de Data",
                "required": true,
                "show_if": "this.condition == 'DATE'",
                "options": {
                  "<": {
                    "label": "ANTERIOR"
                  },
                  "<=": {
                    "label": "ANTERIOR OU IGUAL"
                  },
                  "=": {
                    "label": "IGUAL"
                  },
                  ">": {
                    "label": "DEPOIS"
                  },
                  ">=": {
                    "label": "DEPOIS OU IGUAL"
                  }
                },
                "val": "="
              },
              "case_sensitive": {
                "type": "select",
                "label": "Selecionar Sensibilidade a Maiúsculas e Minúsculasl",
                "required": true,
                "show_if": "this.condition == 'CONTAINS' || this.condition == 'CONTAINED IN STRING' || this.condition == '=' || this.condition == 'STARTS WITH' || this.condition == 'ENDS WITH' || this.condition == 'REGEX MATCH' || this.condition == 'NOT REGEX MATCH' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "options": {
                  "yes": {
                    "label": "Sensível a Maiúsculas e Minúsculas"
                  },
                  "no": {
                    "label": "Insensível a Maiúsculas e Minúsculas"
                  }
                },
                "val": "yes"
              },
              "date_value": {
                "type": "date",
                "label": "Selecionar Data",
                "show_if": "this.condition=='DATE'",
                "val": "1/31/2020",
                "required": true
              },
              "value": {
                "type": "text",
                "label": "Introduzir Valor",
                "show_if": "this.condition != 'DATE' && this.condition != 'EMPTY' && this.condition != 'NOT EMPTY' && this.condition != 'IS NULL' && this.condition != 'BLANK' && this.condition != 'NOT BLANK' && this.condition != 'IS NOT NULL' && this.condition != 'CONTAINED IN TABLE' && this.condition != 'NOT CONTAINED IN TABLE' && this.condition != 'IN REGEX TABLE' && this.condition != 'NOT IN REGEX TABLE'",
                "val": "",
                "required": true
              },
              "compare_table": {
                "type": "select",
                "label": "Selecionar Tabela",
                "bind": "TABLES",
                "empty": "",
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "required": true
              },
              "compare_column": {
                "type": "select",
                "label": "Selecionar Coluna",
                "table": "this.compare_table",
                "bind": "COLUMNS",
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "required": true
              },
              "delete": {
                "type": "button",
                "label": "Apagar",
                "function": "DELETE_ROW"
              }
            }
          },
          "apply_to_record": {
            "type": "checkbox",
            "label": "Aplicar ao Registo",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "style": "margin-top: 10px",
            "breakLine": true
          },
          "apply_to_group_box": {
            "type": "fieldset",
            "label": "Aplicar ao Grupo",
            "show_if": "apply_to_record=='false'",
            "repeat": false,
            "fields": {
              "apply_to_group_columns": {
                "type": "select",
                "label": "Selecionar Colunas de Grupo",
                "required": true,
                "width": "100%",
                "table": "input_table",
                "multiple": true,
                "bind": "COLUMNS",
                "breakLine": true
              }
            }
          }
        }
      }
    }
  }
}