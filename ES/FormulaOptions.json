{
  "options_box": {
    "type": "fieldset", 
    "label": "Seleziona le opzioni", 
    "repeat": false, 
    "fields": {
      "options.column": {
        "type": "select", 
        "label": "Columna para aplicar", 
        "table": "input_table", 
        "bind": "COLUMNS", 
        "required": true
      }, 
      "options.column_value_type": {
        "type": "select", 
        "label": "Columna Valor Tipo", 
        "required": true, 
        "options": {
          "static_value": {
            "label": "Valore statico"
          }, 
          "numeric_formula": {
            "label": "Formula numerica"
          }, 
          "text_formula": {
            "label": "Formula del testo"
          }
        }, 
        "val": "static_value"
      }, 
      "options.static_value": {
        "type": "text", 
        "label": "Valor de entrada", 
        "show_if": "options.column_value_type=='static_value'", 
        "val": "", 
        "width": "100%"
      }, 
      "options.numeric_formula": {
        "type": "text", 
        "label": "Fórmula de entrada, por ejemplo, [Columna1] + 2 * ([Fila-1:Columna3] - [Columna1])", 
        "show_if": "options.column_value_type=='numeric_formula'", 
        "val": "", 
        "width": "100%"
      }, 
      "options.text_formula": {
        "type": "text", 
        "label": "Fórmula de entrada, por ejemplo, [nombre] + ' + [apellido] + ' + [Fila-1:Columna3]", 
        "show_if": "options.column_value_type=='text_formula'", 
        "val": "", 
        "width": "100%"
      }, 
      "options.use_multi_row": {
        "type": "checkbox", 
        "label": "Opzioni multi-fila", 
        "val": "false", 
        "isOn": "true", 
        "isOff": "false"
      }, 
      "options.if_row_not_exist": {
        "type": "select", 
        "label": "Si la fila referida no existe", 
        "show_if": "options.use_multi_row=='true'", 
        "required": true, 
        "options": {
          "empty": {
            "label": "Vacío o 0"
          }, 
          "closest": {
            "label": "Valor de la fila más cercana"
          }
        }, 
        "val": "empty", 
        "breakLine": true
      }, 
      "options.use_filter": {
        "type": "checkbox", 
        "label": "Usa il filtro", 
        "val": "false", 
        "isOn": "true", 
        "isOff": "false", 
        "breakLine": true
      }, 
      "filter_box": {
        "type": "fieldset", 
        "label": "Opciones de filtrado", 
        "show_if": "options.use_filter=='true'", 
        "repeat": false, 
        "fields": {
          "options.filter": {
            "type": "fieldset", 
            "label": "Añadir condiciones de filtrado", 
            "show_if": "options.use_filter=='true'", 
            "repeat": true, 
            "fields": {
              "initial_op": {
                "type": "select", 
                "label": "Seleziona l'operatore logico", 
                "required": true, 
                "show_if" :  "$index == 0", 
                "options": {
                  "if": {
                    "label": "SI"
                  }, 
                  "if_not": {
                    "label": "SI NO"
                  }
                }, 
                "val": "if"
              }, 
              "op": {
                "type": "select", 
                "label": "Seleziona l'operatore logico", 
                "required": true, 
                "show_if" :  "$index > 0", 
                "options": {
                  "and": {
                    "label": "Y"
                  }, 
                  "or": {
                    "label": "O"
                  }, 
                  "and_not": {
                    "label": "Y NO"
                  }, 
                  "or_not": {
                    "label": "O NON"
                  }
                }, 
                "val": "and"
              }, 
              "column": {
                "type": "select", 
                "label": "Seleziona la colonna", 
                "table": "input_table", 
                "bind": "COLUMNS", 
                "required": true
              }, 
              "condition": {
                "type": "select", 
                "label": "Seleziona l'operatore", 
                "required": true, 
                "options": {
                  "CONTIENE": {
                    "label": "CONTIENE"
                  }, 
                  "CONTAINED IN STRING": {
                    "label": "CONTENIDO EN"
                  }, 
                  "INIZIA CON": {
                    "label": "INIZIA CON"
                  }, 
                  "FINALIZA CON": {
                    "label": "FINALIZA CON"
                  }, 
                  "=": {
                    "label": "EQUAL"
                  }, 
                  ">": {
                    "label": "MAYOR QUE"
                  }, 
                  ">=": {
                    "label": "MAYOR O IGUAL"
                  }, 
                  "<": {
                    "label": "PIÙ PICCOLO DI"
                  }, 
                  "<=": {
                    "label": "PIÙ PICCOLO O UGUALE"
                  }, 
                  "EMPTY": {
                    "label": "ESTÁ VACÍO"
                  }, 
                  "BLANK": {
                    "label": "ESTÁ EN BLANCO"
                  }, 
                  "ES NULO": {
                    "label": "ES NULO"
                  }, 
                  "CORRISPONDENZA REGEX": {
                    "label": "CORRISPONDENZA REGEX"
                  }, 
                  "CONTAINED IN TABLE": {
                    "label": "EN TABLA"
                  }, 
                  "EN LA TABLA REGEX": {
                    "label": "EN LA TABLA REGEX"
                  }, 
                  "FECHA": {
                    "label": "FECHA"
                  }
                }, 
                "val": "CONTIENE"
              }, 
              "date_condition": {
                "type": "select", 
                "label": "Seleziona l'operatore della data", 
                "required": true, 
                "show_if": "this.condition == 'DATE'", 
                "options": {
                  "<": {
                    "label": "PRIORE"
                  }, 
                  "<=": {
                    "label": "PRIORE O PARI"
                  }, 
                  "=": {
                    "label": "EQUAL"
                  }, 
                  ">": {
                    "label": "DESPUÉS DE"
                  }, 
                  ">=": {
                    "label": "DESPUÉS O IGUAL"
                  }
                }, 
                "val": "="
              }, 
              "case_sensitive": {
                "type": "select", 
                "label": "Selezionare Case Sensitive", 
                "required": true, 
                "show_if": "this.condition == 'CONTAINS' || this.condition == 'CONTAINED IN STRING' || this.condition == '=' || this.condition == 'STARTS WITH' || this.condition == 'ENDS WITH' || this.condition == 'REGEX MATCH' || this.condition == 'NOT REGEX MATCH' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'", 
                "options": {
                  "yes": {
                    "label": "Sensible al caso"
                  }, 
                  "no": {
                    "label": "Insensible a las mayúsculas y minúsculas"
                  }
                }, 
                "val": "yes"
              }, 
              "date_value": {
                "type": "date", 
                "label": "Seleziona la data", 
                "show_if": "this.condition=='DATE'", 
                "val": "1/31/2020", 
                "required": true
              }, 
              "value": {
                "type": "text", 
                "label": "Valor de entrada", 
                "show_if": "this.condition != 'DATE' && this.condition != 'EMPTY' && this.condition != 'NOT EMPTY' && this.condition != 'BLANK' && this.condition != 'NOT BLANK' && this.condition != 'IS NULL' && this.condition != 'IS NOT NULL' && this.condition != 'CONTAINED IN TABLE' && this.condition != 'NOT CONTAINED IN TABLE' && this.condition != 'IN REGEX TABLE' && this.condition != 'NOT IN REGEX TABLE'", 
                "val": "", 
                "required": true
              }, 
              "compare_table": {
                "type": "select", 
                "label": "Seleziona la tabella", 
                "bind": "TABLES", 
                "empty": "", 
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'", 
                "required": true
              }, 
              "compare_column": {
                "type": "select", 
                "label": "Seleziona la colonna", 
                "table": "this.compare_table", 
                "bind": "COLUMNS", 
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'", 
                "required": true
              }, 
              "delete": {
                "type": "button", 
                "label": "Borrar", 
                "function": "DELETE_ROW"
              }
            }
          }, 
          "options.apply_to_record": {
            "type": "checkbox", 
            "label": "Aplicar al registro", 
            "val": "true", 
            "isOn": "true", 
            "isOff": "false", 
            "style": "margin-top: 10px", 
            "breakLine": true
          }, 
          "apply_to_group_box": {
            "type": "fieldset", 
            "label": "Aplicar al Grupo", 
            "show_if": "options.apply_to_record=='false'", 
            "repeat": false, 
            "fields": {
              "options.apply_to_group_columns": {
                "type": "select", 
                "label": "Seleziona le colonne del gruppo", 
                "required": true, 
                "width": "100%", 
                "table": "input_table", 
                "multiple": true, 
                "bind": "COLUMNS", 
                "breakLine": true
              }
            }
          }
        }
      }
    }
  }
}
