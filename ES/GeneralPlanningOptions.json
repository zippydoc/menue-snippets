        "type": "hidden",
        "val": "custom"
      },
      "options.custom.table": {
        "type": "fieldset",
        "Etiqueta": "Posición de planificación",
        "repeat": true,
        "fields": {
          "item": {
            "type": "text",
            "Etiqueta": "Partida",
            "val": "",
            "required": true
          },
          "position": {
            "type": "select",
            "Etiqueta": "Posición",
            "options": {
              "ingresos por ventas": {
                "Etiqueta": "ingresos por ventas"
              },
              "otros ingresos": {
                "Etiqueta": "otros ingresos"
              },
              "coste de las mercancías vendidas": {
                "Etiqueta": "coste de las mercancías vendidas"
              },
              "gastos de comercialización": {
                "Etiqueta": "gastos de comercialización"
              },
              "gastos de explotación": {
                "Etiqueta": "gastos de explotación"
              },
              "gastos generales y de administración": {
                "Etiqueta": "gastos generales y de administración"
              },
              "gastos de alquiler": {
                "Etiqueta": "gastos de alquiler"
              },
              "salarios": {
                "Etiqueta": "salarios"
              },
              "impuestos": {
                "Etiqueta": "impuestos"
              },
              "ingresos por intereses": {
                "Etiqueta": "ingresos por intereses"
              },
              "gastos de intereses": {
                "Etiqueta": "gastos de intereses"
              },
              "gastos de capital": {
                "Etiqueta": "gastos de capital"
              },
              "gastos de mantenimiento": {
                "Etiqueta": "gastos de mantenimiento"
              },
              "capex de expansión": {
                "Etiqueta": "expansion capex,
              },
              depreciation": {
                "Etiqueta": "depreciación"
              },
              "amortización": {
                "Etiqueta": "amortización"
              },
              "ingresos extraordinarios": {
                "Etiqueta": "ingresos extraordinarios"
              },
              "gastos extraordinarios": {
                "Etiqueta": "gastos extraordinarios"
              }
            },
            "val": "ingresos por ventas",
            "required": true
          },
          "amount": {
            "type": "number",
            "Etiqueta": "Cantidad",
            "val": "",
            "required": true
          },
          "initial_date": {
            "type": "date",
            "Etiqueta": "Fecha Inicial",
            "val": "",
            "required": true
          },
          "periodicy": {
            "type": "select",
            "Etiqueta": "Periodicidad",
            "required": true,
            "options": {
              "One-Off": {
                "Etiqueta": "One-Off"
              },
              "Diario": {
                "Etiqueta": "Diario"
              },
              "Trabajo-Diario": {
                "Etiqueta": "Trabajo-Diario"
              },
              "semanal": {
                "Etiqueta": "semanal"
              },
              "Mensual": {
                "Etiqueta": "Mensual"
              },
              "Trimestral": {
                "Etiqueta": "Trimestral"
              },
              "Anual": {
                "Etiqueta": "Anual"
              }
            },
            "val": "One-Off"
          },
          "growth": {
            "type": "number",
            "Etiqueta": "Crecimiento",
            "show_if": "this.periodicy!='One-Off'",
            "val": "",
            "required": true
          },
          "growth_period": {
            "type": "select",
            "Etiqueta": "Período de Crecimiento",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "semanal": {
                "Etiqueta": "semanal"
              },
              "Mensual": {
                "Etiqueta": "Mes a Mes"
              },
              "Trimestral": {
                "Etiqueta": "Trimestre a Trimestre"
              },
              "Anual": {
                "Etiqueta": "Año a Año"
              }
            },
            "val": "semanal"
          },
          "growth_pattern": {
            "type": "select",
            "Etiqueta": "Patrón de Crecimiento",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Compuesto": {
                "Etiqueta": "Compuesto"
              },
              "Lineal": {
                "Etiqueta": "Lineal"
              },
              "Jump-Fix": {
                "Etiqueta": "Jump-Fix"
              }
            },
            "val": "Compuesto"
          },
          "final_date": {
            "type": "date",
            "Etiqueta": "Fecha Final",
            "show_if": "this.periodicy!='One-Off'",
            "val": ""
          },
          "delete": {
            "type": "button",
            "Etiqueta": "Borrar",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.end_date": {
        "type": "date",
        "Etiqueta": "Fecha de Finalización de la Tabla",
        "show_if": "options.type=='process' || options.type=='custom'",
        "val": "",
        "required": true,
        "style": "width: 300px"
      }
    }
  }
}