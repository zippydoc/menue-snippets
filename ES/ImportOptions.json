{
  "options": {
    "type": "fieldset",
    "Etiqueta": "Seleccionar Opciones",
    "repeat": false,
    "fields": {
      "options.from": {
        "type": "select",
        "Etiqueta": "Fuente de Datos",
        "options": {
          "web": {
            "Etiqueta": "Importar desde el Servicio Web"
          },
          "database": {
            "Etiqueta": "Importar desde la Base de Datos"
          }
        },
        "val": "web",
        "required": true,
        "breakLine": true
      },
      "postgresql_db_credential_box": {
        "type": "fieldset",
        "Etiqueta": "Credenciales de Conexión para la Base de Datos",
        "show_if": "options.from=='database'",
        "repeat": false,
        "fields": {
          "options.dbms": {
            "type": "select",
            "Etiqueta": "Seleccionar DBMS",
            "options": {
              "postgresql": {
                "Etiqueta": "PostgreSQL"
              },
              "mysql": {
                "Etiqueta": "MySQL (Próximamente…)"
              },
              "sql_server": {
                "Etiqueta": "Servidor MS SQL(Próximamente…)"
              },
              "oracle": {
                "Etiqueta": "Oracle (Próximamente...)"
              }
            },
            "val": "postgresql",
            "required": true,
            "breakLine": true
          },
          "options.postgresql_credential.user": {
            "type": "text",
            "Etiqueta": "Usuario",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.postgresql_credential.password": {
            "type": "text",
            "Etiqueta": "Contraseña",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.postgresql_credential.host": {
            "type": "text",
            "Etiqueta": "Host",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.postgresql_credential.database": {
            "type": "text",
            "Etiqueta": "Base de Datos",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          }
        }
      },
      "options.schema_name_to_import": {
        "type": "text",
        "Etiqueta": "Nombre del esquema que incluye la tabla a importar",
        "show_if": "options.from=='database' && options.dbms=='postgresql'",
        "required": true,
        "val": "public",
        "width": "100%",
        "breakLine": true
      },
      "options.table_name_to_import": {
        "type": "text",
        "Etiqueta": "Nombre de la tabla a importar",
        "show_if": "options.from=='database' && options.dbms=='postgresql'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.webservice": {
        "type": "select",
        "Etiqueta": "Seleccionar Servicio Web",
        "show_if": "options.from=='web'",
        "options": {
          "github": {
            "Etiqueta": "Github"
          },
          "ms_one_drive": {
            "Etiqueta": "Microsoft OneDrive"
          },
          "dropbox": {
            "Etiqueta": "Buzón"
          },
          "google_drive": {
            "Etiqueta": "Google Drive (próximamente)"
          }
        },
        "val": "github",
        "required": true,
        "breakLine": true
      },
      "options.output_format": {
        "type": "select",
        "Etiqueta": "Seleccionar Tipo",
        "show_if": "options.from=='web'",
        "options": {
          "csv_table": {
            "Etiqueta": "Tabla CSV"
          },
          "line_by_line": {
            "Etiqueta": "Línea por Línea"
          },
          "word_by_word": {
            "Etiqueta": "Palabra por Palabra"
          },
          "file_list": {
            "Etiqueta": "Lista de Archivos"
          }
        },
        "val": "csv_table",
        "required": true
      },
      "options.word_pattern_type": {
        "type": "select",
        "Etiqueta": "Patrón de Palabras",
        "show_if": "options.from=='web' && options.output_format=='word_by_word' && options.specify_word_pattern=='true'",
        "options": {
          "regex": {
            "Etiqueta": "Expresión Regular"
          }
        },
        "val": "regex",
        "required": true
      },
      "options.word_pattern_regex": {
        "type": "text",
        "Etiqueta": "Expresión Regular",
        "show_if": "options.from=='web' && options.output_format=='word_by_word' && options.specify_word_pattern=='true' && options.word_pattern_type=='regex'",
        "required": true,
        "val": "[a-z][1-9]",
        "breakLine": true
      },
      "options.column_setting": {
        "type": "checkbox",
        "Etiqueta": "Configuración de la columna",
        "show_if": "options.from=='web' && options.output_format!='file_list'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "column_setting_frame": {
        "type": "fieldset",
        "Etiqueta": "Configuración de la columna",
        "show_if": "options.from=='web' && options.output_format!='file_list' && options.column_setting=='true'",
        "repeat": false,
        "fields": {
          "options.add_row_column": {
            "type": "checkbox",
            "Etiqueta": "Agregar Columna Fila",
            "show_if": "options.from=='web' && options.output_format=='word_by_word'",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "options.add_word_count_column": {
            "type": "checkbox",
            "Etiqueta": "Añadir columna de 'Recuento de palabras'",
            "show_if": "options.from=='web' && options.output_format=='word_by_word'",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "options.add_word_nonword_column": {
            "type": "checkbox",
            "Etiqueta": "Añadir columna de 'palabras y no palabras'",
            "show_if": "options.from=='web' && options.output_format=='word_by_word'",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "options.add_section_column": {
            "type": "checkbox",
            "Etiqueta": "Agregar Columna Sección",
            "show_if": "options.from=='web' && options.output_format=='word_by_word'",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "section_column_types_frame": {
            "type": "fieldset",
            "Etiqueta": "Tipos de columnas de sección",
            "show_if": "options.from=='web' && options.output_format=='word_by_word' && options.add_section_column=='true'",
            "repeat": false,
            "fields": {
              "options.section_columns.add_paragraph_section_column": {
                "type": "checkbox",
                "Etiqueta": "Párrafo",
                "val": "false",
                "isOn": "true",
                "isOff": "false",
                "breakLine": true
              },
              "options.section_columns.add_custom_section_column": {
                "type": "checkbox",
                "Etiqueta": "Delimitador de Sección Personalizado",
                "val": "false",
                "isOn": "true",
                "isOff": "false"
              },
              "options.section_columns.custom_delimiter": {
                "type": "text",
                "Etiqueta": "Delimitador(1 carácter)",
                "show_if": "options.section_columns.add_custom_section_column=='true'",
                "maxLength": 1,
                "required": true,
                "breakLine": true
              },
              "options.section_columns.add_brackets_punctuation_section_column": {
                "type": "checkbox",
                "Etiqueta": "Corchetes y Puntuación",
                "val": "false",
                "isOn": "true",
                "isOff": "false"
              },
              "options.section_columns.brackets_punctuation_section_column_type": {
                "type": "select",
                "Etiqueta": "Tipo de paréntesis",
                "show_if": "options.section_columns.add_brackets_punctuation_section_column=='true'",
                "options": {
                  "nesting_structure": {
                    "Etiqueta": "Estructura de anidamiento"
                  },
                  "inner_bracket": {
                    "Etiqueta": "Corchete interior"
                  },
                  "show_all": {
                    "Etiqueta": "Mostrar Todo"
                  }
                },
                "val": "nesting_structure",
                "required": true,
                "breakLine": true
              }
            }
          },
          "options.add_filename_column": {
            "type": "checkbox",
            "Etiqueta": "Agregar Columna por Nombre de Archivo",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "style": "margin-top: 10px",
            "breakLine": true
          }
        }
      },
      "options.is_cloud_dir": {
        "type": "checkbox",
        "Etiqueta": "Importar directorio",
        "show_if": "options.from=='web' && options.output_format!='file_list'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "style": "margin-top: 10px",
        "breakLine": true
      },
      "options.use_filename_as_output_table_name": {
        "type": "checkbox",
        "Etiqueta": "Usar nombre de archivo como nombre de la tabla",
        "show_if": "options.from=='web' && options.output_format!='file_list' && options.is_cloud_dir=='false'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.unify_in_one_table": {
        "type": "checkbox",
        "Etiqueta": "Unificar en una Tabla",
        "show_if": "options.from=='web' && options.output_format!='file_list' && options.is_cloud_dir=='true'",
        "val": "true",
        "isOn": "true",
        "isOff": "false"
      },
      "options.suffix": {
        "type": "select",
        "Etiqueta": "Sufijo",
        "show_if": "options.from=='web' && options.output_format!='file_list' && options.is_cloud_dir=='true' && options.unify_in_one_table=='false'",
        "options": {
          "number": {
            "Etiqueta": "Número"
          },
          "filename": {
            "Etiqueta": "Nombre de Archivo"
          }
        },
        "val": "number",
        "required": true,
        "breakLine": true
      },
      "options.is_github_private": {
        "type": "checkbox",
        "Etiqueta": "El repositorio es privado",
        "show_if": "options.from=='web' && options.webservice=='github'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.include_subdir": {
        "type": "checkbox",
        "Etiqueta": "Incluir Subdirectorios",
        "show_if": "options.from=='web' && options.output_format=='file_list'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.file_list.add_change_date_column": {
        "type": "checkbox",
        "Etiqueta": "Agregar Cambiar Columna de Fecha",
        "show_if": "options.from=='web' && options.output_format=='file_list'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.github_token": {
        "type": "text",
        "Etiqueta": "especificar el token de acceso personal de Github",
        "show_if": "options.from=='web' && options.webservice=='github' && options.is_github_private=='true'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.link_directory": {
        "type": "text",
        "Etiqueta": "Ingresar enlace, por ejemplo, https://github.com/zippydoc/test",
        "show_if": "options.from=='web' && options.webservice=='github' && options.output_format!='file_list' && options.is_cloud_dir=='true'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.link_directory_4_file_list": {
        "type": "text",
        "Etiqueta": "Ingresar enlace, por ejemplo, https://github.com/zippydoc/test",
        "show_if": "options.from=='web' && options.webservice=='github' && options.output_format=='file_list'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.link_file": {
        "type": "text",
        "Etiqueta": "Ingresar enlace, por ejemplo, https://github.com/zippydoc/test/blob/main/example.csv",
        "show_if": "options.from=='web' && options.webservice=='github' && options.is_cloud_dir=='false' && options.output_format=='csv_table'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.link_text_file": {
        "type": "text",
        "Etiqueta": "Introducir enlace, por ejemplo, https://github.com/zippydoc/test/blob/main/example.txt(json, csv, etc)",
        "show_if": "options.from=='web' && options.webservice=='github' && options.is_cloud_dir=='false' && options.output_format!='csv_table' && options.output_format!='file_list'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.one_drive.access_token": {
        "type": "text",
        "Etiqueta": "Token de acceso OAuth",
        "show_if": "options.from=='web' && options.webservice=='ms_one_drive' && options.is_cloud_dir=='false'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.one_drive.file_path": {
        "type": "text",
        "Etiqueta": "Introduzca la ruta del archivo, por ejemplo, ZippyDoc/Subdir1/test.txt",
        "show_if": "options.from=='web' && options.webservice=='ms_one_drive' && options.output_format!='file_list' && options.is_cloud_dir=='false'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.one_drive.dir_path": {
        "type": "text",
        "Etiqueta": "Introduzca la ruta al directorio, por ejemplo, ZippyDoc/Subdir1",
        "show_if": "options.from=='web' && options.webservice=='ms_one_drive' && (options.output_format=='file_list' || options.is_cloud_dir=='true')",
        "width": "100%",
        "breakLine": true
      },
      "options.dropbox.auth_code": {
        "type": "text",
        "Etiqueta": "Código de autorización de Dropbox",
        "show_if": "options.from=='web' && options.webservice=='dropbox' && options.is_cloud_dir=='false'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.dropbox.file_path": {
        "type": "text",
        "Etiqueta": "Introduzca la ruta del archivo, por ejemplo, ZippyDoc/Subdir1/test.txt",
        "show_if": "options.from=='web' && options.webservice=='dropbox' && options.output_format!='file_list' && options.is_cloud_dir=='false'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.dropbox.dir_path": {
        "type": "text",
        "Etiqueta": "Introduzca la ruta al directorio, por ejemplo, ZippyDoc/Subdir1",
        "show_if": "options.from=='web' && options.webservice=='dropbox' && (options.output_format=='file_list' || options.is_cloud_dir=='true')",
        "width": "100%",
        "breakLine": true
      },
      "dir_filter_frame": {
        "type": "fieldset",
        "Etiqueta": "Filtrar los archivos del directorio",
        "show_if": "options.from=='web' && options.output_format!='file_list' && options.is_cloud_dir=='true'",
        "repeat": false,
        "fields": {
          "options.dir_filter.filter_type": {
            "type": "select",
            "Etiqueta": "Tipo de Filtro",
            "options": {
              "all": {
                "Etiqueta": "Todo"
              },
              "contains": {
                "Etiqueta": "Contiene"
              },
              "starts_with": {
                "Etiqueta": "Empezar Con"
              },
              "ends_with": {
                "Etiqueta": "Termina Con"
              },
              "regex": {
                "Etiqueta": "Expresión Regular"
              }
            },
            "val": "all",
            "required": true
          },
          "options.dir_filter.filter_string": {
            "type": "text",
            "Etiqueta": "Ingresar cadena de caracteres",
            "show_if": "options.dir_filter.filter_type!='all'",
            "required": true,
            "width": "100%"
          }
        }
      }
    }
  }
}