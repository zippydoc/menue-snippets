{
  "options_box": {
    "type": "fieldset",
    "label": "Opciones",
    "repeat": false,
    "fields": {
      "options.task": {
        "type": "hidden",
        "val": "multi_column"
      },
      "options.add_columns": {
        "type": "fieldset",
        "label": "Agregar Nuevas Columnas",
        "repeat": true,
        "fields": {
          "new_column_name": {
            "type": "text",
            "label": “Nuevo Nombre de Columna”,
            "val": "",
            "breakLine": true
          },
          "multi_column_functions__function": {
            "type": "select",
            "label": "Función",
            "required": true,
            "options": {
              "sum": {
                "label": "Suma"
              },
              "average": {
                "label": "Promedio"
              },
              "median": {
                "label": "Mediana"
              },
              "max": {
                "label": "Máx"
              },
              "min": {
                "label": "Mín"
              },
              "standard_deviation": {
                "label": "Desviación Estándar"
              },
              "product": {
                "label": "Producto"
              },
              "quota": {
                "label": "Cuota"
              },
              "absolute_growth": {
                "label": "Crecimiento Absoluto"
              },
              "relative_growth": {
                "label": "Crecimiento Relativo"
              },
              "compound_growth": {
                "label": "Crecimiento Compuesto"
              },
              "static_value": {
                "label": "Valor Estático"
              },
              "numeric_formula": {
                "label": "Formula Numérica"
              },
              "text_formula": {
                "label": "Formula del Texto"
              }
            },
            "val": "sum"
          },
          "multi_column_functions__sel_columns": {
            "type": "select",
            "label": “Seleccionar Columna(s)”,
            "show_if": "this.multi_column_functions__function=='sum' || this.multi_column_functions__function=='average' || this.multi_column_functions__function=='median' || this.multi_column_functions__function=='max' || this.multi_column_functions__function=='min' || this.multi_column_functions__function=='standard_deviation' || this.multi_column_functions__function=='product'",
            "table": "input_table",
            "bind": "COLUMNS",
            "multiple": true,
            "required": true
          },
          "multi_column_functions__column_a": {
            "type": "select",
            "label": “Seleccionar Columna A”,
            "show_if": "this.multi_column_functions__function=='quota' || this.multi_column_functions__function=='absolute_growth' || this.multi_column_functions__function=='relative_growth' || this.multi_column_functions__function=='compound_growth'",
            "table": "input_table",
            "bind": "COLUMNS",
            "required": true
          },
          "multi_column_functions__column_b": {
            "type": "select",
            "label": “Seleccionar Columna B”,
            "show_if": "this.multi_column_functions__function=='quota' || this.multi_column_functions__function=='absolute_growth' || this.multi_column_functions__function=='relative_growth' || this.multi_column_functions__function=='compound_growth'",
            "table": "input_table",
            "bind": "COLUMNS",
            "required": true
          },
          "multi_column_functions__n_value": {
            "type": "text",
            "label": "N (entero positivo)",
            "show_if": "this.multi_column_functions__function=='compound_growth'",
            "val": "1",
            "required": true
          },
          "static_value": {
            "type": "text",
            "label": "Ingresar Valor",
            "show_if": "this.multi_column_functions__function=='static_value'",
            "val": "",
            "width": "100%"
          },
          "numeric_formula": {
            "type": "text",
            "label": "Input Formula, e.g. [Column1] + 2 * ([Row-1:Column3] - [Column1])",
            "show_if": "this.multi_column_functions__function=='numeric_formula'",
            "val": "",
            "width": "100%"
          },
          "text_formula": {
            "type": "text",
            "label": "Input Formula, e.g. [firstName] + ' ' + [lastName] + ' ' + [Row-1:Column3]",
            "show_if": "this.multi_column_functions__function=='text_formula'",
            "val": "",
            "width": "100%"
          },
          "use_multi_row": {
            "type": "checkbox",
            "label": "Opciones de Múltiples Filas",
            "show_if": "this.multi_column_functions__function=='numeric_formula' || this.multi_column_functions__function=='text_formula'",
            "val": "false",
            "isOn": "true",
            "isOff": "false"
          },
          "if_row_not_exist": {
            "type": "select",
            "label": "Si la fila referida no existe",
            "show_if": "this.use_multi_row=='true' && (this.multi_column_functions__function=='numeric_formula' || this.multi_column_functions__function=='text_formula')",
            "required": true,
            "options": {
              "empty": {
                "label": "Vacío o 0"
              },
              "closest": {
                "label": "Valor Más Cercano de la Fila"
              }
            },
            "val": "empty",
            "breakLine": true
          },
          "format__category": {
            "type": "select",
            "label": "Formato",
            "required": true,
            "options": {
              "standard": {
                "label": "Estándar"
              },
              "number": {
                "label": "Número"
              },
              "percentage": {
                "label": "Porcentaje"
              },
              "text": {
                "label": "Texto"
              },
              "date": {
                "label": "Fecha"
              },
              "currency": {
                "label": "Moneda"
              }
            },
            "val": "standard"
          },
          "format__rounding": {
            "type": "select",
            "label": "Redondeo",
            "show_if": "this.format__category=='number' || this.format__category=='percentage' || this.format__category=='currency'",
            "required": true,
            "options": {
              "no_rounding": {
                "label": "Redondeo de números"
              },
              "0": {
                "label": "0 dígitos"
              },
              "1": {
                "label": "1 dígitos"
              },
              "2": {
                "label": "2 dígitos"
              },
              "3": {
                "label": "3 dígitos"
              },
              "4": {
                "label": "4 dígitos"
              },
              "5": {
                "label": "5 dígitos"
              },
              "6": {
                "label": "6 dígitos"
              },
              "7": {
                "label": "7 dígitos"
              },
              "8": {
                "label": "8 dígitos"
              },
              "9": {
                "label": "9 dígitos"
              }
            },
            "val": "2"
          },
          "format__use_1000_separator": {
            "type": "checkbox",
            "label": "Usar el Separador de 1000(.)",
            "show_if": "this.format__category=='number' || this.format__category=='percentage' || this.format__category=='currency'",
            "val": "true",
            "isOn": "true",
            "isOff": "false"
          },
          "format__currency_symbol": {
            "type": "select",
            "label": "Símbolo",
            "show_if": "this.format__category=='currency'",
            "required": true,
            "options": {
              "dollar": {
                "label": "$"
              },
              "euro": {
                "label": "€"
              },
              "pound": {
                "label": "£"
              }
            },
            "val": "dollar"
          },
          "format__date_format": {
            "type": "select",
            "label": "Tipo",
            "show_if": "this.format__category=='date'",
            "required": true,
            "options": {
              "mm/dd/yyyy": {
                "label": "3/14/2012"
              },
              "D, M dd, Y": {
                "label": "Wednesday, March 14, 2012"
              },
              "yyyy-mm-dd": {
                "label": "2012-03-14"
              }
            },
            "val": "mm/dd/yyyy",
            "breakLine": true
          },
          "group_counter__inc_dec_curly_bracket": {
            "type": "checkbox",
            "label": "Aumentar/Disminuir con {}",
            "show_if": "this.task_type=='group_counter'",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "group_counter__inc_dec_square_bracket": {
            "type": "checkbox",
            "label": "Aumentar/Disminuir con []",
          "group_counter__always_include": {
            "show_if": "this.task_type=='group_counter'",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "group_counter__inc_dec_parenthesis": {
            "type": "checkbox",
            "label": "Aumentar/Disminuir con ()",
            "show_if": "this.task_type=='group_counter'",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "group_counter__custom": {
            "type": "checkbox",
            "label": "Contador de Grupo Personalizado",
            "show_if": "this.task_type=='group_counter'",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "group_counter__column": {
            "type": "select",
            "label": "Columna",
            "show_if": "this.task_type=='group_counter' && this.group_counter__custom=='true'",
            "table": "input_table",
            "bind": "COLUMNS",
            "required": true
          },
          "group_counter__type": {
            "type": "select",
            "label": "Cuando",
            "show_if": "this.task_type=='group_counter' && this.group_counter__custom=='true'",
            "required": true,
            "options": {
              "starts_with": {
                "label": “EMPEZAR CON”
              },
              "ends_with": {
                "label": "TERMINA CON”
              },
              "starts_with_regex": {
                "label": “EMPEZAR CON EXPRESIÓN REGULAR”
              },
              "ends_with_regex": {
                "label": "TERMINA CON EXPRESIÓN REGULAR"
              }
            },
            "val": "starts_with"
          },
          "group_counter__value": {
            "type": "text",
            "label": "Ingresar Valor",
            "show_if": "this.task_type=='group_counter' && this.group_counter__custom=='true'",
            "val": ".",
            "breakLine": true
          },
          "group_counter__label": {
            "type": "text",
            "label": "Ingresar Etiqueta",
            "show_if": "this.task_type=='group_counter' && this.group_counter__custom=='true'",
            "val": "sentence",
            "breakLine": true
          },
          "group_counter__if_end_of_string_start_labeling_with_next_record": {
            "type": "checkbox",
            "label": "Si el Final de la Cadena de Caracteres empieza el etiquetado con el registro siguiente",
            "show_if": "this.task_type=='group_counter' && this.group_counter__custom=='true' && (this.group_counter__type=='starts_with' || this.group_counter__type=='starts_with_regex')",
            "val": "true",
            "isOn": "true",
            "isOff": "false"
          },
          "group_counter__if_begin_of_string_start_labeling_with_previous_record": {
            "type": "checkbox",
            "label": "Si el Comienzo de la Cadena de Caracteres empieza el etiquetado con el registro previo",
            "show_if": "this.task_type=='group_counter' && this.group_counter__custom=='true' && (this.group_counter__type=='ends_with' || this.group_counter__type=='ends_with_regex')",
            "val": "true",
            "isOn": "true",
            "isOff": "false"
          },
            "type": "checkbox",
            "label": "Incluir siempre",
            "show_if": "this.task_type=='group_counter' && this.group_counter__custom=='true'",
            "val": "true",
            "isOn": "true",
            "isOff": "false"
          },
          "apply_to_group__enabled": {
            "type": "checkbox",
            "label": "Aplicar al Grupo",
            "show_if": "this.multi_column_functions__function!='static_value'",
            "val": "false",
            "isOn": "true",
            "isOff": "false"
          },
          "apply_to_group__group_columns": {
            "type": "select",
            "label": "Columna(s) del Grupo",
            "show_if": "this.apply_to_group__enabled == 'true' && this.multi_column_functions__function!='static_value'",
            "table": "input_table",
            "bind": "COLUMNS",
            "multiple": true,
            "required": true
          },
          "delete": {
            "type": "button",
            "label": "Borrar",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.use_filter": {
        "type": "checkbox",
        "label": "Usar Filtro",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "style": "margin-top: 10px",
        "breakLine": true
      },
      "filter_box": {
        "type": "fieldset",
        "label": "Opciones del Filtro",
        "show_if": "options.use_filter=='true'",
        "repeat": false,
        "fields": {
          "options.filter": {
            "type": "fieldset",
            "label": "Agregar Condiciones del Filtro",
            "repeat": true,
            "fields": {
              "initial_op": {
                "type": "select",
                "label": "Seleccionar Operador Lógico",
                "required": true,
                "show_if" :  "$index == 0",
                "options": {
                  "if": {
                    "label": "SI"
                  },
                  "if_not": {
                    "label": "SI NO"
                  }
                },
                "val": "if"
              },
              "op": {
                "type": "select",
                "label": "Seleccionar Operador Lógico",
                "required": true,
                "show_if" :  "$index > 0",
                "options": {
                  "and": {
                    "label": "AND"
                  },
                  "or": {
                    "label": "OR"
                  },
                  "and_not": {
                    "label": "AND NOT"
                  },
                  "or_not": {
                    "label": "OR NOT"
                  }
                },
                "val": "and"
              },
              "column": {
                "type": "select",
                "label": “Seleccionar Columna”,
                "table": "input_table",
                "bind": "COLUMNS",
                "required": true
              },
              "condition": {
                "type": "select",
                "label": "Seleccionar Operador",
                "required": true,
                "options": {
                  "CONTIENE": {
                    "label": "CONTIENE"
                  },
                  "CONTAINED IN STRING": {
                    "label": "CONTENIDO EN"
                  },
                  “EMPEZAR CON”: {
                    "label": “EMPEZAR CON”
                  },
                  "TERMINA CON”: {
                    "label": "TERMINA CON”
                  },
                  "=": {
                    "label": "IGUAL"
                  },
                  ">": {
                    "label": "MAYOR QUE"
                  },
                  ">=": {
                    "label": "MAYOR O IGUAL"
                  },
                  "<": {
                    "label": "MENOR QUE"
                  },
                  "<=": {
                    "label": "MENOR O IGUAL"
                  },
                  "EMPTY": {
                    "label": "ESTÁ VACÍO"
                  },
                  "BLANK": {
                    "label": "ESTÁ EN BLANCO"
                  },
                  "IS NULL": {
                    "label": "IS NULL"
                  },
                  "COINCIDENCIA CON LA EXPRESIÓN REGULAR": {
                    "label": "COINCIDENCIA CON LA EXPRESIÓN REGULAR"
                  },
                  "CONTAINED IN TABLE": {
                    "label": "EN TABLA"
                  },
                  "EN LA TABLA DE LAS EXPRESIONES REGULARES": {
                    "label": "EN LA TABLA DE LAS EXPRESIONES REGULARES"
                  },
                  "FECHA": {
                    "label": "FECHA"
                  }
                },
                "val": "CONTIENE"
              },
              "date_condition": {
                "type": "select",
                "label": "Seleccionar Operador de la Fecha",
                "required": true,
                "show_if": "this.condition == 'DATE'",
                "options": {
                  "<": {
                    "label": "PREVIO"
                  },
                  "<=": {
                    "label": "PREVIO O IGUAL"
                  },
                  "=": {
                    "label": "IGUAL"
                  },
                  ">": {
                    "label": "DESPUÉS"
                  },
                  ">=": {
                    "label": "DESPUÉS O IGUAL"
                  }
                },
                "val": "="
              },
              "case_sensitive": {
                "type": "select",
                "label": "Seleccionar Sensible a Mayúsculas y Minúsculas",
                "required": true,
                "show_if": "this.condition == 'CONTAINS' || this.condition == 'CONTAINED IN STRING' || this.condition == '=' || this.condition == 'STARTS WITH' || this.condition == 'ENDS WITH' || this.condition == 'REGEX MATCH' || this.condition == 'NOT REGEX MATCH' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "options": {
                  "yes": {
                    "label": "Sensible a Mayúsculas y Minúsculas"
                  },
                  "no": {
                    "label": "Insensible a Mayúsculas y Minúsculas"
                  }
                },
                "val": "yes"
              },
              "date_value": {
                "type": "date",
                "label": "Seleccionar Fecha",
                "show_if": "this.condition=='DATE'",
                "val": "1/31/2020",
                "required": true
              },
              "value": {
                "type": "text",
                "label": "Ingresar Valor",
                "show_if": "this.condition != 'DATE' && this.condition != 'EMPTY' && this.condition != 'NOT EMPTY' && this.condition != 'BLANK' && this.condition != 'NOT BLANK' && this.condition != 'IS NULL' && this.condition != 'IS NOT NULL' && this.condition != 'CONTAINED IN TABLE' && this.condition != 'NOT CONTAINED IN TABLE' && this.condition != 'IN REGEX TABLE' && this.condition != 'NOT IN REGEX TABLE'",
                "val": "",
                "required": true
              },
              "compare_table": {
                "type": "select",
                "label": "Seleccionar Tabla",
                "bind": "TABLES",
                "empty": "",
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "required": true
              },
              "compare_column": {
                "type": "select",
                "label": “Seleccionar Columna”,
                "table": "this.compare_table",
                "bind": "COLUMNS",
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "required": true
              },
              "delete": {
                "type": "button",
                "label": "Borrar",
                "function": "DELETE_ROW"
              }
            }
          },
          "options.apply_to_record": {
            "type": "checkbox",
            "label": "Aplicar al Registro",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "style": "margin-top: 10px",
            "breakLine": true
          },
          "apply_to_group_box": {
            "type": "fieldset",
            "label": "Aplicar al Grupo",
            "show_if": "options.apply_to_record=='false'",
            "repeat": false,
            "fields": {
              "options.apply_to_group_columns": {
                "type": "select",
                "label": "Seleccionar Columnas del Grupo",
                "required": true,
                "width": "100%",
                "table": "input_table",
                "multiple": true,
                "bind": "COLUMNS",
                "breakLine": true
              }
            }
          }
        }
      }
    }
  }
}