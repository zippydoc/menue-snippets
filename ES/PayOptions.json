{
  "options": {
    "type": "fieldset",
    "label": "Opciones",
    "repeat": false,
    "fields": {
      "options.provider": {
        "type": "select",
        "label": "Proveedor de pagos",
        "options": {
          "stripe": {
            "label": "Stripe"
          },
          "paypal": {
            "label": "Paypal"
          },
          "payoneer": {
            "label": "Payoneer"
          }
        },
        "val": "stripe",
        "required": true
      },
      "options.type": {
        "type": "select",
        "label": "Tipo de pago",
        "options": {
          "charge": {
            "label": "Cobrar"
          },
          "transfer": {
            "label": "Transferencia"
          }
        },
        "val": "charge",
        "required": true
      },
      "options.stripe.secret_key": {
        "type": "password",
        "label": "Clave secreta de Stripe",
        "show_if": "options.provider=='stripe'",
        "required": true,
        "val": "",
        "width": "100%",
        "breakLine": true
      }
    }
  }
}