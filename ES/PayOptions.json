{
  "options_box": {
    "type": "fieldset",
    "Etiqueta": "Opciones",
    "repeat": false,
    "fields": {
      "options.provider": {
        "type": "select",
        "Etiqueta": "Proveedor de pagos",
        "options": {
          "stripe": {
            "Etiqueta": "Stripe"
          },
          "paypal": {
            "Etiqueta": "Paypal"
          },
          "payoneer": {
            "Etiqueta": "Payoneer"
          }
        },
        "val": "stripe",
        "required": true
      },
      "options.type": {
        "type": "select",
        "Etiqueta": "Tipo de pago",
        "options": {
          "charge": {
            "Etiqueta": "Cobrar"
          },
          "transfer": {
            "Etiqueta": "Transferencia"
          }
        },
        "val": "charge",
        "required": true
      },
      "options.stripe.secret_key": {
        "type": "text",
        "Etiqueta": "Clave secreta de Stripe",
        "show_if": "options.provider=='stripe'",
        "required": true,
        "val": "",
        "width": "100%",
        "breakLine": true
      }
    }
  }
}