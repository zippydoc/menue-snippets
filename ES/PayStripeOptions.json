{
  "options": {
    "type": "fieldset",
    "label": "Opciones",
    "repeat": false,
    "fields": {
      "options.provider": {
        "type": "hidden",
        "val": "stripe"
      },
      "options.type": {
        "type": "select",
        "label": "Tipo de pago",
        "options": {
          "charge": {
            "label": "Cobrar"
          },
          "transfer": {
            "label": "Transferencia"
          }
        },
        "val": "charge",
        "required": true
      },
      "options.charge_type": {
        "type": "select",
        "label": "Tipo de carga",
        "show_if": "options.provider=='stripe' && options.type=='charge'",
        "options": {
          "charge_without_invoice": {
            "label": "Cobro inmediato sin envío de factura"
          },
          "send_invoice": {
            "label": "Sólo enviar factura"
          },
          "send_invoice_immediate_charge": {
            "label": "Envío de factura y cobro inmediato"
          }
        },
        "val": "send_invoice_immediate_charge",
        "required": true
      },
      "options.stripe.secret_key": {
        "type": "password",
        "label": "Clave secreta de Stripe",
        "show_if": "options.provider=='stripe'",
        "required": true,
        "val": "",
        "width": "100%",
        "breakLine": true
      }
    }
  }
}