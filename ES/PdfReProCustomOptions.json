{
  "options_box": {
    "type": "fieldset",
    "label": "Opciones",
    "repeat": false,
    "fields": {
      "options.script_name": {
        "type": "hidden",
        "val": "PdfReProCustom"
      },
      "options.type": {
        "type": "select",
        "label": "Tipo de Tarea",
        "options": {
          "get_placeholders_of_all_templates": {
            "label": "Get Placeholders of all Templates"
          },
          "get_placeholders_of_template": {
            "label": "Obtener marcadores de posición de una plantilla"
          },
          "create": {
            "label": "Crear PDF y exportar a la nube"
          }
        },
        "val": "get_placeholders_of_all_templates",
        "required": true,
        "breakLine": true
      },
      "options.where_to_create": {
        "type": "select",
        "label": "Dónde crear",
        "options": {
          "only_open_in_browser": {
            "label": "Sólo abrir el PDF en el navegador"
          },
          "only_export_to_cloud": {
            "label": "Sólo exportar a la nube"
          },
          "both_export_to_cloud_and_open_in_browser": {
            "label": "Tanto exportar a la nube como abrir el pdf en el navegador"
          }
        },
        "val": "only_open_in_browser",
        "required": true,
        "breakLine": true
      },
      "options.configure_by_table_help": {
        "type": "text",
        "label": "",
        "show_if": "options.type=='create'",
        "val": "Table Structure ( Template ID | Placeholder | Replace-Text )",
        "disabled": true,
        "width": "100%"
      },
      "options.table_id": {
        "type": "select",
        "label": "Seleccionar Tabla",
        "show_if": "options.type=='create'",
        "bind": "TABLES",
        "empty": "",
        "required": true,
        "breakLine": true
      },
      "pdfrepro_credential_box": {
        "type": "fieldset",
        "label": "Su propia clave API de la cuenta PDFrePRO",
        "repeat": false,
        "fields": {
          "options.pdfrepro_credentials.api_key": {
            "type": "text",
            "label": "Clave API",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.pdfrepro_credentials.shared_key": {
            "type": "text",
            "label": "Clave compartida",
            "required": true,
            "width": "100%",
            "breakLine": true
          }
        }
      },
      "options.template_id": {
        "type": "text",
        "label": "ID de la plantilla",
        "show_if": "options.type=='get_placeholders_of_template'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.webservice": {
        "type": "select",
        "label": "Seleccionar Servicio Web",
        "show_if": "options.type=='create'",
        "options": {
          "ms_one_drive": {
            "label": "Microsoft OneDrive"
          },
          "dropbox": {
            "label": "Buzón"
          },
          "google_drive": {
            "label": "Google Drive"
          }
        },
        "val": "ms_one_drive",
        "required": true,
        "breakLine": true
      },
      "export_link_token_frame": {
        "type": "fieldset",
        "label": "Exportar enlace",
        "show_if": "options.type=='create'",
        "repeat": false,
        "fields": {
          "options.github_url": {
            "type": "text",
            "label": "Ingresar enlace, por ejemplo, https://github.com/zippydoc/test",
            "show_if": "options.webservice=='github'",
            "val": "",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.export_dir": {
            "type": "text",
            "label": "Introduzca el directorio, por ejemplo, /MyZippyDocFiles/SubDir/",
            "show_if": "options.webservice!='github'",
            "val": "",
            "width": "100%",
            "breakLine": true
          },
          "options.github_token": {
            "type": "text",
            "label": "Especifica el token de acceso personal de Github que tiene permiso de escritura:",
            "show_if": "options.webservice=='github'",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.google_authorization_code": {
            "type": "text",
            "label": "Código de autorización de Google OAuth con alcance https://www.googleapis.com/auth/drive. Puedes obtenerlo aquí https://developers.google.com/oauthplayground/",
            "show_if": "options.webservice=='google_drive'",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.dropbox_authorization_code": {
            "type": "text",
            "label": "Dropbox Authorization Code. You can get it here https://www.dropbox.com/oauth2/authorize?client_id=9i7woztjp94jrkw&response_type=code",
            "show_if": "options.webservice=='dropbox'",
            "required": true,
            "width": "100%",
            "breakLine": true
          }
        }
      }
    }
  }
}