{
  "options": {
    "type": "fieldset",
    "label": "Seleccionar Opciones",
    "repeat": false,
    "fields": {
      "options.task_symbol": {
        "type": "hidden",
        "val": "periodicy_by_menu"
      },
      "options.custom.table": {
        "type": "fieldset",
        "label": "Posición de planificación",
        "repeat": true,
        "fields": {
          "item": {
            "type": "text",
            "label": "Partida",
            "val": "",
            "required": true
          },
          "position": {
            "type": "text",
            "label": "Posición",
            "val": "",
            "required": true,
            "breakLine": true
          },
          "amount": {
            "type": "number",
            "label": "Cantidad",
            "val": "",
            "required": true
          },
          "initial_date": {
            "type": "date",
            "label": "Fecha Inicial",
            "val": "",
            "required": true
          },
          "periodicy": {
            "type": "select",
            "label": "Periodicidad",
            "required": true,
            "options": {
              "One-Off": {
                "label": "One-Off"
              },
              "Daily": {
                "label": "Diario"
              },
              "Weekly": {
                "label": "semanal"
              },
              "Monthly": {
                "label": "Mensual"
              },
              "Quarterly": {
                "label": "Trimestral"
              },
              "Yearly": {
                "label": "Anual"
              }
            },
            "val": "One-Off"
          },
          "growth": {
            "type": "number",
            "label": "Crecimiento en %",
            "show_if": "this.periodicy!='One-Off'",
            "val": "",
            "required": true
          },
          "growth_period": {
            "type": "select",
            "label": "Período de Crecimiento",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Weekly": {
                "label": "semanal"
              },
              "Monthly": {
                "label": "Mes a Mes"
              },
              "Quarterly": {
                "label": "Trimestre a Trimestre"
              },
              "Yearly": {
                "label": "Año a Año"
              }
            },
            "val": "Weekly"
          },
          "growth_pattern": {
            "type": "select",
            "label": "Patrón de Crecimiento",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Linear": {
                "label": "Lineal"
              },
              "Compounding": {
                "label": "Compuesto"
              },
              "Jump-Fix Linear": {
                "label": "Jump-Fix Linear"
              },
              "Jump-Fix Compounding": {
                "label": "Compounding Jump-Fix"
              }
            },
            "val": "Compounding"
          },
          "final_date": {
            "type": "date",
            "label": "Fecha Final",
            "show_if": "this.periodicy!='One-Off'",
            "val": ""
          },
          "delete": {
            "type": "button",
            "label": "Borrar",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.end_date": {
        "type": "date",
        "label": "Fecha de Finalización de la Tabla",
        "val": "",
        "required": true,
        "style": "width: 300px"
      }
    }
  }
}