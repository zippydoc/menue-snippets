{
  "options": {
    "type": "fieldset",
    "label": "Seleccionar Opciones de Periodicidad",
    "repeat": false,
    "fields": {
      "options.task_symbol": {
        "type": "hidden",
        "val": "periodicy_by_table"
      },
      "options.standard_table": {
        "type": "checkbox",
        "label": "Tabla de Periodicidad Estándar",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "style": "margin-top: 10px",
        "breakLine": true
      },
      "options.initial_date": {
        "type": "select",
        "label": "Fecha Inicial",
        "show_if": "options.standard_table=='false'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true
      },
      "options.period": {
        "type": "select",
        "label": "Periodicidad (por ejemplo, mensual, trimestral)",
        "show_if": "options.standard_table=='false'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true
      },
      "options.final_date": {
        "type": "select",
        "label": "Fecha Final",
        "show_if": "options.standard_table=='false'",
        "table": "table_id",
        "bind": "COLUMNS",
        "breakLine": true
      },
      "options.volume": {
        "type": "select",
        "label": "Cantidad",
        "show_if": "options.standard_table=='false'",
        "table": "table_id",
        "bind": "COLUMNS"
      },
      "options.growth": {
        "type": "select",
        "label": "Crecimiento",
        "show_if": "options.standard_table=='false'",
        "table": "table_id",
        "bind": "COLUMNS"
      },
      "options.growth_period": {
        "type": "select",
        "label": "Período de Crecimiento",
        "show_if": "options.standard_table=='false'",
        "options": {
          "selected_period": {
            "label": "Igual a la Periodicidad"
          },
          "week_on_week": {
            "label": "Semana a Semana"
          },
          "month_on_month": {
            "label": "Mes a Mes"
          },
          "quarter_on_quarter": {
            "label": "Trimestre a Trimestre"
          },
          "year_on_year": {
            "label": "Año a Año"
          },
          "column": {
            "label": "Seleccionar Columna"
          }
        },
        "val": "selected_period"
      },
      "options.growth_period_column": {
        "type": "select",
        "label": "Columna del Período de Crecimiento",
        "show_if": "options.standard_table=='false' && options.growth_period=='column'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.use_growth_pattern_column": {
        "type": "checkbox",
        "label": "Usar Patrón de Crecimiento",
        "show_if": "options.standard_table=='false'",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "options.growth_pattern_column": {
        "type": "select",
        "label": "Patrón de Crecimiento",
        "show_if": "options.standard_table=='false' && options.use_growth_pattern_column=='true'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.end_date": {
        "type": "date",
        "label": "Fecha de Finalización de la Tabla",
        "val": "",
        "required": true,
        "style": "width: 300px"
      }
    }
  }
}