{
  "options": {
    "type": "fieldset",
    "label": "Seleccionar Opciones de Periodicidad",
    "repeat": false,
    "fields": {
      "options.type": {
        "type": "select",
        "label": "Tipo",
        "options": {
          "generate": {
            "label": "Generar Ejemplo de Periodicidad"
          },
          "process": {
            "label": "Tabla de Periodicidad del Proceso"
          }
        },
        "val": "generate",
        "breakLine": true
      },
      "amount_formatting_frame": {
        "type": "fieldset",
        "label": "Amount Column Formatting",
        "show_if": "options.type=='generate'",
        "repeat": false,
        "fields": {
          "options.amount.format__category": {
            "type": "select",
            "label": "Formato",
            "required": true,
            "options": {
              "standard": {
                "label": "Estándar"
              },
              "number": {
                "label": "Número"
              },
              "percentage": {
                "label": "Porcentaje"
              },
              "currency": {
                "label": "Moneda"
              }
            },
            "val": "currency"
          },
          "options.amount.format__rounding": {
            "type": "select",
            "label": "Redondeo",
            "show_if": "options.amount.format__category=='number' || options.amount.format__category=='percentage' || options.amount.format__category=='currency'",
            "required": true,
            "options": {
              "no_rounding": {
                "label": "Redondeo de números"
              },
              "0": {
                "label": "0 dígitos"
              },
              "1": {
                "label": "1 dígitos"
              },
              "2": {
                "label": "2 dígitos"
              },
              "3": {
                "label": "3 dígitos"
              },
              "4": {
                "label": "4 dígitos"
              },
              "5": {
                "label": "5 dígitos"
              },
              "6": {
                "label": "6 dígitos"
              },
              "7": {
                "label": "7 dígitos"
              },
              "8": {
                "label": "8 dígitos"
              },
              "9": {
                "label": "9 dígitos"
              }
            },
            "val": "2"
          },
          "options.amount.format__use_1000_separator": {
            "type": "checkbox",
            "label": "Usar el Separador de 1000(.)",
            "show_if": "options.amount.format__category=='number' || options.amount.format__category=='percentage' || options.amount.format__category=='currency'",
            "val": "true",
            "isOn": "true",
            "isOff": "false"
          },
          "options.amount.format__currency_symbol": {
            "type": "select",
            "label": "Símbolo",
            "show_if": "options.amount.format__category=='currency'",
            "required": true,
            "options": {
              "dollar": {
                "label": "$"
              },
              "euro": {
                "label": "€"
              },
              "pound": {
                "label": "£"
              }
            },
            "val": "dollar"
          }
        }
      },
      "options.standard_table": {
        "type": "checkbox",
        "label": "Tabla de Periodicidad Estándar",
        "show_if": "options.type=='process'",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.initial_date": {
        "type": "select",
        "label": "Fecha Inicial",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true
      },
      "options.period": {
        "type": "select",
        "label": "Periodicy (e.g. Monthly, Quarterly)",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true
      },
      "options.final_date": {
        "type": "select",
        "label": "Fecha Final",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS",
        "breakLine": true
      },
      "options.volume": {
        "type": "select",
        "label": "Cantidad",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS"
      },
      "options.growth": {
        "type": "select",
        "label": "Crecimiento",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS"
      },
      "options.growth_period": {
        "type": "select",
        "label": "Período de Crecimiento",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "options": {
          "selected_period": {
            "label": "Igual a la Periodicidad"
          },
          "week_on_week": {
            "label": "Semana a Semana"
          },
          "month_on_month": {
            "label": "Mes a Mes"
          },
          "quarter_on_quarter": {
            "label": "Trimestre a Trimestre"
          },
          "year_on_year": {
            "label": "Año a Año"
          },
          "column": {
            "label": “Seleccionar Columna”
          }
        },
        "val": "selected_period"
      },
      "options.growth_period_column": {
        "type": "select",
        "label": "Columna del Período de Crecimiento",
        "show_if": "options.type=='process' && options.standard_table=='false' && options.growth_period=='column'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.use_growth_pattern_column": {
        "type": "checkbox",
        "label": "Usar Patrón de Crecimiento",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "options.growth_pattern_column": {
        "type": "select",
        "label": "Patrón de Crecimiento",
        "show_if": "options.type=='process' && options.standard_table=='false' && options.use_growth_pattern_column=='true'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.end_date": {
        "type": "date",
        "label": "Fecha de Finalización de la Tabla",
        "show_if": "options.type=='process'",
        "val": "",
        "required": true,
        "style": "width: 300px"
      }
    }
  }
}