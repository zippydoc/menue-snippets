{
  "options": {
    "type": "fieldset",
    "label": "Seleccionar Opciones de Periodicidad",
    "repeat": false,
    "fields": {
      "options.type": {
        "type": "select",
        "label": "Tipo",
        "options": {
          "generate": {
            "label": "Generar Ejemplo de Periodicidad"
          },
          "process": {
            "label": "Tabla de Periodicidad del Proceso"
          },
          "custom": {
            "label": "Personalizado"
          }
        },
        "val": "custom",
        "breakLine": true
      },
      "input": {
        "type": "fieldset",
        "label": "Seleccionar Tabla de Entrada",
        "show_if": "options.type=='process'",
        "repeat": false,
        "fields": {
          "input_table": {
            "type": "select",
            "label": "Seleccionar Tabla",
            "bind": "TABLES",
            "empty": "",
            "required": true
          },
          "remove_input_table_after_processing": {
            "type": "hidden",
            "val": "false"
          },
          "is_word": {
            "type": "hidden",
            "val": "false"
          }
        },
        "breakLine": true
      },
      "amount_formatting_frame": {
        "type": "fieldset",
        "label": "Formato de la columna de importes",
        "show_if": "options.type=='generate'",
        "repeat": false,
        "fields": {
          "options.amount.format__category": {
            "type": "select",
            "label": "Formato",
            "required": true,
            "options": {
              "standard": {
                "label": "Estándar"
              },
              "number": {
                "label": "Número"
              },
              "percentage": {
                "label": "Porcentaje"
              },
              "currency": {
                "label": "Moneda"
              }
            },
            "val": "currency"
          },
          "options.amount.format__rounding": {
            "type": "select",
            "label": "Redondeo",
            "show_if": "options.amount.format__category=='number' || options.amount.format__category=='percentage' || options.amount.format__category=='currency'",
            "required": true,
            "options": {
              "no_rounding": {
                "label": "Redondeo de números"
              },
              "0": {
                "label": "0 dígitos"
              },
              "1": {
                "label": "1 dígitos"
              },
              "2": {
                "label": "2 dígitos"
              },
              "3": {
                "label": "3 dígitos"
              },
              "4": {
                "label": "4 dígitos"
              },
              "5": {
                "label": "5 dígitos"
              },
              "6": {
                "label": "6 dígitos"
              },
              "7": {
                "label": "7 dígitos"
              },
              "8": {
                "label": "8 dígitos"
              },
              "9": {
                "label": "9 dígitos"
              }
            },
            "val": "2"
          },
          "options.amount.format__use_1000_separator": {
            "type": "checkbox",
            "label": "Use 1000 Separator(.)",
            "show_if": "options.amount.format__category=='number' || options.amount.format__category=='percentage' || options.amount.format__category=='currency'",
            "val": "true",
            "isOn": "true",
            "isOff": "false"
          },
          "options.amount.format__currency_symbol": {
            "type": "select",
            "label": "Símbolo",
            "show_if": "options.amount.format__category=='currency'",
            "required": true,
            "options": {
              "dollar": {
                "label": "$"
              },
              "euro": {
                "label": "€"
              },
              "pound": {
                "label": "£"
              }
            },
            "val": "dollar"
          }
        }
      },
      "options.standard_table": {
        "type": "checkbox",
        "label": "Tabla de Periodicidad Estándar",
        "show_if": "options.type=='process'",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "style": "margin-top: 10px",
        "breakLine": true
      },
      "options.initial_date": {
        "type": "select",
        "label": "Fecha Inicial",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true
      },
      "options.period": {
        "type": "select",
        "label": "Periodicidad (por ejemplo, mensual, trimestral)",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true
      },
      "options.final_date": {
        "type": "select",
        "label": "Fecha Final",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS",
        "breakLine": true
      },
      "options.volume": {
        "type": "select",
        "label": "Cantidad",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS"
      },
      "options.growth": {
        "type": "select",
        "label": "Crecimiento",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS"
      },
      "options.growth_period": {
        "type": "select",
        "label": "Período de Crecimiento",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "options": {
          "selected_period": {
            "label": "Igual a la Periodicidad"
          },
          "week_on_week": {
            "label": "Semana a Semana"
          },
          "month_on_month": {
            "label": "Mes a Mes"
          },
          "quarter_on_quarter": {
            "label": "Trimestre a Trimestre"
          },
          "year_on_year": {
            "label": "Año a Año"
          },
          "column": {
            "label": "Seleccionar Columna"
          }
        },
        "val": "selected_period"
      },
      "options.growth_period_column": {
        "type": "select",
        "label": "Columna del Período de Crecimiento",
        "show_if": "options.type=='process' && options.standard_table=='false' && options.growth_period=='column'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.use_growth_pattern_column": {
        "type": "checkbox",
        "label": "Usar Patrón de Crecimiento",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "options.growth_pattern_column": {
        "type": "select",
        "label": "Patrón de Crecimiento",
        "show_if": "options.type=='process' && options.standard_table=='false' && options.use_growth_pattern_column=='true'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.custom.table": {
        "type": "fieldset",
        "label": "Posición de planificación",
        "show_if": "options.type=='custom'",
        "repeat": true,
        "fields": {
          "item": {
            "type": "text",
            "label": "Partida",
            "val": "",
            "required": true
          },
          "position": {
            "type": "text",
            "label": "Posición",
            "val": "",
            "required": true,
            "breakLine": true
          },
          "amount": {
            "type": "number",
            "label": "Cantidad",
            "val": "",
            "required": true
          },
          "amount_format__category": {
            "type": "select",
            "label": "Formato de importe",
            "show_if" : "$index == 0",
            "required": true,
            "options": {
              "standard": {
                "label": "Estándar"
              },
              "number": {
                "label": "Número"
              },
              "percentage": {
                "label": "Porcentaje"
              },
              "text": {
                "label": "Texto"
              },
              "date": {
                "label": "Fecha"
              },
              "currency": {
                "label": "Moneda"
              }
            },
            "val": "number"
          },
          "amount_format__rounding": {
            "type": "select",
            "label": "Redondeo",
            "show_if": "$index == 0 && (this.amount_format__category=='number' || this.amount_format__category=='percentage' || this.amount_format__category=='currency')",
            "required": true,
            "options": {
              "no_rounding": {
                "label": "Redondeo de números"
              },
              "0": {
                "label": "0 dígitos"
              },
              "1": {
                "label": "1 dígitos"
              },
              "2": {
                "label": "2 dígitos"
              },
              "3": {
                "label": "3 dígitos"
              },
              "4": {
                "label": "4 dígitos"
              },
              "5": {
                "label": "5 dígitos"
              },
              "6": {
                "label": "6 dígitos"
              },
              "7": {
                "label": "7 dígitos"
              },
              "8": {
                "label": "8 dígitos"
              },
              "9": {
                "label": "9 dígitos"
              }
            },
            "val": "2"
          },
          "amount_format__use_1000_separator": {
            "type": "checkbox",
            "label": "Use 1000 Separator(.)",
            "show_if": "$index == 0 && (this.amount_format__category=='number' || this.amount_format__category=='percentage' || this.amount_format__category=='currency')",
            "val": "true",
            "isOn": "true",
            "isOff": "false"
          },
          "amount_format__currency_symbol": {
            "type": "select",
            "label": "Símbolo",
            "show_if": "$index == 0 && (this.amount_format__category=='currency')",
            "required": true,
            "options": {
              "dollar": {
                "label": "$"
              },
              "euro": {
                "label": "€"
              },
              "pound": {
                "label": "£"
              }
            },
            "val": "dollar"
          },
          "amount_format__date_format": {
            "type": "select",
            "label": "Tipo",
            "show_if": "$index == 0 && (this.amount_format__category=='date')",
            "required": true,
            "options": {
              "mm/dd/yyyy": {
                "label": "3/14/2012"
              },
              "D, M dd, Y": {
                "label": "Miércoles, 14 de marzo de 2012"
              },
              "yyyy-mm-dd": {
                "label": "40982"
              }
            },
            "val": "mm/dd/yyyy",
            "breakLine": true
          },
          "initial_date": {
            "type": "date",
            "label": "Fecha Inicial",
            "val": "",
            "required": true
          },
          "initial_date_format__date_format": {
            "type": "select",
            "label": "Formato de fecha inicial",
            "show_if": "$index == 0",
            "required": true,
            "options": {
              "mm/dd/yyyy": {
                "label": "3/14/2012"
              },
              "D, M dd, Y": {
                "label": "Miércoles, 14 de marzo de 2012"
              },
              "yyyy-mm-dd": {
                "label": "40982"
              }
            },
            "val": "mm/dd/yyyy",
            "breakLine": true
          },
          "periodicy": {
            "type": "select",
            "label": "Periodicidad",
            "required": true,
            "options": {
              "One-Off": {
                "label": "One-Off"
              },
              "Diario": {
                "label": "Diario"
              },
              "Trabajo-Diario": {
                "label": "Trabajo-Diario"
              },
              "semanal": {
                "label": "semanal"
              },
              "Mensual": {
                "label": "Mensual"
              },
              "Trimestral": {
                "label": "Trimestral"
              },
              "Anual": {
                "label": "Anual"
              }
            },
            "val": "One-Off"
          },
          "growth": {
            "type": "number",
            "label": "Crecimiento",
            "show_if": "this.periodicy!='One-Off'",
            "val": "",
            "required": true
          },
          "growth_period": {
            "type": "select",
            "label": "Período de Crecimiento",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "semanal": {
                "label": "semanal"
              },
              "Mensual": {
                "label": "Mes a Mes"
              },
              "Trimestral": {
                "label": "Trimestre a Trimestre"
              },
              "Anual": {
                "label": "Año a Año"
              }
            },
            "val": "semanal"
          },
          "growth_pattern": {
            "type": "select",
            "label": "Patrón de Crecimiento",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Compuesto": {
                "label": "Compuesto"
              },
              "Lineal": {
                "label": "Lineal"
              },
              "Jump-Fix": {
                "label": "Jump-Fix"
              }
            },
            "val": "Compuesto"
          },
          "final_date": {
            "type": "date",
            "label": "Fecha Final",
            "show_if": "this.periodicy!='One-Off'",
            "val": ""
          },
          "delete": {
            "type": "button",
            "label": "Borrar",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.end_date": {
        "type": "date",
        "label": "Fecha de Finalización de la Tabla",
        "show_if": "options.type=='process' || options.type=='custom'",
        "val": "",
        "required": true,
        "style": "width: 300px"
      }
    }
  }
}