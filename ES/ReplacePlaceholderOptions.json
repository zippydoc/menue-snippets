{
  "options": {
    "type": "fieldset",
    "label": "Opciones",
    "repeat": false,
    "fields": {
      "options.find_col": {
        "type": "select",
        "label": "Columna del marcador de posición",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true
      },
      "options.placeholder_type": {
        "type": "select",
        "label": "Tipo de marcador de posición",
        "required": true,
        "options": {
          "text": {
            "label": "Texto"
          },
          "regex": {
            "label": "Expresión Regular"
          }
        },
        "val": "text"
      },
      "options.placeholder_text": {
        "type": "text",
        "label": "Marcador de posición",
        "show_if": "options.placeholder_type=='text'",
        "val": "",
        "placeholder": "FindText",
        "required": true,
        "breakLine": true
      },
      "options.placeholder_regex": {
        "type": "text",
        "label": "Marcador de posición RegEx",
        "show_if": "options.placeholder_type=='regex'",
        "val": "",
        "placeholder": "\\sFindText\\s",
        "required": true
      },
      "options.case_sensitivity": {
        "type": "select",
        "label": "Sensible a Mayúsculas y Minúsculas",
        "required": true,
        "options": {
          "yes": {
            "label": "Sensible a Mayúsculas y Minúsculas"
          },
          "no": {
            "label": "Insensible a Mayúsculas y Minúsculas"
          }
        },
        "val": "yes",
        "breakLine": true
      },
      "options.replace_col": {
        "type": "select",
        "label": "Reemplazar por columna",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      }
    }
  }
}