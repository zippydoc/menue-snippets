{
  "options": {
    "type": "fieldset",
    "label": "Ejecutar todas las opciones",
    "repeat": false,
    "fields": {
      "input_table_options": {
        "type": "fieldset",
        "label": "Especificar tablas de entrada",
        "breakLine": true,
        "repeat": false,
        "fields": {
          "options.select_type": {
            "type": "select",
            "label": "Seleccionar Tipo",
            "required": true,
            "options": {
              "table_selection": {
                "label": "Selecci칩n de mesa"
              },
              "select_by_pattern": {
                "label": "Seleccionar por patr칩n"
              }
            },
            "val": "table_selection"
          },
          "options.table_ids": {
            "type": "select",
            "label": "Seleccionar Tablas",
            "bind": "TABLES",
            "empty": "",
            "multiple": true,
            "show_if": "options.select_type=='table_selection'",
            "required": true
          },
          "options.filter_params": {
            "type": "fieldset",
            "label": "Mesas de juego",
            "show_if": "options.select_type=='select_by_pattern'",
            "breakLine": true,
            "repeat": true,
            "fields": {
              "keyword": {
                "type": "text",
                "label": "Introduzca la palabra clave",
                "required": true,
                "val": ""
              },
              "filter_target": {
                "type": "select",
                "label": "Filtro encendido",
                "required": true,
                "options": {
                  "table_name": {
                    "label": "Nombre de la Tabla"
                  },
                  "table_tag": {
                    "label": "Etiqueta de la mesa"
                  }
                },
                "val": "table_name"
              },
              "filter_type": {
                "type": "select",
                "label": "Tipo de filtro",
                "required": true,
                "options": {
                  "equal": {
                    "label": "Igual"
                  },
                  "contain": {
                    "label": "Contiene"
                  },
                  "start_with": {
                    "label": "Empezar Con"
                  },
                  "end_with": {
                    "label": "Termina Con"
                  },
                  "regex": {
                    "label": "Expresi칩n Regular"
                  }
                },
                "val": "equal"
              },
              "delete": {
                "type": "button",
                "label": "Borrar",
                "function": "DELETE_ROW"
              }
            }
          },
          "options.use_waiting_time": {
            "type": "checkbox",
            "label": "A침adir tiempo de espera",
            "val": "false",
            "isOn": "true",
            "isOff": "false"
          },
          "options.waiting_period": {
            "type": "number",
            "label": "Waiting time (sec)",
            "val": "0",
            "show_if": "options.use_waiting_time!='false'"
          }
        }
      },
      "task_chain": {
        "type": "checkbox",
        "label": "Cadena de tareas",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "schedule_options": {
        "type": "fieldset",
        "label": "Tareas a programar",
        "show_if": "task_chain == 'true'",
        "repeat": true,
        "fields": {
          "input_task": {
            "type": "select",
            "label": "Seleccionar tarea",
            "bind": "TASKS",
            "empty": "",
            "required": true
          },
          "waiting_time": {
            "type": "number",
            "label": "Waiting time (sec)",
            "val": "0",
            "required": true
          },
          "delete": {
            "type": "button",
            "label": "Borrar",
            "function": "DELETE_ROW"
          }
        },
        "breakLine": true
      },
      "unify_output_tables": {
        "type": "checkbox",
        "label": "Unify output tables",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      }
    }
  }
}