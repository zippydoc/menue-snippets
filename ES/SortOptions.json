    "repeat": false,
    "fields": {
      "sort": {
        "type": "fieldset",
        "label": "Seleccionar Ordenar Columnas",
        "repeat": true,
        "fields": {
          "column": {
            "type": "select",
            "label": "Columna",
            "table": "table_id",
            "bind": "COLUMNS",
            "required": true
          },
          "order": {
            "type": "select",
            "label": "Orden",
            "options": {
              "asc": {
                "label": "Ascendente"
              },
              "desc": {
                "label": "Descendente"
              }
            },
            "val": "asc"
          },
          "delete": {
            "type": "button",
            "label": "Borrar",
            "function": "DELETE_ROW"
          }
        },
        "breakLine": true
      }
    }
  }
}