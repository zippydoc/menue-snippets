{
  "options": {
    "type": "fieldset",
    "label": "Seleccionar Opciones",
    "repeat": false,
    "fields": {
      "options.split_method": {
        "type": "select",
        "label": "Método de División",
        "required": true,
        "options": {
          "standard": {
            "label": "Estándar"
          },
          "regex": {
            "label": "Expresión Regular"
          }
        },
        "val": "standard"
      },
      "options.split_type": {
        "type": "select",
        "label": "Tipo de división",
        "required": true,
        "options": {
          "split_to_columns": {
            "label": "Dividir A Columnas"
          },
          "split_to_rows": {
            "label": "Dividir A Filas"
          }
        },
        "val": "split_to_columns"
      },
      "options.standard_delimiter": {
        "type": "select",
        "label": "Delimitador de División",
        "show_if": "options.split_method=='standard'",
        "required": true,
        "options": {
          "tabs": {
            "label": "Pestañas"
          },
          "space": {
            "label": "Espacio"
          },
          "whitespace": {
            "label": "Espacio en Blanco"
          },
          "linebreak": {
            "label": "Salto de línea"
          },
          "punctuation": {
            "label": "Puntuación"
          },
          "punctuation_whitespace": {
            "label": "Puntuación y Espacio en Blanco"
          },
          "custom": {
            "label": "Personalizado"
          }
        },
        "val": "punctuation"
      },
      "options.delimiter": {
        "type": "text",
        "label": "Delimitador de División",
        "show_if": "options.split_method=='standard' && options.standard_delimiter=='custom'",
        "val": ",",
        "trim": "false",
        "required": true,
        "breakLine": true
      },
      "format_frame": {
        "type": "fieldset",
        "label": "Formato a Parsear para la División",
        "show_if": "options.split_method=='regex'",
        "repeat": false,
        "fields": {
          "options.format_to_convert.regular_expression": {
            "type": "text",
            "label": "Parse Regular Expression ( ex: ([a-z]+)\\s([a-z]+) )",
            "val": "[a-z]+\\s[a-z]+",
            "required": true,
            "width": "100%",
            "trim": "false",
            "breakLine": true
          },
          "options.format_to_convert.case_insensitive": {
            "type": "checkbox",
            "label": "Insensible a Mayúsculas y Minúsculas",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          }
        }
      },
      "options.n_multi_n": {
        "type": "checkbox",
        "label": "N x N split if multiple columns are selected",
        "show_if": "options.split_type=='split_to_rows'",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      }
    }
  }
}