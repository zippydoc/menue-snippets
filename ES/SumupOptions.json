{
  "actions": {
    "type": "fieldset",
    "label": "Agregar Acciones",
    "repeat": true,
    "fields": {
      "column": {
        "type": "select",
        "label": "Columna",
        "table": "input_table",
		"assign_selected_value_to":"this.output_column_name",
        "bind": "COLUMNS"
      },
      "action": {
        "type": "select",
        "label": "Acción",
        "options": {
          "group_by": {
            "label": "Agrupar por"
          },
          "count": {
            "label": "Cuenta"
          },
          "sum": {
            "label": "Suma"
          },
          "first": {
            "label": "Primero"
          },
          "last": {
            "label": "Última"
          },
          "shortest": {
            "label": "Más Corto"
          },
          "longest": {
            "label": "Más largo"
          },
          "concatenate": {
            "label": "Concatenar"
          },
          "mathematics": {
            "label": "Matemáticas"
          }
        }
      },
      "count_action_category": {
        "type": "select",
        "label": "Tipo de Acción",
        "show_if": "this.action=='count'",
        "options": {
          "all": {
            "label": "Todo"
          },
          "distinct": {
            "label": "Distinto"
          },
          "empty_or_zero": {
            "label": "Vacío o 0"
          },
          "non_empty_or_zero": {
            "label": "Distinto de Vacío o 0"
          }
        },
        "val": "all"
      },
      "action_type1": {
        "type": "select",
        "label": "Subtipo de Acción",
        "show_if": "this.action=='count' && (this.count_action_category=='all' || this.count_action_category=='distinct')",
        "options": {
          "-": {
            "label": "-"
          },
          "non_zero": {
            "label": "Distinto de 0"
          },
          "non_empty": {
            "label": "Distinto de Vacío"
          },
          "non_null": {
            "label": "Distinto de Null"
          },
          "non_blank": {
            "label": "Distinto de En Blanco"
          }
        },
        "val": "-"
      },
      "action_type2": {
        "type": "select",
        "label": "Subtipo de Acción",
        "show_if": "this.action=='count' && this.count_action_category=='empty_or_zero'",
        "options": {
          "zero": {
            "label": "0"
          },
          "empty": {
            "label": "Vacío (Null y En Blanco)"
          },
          "null": {
            "label": "Null"
          },
          "blank": {
            "label": "En Blanco"
          }
        },
        "val": "zero"
      },
      "action_type3": {
        "type": "select",
        "label": "Subtipo de Acción",
        "show_if": "this.action=='count' && this.count_action_category=='non_empty_or_zero'",
        "options": {
          "non_zero": {
            "label": "Distinto de 0"
          },
          "non_empty": {
            "label": "Distinto de Vacío"
          },
          "non_null": {
            "label": "Distinto de Null"
          },
          "non_blank": {
            "label": "Distinto de En Blanco"
          }
        },
        "val": "non_zero"
      },
      "mathematics_action_category": {
        "type": "select",
        "label": "Tipo de Acción",
        "show_if": "this.action=='mathematics'",
        "options": {
          "min": {
            "label": "Mín"
          },
          "max": {
            "label": "Máx"
          },
          "average": {
            "label": "Promedio"
          },
          "median": {
            "label": "Mediana"
          },
          "standard_deviation": {
            "label": "Desviación Estándar"
          },
          "variance": {
            "label": "Varianza"
          }
        },
        "val": "min"
      },
      "action_type4": {
        "type": "select",
        "label": "Subtipo de Acción",
        "show_if": "this.action=='mathematics'",
        "options": {
          "include_zero": {
            "label": "Incluir 0"
          },
          "exclude_zero": {
            "label": "Excluir 0"
          }
        },
        "val": "include_zero"
      },
      "concatenate_separator": {
        "type": "text",
        "label": "Separador",
        "show_if": "this.action=='concatenate'",
        "val": ","
      },
      "output_column_name": {
        "type": "text",
        "label": "Imprimir Nombre de Columna",
        "val": ""
      },
      "delete": {
        "type": "button",
        "label": "Borrar",
        "function": "DELETE_ROW"
      }
    }
  }
}