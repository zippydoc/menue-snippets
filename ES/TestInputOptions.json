{
  "options": {
    "type": "fieldset",
    "Etiqueta": "Resultado de la cabecera de la tabla y la etiqueta",
    "repeat": false,
    "fields": {
      "has_header": {
        "type": "button",
        "Etiqueta": "¡Tiene cabecera!",
        "show_if": "$input_table.numOfHeader >= 1"
      },
      "has_label": {
        "type": "button",
        "Etiqueta": "¡Tiene etiqueta!",
        "show_if": "$input_table.numOfLabel >= 1"
      },
      "has_both": {
        "type": "button",
        "Etiqueta": "¡Tiene ambos!",
        "show_if": "$input_table.numOfHeader >= 1 && $input_table.numOfLabel >= 1"
      },
      "has_both2": {
        "type": "text",
        "Etiqueta": "¡Tiene ambos2!",
        "show_if": "$input_table.numOfHeader>=1 && $input_table.numOfLabel>=1",
        "val": "both"
      },
      "header_only": {
        "type": "button",
        "Etiqueta": "¡Sólo encabezado!",
        "show_if": "$input_table.numOfHeader >= 1 && $input_table.numOfLabel < 1"
      },
      "label_only": {
        "type": "button",
        "Etiqueta": "¡Sólo etiqueta!",
        "show_if": "$input_table.numOfHeader < 1 && $input_table.numOfLabel >= 1"
      },
      "no_header": {
        "type": "button",
        "Etiqueta": "¡Sin cabecera!",
        "show_if": "$input_table.numOfHeader < 1"
      },
      "no_label": {
        "type": "button",
        "Etiqueta": "¡Sin etiqueta!",
        "show_if": "$input_table.numOfLabel < 1"
      }
    }
  }
}