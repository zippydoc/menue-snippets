{
  "options": {
    "type": "fieldset",
    "label": "Seleccionar Opciones",
    "repeat": false,
    "fields": {
      "options.type": {
        "type": "radio",
        "val": "transform_group",
        "show_if": "false",
        "values": {
          "transform_group": "Transform Group"
        },
        "breakLine": true
      },
      "options.group_label_direction": {
        "type": "select",
        "label": "Dirección de Transformación",
        "required": true,
        "options": {
          "group_to_label": {
            "label": "Grupo a Etiqueta"
          },
          "label_to_group": {
            "label": "Etiqueta a Grupo"
          }
        },
        "val": "group_to_label"
      },
      "options.group_column": {
        "type": "select",
        "label": "Columna del Grupo",
        "show_if": "options.group_label_direction=='group_to_label'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true
      },
      "options.group_column_name": {
        "type": "text",
        "label": "Nombre de Columna del Grupo",
        "show_if": "options.group_label_direction=='label_to_group'",
        "val": "Group",
        "required": true,
        "breakLine": true
      }
    }
  }
}