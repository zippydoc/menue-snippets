        "val": "output_all_fields",
        "options": {
          "output_all_fields": {
            "label": "Imprimir Todas las Columnas"
          },
          "output_common_fields": {
            "label": "Imprimir Columnas Comunes"
          }
        },
        "breakLine": true
      },
      "options.add_table_name_column": {
        "type": "checkbox",
        "label": "Añadir columna de nombre de tabla",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      }
    }
  }
}