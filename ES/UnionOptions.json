{
  "options": {
    "type": "fieldset",
    "label": "Opciones de Unión",
    "repeat": false,
    "fields": {
      "options.union_type": {
        "type": "select",
        "label": "Seleccionar Tipo de Unión",
        "val": "auto_config_by_name",
        "options": {
          "auto_config_by_name": {
            "label": "Configuración Automática Por Nombre"
          },
          "auto_config_by_position": {
            "label": "Configuración Automática Por Posición"
          }
        }
      },
      "options.field_output_type": {
        "type": "select",
        "label": "Tipo de Salida de la Columna",
