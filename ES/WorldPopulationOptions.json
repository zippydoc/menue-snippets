{
  "options_box": {
    "type": "fieldset",
    "label": "Opciones",
    "repeat": false,
    "fields": {
      "options.chart_type": {
        "type": "hidden",
        "val": "zoomable_sunburst"
      },
      "options.group_by": {
        "type": "select",
        "label": "Agrupar por",
        "required": true,
        "options": {
          "Region": {
            "label": "Región"
          },
          "Income Group": {
            "label": "Grupo de ingresos"
          }
        },
        "val": "Region"
      },
      "options.measure": {
        "type": "select",
        "label": "Medida",
        "required": true,
        "options": {
          "population_2020": {
            "label": "Población 2020"
          },
          "gdp_2020_in_usd": {
            "label": "PIB 2020 en USD"
          }
        },
        "val": "population_2020",
        "breakLine": true
      },
      "options.output_as_chart": {
        "type": "checkbox",
        "label": "Salida de un gráfico",
        "val": "true",
        "isOn": "true",
        "isOff": "false"
      },
      "options.graph_type": {
        "type": "select",
        "label": "Tipo de gráfico",
        "show_if": "options.output_as_chart=='true'",
        "required": true,
        "options": {
          "zoomable_sunburst": {
            "label": "Rayo de sol"
          },
          "tidy_tree": {
            "label": "Árbol"
          },
          "treemap": {
            "label": "Mapa del árbol"
          }
        },
        "val": "zoomable_sunburst",
        "breakLine": true
      },
      "options.configure_input_table": {
        "type": "checkbox",
        "label": "Configurar la tabla de entrada",
        "show_if": "options.output_as_chart=='true'",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      }
    }
  }
}