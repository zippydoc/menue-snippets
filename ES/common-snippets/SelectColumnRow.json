{
  "placeholder": {
    "breakLine": true
  },
  "apply_to_all_columns": {
    "type": "checkbox",
    "label": "Todas las Columnas",
    "show_if": "false",
    "val": "false",
    "isOn": "true",
    "isOff": "false",
    "breakLine": true	
  },
  "apply_columns": {
    "type": "select",
    "label": "Seleccionar Columnas a Aplicar",
    "show_if": "$input_table.numOfHeader >= 1",
    "required": true,
    "table": "input_table",
    "multiple": true,
    "bind": "COLUMNS",
    "breakLine": true
  },
  "apply_to_all_rows": {
    "type": "checkbox",
    "label": "Todas las filas",
    "show_if": "false",
    "val": "false",
    "isOn": "true",
    "isOff": "false",
    "breakLine": true
  },
  "apply_rows": {
    "type": "select",
    "label": "Seleccionar Filas A Aplicar",
    "show_if": "$input_table.numOfLabel >= 1",
    "required": true,
    "table": "input_table",
    "multiple": true,
    "bind": "LABELS",
    "breakLine": true
  },
  "intersection": {
    "type": "select",
    "label": "Selección",
    "show_if": "false",
    "options": {
      "all": {
        "label": "Todas las Filas y Columnas seleccionadas"
      },
      "intersection": {
        "label": "Intersección de Filas y Columnas seleccionadas"
      }
    },
    "val": "intersection"
  }
}