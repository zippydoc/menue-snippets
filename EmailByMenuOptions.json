{
  "options_frame": {
    "type": "fieldset",
    "label": "Select Options",
    "repeat": false,
    "fields": {
      "options.task_type": {
        "type": "hidden",
        "val": "write_email"
      },
      "options.to": {
        "type": "text",
        "label": "To",
        "required": true,
        "val": "",
        "placeholder": "user1@domain.com; user2@domain.com;",
        "width": "100%"
      },
      "options.add_cc": {
        "type": "checkbox",
        "label": "CC",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "options.cc": {
        "type": "text",
        "label": "CC",
        "show_if": "options.add_cc=='true'",
        "val": "",
        "placeholder": "ccuser1@domain.com; ccuser2@domain.com",
        "style": "min-width: 260px",
        "breakLine": true
      },
      "options.add_bcc": {
        "type": "checkbox",
        "label": "BCC",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "options.bcc": {
        "type": "text",
        "label": "BCC",
        "show_if": "options.add_bcc=='true'",
        "val": "",
        "placeholder": "bccuser1@domain.com; bccuser1@domain.com",
        "style": "min-width: 260px",
        "breakLine": true
      },
      "options.subject": {
        "type": "text",
        "label": "Subject",
        "required": true,
        "val": "",
        "placeholder": "Subject",
        "width": "100%"
      },
      "options.body": {
        "type": "textarea",
        "label": "Body",
        "val": "",
        "placeholder": "Text",
        "md_no_resize": true,
        "rows": 3,
        "width": "100%"
      }
    }
  },
  "provider_frame": {
    "type": "fieldset",
    "label": "Provider",
    "repeat": false,
    "fields": {
      "options.provider": {
        "type": "select",
        "label": "Provider of your e-mail",
        "options": {
          "outlook": {
            "label": "MS Outlook"
          },
          "gmail": {
            "label": "Gmail"
          },
          "custom": {
            "label": "Custom (coming soon)"
          }
        },
        "val": "outlook",
        "required": true,
        "breakLine": true
      },
      "options.custom.host": {
        "type": "text",
        "label": "SMTP Host",
        "show_if": "options.provider=='custom'",
        "required": true
      },
      "options.custom.port": {
        "type": "text",
        "label": "SMTP Port",
        "show_if": "options.provider=='custom'",
        "required": true
      },
      "options.custom.user": {
        "type": "text",
        "label": "SMTP User",
        "show_if": "options.provider=='custom'",
        "required": true
      },
      "options.custom.password": {
        "type": "password",
        "label": "SMTP Password",
        "show_if": "options.provider=='custom'",
        "required": true
      }
    }
  }
}