{
  "options_box": {
    "type": "fieldset", 
    "label": "Options", 
    "repeat": false, 
    "fields": {
      "options.add_columns": {
        "type": "fieldset", 
        "label": "Ajouter des colonnes", 
        "repeat": true, 
        "fields": {
          "new_column_name": {
            "type": "text", 
            "label": "Nouveau nom de colonne", 
            "val": "", 
            "breakLine": true
          }, 
          "task_type": {
            "type": "select", 
            "label": "Type de tâche", 
            "required": true, 
            "options": {
              "static_value": {
                "label": "Valeur statique"
              }, 
              "numeric_formula": {
                "label": "Formule numérique"
              }, 
              "text_formula": {
                "label": "Formule du texte"
              }, 
              "multi_column_functions": {
                "label": "Multi-Colonne"
              }, 
              "multi_row_functions": {
                "label": "Multi-rangs"
              }
            }, 
            "val": "multi_column_functions", 
            "breakLine": true
          }, 
          "multi_column_functions__function": {
            "type": "select", 
            "label": "Fonction", 
            "show_if": "this.task_type=='multi_column_functions'", 
            "required": true, 
            "options": {
              "sum": {
                "label": "Somme"
              }, 
              "average": {
                "label": "Moyenne"
              }, 
              "median": {
                "label": "Médiane"
              }, 
              "max": {
                "label": "Max"
              }, 
              "min": {
                "label": "Min"
              }, 
              "standard_deviation": {
                "label": "Écart type"
              }, 
              "product": {
                "label": "Produit"
              }, 
              "quota": {
                "label": "Quota"
              }, 
              "absolute_growth": {
                "label": "Croissance absolue"
              }, 
              "relative_growth": {
                "label": "Croissance relative"
              }, 
              "compound_growth": {
                "label": "Croissance composée"
              }
            }, 
            "val": "sum"
          }, 
          "multi_column_functions__sel_columns": {
            "type": "select", 
            "label": "Sélectionner Colonne(s)", 
            "show_if": "this.task_type=='multi_column_functions' && (this.multi_column_functions__function=='sum' || this.multi_column_functions__function=='average' || this.multi_column_functions__function=='median' || this.multi_column_functions__function=='max' || this.multi_column_functions__function=='min' || this.multi_column_functions__function=='standard_deviation' || this.multi_column_functions__function=='product')", 
            "table": "input_table", 
            "bind": "COLUMNS", 
            "multiple": true, 
            "required": true
          }, 
          "multi_column_functions__column_a": {
            "type": "select", 
            "label": "Sélectionner la colonne A", 
            "show_if": "this.task_type=='multi_column_functions' && (this.multi_column_functions__function=='quota' || this.multi_column_functions__function=='absolute_growth' || this.multi_column_functions__function=='relative_growth' || this.multi_column_functions__function=='compound_growth')", 
            "table": "input_table", 
            "bind": "COLUMNS", 
            "required": true
          }, 
          "multi_column_functions__column_b": {
            "type": "select", 
            "label": "Sélectionner la colonne B", 
            "show_if": "this.task_type=='multi_column_functions' && (this.multi_column_functions__function=='quota' || this.multi_column_functions__function=='absolute_growth' || this.multi_column_functions__function=='relative_growth' || this.multi_column_functions__function=='compound_growth')", 
            "table": "input_table", 
            "bind": "COLUMNS", 
            "required": true
          }, 
          "multi_column_functions__n_value": {
            "type": "text", 
            "label": "N (nombre entier positif)", 
            "show_if": "this.task_type=='multi_column_functions' && this.multi_column_functions__function=='compound_growth'", 
            "val": "1", 
            "required": true
          }, 
          "multi_row_functions__function": {
            "type": "select", 
            "label": "Fonction", 
            "show_if": "this.task_type=='multi_row_functions'", 
            "required": true, 
            "options": {
              "trailing_row_n_average": {
                "label": "Moyenne de rangée N mobile"
              }, 
              "index_from_row_n": {
                "label": "Indice depuis ligne N"
              }, 
              "absolute_growth": {
                "label": "Croissance absolue"
              }, 
              "relative_growth": {
                "label": "Croissance relative"
              }, 
              "compound_growth": {
                "label": "Croissance composée"
              }
            }, 
            "val": "trailing_row_n_average"
          }, 
          "multi_row_functions__sel_column": {
            "type": "select", 
            "label": "Colonne", 
            "show_if": "this.task_type=='multi_row_functions' && (this.multi_row_functions__function=='trailing_row_n_average' || this.multi_row_functions__function=='index_from_row_n' || this.multi_row_functions__function=='absolute_growth' || this.multi_row_functions__function=='relative_growth' || this.multi_row_functions__function=='compound_growth')", 
            "table": "input_table", 
            "bind": "COLUMNS", 
            "required": true
          }, 
          "multi_row_functions__n_value": {
            "type": "text", 
            "label": "N (nombre entier positif)", 
            "show_if": "this.task_type=='multi_row_functions' && (this.multi_row_functions__function=='trailing_row_n_average' || this.multi_row_functions__function=='index_from_row_n' || this.multi_row_functions__function=='compound_growth')", 
            "val": "1", 
            "required": true, 
            "breakLine": true
          }, 
          "static_value": {
            "type": "text", 
            "label": "Valeur d'entrée", 
            "show_if": "this.task_type=='static_value'", 
            "val": "", 
            "width": "100%"
          }, 
          "numeric_formula": {
            "type": "text", 
            "label": "Formule de saisie, p. ex. [Colonne1] + 2 * ([Ligne-1:Colonne3] - [Colonne1])", 
            "show_if": "this.task_type=='numeric_formula'", 
            "val": "", 
            "width": "100%"
          }, 
          "text_formula": {
            "type": "text", 
            "label": "Formule de saisie, p. ex. [prénom] + ' ' + [nom de famille] + ' ' + [Ligne-1:Colonne3]", 
            "show_if": "this.task_type=='text_formula'", 
            "val": "", 
            "width": "100%"
          }, 
          "use_multi_row": {
            "type": "checkbox", 
            "label": "Options à plusieurs rangées", 
            "show_if": "this.task_type=='numeric_formula' || this.task_type=='text_formula'", 
            "val": "false", 
            "isOn": "true", 
            "isOff": "false"
          }, 
          "if_row_not_exist": {
            "type": "select", 
            "label": "Si ligne désignée inexistante", 
            "show_if": "this.use_multi_row=='true' && (this.task_type=='numeric_formula' || this.task_type=='text_formula')", 
            "required": true, 
            "options": {
              "empty": {
                "label": "Vide ou 0"
              }, 
              "closest": {
                "label": "Valeur de la ligne la plus proche"
              }
            }, 
            "val": "empty", 
            "breakLine": true
          }, 
          "format__category": {
            "type": "select", 
            "label": "Format", 
            "required": true, 
            "options": {
              "standard": {
                "label": "Standard"
              }, 
              "number": {
                "label": "Numéro"
              }, 
              "percentage": {
                "label": "Pourcentage"
              }, 
              "text": {
                "label": "Texte"
              }, 
              "date": {
                "label": "Date"
              }, 
              "currency": {
                "label": "Monnaie"
              }
            }, 
            "val": "standard"
          }, 
          "format__rounding": {
            "type": "select", 
            "label": "Arrondi", 
            "show_if": "this.format__category=='number' || this.format__category=='percentage' || this.format__category=='currency'", 
            "required": true, 
            "options": {
              "no_rounding": {
                "label": "Pas d'arrondi"
              }, 
              "0": {
                "label": "0 chiffre"
              }, 
              "1": {
                "label": "1 chiffre"
              }, 
              "2": {
                "label": "2 chiffres"
              }, 
              "3": {
                "label": "3 chiffres"
              }, 
              "4": {
                "label": "4 chiffres"
              }, 
              "5": {
                "label": "5 chiffres"
              }, 
              "6": {
                "label": "6 chiffres"
              }, 
              "7": {
                "label": "7 chiffres"
              }, 
              "8": {
                "label": "8 chiffres"
              }, 
              "9": {
                "label": "9 chiffres"
              }
            }, 
            "val": "2"
          }, 
          "format__use_1000_separator": {
            "type": "checkbox", 
            "label": "Utilisez le séparateur 1000 (.)", 
            "show_if": "this.format__category=='number' || this.format__category=='percentage' || this.format__category=='currency'", 
            "val": "true", 
            "isOn": "true", 
            "isOff": "false"
          }, 
          "format__currency_symbol": {
            "type": "select", 
            "label": "Symbole", 
            "show_if": "this.format__category=='currency'", 
            "required": true, 
            "options": {
              "dollar": {
                "label": "$"
              }, 
              "euro": {
                "label": "€"
              }, 
              "pound": {
                "label": "£"
              }
            }, 
            "val": "dollar"
          }, 
          "format__date_format": {
            "type": "select", 
            "label": "Type", 
            "show_if": "this.format__category=='date'", 
            "required": true, 
            "options": {
              "mm/dd/yyyy": {
                "label": "3/14/2012"
              }, 
              "D,  M dd,  Y": {
                "label": "Mercredi 14 mars 2012"
              }, 
              "yyyy-mm-dd": {
                "label": "2012-03-14"
              }
            }, 
            "val": "mm/dd/yyyy", 
            "breakLine": true
          }, 
          "group_counter__inc_dec_curly_bracket": {
            "type": "checkbox", 
            "label": "Augmenter/diminuer avec {}", 
            "show_if": "this.task_type=='group_counter'", 
            "val": "false", 
            "isOn": "true", 
            "isOff": "false", 
            "breakLine": true
          }, 
          "group_counter__inc_dec_square_bracket": {
            "type": "checkbox", 
            "label": "Augmenter/diminuer avec []", 
            "show_if": "this.task_type=='group_counter'", 
            "val": "false", 
            "isOn": "true", 
            "isOff": "false", 
            "breakLine": true
          }, 
          "group_counter__inc_dec_parenthesis": {
            "type": "checkbox", 
            "label": "Augmenter/diminuer avec ()", 
            "show_if": "this.task_type=='group_counter'", 
            "val": "false", 
            "isOn": "true", 
            "isOff": "false", 
            "breakLine": true
          }, 
          "group_counter__custom": {
            "type": "checkbox", 
            "label": "Compteur de groupe personnalisé", 
            "show_if": "this.task_type=='group_counter'", 
            "val": "false", 
            "isOn": "true", 
            "isOff": "false", 
            "breakLine": true
          }, 
          "group_counter__column": {
            "type": "select", 
            "label": "Colonne", 
            "show_if": "this.task_type=='group_counter' && this.group_counter__custom=='true'", 
            "table": "input_table", 
            "bind": "COLUMNS", 
            "required": true
          }, 
          "group_counter__type": {
            "type": "select", 
            "label": "Quand", 
            "show_if": "this.task_type=='group_counter' && this.group_counter__custom=='true'", 
            "required": true, 
            "options": {
              "starts_with": {
                "label": "COMMENCE AVEC"
              }, 
              "ends_with": {
                "label": "SE TERMINE PAR"
              }, 
              "starts_with_regex": {
                "label": "COMMENCE AVEC L'EXPRESSION RÉGULIÈRE"
              }, 
              "ends_with_regex": {
                "label": "SE TERMINE PAR EXPRESSION RÉGULIÈRE"
              }
            }, 
            "val": "starts_with"
          }, 
          "group_counter__value": {
            "type": "text", 
            "label": "Valeur d'entrée", 
            "show_if": "this.task_type=='group_counter' && this.group_counter__custom=='true'", 
            "val": ".", 
            "breakLine": true
          }, 
          "group_counter__label": {
            "type": "text", 
            "label": "Étiquette d'entrée", 
            "show_if": "this.task_type=='group_counter' && this.group_counter__custom=='true'", 
            "val": "sentence", 
            "breakLine": true
          }, 
          "group_counter__if_end_of_string_start_labeling_with_next_record": {
            "type": "checkbox", 
            "label": "Si fin de chaîne, commencer à étiqueter avec le registre suivant", 
            "show_if": "this.task_type=='group_counter' && this.group_counter__custom=='true' && (this.group_counter__type=='starts_with' || this.group_counter__type=='starts_with_regex')", 
            "val": "true", 
            "isOn": "true", 
            "isOff": "false"
          }, 
          "group_counter__if_begin_of_string_start_labeling_with_previous_record": {
            "type": "checkbox", 
            "label": "Si début de chaîne, commencer à étiqueter avec le disque précédent", 
            "show_if": "this.task_type=='group_counter' && this.group_counter__custom=='true' && (this.group_counter__type=='ends_with' || this.group_counter__type=='ends_with_regex')", 
            "val": "true", 
            "isOn": "true", 
            "isOff": "false"
          }, 
          "group_counter__always_include": {
            "type": "checkbox", 
            "label": "Toujours inclure", 
            "show_if": "this.task_type=='group_counter' && this.group_counter__custom=='true'", 
            "val": "true", 
            "isOn": "true", 
            "isOff": "false"
          }, 
          "apply_to_group__enabled": {
            "type": "checkbox", 
            "label": "Appliquer au groupe", 
            "show_if": "this.task_type!='static_value'", 
            "val": "false", 
            "isOn": "true", 
            "isOff": "false"
          }, 
          "apply_to_group__group_columns": {
            "type": "select", 
            "label": "Colonne(s) de groupe", 
            "show_if": "this.apply_to_group__enabled == 'true' && this.task_type!='static_value'", 
            "table": "input_table", 
            "bind": "COLUMNS", 
            "multiple": true, 
            "required": true
          }, 
          "delete": {
            "type": "button", 
            "label": "Supprimer", 
            "function": "DELETE_ROW"
          }
        }
      }, 
      "options.use_filter": {
        "type": "checkbox", 
        "label": "Utiliser un filtre", 
        "val": "false", 
        "isOn": "true", 
        "isOff": "false", 
        "style": "margin-top: 10px", 
        "breakLine": true
      }, 
      "filter_box": {
        "type": "fieldset", 
        "label": "Options de filtrage", 
        "show_if": "options.use_filter=='true'", 
        "repeat": false, 
        "fields": {
          "options.filter": {
            "type": "fieldset", 
            "label": "Ajouter des filtres", 
            "repeat": true, 
            "fields": {
              "initial_op": {
                "type": "select", 
                "label": "Sélectionner l'opérateur logique", 
                "required": true, 
                "show_if" :  "$index == 0", 
                "options": {
                  "if": {
                    "label": "SI"
                  }, 
                  "if_not": {
                    "label": "SINON"
                  }
                }, 
                "val": "if"
              }, 
              "op": {
                "type": "select", 
                "label": "Sélectionner l'opérateur logique", 
                "required": true, 
                "show_if" :  "$index > 0", 
                "options": {
                  "and": {
                    "label": "ET"
                  }, 
                  "or": {
                    "label": "OU"
                  }, 
                  "and_not": {
                    "label": "ET NON"
                  }, 
                  "or_not": {
                    "label": "OU NON"
                  }
                }, 
                "val": "and"
              }, 
              "column": {
                "type": "select", 
                "label": "Sélectionner une colonne", 
                "table": "input_table", 
                "bind": "COLUMNS", 
                "required": true
              }, 
              "condition": {
                "type": "select", 
                "label": "Sélectionner un opérateur", 
                "required": true, 
                "options": {
                  "CONTIENT": {
                    "label": "CONTIENT"
                  }, 
                  "CONTAINED IN STRING": {
                    "label": "CONTENU DANS"
                  }, 
                  "COMMENCE AVEC": {
                    "label": "COMMENCE AVEC"
                  }, 
                  "SE TERMINE PAR": {
                    "label": "SE TERMINE PAR"
                  }, 
                  "=": {
                    "label": "ÉGAL"
                  }, 
                  ">": {
                    "label": "SUPÉRIEUR À"
                  }, 
                  ">=": {
                    "label": "SUPÉRIEUR OU ÉGAL"
                  }, 
                  "<": {
                    "label": "INFÉRIEUR À"
                  }, 
                  "<=": {
                    "label": "INFÉRIEUR OU ÉGAL"
                  }, 
                  "EMPTY": {
                    "label": "EST VIDE"
                  }, 
                  "BLANK": {
                    "label": "EST BLANC"
                  }, 
                  "EST NUL": {
                    "label": "EST NUL"
                  }, 
                  "CORRESPONDANCE EXPRESSION RÉGULIÈRE": {
                    "label": "CORRESPONDANCE EXPRESSION RÉGULIÈRE"
                  }, 
                  "CONTAINED IN TABLE": {
                    "label": "EN TABLE"
                  }, 
                  "DANS LE TABLEAU D'EXPRESSIONS RÉGULIÈRES": {
                    "label": "DANS LE TABLEAU D'EXPRESSIONS RÉGULIÈRES"
                  }, 
                  "DATE": {
                    "label": "DATE"
                  }
                }, 
                "val": "CONTIENT"
              }, 
              "date_condition": {
                "type": "select", 
                "label": "Sélectionner l'opérateur de date", 
                "required": true, 
                "show_if": "this.condition == 'DATE'", 
                "options": {
                  "<": {
                    "label": "AVANT"
                  }, 
                  "<=": {
                    "label": "AVANT OU ÉGAL"
                  }, 
                  "=": {
                    "label": "ÉGAL"
                  }, 
                  ">": {
                    "label": "APRÈS"
                  }, 
                  ">=": {
                    "label": "APRÈS OU ÉGAL"
                  }
                }, 
                "val": "="
              }, 
              "case_sensitive": {
                "type": "select", 
                "label": "Sélectionner la sensibilité à la casse", 
                "required": true, 
                "show_if": "this.condition == 'CONTAINS' || this.condition == 'CONTAINED IN STRING' || this.condition == '=' || this.condition == 'STARTS WITH' || this.condition == 'ENDS WITH' || this.condition == 'REGEX MATCH' || this.condition == 'NOT REGEX MATCH' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'", 
                "options": {
                  "yes": {
                    "label": "Respecter la casse"
                  }, 
                  "no": {
                    "label": "Ignorer la casse"
                  }
                }, 
                "val": "yes"
              }, 
              "date_value": {
                "type": "date", 
                "label": "Sélectionner une date", 
                "show_if": "this.condition=='DATE'", 
                "val": "1/31/2020", 
                "required": true
              }, 
              "value": {
                "type": "text", 
                "label": "Valeur d'entrée", 
                "show_if": "this.condition != 'DATE' && this.condition != 'EMPTY' && this.condition != 'NOT EMPTY' && this.condition != 'BLANK' && this.condition != 'NOT BLANK' && this.condition != 'IS NULL' && this.condition != 'IS NOT NULL' && this.condition != 'CONTAINED IN TABLE' && this.condition != 'NOT CONTAINED IN TABLE' && this.condition != 'IN REGEX TABLE' && this.condition != 'NOT IN REGEX TABLE'", 
                "val": "", 
                "required": true
              }, 
              "compare_table": {
                "type": "select", 
                "label": "Sélectionner un tableau", 
                "bind": "TABLES", 
                "empty": "", 
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'", 
                "required": true
              }, 
              "compare_column": {
                "type": "select", 
                "label": "Sélectionner une colonne", 
                "table": "this.compare_table", 
                "bind": "COLUMNS", 
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'", 
                "required": true
              }, 
              "delete": {
                "type": "button", 
                "label": "Supprimer", 
                "function": "DELETE_ROW"
              }
            }
          }, 
          "options.apply_to_record": {
            "type": "checkbox", 
            "label": "Appliquer au registre", 
            "val": "true", 
            "isOn": "true", 
            "isOff": "false", 
            "style": "margin-top: 10px", 
            "breakLine": true
          }, 
          "apply_to_group_box": {
            "type": "fieldset", 
            "label": "Appliquer au groupe", 
            "show_if": "options.apply_to_record=='false'", 
            "repeat": false, 
            "fields": {
              "options.apply_to_group_columns": {
                "type": "select", 
                "label": "Sélectionner les colonnes du groupe", 
                "required": true, 
                "width": "100%", 
                "table": "input_table", 
                "multiple": true, 
                "bind": "COLUMNS", 
                "breakLine": true
              }
            }
          }
        }
      }
    }
  }
}