{
  "options": {
    "type": "fieldset",
    "label": "Sélectionner les options",
    "repeat": false,
    "fields": {
      "options.position": {
        "type": "select",
        "label": "Sélectionner une position",
        "show_if": "$input_table.numOfLabel >= 1",
        "required": true,
        "options": {
          "add_rows_at_table_end": {
            "label": "Add row on bottom"
          },
          "add_row_on_top": {
            "label": "Add row on top"
          },
          "add_rows_above_selected_row": {
            "label": "Add row above selection"
          },
          "add_rows_below_selected_row": {
            "label": "Add row below selection"
          },
          "add_row_after_each_group": {
            "label": "Ajouter une ligne après chaque groupe"
          }
        },
        "val": "add_rows_at_table_end",
        "breakLine": true
      },
      "options.group_column": {
        "type": "select",
        "label": "Colonne de groupe",
        "show_if": "$input_table.numOfLabel < 1 && options.position=='add_row_after_each_group'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.use_filter": {
        "type": "select",
        "label": "Sélectionner le type",
        "show_if": "false",
        "required": true,
        "options": {
          "false": {
            "label": "Ajouter une ligne pour chaque ligne du tableau"
          },
          "true": {
            "label": "Ajouter une ligne pour chaque ligne spécifiée"
          }
        },
        "val": "false",
        "breakLine": true,
        "style": "margin-top: 10px"
      },
      "filter_box": {
        "type": "fieldset",
        "label": "Options de filtrage",
        "show_if": "options.use_filter=='true' && $input_table.numOfLabel < 1",
        "repeat": false,
        "fields": {
          "options.filter": {
            "type": "fieldset",
            "label": "Ajouter des filtres",
            "repeat": true,
            "fields": {
              "initial_op": {
                "type": "select",
                "label": "Sélectionner l'opérateur logique",
                "required": true,
                "show_if": "$index == 0",
                "options": {
                  "if": {
                    "label": "SI"
                  },
                  "if_not": {
                    "label": "SINON"
                  }
                },
                "val": "if"
              },
              "op": {
                "type": "select",
                "label": "Sélectionner l'opérateur logique",
                "required": true,
                "show_if": "$index > 0",
                "options": {
                  "and": {
                    "label": "ET"
                  },
                  "or": {
                    "label": "OU"
                  },
                  "and_not": {
                    "label": "ET NON"
                  },
                  "or_not": {
                    "label": "OU NON"
                  }
                },
                "val": "and"
              },
              "column": {
                "type": "select",
                "label": "Sélectionner une colonne",
                "table": "input_table",
                "bind": "COLUMNS",
                "required": true
              },
              "condition": {
                "type": "select",
                "label": "Sélectionner un opérateur",
                "required": true,
                "options": {
                  "CONTIENT": {
                    "label": "CONTIENT"
                  },
                  "CONTAINED IN STRING": {
                    "label": "CONTENU DANS"
                  },
                  "COMMENCE AVEC": {
                    "label": "COMMENCE AVEC"
                  },
                  "SE TERMINE PAR": {
                    "label": "SE TERMINE PAR"
                  },
                  "=": {
                    "label": "ÉGAL"
                  },
                  ">": {
                    "label": "SUPÉRIEUR À"
                  },
                  ">=": {
                    "label": "SUPÉRIEUR OU ÉGAL"
                  },
                  "<": {
                    "label": "INFÉRIEUR À"
                  },
                  "<=": {
                    "label": "INFÉRIEUR OU ÉGAL"
                  },
                  "EMPTY": {
                    "label": "EST VIDE"
                  },
                  "BLANK": {
                    "label": "EST BLANC"
                  },
                  "EST NUL": {
                    "label": "EST NUL"
                  },
                  "CORRESPONDANCE EXPRESSION RÉGULIÈRE": {
                    "label": "CORRESPONDANCE EXPRESSION RÉGULIÈRE"
                  },
                  "CONTAINED IN TABLE": {
                    "label": "EN TABLE"
                  },
                  "DANS LE TABLEAU D'EXPRESSIONS RÉGULIÈRES": {
                    "label": "DANS LE TABLEAU D'EXPRESSIONS RÉGULIÈRES"
                  },
                  "DATE": {
                    "label": "DATE"
                  }
                },
                "val": "CONTIENT"
              },
              "date_condition": {
                "type": "select",
                "label": "Sélectionner l'opérateur de date",
                "required": true,
                "show_if": "this.condition == 'DATE'",
                "options": {
                  "<": {
                    "label": "AVANT"
                  },
                  "<=": {
                    "label": "AVANT OU ÉGAL"
                  },
                  "=": {
                    "label": "ÉGAL"
                  },
                  ">": {
                    "label": "APRÈS"
                  },
                  ">=": {
                    "label": "APRÈS OU ÉGAL"
                  }
                },
                "val": "="
              },
              "case_sensitive": {
                "type": "select",
                "label": "Sélectionner la sensibilité à la casse",
                "required": true,
                "show_if": "this.condition == 'CONTAINS' || this.condition == 'CONTAINED IN STRING' || this.condition == '=' || this.condition == 'STARTS WITH' || this.condition == 'ENDS WITH' || this.condition == 'REGEX MATCH' || this.condition == 'NOT REGEX MATCH' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "options": {
                  "yes": {
                    "label": "Respecter la casse"
                  },
                  "no": {
                    "label": "Ignorer la casse"
                  }
                },
                "val": "yes"
              },
              "date_value": {
                "type": "date",
                "label": "Sélectionner une date",
                "show_if": "this.condition=='DATE'",
                "val": "",
                "required": true
              },
              "value": {
                "type": "text",
                "label": "Valeur d'entrée",
                "show_if": "this.condition != 'DATE' && this.condition != 'EMPTY' && this.condition != 'NOT EMPTY' && this.condition != 'BLANK' && this.condition != 'NOT BLANK' && this.condition != 'IS NULL' && this.condition != 'IS NOT NULL' && this.condition != 'CONTAINED IN TABLE' && this.condition != 'NOT CONTAINED IN TABLE' && this.condition != 'IN REGEX TABLE' && this.condition != 'NOT IN REGEX TABLE'",
                "val": "",
                "required": true
              },
              "compare_table": {
                "type": "select",
                "label": "Sélectionner un tableau",
                "bind": "TABLES",
                "empty": "",
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "required": true
              },
              "compare_column": {
                "type": "select",
                "label": "Sélectionner une colonne",
                "table": "this.compare_table",
                "bind": "COLUMNS",
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "required": true
              },
              "delete": {
                "type": "button",
                "label": "Supprimer",
                "function": "DELETE_ROW"
              }
            }
          },
          "options.apply_to_record": {
            "type": "checkbox",
            "label": "Appliquer au registre",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "style": "margin-top: 10px",
            "breakLine": true
          },
          "apply_to_group_box": {
            "type": "fieldset",
            "label": "Appliquer au groupe",
            "show_if": "options.apply_to_record=='false'",
            "repeat": false,
            "fields": {
              "options.apply_to_group_columns": {
                "type": "select",
                "label": "Sélectionner les colonnes du groupe",
                "required": true,
                "width": "100%",
                "table": "input_table",
                "multiple": true,
                "bind": "COLUMNS",
                "breakLine": true
              }
            }
          }
        }
      },
      "options.add_rows": {
        "type": "fieldset",
        "label": "Nouvelle option de ligne",
        "repeat": true,
        "fields": {
          "new_row_name": {
            "type": "text",
            "label": "Nom de nouvelle colonne",
            "show_if": "$input_table.numOfLabel >= 1",
            "val": ""
          },
          "function_type": {
            "type": "select",
            "label": "Type de tâche",
            "show_if": "false",
            "required": true,
            "options": {
              "multi_column_functions": {
                "label": "Multi-Colonne"
              },
              "multi_row_functions": {
                "label": "Multi-rangs"
              }
            },
            "val": "multi_row_functions"
          },
          "multi_row_functions__function": {
            "type": "select",
            "label": "Sélectionner les fonctions",
            "show_if": "$input_table.numOfLabel >= 1",
            "required": true,
            "options": {
              "sum": {
                "label": "Somme"
              },
              "average": {
                "label": "Moyenne"
              },
              "median": {
                "label": "Médiane"
              },
              "standard_deviation": {
                "label": "Écart type"
              },
              "variance": {
                "label": "Variance"
              },
              "product": {
                "label": "Produit"
              },
              "quota": {
                "label": "Quota"
              }
            },
            "val": "sum"
          },
          "multi_row_functions__function_use_filter": {
            "type": "select",
            "label": "Sélectionner les fonctions",
            "show_if": "$input_table.numOfLabel < 1",
            "required": true,
            "options": {
              "sum": {
                "label": "Somme"
              },
              "average": {
                "label": "Moyenne"
              },
              "median": {
                "label": "Médiane"
              },
              "standard_deviation": {
                "label": "Écart type"
              },
              "variance": {
                "label": "Variance"
              },
              "product": {
                "label": "Produit"
              }
            },
            "val": "sum"
          },
          "multi_row_functions__sel_labels": {
            "type": "select",
            "label": "Sélectionner les rangées",
            "show_if": "$input_table.numOfLabel >= 1 && this.multi_row_functions__function!='quota'",
            "required": true,
            "table": "input_table",
            "multiple": true,
            "bind": "LABELS"
          },
          "multi_row_functions__sel_rows": {
            "type": "select",
            "label": "Sélectionner les lignes",
            "show_if": "false",
            "required": true,
            "options": {
              "row-1": {
                "label": "Ligne-1"
              },
              "row-2": {
                "label": "Row-2"
              },
              "row-3": {
                "label": "Row-3"
              },
              "row-4": {
                "label": "Row-4"
              },
              "row-5": {
                "label": "Rang 5"
              },
              "row-6": {
                "label": "Rang-6"
              },
              "row-7": {
                "label": "Rangée 7"
              },
              "row-8": {
                "label": "Rang 8"
              },
              "row-9": {
                "label": "Rangée 9"
              },
              "row-10": {
                "label": "Rangée-10"
              },
              "row+1": {
                "label": "Rangée+1"
              },
              "row+2": {
                "label": "Row+2"
              },
              "row+3": {
                "label": "Row+3"
              },
              "row+4": {
                "label": "Rangée 4"
              },
              "row+5": {
                "label": "Rang+5"
              },
              "row+6": {
                "label": "Rangée + 6"
              },
              "row+7": {
                "label": "Rangée + 7"
              },
              "row+8": {
                "label": "Rangée + 8"
              },
              "row+9": {
                "label": "Rangée + 9"
              },
              "row+10": {
                "label": "Rang+10"
              }
            },
            "multiple": true,
            "val": "row-1"
          },
          "multi_row_functions__sel_label_a": {
            "type": "select",
            "label": "Sélectionner l'étiquette A",
            "show_if": "$input_table.numOfLabel >= 1 && this.multi_row_functions__function=='quota'",
            "required": true,
            "table": "input_table",
            "bind": "LABELS"
          },
          "multi_row_functions__sel_label_b": {
            "type": "select",
            "label": "Sélectionner l'étiquette B",
            "show_if": "$input_table.numOfLabel >= 1 && this.multi_row_functions__function=='quota'",
            "required": true,
            "table": "input_table",
            "bind": "LABELS",
            "breakLine": true
          },
          "position": {
            "type": "select",
            "label": "Position",
            "show_if": "$input_table.numOfLabel >= 1",
            "required": true,
            "options": {
              "bottom": {
                "label": "BOTTOM"
              },
              "top": {
                "label": "TOP"
              },
              "above": {
                "label": "PLUS HAUT"
              },
              "below": {
                "label": "DESSOUS"
              }
            },
            "val": "bottom"
          },
          "positioning_row": {
            "type": "select",
            "label": "Positionnement de la rangée",
            "show_if": "$input_table.numOfLabel >= 1 && (this.position=='above' || this.position=='below')",
            "required": true,
            "table": "input_table",
            "bind": "LABELS"
          },
          "format__category": {
            "type": "select",
            "label": "Format",
            "required": true,
            "options": {
              "standard": {
                "label": "Standard"
              },
              "number": {
                "label": "Numéro"
              },
              "percentage": {
                "label": "Pourcentage"
              },
              "text": {
                "label": "Texte"
              },
              "date": {
                "label": "Date"
              },
              "currency": {
                "label": "Monnaie"
              }
            },
            "val": "standard"
          },
          "format__rounding": {
            "type": "select",
            "label": "Arrondi",
            "show_if": "this.format__category=='number' || this.format__category=='percentage' || this.format__category=='currency'",
            "required": true,
            "options": {
              "no_rounding": {
                "label": "Pas d'arrondi"
              },
              "0": {
                "label": "0 chiffre"
              },
              "1": {
                "label": "1 chiffre"
              },
              "2": {
                "label": "2 chiffres"
              },
              "3": {
                "label": "3 chiffres"
              },
              "4": {
                "label": "4 chiffres"
              },
              "5": {
                "label": "5 chiffres"
              },
              "6": {
                "label": "6 chiffres"
              },
              "7": {
                "label": "7 chiffres"
              },
              "8": {
                "label": "8 chiffres"
              },
              "9": {
                "label": "9 chiffres"
              }
            },
            "val": "no_rounding"
          },
          "format__use_1000_separator": {
            "type": "checkbox",
            "label": "Use 1000 Separator(.)",
            "show_if": "this.format__category=='number' || this.format__category=='percentage' || this.format__category=='currency'",
            "val": "false",
            "isOn": "true",
            "isOff": "false"
          },
          "format__currency_symbol": {
            "type": "select",
            "label": "Symbole",
            "show_if": "this.format__category=='currency'",
            "required": true,
            "options": {
              "dollar": {
                "label": "$"
              },
              "euro": {
                "label": "€"
              },
              "pound": {
                "label": "£"
              }
            },
            "val": "dollar"
          },
          "format__date_format": {
            "type": "select",
            "label": "Type",
            "show_if": "this.format__category=='date'",
            "required": true,
            "options": {
              "mm/dd/yyyy": {
                "label": "3/14/2012"
              },
              "D, M dd, Y": {
                "label": "Mercredi 14 mars 2012"
              },
              "yyyy-mm-dd": {
                "label": "2012-03-14"
              }
            },
            "val": "mm/dd/yyyy"
          },
          "delete": {
            "type": "button",
            "label": "Supprimer",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.add_new_row": {
        "type": "checkbox",
        "label": "Ajouter une Étiquette",
        "show_if": "$input_table.numOfLabel < 1",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "style": "margin-top: 10px",
        "breakLine": true
      },
      "options.new_row_label": {
        "type": "text",
        "label": "Label Name",
        "show_if": "$input_table.numOfLabel < 1 && options.add_new_row == 'true'",
        "val": ""
      },
      "options.new_sel_column": {
        "type": "select",
        "label": "Sélectionner une colonne",
        "show_if": "$input_table.numOfLabel < 1 && options.add_new_row == 'true'",
        "required": true,
        "table": "input_table",
        "multiple": false,
        "bind": "COLUMNS",
        "breakLine": true
      },
      "options.insert_on_top": {
        "type": "checkbox",
        "label": "Insert on Top",
        "show_if": "$input_table.numOfLabel < 1",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "style": "margin-top: 10px",
        "breakLine": true
      }
    }
  }
}