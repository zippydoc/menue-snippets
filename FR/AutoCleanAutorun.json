{
  "output_autorun_frame": {
    "type": "fieldset",
    "label": "Table Key",
    "show_if": "output.auto_run=='true'",
    "repeat": false,
    "fields": {
		"options.task_filter": {
        "type": "select",
        "label": "Key-Lock pair filter",
        "options": {
          "specific_tables": {
            "label": "Specify Task(s)"
          },
          "current_flow_tables": {
            "label": "Current Flow Tasks"
          },
          "flow_tables": {
            "label": "Specify Flow(s)"
          },
          "all_tables": {
            "label": "All Tasks"
          }
		 }
		},
      "output.autorun.tasks": {
        "type": "text",
        "label": "Autorun the following Tasks",
        "val": "",
        "placeholder": "';' separated list",
        "required": true,
        "style": "width: 100%"
      },
      "output.autorun.define_type": {
        "type": "select",
        "label": "Define type",
        "required": true,
        "options": {
          "manually": {
            "label": "Define manually"
          },
          "table_header": {
            "label": "Define by table header"
          },
          "tree_structure": {
            "label": "Define by tree structure"
          },		  
          "table_content": {
            "label": "Define by table content"
          }
        },
        "val": "manually"
      },
      "output.autorun.names": {
        "type": "fieldset",
        "label": "Define Key Pins",
        "show_if": "output.autorun.define_type=='manually'",
        "repeat": true,
        "fields": {
          "name": {
            "type": "text",
            "label": "Key Pin",
            "val": "",
            "required": true
          },
          "value": {
            "type": "text",
            "label": "Key Pin Value",
            "val": "",
            "required": true
          },
          "delete": {
            "type": "button",
            "label": "Supprimer",
            "function": "DELETE_ROW"
          }
        }
      },
      "output.autorun.name_column": {
        "type": "select",
        "label": "Select Key Pin Column",
        "show_if": "output.autorun.define_type=='table_content'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true
      },
      "output.autorun.value_column": {
        "type": "select",
        "label": "Select Key Pin Value Column",
        "show_if": "output.autorun.define_type=='table_content'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true
      }
    }
  }
}