{
  "input": {
    "type": "fieldset",
    "label": "Sélectionner la table de recherche",
    "repeat": false,
    "fields": {
      "tables": {
        "type": "fieldset",
        "label": "Sélectionner les tableaux",
        "repeat": true,
        "fields": {
          "table_id": {
            "type": "select",
            "label": "Tableau de recherche",
            "bind": "TABLES",
            "required": true
          },
          "lookup_header_column": {
            "type": "select",
            "label": "Colonne d'en-tête",
            "table": "this.table_id",
            "bind": "COLUMNS",
            "required": true
          },
          "lookup_value_column": {
            "type": "select",
            "label": "Colonne de valeurs",
            "table": "this.table_id",
            "bind": "COLUMNS",
            "required": true
          },
          "lookup_mapping_column": {
            "type": "select",
            "label": "Colonne cartographique",
            "table": "this.table_id",
            "bind": "COLUMNS"
          },
          "delete": {
            "type": "button",
            "label": "Supprimer",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.treatment": {
        "type": "select",
        "label": "Traitement d'événements multiples",
        "required": true,
        "options": {
          "sum": {
            "label": "Somme"
          },
          "min": {
            "label": "Min"
          },
          "max": {
            "label": "Max"
          },
          "shortest": {
            "label": "Le plus court"
          },
          "longest": {
            "label": "La plus longue"
          },
          "first": {
            "label": "Premier"
          },
          "last": {
            "label": "Dernier"
          },
          "concatenate": {
            "label": "Concaténer"
          }
        },
        "val": "sum",
        "style": "min-width: 200px"
      },
      "options.treatment_delimiter": {
        "type": "text",
        "label": "Délimiteur",
        "show_if": "options.treatment=='concatenate'",
        "required": true,
        "minLength": 1,
        "maxLength": 255,
        "val": ";",
        "breakLine": true
      }
    }
  }
}