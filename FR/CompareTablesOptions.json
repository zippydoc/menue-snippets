{
  "options": {
    "type": "fieldset",
    "label": "Options",
    "repeat": false,
    "fields": {
      "compare_set": {
        "type": "fieldset",
        "label": "Sélectionner les patterns",
        "repeat": true,
        "fields": {
          "pattern": {
            "type": "select",
            "label": "Type de pattern de tableau",
            "options": {
              "all_col": {
                "label": "Identité de toutes les colonnes"
              },
              "two_col": {
                "label": "Identité à deux colonnes"
              }
            },
            "val": "all_col",
            "required": true
          },
          "compare_type": {
            "type": "select",
            "label": "Type de pattern de cellule",
            "options": {
              "equal": {
                "label": "Égale"
              },
              "contain": {
                "label": "Contient"
              },
              "start_with": {
                "label": "Commence par"
              },
              "end_with": {
                "label": "Se termine par"
              },
              "reg_exp": {
                "label": "Expression régulière"
              }
            },
            "val": "equal",
            "required": true
          },
          "case_sensitive": {
            "type": "select",
            "label": "Sensibilité à la casse",
            "required": true,
            "options": {
              "yes": {
                "label": "Respecter la casse"
              },
              "no": {
                "label": "Ignorer la casse"
              }
            },
            "val": "no"
          },
          "expression": {
            "type": "text",
            "label": "Expression",
            "show_if": "this.compare_type != 'equal'",
            "required": true,
            "val": ""
          },
          "delete": {
            "show_if": "this.field_name != ''",
            "type": "button",
            "label": "Supprimer",
            "function": "DELETE_ROW"
          }
        },
        "breakLine": true
      },
      "target": {
        "type": "select",
        "label": "Cible",
        "options": {
          "to_table": {
            "label": "Appliquer au tableau"
          },
          "to_rows": {
            "label": "Ligne par ligne"
          }
        },
        "val": "to_table",
        "required": true
      },
      "match_type": {
        "type": "select",
        "show_if": "target != 'to_table'",
        "label": "Type de correspondance",
        "options": {
          "match": {
            "label": "Correspondances uniquement"
          },
          "nonmatch": {
            "label": "Différences uniquement"
          },
          "all": {
            "label": "Tout"
          }
        },
        "val": "match",
        "required": true,
        "breakLine": true
      },
      "create_sql": {
        "type": "checkbox",
        "label": "Afficher détails SQL",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      }
    }
  }
}