{
  "options": {
    "type": "fieldset",
    "label": "Convertir les options",
    "repeat": false,
    "fields": {
      "options.text_col": {
        "type": "select",
        "label": "Colonne de texte",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.apply_section_by_section": {
        "type": "checkbox",
        "label": "Appliquer section par section",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "options.section_cols": {
        "type": "select",
        "label": "Section column(s)",
        "show_if": "options.apply_section_by_section=='true'",
        "table": "table_id",
        "bind": "COLUMNS",
        "multiple": true
      }
    }
  }
}