{
  "options": {
    "type": "fieldset",
    "label": "Sélectionner les options",
    "repeat": false,
    "fields": {
      "options.standard.start": {
        "type": "hidden",
        "val": "1"
      },
      "options.standard.multiplier_at_maximum_impact_level": {
        "type": "text",
        "label": "Valeur maximale",
        "val": "2",
        "required": true
      },
      "options.standard.maximum": {
        "type": "text",
        "label": "Période maximale",
        "val": "50",
        "required": true
      },
      "options.standard.multiplier_end_value": {
        "type": "text",
        "label": "Valeur finale",
        "show_if": "options.standard.end_value_equals_initial_value=='no'",
        "val": "1",
        "required": true
      },
      "options.standard.end": {
        "type": "text",
        "label": "Fin de la période",
        "val": "100",
        "required": true,
        "breakLine": true
      },
      "options.standard.end_value_equals_initial_value": {
        "type": "checkbox",
        "label": "Valeur initiale et valeur finale égales à 1",
        "width": "100%",
        "val": "yes",
        "isOn": "yes",
        "isOff": "no",
        "breakLine": true
      },
      "options.standard.maximum_plateau": {
        "type": "checkbox",
        "label": "Plateau maximal",
        "width": "100%",
        "val": "yes",
        "isOn": "yes",
        "isOff": "no",
        "breakLine": true
      },
      "options.standard.no_of_periods_prior_defined_maximum_point": {
        "type": "text",
        "label": "Nb de périodes avant point maximum défini",
        "show_if": "options.standard.maximum_plateau=='yes'",
        "val": "0",
        "style": "width: 250px"
      },
      "options.standard.no_of_periods_post_defined_maximum_point": {
        "type": "text",
        "label": "Nb de périodes après point maximum défini",
        "show_if": "options.standard.maximum_plateau=='yes'",
        "val": "0",
        "style": "width: 250px",
        "breakLine": true
      },
      "options.standard.left_slope": {
        "type": "select",
        "label": "Pente gauche",
        "options": {
          "vertical": {
            "label": "Vertical"
          },
          "linear": {
            "label": "Linéaire"
          },
          "standard_distribution": {
            "label": "Distribution standard"
          }
        },
        "val": "standard_distribution"
      },
      "options.standard.use_auto_calculated_sigma_for_left_slope": {
        "type": "checkbox",
        "label": "Sigma gauche calculé automatiquement",
        "show_if": "options.standard.left_slope=='standard_distribution'",
        "val": "true",
        "isOn": "true",
        "isOff": "false"
      },
      "options.standard.left_slope_sigma": {
        "type": "text",
        "label": "Sigma de pente gauche",
        "show_if": "options.standard.left_slope=='standard_distribution' && options.standard.use_auto_calculated_sigma_for_left_slope=='false'",
        "val": "",
        "breakLine": true
      },
      "options.standard.right_slope": {
        "type": "select",
        "label": "Pente droite",
        "required": true,
        "options": {
          "vertical": {
            "label": "Vertical"
          },
          "linear": {
            "label": "Linéaire"
          },
          "standard_distribution": {
            "label": "Distribution standard"
          }
        },
        "val": "standard_distribution"
      },
      "options.standard.use_auto_calculated_sigma_for_right_slope": {
        "type": "checkbox",
        "label": "Sigma droit calculé automatiquement",
        "show_if": "options.standard.right_slope=='standard_distribution'",
        "val": "true",
        "isOn": "true",
        "isOff": "false"
      },
      "options.standard.right_slope_sigma": {
        "type": "text",
        "label": "Sigma de la pente droite",
        "show_if": "options.standard.right_slope=='standard_distribution' && options.standard.use_auto_calculated_sigma_for_right_slope=='false'",
        "val": "",
        "breakLine": true
      }
    }
  }
}