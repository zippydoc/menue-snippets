{
  "options_frame": {
    "type": "fieldset",
    "label": "Options",
    "repeat": false,
    "fields": {
      "options.group_by": {
        "type": "select",
        "label": "Grouper par",
        "required": true,
        "options": {
          "Region": {
            "label": "Région"
          },
          "Income Group": {
            "label": "Groupe de revenu"
          }
        },
        "val": "Region"
      },
      "options.stat_var_name": {
        "type": "select",
        "label": "Données statistiques",
        "required": true,
        "options": {
          "Count_Person": {
            "label": "Population"
          },
          "GrowthRate_Count_Person": {
            "label": "Taux de croissance de la population"
          },
          "Count_Person_PerArea": {
            "label": "Densité de la population"
          },
          "Count_Person_IsInternetUser_PerCapita": {
            "label": "Pourcentage d'utilisateurs d'Internet"
          },
          "Count_Person_ResidingLessThan5MetersAboveSeaLevel_AsFractionOf_Count_Person": {
            "label": "Pourcentage de la population vivant dans des zones à moins de 5 mètres d'altitude"
          },
          "Count_Person_Rural": {
            "label": "Population rurale"
          },
          "Count_Person_Urban": {
            "label": "Population urbaine"
          }
        },
        "val": "Count_Person"
      },
      "options.per_capita": {
        "type": "checkbox",
        "label": "Par habitant",
        "show_if": "false",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.all_countries": {
        "type": "checkbox",
        "label": "Tous les pays",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.output_as_chart": {
        "type": "checkbox",
        "label": "Produire un graphique",
        "val": "true",
        "isOn": "true",
        "isOff": "false"
      },
      "options.graph_type": {
        "type": "select",
        "label": "Type de graphique",
        "show_if": "options.output_as_chart=='true'",
        "required": true,
        "options": {
          "zoomable_sunburst": {
            "label": "Sunburst"
          },
          "tidy_tree": {
            "label": "Arbre"
          },
          "treemap": {
            "label": "Treemap"
          }
        },
        "val": "zoomable_sunburst",
        "breakLine": true
      }
    }
  }
}