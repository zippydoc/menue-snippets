{
  "options": {
    "type": "fieldset",
    "label": "Sélectionner les options",
    "repeat": false,
    "fields": {
      "options.convert_type": {
        "type": "select",
        "label": "Convertir le type",
        "required": true,
        "options": {
          "complete_date": {
            "label": "Date complète"
          },
          "expand_date": {
            "label": "Étendre la date"
          },
          "convert_date": {
            "label": "Convertir la date"
          },
          "convert_date_range": {
            "label": "Conversion de l'intervalle de dates"
          }
        },
        "val": "complete_date"
      },
      "options.date_convert_type": {
        "type": "select",
        "label": "Convertir en",
        "show_if": "options.convert_type=='convert_date'",
        "required": true,
        "options": {
          "begin_of_month": {
            "label": "Début du mois"
          },
          "end_of_month": {
            "label": "Fin du mois"
          },
          "hy_year": {
            "label": "Année HY"
          },
          "qrt_year": {
            "label": "Tri année"
          },
          "month_year": {
            "label": "Mois année"
          },
          "week_year": {
            "label": "Semaine Année"
          }
        },
        "val": "begin_of_month"
      },
      "options.date_range_convert_type": {
        "type": "select",
        "label": "Convertir en",
        "show_if": "options.convert_type=='convert_date_range'",
        "required": true,
        "options": {
          "begin_of_month": {
            "label": "Début du mois"
          },
          "end_of_month": {
            "label": "Fin du mois"
          },
          "begin_of_range": {
            "label": "Début de l'intervalle"
          },
          "end_of_range": {
            "label": "Fin de l'intervalle"
          },
          "begin_of_quarter": {
            "label": "Début du trimestre"
          },
          "end_of_quarter": {
            "label": "Fin du trimestre"
          }
        },
        "val": "begin_of_month",
        "breakLine": true
      },
      "options.output_in_new_column": {
        "type": "checkbox",
        "label": "Sortir dans une nouvelle colonne",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "options.new_field_name": {
        "type": "text",
        "label": "Nouveau nom de colonne",
        "show_if": "options.output_in_new_column=='true'",
        "val": "GeneratedDate",
        "required": true,
        "minLength": 1,
        "maxLength": 255,
        "breakLine": true
      }
    }
  }
}