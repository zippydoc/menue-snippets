{
  "options": {
    "type": "fieldset",
    "label": "Sélectionner les options",
    "repeat": false,
    "fields": {
      "options.taskname": {
        "type": "hidden",
        "val": "direct_planning"
      },
      "options.type": {
        "type": "hidden",
        "val": "custom"
      },
      "options.custom.table": {
        "type": "fieldset",
        "label": "Poste de planification",
        "repeat": true,
        "fields": {
          "position": {
            "type": "select",
            "label": "Position",
            "options": {
              "Revenues": {
                "label": "Revenues"
              },
              "Cost of Goods Sold": {
                "label": "Cost of Goods Sold"
              },
              "Marketing Expenses": {
                "label": "Marketing Expenses"
              },
              "Operating Expenses": {
                "label": "Operating Expenses"
              },
              "General and Administration Expenses": {
                "label": "General and Administration Expenses"
              },
              "Personnel Expenses": {
                "label": "Personnel Expenses"
              },
              "Tax": {
                "label": "Tax"
              },
              "Capital Expenditure": {
                "label": "Capital Expenditure"
              },
              "Depreciation": {
                "label": "Depreciation"
              },
              "Amortization": {
                "label": "Amortization"
              },
              "Extraordinary Items": {
                "label": "Extraordinary Items"
              },
              "Depretiation & Amortisation": {
                "label": "Depretiation & Amortisation"
              }
            },
            "val": "Revenues",
            "required": true
          },
          "revenues__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Revenues'",
            "options": {
              "Sales": {
                "label": "Sales"
              },
              "Increase(+)/Decrease(-) Inventories": {
                "label": "Increase(+)/Decrease(-) Inventories"
              },
              "Other Revenues": {
                "label": "Other Revenues"
              }
            },
            "val": "Sales",
            "required": true
          },
          "cost_of_goods_sold__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Cost of Goods Sold'",
            "options": {
              "Material Costs": {
                "label": "Material Costs"
              },
              "Purchased Services": {
                "label": "Purchased Services"
              }
            },
            "val": "Material Costs",
            "required": true
          },
          "general_administration_expenses__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='General and Administration Expenses'",
            "options": {
              "Rental Expenses": {
                "label": "Rental Expenses"
              },
              "Cleaning": {
                "label": "Cleaning"
              },
              "Office Items": {
                "label": "Office Items"
              },
              "Consulting": {
                "label": "Consulting"
              },
              "Recruiting": {
                "label": "Recruiting"
              }
            },
            "val": "Rental Expenses",
            "required": true
          },
          "personnel_expenses__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Personnel Expenses'",
            "options": {
              "Fix Salary": {
                "label": "Fix Salary"
              },
              "Bonus": {
                "label": "Bonus"
              },
              "Other Compensation": {
                "label": "Other Compensation"
              }
            },
            "val": "Fix Salary",
            "required": true
          },
          "capital_expenditure__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Capital Expenditure'",
            "options": {
              "Maintenance Capex": {
                "label": "Maintenance Capex"
              },
              "Expansion Capex": {
                "label": "Expansion Capex"
              }
            },
            "val": "Maintenance Capex",
            "required": true
          },
          "extraordinary_items__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Extraordinary Items'",
            "options": {
              "Extraordinary Income": {
                "label": "Extraordinary Income"
              },
              "Extraordinary Expenses": {
                "label": "Extraordinary Expenses"
              }
            },
            "val": "Extraordinary Income",
            "required": true
          },
          "tax__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Tax'",
            "options": {
              "Value Added Tax": {
                "label": "Value Added Tax"
              },
              "Corporate Tax": {
                "label": "Corporate Tax"
              },
              "Trade Tax": {
                "label": "Trade Tax"
              }
            },
            "val": "Value Added Tax",
            "required": true
          },
          "interest__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Interest'",
            "options": {
              "Interest Income": {
                "label": "Interest Income"
              },
              "Interest Expenses": {
                "label": "Interest Expenses"
              }
            },
            "val": "Interest Income",
            "required": true
          },
          "depretiation_amortisation__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Depretiation & Amortisation'",
            "options": {
              "Depretiation": {
                "label": "Depretiation"
              },
              "Amortisation": {
                "label": "Amortisation"
              }
            },
            "val": "Depretiation",
            "required": true
          },
          "item": {
            "type": "text",
            "label": "élément",
            "val": ""
          },
          "amount": {
            "type": "number",
            "label": "Montant",
            "val": "",
            "required": true
          },
          "periodicy": {
            "type": "select",
            "label": "Périodicité",
            "required": true,
            "options": {
              "Non récurrent": {
                "label": "Non récurrent"
              },
              "Journalier": {
                "label": "Journalier"
              },
              "Hebdomadaire": {
                "label": "Hebdomadaire"
              },
              "Mensuel": {
                "label": "Mensuel"
              },
              "Trimestriel": {
                "label": "Trimestriel"
              },
              "Annuel": {
                "label": "Annuel"
              }
            },
            "val": "Annuel",
            "breakLine": true
          },
          "growth": {
            "type": "number",
            "label": "Growth in %",
            "show_if": "this.periodicy!='One-Off'",
            "val": "",
            "required": true
          },
          "growth_period": {
            "type": "select",
            "label": "Période de croissance",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Hebdomadaire": {
                "label": "Semaine sur semaine"
              },
              "Mensuel": {
                "label": "Mois à mois"
              },
              "Trimestriel": {
                "label": "Trimestre sur trimestre"
              },
              "Annuel": {
                "label": "Année sur année"
              }
            },
            "val": "Annuel"
          },
          "growth_pattern": {
            "type": "select",
            "label": "Modèle de croissance",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Compounding": {
                "label": "Compounding"
              },
              "Linéaire": {
                "label": "Linéaire"
              },
              "Jump-Fix": {
                "label": "Jump-Fix"
              }
            },
            "val": "Jump-Fix",
            "breakLine": true
          },
          "initial_date": {
            "type": "date",
            "label": "Date initiale",
            "val": "",
            "required": true
          },
          "final_date": {
            "type": "date",
            "label": "Date finale",
            "show_if": "this.periodicy!='One-Off'",
            "val": ""
          },
          "delete": {
            "type": "button",
            "label": "Supprimer",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.output_type": {
        "type": "select",
        "label": "Type de sortie",
        "required": true,
        "options": {
          "planning_table": {
            "label": "Planning Table"
          },
          "periodicy_table": {
            "label": "Periodicy Table"
          },
          "summary_table": {
            "label": "Summary Table"
          }
        },
        "val": "summary_table"
      },
      "options.summary_table__group_by": {
        "type": "select",
        "label": "Grouper par",
        "show_if": "options.output_type=='summary_table'",
        "multiple": true,
        "options": {
          "Année": {
            "label": "Année"
          },
          "Trimestre": {
            "label": "Trimestre"
          },
          "Mois": {
            "label": "Mois"
          },
          "Semaine": {
            "label": "Semaine"
          },
          "Day": {
            "label": "Day"
          },
          "Position": {
            "label": "Position"
          },
          "Sub Position": {
            "label": "Sub Position"
          },
          "élément": {
            "label": "élément"
          }
        },
        "val": ["Année", "Trimestre", "Mois", "Position"],
        "required": true,
        "breakLine": true
      },
      "options.set_plan_config": {
        "type": "checkbox",
        "label": "Planning Configuration",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "planning_configuration_frame": {
        "type": "fieldset",
        "label": "Planning Configuration",
        "show_if": "options.set_plan_config=='true'",
        "repeat": false,
        "fields": {
          "options.add_categories": {
            "type": "checkbox",
            "label": "Add Categories",
            "val": "false",
            "isOn": "true",
            "isOff": "false"
          },
          "options.categories": {
            "type": "fieldset",
            "label": "Add Categories",
            "show_if": "options.add_categories=='true'",
            "repeat": true,
            "fields": {
              "category": {
                "type": "text",
                "label": "Category",
                "val": "",
                "required": true
              },
              "value": {
                "type": "text",
                "label": "Valeur",
                "val": ""
              },
              "delete": {
                "type": "button",
                "label": "Supprimer",
                "function": "DELETE_ROW"
              }
            },
            "breakLine": true
          },
          "options.set_amount_column_formatting": {
            "type": "checkbox",
            "label": "Set Amount Column Formatting",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "style": "margin-top: 10px"
          },
          "formatting_frame": {
            "type": "fieldset",
            "label": "Formatage de la colonne des montants",
            "show_if": "options.set_amount_column_formatting=='true'",
            "repeat": false,
            "fields": {
              "options.amount.format__category": {
                "type": "select",
                "label": "Format du montant",
                "required": true,
                "options": {
                  "standard": {
                    "label": "Standard"
                  },
                  "number": {
                    "label": "Numéro"
                  },
                  "percentage": {
                    "label": "Pourcentage"
                  },
                  "text": {
                    "label": "Texte"
                  },
                  "date": {
                    "label": "Date"
                  },
                  "currency": {
                    "label": "Monnaie"
                  }
                },
                "val": "currency"
              },
              "options.amount.format__rounding": {
                "type": "select",
                "label": "Arrondi",
                "show_if": "options.amount.format__category=='number' || options.amount.format__category=='percentage' || options.amount.format__category=='currency'",
                "required": true,
                "options": {
                  "no_rounding": {
                    "label": "Pas d'arrondi"
                  },
                  "0": {
                    "label": "0 chiffre"
                  },
                  "1": {
                    "label": "1 chiffre"
                  },
                  "2": {
                    "label": "2 chiffres"
                  },
                  "3": {
                    "label": "3 chiffres"
                  },
                  "4": {
                    "label": "4 chiffres"
                  },
                  "5": {
                    "label": "5 chiffres"
                  },
                  "6": {
                    "label": "6 chiffres"
                  },
                  "7": {
                    "label": "7 chiffres"
                  },
                  "8": {
                    "label": "8 chiffres"
                  },
                  "9": {
                    "label": "9 chiffres"
                  }
                },
                "val": "2"
              },
              "options.amount.format__use_1000_separator": {
                "type": "checkbox",
                "label": "Utilisez le séparateur 1000 (.)",
                "show_if": "options.amount.format__category=='number' || options.amount.format__category=='percentage' || options.amount.format__category=='currency'",
                "val": "true",
                "isOn": "true",
                "isOff": "false"
              },
              "options.amount.format__currency_symbol": {
                "type": "select",
                "label": "Symbole",
                "show_if": "options.amount.format__category=='currency'",
                "required": true,
                "options": {
                  "dollar": {
                    "label": "$"
                  },
                  "euro": {
                    "label": "€"
                  },
                  "pound": {
                    "label": "£"
                  }
                },
                "val": "dollar"
              },
              "options.amount.format__date_format": {
                "type": "select",
                "label": "Type",
                "show_if": "options.amount.format__category=='date'",
                "required": true,
                "options": {
                  "mm/dd/yyyy": {
                    "label": "3/14/2012"
                  },
                  "D, M dd, Y": {
                    "label": "Mercredi 14 mars 2012"
                  },
                  "yyyy-mm-dd": {
                    "label": "2012-03-14"
                  }
                },
                "val": "mm/dd/yyyy",
                "breakLine": true
              }
            },
            "breakLine": true
          },
          "options.end_date": {
            "type": "date",
            "label": "Date de fin du tableau",
            "show_if": "options.type=='process' || options.type=='custom'",
            "val": "",
            "style": "width: 300px",
            "breakLine": true
          }
        }
      }
    }
  }
}