{
  "options": {
    "type": "fieldset",
    "label": "Sélectionner les options",
    "repeat": false,
    "fields": {
      "options.task_type": {
        "type": "select",
        "label": "Type de tâche",
        "required": true,
        "options": {
          "write_series": {
            "label": "Ecrire une série d'e-mails"
          },
          "write_email": {
            "label": "Ecrire un e-mail"
          },
          "read": {
            "label": "Lire les e-mails"
          }
        },
        "val": "write_email"
      },
      "input_table": {
        "type": "select",
        "label": "Sélectionner un tableau",
        "show_if": "options.task_type=='write_series'",
        "bind": "TABLES",
        "empty": "",
        "required": true
      },
      "info1": {
        "type": "text",
        "label": "",
        "show_if": "options.task_type=='write_series'",
        "val": "Table-Type: TO | CC | BCC | SUBJECT | BODY",
        "disabled": true,
        "style": "width: 100%"
      },
      "options.to": {
        "type": "text",
        "label": "A",
        "show_if": "options.task_type=='write_email'",
        "required": true,
        "val": "",
        "placeholder": "user1@domain.com; user2@domain.com;",
        "width": "100%"
      },
      "options.cc": {
        "type": "text",
        "label": "CC",
        "show_if": "options.task_type=='write_email'",
        "val": "",
        "placeholder": "ccuser1@domain.com; ccuser2@domain.com",
        "width": "100%"
      },
      "options.bcc": {
        "type": "text",
        "label": "BCC",
        "show_if": "options.task_type=='write_email'",
        "val": "",
        "placeholder": "bccuser1@domain.com; bccuser1@domain.com",
        "width": "100%"
      },
      "options.subject": {
        "type": "text",
        "label": "Sujet",
        "show_if": "options.task_type=='write_email'",
        "required": true,
        "val": "",
        "placeholder": "Sujet",
        "width": "100%"
      },
      "options.body": {
        "type": "textarea",
        "label": "Body",
        "show_if": "options.task_type=='write_email'",
        "val": "",
        "placeholder": "Texte",
        "md_no_resize": true,
        "rows": 3,
        "width": "100%"
      }
    }
  },
  "smtp_config_frame": {
    "type": "fieldset",
    "label": "Connexion SMTP",
    "show_if": "options.task_type=='write_series' || options.task_type=='write_email'",
    "repeat": false,
    "fields": {
      "options.smtp.type": {
        "type": "select",
        "label": "Sélectionner le serveur SMTP",
        "options": {
          "gmail": {
            "label": "Gmail"
          },
          "custom": {
            "label": "Personnalisé (bientôt)"
          }
        },
        "val": "gmail",
        "required": true,
        "breakLine": true
      },
      "gmail_warning": {
        "type": "text",
        "label": "",
        "show_if": "options.smtp.type=='gmail'",
        "val": "Turn 'Allow less secure apps' ON in https://myaccount.google.com/lesssecureapps",
        "width": "100%",
        "disabled": true
      },
      "options.gmail.user": {
        "type": "text",
        "label": "Utilisateur Gmail",
        "show_if": "options.smtp.type=='gmail'",
        "required": true,
        "placeholder": "sender@gmail.com"
      },
      "options.gmail.password": {
        "type": "password",
        "label": "Mot de passe Gmail",
        "show_if": "options.smtp.type=='gmail'",
        "required": true
      },
      "options.custom.host": {
        "type": "text",
        "label": "Hôte SMTP",
        "show_if": "options.smtp.type=='custom'",
        "required": true
      },
      "options.custom.port": {
        "type": "text",
        "label": "Port SMTP",
        "show_if": "options.smtp.type=='custom'",
        "required": true
      },
      "options.custom.user": {
        "type": "text",
        "label": "Utilisateur SMTP,
        "show_if": "options.smtp.type=='custom'",
        "required": true
      },
      "options.custom.password": {
        "type": "password",
        "label": "Mot de passe SMTP",
        "show_if": "options.smtp.type=='custom'",
        "required": true
      }
    }
  }
}