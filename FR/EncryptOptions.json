{
  "options": {
    "type": "fieldset", 
    "label": "Sélectionner les options", 
    "repeat": false, 
    "fields": {
      "task_type": {
        "type": "select", 
        "label": "Type de tâche", 
        "required": true, 
        "options": {
          "encrypt": {
            "label": "Crypter (sûr)"
          }, 
          "decrypt": {
            "label": "Décrypter (sûr)"
          }, 
          "encrypt_simple": {
            "label": "Crypter (simple)"
          }, 
          "decrypt_simple": {
            "label": "Décrypter (simple)"
          }, 
          "mask": {
            "label": "Masque"
          }
        }, 
        "val": "encrypt"
      }, 
      "mask_type": {
        "type": "select", 
        "label": "Type de masque", 
        "show_if": "task_type == 'mask'", 
        "required": true, 
        "options": {
          "trailing": {
            "label": "Derniers N caractères"
          }, 
          "leading": {
            "label": "Premiers N caractère"
          }, 
          "numbers": {
            "label": "Numéros"
          }, 
          "alphabets": {
            "label": "Caractère"
          }, 
          "regex": {
            "label": "Expression régulière"
          }
        }, 
        "val": "trailing"
      }, 
      "password": {
        "type": "password", 
        "label": "Mot de passe", 
        "show_if": "task_type != 'mask'", 
        "required": true, 
        "minLength": 1, 
        "maxLength": 31, 
        "val": ""
      }, 
      "varn": {
        "type": "number", 
        "label": "N", 
        "show_if": "task_type == 'mask' && (mask_type == 'trailing' || mask_type == 'leading')", 
        "required": true, 
        "val": "1"
      }, 
      "regexp": {
        "type": "text", 
        "label": "Expression", 
        "show_if": "task_type == 'mask' && (mask_type == 'regex')", 
        "required": true, 
        "val": "", 
        "placeholder": "[a-fA-F0-9]"
      }, 
      "replace": {
        "type": "text", 
        "label": "Chaîne de masque", 
        "show_if": "task_type == 'mask' && (mask_type == 'regex')", 
        "required": true, 
        "val": "*"
      }
    }
  }
}