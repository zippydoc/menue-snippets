{
  "options": {
    "type": "fieldset",
    "label": "Sélectionner les options",
    "repeat": false,
    "fields": {
      "options.to": {
        "type": "select",
        "label": "Type",
        "options": {
          "database": {
            "label": "Exportation vers la base de données"
          },
          "file": {
            "label": "Exporter vers le fichier"
          }
        },
        "val": "database",
        "required": true
      },
      "options.export_series": {
        "type": "checkbox",
        "label": "Exporter série",
        "show_if": "options.to=='file'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.file_name_column": {
        "type": "select",
        "label": "Sélectionner la colonne de nom du fichier",
        "show_if": "options.to=='file' && options.export_series=='true'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "postgresql_db_credential_box": {
        "type": "fieldset",
        "label": "Références de connexion à la base de données",
        "show_if": "options.to=='database'",
        "repeat": false,
        "fields": {
          "options.dbms": {
            "type": "select",
            "label": "Sélectionner un SGBD",
            "options": {
              "postgresql": {
                "label": "PostgreSQL"
              },
              "mysql": {
                "label": "MySQL"
              },
              "sql_server": {
                "label": "Serveur MS SQL"
              },
              "oracle": {
                "label": "Oracle"
              }
            },
            "val": "postgresql",
            "required": true,
            "breakLine": true
          },
          "options.postgresql_credential.user": {
            "type": "text",
            "label": "Utilisateur",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.postgresql_credential.password": {
            "type": "text",
            "label": "Mot de passe",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.postgresql_credential.host": {
            "type": "text",
            "label": "Hôte",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.postgresql_credential.database": {
            "type": "text",
            "label": "Base de données",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          }
        }
      },
      "options.schema_name_to_export": {
        "type": "text",
        "label": "Nom du schéma vers lequel exporter",
        "show_if": "options.to=='database' && options.dbms=='postgresql'",
        "required": true,
        "val": "public",
        "width": "100%",
        "breakLine": true
      },
      "options.webservice": {
        "type": "select",
        "label": "Sélectionner un service web",
        "show_if": "options.to=='file' || options.to=='mytask'",
        "options": {
          "github": {
            "label": "Github"
          },
          "dropbox": {
            "label": "Dropbox"
          },
          "ms_one_drive": {
            "label": " Microsoft OneDrive"
          },
          "google_drive": {
            "label": "Google Drive"
          }
        },
        "val": "github",
        "required": true
      },
      "options.export_format": {
        "type": "select",
        "label": "Format d'exportation",
        "show_if": "options.to=='file'",
        "options": {
          "csv_file": {
            "label": "Fichier(s) Csv"
          },
          "word_by_word": {
            "label": "Mot par mot"
          },
          "line_by_line": {
            "label": "Ligne par ligne"
          }
        },
        "val": "csv_file",
        "required": true,
        "breakLine": true
      },
      "options.github_create_pr": {
        "type": "checkbox",
        "label": "Créer une requête d'extraction",
        "show_if": "options.to=='file' && options.webservice=='github'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.github_url": {
        "type": "text",
        "label": "Insérer lien, p. ex. https://github.com/zippydoc/test",
        "show_if": "options.to=='file' && options.webservice=='github'",
        "val": "https://github.com/zippydoc/public-tables",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.export_dir": {
        "type": "text",
        "label": "Entrez le répertoire, par exemple /MyZippyDocFiles/SubDir/",
        "show_if": "options.to=='file' && options.webservice!='github'",
        "val": "/",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.github_token": {
        "type": "text",
        "label": "Spécifiez le jeton d'accès personnel Github qui a le droit d'écriture :",
        "show_if": "options.to=='file' && options.webservice=='github'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.ms_one_drive_token": {
        "type": "text",
        "label": "Code d'accès à l'API Microsoft Graph. Vous pouvez l'obtenir ici https://ms-oauth.herokuapp.com/",
        "show_if": "options.to=='file' && options.webservice=='ms_one_drive'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.google_authorization_code": {
        "type": "text",
        "label": "Code d'autorisation Google OAuth avec la portée https://www.googleapis.com/auth/drive. Vous pouvez l'obtenir ici https://developers.google.com/oauthplayground/",
        "show_if": "options.to=='file' && options.webservice=='google_drive'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.dropbox_authorization_code": {
        "type": "text",
        "label": "Dropbox Authorization Code. You can get it here https://www.dropbox.com/oauth2/authorize?client_id=9i7woztjp94jrkw&response_type=code",
        "show_if": "options.to=='file' && options.webservice=='dropbox'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.if_duplicated": {
        "type": "select",
        "label": "Si duplicata",
        "show_if": "options.to=='database' || (options.to=='file' && options.webservice=='github')",
        "val": "drop_if_exist",
        "options": {
          "drop_if_exist": {
            "label": "Créer ou supprimer (si déjà existant)"
          },
          "error_if_exist": {
            "label": "Créer (erreur si déjà existant)"
          },
          "error_if_not_exist": {
            "label": "Ignorer (erreur si non-existant)"
          },
          "append": {
            "label": "Annexer"
          }
        }
      },
      "options.export_task_name": {
        "type": "text",
        "label": "Nom de la tâche d'entrée",
        "show_if": "options.to=='mytask'",
        "required": true,
        "val": "Flow6_Task1_AddColumns",
        "width": "100%",
        "breakLine": true
      }
    }
  }
}