{
  "options": {
    "type": "fieldset",
    "label": "Sélectionner les options",
    "repeat": false,
    "fields": {
      "options.to": {
        "type": "hidden",
        "val": "database"
      },
      "postgresql_db_credential_box": {
        "type": "fieldset",
        "label": "Références de connexion à la base de données",
        "repeat": false,
        "fields": {
          "options.dbms": {
            "type": "select",
            "label": "Sélectionner un SGBD",
            "options": {
              "postgresql": {
                "label": "PostgreSQL"
              },
              "mysql": {
                "label": "MySQL"
              },
              "sql_server": {
                "label": "Serveur MS SQL"
              },
              "oracle": {
                "label": "Oracle"
              }
            },
            "val": "postgresql",
            "required": true,
            "breakLine": true
          },
          "options.host": {
            "type": "text",
            "label": "Hôte",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.user": {
            "type": "text",
            "label": "Utilisateur",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.password": {
            "type": "password",
            "label": "Mot de passe",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.database": {
            "type": "text",
            "label": "Base de données",
            "required": true,
            "width": "100%",
            "breakLine": true
          }
        }
      },
      "options.schema_name_to_export": {
        "type": "text",
        "label": "Nom du schéma vers lequel exporter",
        "show_if": "options.dbms=='postgresql' || options.dbms=='sql_server' || options.dbms=='oracle'",
        "required": true,
        "val": "public",
        "width": "100%",
        "breakLine": true
      },
      "options.if_duplicated": {
        "type": "select",
        "label": "Si duplicata",
        "val": "drop_if_exist",
        "options": {
          "drop_if_exist": {
            "label": "Créer ou supprimer (si déjà existant)"
          },
          "error_if_exist": {
            "label": "Créer (erreur si déjà existant)"
          },
          "error_if_not_exist": {
            "label": "Ignorer (erreur si non-existant)"
          },
          "append": {
            "label": "Annexer"
          }
        },
        "breakLine": true
      },
      "output.output_as_new_table": {
        "type": "hidden",
        "val": "true"
      }
    }
  }
}