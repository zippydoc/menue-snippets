{
  "options": {
    "type": "fieldset",
    "label": "Sélectionner les options",
    "repeat": false,
    "fields": {
      "options.to": {
        "type": "hidden",
        "val": "file"
      },
      "options.webservice": {
        "type": "hidden",
        "val": "dropbox"
      },
      "options.export_format": {
        "type": "select",
        "label": "Format d'exportation",
        "options": {
          "csv_file": {
            "label": "Fichier(s) Csv"
          },
          "word_by_word": {
            "label": "Mot par mot"
          },
          "line_by_line": {
            "label": "Ligne par ligne"
          }
        },
        "val": "csv_file",
        "required": true,
        "breakLine": true
      },
      "options.if_duplicated": {
        "type": "select",
        "label": "Si existant",
        "show_if": "options.webservice=='github'",
        "val": "drop_if_exist",
        "options": {
          "drop_if_exist": {
            "label": "Créer ou supprimer (si déjà existant)"
          },
          "error_if_exist": {
            "label": "Créer (erreur si déjà existant)"
          },
          "error_if_not_exist": {
            "label": "Ignorer (erreur si non-existant)"
          },
          "append": {
            "label": "Annexer"
          }
        },
        "breakLine": true
      },
      "options.export_series": {
        "type": "checkbox",
        "label": "Exporter série",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.file_name_column": {
        "type": "select",
        "label": "Sélectionner la colonne de nom du fichier",
        "show_if": "options.export_series=='true'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.set_file_path_column": {
        "type": "checkbox",
        "label": "Exporter vers un chemin spécifié",
        "show_if": "options.export_series=='true'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.file_path_column": {
        "type": "select",
        "label": "Colonne de sélection du chemin d'accès au fichier",
        "show_if": "options.export_series=='true' && options.set_file_path_column=='true'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      }
    }
  },
  "export_link_token_frame": {
    "type": "fieldset",
    "label": "Exporter le lien",
    "repeat": false,
    "fields": {
      "options.github_url": {
        "type": "text",
        "label": "Insérer lien, p. ex. https://github.com/zippydoc/test",
        "show_if": "options.webservice=='github'",
        "val": "",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.export_dir": {
        "type": "text",
        "label": "Entrez le répertoire, par exemple /MyZippyDocFiles/SubDir/",
        "show_if": "options.webservice!='github'",
        "val": "/",
        "width": "100%",
        "breakLine": true
      },
      "options.github_token": {
        "type": "text",
        "label": "Spécifiez le jeton d'accès personnel Github qui a le droit d'écriture :",
        "show_if": "options.webservice=='github'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.github_create_pr": {
        "type": "checkbox",
        "label": "Créer une requête d'extraction",
        "show_if": "options.webservice=='github'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.ms_one_drive_token": {
        "type": "text",
        "label": "Code d'accès à l'API Microsoft Graph. Vous pouvez l'obtenir ici https://ms-oauth.herokuapp.com/",
        "show_if": "options.webservice=='ms_one_drive'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.google_authorization_code": {
        "type": "text",
        "label": "Code d'autorisation Google OAuth avec la portée https://www.googleapis.com/auth/drive. Vous pouvez l'obtenir ici https://developers.google.com/oauthplayground/",
        "show_if": "options.webservice=='google_drive'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.dropbox_authorization_code": {
        "type": "text",
        "label": "Dropbox Authorization Code. You can get it here https://www.dropbox.com/oauth2/authorize?client_id=9i7woztjp94jrkw&response_type=code",
        "show_if": "options.webservice=='dropbox'",
        "required": true,
        "width": "100%",
        "breakLine": true
      }
    }
  }
}