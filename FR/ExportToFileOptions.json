{
  "options": {
    "type": "fieldset",
    "label": "Sélectionner les options",
    "repeat": false,
    "fields": {
      "options.to": {
        "type": "hidden",
        "val": "file"
      },
      "options.export_series": {
        "type": "checkbox",
        "label": "Exporter série",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.file_name_column": {
        "type": "select",
        "label": "Sélectionner la colonne de nom du fichier",
        "show_if": "options.export_series==''true''",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.set_file_path_column": {
        "type": "checkbox",
        "label": "Export to specified path",
        "show_if": "options.export_series==''true''",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.file_path_column": {
        "type": "select",
        "label": "Select File Path Column",
        "show_if": "options.export_series==''true'' && options.set_file_path_column==''true''",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.webservice": {
        "type": "select",
        "label": "Sélectionner un service web",
        "options": {
          "github": {
            "label": "Github"
          },
          "dropbox": {
            "label": "Dropbox"
          },
          "ms_one_drive": {
            "label": " Microsoft OneDrive"
          },
          "google_drive": {
            "label": "Google Drive"
          }
        },
        "val": "github",
        "required": true
      },
      "options.export_format": {
        "type": "select",
        "label": "Format d'exportation",
        "options": {
          "csv_file": {
            "label": "Fichier(s) Csv"
          },
          "word_by_word": {
            "label": "Mot par mot"
          },
          "line_by_line": {
            "label": "Ligne par ligne"
          }
        },
        "val": "csv_file",
        "required": true,
        "breakLine": true
      },
      "options.github_create_pr": {
        "type": "checkbox",
        "label": "Créer une requête d'extraction",
        "show_if": "options.webservice==''github''",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.github_token": {
        "type": "text",
        "label": "Specify the Github personal access token that has write permission:",
        "show_if": "options.webservice==''github''",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.github_url": {
        "type": "text",
        "label": "Insérer lien, p. ex. https://github.com/zippydoc/test",
        "show_if": "options.webservice==''github''",
        "val": "https://github.com/zippydoc/public-tables",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.ms_one_drive_token": {
        "type": "text",
        "label": "Microsoft Graph API access token. You can get it here https://ms-oauth.herokuapp.com/",
        "show_if": "options.webservice==''ms_one_drive''",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.google_authorization_code": {
        "type": "text",
        "label": "Google OAuth Authorization Code with scope https://www.googleapis.com/auth/drive. You can get it here https://developers.google.com/oauthplayground/",
        "show_if": "options.webservice==''google_drive''",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.dropbox_authorization_code": {
        "type": "text",
        "label": "Dropbox Authorization Code. You can get it here https://www.dropbox.com/oauth2/authorize?client_id=9i7woztjp94jrkw&response_type=code",
        "show_if": "options.webservice==''dropbox''",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.if_duplicated": {
        "type": "select",
        "label": "Si duplicata",
        "show_if": "options.webservice==''github''",
        "val": "drop_if_exist",
        "options": {
          "drop_if_exist": {
            "label": "Créer ou supprimer (si déjà existant)"
          },
          "error_if_exist": {
            "label": "Créer (erreur si déjà existant)"
          },
          "error_if_not_exist": {
            "label": "Ignorer (erreur si non-existant)"
          },
          "append": {
            "label": "Joindre"
          }
        }
      }
    }
  }
}