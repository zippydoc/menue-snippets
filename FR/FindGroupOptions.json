{
  "options": {
    "type": "fieldset",
    "label": "Trouver des options de groupe",
    "repeat": false,
    "fields": {
      "group_column": {
        "type": "select",
        "label": "Select Group Column",
        "required": true,
        "table": "table_id",
        "bind": "COLUMNS",
        "multiple": false
      },
      "item_column": {
        "type": "select",
        "label": "Select Item Column",
        "required": true,
        "table": "table_id",
        "bind": "COLUMNS",
        "multiple": false,
        "breakLine": true
      },
      "min_group_count": {
        "type": "number",
        "label": "Nombre minimal de groupes",
        "required": true,
        "val": "3"
      },
      "min_group_size": {
        "type": "number",
        "label": "Taille minimale du groupe",
        "required": true,
        "val": "1",
        "breakLine": true
      },
      "ordered": {
        "type": "select",
        "label": "Ordonné / Non ordonné",
        "required": true,
        "options": {
          "ordered": {
            "label": "Commandé"
          },
          "unordered": {
            "label": "Non ordonné"
          }
        },
        "val": "unordered"
      },
      "item_order": {
        "type": "select",
        "label": "Commander",
        "required": true,
        "options": {
          "no": {
            "label": "-"
          },
          "ascending": {
            "label": "Ascendant"
          },
          "descending": {
            "label": "Descendant"
          }
        },
        "val": "no",
        "breakLine": true,
        "show_if": "ordered == 'unordered'"
      },
      "output_type": {
        "type": "select",
        "label": "Type de sortie",
        "required": true,
        "options": {
          "item_group_list": {
            "label": "Liste des groupes trouvés"
          },
          "item_group_column": {
            "label": "Attribuer les groupes trouvés"
          }
        },
        "val": "item_group_list"
      }
    }
  }
}