{
  "options": {
    "type": "fieldset",
    "label": "Sélectionner les options de recherche",
    "repeat": false,
    "fields": {
      "add_column": {
        "type": "text",
        "label": "Nom de la colonne pour le statut de la correspondance",
        "val": "Match",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "use_custom_delimiter": {
        "type": "checkbox",
        "label": "Délimiteur personnalisé pour les correspondances multiples",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "custom_delimiter": {
        "type": "text",
        "label": "Délimiteur personnalisé",
        "show_if": "use_custom_delimiter=='true'",
        "val": ";",
        "required": true
      },
      "do_not_duplicate": {
        "type": "checkbox",
        "label": "Ne pas dupliquer les mêmes correspondances",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "filter_box": {
        "type": "fieldset",
        "label": "Options de filtrage",
        "repeat": false,
        "fields": {
          "filter": {
            "type": "fieldset",
            "label": "Sélectionner les conditions pour la correspondance",
            "repeat": true,
            "fields": {
              "initial_op": {
                "type": "select",
                "label": "Sélectionner l'opérateur logique",
                "required": true,
                "show_if" :  "$index == 0",
                "options": {
                  "if": {
                    "label": "SI"
                  },
                  "if_not": {
                    "label": "SINON"
                  }
                },
                "val": "if"
              },
              "op": {
                "type": "select",
                "label": "Sélectionner l'opérateur logique",
                "show_if" :  "$index > 0",
                "options": {
                  "and": {
                    "label": "ET"
                  },
                  "or": {
                    "label": "OU"
                  },
                  "and_not": {
                    "label": "ET NON"
                  },
                  "or_not": {
                    "label": "OU NON"
                  }
                },
                "val": "and"
              },
              "column": {
                "type": "select",
                "label": "Sélectionner une colonne",
                "table": "input_table",
                "bind": "COLUMNS",
                "required": true
              },
              "condition": {
                "type": "select",
                "label": "Sélectionner un opérateur",
                "required": true,
                "options": {
                  "CONTIENT": {
                    "label": "CONTIENT"
                  },
                  "CONTAINED IN STRING": {
                    "label": "CONTENU DANS"
                  },
                  "COMMENCE AVEC": {
                    "label": "COMMENCE AVEC"
                  },
                  "SE TERMINE PAR": {
                    "label": "SE TERMINE PAR"
                  },
                  "=": {
                    "label": "ÉGAL"
                  },
                  ">": {
                    "label": "SUPÉRIEUR À"
                  },
                  ">=": {
                    "label": "SUPÉRIEUR OU ÉGAL"
                  },
                  "<": {
                    "label": "INFÉRIEUR À"
                  },
                  "<=": {
                    "label": "INFÉRIEUR OU ÉGAL"
                  },
                  "EMPTY": {
                    "label": "EST VIDE"
                  },
                  "BLANK": {
                    "label": "EST BLANC"
                  },
                  "EST NUL": {
                    "label": "EST NUL"
                  },
                  "CORRESPONDANCE EXPRESSION RÉGULIÈRE": {
                    "label": "CORRESPONDANCE EXPRESSION RÉGULIÈRE"
                  },
                  "CONTAINED IN TABLE": {
                    "label": "EN TABLE"
                  },
                  "DANS LE TABLEAU D'EXPRESSIONS RÉGULIÈRES": {
                    "label": "DANS LE TABLEAU D'EXPRESSIONS RÉGULIÈRES"
                  },
                  "DATE": {
                    "label": "DATE"
                  }
                },
                "val": "CONTIENT"
              },
              "date_condition": {
                "type": "select",
                "label": "Sélectionner l'opérateur de date",
                "required": true,
                "show_if": "this.condition == 'DATE'",
                "options": {
                  "<": {
                    "label": "AVANT"
                  },
                  "<=": {
                    "label": "AVANT OU ÉGAL"
                  },
                  "=": {
                    "label": "ÉGAL"
                  },
                  ">": {
                    "label": "APRÈS"
                  },
                  ">=": {
                    "label": "APRÈS OU ÉGAL"
                  }
                },
                "val": "="
              },
              "case_sensitive": {
                "type": "select",
                "label": "Sélectionner la sensibilité à la casse",
                "required": true,
                "show_if": "this.condition == 'CONTAINS' || this.condition == 'CONTAINED IN STRING' || this.condition == '=' || this.condition == 'STARTS WITH' || this.condition == 'ENDS WITH' || this.condition == 'REGEX MATCH' || this.condition == 'NOT REGEX MATCH' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "options": {
                  "yes": {
                    "label": "Respecter la casse"
                  },
                  "no": {
                    "label": "Ignorer la casse"
                  }
                },
                "val": "yes"
              },
              "date_value": {
                "type": "date",
                "label": "Sélectionner une date",
                "show_if": "this.condition=='DATE'",
                "val": "",
                "required": true
              },
              "value": {
                "type": "text",
                "label": "Valeur d'entrée",
                "show_if": "this.condition != 'DATE' && this.condition != 'EMPTY' && this.condition != 'NOT EMPTY' && this.condition != 'IS NULL' && this.condition != 'BLANK' && this.condition != 'NOT BLANK' && this.condition != 'IS NOT NULL' && this.condition != 'CONTAINED IN TABLE' && this.condition != 'NOT CONTAINED IN TABLE' && this.condition != 'IN REGEX TABLE' && this.condition != 'NOT IN REGEX TABLE'",
                "val": "",
                "required": true
              },
              "compare_table": {
                "type": "select",
                "label": "Sélectionner un tableau",
                "bind": "TABLES",
                "empty": "",
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "required": true
              },
              "compare_column": {
                "type": "select",
                "label": "Sélectionner une colonne",
                "table": "this.compare_table",
                "bind": "COLUMNS",
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "required": true
              },
              "delete": {
                "type": "button",
                "label": "Supprimer",
                "function": "DELETE_ROW"
              }
            }
          },
          "apply_to_record": {
            "type": "checkbox",
            "label": "Appliquer au registre",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "style": "margin-top: 10px",
            "breakLine": true
          },
          "apply_to_group_box": {
            "type": "fieldset",
            "label": "Appliquer au groupe",
            "show_if": "apply_to_record=='false'",
            "repeat": false,
            "fields": {
              "apply_to_group_columns": {
                "type": "select",
                "label": "Sélectionner les colonnes du groupe",
                "required": true,
                "width": "100%",
                "table": "input_table",
                "multiple": true,
                "bind": "COLUMNS",
                "breakLine": true
              }
            }
          }
        }
      }
    }
  }
}