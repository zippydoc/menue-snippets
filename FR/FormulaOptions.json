{
  "options_box": {
    "type": "fieldset",
    "Étiquette": "Sélectionner les options",
    "repeat": false,
    "fields": {
      "options.column": {
        "type": "select",
        "Étiquette": "Colonne à appliquer",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true
      },
      "options.column_value_type": {
        "type": "select",
        "Étiquette": "Type",
        "required": true,
        "options": {
          "static_value": {
            "Étiquette": "Valeur statique"
          },
          "numeric_formula": {
            "Étiquette": "Formule numérique"
          },
          "text_formula": {
            "Étiquette": "Formule du texte"
          },
          "inc_dec_percent": {
            "Étiquette": "Augmentation / Diminution (%)"
          },
          "inc_dec_abs": {
            "Étiquette": "Augmentation / Diminution (absolu)"
          }
        },
        "val": "static_value"
      },
      "options.inc_or_dec": {
        "type": "select",
        "Étiquette": "Type d'augmentation",
        "show_if": "options.column_value_type=='inc_dec_percent' || options.column_value_type=='inc_dec_abs'",
        "required": true,
        "options": {
          "increase": {
            "Étiquette": "Augmentation"
          },
          "decrease": {
            "Étiquette": "Diminution"
          }
        },
        "val": "increase"
      },
      "options.inc_or_dec_val": {
        "type": "text",
        "Étiquette": "Valeur d'entrée",
        "show_if": "options.column_value_type=='inc_dec_percent' || options.column_value_type=='inc_dec_abs'",
        "val": "1",
        "breakLine": true
      },
      "options.static_value": {
        "type": "text",
        "Étiquette": "Valeur d'entrée",
        "show_if": "options.column_value_type=='static_value'",
        "val": "",
        "width": "100%"
      },
      "options.numeric_formula": {
        "type": "text",
        "Étiquette": "Formule d'entrée, par exemple [Column1] + 2 * ([Row-1:Column3] - [Column1])",
        "show_if": "options.column_value_type=='numeric_formula'",
        "val": "",
        "width": "100%"
      },
      "options.text_formula": {
        "type": "text",
        "Étiquette": "Formule d'entrée, par exemple [firstName] + ' ' + [lastName] + ' ' + [Row-1:Column3]".,
        "show_if": "options.column_value_type=='text_formula'",
        "val": "",
        "width": "100%"
      },
      "options.use_multi_row": {
        "type": "checkbox",
        "Étiquette": "Options à plusieurs rangées",
        "show_if": "options.column_value_type=='numeric_formula' || options.column_value_type=='text_formula'",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "options.if_row_not_exist": {
        "type": "select",
        "Étiquette": "Si ligne désignée inexistante",
        "show_if": "(options.column_value_type=='numeric_formula' || options.column_value_type=='text_formula') && options.use_multi_row=='true'",
        "required": true,
        "options": {
          "empty": {
            "Étiquette": "Vide ou 0"
          },
          "closest": {
            "Étiquette": "Valeur de la ligne la plus proche"
          }
        },
        "val": "empty",
        "breakLine": true
      },
      "options.use_filter": {
        "type": "checkbox",
        "Étiquette": "Utiliser un filtre",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "filter_box": {
        "type": "fieldset",
        "Étiquette": "Options de filtrage",
        "show_if": "options.use_filter=='true'",
        "repeat": false,
        "fields": {
          "options.filter": {
            "type": "fieldset",
            "Étiquette": "Ajouter des filtres",
            "show_if": "options.use_filter=='true'",
            "repeat": true,
            "fields": {
              "initial_op": {
                "type": "select",
                "Étiquette": "Sélectionner l'opérateur logique",
                "required": true,
                "show_if" :  "$index == 0",
                "options": {
                  "if": {
                    "Étiquette": "SI"
                  },
                  "if_not": {
                    "Étiquette": "SINON"
                  }
                },
                "val": "if"
              },
              "op": {
                "type": "select",
                "Étiquette": "Sélectionner l'opérateur logique",
                "required": true,
                "show_if" :  "$index > 0",
                "options": {
                  "and": {
                    "Étiquette": "ET"
                  },
                  "or": {
                    "Étiquette": "OU"
                  },
                  "and_not": {
                    "Étiquette": "ET NON"
                  },
                  "or_not": {
                    "Étiquette": "OU NON"
                  }
                },
                "val": "and"
              },
              "column": {
                "type": "select",
                "Étiquette": "Sélectionner une colonne",
                "table": "input_table",
                "bind": "COLUMNS",
                "required": true
              },
              "condition": {
                "type": "select",
                "Étiquette": "Sélectionner un opérateur",
                "required": true,
                "options": {
                  "CONTIENT": {
                    "Étiquette": "CONTIENT"
                  },
                  "CONTAINED IN STRING": {
                    "Étiquette": "CONTENU DANS"
                  },
                  "COMMENCE AVEC": {
                    "Étiquette": "COMMENCE AVEC"
                  },
                  "SE TERMINE PAR": {
                    "Étiquette": "SE TERMINE PAR"
                  },
                  "=": {
                    "Étiquette": "ÉGAL"
                  },
                  ">": {
                    "Étiquette": "SUPÉRIEUR À"
                  },
                  ">=": {
                    "Étiquette": "SUPÉRIEUR OU ÉGAL"
                  },
                  "<": {
                    "Étiquette": "INFÉRIEUR À"
                  },
                  "<=": {
                    "Étiquette": "INFÉRIEUR OU ÉGAL"
                  },
                  "EMPTY": {
                    "Étiquette": "EST VIDE"
                  },
                  "BLANK": {
                    "Étiquette": "EST BLANC"
                  },
                  "EST NUL": {
                    "Étiquette": "EST NUL"
                  },
                  "CORRESPONDANCE EXPRESSION RÉGULIÈRE": {
                    "Étiquette": "CORRESPONDANCE EXPRESSION RÉGULIÈRE"
                  },
                  "CONTAINED IN TABLE": {
                    "Étiquette": "EN TABLE"
                  },
                  "DANS LE TABLEAU D'EXPRESSIONS RÉGULIÈRES": {
                    "Étiquette": "DANS LE TABLEAU D'EXPRESSIONS RÉGULIÈRES"
                  },
                  "DATE": {
                    "Étiquette": "DATE"
                  }
                },
                "val": "CONTIENT"
              },
              "date_condition": {
                "type": "select",
                "Étiquette": "Sélectionner l'opérateur de date",
                "required": true,
                "show_if": "this.condition == 'DATE'",
                "options": {
                  "<": {
                    "Étiquette": "AVANT"
                  },
                  "<=": {
                    "Étiquette": "AVANT OU ÉGAL"
                  },
                  "=": {
                    "Étiquette": "ÉGAL"
                  },
                  ">": {
                    "Étiquette": "APRÈS"
                  },
                  ">=": {
                    "Étiquette": "APRÈS OU ÉGAL"
                  }
                },
                "val": "="
              },
              "case_sensitive": {
                "type": "select",
                "Étiquette": "Sélectionner la sensibilité à la casse",
                "required": true,
                "show_if": "this.condition == 'CONTAINS' || this.condition == 'CONTAINED IN STRING' || this.condition == '=' || this.condition == 'STARTS WITH' || this.condition == 'ENDS WITH' || this.condition == 'REGEX MATCH' || this.condition == 'NOT REGEX MATCH' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "options": {
                  "yes": {
                    "Étiquette": "Respecter la casse"
                  },
                  "no": {
                    "Étiquette": "Ignorer la casse"
                  }
                },
                "val": "yes"
              },
              "date_value": {
                "type": "date",
                "Étiquette": "Sélectionner une date",
                "show_if": "this.condition=='DATE'",
                "val": "1/31/2020",
                "required": true
              },
              "value": {
                "type": "text",
                "Étiquette": "Valeur d'entrée",
                "show_if": "this.condition != 'DATE' && this.condition != 'EMPTY' && this.condition != 'NOT EMPTY' && this.condition != 'BLANK' && this.condition != 'NOT BLANK' && this.condition != 'IS NULL' && this.condition != 'IS NOT NULL' && this.condition != 'CONTAINED IN TABLE' && this.condition != 'NOT CONTAINED IN TABLE' && this.condition != 'IN REGEX TABLE' && this.condition != 'NOT IN REGEX TABLE'",
                "val": "",
                "required": true
              },
              "compare_table": {
                "type": "select",
                "Étiquette": "Sélectionner un tableau",
                "bind": "TABLES",
                "empty": "",
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "required": true
              },
              "compare_column": {
                "type": "select",
                "Étiquette": "Sélectionner une colonne",
                "table": "this.compare_table",
                "bind": "COLUMNS",
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "required": true
              },
              "delete": {
                "type": "button",
                "Étiquette": "Supprimer",
                "function": "DELETE_ROW"
              }
            }
          },
          "options.apply_to_record": {
            "type": "checkbox",
            "Étiquette": "Appliquer au registre",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "style": "margin-top: 10px",
            "breakLine": true
          },
          "apply_to_group_box": {
            "type": "fieldset",
            "Étiquette": "Appliquer au groupe",
            "show_if": "options.apply_to_record=='false'",
            "repeat": false,
            "fields": {
              "options.apply_to_group_columns": {
                "type": "select",
                "Étiquette": "Sélectionner les colonnes du groupe",
                "required": true,
                "width": "100%",
                "table": "input_table",
                "multiple": true,
                "bind": "COLUMNS",
                "breakLine": true
              }
            }
          }
        }
      }
    }
  }
}