{
  "options": {
    "type": "fieldset",
    "Étiquette": "Sélectionner les options d'adhésion",
    "repeat": false,
    "fields": {
      "join_type": {
        "type": "radio",
        "Étiquette": "Rejoindre par",
        "val": "join_by_specific_field",
        "values": {
          "join_by_specific_field": "Specific Field",
          "join_by_record_position": "Record Position"
        },
        "breakLine": true
      },
      "join_fields": {
        "type": "fieldset",
        "Étiquette": "Rejoindre par colonnes",
        "show_if": "join_type=='join_by_specific_field'",
        "repeat": true,
        "fields": {
          "left_table_field": {
            "type": "select",
            "Étiquette": "Colonne de gauche du tableau",
            "table": "left_table.table_id",
            "bind": "COLUMNS"
          },
          "right_table_field": {
            "type": "select",
            "Étiquette": "Colonne du tableau de droite",
            "table": "right_table.table_id",
            "bind": "COLUMNS"
          },
          "delete": {
            "type": "button",
            "Étiquette": "Supprimer",
            "function": "DELETE_ROW"
          }
        }
      }
    }
  }
}