{
  "options_box": {
    "type": "fieldset",
    "label": "Options",
    "repeat": false,
    "fields": {
      "options.task": {
        "type": "hidden",
        "val": "multi_row"
      },
      "options.add_columns": {
        "type": "fieldset",
        "label": "Ajouter des colonnes",
        "repeat": true,
        "fields": {
          "new_column_name": {
            "type": "text",
            "label": "Nouveau nom de colonne",
            "val": "",
            "breakLine": true
          },
          "multi_row_functions__function": {
            "type": "select",
            "label": "Fonction",
            "required": true,
            "options": {
              "trailing_row_n_average": {
                "label": "Moyenne de rangée N mobile"
              },
              "index_from_row_n": {
                "label": "Indice depuis ligne N"
              },
              "absolute_growth": {
                "label": "Croissance absolue"
              },
              "relative_growth": {
                "label": "Croissance relative"
              },
              "compound_growth": {
                "label": "Croissance composée"
              }
            },
            "val": "trailing_row_n_average"
          },
          "multi_row_functions__sel_column": {
            "type": "select",
            "label": "Colonne",
            "show_if": "this.multi_row_functions__function=='trailing_row_n_average' || this.multi_row_functions__function=='index_from_row_n' || this.multi_row_functions__function=='absolute_growth' || this.multi_row_functions__function=='relative_growth' || this.multi_row_functions__function=='compound_growth'",
            "table": "input_table",
            "bind": "COLUMNS",
            "required": true
          },
          "multi_row_functions__n_value": {
            "type": "text",
            "label": "N (nombre entier positif)",
            "show_if": "this.multi_row_functions__function=='trailing_row_n_average' || this.multi_row_functions__function=='index_from_row_n' || this.multi_row_functions__function=='compound_growth'",
            "val": "1",
            "required": true,
            "breakLine": true
          },
          "format__category": {
            "type": "select",
            "label": "Format",
            "required": true,
            "options": {
              "standard": {
                "label": "Standard"
              },
              "number": {
                "label": "Numéro"
              },
              "percentage": {
                "label": "Pourcentage"
              },
              "text": {
                "label": "Texte"
              },
              "date": {
                "label": "Date"
              },
              "currency": {
                "label": "Monnaie"
              }
            },
            "val": "standard"
          },
          "format__rounding": {
            "type": "select",
            "label": "Arrondi",
            "show_if": "this.format__category=='number' || this.format__category=='percentage' || this.format__category=='currency'",
            "required": true,
            "options": {
              "no_rounding": {
                "label": "Pas d'arrondi"
              },
              "0": {
                "label": "0 chiffre"
              },
              "1": {
                "label": "1 chiffre"
              },
              "2": {
                "label": "2 chiffres"
              },
              "3": {
                "label": "3 chiffres"
              },
              "4": {
                "label": "4 chiffres"
              },
              "5": {
                "label": "5 chiffres"
              },
              "6": {
                "label": "6 chiffres"
              },
              "7": {
                "label": "7 chiffres"
              },
              "8": {
                "label": "8 chiffres"
              },
              "9": {
                "label": "9 chiffres"
              }
            },
            "val": "2"
          },
          "format__use_1000_separator": {
            "type": "checkbox",
            "label": "Use 1000 Separator(.)",
            "show_if": "this.format__category=='number' || this.format__category=='percentage' || this.format__category=='currency'",
            "val": "true",
            "isOn": "true",
            "isOff": "false"
          },
          "format__currency_symbol": {
            "type": "select",
            "label": "Symbole",
            "show_if": "this.format__category=='currency'",
            "required": true,
            "options": {
              "dollar": {
                "label": "$"
              },
              "euro": {
                "label": "€"
              },
              "pound": {
                "label": "£"
              }
            },
            "val": "dollar"
          },
          "format__date_format": {
            "type": "select",
            "label": "Type",
            "show_if": "this.format__category=='date'",
            "required": true,
            "options": {
              "mm/dd/yyyy": {
                "label": "3/14/2012"
              },
              "D, M dd, Y": {
                "label": "Mercredi 14 mars 2012"
              },
              "yyyy-mm-dd": {
                "label": "2012-03-14"
              }
            },
            "val": "mm/dd/yyyy",
            "breakLine": true
          },
          "apply_to_group__enabled": {
            "type": "checkbox",
            "label": "Appliquer au groupe",
            "show_if": "this.task_type!='static_value'",
            "val": "false",
            "isOn": "true",
            "isOff": "false"
          },
          "apply_to_group__group_columns": {
            "type": "select",
            "label": "Colonne(s) de groupe",
            "show_if": "this.apply_to_group__enabled == 'true' && this.task_type!='static_value'",
            "table": "input_table",
            "bind": "COLUMNS",
            "multiple": true,
            "required": true
          },
          "delete": {
            "type": "button",
            "label": "Supprimer",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.use_filter": {
        "type": "checkbox",
        "label": "Utiliser un filtre",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "style": "margin-top: 10px",
        "breakLine": true
      },
      "filter_box": {
        "type": "fieldset",
        "label": "Options de filtrage",
        "show_if": "options.use_filter=='true'",
        "repeat": false,
        "fields": {
          "options.filter": {
            "type": "fieldset",
            "label": "Ajouter des filtres",
            "repeat": true,
            "fields": {
              "initial_op": {
                "type": "select",
                "label": "Sélectionner l'opérateur logique",
                "required": true,
                "show_if" :  "$index == 0",
                "options": {
                  "if": {
                    "label": "SI"
                  },
                  "if_not": {
                    "label": "SINON"
                  }
                },
                "val": "if"
              },
              "op": {
                "type": "select",
                "label": "Sélectionner l'opérateur logique",
                "required": true,
                "show_if" :  "$index > 0",
                "options": {
                  "and": {
                    "label": "ET"
                  },
                  "or": {
                    "label": "OU"
                  },
                  "and_not": {
                    "label": "ET NON"
                  },
                  "or_not": {
                    "label": "OU NON"
                  }
                },
                "val": "and"
              },
              "column": {
                "type": "select",
                "label": "Sélectionner une colonne",
                "table": "input_table",
                "bind": "COLUMNS",
                "required": true
              },
              "condition": {
                "type": "select",
                "label": "Sélectionner un opérateur",
                "required": true,
                "options": {
                  "CONTIENT": {
                    "label": "CONTIENT"
                  },
                  "CONTAINED IN STRING": {
                    "label": "CONTENU DANS"
                  },
                  "COMMENCE AVEC": {
                    "label": "COMMENCE AVEC"
                  },
                  "SE TERMINE PAR": {
                    "label": "SE TERMINE PAR"
                  },
                  "=": {
                    "label": "ÉGAL"
                  },
                  ">": {
                    "label": "SUPÉRIEUR À"
                  },
                  ">=": {
                    "label": "SUPÉRIEUR OU ÉGAL"
                  },
                  "<": {
                    "label": "INFÉRIEUR À"
                  },
                  "<=": {
                    "label": "INFÉRIEUR OU ÉGAL"
                  },
                  "EMPTY": {
                    "label": "EST VIDE"
                  },
                  "BLANK": {
                    "label": "EST BLANC"
                  },
                  "EST NUL": {
                    "label": "EST NUL"
                  },
                  "CORRESPONDANCE EXPRESSION RÉGULIÈRE": {
                    "label": "CORRESPONDANCE EXPRESSION RÉGULIÈRE"
                  },
                  "CONTAINED IN TABLE": {
                    "label": "EN TABLE"
                  },
                  "DANS LE TABLEAU D'EXPRESSIONS RÉGULIÈRES": {
                    "label": "DANS LE TABLEAU D'EXPRESSIONS RÉGULIÈRES"
                  },
                  "DATE": {
                    "label": "DATE"
                  }
                },
                "val": "CONTIENT"
              },
              "date_condition": {
                "type": "select",
                "label": "Sélectionner l'opérateur de date",
                "required": true,
                "show_if": "this.condition == 'DATE'",
                "options": {
                  "<": {
                    "label": "AVANT"
                  },
                  "<=": {
                    "label": "AVANT OU ÉGAL"
                  },
                  "=": {
                    "label": "ÉGAL"
                  },
                  ">": {
                    "label": "APRÈS"
                  },
                  ">=": {
                    "label": "APRÈS OU ÉGAL"
                  }
                },
                "val": "="
              },
              "case_sensitive": {
                "type": "select",
                "label": "Sélectionner la sensibilité à la casse",
                "required": true,
                "show_if": "this.condition == 'CONTAINS' || this.condition == 'CONTAINED IN STRING' || this.condition == '=' || this.condition == 'STARTS WITH' || this.condition == 'ENDS WITH' || this.condition == 'REGEX MATCH' || this.condition == 'NOT REGEX MATCH' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "options": {
                  "yes": {
                    "label": "Respecter la casse"
                  },
                  "no": {
                    "label": "Ignorer la casse"
                  }
                },
                "val": "yes"
              },
              "date_value": {
                "type": "date",
                "label": "Sélectionner une date",
                "show_if": "this.condition=='DATE'",
                "val": "",
                "required": true
              },
              "value": {
                "type": "text",
                "label": "Valeur d'entrée",
                "show_if": "this.condition != 'DATE' && this.condition != 'EMPTY' && this.condition != 'NOT EMPTY' && this.condition != 'BLANK' && this.condition != 'NOT BLANK' && this.condition != 'IS NULL' && this.condition != 'IS NOT NULL' && this.condition != 'CONTAINED IN TABLE' && this.condition != 'NOT CONTAINED IN TABLE' && this.condition != 'IN REGEX TABLE' && this.condition != 'NOT IN REGEX TABLE'",
                "val": "",
                "required": true
              },
              "compare_table": {
                "type": "select",
                "label": "Sélectionner un tableau",
                "bind": "TABLES",
                "empty": "",
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "required": true
              },
              "compare_column": {
                "type": "select",
                "label": "Sélectionner une colonne",
                "table": "this.compare_table",
                "bind": "COLUMNS",
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "required": true
              },
              "delete": {
                "type": "button",
                "label": "Supprimer",
                "function": "DELETE_ROW"
              }
            }
          },
          "options.apply_to_record": {
            "type": "checkbox",
            "label": "Appliquer au registre",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "style": "margin-top: 10px",
            "breakLine": true
          },
          "apply_to_group_box": {
            "type": "fieldset",
            "label": "Appliquer au groupe",
            "show_if": "options.apply_to_record=='false'",
            "repeat": false,
            "fields": {
              "options.apply_to_group_columns": {
                "type": "select",
                "label": "Sélectionner les colonnes du groupe",
                "required": true,
                "width": "100%",
                "table": "input_table",
                "multiple": true,
                "bind": "COLUMNS",
                "breakLine": true
              }
            }
          }
        }
      }
    }
  }
}