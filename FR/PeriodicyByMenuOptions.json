{
  "options": {
    "type": "fieldset",
    "label": "Sélectionner les options",
    "repeat": false,
    "fields": {
      "options.task_symbol": {
        "type": "hidden",
        "val": "periodicy_by_menu"
      },
      "options.custom.table": {
        "type": "fieldset",
        "label": "Poste de planification",
        "repeat": true,
        "fields": {
          "item": {
            "type": "text",
            "label": "élément",
            "val": "",
            "required": true
          },
          "position": {
            "type": "text",
            "label": "Position",
            "val": "",
            "required": true,
            "breakLine": true
          },
          "amount": {
            "type": "number",
            "label": "Montant",
            "val": "",
            "required": true
          },
          "initial_date": {
            "type": "date",
            "label": "Date initiale",
            "val": "",
            "required": true
          },
          "periodicy": {
            "type": "select",
            "label": "Périodicité",
            "required": true,
            "options": {
              "One-Off": {
                "label": "Non récurrent"
              },
              "Daily": {
                "label": "Journalier"
              },
              "Weekly": {
                "label": "Hebdomadaire"
              },
              "Monthly": {
                "label": "Mensuel"
              },
              "Quarterly": {
                "label": "Trimestriel"
              },
              "Yearly": {
                "label": "Annuel"
              }
            },
            "val": "One-Off"
          },
          "growth": {
            "type": "number",
            "label": "Croissance en %",
            "show_if": "this.periodicy!='One-Off'",
            "val": "",
            "required": true
          },
          "growth_period": {
            "type": "select",
            "label": "Période de croissance",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Weekly": {
                "label": "Hebdomadaire"
              },
              "Monthly": {
                "label": "Mois à mois"
              },
              "Quarterly": {
                "label": "Trimestre sur trimestre"
              },
              "Yearly": {
                "label": "Année sur année"
              }
            },
            "val": "Weekly"
          },
          "growth_pattern": {
            "type": "select",
            "label": "Modèle de croissance",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Linear": {
                "label": "Linéaire"
              },
              "Compounding": {
                "label": "Compounding"
              },
              "Jump-Fix Linear": {
                "label": "Jump-Fix Linear"
              },
              "Jump-Fix Compounding": {
                "label": "Jump-Fix Compounding"
              }
            },
            "val": "Compounding"
          },
          "final_date": {
            "type": "date",
            "label": "Date finale",
            "show_if": "this.periodicy!='One-Off'",
            "val": ""
          },
          "delete": {
            "type": "button",
            "label": "Supprimer",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.end_date": {
        "type": "date",
        "label": "Date de fin du tableau",
        "val": "",
        "required": true,
        "style": "width: 300px"
      }
    }
  }
}