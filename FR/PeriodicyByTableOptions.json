{
  "options": {
    "type": "fieldset",
    "label": "Sélectionner les options de périodicité",
    "repeat": false,
    "fields": {
      "options.type": {
        "type": "hidden",
        "val": "process"
      },
      "options.standard_table": {
        "type": "checkbox",
        "label": "Tableau de périodicité standard",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "style": "margin-top: 10px",
        "breakLine": true
      },
      "options.initial_date": {
        "type": "select",
        "label": "Date initiale",
        "show_if": "options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true
      },
      "options.period": {
        "type": "select",
        "label": "Périodicité (ex : mensuel, trimestriel)",
        "show_if": "options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true
      },
      "options.final_date": {
        "type": "select",
        "label": "Date finale",
        "show_if": "options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS",
        "breakLine": true
      },
      "options.volume": {
        "type": "select",
        "label": "Montant",
        "show_if": "options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS"
      },
      "options.growth": {
        "type": "select",
        "label": "Croissance",
        "show_if": "options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS"
      },
      "options.growth_period": {
        "type": "select",
        "label": "Période de croissance",
        "show_if": "options.standard_table=='false'",
        "options": {
          "selected_period": {
            "label": "Égaliser à la périodicité"
          },
          "week_on_week": {
            "label": "Semaine sur semaine"
          },
          "month_on_month": {
            "label": "Mois à mois"
          },
          "quarter_on_quarter": {
            "label": "Trimestre sur trimestre"
          },
          "year_on_year": {
            "label": "Année sur année"
          },
          "column": {
            "label": "Sélectionner une colonne"
          }
        },
        "val": "selected_period"
      },
      "options.growth_period_column": {
        "type": "select",
        "label": "Colonne de période de croissance",
        "show_if": "options.standard_table=='false' && options.growth_period=='column'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.use_growth_pattern_column": {
        "type": "checkbox",
        "label": "Utiliser le modèle de croissance",
        "show_if": "options.standard_table=='false'",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "options.growth_pattern_column": {
        "type": "select",
        "label": "Modèle de croissance",
        "show_if": "options.standard_table=='false' && options.use_growth_pattern_column=='true'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.end_date": {
        "type": "date",
        "label": "Date de fin du tableau",
        "val": "",
        "required": true,
        "style": "width: 300px"
      }
    }
  }
}