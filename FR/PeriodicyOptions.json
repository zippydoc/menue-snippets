{
  "options": {
    "type": "fieldset",
    "label": "Sélectionner les options de périodicité",
    "repeat": false,
    "fields": {
      "options.type": {
        "type": "select",
        "label": "Type",
        "options": {
          "generate": {
            "label": "Exemple de génération de périodicité"
          },
          "process": {
            "label": "Traiter tableau de périodicité"
          },
          "custom": {
            "label": "Personnaliser"
          }
        },
        "val": "custom",
        "breakLine": true
      },
      "input": {
        "type": "fieldset",
        "label": "Sélectionner un tableau d'entrée",
        "show_if": "options.type=='process'",
        "repeat": false,
        "fields": {
          "input_table": {
            "type": "select",
            "label": "Sélectionner un tableau",
            "bind": "TABLES",
            "empty": "",
            "required": true
          },
          "remove_input_table_after_processing": {
            "type": "hidden",
            "val": "false"
          },
          "is_word": {
            "type": "hidden",
            "val": "false"
          }
        },
        "breakLine": true
      },
      "amount_formatting_frame": {
        "type": "fieldset",
        "label": "Formatage de la colonne des montants",
        "show_if": "options.type=='generate'",
        "repeat": false,
        "fields": {
          "options.amount.format__category": {
            "type": "select",
            "label": "Format",
            "required": true,
            "options": {
              "standard": {
                "label": "Standard"
              },
              "number": {
                "label": "Numéro"
              },
              "percentage": {
                "label": "Pourcentage"
              },
              "currency": {
                "label": "Monnaie"
              }
            },
            "val": "currency"
          },
          "options.amount.format__rounding": {
            "type": "select",
            "label": "Arrondi",
            "show_if": "options.amount.format__category=='number' || options.amount.format__category=='percentage' || options.amount.format__category=='currency'",
            "required": true,
            "options": {
              "no_rounding": {
                "label": "Pas d'arrondi"
              },
              "0": {
                "label": "0 chiffre"
              },
              "1": {
                "label": "1 chiffre"
              },
              "2": {
                "label": "2 chiffres"
              },
              "3": {
                "label": "3 chiffres"
              },
              "4": {
                "label": "4 chiffres"
              },
              "5": {
                "label": "5 chiffres"
              },
              "6": {
                "label": "6 chiffres"
              },
              "7": {
                "label": "7 chiffres"
              },
              "8": {
                "label": "8 chiffres"
              },
              "9": {
                "label": "9 chiffres"
              }
            },
            "val": "2"
          },
          "options.amount.format__use_1000_separator": {
            "type": "checkbox",
            "label": "Use 1000 Separator(.)",
            "show_if": "options.amount.format__category=='number' || options.amount.format__category=='percentage' || options.amount.format__category=='currency'",
            "val": "true",
            "isOn": "true",
            "isOff": "false"
          },
          "options.amount.format__currency_symbol": {
            "type": "select",
            "label": "Symbole",
            "show_if": "options.amount.format__category=='currency'",
            "required": true,
            "options": {
              "dollar": {
                "label": "$"
              },
              "euro": {
                "label": "€"
              },
              "pound": {
                "label": "£"
              }
            },
            "val": "dollar"
          }
        }
      },
      "options.standard_table": {
        "type": "checkbox",
        "label": "Tableau de périodicité standard",
        "show_if": "options.type=='process'",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "style": "margin-top: 10px",
        "breakLine": true
      },
      "options.initial_date": {
        "type": "select",
        "label": "Date initiale",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true
      },
      "options.period": {
        "type": "select",
        "label": "Périodicité (ex : mensuel, trimestriel)",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true
      },
      "options.final_date": {
        "type": "select",
        "label": "Date finale",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS",
        "breakLine": true
      },
      "options.volume": {
        "type": "select",
        "label": "Montant",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS"
      },
      "options.growth": {
        "type": "select",
        "label": "Croissance",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS"
      },
      "options.growth_period": {
        "type": "select",
        "label": "Période de croissance",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "options": {
          "selected_period": {
            "label": "Égaliser à la périodicité"
          },
          "week_on_week": {
            "label": "Semaine sur semaine"
          },
          "month_on_month": {
            "label": "Mois à mois"
          },
          "quarter_on_quarter": {
            "label": "Trimestre sur trimestre"
          },
          "year_on_year": {
            "label": "Année sur année"
          },
          "column": {
            "label": "Sélectionner une colonne"
          }
        },
        "val": "selected_period"
      },
      "options.growth_period_column": {
        "type": "select",
        "label": "Colonne de période de croissance",
        "show_if": "options.type=='process' && options.standard_table=='false' && options.growth_period=='column'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.use_growth_pattern_column": {
        "type": "checkbox",
        "label": "Utiliser le modèle de croissance",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "options.growth_pattern_column": {
        "type": "select",
        "label": "Modèle de croissance",
        "show_if": "options.type=='process' && options.standard_table=='false' && options.use_growth_pattern_column=='true'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.custom.table": {
        "type": "fieldset",
        "label": "Poste de planification",
        "show_if": "options.type=='custom'",
        "repeat": true,
        "fields": {
          "item": {
            "type": "text",
            "label": "élément",
            "val": "",
            "required": true
          },
          "position": {
            "type": "text",
            "label": "Position",
            "val": "",
            "required": true,
            "breakLine": true
          },
          "amount": {
            "type": "number",
            "label": "Montant",
            "val": "",
            "required": true
          },
          "amount_format__category": {
            "type": "select",
            "label": "Format du montant",
            "show_if" : "$index == 0",
            "required": true,
            "options": {
              "standard": {
                "label": "Standard"
              },
              "number": {
                "label": "Numéro"
              },
              "percentage": {
                "label": "Pourcentage"
              },
              "text": {
                "label": "Texte"
              },
              "date": {
                "label": "Date"
              },
              "currency": {
                "label": "Monnaie"
              }
            },
            "val": "number"
          },
          "amount_format__rounding": {
            "type": "select",
            "label": "Arrondi",
            "show_if": "$index == 0 && (this.amount_format__category=='number' || this.amount_format__category=='percentage' || this.amount_format__category=='currency')",
            "required": true,
            "options": {
              "no_rounding": {
                "label": "Pas d'arrondi"
              },
              "0": {
                "label": "0 chiffre"
              },
              "1": {
                "label": "1 chiffre"
              },
              "2": {
                "label": "2 chiffres"
              },
              "3": {
                "label": "3 chiffres"
              },
              "4": {
                "label": "4 chiffres"
              },
              "5": {
                "label": "5 chiffres"
              },
              "6": {
                "label": "6 chiffres"
              },
              "7": {
                "label": "7 chiffres"
              },
              "8": {
                "label": "8 chiffres"
              },
              "9": {
                "label": "9 chiffres"
              }
            },
            "val": "2"
          },
          "amount_format__use_1000_separator": {
            "type": "checkbox",
            "label": "Use 1000 Separator(.)",
            "show_if": "$index == 0 && (this.amount_format__category=='number' || this.amount_format__category=='percentage' || this.amount_format__category=='currency')",
            "val": "true",
            "isOn": "true",
            "isOff": "false"
          },
          "amount_format__currency_symbol": {
            "type": "select",
            "label": "Symbole",
            "show_if": "$index == 0 && (this.amount_format__category=='currency')",
            "required": true,
            "options": {
              "dollar": {
                "label": "$"
              },
              "euro": {
                "label": "€"
              },
              "pound": {
                "label": "£"
              }
            },
            "val": "dollar"
          },
          "amount_format__date_format": {
            "type": "select",
            "label": "Type",
            "show_if": "$index == 0 && (this.amount_format__category=='date')",
            "required": true,
            "options": {
              "mm/dd/yyyy": {
                "label": "3/14/2012"
              },
              "D, M dd, Y": {
                "label": "Mercredi 14 mars 2012"
              },
              "yyyy-mm-dd": {
                "label": "2012-03-14"
              }
            },
            "val": "mm/dd/yyyy",
            "breakLine": true
          },
          "initial_date": {
            "type": "date",
            "label": "Date initiale",
            "val": "",
            "required": true
          },
          "initial_date_format__date_format": {
            "type": "select",
            "label": "Format de la date initiale",
            "show_if": "$index == 0",
            "required": true,
            "options": {
              "mm/dd/yyyy": {
                "label": "3/14/2012"
              },
              "D, M dd, Y": {
                "label": "Mercredi 14 mars 2012"
              },
              "yyyy-mm-dd": {
                "label": "2012-03-14"
              }
            },
            "val": "mm/dd/yyyy",
            "breakLine": true
          },
          "periodicy": {
            "type": "select",
            "label": "Périodicité",
            "required": true,
            "options": {
              "Non récurrent": {
                "label": "Non récurrent"
              },
              "Journalier": {
                "label": "Journalier"
              },
              "Travail quotidien": {
                "label": "Travail quotidien"
              },
              "Hebdomadaire": {
                "label": "Hebdomadaire"
              },
              "Mensuel": {
                "label": "Mensuel"
              },
              "Trimestriel": {
                "label": "Trimestriel"
              },
              "Annuel": {
                "label": "Annuel"
              }
            },
            "val": "Non récurrent"
          },
          "growth": {
            "type": "number",
            "label": "Croissance",
            "show_if": "this.periodicy!='One-Off'",
            "val": "",
            "required": true
          },
          "growth_period": {
            "type": "select",
            "label": "Période de croissance",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Hebdomadaire": {
                "label": "Hebdomadaire"
              },
              "Mensuel": {
                "label": "Mois à mois"
              },
              "Trimestriel": {
                "label": "Trimestre sur trimestre"
              },
              "Annuel": {
                "label": "Année sur année"
              }
            },
            "val": "Hebdomadaire"
          },
          "growth_pattern": {
            "type": "select",
            "label": "Modèle de croissance",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Compounding": {
                "label": "Compounding"
              },
              "Linéaire": {
                "label": "Linéaire"
              },
              "Jump-Fix": {
                "label": "Jump-Fix"
              }
            },
            "val": "Compounding"
          },
          "final_date": {
            "type": "date",
            "label": "Date finale",
            "show_if": "this.periodicy!='One-Off'",
            "val": ""
          },
          "delete": {
            "type": "button",
            "label": "Supprimer",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.end_date": {
        "type": "date",
        "label": "Date de fin du tableau",
        "show_if": "options.type=='process' || options.type=='custom'",
        "val": "",
        "required": true,
        "style": "width: 300px"
      }
    }
  }
}