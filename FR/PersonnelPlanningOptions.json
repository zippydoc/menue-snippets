{
  "options": {
    "type": "fieldset",
    "label": "Sélectionner les options",
    "repeat": false,
    "fields": {
      "task_label": {
        "type": "hidden",
        "val": "personnel_planning"
      },
      "options.type": {
        "type": "hidden",
        "val": "custom"
      },
      "options.custom.table": {
        "type": "fieldset",
        "label": "Poste de planification",
        "repeat": true,
        "fields": {
          "item": {
            "type": "text",
            "label": "Nom",
            "val": "",
            "required": true
          },
          "position": {
            "type": "select",
            "label": "Position",
            "options": {
              "fix salary": {
                "label": "Salaire fixe"
              },
              "bonus": {
                "label": "bonus"
              },
              "other compensation": {
                "label": "autres rémunérations"
              }
            },
            "val": "fix salary",
            "required": true
          },
          "amount": {
            "type": "number",
            "label": "Montant",
            "val": "",
            "required": true
          },
          "initial_date": {
            "type": "date",
            "label": "Date initiale",
            "val": "",
            "required": true
          },
          "periodicy": {
            "type": "select",
            "label": "Périodicité",
            "required": true,
            "options": {
              "One-Off": {
                "label": "Non récurrent"
              },
              "Daily": {
                "label": "Journalier"
              },
              "Work-Daily": {
                "label": "Travail quotidien"
              },
              "Weekly": {
                "label": "Hebdomadaire"
              },
              "Monthly": {
                "label": "Mensuel"
              },
              "Quarterly": {
                "label": "Trimestriel"
              },
              "Yearly": {
                "label": "Annuel"
              }
            },
            "val": "One-Off"
          },
          "growth": {
            "type": "number",
            "label": "Croissance",
            "show_if": "this.periodicy!='One-Off'",
            "val": "",
            "required": true
          },
          "growth_period": {
            "type": "select",
            "label": "Période de croissance",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Weekly": {
                "label": "Hebdomadaire"
              },
              "Monthly": {
                "label": "Mois à mois"
              },
              "Quarterly": {
                "label": "Trimestre sur trimestre"
              },
              "Yearly": {
                "label": "Année sur année"
              }
            },
            "val": "Weekly"
          },
          "growth_pattern": {
            "type": "select",
            "label": "Modèle de croissance",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Compounding": {
                "label": "Compounding"
              },
              "Linear": {
                "label": "Linéaire"
              },
              "Jump-Fix": {
                "label": "Jump-Fix"
              }
            },
            "val": "Compounding"
          },
          "final_date": {
            "type": "date",
            "label": "Date finale",
            "show_if": "this.periodicy!='One-Off'",
            "val": ""
          },
          "delete": {
            "type": "button",
            "label": "Supprimer",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.end_date": {
        "type": "date",
        "label": "Date de fin du tableau",
        "show_if": "options.type=='process' || options.type=='custom'",
        "val": "",
        "required": true,
        "style": "width: 300px"
      }
    }
  }
}