{
  "options": {
    "type": "fieldset",
    "label": "Exécuter toutes les options",
    "repeat": false,
    "fields": {
      "input_table_options": {
        "type": "fieldset",
        "label": "Spécifier les tableaux d'entrée",
        "breakLine": true,
        "repeat": false,
        "fields": {
          "options.select_type": {
            "type": "select",
            "label": "Sélectionner le type",
            "required": true,
            "options": {
              "table_selection": {
                "label": "Sélection de la table"
              },
              "select_by_pattern": {
                "label": "Sélectionner par motif"
              }
            },
            "val": "table_selection"
          },
          "options.table_ids": {
            "type": "select",
            "label": "Sélectionner les tableaux",
            "bind": "TABLES",
            "empty": "",
            "multiple": true,
            "show_if": "options.select_type=='table_selection'",
            "required": true
          },
          "options.filter_params": {
            "type": "fieldset",
            "label": "Tables de correspondance",
            "show_if": "options.select_type=='select_by_pattern'",
            "breakLine": true,
            "repeat": true,
            "fields": {
              "keyword": {
                "type": "text",
                "label": "Entrez le mot-clé",
                "required": true,
                "val": ""
              },
              "filter_target": {
                "type": "select",
                "label": "Filtrer sur",
                "required": true,
                "options": {
                  "table_name": {
                    "label": "Nom du tableau"
                  },
                  "table_tag": {
                    "label": "Tag de table"
                  }
                },
                "val": "table_name"
              },
              "filter_type": {
                "type": "select",
                "label": "Type de filtre",
                "required": true,
                "options": {
                  "equal": {
                    "label": "Égale"
                  },
                  "contain": {
                    "label": "Contient"
                  },
                  "start_with": {
                    "label": "Commence par"
                  },
                  "end_with": {
                    "label": "Se termine par"
                  },
                  "regex": {
                    "label": "Expression régulière"
                  }
                },
                "val": "equal"
              },
              "delete": {
                "type": "button",
                "label": "Supprimer",
                "function": "DELETE_ROW"
              }
            }
          },
          "options.use_waiting_time": {
            "type": "checkbox",
            "label": "Ajouter le temps d'attente",
            "val": "false",
            "isOn": "true",
            "isOff": "false"
          },
          "options.waiting_period": {
            "type": "number",
            "label": "Waiting time (sec)",
            "val": "0",
            "show_if": "options.use_waiting_time!='false'"
          }
        }
      },
      "task_chain": {
        "type": "checkbox",
        "label": "Chaîne de tâches",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "schedule_options": {
        "type": "fieldset",
        "label": "Tâches à planifier",
        "show_if": "task_chain == 'true'",
        "repeat": true,
        "fields": {
          "input_task": {
            "type": "select",
            "label": "Sélectionner la tâche",
            "bind": "TASKS",
            "empty": "",
            "required": true
          },
          "waiting_time": {
            "type": "number",
            "label": "Waiting time (sec)",
            "val": "0",
            "required": true
          },
          "delete": {
            "type": "button",
            "label": "Supprimer",
            "function": "DELETE_ROW"
          }
        },
        "breakLine": true
      },
      "unify_output_tables": {
        "type": "checkbox",
        "label": "Unify output tables",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      }
    }
  }
}