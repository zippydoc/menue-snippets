{
  "split_column_box": {
    "type": "fieldset",
    "label": "Colonnes à séparer",
    "repeat": false,
    "fields": {
      "options.split_all_columns": {
        "type": "checkbox",
        "label": "Toutes les colonnes",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.column_to_parse": {
        "type": "select",
        "label": "Colonne à séparer",
        "show_if": "options.split_all_columns=='false'",
        "multiple": true,
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "width": "100%"
      }
    }
  }
}