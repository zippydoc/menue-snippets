{
  "options": {
    "type": "fieldset",
    "label": "Sélectionner les options",
    "repeat": false,
    "fields": {
      "options.split_method": {
        "type": "select",
        "label": "Méthode de séparation",
        "required": true,
        "options": {
          "standard": {
            "label": "Standard"
          },
          "regex": {
            "label": "Expression régulière"
          }
        },
        "val": "standard"
      },
      "options.split_type": {
        "type": "select",
        "label": "Type de séparation",
        "required": true,
        "options": {
          "split_to_columns": {
            "label": "Séparer en colonnes"
          },
          "split_to_rows": {
            "label": "Séparer en rangées"
          }
        },
        "val": "split_to_columns"
      },
      "options.standard_delimiter": {
        "type": "select",
        "label": "Délimiteur de séparation",
        "show_if": "options.split_method=='standard'",
        "required": true,
        "options": {
          "tabs": {
            "label": "Onglets"
          },
          "space": {
            "label": "Espace"
          },
          "whitespace": {
            "label": "Espace"
          },
          "linebreak": {
            "label": "Saut de ligne"
          },
          "punctuation": {
            "label": "Ponctuation"
          },
          "punctuation_whitespace": {
            "label": "Ponctuation et espaces"
          },
          "custom": {
            "label": "Personnaliser"
          }
        },
        "val": "punctuation"
      },
      "options.delimiter": {
        "type": "text",
        "label": "Délimiteur de séparation",
        "show_if": "options.split_method=='standard' && options.standard_delimiter=='custom'",
        "val": ",",
        "trim": "false",
        "required": true,
        "breakLine": true
      },
      "format_frame": {
        "type": "fieldset",
        "label": "Format à analyser pour le fractionnement",
        "show_if": "options.split_method=='regex'",
        "repeat": false,
        "fields": {
          "options.format_to_convert.regular_expression": {
            "type": "text",
            "label": "Parse Regular Expression ( ex: ([a-z]+)\\s([a-z]+) )",
            "val": "[a-z]+\\s[a-z]+",
            "required": true,
            "width": "100%",
            "trim": "false",
            "breakLine": true
          },
          "options.format_to_convert.case_insensitive": {
            "type": "checkbox",
            "label": "Ignorer la casse",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          }
        }
      },
      "options.n_multi_n": {
        "type": "checkbox",
        "label": "N x N split if multiple columns are selected",
        "show_if": "options.split_type=='split_to_rows'",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      }
    }
  }
}