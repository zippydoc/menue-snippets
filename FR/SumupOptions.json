{
  "actions": {
    "type": "fieldset",
    "Étiquette": "Ajouter des actions",
    "repeat": true,
    "fields": {
      "column": {
        "type": "select",
        "Étiquette": "Colonne",
        "table": "input_table",
		"assign_selected_value_to":"this.output_column_name",
        "bind": "COLUMNS"
      },
      "action": {
        "type": "select",
        "Étiquette": "Action",
        "options": {
          "group_by": {
            "Étiquette": "Grouper par"
          },
          "count": {
            "Étiquette": "Compter"
          },
          "sum": {
            "Étiquette": "Somme"
          },
          "first": {
            "Étiquette": "Premier"
          },
          "last": {
            "Étiquette": "Dernier"
          },
          "shortest": {
            "Étiquette": "Le plus court"
          },
          "longest": {
            "Étiquette": "La plus longue"
          },
          "concatenate": {
            "Étiquette": "Concaténer"
          },
          "mathematics": {
            "Étiquette": "Mathématiques"
          }
        }
      },
      "count_action_category": {
        "type": "select",
        "Étiquette": "Type d'action",
        "show_if": "this.action=='count'",
        "options": {
          "all": {
            "Étiquette": "Tout"
          },
          "distinct": {
            "Étiquette": "Distinct"
          },
          "empty_or_zero": {
            "Étiquette": "Vide ou 0"
          },
          "non_empty_or_zero": {
            "Étiquette": "Non vide ou 0"
          }
        },
        "val": "all"
      },
      "action_type1": {
        "type": "select",
        "Étiquette": "Sous-type d'action",
        "show_if": "this.action=='count' && (this.count_action_category=='all' || this.count_action_category=='distinct')",
        "options": {
          "-": {
            "Étiquette": "-"
          },
          "non_zero": {
            "Étiquette": "Non 0"
          },
          "non_empty": {
            "Étiquette": "Non vide"
          },
          "non_null": {
            "Étiquette": "Non nul"
          },
          "non_blank": {
            "Étiquette": "Non blanc"
          }
        },
        "val": "-"
      },
      "action_type2": {
        "type": "select",
        "Étiquette": "Sous-type d'action",
        "show_if": "this.action=='count' && this.count_action_category=='empty_or_zero'",
        "options": {
          "zero": {
            "Étiquette": "0"
          },
          "empty": {
            "Étiquette": "Vide (nul et blanc)"
          },
          "null": {
            "Étiquette": "Null"
          },
          "blank": {
            "Étiquette": "Vide"
          }
        },
        "val": "zero"
      },
      "action_type3": {
        "type": "select",
        "Étiquette": "Sous-type d'action",
        "show_if": "this.action=='count' && this.count_action_category=='non_empty_or_zero'",
        "options": {
          "non_zero": {
            "Étiquette": "Non 0"
          },
          "non_empty": {
            "Étiquette": "Non vide"
          },
          "non_null": {
            "Étiquette": "Non nul"
          },
          "non_blank": {
            "Étiquette": "Non blanc"
          }
        },
        "val": "non_zero"
      },
      "mathematics_action_category": {
        "type": "select",
        "Étiquette": "Type d'action",
        "show_if": "this.action=='mathematics'",
        "options": {
          "min": {
            "Étiquette": "Min"
          },
          "max": {
            "Étiquette": "Max"
          },
          "average": {
            "Étiquette": "Moyenne"
          },
          "median": {
            "Étiquette": "Médiane"
          },
          "standard_deviation": {
            "Étiquette": "Écart type"
          },
          "variance": {
            "Étiquette": "Variance"
          }
        },
        "val": "min"
      },
      "action_type4": {
        "type": "select",
        "Étiquette": "Sous-type d'action",
        "show_if": "this.action=='mathematics'",
        "options": {
          "include_zero": {
            "Étiquette": "Inclure 0"
          },
          "exclude_zero": {
            "Étiquette": "Exclure 0"
          }
        },
        "val": "include_zero"
      },
      "concatenate_separator": {
        "type": "text",
        "Étiquette": "Séparateur",
        "show_if": "this.action=='concatenate'",
        "val": ","
      },
      "output_column_name": {
        "type": "text",
        "Étiquette": "Sortir le nom de la colonne",
        "val": ""
      },
      "delete": {
        "type": "button",
        "Étiquette": "Supprimer",
        "function": "DELETE_ROW"
      }
    }
  }
}