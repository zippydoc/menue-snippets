{
  "options": {
    "type": "fieldset",
    "label": "Options",
    "repeat": false,
    "fields": {
      "options.type": {
        "type": "radio",
        "label": "",
        "required": true,
        "values": {
          "embed_code": "Generate Embed-Code",
          "api_key": "Generate API-KEY"
        },
        "val": "embed_code",
        "breakLine": true
      },
      "options.embed_code.framework": {
        "type": "select",
        "label": "Sélectionner le cadre frontal",
        "required": true,
        "show_if": "options.type=='embed_code'",
        "options": {
          "jquery": {
            "label": "jQuery"
          },
          "react": {
            "label": "Réagir (prochainement...)"
          },
          "vue": {
            "label": "Vue (prochainement...)"
          },
          "angular": {
            "label": "Angulaire (prochainement...)"
          }
        },
        "val": "jquery",
        "style": "width: 200px"
      },
      "options.embed_code.use_datatable": {
        "type": "checkbox",
        "label": "Thème d'utilisation",
        "show_if": "options.type=='embed_code'",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      }
    }
  }
}