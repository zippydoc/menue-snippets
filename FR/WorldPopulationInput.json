{
  "input": {
    "type": "fieldset",
    "label": "Sélectionner un tableau d'entrée",
    "show_if": "options.configure_input_table == 'true'",
    "repeat": false,
    "fields": {
      "table_id": {
        "type": "select",
        "label": "Sélectionner un tableau",
        "bind": "TABLES",
        "empty": "",
        "required": true,
        "breakLine": true
      },
      "remove_input_table_after_processing": {
        "type": "hidden",
        "val": "false"
      },
      "is_word": {
        "type": "hidden",
        "val": "false"
      },
      "help_text_stripe_charge": {
        "type": "text",
        "label": "",
        "val": "Table Structure ( Region | Income Group | Country | State | Population (2020) | GDP in USD (2020) )",
        "disabled": true,
        "width": "100%"
      }
    }
  }
}