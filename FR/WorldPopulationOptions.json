{
  "options_box": {
    "type": "fieldset",
    "label": "Options",
    "repeat": false,
    "fields": {
      "options.chart_type": {
        "type": "hidden",
        "val": "zoomable_sunburst"
      },
      "options.group_by": {
        "type": "select",
        "label": "Grouper par",
        "required": true,
        "options": {
          "Region": {
            "label": "Région"
          },
          "Income Group": {
            "label": "Groupe de revenu"
          }
        },
        "val": "Region"
      },
      "options.measure": {
        "type": "select",
        "label": "Mesure",
        "required": true,
        "options": {
          "population_2020": {
            "label": "Population 2020"
          },
          "gdp_2020_in_usd": {
            "label": "PIB 2020 en USD"
          }
        },
        "val": "population_2020",
        "breakLine": true
      },
      "options.output_as_chart": {
        "type": "checkbox",
        "label": "Produire un graphique",
        "val": "true",
        "isOn": "true",
        "isOff": "false"
      },
      "options.graph_type": {
        "type": "select",
        "label": "Type de graphique",
        "show_if": "options.output_as_chart=='true'",
        "required": true,
        "options": {
          "zoomable_sunburst": {
            "label": "Sunburst"
          },
          "tidy_tree": {
            "label": "Arbre"
          },
          "treemap": {
            "label": "Treemap"
          }
        },
        "val": "zoomable_sunburst",
        "breakLine": true
      },
      "options.configure_input_table": {
        "type": "checkbox",
        "label": "Configurer la table d'entrée",
        "show_if": "options.output_as_chart=='true'",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      }
    }
  }
}