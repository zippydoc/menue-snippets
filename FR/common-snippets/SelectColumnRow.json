{
  "placeholder": {
    "breakLine": true
  },
  "apply_to_all_columns": {
    "type": "checkbox",
    "label": "Toutes les colonnes",
    "show_if": "false",
    "val": "false",
    "isOn": "true",
    "isOff": "false",
    "breakLine": true	
  },
  "apply_columns": {
    "type": "select",
    "label": "Sélectionner les colonnes à appliquer",
    "show_if": "$input_table.numOfHeader >= 1",
    "required": true,
    "table": "input_table",
    "multiple": true,
    "bind": "COLUMNS",
    "breakLine": true
  },
  "apply_to_all_rows": {
    "type": "checkbox",
    "label": "Toutes les lignes",
    "show_if": "false",
    "val": "false",
    "isOn": "true",
    "isOff": "false",
    "breakLine": true
  },
  "apply_rows": {
    "type": "select",
    "label": "Sélectionnez les lignes à appliquer",
    "show_if": "$input_table.numOfLabel >= 1",
    "required": true,
    "table": "input_table",
    "multiple": true,
    "bind": "LABELS",
    "breakLine": true
  },
  "intersection": {
    "type": "select",
    "label": "Sélection",
    "show_if": "false",
    "options": {
      "all": {
        "label": "Toutes les lignes & colonnes sélectionnées"
      },
      "intersection": {
        "label": "Intersection des lignes & colonnes sélectionnées"
      }
    },
    "val": "intersection"
  }
}