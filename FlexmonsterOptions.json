{
  "options_box": {
    "type": "fieldset",
    "label": "Flexmonster Report Options",
    "repeat": false,
    "fields": {
      "options.row_col": {
        "type": "select",
        "label": "Row column",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true
      },
      "options.column_col": {
        "type": "select",
        "label": "Column column",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true
      },
      "measures_option_box": {
        "type": "fieldset",
        "label": "Measures Options",
        "repeat": false,
        "fields": {
          "options.measures.column": {
            "type": "select",
            "label": "Measure Column",
            "table": "input_table",
            "bind": "COLUMNS",
            "required": true
          },
          "options.measures.aggregation": {
            "type": "select",
            "label": "Aggregation Function",
            "options": {
              "sum": {
                "label": "Sum"
              },
              "count": {
                "label": "Count"
              },
              "distinctcount": {
                "label": "Distinct Count"
              },
              "average": {
                "label": "Average"
              },
              "median": {
                "label": "Median"
              },
              "product": {
                "label": "Product"
              },
              "min": {
                "label": "Min"
              },
              "max": {
                "label": "Max"
              },
              "stdevp": {
                "label": "Population Standard Deviation"
              },
              "stdevs": {
                "label": "Sample Standard Deviation"
              },
              "percent": {
                "label": "Percent"
              }
            },
            "val": "sum",
            "required": true,
            "breakLine": true
          }
        }
      }
    }
  }
}