{
  "options": {
    "type": "fieldset", 
    "label": "Opzioni", 
    "repeat": false, 
    "fields": {
      "options.type": {
        "type": "radio", 
        "label": "", 
        "required": true, 
        "values": {
          "embed_code": "Generate Embed-Code", 
          "api_key": "Generate API-KEY"
        }, 
        "val": "embed_code", 
        "breakLine": true
      }, 
      "options.embed_code.framework": {
        "type": "select", 
        "label": "Seleziona il framework di frontend", 
        "required": true, 
        "show_if": "options.type=='embed_code'", 
        "options": {
          "jquery": {
            "label": "jQuery"
          }, 
          "react": {
            "label": "React (Prossimamente...)"
          }, 
          "vue": {
            "label": "Vue (Prossimamente...)"
          }, 
          "angular": {
            "label": "Angolare (Prossimamente...)"
          }
        }, 
        "val": "jquery", 
        "style": "width: 200px"
      }, 
      "options.embed_code.use_datatable": {
        "type": "checkbox", 
        "label": "Utilizzare il tema", 
        "show_if": "options.type=='embed_code'", 
        "val": "true", 
        "isOn": "true", 
        "isOff": "false", 
        "breakLine": true
      }
    }
  }
}
