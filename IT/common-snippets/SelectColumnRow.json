{
  "placeholder": {
    "breakLine": true
  }, 
  "apply_to_all_columns": {
    "type": "checkbox", 
    "label": "Tutte le colonne", 
    "val": "true", 
    "isOn": "true", 
    "isOff": "false"
  }, 
  "apply_columns": {
    "type": "select", 
    "label": "Seleziona le colonne da applicare", 
    "show_if": "apply_to_all_columns=='false'", 
    "required": true, 
    "table": "input_table", 
    "multiple": true, 
    "bind": "COLUMNS", 
    "breakLine": true
  }, 
  "apply_to_all_rows": {
    "type": "checkbox", 
    "label": "All Rows", 
    "val": "true", 
    "isOn": "true", 
    "isOff": "false"
  }, 
  "apply_rows": {
    "type": "select", 
    "label": "Select Rows to Apply", 
    "show_if": "apply_to_all_rows=='false'", 
    "required": true, 
    "table": "input_table", 
    "multiple": true, 
    "bind": "LABELS", 
    "breakLine": true
  }, 
  "intersection": {
    "type": "select", 
    "label": "Selection", 
    "show_if": "apply_to_all_columns=='false' && apply_to_all_rows=='false'", 
    "options": {
      "all": {
        "label": "All selected Rows & Columns"
      }, 
      "intersection": {
        "label": "Intersection of selected Rows & Columns"
      }
    }, 
    "val": "intersection"
  }
}
