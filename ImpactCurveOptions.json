{
  "options": {
    "type": "fieldset",
    "label": "Select Options",
    "repeat": false,
    "fields": {
      "start": {
        "type": "text",
        "label": "Initial Period",
        "val": "1",
        "required": true
      },
      "maximum": {
        "type": "text",
        "label": "Maximum Period",
        "val": "50",
        "required": true
      },
      "end": {
        "type": "text",
        "label": "End Period",
        "val": "100",
        "required": true,
        "breakLine": true
      },
      "multiplier_at_maximum_impact_level": {
        "type": "text",
        "label": "Multiplier At Maximum Impact Level",
        "width": "100%",
        "val": "2",
        "required": true,
        "breakLine": true
      },
      "end_value_equals_initial_value": {
        "type": "checkbox",
        "label": "End Value Equals Initial Value",
        "width": "100%",
        "val": "yes",
        "isOn": "yes",
        "isOff": "no",
        "breakLine": true
      },
      "multiplier_end_value": {
        "type": "text",
        "label": "Multiplier End Value",
        "width": "100%",
        "show_if": "end_value_equals_initial_value=='no'",
        "val": "",
        "breakLine": true
      },
      "maximum_plateau": {
        "type": "checkbox",
        "label": "Maximum Plateau",
        "width": "100%",
        "val": "yes",
        "isOn": "yes",
        "isOff": "no",
        "breakLine": true
      },
      "no_of_periods_prior_defined_maximum_point": {
        "type": "text",
        "label": "No of periods prior defined maximum point",
        "show_if": "maximum_plateau=='yes'",
        "val": "0"
      },
      "no_of_periods_post_defined_maximum_point": {
        "type": "text",
        "label": "No of periods post defined maximum point",
        "show_if": "maximum_plateau=='yes'",
        "val": "0",
        "breakLine": true
      },
      "left_slope": {
        "type": "select",
        "label": "Left Slope",
        "options": {
          "vertical": {
            "label": "Vertical"
          },
          "linear": {
            "label": "Linear"
          },
          "standard_distribution": {
            "label": "Standard Distribution"
          }
        },
        "val": "standard_distribution"
      },
      "use_auto_calculated_sigma_for_left_slope": {
        "type": "checkbox",
        "label": "Auto calculated left sigma",
        "show_if": "left_slope=='standard_distribution'",
        "val": "true",
        "isOn": "true",
        "isOff": "false"
      },
      "left_slope_sigma": {
        "type": "text",
        "label": "Left Slope Sigma",
        "show_if": "left_slope=='standard_distribution' && use_auto_calculated_sigma_for_left_slope=='false'",
        "val": ""
      },
      "right_slope": {
        "type": "select",
        "label": "Right Slope",
        "required": true,
        "options": {
          "vertical": {
            "label": "Vertical"
          },
          "linear": {
            "label": "Linear"
          },
          "standard_distribution": {
            "label": "Standard Distribution"
          }
        },
        "val": "standard_distribution"
      },
      "use_auto_calculated_sigma_for_right_slope": {
        "type": "checkbox",
        "label": "Auto calculated right sigma",
        "show_if": "right_slope=='standard_distribution'",
        "val": "true",
        "isOn": "true",
        "isOff": "false"
      },
      "right_slope_sigma": {
        "type": "text",
        "label": "Right Slope Sigma",
        "show_if": "right_slope=='standard_distribution' && use_auto_calculated_sigma_for_right_slope=='false'",
        "val": "",
        "breakLine": true
      }
    }
  }
}