{
  "input": {
    "type": "fieldset",
    "label": "ルックアップテーブルの選択",
    "repeat": false,
    "fields": {
      "tables": {
        "type": "fieldset",
        "label": "テーブルの選択",
        "repeat": true,
        "fields": {
          "table_id": {
            "type": "select",
            "label": "ルックアップテーブル",
            "bind": "TABLES",
            "required": true
          },
          "lookup_header_column": {
            "type": "select",
            "label": "列ヘッダ",
            "table": "this.table_id",
            "bind": "COLUMNS",
            "required": true
          },
          "lookup_value_column": {
            "type": "select",
            "label": "値列",
            "table": "this.table_id",
            "bind": "COLUMNS",
            "required": true
          },
          "lookup_mapping_column": {
            "type": "select",
            "label": "列のマッピング",
            "table": "this.table_id",
            "bind": "COLUMNS"
          },
          "delete": {
            "type": "button",
            "label": "削除",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.treatment": {
        "type": "select",
        "label": "複数回発生した場合の処理",
        "required": true,
        "options": {
          "sum": {
            "label": "合計"
          },
          "min": {
            "label": "最小"
          },
          "max": {
            "label": "最大"
          },
          "shortest": {
            "label": "最短"
          },
          "longest": {
            "label": "最長"
          },
          "first": {
            "label": "最初"
          },
          "last": {
            "label": "最後"
          },
          "concatenate": {
            "label": "連結"
          }
        },
        "val": "sum",
        "style": "min-width: 200px"
      },
      "options.treatment_delimiter": {
        "type": "text",
        "label": "区切り文字",
        "show_if": "options.treatment=='concatenate'",
        "required": true,
        "minLength": 1,
        "maxLength": 255,
        "val": ";",
        "breakLine": true
      }
    }
  }
}