{
  "options": {
    "type": "fieldset",
    "label": "オプションの選択",
    "repeat": false,
    "fields": {
      "transpose_type": {
        "type": "hidden",
        "val": "crosstab"
      },
      "mirror_matrix.convert_header_to_label": {
        "type": "checkbox",
        "label": "ヘッダからラベルへ変換",
        "show_if": "transpose_type=='mirror_matrix'",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "column_name_to_label.columns_to_label": {
        "type": "select",
        "label": "ラベルに変換する列を選択",
        "show_if": "transpose_type=='column_name_to_label'",
        "table": "table_id",
        "multiple": true,
        "bind": "COLUMNS",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "column_name_to_label.label_column_name": {
        "type": "text",
        "label": "列ラベルの列名",
        "show_if": "transpose_type=='column_name_to_label'",
        "required": true,
        "val": "Label",
        "width": "100%",
        "breakLine": true
      },
      "column_name_to_label.value_column_name": {
        "type": "text",
        "label": "値列の列名",
        "show_if": "transpose_type=='column_name_to_label'",
        "required": true,
        "val": "Value",
        "width": "100%",
        "breakLine": true
      },
      "crosstab.group_data_by_these_values": {
        "type": "select",
        "label": "これらの値によるグループデータ",
        "show_if": "transpose_type=='crosstab'",
        "table": "table_id",
        "multiple": true,
        "bind": "COLUMNS",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "crosstab.change_column_headers": {
        "type": "select",
        "label": "列ヘッダの変更",
        "show_if": "transpose_type=='crosstab'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "crosstab.values_for_new_columns": {
        "type": "select",
        "label": "新しい列の値",
        "show_if": "transpose_type=='crosstab'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "crosstab.method_for_aggregating_values": {
        "type": "select",
        "label": "値の集計方法",
        "show_if": "transpose_type=='crosstab'",
        "options": {
          "Concatenate": {
            "label": "連結"
          },
          "First": {
            "label": "最初"
          },
          "Last": {
            "label": "最後"
          },
          "Sum": {
            "label": "合計"
          },
          "Average": {
            "label": "平均"
          },
          "Count": {
            "label": "計算"
          },
          "User Defined": {
            "label": "ユーザー定義"
          }
        },
        "val": "Concatenate",
        "required": true
      },
      "crosstab.user_defined_str": {
        "type": "text",
        "label": "ユーザー定義値",
        "show_if": "transpose_type=='crosstab' && crosstab.method_for_aggregating_values=='User Defined'",
        "val": "x",
        "trim": "false",
        "breakLine": true
      },
      "crosstab.separator": {
        "type": "text",
        "label": "セパレータ",
        "show_if": "transpose_type=='crosstab' && method_for_aggregating_values=='Concatenate'",
        "val": ",",
        "trim": "false",
        "required": true,
        "breakLine": true
      }
    }
  }
}