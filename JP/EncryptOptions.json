{
  "options": {
    "type": "fieldset",
    "label": "オプションの選択",
    "repeat": false,
    "fields": {
      "task_type": {
        "type": "select",
        "label": "タスクタイプ",
        "required": true,
        "options": {
          "encrypt": {
            "label": "暗号化（セキュア）"
          },
          "decrypt": {
            "label": "復号化（セキュア）"
          },
          "encrypt_simple": {
            "label": "暗号化（シンプル）"
          },
          "decrypt_simple": {
            "label": "復号化（シンプル）"
          },
          "mask": {
            "label": "マスク"
          }
        },
        "val": "encrypt"
      },
      "mask_type": {
        "type": "select",
        "label": "マスクタイプ",
        "show_if": "task_type == 'mask'",
        "required": true,
        "options": {
          "trailing": {
            "label": "末尾N文字"
          },
          "leading": {
            "label": "先頭N文字"
          },
          "numbers": {
            "label": "数字"
          },
          "alphabets": {
            "label": "文字"
          },
          "regex": {
            "label": "正規表現"
          }
        },
        "val": "trailing"
      },
      "password": {
        "type": "password",
        "label": "パスワード",
        "show_if": "task_type != 'mask'",
        "required": true,
        "minLength": 1,
        "maxLength": 31,
        "val": ""
      },
      "varn": {
        "type": "number",
        "label": "N",
        "show_if": "task_type == 'mask' && (mask_type == 'trailing' || mask_type == 'leading')",
        "required": true,
        "val": "1"
      },
      "regexp": {
        "type": "text",
        "label": "表現",
        "show_if": "task_type == 'mask' && (mask_type == 'regex')",
        "required": true,
        "val": "",
        "placeholder": "[a-fA-F0-9]"
      },
      "replace": {
        "type": "text",
        "label": "マスク文字列",
        "show_if": "task_type == 'mask' && (mask_type == 'regex')",
        "required": true,
        "val": "*",
        "breakLine": true
      }
    }
  }
}