{
  "options": {
    "type": "fieldset",
    "ラベル": "検索オプションの選択",
    "repeat": false,
    "fields": {
      "add_column": {
        "type": "text",
        "ラベル": "一致ステータスの列名",
        "val": "Match",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "use_custom_delimiter": {
        "type": "checkbox",
        "ラベル": "複数のマッチに対するカスタムデリミタ",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "custom_delimiter": {
        "type": "text",
        "ラベル": "カスタムデリミタ",
        "show_if": "use_custom_delimiter=='true'",
        "val": ";",
        "required": true
      },
      "do_not_duplicate": {
        "type": "checkbox",
        "ラベル": "同じマッチを重複させない",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "filter_box": {
        "type": "fieldset",
        "ラベル": "フィルターオプション",
        "repeat": false,
        "fields": {
          "filter": {
            "type": "fieldset",
            "ラベル": "マッチの条件を選択",
            "repeat": true,
            "fields": {
              "initial_op": {
                "type": "select",
                "ラベル": "論理オペレータの選択",
                "required": true,
                "show_if" :  "$index == 0",
                "options": {
                  "if": {
                    "ラベル": "IF"
                  },
                  "if_not": {
                    "ラベル": "IF NOT"
                  }
                },
                "val": "if"
              },
              "op": {
                "type": "select",
                "ラベル": "論理オペレータの選択",
                "show_if" :  "$index > 0",
                "options": {
                  "and": {
                    "ラベル": "AND"
                  },
                  "or": {
                    "ラベル": "OR"
                  },
                  "and_not": {
                    "ラベル": "AND NOT"
                  },
                  "or_not": {
                    "ラベル": "OR NOT"
                  }
                },
                "val": "and"
              },
              "column": {
                "type": "select",
                "ラベル": "列の選択",
                "table": "input_table",
                "bind": "COLUMNS",
                "required": true
              },
              "condition": {
                "type": "select",
                "ラベル": "オペレータの選択",
                "required": true,
                "options": {
                  "含む": {
                    "ラベル": "含む"
                  },
                  "CONTAINED IN STRING": {
                    "ラベル": "次の中に含む"
                  },
                  "次で開始": {
                    "ラベル": "次で開始"
                  },
                  "次で終了": {
                    "ラベル": "次で終了"
                  },
                  "=": {
                    "ラベル": "等しい"
                  },
                  ">": {
                    "ラベル": "超"
                  },
                  ">=": {
                    "ラベル": "以上"
                  },
                  "<": {
                    "ラベル": "より小さい"
                  },
                  "<=": {
                    "ラベル": "より小さいまたは等しい"
                  },
                  "EMPTY": {
                    "ラベル": "空です"
                  },
                  "BLANK": {
                    "ラベル": "空白です"
                  },
                  "無効です": {
                    "ラベル": "無効です"
                  },
                  "REGEXの一致": {
                    "ラベル": "REGEXの一致"
                  },
                  "CONTAINED IN TABLE": {
                    "ラベル": "テーブル内"
                  },
                  "REGEXテーブル内": {
                    "ラベル": "REGEXテーブル内"
                  },
                  "日付": {
                    "ラベル": "日付"
                  }
                },
                "val": "含む"
              },
              "date_condition": {
                "type": "select",
                "ラベル": "日付オペレータの選択",
                "required": true,
                "show_if": "this.condition == 'DATE'",
                "options": {
                  "<": {
                    "ラベル": "前"
                  },
                  "<=": {
                    "ラベル": "前または等しい"
                  },
                  "=": {
                    "ラベル": "等しい"
                  },
                  ">": {
                    "ラベル": "以降"
                  },
                  ">=": {
                    "ラベル": "以降または等しい"
                  }
                },
                "val": "="
              },
              "case_sensitive": {
                "type": "select",
                "ラベル": "ケース・センシティブの選択",
                "required": true,
                "show_if": "this.condition == 'CONTAINS' || this.condition == 'CONTAINED IN STRING' || this.condition == '=' || this.condition == 'STARTS WITH' || this.condition == 'ENDS WITH' || this.condition == 'REGEX MATCH' || this.condition == 'NOT REGEX MATCH' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "options": {
                  "yes": {
                    "ラベル": "ケース・センシティブ"
                  },
                  "no": {
                    "ラベル": "ケース・インセンシティブ"
                  }
                },
                "val": "yes"
              },
              "date_value": {
                "type": "date",
                "ラベル": "日付の選択",
                "show_if": "this.condition=='DATE'",
                "val": "",
                "required": true
              },
              "value": {
                "type": "text",
                "ラベル": "値の入力",
                "show_if": "this.condition != 'DATE' && this.condition != 'EMPTY' && this.condition != 'NOT EMPTY' && this.condition != 'IS NULL' && this.condition != 'BLANK' && this.condition != 'NOT BLANK' && this.condition != 'IS NOT NULL' && this.condition != 'CONTAINED IN TABLE' && this.condition != 'NOT CONTAINED IN TABLE' && this.condition != 'IN REGEX TABLE' && this.condition != 'NOT IN REGEX TABLE'",
                "val": "",
                "required": true
              },
              "compare_table": {
                "type": "select",
                "ラベル": "テーブルの選択",
                "bind": "TABLES",
                "empty": "",
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "required": true
              },
              "compare_column": {
                "type": "select",
                "ラベル": "列の選択",
                "table": "this.compare_table",
                "bind": "COLUMNS",
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "required": true
              },
              "delete": {
                "type": "button",
                "ラベル": "削除",
                "function": "DELETE_ROW"
              }
            }
          },
          "apply_to_record": {
            "type": "checkbox",
            "ラベル": "レコードに適用",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "style": "margin-top: 10px",
            "breakLine": true
          },
          "apply_to_group_box": {
            "type": "fieldset",
            "ラベル": "グループに適用",
            "show_if": "apply_to_record=='false'",
            "repeat": false,
            "fields": {
              "apply_to_group_columns": {
                "type": "select",
                "ラベル": "グループ列の選択",
                "required": true,
                "width": "100%",
                "table": "input_table",
                "multiple": true,
                "bind": "COLUMNS",
                "breakLine": true
              }
            }
          }
        }
      }
    }
  }
}