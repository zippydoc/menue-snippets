{
  "options_box": {
    "type": "fieldset",
    "label": "オプションの選択",
    "repeat": false,
    "fields": {
      "options.column": {
        "type": "select",
        "label": "適用する列",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true
      },
      "options.column_value_type": {
        "type": "select",
        "label": "タイプ",
        "required": true,
        "options": {
          "static_value": {
            "label": "静的値"
          },
          "numeric_formula": {
            "label": "数式"
          },
          "text_formula": {
            "label": "テキスト数式"
          },
          "inc_dec_percent": {
            "label": "Increase / Decrease (%)"
          },
          "inc_dec_abs": {
            "label": "Increase / Decrease (Absolute)"
          }
        },
        "val": "static_value"
      },
      "options.inc_or_dec": {
        "type": "select",
        "label": "Increase Type",
        "show_if": "options.column_value_type==''inc_dec_percent'' || options.column_value_type==''inc_dec_abs''",
        "required": true,
        "options": {
          "increase": {
            "label": "Increase"
          },
          "decrease": {
            "label": "Decrease"
          }
        },
        "val": "increase"
      },
      "options.inc_or_dec_val": {
        "type": "text",
        "label": "値の入力",
        "show_if": "options.column_value_type==''inc_dec_percent'' || options.column_value_type==''inc_dec_abs''",
        "val": "1",
        "breakLine": true
      },
      "options.static_value": {
        "type": "text",
        "label": "値の入力",
        "show_if": "options.column_value_type==''static_value''",
        "val": "",
        "width": "100%"
      },
      "options.numeric_formula": {
        "type": "text",
        "label": "Input Formula, e.g. [Column1] + 2 * ([Row-1:Column3] - [Column1])",
        "show_if": "options.column_value_type==''numeric_formula''",
        "val": "",
        "width": "100%"
      },
      "options.text_formula": {
        "type": "text",
        "label": "Input Formula, e.g. [firstName] + '' '' + [lastName] + '' '' + [Row-1:Column3]",
        "show_if": "options.column_value_type==''text_formula''",
        "val": "",
        "width": "100%"
      },
      "options.use_multi_row": {
        "type": "checkbox",
        "label": "複数行オプション",
        "show_if": "options.column_value_type==''numeric_formula'' || options.column_value_type==''text_formula''",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "options.if_row_not_exist": {
        "type": "select",
        "label": "参照された行が存在しない場合",
        "show_if": "(options.column_value_type==''numeric_formula'' || options.column_value_type==''text_formula'') && options.use_multi_row==''true''",
        "required": true,
        "options": {
          "empty": {
            "label": "空または0"
          },
          "closest": {
            "label": "最も近い行の値"
          }
        },
        "val": "empty",
        "breakLine": true
      },
      "options.use_filter": {
        "type": "checkbox",
        "label": "フィルターの使用",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "filter_box": {
        "type": "fieldset",
        "label": "フィルターオプション",
        "show_if": "options.use_filter==''true''",
        "repeat": false,
        "fields": {
          "options.filter": {
            "type": "fieldset",
            "label": "フィルター条件の追加",
            "show_if": "options.use_filter==''true''",
            "repeat": true,
            "fields": {
              "initial_op": {
                "type": "select",
                "label": "論理オペレータの選択",
                "required": true,
                "show_if" :  "$index == 0",
                "options": {
                  "if": {
                    "label": "IF"
                  },
                  "if_not": {
                    "label": "IF NOT"
                  }
                },
                "val": "if"
              },
              "op": {
                "type": "select",
                "label": "論理オペレータの選択",
                "required": true,
                "show_if" :  "$index > 0",
                "options": {
                  "and": {
                    "label": "AND"
                  },
                  "or": {
                    "label": "OR"
                  },
                  "and_not": {
                    "label": "AND NOT"
                  },
                  "or_not": {
                    "label": "OR NOT"
                  }
                },
                "val": "and"
              },
              "column": {
                "type": "select",
                "label": "列の選択",
                "table": "input_table",
                "bind": "COLUMNS",
                "required": true
              },
              "condition": {
                "type": "select",
                "label": "オペレータの選択",
                "required": true,
                "options": {
                  "含む": {
                    "label": "含む"
                  },
                  "CONTAINED IN STRING": {
                    "label": "次の中に含む"
                  },
                  "次で開始": {
                    "label": "次で開始"
                  },
                  "次で終了": {
                    "label": "次で終了"
                  },
                  "=": {
                    "label": "等しい"
                  },
                  ">": {
                    "label": "超"
                  },
                  ">=": {
                    "label": "以上"
                  },
                  "<": {
                    "label": "より小さい"
                  },
                  "<=": {
                    "label": "より小さいまたは等しい"
                  },
                  "EMPTY": {
                    "label": "空です"
                  },
                  "BLANK": {
                    "label": "空白です"
                  },
                  "無効です": {
                    "label": "無効です"
                  },
                  "REGEXの一致": {
                    "label": "REGEXの一致"
                  },
                  "CONTAINED IN TABLE": {
                    "label": "テーブル内"
                  },
                  "REGEXテーブル内": {
                    "label": "REGEXテーブル内"
                  },
                  "日付": {
                    "label": "日付"
                  }
                },
                "val": "含む"
              },
              "date_condition": {
                "type": "select",
                "label": "日付オペレータの選択",
                "required": true,
                "show_if": "this.condition == ''DATE''",
                "options": {
                  "<": {
                    "label": "前"
                  },
                  "<=": {
                    "label": "前または等しい"
                  },
                  "=": {
                    "label": "等しい"
                  },
                  ">": {
                    "label": "以降"
                  },
                  ">=": {
                    "label": "以降または等しい"
                  }
                },
                "val": "="
              },
              "case_sensitive": {
                "type": "select",
                "label": "ケース・センシティブの選択",
                "required": true,
                "show_if": "this.condition == ''CONTAINS'' || this.condition == ''CONTAINED IN STRING'' || this.condition == ''='' || this.condition == ''STARTS WITH'' || this.condition == ''ENDS WITH'' || this.condition == ''REGEX MATCH'' || this.condition == ''NOT REGEX MATCH'' || this.condition == ''IN REGEX TABLE'' || this.condition == ''NOT IN REGEX TABLE''",
                "options": {
                  "yes": {
                    "label": "ケース・センシティブ"
                  },
                  "no": {
                    "label": "ケース・インセンシティブ"
                  }
                },
                "val": "yes"
              },
              "date_value": {
                "type": "date",
                "label": "日付の選択",
                "show_if": "this.condition==''DATE''",
                "val": "1/31/2020",
                "required": true
              },
              "value": {
                "type": "text",
                "label": "値の入力",
                "show_if": "this.condition != ''DATE'' && this.condition != ''EMPTY'' && this.condition != ''NOT EMPTY'' && this.condition != ''BLANK'' && this.condition != ''NOT BLANK'' && this.condition != ''IS NULL'' && this.condition != ''IS NOT NULL'' && this.condition != ''CONTAINED IN TABLE'' && this.condition != ''NOT CONTAINED IN TABLE'' && this.condition != ''IN REGEX TABLE'' && this.condition != ''NOT IN REGEX TABLE''",
                "val": "",
                "required": true
              },
              "compare_table": {
                "type": "select",
                "label": "テーブルの選択",
                "bind": "TABLES",
                "empty": "",
                "show_if": "this.condition == ''CONTAINED IN TABLE'' || this.condition == ''NOT CONTAINED IN TABLE'' || this.condition == ''IN REGEX TABLE'' || this.condition == ''NOT IN REGEX TABLE''",
                "required": true
              },
              "compare_column": {
                "type": "select",
                "label": "列の選択",
                "table": "this.compare_table",
                "bind": "COLUMNS",
                "show_if": "this.condition == ''CONTAINED IN TABLE'' || this.condition == ''NOT CONTAINED IN TABLE'' || this.condition == ''IN REGEX TABLE'' || this.condition == ''NOT IN REGEX TABLE''",
                "required": true
              },
              "delete": {
                "type": "button",
                "label": "削除",
                "function": "DELETE_ROW"
              }
            }
          },
          "options.apply_to_record": {
            "type": "checkbox",
            "label": "レコードに適用",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "style": "margin-top: 10px",
            "breakLine": true
          },
          "apply_to_group_box": {
            "type": "fieldset",
            "label": "グループに適用",
            "show_if": "options.apply_to_record==''false''",
            "repeat": false,
            "fields": {
              "options.apply_to_group_columns": {
                "type": "select",
                "label": "グループ列の選択",
                "required": true,
                "width": "100%",
                "table": "input_table",
                "multiple": true,
                "bind": "COLUMNS",
                "breakLine": true
              }
            }
          }
        }
      }
    }
  }
}