{
  "options": {
    "type": "fieldset",
    "label": "オプションの選択",
    "repeat": false,
    "fields": {
      "options.type": {
        "type": "select",
        "label": "タイプ",
        "options": {
          "standard": {
            "label": "標準影響曲線の生成"
          },
          "custom": {
            "label": "カスタム影響曲線の生成"
          },
          "apply": {
            "label": "影響曲線を適用"
          }
        },
        "val": "standard",
        "breakLine": true
      },
      "options.standard.start": {
        "type": "text",
        "label": "初期",
        "show_if": "options.type=='standard' && options.standard.end_value_equals_initial_value=='no'",
        "val": "1",
        "required": true
      },
      "options.standard.maximum": {
        "type": "text",
        "label": "最大期間",
        "show_if": "options.type=='standard'",
        "val": "50",
        "required": true
      },
      "options.standard.end": {
        "type": "text",
        "label": "終了期間",
        "show_if": "options.type=='standard'",
        "val": "100",
        "required": true,
        "breakLine": true
      },
      "options.standard.multiplier_at_maximum_impact_level": {
        "type": "text",
        "label": "最大影響レベルの乗数",
        "show_if": "options.type=='standard'",
        "width": "100%",
        "val": "2",
        "required": true,
        "breakLine": true
      },
      "options.standard.end_value_equals_initial_value": {
        "type": "checkbox",
        "label": "終了値が初期値と等しい",
        "show_if": "options.type=='standard'",
        "width": "100%",
        "val": "yes",
        "isOn": "yes",
        "isOff": "no",
        "breakLine": true
      },
      "options.standard.multiplier_end_value": {
        "type": "text",
        "label": "最終値の乗数",
        "width": "100%",
        "show_if": "options.type=='standard' && options.standard.end_value_equals_initial_value=='no'",
        "val": "",
        "breakLine": true
      },
      "options.standard.maximum_plateau": {
        "type": "checkbox",
        "label": "最大高原",
        "show_if": "options.type=='standard'",
        "width": "100%",
        "val": "yes",
        "isOn": "yes",
        "isOff": "no",
        "breakLine": true
      },
      "options.standard.no_of_periods_prior_defined_maximum_point": {
        "type": "text",
        "label": "定義された最大ポイントより前の期間の数",
        "show_if": "options.type=='standard' && options.standard.maximum_plateau=='yes'",
        "val": "0",
        "style": "width: 250px"
      },
      "options.standard.no_of_periods_post_defined_maximum_point": {
        "type": "text",
        "label": "定義された最大ポイント以降の期間数",
        "show_if": "options.type=='standard' && options.standard.maximum_plateau=='yes'",
        "val": "0",
        "style": "width: 250px",
        "breakLine": true
      },
      "options.standard.left_slope": {
        "type": "select",
        "label": "左傾斜",
        "show_if": "options.type=='standard'",
        "options": {
          "vertical": {
            "label": "垂直"
          },
          "linear": {
            "label": "線形"
          },
          "standard_distribution": {
            "label": "標準分布"
          }
        },
        "val": "standard_distribution"
      },
      "options.standard.use_auto_calculated_sigma_for_left_slope": {
        "type": "checkbox",
        "label": "自動計算された左シグマ",
        "show_if": "options.type=='standard' && options.standard.left_slope=='standard_distribution'",
        "val": "true",
        "isOn": "true",
        "isOff": "false"
      },
      "options.standard.left_slope_sigma": {
        "type": "text",
        "label": "左傾斜シグマ",
        "show_if": "options.type=='standard' && options.standard.left_slope=='standard_distribution' && options.standard.use_auto_calculated_sigma_for_left_slope=='false'",
        "val": ""
      },
      "options.standard.right_slope": {
        "type": "select",
        "label": "右斜面",
        "show_if": "options.type=='standard'",
        "required": true,
        "options": {
          "vertical": {
            "label": "垂直"
          },
          "linear": {
            "label": "線形"
          },
          "standard_distribution": {
            "label": "標準分布"
          }
        },
        "val": "standard_distribution"
      },
      "options.standard.use_auto_calculated_sigma_for_right_slope": {
        "type": "checkbox",
        "label": "自動計算された右シグマ",
        "show_if": "options.type=='standard' && options.standard.right_slope=='standard_distribution'",
        "val": "true",
        "isOn": "true",
        "isOff": "false"
      },
      "options.standard.right_slope_sigma": {
        "type": "text",
        "label": "右斜面シグマ",
        "show_if": "options.type=='standard' && options.standard.right_slope=='standard_distribution' && options.standard.use_auto_calculated_sigma_for_right_slope=='false'",
        "val": "",
        "breakLine": true
      },
      "options.standard.event_name": {
        "type": "text",
        "label": "イベント名",
        "show_if": "options.type=='standard'",
        "val": "Event"
      },
      "options.custom.event_table": {
        "type": "select",
        "label": "イベントテーブル",
        "show_if": "options.type=='custom'",
        "bind": "TABLES",
        "empty": "",
        "required": true,
        "breakLine": true
      },
      "options.custom.event_date_column": {
        "type": "select",
        "label": "イベント日付列",
        "show_if": "options.type=='custom'",
        "required": true,
        "table": "options.custom.event_table",
        "bind": "COLUMNS"
      },
      "options.custom.event_name_column": {
        "type": "select",
        "label": "イベント名列",
        "show_if": "options.type=='custom'",
        "required": true,
        "table": "options.custom.event_table",
        "bind": "COLUMNS"
      },
      "options.custom.event_name": {
        "type": "text",
        "label": "イベント名",
        "show_if": "options.type=='custom'",
        "val": "Weekend",
        "required": true,
        "breakLine": true
      },
      "options.custom.base_period": {
        "type": "select",
        "label": "基準期間",
        "show_if": "options.type=='custom'",
        "required": true,
        "options": {
          "months": {
            "label": "過去Nヵ月間"
          },
          "weeks": {
            "label": "過去N週間"
          },
          "days": {
            "label": "過去N日間"
          }
        },
        "val": "days"
      },
      "options.custom.base_period_n": {
        "type": "text",
        "label": "N",
        "show_if": "options.type=='custom'",
        "val": "5",
        "required": true,
        "breakLine": true
      },
      "options.custom.leading_impact_days": {
        "type": "text",
        "label": "主要な影響期間",
        "show_if": "options.type=='custom'",
        "val": "0",
        "required": true
      },
      "options.custom.trailing_impact_days": {
        "type": "text",
        "label": "一連の影響期間",
        "show_if": "options.type=='custom'",
        "val": "0",
        "required": true,
        "breakLine": true
      },
      "options.custom.value_column": {
        "type": "select",
        "label": "値列",
        "show_if": "options.type=='custom'",
        "required": true,
        "table": "options.custom.event_table",
        "bind": "COLUMNS",
        "breakLine": true
      },
      "options.custom.average": {
        "type": "hidden",
        "val": "true"
      },
      "options.apply.event_name": {
        "type": "text",
        "label": "イベント名",
        "show_if": "options.type=='apply'",
        "val": "Weekend",
        "required": true,
        "breakLine": true
      },
      "apply_event_table_box": {
        "type": "fieldset",
        "label": "イベントテーブルの選択",
        "show_if": "options.type=='apply'",
        "repeat": false,
        "fields": {
          "options.apply.event_table": {
            "type": "select",
            "label": "イベントテーブル",
            "bind": "TABLES",
            "empty": "",
            "required": true,
            "breakLine": true
          },
          "options.apply.event_table_event_date_column": {
            "type": "select",
            "label": "イベント日付列",
            "required": true,
            "table": "options.apply.event_table",
            "bind": "COLUMNS"
          },
          "options.apply.event_table_event_name_column": {
            "type": "select",
            "label": "イベント名列",
            "required": true,
            "table": "options.apply.event_table",
            "bind": "COLUMNS"
          },
          "options.apply.event_table_value_column": {
            "type": "select",
            "label": "値列",
            "required": true,
            "table": "options.apply.event_table",
            "bind": "COLUMNS",
            "breakLine": true
          }
        }
      },
      "apply_impact_table_box": {
        "type": "fieldset",
        "label": "影響テーブルの選択",
        "show_if": "options.type=='apply'",
        "repeat": false,
        "fields": {
          "options.apply.impact_table": {
            "type": "select",
            "label": "影響テーブル",
            "bind": "TABLES",
            "empty": "",
            "required": true,
            "breakLine": true
          },
          "options.apply.on_average": {
            "type": "hidden",
            "val": "true"
          },
          "options.apply.impact_table_event_date_column": {
            "type": "select",
            "label": "イベント日付列",
            "required": true,
            "table": "options.apply.impact_table",
            "bind": "COLUMNS"
          },
          "options.apply.impact_table_event_name_column": {
            "type": "select",
            "label": "イベント名列",
            "required": true,
            "table": "options.apply.impact_table",
            "bind": "COLUMNS"
          },
          "options.apply.impact_table_impact_column": {
            "type": "select",
            "label": "影響列",
            "required": true,
            "table": "options.apply.impact_table",
            "bind": "COLUMNS",
            "breakLine": true
          }
        }
      }
    }
  }
}