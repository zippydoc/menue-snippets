{
  "options_box": {
    "type": "fieldset",
    "label": "オプション",
    "repeat": false,
    "fields": {
      "options.task": {
        "type": "hidden",
        "val": "multi_column"
      },
      "options.add_columns": {
        "type": "fieldset",
        "label": "新しい列の追加",
        "repeat": true,
        "fields": {
          "new_column_name": {
            "type": "text",
            "label": "新しい列名",
            "val": "",
            "breakLine": true
          },
          "multi_column_functions__function": {
            "type": "select",
            "label": "機能",
            "required": true,
            "options": {
              "sum": {
                "label": "合計"
              },
              "average": {
                "label": "平均"
              },
              "median": {
                "label": "中央値"
              },
              "max": {
                "label": "最大"
              },
              "min": {
                "label": "最小"
              },
              "standard_deviation": {
                "label": "標準偏差"
              },
              "product": {
                "label": "製品"
              },
              "quota": {
                "label": "割当"
              },
              "absolute_growth": {
                "label": "絶対成長"
              },
              "relative_growth": {
                "label": "相対的成長"
              },
              "compound_growth": {
                "label": "複合成長"
              },
              "static_value": {
                "label": "静的値"
              },
              "numeric_formula": {
                "label": "数式"
              },
              "text_formula": {
                "label": "テキスト数式"
              }
            },
            "val": "sum"
          },
          "multi_column_functions__sel_columns": {
            "type": "select",
            "label": "列(複数可)の選択",
            "show_if": "this.multi_column_functions__function==''sum'' || this.multi_column_functions__function==''average'' || this.multi_column_functions__function==''median'' || this.multi_column_functions__function==''max'' || this.multi_column_functions__function==''min'' || this.multi_column_functions__function==''standard_deviation'' || this.multi_column_functions__function==''product''",
            "table": "input_table",
            "bind": "COLUMNS",
            "multiple": true,
            "required": true
          },
          "multi_column_functions__column_a": {
            "type": "select",
            "label": "A列を選択",
            "show_if": "this.multi_column_functions__function==''quota'' || this.multi_column_functions__function==''absolute_growth'' || this.multi_column_functions__function==''relative_growth'' || this.multi_column_functions__function==''compound_growth''",
            "table": "input_table",
            "bind": "COLUMNS",
            "required": true
          },
          "multi_column_functions__column_b": {
            "type": "select",
            "label": "B列を選択",
            "show_if": "this.multi_column_functions__function==''quota'' || this.multi_column_functions__function==''absolute_growth'' || this.multi_column_functions__function==''relative_growth'' || this.multi_column_functions__function==''compound_growth''",
            "table": "input_table",
            "bind": "COLUMNS",
            "required": true
          },
          "multi_column_functions__n_value": {
            "type": "text",
            "label": "N (正の整数)",
            "show_if": "this.multi_column_functions__function==''compound_growth''",
            "val": "1",
            "required": true
          },
          "static_value": {
            "type": "text",
            "label": "値の入力",
            "show_if": "this.multi_column_functions__function==''static_value''",
            "val": "",
            "width": "100%"
          },
          "numeric_formula": {
            "type": "text",
            "label": "Input Formula, e.g. [Column1] + 2 * ([Row-1:Column3] - [Column1])",
            "show_if": "this.multi_column_functions__function==''numeric_formula''",
            "val": "",
            "width": "100%"
          },
          "text_formula": {
            "type": "text",
            "label": "Input Formula, e.g. [firstName] + '' '' + [lastName] + '' '' + [Row-1:Column3]",
            "show_if": "this.multi_column_functions__function==''text_formula''",
            "val": "",
            "width": "100%"
          },
          "use_multi_row": {
            "type": "checkbox",
            "label": "複数行オプション",
            "show_if": "this.multi_column_functions__function==''numeric_formula'' || this.multi_column_functions__function==''text_formula''",
            "val": "false",
            "isOn": "true",
            "isOff": "false"
          },
          "if_row_not_exist": {
            "type": "select",
            "label": "参照された行が存在しない場合",
            "show_if": "this.use_multi_row==''true'' && (this.multi_column_functions__function==''numeric_formula'' || this.multi_column_functions__function==''text_formula'')",
            "required": true,
            "options": {
              "empty": {
                "label": "空または0"
              },
              "closest": {
                "label": "最も近い行の値"
              }
            },
            "val": "empty",
            "breakLine": true
          },
          "format__category": {
            "type": "select",
            "label": "フォーマット",
            "required": true,
            "options": {
              "standard": {
                "label": "標準"
              },
              "number": {
                "label": "数"
              },
              "percentage": {
                "label": "割合"
              },
              "text": {
                "label": "テキスト"
              },
              "date": {
                "label": "日付"
              },
              "currency": {
                "label": "通貨"
              }
            },
            "val": "standard"
          },
          "format__rounding": {
            "type": "select",
            "label": "四捨五入",
            "show_if": "this.format__category==''number'' || this.format__category==''percentage'' || this.format__category==''currency''",
            "required": true,
            "options": {
              "no_rounding": {
                "label": "四捨五入無し"
              },
              "0": {
                "label": "0桁"
              },
              "1": {
                "label": "1桁"
              },
              "2": {
                "label": "2桁"
              },
              "3": {
                "label": "3桁"
              },
              "4": {
                "label": "4桁"
              },
              "5": {
                "label": "5桁"
              },
              "6": {
                "label": "6桁"
              },
              "7": {
                "label": "7桁"
              },
              "8": {
                "label": "8桁"
              },
              "9": {
                "label": "9桁"
              }
            },
            "val": "2"
          },
          "format__use_1000_separator": {
            "type": "checkbox",
            "label": "1000セパレータ(.)を使用",
            "show_if": "this.format__category==''number'' || this.format__category==''percentage'' || this.format__category==''currency''",
            "val": "true",
            "isOn": "true",
            "isOff": "false"
          },
          "format__currency_symbol": {
            "type": "select",
            "label": "シンボル",
            "show_if": "this.format__category==''currency''",
            "required": true,
            "options": {
              "dollar": {
                "label": "$"
              },
              "euro": {
                "label": "€"
              },
              "pound": {
                "label": "£"
              }
            },
            "val": "dollar"
          },
          "format__date_format": {
            "type": "select",
            "label": "タイプ",
            "show_if": "this.format__category==''date''",
            "required": true,
            "options": {
              "mm/dd/yyyy": {
                "label": "3/14/2012"
              },
              "D, M dd, Y": {
                "label": "Wednesday, March 14, 2012"
              },
              "yyyy-mm-dd": {
                "label": "2012-03-14"
              }
            },
            "val": "mm/dd/yyyy",
            "breakLine": true
          },
          "group_counter__inc_dec_curly_bracket": {
            "type": "checkbox",
            "label": "{}で増加/減少",
            "show_if": "this.task_type==''group_counter''",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "group_counter__inc_dec_square_bracket": {
            "type": "checkbox",
            "label": "[]で増加/減少",
            "show_if": "this.task_type==''group_counter''",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "group_counter__inc_dec_parenthesis": {
            "type": "checkbox",
            "label": "()で増加/減少",
            "show_if": "this.task_type==''group_counter''",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "group_counter__custom": {
            "type": "checkbox",
            "label": "カスタマイズされたグループカウンター",
            "show_if": "this.task_type==''group_counter''",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "group_counter__column": {
            "type": "select",
            "label": "列",
            "show_if": "this.task_type==''group_counter'' && this.group_counter__custom==''true''",
            "table": "input_table",
            "bind": "COLUMNS",
            "required": true
          },
          "group_counter__type": {
            "type": "select",
            "label": "いつ",
            "show_if": "this.task_type==''group_counter'' && this.group_counter__custom==''true''",
            "required": true,
            "options": {
              "starts_with": {
                "label": "次で開始"
              },
              "ends_with": {
                "label": "次で終了"
              },
              "starts_with_regex": {
                "label": "REGEXで開始"
              },
              "ends_with_regex": {
                "label": "REGEXで終了"
              }
            },
            "val": "starts_with"
          },
          "group_counter__value": {
            "type": "text",
            "label": "値の入力",
            "show_if": "this.task_type==''group_counter'' && this.group_counter__custom==''true''",
            "val": ".",
            "breakLine": true
          },
          "group_counter__label": {
            "type": "text",
            "label": "ラベルの入力",
            "show_if": "this.task_type==''group_counter'' && this.group_counter__custom==''true''",
            "val": "sentence",
            "breakLine": true
          },
          "group_counter__if_end_of_string_start_labeling_with_next_record": {
            "type": "checkbox",
            "label": "文字列の終わりが次のレコードでラベリングを開始する場合",
            "show_if": "this.task_type==''group_counter'' && this.group_counter__custom==''true'' && (this.group_counter__type==''starts_with'' || this.group_counter__type==''starts_with_regex'')",
            "val": "true",
            "isOn": "true",
            "isOff": "false"
          },
          "group_counter__if_begin_of_string_start_labeling_with_previous_record": {
            "type": "checkbox",
            "label": "文字列の始まりが前のレコードでラベリングを開始する場合",
            "show_if": "this.task_type==''group_counter'' && this.group_counter__custom==''true'' && (this.group_counter__type==''ends_with'' || this.group_counter__type==''ends_with_regex'')",
            "val": "true",
            "isOn": "true",
            "isOff": "false"
          },
          "group_counter__always_include": {
            "type": "checkbox",
            "label": "常に含む",
            "show_if": "this.task_type==''group_counter'' && this.group_counter__custom==''true''",
            "val": "true",
            "isOn": "true",
            "isOff": "false"
          },
          "apply_to_group__enabled": {
            "type": "checkbox",
            "label": "グループに適用",
            "show_if": "this.multi_column_functions__function!=''static_value''",
            "val": "false",
            "isOn": "true",
            "isOff": "false"
          },
          "apply_to_group__group_columns": {
            "type": "select",
            "label": "列(複数可)のグループ",
            "show_if": "this.apply_to_group__enabled == ''true'' && this.multi_column_functions__function!=''static_value''",
            "table": "input_table",
            "bind": "COLUMNS",
            "multiple": true,
            "required": true
          },
          "delete": {
            "type": "button",
            "label": "削除",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.use_filter": {
        "type": "checkbox",
        "label": "フィルターの使用",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "style": "margin-top: 10px",
        "breakLine": true
      },
      "filter_box": {
        "type": "fieldset",
        "label": "フィルターオプション",
        "show_if": "options.use_filter==''true''",
        "repeat": false,
        "fields": {
          "options.filter": {
            "type": "fieldset",
            "label": "フィルター条件の追加",
            "repeat": true,
            "fields": {
              "initial_op": {
                "type": "select",
                "label": "論理オペレータの選択",
                "required": true,
                "show_if" :  "$index == 0",
                "options": {
                  "if": {
                    "label": "IF"
                  },
                  "if_not": {
                    "label": "IF NOT"
                  }
                },
                "val": "if"
              },
              "op": {
                "type": "select",
                "label": "論理オペレータの選択",
                "required": true,
                "show_if" :  "$index > 0",
                "options": {
                  "and": {
                    "label": "AND"
                  },
                  "or": {
                    "label": "OR"
                  },
                  "and_not": {
                    "label": "AND NOT"
                  },
                  "or_not": {
                    "label": "OR NOT"
                  }
                },
                "val": "and"
              },
              "column": {
                "type": "select",
                "label": "列の選択",
                "table": "input_table",
                "bind": "COLUMNS",
                "required": true
              },
              "condition": {
                "type": "select",
                "label": "オペレータの選択",
                "required": true,
                "options": {
                  "含む": {
                    "label": "含む"
                  },
                  "CONTAINED IN STRING": {
                    "label": "次の中に含む"
                  },
                  "次で開始": {
                    "label": "次で開始"
                  },
                  "次で終了": {
                    "label": "次で終了"
                  },
                  "=": {
                    "label": "等しい"
                  },
                  ">": {
                    "label": "超"
                  },
                  ">=": {
                    "label": "以上"
                  },
                  "<": {
                    "label": "より小さい"
                  },
                  "<=": {
                    "label": "より小さいまたは等しい"
                  },
                  "EMPTY": {
                    "label": "空です"
                  },
                  "BLANK": {
                    "label": "空白です"
                  },
                  "無効です": {
                    "label": "無効です"
                  },
                  "REGEXの一致": {
                    "label": "REGEXの一致"
                  },
                  "CONTAINED IN TABLE": {
                    "label": "テーブル内"
                  },
                  "REGEXテーブル内": {
                    "label": "REGEXテーブル内"
                  },
                  "日付": {
                    "label": "日付"
                  }
                },
                "val": "含む"
              },
              "date_condition": {
                "type": "select",
                "label": "日付オペレータの選択",
                "required": true,
                "show_if": "this.condition == ''DATE''",
                "options": {
                  "<": {
                    "label": "前"
                  },
                  "<=": {
                    "label": "前または等しい"
                  },
                  "=": {
                    "label": "等しい"
                  },
                  ">": {
                    "label": "以降"
                  },
                  ">=": {
                    "label": "以降または等しい"
                  }
                },
                "val": "="
              },
              "case_sensitive": {
                "type": "select",
                "label": "ケース・センシティブの選択",
                "required": true,
                "show_if": "this.condition == ''CONTAINS'' || this.condition == ''CONTAINED IN STRING'' || this.condition == ''='' || this.condition == ''STARTS WITH'' || this.condition == ''ENDS WITH'' || this.condition == ''REGEX MATCH'' || this.condition == ''NOT REGEX MATCH'' || this.condition == ''IN REGEX TABLE'' || this.condition == ''NOT IN REGEX TABLE''",
                "options": {
                  "yes": {
                    "label": "ケース・センシティブ"
                  },
                  "no": {
                    "label": "ケース・インセンシティブ"
                  }
                },
                "val": "yes"
              },
              "date_value": {
                "type": "date",
                "label": "日付の選択",
                "show_if": "this.condition==''DATE''",
                "val": "1/31/2020",
                "required": true
              },
              "value": {
                "type": "text",
                "label": "値の入力",
                "show_if": "this.condition != ''DATE'' && this.condition != ''EMPTY'' && this.condition != ''NOT EMPTY'' && this.condition != ''BLANK'' && this.condition != ''NOT BLANK'' && this.condition != ''IS NULL'' && this.condition != ''IS NOT NULL'' && this.condition != ''CONTAINED IN TABLE'' && this.condition != ''NOT CONTAINED IN TABLE'' && this.condition != ''IN REGEX TABLE'' && this.condition != ''NOT IN REGEX TABLE''",
                "val": "",
                "required": true
              },
              "compare_table": {
                "type": "select",
                "label": "テーブルの選択",
                "bind": "TABLES",
                "empty": "",
                "show_if": "this.condition == ''CONTAINED IN TABLE'' || this.condition == ''NOT CONTAINED IN TABLE'' || this.condition == ''IN REGEX TABLE'' || this.condition == ''NOT IN REGEX TABLE''",
                "required": true
              },
              "compare_column": {
                "type": "select",
                "label": "列の選択",
                "table": "this.compare_table",
                "bind": "COLUMNS",
                "show_if": "this.condition == ''CONTAINED IN TABLE'' || this.condition == ''NOT CONTAINED IN TABLE'' || this.condition == ''IN REGEX TABLE'' || this.condition == ''NOT IN REGEX TABLE''",
                "required": true
              },
              "delete": {
                "type": "button",
                "label": "削除",
                "function": "DELETE_ROW"
              }
            }
          },
          "options.apply_to_record": {
            "type": "checkbox",
            "label": "レコードに適用",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "style": "margin-top: 10px",
            "breakLine": true
          },
          "apply_to_group_box": {
            "type": "fieldset",
            "label": "グループに適用",
            "show_if": "options.apply_to_record==''false''",
            "repeat": false,
            "fields": {
              "options.apply_to_group_columns": {
                "type": "select",
                "label": "グループ列の選択",
                "required": true,
                "width": "100%",
                "table": "input_table",
                "multiple": true,
                "bind": "COLUMNS",
                "breakLine": true
              }
            }
          }
        }
      }
    }
  }
}