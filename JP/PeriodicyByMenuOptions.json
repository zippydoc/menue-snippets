{
  "options": {
    "type": "fieldset",
    "label": "オプションの選択",
    "repeat": false,
    "fields": {
      "options.task_symbol": {
        "type": "hidden",
        "val": "periodicy_by_menu"
      },
      "options.custom.table": {
        "type": "fieldset",
        "label": "企画ポジション",
        "repeat": true,
        "fields": {
          "item": {
            "type": "text",
            "label": "Item",
            "val": "",
            "required": true
          },
          "position": {
            "type": "text",
            "label": "ポジション",
            "val": "",
            "required": true,
            "breakLine": true
          },
          "amount": {
            "type": "number",
            "label": "量",
            "val": "",
            "required": true
          },
          "initial_date": {
            "type": "date",
            "label": "初日",
            "val": "",
            "required": true
          },
          "periodicy": {
            "type": "select",
            "label": "周期",
            "required": true,
            "options": {
              "One-Off": {
                "label": "One-Off"
              },
              "Daily": {
                "label": "デイリー"
              },
              "Weekly": {
                "label": "ウィークリー"
              },
              "Monthly": {
                "label": "月次"
              },
              "Quarterly": {
                "label": "四半期"
              },
              "Yearly": {
                "label": "Yearly"
              }
            },
            "val": "One-Off"
          },
          "growth": {
            "type": "number",
            "label": "Growth in %",
            "show_if": "this.periodicy!='One-Off'",
            "val": "",
            "required": true
          },
          "growth_period": {
            "type": "select",
            "label": "成長期",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Weekly": {
                "label": "ウィークリー"
              },
              "Monthly": {
                "label": "月次"
              },
              "Quarterly": {
                "label": "四半期毎"
              },
              "Yearly": {
                "label": "年次"
              }
            },
            "val": "Weekly"
          },
          "growth_pattern": {
            "type": "select",
            "label": "成長パターン",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Linear": {
                "label": "線形"
              },
              "Compounding": {
                "label": "複利計算"
              },
              "Jump-Fix Linear": {
                "label": "Jump-Fix Linear"
              },
              "Jump-Fix Compounding": {
                "label": "Jump-Fix Compounding"
              }
            },
            "val": "Compounding"
          },
          "final_date": {
            "type": "date",
            "label": "最終日",
            "show_if": "this.periodicy!='One-Off'",
            "val": ""
          },
          "delete": {
            "type": "button",
            "label": "削除",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.end_date": {
        "type": "date",
        "label": "テーブルの終了日",
        "val": "",
        "required": true,
        "style": "width: 300px"
      }
    }
  }
}