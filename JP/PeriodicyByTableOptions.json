{
  "options": {
    "type": "fieldset",
    "label": "周期オプションの選択",
    "repeat": false,
    "fields": {
      "options.task_symbol": {
        "type": "hidden",
        "val": "periodicy_by_table"
      },
      "options.standard_table": {
        "type": "checkbox",
        "label": "標準周期表",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "style": "margin-top: 10px",
        "breakLine": true
      },
      "options.initial_date": {
        "type": "select",
        "label": "初日",
        "show_if": "options.standard_table=='false'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true
      },
      "options.period": {
        "type": "select",
        "label": "ピリオディシー（例：月次、四半期）",
        "show_if": "options.standard_table=='false'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true
      },
      "options.final_date": {
        "type": "select",
        "label": "最終日",
        "show_if": "options.standard_table=='false'",
        "table": "table_id",
        "bind": "COLUMNS",
        "breakLine": true
      },
      "options.volume": {
        "type": "select",
        "label": "量",
        "show_if": "options.standard_table=='false'",
        "table": "table_id",
        "bind": "COLUMNS"
      },
      "options.growth": {
        "type": "select",
        "label": "成長",
        "show_if": "options.standard_table=='false'",
        "table": "table_id",
        "bind": "COLUMNS"
      },
      "options.growth_period": {
        "type": "select",
        "label": "成長期",
        "show_if": "options.standard_table=='false'",
        "options": {
          "selected_period": {
            "label": "周期に等しい"
          },
          "week_on_week": {
            "label": "週ごと"
          },
          "month_on_month": {
            "label": "月次"
          },
          "quarter_on_quarter": {
            "label": "四半期毎"
          },
          "year_on_year": {
            "label": "年次"
          },
          "column": {
            "label": "列の選択"
          }
        },
        "val": "selected_period"
      },
      "options.growth_period_column": {
        "type": "select",
        "label": "成長期の列",
        "show_if": "options.standard_table=='false' && options.growth_period=='column'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.use_growth_pattern_column": {
        "type": "checkbox",
        "label": "成長パターンの使用",
        "show_if": "options.standard_table=='false'",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "options.growth_pattern_column": {
        "type": "select",
        "label": "成長パターン",
        "show_if": "options.standard_table=='false' && options.use_growth_pattern_column=='true'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.end_date": {
        "type": "date",
        "label": "テーブルの終了日",
        "val": "",
        "required": true,
        "style": "width: 300px"
      }
    }
  }
}