{
  "options": {
    "type": "fieldset",
    "label": "オプションの選択",
    "repeat": false,
    "fields": {
      "task_label": {
        "type": "hidden",
        "val": "personnel_planning"
      },
      "options.type": {
        "type": "hidden",
        "val": "custom"
      },
      "options.custom.table": {
        "type": "fieldset",
        "label": "企画ポジション",
        "repeat": true,
        "fields": {
          "item": {
            "type": "text",
            "label": "Name",
            "val": "",
            "required": true
          },
          "position": {
            "type": "select",
            "label": "ポジション",
            "options": {
              "fix salary": {
                "label": "固定給"
              },
              "bonus": {
                "label": "ボーナス"
              },
              "other compensation": {
                "label": "その他の報酬"
              }
            },
            "val": "fix salary",
            "required": true
          },
          "amount": {
            "type": "number",
            "label": "量",
            "val": "",
            "required": true
          },
          "initial_date": {
            "type": "date",
            "label": "初日",
            "val": "",
            "required": true
          },
          "periodicy": {
            "type": "select",
            "label": "周期",
            "required": true,
            "options": {
              "One-Off": {
                "label": "One-Off"
              },
              "Daily": {
                "label": "デイリー"
              },
              "Work-Daily": {
                "label": "Work-Daily"
              },
              "Weekly": {
                "label": "ウィークリー"
              },
              "Monthly": {
                "label": "月次"
              },
              "Quarterly": {
                "label": "四半期"
              },
              "Yearly": {
                "label": "Yearly"
              }
            },
            "val": "One-Off"
          },
          "growth": {
            "type": "number",
            "label": "成長",
            "show_if": "this.periodicy!='One-Off'",
            "val": "",
            "required": true
          },
          "growth_period": {
            "type": "select",
            "label": "成長期",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Weekly": {
                "label": "ウィークリー"
              },
              "Monthly": {
                "label": "月次"
              },
              "Quarterly": {
                "label": "四半期毎"
              },
              "Yearly": {
                "label": "年次"
              }
            },
            "val": "Weekly"
          },
          "growth_pattern": {
            "type": "select",
            "label": "成長パターン",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Compounding": {
                "label": "複利計算"
              },
              "Linear": {
                "label": "線形"
              },
              "Jump-Fix": {
                "label": "Jump-Fix"
              }
            },
            "val": "Compounding"
          },
          "final_date": {
            "type": "date",
            "label": "最終日",
            "show_if": "this.periodicy!='One-Off'",
            "val": ""
          },
          "delete": {
            "type": "button",
            "label": "削除",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.end_date": {
        "type": "date",
        "label": "テーブルの終了日",
        "show_if": "options.type=='process' || options.type=='custom'",
        "val": "",
        "required": true,
        "style": "width: 300px"
      }
    }
  }
}