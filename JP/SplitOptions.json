{
  "options": {
    "type": "fieldset",
    "label": "オプションの選択",
    "repeat": false,
    "fields": {
      "options.split_method": {
        "type": "select",
        "label": "分割方法",
        "required": true,
        "options": {
          "standard": {
            "label": "標準"
          },
          "regex": {
            "label": "RegEx"
          }
        },
        "val": "standard"
      },
      "options.split_type": {
        "type": "select",
        "label": "分割タイプ",
        "required": true,
        "options": {
          "split_to_columns": {
            "label": "列に分割"
          },
          "split_to_rows": {
            "label": "行に分割"
          }
        },
        "val": "split_to_columns"
      },
      "options.standard_delimiter": {
        "type": "select",
        "label": "区切り文字の分割",
        "show_if": "options.split_method=='standard'",
        "required": true,
        "options": {
          "tabs": {
            "label": "タブ"
          },
          "space": {
            "label": "スペース"
          },
          "whitespace": {
            "label": "空白"
          },
          "linebreak": {
            "label": "改行"
          },
          "punctuation": {
            "label": "句読点"
          },
          "punctuation_whitespace": {
            "label": "句読点と空白"
          },
          "custom": {
            "label": "カスタム"
          }
        },
        "val": "punctuation"
      },
      "options.delimiter": {
        "type": "text",
        "label": "区切り文字の分割",
        "show_if": "options.split_method=='standard' && options.standard_delimiter=='custom'",
        "val": ",",
        "trim": "false",
        "required": true,
        "breakLine": true
      },
      "format_frame": {
        "type": "fieldset",
        "label": "分解のため解析フォーマット",
        "show_if": "options.split_method=='regex'",
        "repeat": false,
        "fields": {
          "options.format_to_convert.regular_expression": {
            "type": "text",
            "label": "Parse Regular Expression ( ex: ([a-z]+)\\s([a-z]+) )",
            "val": "[a-z]+\\s[a-z]+",
            "required": true,
            "width": "100%",
            "trim": "false",
            "breakLine": true
          },
          "options.format_to_convert.case_insensitive": {
            "type": "checkbox",
            "label": "ケース・インセンシティブ",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          }
        }
      },
      "options.n_multi_n": {
        "type": "checkbox",
        "label": "N x N split if multiple columns are selected",
        "show_if": "options.split_type=='split_to_rows'",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      }
    }
  }
}