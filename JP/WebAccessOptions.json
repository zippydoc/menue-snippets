{
  "options": {
    "type": "fieldset", 
    "label": "オプション", 
    "repeat": false, 
    "fields": {
      "options.type": {
        "type": "radio", 
        "label": "", 
        "required": true, 
        "values": {
          "embed_code": "Generate Embed-Code", 
          "api_key": "Generate API-KEY"
        }, 
        "val": "embed_code", 
        "breakLine": true
      }, 
      "options.embed_code.framework": {
        "type": "select", 
        "label": "フロントエンドフレームワークの選択", 
        "required": true, 
        "show_if": "options.type=='embed_code'", 
        "options": {
          "jquery": {
            "label": "jQuery"
          }, 
          "react": {
            "label": "React (近日公開...)"
          }, 
          "vue": {
            "label": "Vue (近日公開...)"
          }, 
          "angular": {
            "label": "Angular (近日公開...)"
          }
        }, 
        "val": "jquery", 
        "style": "width: 200px"
      }, 
      "options.embed_code.use_datatable": {
        "type": "checkbox", 
        "label": "テーマの使用", 
        "show_if": "options.type=='embed_code'", 
        "val": "true", 
        "isOn": "true", 
        "isOff": "false", 
        "breakLine": true
      }
    }
  }
}