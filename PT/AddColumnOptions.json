{
  "options_box": {
    "type": "fieldset",
    "etiqueta": "Opções",
    "repeat": false,
    "fields": {
      "options.add_columns": {
        "type": "fieldset",
        "etiqueta": "Adicionar Novas Colunas",
        "repeat": true,
        "fields": {
          "new_column_name": {
            "type": "text",
            "etiqueta": "Novo Nome de Coluna",
            "val": "",
            "breakLine": true
          },
          "task_type": {
            "type": "select",
            "etiqueta": "Tipo de Tarefa",
            "required": true,
            "options": {
              "static_value": {
                "etiqueta": "Valor Estático"
              },
              "numeric_formula": {
                "etiqueta": "Fórmula Numérica"
              },
              "text_formula": {
                "etiqueta": "Fórmula de Texto"
              },
              "multi_column_functions": {
                "etiqueta": "Multi-Coluna"
              },
              "multi_row_functions": {
                "etiqueta": "Multi-Linha"
              }
            },
            "val": "multi_column_functions",
            "breakLine": true
          },
          "multi_column_functions__function": {
            "type": "select",
            "etiqueta": "Função",
            "show_if": "this.task_type=='multi_column_functions'",
            "required": true,
            "options": {
              "sum": {
                "etiqueta": "Soma"
              },
              "average": {
                "etiqueta": "Média"
              },
              "median": {
                "etiqueta": "Mediana"
              },
              "max": {
                "etiqueta": "Máx"
              },
              "min": {
                "etiqueta": "Mín"
              },
              "standard_deviation": {
                "etiqueta": "Desvio Padrão"
              },
              "product": {
                "etiqueta": "Produto"
              },
              "quota": {
                "etiqueta": "Quota"
              },
              "absolute_growth": {
                "etiqueta": "Crescimento Absoluto"
              },
              "relative_growth": {
                "etiqueta": "Crescimento Relativo"
              },
              "compound_growth": {
                "etiqueta": "Crescimento Composto"
              }
            },
            "val": "sum"
          },
          "multi_column_functions__sel_columns": {
            "type": "select",
            "etiqueta": "Selecionar Coluna(s)",
            "show_if": "this.task_type=='multi_column_functions' && (this.multi_column_functions__function=='sum' || this.multi_column_functions__function=='average' || this.multi_column_functions__function=='median' || this.multi_column_functions__function=='max' || this.multi_column_functions__function=='min' || this.multi_column_functions__function=='standard_deviation' || this.multi_column_functions__function=='product')",
            "table": "input_table",
            "bind": "COLUMNS",
            "multiple": true,
            "required": true
          },
          "multi_column_functions__column_a": {
            "type": "select",
            "etiqueta": "Selecionar Coluna A",
            "show_if": "this.task_type=='multi_column_functions' && (this.multi_column_functions__function=='quota' || this.multi_column_functions__function=='absolute_growth' || this.multi_column_functions__function=='relative_growth' || this.multi_column_functions__function=='compound_growth')",
            "table": "input_table",
            "bind": "COLUMNS",
            "required": true
          },
          "multi_column_functions__column_b": {
            "type": "select",
            "etiqueta": "Selecionar Coluna B",
            "show_if": "this.task_type=='multi_column_functions' && (this.multi_column_functions__function=='quota' || this.multi_column_functions__function=='absolute_growth' || this.multi_column_functions__function=='relative_growth' || this.multi_column_functions__function=='compound_growth')",
            "table": "input_table",
            "bind": "COLUMNS",
            "required": true
          },
          "multi_column_functions__n_value": {
            "type": "text",
            "etiqueta": "N (número inteiro positivo)",
            "show_if": "this.task_type=='multi_column_functions' && this.multi_column_functions__function=='compound_growth'",
            "val": "1",
            "required": true
          },
          "multi_row_functions__function": {
            "type": "select",
            "etiqueta": "Função",
            "show_if": "this.task_type=='multi_row_functions'",
            "required": true,
            "options": {
              "trailing_row_n_average": {
                "etiqueta": "Média Móvel da Fila N"
              },
              "index_from_row_n": {
                "etiqueta": "Índice da Fila N"
              },
              "absolute_growth": {
                "etiqueta": "Crescimento Absoluto"
              },
              "relative_growth": {
                "etiqueta": "Crescimento Relativo"
              },
              "compound_growth": {
                "etiqueta": "Crescimento Composto"
              }
            },
            "val": "trailing_row_n_average"
          },
          "multi_row_functions__sel_column": {
            "type": "select",
            "etiqueta": "Coluna",
            "show_if": "this.task_type=='multi_row_functions' && (this.multi_row_functions__function=='trailing_row_n_average' || this.multi_row_functions__function=='index_from_row_n' || this.multi_row_functions__function=='absolute_growth' || this.multi_row_functions__function=='relative_growth' || this.multi_row_functions__function=='compound_growth')",
            "table": "input_table",
            "bind": "COLUMNS",
            "required": true
          },
          "multi_row_functions__n_value": {
            "type": "text",
            "etiqueta": "N (número inteiro positivo)",
            "show_if": "this.task_type=='multi_row_functions' && (this.multi_row_functions__function=='trailing_row_n_average' || this.multi_row_functions__function=='index_from_row_n' || this.multi_row_functions__function=='compound_growth')",
            "val": "1",
            "required": true,
            "breakLine": true
          },
          "static_value": {
            "type": "text",
            "etiqueta": "Introduzir Valor",
            "show_if": "this.task_type=='static_value'",
            "val": "",
            "width": "100%"
          },
          "numeric_formula": {
            "type": "text",
            "etiqueta": "Fórmula de entrada, por exemplo [Coluna1] + 2 * ([Linha-1:Coluna3] - [Coluna1])",
            "show_if": "this.task_type=='numeric_formula'",
            "val": "",
            "width": "100%"
          },
          "text_formula": {
            "type": "text",
            "etiqueta": "Input Formula, e.g. [firstName] + ' ' + [lastName] + ' ' + [Row-1:Column3]",
            "show_if": "this.task_type=='text_formula'",
            "val": "",
            "width": "100%"
          },
          "use_multi_row": {
            "type": "checkbox",
            "etiqueta": "Opções Multi-Linha",
            "show_if": "this.task_type=='numeric_formula' || this.task_type=='text_formula'",
            "val": "false",
            "isOn": "true",
            "isOff": "false"
          },
          "if_row_not_exist": {
            "type": "select",
            "etiqueta": "Se a fila referida não existir",
            "show_if": "this.use_multi_row=='true' && (this.task_type=='numeric_formula' || this.task_type=='text_formula')",
            "required": true,
            "options": {
              "empty": {
                "etiqueta": "Vazio ou 0"
              },
              "closest": {
                "etiqueta": "Valor Mais Próximo da Linha"
              }
            },
            "val": "empty",
            "breakLine": true
          },
          "format__category": {
            "type": "select",
            "etiqueta": "Formato",
            "required": true,
            "options": {
              "standard": {
                "etiqueta": "Padrão"
              },
              "number": {
                "etiqueta": "Número"
              },
              "percentage": {
                "etiqueta": "Percentagem"
              },
              "text": {
                "etiqueta": "Texto"
              },
              "date": {
                "etiqueta": "Data"
              },
              "currency": {
                "etiqueta": "Moeda"
              }
            },
            "val": "standard"
          },
          "format__rounding": {
            "type": "select",
            "etiqueta": "Arredondamento",
            "show_if": "this.format__category=='number' || this.format__category=='percentage' || this.format__category=='currency'",
            "required": true,
            "options": {
              "no_rounding": {
                "etiqueta": "Arredondamento de números"
              },
              "0": {
                "etiqueta": "0 dígitos"
              },
              "1": {
                "etiqueta": "1 dígito"
              },
              "2": {
                "etiqueta": "2 dígitos"
              },
              "3": {
                "etiqueta": "3 dígitos"
              },
              "4": {
                "etiqueta": "4 dígitos"
              },
              "5": {
                "etiqueta": "5 dígitos"
              },
              "6": {
                "etiqueta": "6 dígitos"
              },
              "7": {
                "etiqueta": "7 dígitos"
              },
              "8": {
                "etiqueta": "8 dígitos"
              },
              "9": {
                "etiqueta": "9 dígitos"
              }
            },
            "val": "2"
          },
          "format__use_1000_separator": {
            "type": "checkbox",
            "etiqueta": "Use 1000 Separator(.)",
            "show_if": "this.format__category=='number' || this.format__category=='percentage' || this.format__category=='currency'",
            "val": "true",
            "isOn": "true",
            "isOff": "false"
          },
          "format__currency_symbol": {
            "type": "select",
            "etiqueta": "Símbolo",
            "show_if": "this.format__category=='currency'",
            "required": true,
            "options": {
              "dollar": {
                "etiqueta": "$"
              },
              "euro": {
                "etiqueta": "€"
              },
              "pound": {
                "etiqueta": "£"
              }
            },
            "val": "dollar"
          },
          "format__date_format": {
            "type": "select",
            "etiqueta": "Tipo",
            "show_if": "this.format__category=='date'",
            "required": true,
            "options": {
              "mm/dd/yyyy": {
                "etiqueta": "3/14/2012"
              },
              "D, M dd, Y": {
                "etiqueta": "Quarta-feira, 14 de Março de 2012"
              },
              "yyyy-mm-dd": {
                "etiqueta": "2012-03-14"
              }
            },
            "val": "mm/dd/yyyy",
            "breakLine": true
          },
          "group_counter__inc_dec_curly_bracket": {
            "type": "checkbox",
            "etiqueta": "Aumentar/Diminuir com {}",
            "show_if": "this.task_type=='group_counter'",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "group_counter__inc_dec_square_bracket": {
            "type": "checkbox",
            "etiqueta": "Aumentar/Diminuir com []",
            "show_if": "this.task_type=='group_counter'",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "group_counter__inc_dec_parenthesis": {
            "type": "checkbox",
            "etiqueta": "Aumentar/Diminuir com ()",
            "show_if": "this.task_type=='group_counter'",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "group_counter__custom": {
            "type": "checkbox",
            "etiqueta": "Contador de Grupo Personalizado",
            "show_if": "this.task_type=='group_counter'",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "group_counter__column": {
            "type": "select",
            "etiqueta": "Coluna",
            "show_if": "this.task_type=='group_counter' && this.group_counter__custom=='true'",
            "table": "input_table",
            "bind": "COLUMNS",
            "required": true
          },
          "group_counter__type": {
            "type": "select",
            "etiqueta": "Quando",
            "show_if": "this.task_type=='group_counter' && this.group_counter__custom=='true'",
            "required": true,
            "options": {
              "starts_with": {
                "etiqueta": "INICIA COM"
              },
              "ends_with": {
                "etiqueta": "TERMINA COM"
              },
              "starts_with_regex": {
                "etiqueta": "COMEÇA COM EXPRESSÃO REGULAR"
              },
              "ends_with_regex": {
                "etiqueta": "TERMINA COM EXPRESSÃO REGULAR"
              }
            },
            "val": "starts_with"
          },
          "group_counter__value": {
            "type": "text",
            "etiqueta": "Introduzir Valor",
            "show_if": "this.task_type=='group_counter' && this.group_counter__custom=='true'",
            "val": ".",
            "breakLine": true
          },
          "group_counter__label": {
            "type": "text",
            "etiqueta": "Introduzir Rótulo",
            "show_if": "this.task_type=='group_counter' && this.group_counter__custom=='true'",
            "val": "sentence",
            "breakLine": true
          },
          "group_counter__if_end_of_string_start_labeling_with_next_record": {
            "type": "checkbox",
            "etiqueta": "Se Fim-da-String, começar a rotular com o registo seguinte",
            "show_if": "this.task_type=='group_counter' && this.group_counter__custom=='true' && (this.group_counter__type=='starts_with' || this.group_counter__type=='starts_with_regex')",
            "val": "true",
            "isOn": "true",
            "isOff": "false"
          },
          "group_counter__if_begin_of_string_start_labeling_with_previous_record": {
            "type": "checkbox",
            "etiqueta": "Se Início-da-String, começar a rotular com o registo anterior",
            "show_if": "this.task_type=='group_counter' && this.group_counter__custom=='true' && (this.group_counter__type=='ends_with' || this.group_counter__type=='ends_with_regex')",
            "val": "true",
            "isOn": "true",
            "isOff": "false"
          },
          "group_counter__always_include": {
            "type": "checkbox",
            "etiqueta": "Incluir sempre",
            "show_if": "this.task_type=='group_counter' && this.group_counter__custom=='true'",
            "val": "true",
            "isOn": "true",
            "isOff": "false"
          },
          "apply_to_group__enabled": {
            "type": "checkbox",
            "etiqueta": "Aplicar ao Grupo",
            "show_if": "this.task_type!='static_value'",
            "val": "false",
            "isOn": "true",
            "isOff": "false"
          },
          "apply_to_group__group_columns": {
            "type": "select",
            "etiqueta": "Agrupar Coluna(s)",
            "show_if": "this.apply_to_group__enabled == 'true' && this.task_type!='static_value'",
            "table": "input_table",
            "bind": "COLUMNS",
            "multiple": true,
            "required": true
          },
          "delete": {
            "type": "button",
            "etiqueta": "Apagar",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.use_filter": {
        "type": "checkbox",
        "etiqueta": "Utilizar Filtro",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "style": "margin-top: 10px",
        "breakLine": true
      },
      "filter_box": {
        "type": "fieldset",
        "etiqueta": "Opções de Filtro",
        "show_if": "options.use_filter=='true'",
        "repeat": false,
        "fields": {
          "options.filter": {
            "type": "fieldset",
            "etiqueta": "Adicionar Condições de Filtro",
            "repeat": true,
            "fields": {
              "initial_op": {
                "type": "select",
                "etiqueta": "Selecionar Operador Lógico",
                "required": true,
                "show_if" :  "$index == 0",
                "options": {
                  "if": {
                    "etiqueta": "IF"
                  },
                  "if_not": {
                    "etiqueta": "IF NOT"
                  }
                },
                "val": "if"
              },
              "op": {
                "type": "select",
                "etiqueta": "Selecionar Operador Lógico",
                "required": true,
                "show_if" :  "$index > 0",
                "options": {
                  "and": {
                    "etiqueta": "AND"
                  },
                  "or": {
                    "etiqueta": "OR"
                  },
                  "and_not": {
                    "etiqueta": "AND NOT"
                  },
                  "or_not": {
                    "etiqueta": "OR NOT"
                  }
                },
                "val": "and"
              },
              "column": {
                "type": "select",
                "etiqueta": "Selecionar Coluna",
                "table": "input_table",
                "bind": "COLUMNS",
                "required": true
              },
              "condition": {
                "type": "select",
                "etiqueta": "Selecionar Operador",
                "required": true,
                "options": {
                  "CONTÉM": {
                    "etiqueta": "CONTÉM"
                  },
                  "CONTAINED IN STRING": {
                    "etiqueta": "CONTIDO EM"
                  },
                  "INICIA COM": {
                    "etiqueta": "INICIA COM"
                  },
                  "TERMINA COM": {
                    "etiqueta": "TERMINA COM"
                  },
                  "=": {
                    "etiqueta": "IGUAL"
                  },
                  ">": {
                    "etiqueta": "MAIOR QUE"
                  },
                  ">=": {
                    "etiqueta": "MAIOR OU IGUAL"
                  },
                  "<": {
                    "etiqueta": "MENOR QUE"
                  },
                  "<=": {
                    "etiqueta": "MENOR OU IGUAL"
                  },
                  "EMPTY": {
                    "etiqueta": "ESTÁ VAZIO"
                  },
                  "BLANK": {
                    "etiqueta": "ESTÁ EM BRANCO"
                  },
                  "IS NULL": {
                    "etiqueta": "IS NULL"
                  },
                  "CORRESPONDÊNCIA COM EXPRESSÃO REGULAR": {
                    "etiqueta": "CORRESPONDÊNCIA COM EXPRESSÃO REGULAR"
                  },
                  "CONTAINED IN TABLE": {
                    "etiqueta": "NA TABELA"
                  },
                  "NA TABELA DE EXPRESSÕES REGULARES": {
                    "etiqueta": "NA TABELA DE EXPRESSÕES REGULARES"
                  },
                  "DATA": {
                    "etiqueta": "DATA"
                  }
                },
                "val": "CONTÉM"
              },
              "date_condition": {
                "type": "select",
                "etiqueta": "Selecionar Operador de Data",
                "required": true,
                "show_if": "this.condition == 'DATE'",
                "options": {
                  "<": {
                    "etiqueta": "ANTERIOR"
                  },
                  "<=": {
                    "etiqueta": "ANTERIOR OU IGUAL"
                  },
                  "=": {
                    "etiqueta": "IGUAL"
                  },
                  ">": {
                    "etiqueta": "DEPOIS"
                  },
                  ">=": {
                    "etiqueta": "DEPOIS OU IGUAL"
                  }
                },
                "val": "="
              },
              "case_sensitive": {
                "type": "select",
                "etiqueta": "Selecionar Sensibilidade a Maiúsculas e Minúsculasl",
                "required": true,
                "show_if": "this.condition == 'CONTAINS' || this.condition == 'CONTAINED IN STRING' || this.condition == '=' || this.condition == 'STARTS WITH' || this.condition == 'ENDS WITH' || this.condition == 'REGEX MATCH' || this.condition == 'NOT REGEX MATCH' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "options": {
                  "yes": {
                    "etiqueta": "Sensível a Maiúsculas e Minúsculas"
                  },
                  "no": {
                    "etiqueta": "Insensível a Maiúsculas e Minúsculas"
                  }
                },
                "val": "yes"
              },
              "date_value": {
                "type": "date",
                "etiqueta": "Selecionar Data",
                "show_if": "this.condition=='DATE'",
                "val": "",
                "required": true
              },
              "value": {
                "type": "text",
                "etiqueta": "Introduzir Valor",
                "show_if": "this.condition != 'DATE' && this.condition != 'EMPTY' && this.condition != 'NOT EMPTY' && this.condition != 'BLANK' && this.condition != 'NOT BLANK' && this.condition != 'IS NULL' && this.condition != 'IS NOT NULL' && this.condition != 'CONTAINED IN TABLE' && this.condition != 'NOT CONTAINED IN TABLE' && this.condition != 'IN REGEX TABLE' && this.condition != 'NOT IN REGEX TABLE'",
                "val": "",
                "required": true
              },
              "compare_table": {
                "type": "select",
                "etiqueta": "Selecionar Tabela",
                "bind": "TABLES",
                "empty": "",
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "required": true
              },
              "compare_column": {
                "type": "select",
                "etiqueta": "Selecionar Coluna",
                "table": "this.compare_table",
                "bind": "COLUMNS",
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "required": true
              },
              "delete": {
                "type": "button",
                "etiqueta": "Apagar",
                "function": "DELETE_ROW"
              }
            }
          },
          "options.apply_to_record": {
            "type": "checkbox",
            "etiqueta": "Aplicar ao Registo",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "style": "margin-top: 10px",
            "breakLine": true
          },
          "apply_to_group_box": {
            "type": "fieldset",
            "etiqueta": "Aplicar ao Grupo",
            "show_if": "options.apply_to_record=='false'",
            "repeat": false,
            "fields": {
              "options.apply_to_group_columns": {
                "type": "select",
                "etiqueta": "Selecionar Colunas de Grupo",
                "required": true,
                "width": "100%",
                "table": "input_table",
                "multiple": true,
                "bind": "COLUMNS",
                "breakLine": true
              }
            }
          }
        }
      }
    }
  }
}