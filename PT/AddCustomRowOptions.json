{
  "options": {
    "type": "fieldset",
    "label": "Opções de Seleção",
    "repeat": false,
    "fields": {
      "options.position": {
        "type": "select",
        "label": "Selecionar Posição",
        "required": true,
        "options": {
          "add_rows_below_selected_row": {
            "label": "Adicionar linhas abaixo das linhas selecionadas"
          },
          "add_rows_above_selected_row": {
            "label": "Adicionar linhas acima das linhas selecionadas"
          },
          "add_rows_at_table_end": {
            "label": "Adicionar linhas no final da tabela"
          },
          "add_single_row_at_table_end": {
            "label": "Adicionar uma única linha no final da tabela"
          },
          "add_row_after_each_group": {
            "label": "Adicionar linha após cada grupo"
          }
        },
        "val": "add_rows_below_selected_row",
        "breakLine": true
      },
      "options.group_column": {
        "type": "select",
        "label": "Agrupar Coluna",
        "show_if": "options.position=='add_row_after_each_group'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.use_filter": {
        "type": "select",
        "label": "Selecionar Tipo",
        "show_if": "options.position=='add_rows_below_selected_row' || options.position=='add_rows_above_selected_row' || options.position=='add_rows_at_table_end'",
        "required": true,
        "options": {
          "false": {
            "label": "Adicionar uma linha para cada linha da mesa"
          },
          "true": {
            "label": "Adicionar uma linha para cada linha especificada"
          }
        },
        "val": "false",
        "breakLine": true
      },
      "filter_box": {
        "type": "fieldset",
        "label": "Opções de Filtro",
        "show_if": "options.use_filter=='true' && (options.position=='add_rows_below_selected_row' || options.position=='add_rows_above_selected_row' || options.position=='add_rows_at_table_end')",
        "repeat": false,
        "fields": {
          "options.filter": {
            "type": "fieldset",
            "label": "Adicionar Condições de Filtro",
            "repeat": true,
            "fields": {
              "initial_op": {
                "type": "select",
                "label": "Selecionar Operador Lógico",
                "required": true,
                "show_if": "$index == 0",
                "options": {
                  "if": {
                    "label": "IF"
                  },
                  "if_not": {
                    "label": "IF NOT"
                  }
                },
                "val": "if"
              },
              "op": {
                "type": "select",
                "label": "Selecionar Operador Lógico",
                "required": true,
                "show_if": "$index > 0",
                "options": {
                  "and": {
                    "label": "AND"
                  },
                  "or": {
                    "label": "OR"
                  },
                  "and_not": {
                    "label": "AND NOT"
                  },
                  "or_not": {
                    "label": "OR NOT"
                  }
                },
                "val": "and"
              },
              "column": {
                "type": "select",
                "label": "Selecionar Coluna",
                "table": "input_table",
                "bind": "COLUMNS",
                "required": true
              },
              "condition": {
                "type": "select",
                "label": "Selecionar Operador",
                "required": true,
                "options": {
                  "CONTÉM": {
                    "label": "CONTÉM"
                  },
                  "CONTAINED IN STRING": {
                    "label": "CONTIDO EM"
                  },
                  "INICIA COM": {
                    "label": "INICIA COM"
                  },
                  "TERMINA COM": {
                    "label": "TERMINA COM"
                  },
                  "=": {
                    "label": "IGUAL"
                  },
                  ">": {
                    "label": "MAIOR QUE"
                  },
                  ">=": {
                    "label": "MAIOR OU IGUAL"
                  },
                  "<": {
                    "label": "MENOR QUE"
                  },
                  "<=": {
                    "label": "MENOR OU IGUAL"
                  },
                  "EMPTY": {
                    "label": "ESTÁ VAZIO"
                  },
                  "BLANK": {
                    "label": "ESTÁ EM BRANCO"
                  },
                  "IS NULL": {
                    "label": "IS NULL"
                  },
                  "CORRESPONDÊNCIA COM EXPRESSÃO REGULAR": {
                    "label": "CORRESPONDÊNCIA COM EXPRESSÃO REGULAR"
                  },
                  "CONTAINED IN TABLE": {
                    "label": "NA TABELA"
                  },
                  "NA TABELA DE EXPRESSÕES REGULARES": {
                    "label": "NA TABELA DE EXPRESSÕES REGULARES"
                  },
                  "DATA": {
                    "label": "DATA"
                  }
                },
                "val": "CONTÉM"
              },
              "date_condition": {
                "type": "select",
                "label": "Selecionar Operador de Data",
                "required": true,
                "show_if": "this.condition == 'DATE'",
                "options": {
                  "<": {
                    "label": "ANTERIOR"
                  },
                  "<=": {
                    "label": "ANTERIOR OU IGUAL"
                  },
                  "=": {
                    "label": "IGUAL"
                  },
                  ">": {
                    "label": "DEPOIS"
                  },
                  ">=": {
                    "label": "DEPOIS OU IGUAL"
                  }
                },
                "val": "="
              },
              "case_sensitive": {
                "type": "select",
                "label": "Selecionar Sensibilidade a Maiúsculas e Minúsculasl",
                "required": true,
                "show_if": "this.condition == 'CONTAINS' || this.condition == 'CONTAINED IN STRING' || this.condition == '=' || this.condition == 'STARTS WITH' || this.condition == 'ENDS WITH' || this.condition == 'REGEX MATCH' || this.condition == 'NOT REGEX MATCH' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "options": {
                  "yes": {
                    "label": "Sensível a Maiúsculas e Minúsculas"
                  },
                  "no": {
                    "label": "Insensível a Maiúsculas e Minúsculas"
                  }
                },
                "val": "yes"
              },
              "date_value": {
                "type": "date",
                "label": "Selecionar Data",
                "show_if": "this.condition=='DATE'",
                "val": "",
                "required": true
              },
              "value": {
                "type": "text",
                "label": "Introduzir Valor",
                "show_if": "this.condition != 'DATE' && this.condition != 'EMPTY' && this.condition != 'NOT EMPTY' && this.condition != 'BLANK' && this.condition != 'NOT BLANK' && this.condition != 'IS NULL' && this.condition != 'IS NOT NULL' && this.condition != 'CONTAINED IN TABLE' && this.condition != 'NOT CONTAINED IN TABLE' && this.condition != 'IN REGEX TABLE' && this.condition != 'NOT IN REGEX TABLE'",
                "val": "",
                "required": true
              },
              "compare_table": {
                "type": "select",
                "label": "Selecionar Tabela",
                "bind": "TABLES",
                "empty": "",
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "required": true
              },
              "compare_column": {
                "type": "select",
                "label": "Selecionar Coluna",
                "table": "this.compare_table",
                "bind": "COLUMNS",
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "required": true
              },
              "delete": {
                "type": "button",
                "label": "Apagar",
                "function": "DELETE_ROW"
              }
            }
          },
          "options.apply_to_record": {
            "type": "checkbox",
            "label": "Aplicar ao Registo",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "style": "margin-top: 10px",
            "breakLine": true
          },
          "apply_to_group_box": {
            "type": "fieldset",
            "label": "Aplicar ao Grupo",
            "show_if": "options.apply_to_record=='false'",
            "repeat": false,
            "fields": {
              "options.apply_to_group_columns": {
                "type": "select",
                "label": "Selecionar Colunas de Grupo",
                "required": true,
                "width": "100%",
                "table": "input_table",
                "multiple": true,
                "bind": "COLUMNS",
                "breakLine": true
              }
            }
          }
        }
      },
      "options.target_cells": {
        "type": "fieldset",
        "label": "Definir Fila(s) adicionada(s)",
        "repeat": true,
        "fields": {
          "column": {
            "type": "select",
            "label": "Selecionar Coluna",
            "table": "input_table",
            "bind": "COLUMNS",
            "required": true
          },
          "formula_type": {
            "type": "select",
            "label": "Tipo de Fórmula",
            "required": true,
            "options": {
              "copy_selected": {
                "label": "Cópia Selecionada"
              },
              "static_value": {
                "label": "Valor Estático"
              },
              "numeric_formula": {
                "label": "Fórmula Numérica"
              },
              "text_formula": {
                "label": "Fórmula de Texto"
              }
            },
            "val": "copy_selected"
          },
          "static_value": {
            "type": "text",
            "label": "Valor",
            "show_if": "this.formula_type=='static_value'",
            "val": ""
          },
          "numeric_formula": {
            "type": "text",
            "label": "Fórmula, por exemplo [Coluna1] + 2 * ([Linha-1:Coluna3] - [Coluna1])",
            "show_if": "this.formula_type=='numeric_formula'",
            "val": "",
            "style": "width: 100%"
          },
          "rounding": {
            "type": "select",
            "label": "Arredondamento",
            "show_if": "this.formula_type=='numeric_formula'",
            "required": true,
            "options": {
              "no_rounding": {
                "label": "Arredondamento de números"
              },
              "0": {
                "label": "0 dígitos"
              },
              "1": {
                "label": "1 dígito"
              },
              "2": {
                "label": "2 dígitos"
              },
              "3": {
                "label": "3 dígitos"
              },
              "4": {
                "label": "4 dígitos"
              },
              "5": {
                "label": "5 dígitos"
              },
              "6": {
                "label": "6 dígitos"
              },
              "7": {
                "label": "7 dígitos"
              },
              "8": {
                "label": "8 dígitos"
              },
              "9": {
                "label": "9 dígitos"
              }
            },
            "val": "no_rounding"
          },
          "text_formula": {
            "type": "text",
            "label": "Fórmula, e.g. [primeiroNome] + ' ' + [últimoNome] + ' ' + [Linha-1:Coluna3]",
            "show_if": "this.formula_type=='text_formula'",
            "val": "",
            "style": "width: 100%"
          },
          "use_multi_row": {
            "type": "checkbox",
            "label": "Opções Multi-Linha",
            "show_if": "options.position!='add_row_after_each_group' && (this.formula_type=='numeric_formula' || this.formula_type=='text_formula')",
            "val": "false",
            "isOn": "true",
            "isOff": "false"
          },
          "if_row_not_exist": {
            "type": "select",
            "label": "Se a fila referida não existir",
            "show_if": "options.position!='add_row_after_each_group' && this.use_multi_row=='true' && (this.formula_type=='numeric_formula' || this.formula_type=='text_formula')",
            "required": true,
            "options": {
              "empty": {
                "label": "Vazio ou 0"
              },
              "closest": {
                "label": "Valor Mais Próximo da Linha"
              }
            },
            "val": "empty",
            "breakLine": true
          },
          "delete": {
            "type": "button",
            "label": "Apagar",
            "function": "DELETE_ROW"
          }
        },
        "breakLine": true
      },
      "options.set_date_column": {
        "type": "checkbox",
        "label": "Aplicar mudança de hora a uma coluna de data seleccionada",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "style": "margin-top: 20px",
        "breakLine": true
      },
      "options.date_column": {
        "type": "select",
        "label": "Selecionar Coluna de Datas",
        "show_if": "options.set_date_column=='true'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true
      },
      "options.period_shift.number": {
        "type": "text",
        "label": "Alterar Período",
        "show_if": "options.set_date_column=='true'",
        "required": true,
        "val": "0"
      },
      "options.period_shift.period": {
        "type": "select",
        "label": "Selecionar Período",
        "show_if": "options.set_date_column=='true'",
        "options": {
          "day": {
            "label": "Dias"
          },
          "week": {
            "label": "Semanas"
          },
          "month": {
            "label": "Meses"
          },
          "year": {
            "label": "Anos"
          }
        },
        "val": "month"
      }
    }
  }
}