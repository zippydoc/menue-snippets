{
  "options": {
    "type": "fieldset",
    "label": "Opções de Seleção",
    "repeat": false,
    "fields": {
      "options.table_permission.set_or_delete": {
        "type": "select",
        "label": "Tipo de acção",
        "show_if": "input.table_or_flow=='set_table_permissions'",
        "required": true,
        "options": {
          "set_permissions": {
            "label": "Definir permissões"
          },
          "delete_permissions": {
            "label": "Eliminar todas as permissões"
          }
        },
        "val": "set_permissions",
        "breakLine": true
      },
      "options.table_permission.emails": {
        "type": "text",
        "label": "Utilizadores Permitidos (; lista separada)",
        "show_if": "input.table_or_flow=='set_table_permissions' && options.table_permission.set_or_delete=='set_permissions'",
        "required": true,
        "width": "100%"
      },
      "options.table_permission.permissions": {
        "type": "fieldset",
        "label": "Definir permissões",
        "show_if": "input.table_or_flow=='set_table_permissions' && options.table_permission.set_or_delete=='set_permissions'",
        "repeat": true,
        "fields": {
          "rows_or_columns": {
            "type": "select",
            "label": "Tipo para mesa",
            "required": true,
            "options": {
              "select_rows": {
                "label": "Seleccionar Linhas"
              },
              "select_columns": {
                "label": "Selecionar Coluna(s)"
              }
            },
            "val": "select_columns"
          },
          "rows": {
            "type": "select",
            "label": "Seleccionar Linhas",
            "show_if": "this.rows_or_columns=='select_rows'",
            "table": "input.table_id",
            "bind": "LABELS",
            "multiple": true,
            "required": true
          },
          "columns": {
            "type": "select",
            "label": "Seleccione Colunas(s)",
            "show_if": "this.rows_or_columns=='select_columns'",
            "table": "input.table_id",
            "bind": "COLUMNS",
            "multiple": true,
            "required": true
          },
          "permission_type": {
            "type": "select",
            "label": "Tipo de permissão",
            "required": true,
            "options": {
              "READ": {
                "label": "Ler"
              },
              "WRITE": {
                "label": "Escrever"
              },
              "PASS-ON": {
                "label": "Pass-On"
              }
            },
            "val": "READ"
          },
          "delete": {
            "type": "button",
            "label": "Apagar",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.flow_permission.set_or_delete": {
        "type": "select",
        "label": "Tipo de acção",
        "show_if": "input.table_or_flow=='set_flow_permissions'",
        "required": true,
        "options": {
          "set_permissions": {
            "label": "Definir permissões"
          }
        },
        "val": "set_permissions",
        "breakLine": true
      },
      "options.flow_permission.emails": {
        "type": "text",
        "label": "Utilizadores Permitidos (; lista separada)",
        "show_if": "input.table_or_flow=='set_flow_permissions' && options.flow_permission.set_or_delete=='set_permissions'",
        "required": true,
        "width": "100%"
      },
      "options.flow_permission.permissions": {
        "type": "fieldset",
        "label": "Definir permissões",
        "show_if": "input.table_or_flow=='set_flow_permissions' && options.flow_permission.set_or_delete=='set_permissions'",
        "repeat": true,
        "fields": {
          "permission_type": {
            "type": "select",
            "label": "Tipo de permissão",
            "required": true,
            "options": {
              "READ": {
                "label": "Ler"
              },
              "WRITE": {
                "label": "Escrever"
              },
              "PASS-ON": {
                "label": "Pass-On"
              }
            },
            "val": "READ"
          },
          "delete": {
            "type": "button",
            "label": "Apagar",
            "function": "DELETE_ROW"
          }
        }
      }
    }
  }
}