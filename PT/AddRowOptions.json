{
  "options": {
    "type": "fieldset",
    "label": "Opções de Seleção",
    "repeat": false,
    "fields": {
      "options.position": {
        "type": "select",
        "label": "Selecionar Posição",
        "show_if": "$table_id.numOfLabel >= 1",
        "required": true,
        "options": {
          "add_rows_at_table_end": {
            "label": "Adicionar fila no fundo"
          },
          "add_row_on_top": {
            "label": "Adicionar fila no topo"
          },
          "add_rows_above_selected_row": {
            "label": "Adicionar linha acima da selecção"
          },
          "add_rows_below_selected_row": {
            "label": "Adicionar linha abaixo da selecção"
          },
          "add_row_after_each_group": {
            "label": "Adicionar linha após cada grupo"
          }
        },
        "val": "add_rows_at_table_end",
        "breakLine": true
      },
      "options.group_column": {
        "type": "select",
        "label": "Agrupar Coluna",
        "show_if": "$table_id.numOfLabel < 1 && options.position=='add_row_after_each_group'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.use_filter": {
        "type": "select",
        "label": "Selecionar Tipo",
        "show_if": "false",
        "required": true,
        "options": {
          "false": {
            "label": "Adicionar uma linha para cada linha da mesa"
          },
          "true": {
            "label": "Adicionar uma linha para cada linha especificada"
          }
        },
        "val": "false",
        "breakLine": true,
        "style": "margin-top: 10px"
      },
      "filter_box": {
        "type": "fieldset",
        "label": "Opções de Filtro",
        "show_if": "options.use_filter=='true' && $table_id.numOfLabel < 1",
        "repeat": false,
        "fields": {
          "options.filter": {
            "type": "fieldset",
            "label": "Adicionar Condições de Filtro",
            "repeat": true,
            "fields": {
              "initial_op": {
                "type": "select",
                "label": "Selecionar Operador Lógico",
                "required": true,
                "show_if": "$index == 0",
                "options": {
                  "if": {
                    "label": "IF"
                  },
                  "if_not": {
                    "label": "IF NOT"
                  }
                },
                "val": "if"
              },
              "op": {
                "type": "select",
                "label": "Selecionar Operador Lógico",
                "required": true,
                "show_if": "$index > 0",
                "options": {
                  "and": {
                    "label": "AND"
                  },
                  "or": {
                    "label": "OR"
                  },
                  "and_not": {
                    "label": "AND NOT"
                  },
                  "or_not": {
                    "label": "OR NOT"
                  }
                },
                "val": "and"
              },
              "column": {
                "type": "select",
                "label": "Selecionar Coluna",
                "table": "table_id",
                "bind": "COLUMNS",
                "required": true
              },
              "condition": {
                "type": "select",
                "label": "Selecionar Operador",
                "required": true,
                "options": {
                  "CONTAINS": {
                    "label": "CONTÉM"
                  },
                  "CONTAINED IN STRING": {
                    "label": "CONTIDO EM"
                  },
                  "STARTS WITH": {
                    "label": "INICIA COM"
                  },
                  "ENDS WITH": {
                    "label": "TERMINA COM"
                  },
                  "=": {
                    "label": "IGUAL"
                  },
                  ">": {
                    "label": "MAIOR QUE"
                  },
                  ">=": {
                    "label": "MAIOR OU IGUAL"
                  },
                  "<": {
                    "label": "MENOR QUE"
                  },
                  "<=": {
                    "label": "MENOR OU IGUAL"
                  },
                  "EMPTY": {
                    "label": "ESTÁ VAZIO"
                  },
                  "BLANK": {
                    "label": "ESTÁ EM BRANCO"
                  },
                  "IS NULL": {
                    "label": "IS NULL"
                  },
                  "IS TRUE": {
                    "label": "É VERDADEIRA"
                  },
                  "IS FALSE": {
                    "label": "É FALSO"
                  },
                  "REGEX MATCH": {
                    "label": "CORRESPONDÊNCIA COM EXPRESSÃO REGULAR"
                  },
                  "CONTAINED IN TABLE": {
                    "label": "NA TABELA"
                  },
                  "IN REGEX TABLE": {
                    "label": "NA TABELA DE EXPRESSÕES REGULARES"
                  },
                  "DATE": {
                    "label": "DATA"
                  }
                },
                "val": "CONTAINS"
              },
              "date_condition": {
                "type": "select",
                "label": "Selecionar Operador de Data",
                "required": true,
                "show_if": "this.condition == 'DATE'",
                "options": {
                  "<": {
                    "label": "ANTERIOR"
                  },
                  "<=": {
                    "label": "ANTERIOR OU IGUAL"
                  },
                  "=": {
                    "label": "IGUAL"
                  },
                  ">": {
                    "label": "DEPOIS"
                  },
                  ">=": {
                    "label": "DEPOIS OU IGUAL"
                  }
                },
                "val": "="
              },
              "compare_with": {
                "type": "select",
                "label": "Compare with",
                "required": true,
                "show_if": "this.condition=='CONTAINS' || this.condition=='CONTAINED IN STRING' || this.condition=='STARTS WITH' || this.condition=='ENDS WITH' || this.condition=='=' || this.condition=='>' || this.condition=='>=' || this.condition=='<' || this.condition=='<='",
                "options": {
                  "custom_value": {
                    "label": "Custom value"
                  },
                  "column_value": {
                    "label": "Column value"
                  }
                },
                "val": "custom_value"
              },
              "self_compare_column": {
                "type": "select",
                "label": "Select Compare Column",
                "table": "table_id",
                "bind": "COLUMNS",
                "show_if": "this.compare_with=='column_value' && (this.condition=='CONTAINS' || this.condition=='CONTAINED IN STRING' || this.condition=='STARTS WITH' || this.condition=='ENDS WITH' || this.condition=='=' || this.condition=='>' || this.condition=='>=' || this.condition=='<' || this.condition=='<=')",
                "required": true
              },
              "date_value": {
                "type": "date",
                "label": "Selecionar Data",
                "show_if": "this.condition=='DATE'",
                "val": "",
                "required": true
              },
              "value": {
                "type": "text",
                "label": "Introduzir Valor",
                "show_if": "this.compare_with=='custom_value' && this.condition != 'DATE' && this.condition != 'EMPTY' && this.condition != 'NOT EMPTY' && this.condition != 'BLANK' && this.condition != 'NOT BLANK' && this.condition != 'IS NULL' && this.condition != 'IS NOT NULL' && this.condition != 'IS TRUE' && this.condition != 'IS FALSE' && this.condition != 'CONTAINED IN TABLE' && this.condition != 'NOT CONTAINED IN TABLE' && this.condition != 'IN REGEX TABLE' && this.condition != 'NOT IN REGEX TABLE'",
                "val": "",
                "required": true
              },
              "case_sensitive": {
                "type": "select",
                "label": "Selecionar Sensibilidade a Maiúsculas e Minúsculasl",
                "required": true,
                "show_if": "this.condition == 'CONTAINS' || this.condition == 'CONTAINED IN STRING' || this.condition == '=' || this.condition == 'STARTS WITH' || this.condition == 'ENDS WITH' || this.condition == 'REGEX MATCH' || this.condition == 'NOT REGEX MATCH' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "options": {
                  "yes": {
                    "label": "Sensível a Maiúsculas e Minúsculas"
                  },
                  "no": {
                    "label": "Insensível a Maiúsculas e Minúsculas"
                  }
                },
                "val": "yes"
              },
              "compare_table": {
                "type": "select",
                "label": "Selecionar Tabela",
                "bind": "TABLES",
                "empty": "",
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "required": true
              },
              "compare_column": {
                "type": "select",
                "label": "Selecionar Coluna",
                "table": "this.compare_table",
                "bind": "COLUMNS",
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "required": true
              },
              "delete": {
                "type": "button",
                "label": "Apagar",
                "function": "DELETE_ROW"
              }
            }
          },
          "options.apply_to_record": {
            "type": "checkbox",
            "label": "Aplicar ao Registo",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "style": "margin-top: 10px",
            "breakLine": true
          },
          "apply_to_group_box": {
            "type": "fieldset",
            "label": "Aplicar ao Grupo",
            "show_if": "options.apply_to_record=='false'",
            "repeat": false,
            "fields": {
              "options.apply_to_group_columns": {
                "type": "select",
                "label": "Selecionar Colunas de Grupo",
                "required": true,
                "width": "100%",
                "table": "table_id",
                "multiple": true,
                "bind": "COLUMNS",
                "breakLine": true
              }
            }
          }
        }
      },
      "options.add_rows": {
        "type": "fieldset",
        "label": "Nova Opção de Linha",
        "repeat": true,
        "fields": {
          "new_row_name": {
            "type": "text",
            "label": "Novo Nome de Linha",
            "show_if": "$table_id.numOfLabel >= 1",
            "val": ""
          },
          "function_type": {
            "type": "select",
            "label": "Tipo de Tarefa",
            "show_if": "false",
            "required": true,
            "options": {
              "multi_column_functions": {
                "label": "Multi-Coluna"
              },
              "multi_row_functions": {
                "label": "Multi-Linha"
              }
            },
            "val": "multi_row_functions"
          },
          "multi_row_functions__function": {
            "type": "select",
            "label": "Seleccionar funções",
            "show_if": "$table_id.numOfLabel >= 1",
            "required": true,
            "options": {
              "sum": {
                "label": "Soma"
              },
              "average": {
                "label": "Média"
              },
              "median": {
                "label": "Mediana"
              },
              "standard_deviation": {
                "label": "Desvio Padrão"
              },
              "variance": {
                "label": "Variância"
              },
              "product": {
                "label": "Produto"
              },
              "quota": {
                "label": "Quota"
              }
            },
            "val": "sum"
          },
          "multi_row_functions__function_use_filter": {
            "type": "select",
            "label": "Seleccionar funções",
            "show_if": "$table_id.numOfLabel < 1",
            "required": true,
            "options": {
              "sum": {
                "label": "Soma"
              },
              "average": {
                "label": "Média"
              },
              "median": {
                "label": "Mediana"
              },
              "standard_deviation": {
                "label": "Desvio Padrão"
              },
              "variance": {
                "label": "Variância"
              },
              "product": {
                "label": "Produto"
              }
            },
            "val": "sum"
          },
          "multi_row_functions__sel_labels": {
            "type": "select",
            "label": "Seleccionar Linhas(s)",
            "show_if": "$table_id.numOfLabel >= 1 && this.multi_row_functions__function!='quota'",
            "required": true,
            "table": "table_id",
            "multiple": true,
            "bind": "LABELS"
          },
          "multi_row_functions__sel_rows": {
            "type": "select",
            "label": "Seleccionar Linhas",
            "show_if": "false",
            "required": true,
            "options": {
              "row-1": {
                "label": "Linha-1"
              },
              "row-2": {
                "label": "Fila 2"
              },
              "row-3": {
                "label": "Fila 3"
              },
              "row-4": {
                "label": "Fila 4"
              },
              "row-5": {
                "label": "Fila 5"
              },
              "row-6": {
                "label": "Fila 6"
              },
              "row-7": {
                "label": "Fila 7"
              },
              "row-8": {
                "label": "Fila 8"
              },
              "row-9": {
                "label": "Fila 9"
              },
              "row-10": {
                "label": "Fila-10"
              },
              "row+1": {
                "label": "Row+1"
              },
              "row+2": {
                "label": "Row+2"
              },
              "row+3": {
                "label": "Row+3"
              },
              "row+4": {
                "label": "Row+4"
              },
              "row+5": {
                "label": "Row+5"
              },
              "row+6": {
                "label": "Row+6"
              },
              "row+7": {
                "label": "Row+7"
              },
              "row+8": {
                "label": "Row+8"
              },
              "row+9": {
                "label": "Row+9"
              },
              "row+10": {
                "label": "Row+10"
              }
            },
            "multiple": true,
            "val": "row-1"
          },
          "multi_row_functions__sel_label_a": {
            "type": "select",
            "label": "Selecionar Rótulo A",
            "show_if": "$table_id.numOfLabel >= 1 && this.multi_row_functions__function=='quota'",
            "required": true,
            "table": "table_id",
            "bind": "LABELS"
          },
          "multi_row_functions__sel_label_b": {
            "type": "select",
            "label": "Selecionar Rótulo B",
            "show_if": "$table_id.numOfLabel >= 1 && this.multi_row_functions__function=='quota'",
            "required": true,
            "table": "table_id",
            "bind": "LABELS",
            "breakLine": true
          },
          "position": {
            "type": "select",
            "label": "Posição",
            "show_if": "$table_id.numOfLabel >= 1",
            "required": true,
            "options": {
              "bottom": {
                "label": "BOTTOM"
              },
              "top": {
                "label": "TOP"
              },
              "above": {
                "label": "ACIMA"
              },
              "below": {
                "label": "ABAIXO"
              }
            },
            "val": "bottom"
          },
          "positioning_row": {
            "type": "select",
            "label": "Fila de Posicionamento",
            "show_if": "$table_id.numOfLabel >= 1 && (this.position=='above' || this.position=='below')",
            "required": true,
            "table": "table_id",
            "bind": "LABELS"
          },
          "format__category": {
            "type": "select",
            "label": "Formato de exibição",
            "show_if": "$table_id.numOfLabel >= 1",
            "required": true,
            "options": {
              "standard": {
                "label": "Padrão"
              },
              "number": {
                "label": "Número"
              },
              "percentage": {
                "label": "Percentagem"
              },
              "text": {
                "label": "Texto"
              },
              "date": {
                "label": "Data"
              },
              "currency": {
                "label": "Moeda"
              }
            },
            "val": "standard"
          },
          "format__rounding": {
            "type": "select",
            "label": "Lugares decimais para exibição",
            "show_if": "this.format__category=='number' || this.format__category=='percentage' || this.format__category=='currency'",
            "required": true,
            "options": {
              "no_rounding": {
                "label": "Arredondamento de números"
              },
              "0": {
                "label": "0 dígitos"
              },
              "1": {
                "label": "1 dígito"
              },
              "2": {
                "label": "2 dígitos"
              },
              "3": {
                "label": "3 dígitos"
              },
              "4": {
                "label": "4 dígitos"
              },
              "5": {
                "label": "5 dígitos"
              },
              "6": {
                "label": "6 dígitos"
              },
              "7": {
                "label": "7 dígitos"
              },
              "8": {
                "label": "8 dígitos"
              },
              "9": {
                "label": "9 dígitos"
              }
            },
            "val": "no_rounding"
          },
          "format__use_1000_separator": {
            "type": "checkbox",
            "label": "Usar o Separador 1000(.)",
            "show_if": "this.format__category=='number' || this.format__category=='percentage' || this.format__category=='currency'",
            "val": "false",
            "isOn": "true",
            "isOff": "false"
          },
          "format__currency_symbol": {
            "type": "select",
            "label": "Símbolo",
            "show_if": "this.format__category=='currency'",
            "required": true,
            "options": {
              "dollar": {
                "label": "$"
              },
              "euro": {
                "label": "€"
              },
              "pound": {
                "label": "£"
              },
              "yen": {
                "label": "¥ (Yen, currency of Japan)"
              },
              "colon": {
                "label": "₡ (Colón, currency of Costa Rica)"
              },
              "naira": {
                "label": "₦ (Naira, currency of Nigeria)"
              },
              "rupee": {
                "label": "₨ (Rupee, currency of India)"
              },
              "rupie": {
                "label": "₹ (Rupee, currency of India)"
              },
              "won": {
                "label": "₩ (Won, currency in South Korea and North Korea)"
              },
              "hebrew": {
                "label": "₪ (Currency of Israel)"
              },
              "dong": {
                "label": "₫ (Currency of Vietnam)"
              },
              "kip": {
                "label": "₭ (Kip, currency of Laos)"
              },
              "mongolia": {
                "label": "₮ (Currency of Mongolia)"
              },
              "peso": {
                "label": "₱ (Peso, currency of the Philippines)"
              },
              "guarani": {
                "label": "₲ (Guaraní, currency of Paraguay)"
              },
              "hryvnia": {
                "label": "₴ (Hryvnia, currency of Ukraine)"
              },
              "tenge": {
                "label": "₸ (Tenge, currency of Kazakhstan)"
              },
              "lira": {
                "label": "₺ (Lira, currency of Turkey)"
              },
              "manat": {
                "label": "₼ (Manat, currency of Azerbaijan)"
              },
              "rubles": {
                "label": "₽ (Rubles, currency of Russia)"
              },
              "lari": {
                "label": "₾ (Lari, currency of Georgia)"
              },
              "bitcoin": {
                "label": "₿ (Bitcoin, crypto currency)"
              }
            },
            "val": "dollar"
          },
          "format__date_format": {
            "type": "select",
            "label": "Tipo",
            "show_if": "this.format__category=='date'",
            "required": true,
            "options": {
              "mm/dd/yyyy": {
                "label": "3/14/2012"
              },
              "D, M dd, Y": {
                "label": "Quarta-feira, 14 de Março de 2012"
              },
              "yyyy-mm-dd": {
                "label": "2012-03-14"
              },
              "m.dd.yyyy": {
                "label": "3.14.2012"
              },
              "m.dd.yy": {
                "label": "3.14.12"
              },
              "dd.m.yyyy": {
                "label": "14.3.2012"
              },
              "dd.m.yy": {
                "label": "14.3.12"
              },
              "M dd, Y": {
                "label": "14 de Março de 2012"
              },
              "dd-mm-yyyy": {
                "label": "14-03-2012"
              },
              "mm-dd-yyyy": {
                "label": "03-14-2012"
              },
              "dd-mm-yy": {
                "label": "14-03-12"
              },
              "mm-dd-yy": {
                "label": "03-14-12"
              }
            },
            "val": "mm/dd/yyyy"
          },
          "delete": {
            "type": "button",
            "label": "Apagar",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.add_new_row": {
        "type": "checkbox",
        "label": "Adicionar Rótulo",
        "show_if": "$table_id.numOfLabel < 1",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "style": "margin-top: 10px",
        "breakLine": true
      },
      "options.new_row_label": {
        "type": "text",
        "label": "Nome do Etiqueta",
        "show_if": "$table_id.numOfLabel < 1 && options.add_new_row == 'true'",
        "val": ""
      },
      "options.new_sel_column": {
        "type": "select",
        "label": "Selecionar Coluna",
        "show_if": "$table_id.numOfLabel < 1 && options.add_new_row == 'true'",
        "required": true,
        "table": "table_id",
        "multiple": false,
        "bind": "COLUMNS",
        "breakLine": true
      },
      "options.insert_on_top": {
        "type": "checkbox",
        "label": "Inserir em cima",
        "show_if": "$table_id.numOfLabel < 1",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "style": "margin-top: 10px",
        "breakLine": true
      }
    }
  }
}