{
  "input": {
    "type": "fieldset",
    "label": "Seleccionar tabela de pesquisa",
    "repeat": false,
    "fields": {
      "tables": {
        "type": "fieldset",
        "label": "Selecionar Tabelas",
        "repeat": true,
        "fields": {
          "table_id": {
            "type": "select",
            "label": "Tabela de Pesquisa",
            "bind": "TABLES",
            "required": true
          },
          "lookup_header_column": {
            "type": "select",
            "label": "Coluna de Cabeçalho",
            "table": "this.table_id",
            "bind": "COLUMNS",
            "required": true
          },
          "lookup_value_column": {
            "type": "select",
            "label": "Coluna de Valores",
            "table": "this.table_id",
            "bind": "COLUMNS",
            "required": true
          },
          "lookup_mapping_column": {
            "type": "select",
            "label": "Coluna de Mapeamento",
            "table": "this.table_id",
            "bind": "COLUMNS"
          },
          "delete": {
            "type": "button",
            "label": "Apagar",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.treatment": {
        "type": "select",
        "label": "Tratamento de múltiplas ocorrências",
        "required": true,
        "options": {
          "sum": {
            "label": "Soma"
          },
          "min": {
            "label": "Mín"
          },
          "max": {
            "label": "Máx"
          },
          "shortest": {
            "label": "Mais curto"
          },
          "longest": {
            "label": "Mais comprido"
          },
          "first": {
            "label": "Primeiro"
          },
          "last": {
            "label": "Último"
          },
          "concatenate": {
            "label": "Concatenar"
          }
        },
        "val": "sum",
        "style": "min-width: 200px"
      },
      "options.treatment_delimiter": {
        "type": "text",
        "label": "Delimitador",
        "show_if": "options.treatment=='concatenate'",
        "required": true,
        "minLength": 1,
        "maxLength": 255,
        "val": ";",
        "breakLine": true
      }
    }
  }
}