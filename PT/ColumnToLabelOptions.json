{
  "options": {
    "type": "fieldset",
    "label": "Opções de Seleção",
    "repeat": false,
    "fields": {
      "transpose_type": {
        "type": "hidden",
        "val": "column_name_to_label"
      },
      "mirror_matrix.convert_header_to_label": {
        "type": "checkbox",
        "label": "Converter cabeçalho para rótulo",
        "show_if": "transpose_type=='mirror_matrix'",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "column_name_to_label__columns_to_label_frame": {
        "type": "fieldset",
        "label": "Select columns to convert into Labels",
        "show_if": "transpose_type=='column_name_to_label'",
        "repeat": false,
        "fields": {
          "column_name_to_label.reverse_col_selection": {
            "type": "checkbox",
            "label": "All but selected",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "column_name_to_label.columns_to_label": {
            "type": "select",
            "label": "Select columns",
            "table": "table_id",
            "multiple": true,
            "bind": "COLUMNS",
            "width": "100%",
            "breakLine": true
          }
        }
      },
      "column_name_to_label.label_column_name": {
        "type": "text",
        "label": "Nome da Coluna de Rótulos",
        "show_if": "transpose_type=='column_name_to_label'",
        "required": true,
        "val": "Label",
        "width": "100%",
        "breakLine": true
      },
      "column_name_to_label.value_column_name": {
        "type": "text",
        "label": "Noma da Coluna de Valores",
        "show_if": "transpose_type=='column_name_to_label'",
        "required": true,
        "val": "Value",
        "width": "100%",
        "breakLine": true
      },
      "column_name_to_label.is_one_label": {
        "type": "checkbox",
        "label": "Uma coluna de etiqueta",
        "show_if": "transpose_type=='column_name_to_label'",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "crosstab.group_data_by_these_values": {
        "type": "select",
        "label": "Agrupar dados por estes valores",
        "show_if": "transpose_type=='crosstab'",
        "table": "table_id",
        "multiple": true,
        "bind": "COLUMNS",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "crosstab.change_column_headers": {
        "type": "select",
        "label": "Alterar Cabeçalho da Coluna",
        "show_if": "transpose_type=='crosstab'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "crosstab.values_for_new_columns": {
        "type": "select",
        "label": "Valores para Novas Colunas",
        "show_if": "transpose_type=='crosstab'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "crosstab.method_for_aggregating_values": {
        "type": "select",
        "label": "Método de Agregação de Valores",
        "show_if": "transpose_type=='crosstab'",
        "options": {
          "Concatenate": {
            "label": "Concatenar"
          },
          "First": {
            "label": "Primeiro"
          },
          "Last": {
            "label": "Último"
          },
          "Sum": {
            "label": "Soma"
          },
          "Average": {
            "label": "Média"
          },
          "Count": {
            "label": "Contar"
          },
          "User Defined": {
            "label": "Definido pelo Utilizador"
          }
        },
        "val": "Concatenate",
        "required": true
      },
      "crosstab.user_defined_str": {
        "type": "text",
        "label": "Valor Definido pelo Utilizador",
        "show_if": "transpose_type=='crosstab' && crosstab.method_for_aggregating_values=='User Defined'",
        "val": "x",
        "trim": "false",
        "breakLine": true
      },
      "crosstab.separator": {
        "type": "text",
        "label": "Separador",
        "show_if": "transpose_type=='crosstab' && method_for_aggregating_values=='Concatenate'",
        "val": ",",
        "trim": "false",
        "required": true,
        "breakLine": true
      }
    }
  }
}