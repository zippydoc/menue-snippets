{
  "options_box": {
    "type": "fieldset",
    "label": "Opções",
    "repeat": false,
    "fields": {
      "options.task_symbol": {
        "type": "hidden",
        "val": "english_grammar"
      },
      "options.output_as_chart": {
        "type": "checkbox",
        "label": "Produzir um gráfico",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.chart_type": {
        "type": "select",
        "label": "Tipo de árvore",
        "show_if": "options.output_as_chart=='true'",
        "required": true,
        "options": {
          "collapsible_tree": {
            "label": "Árvore dobrável"
          },
          "tidy_tree": {
            "label": "Tidy Tree"
          }
        },
        "val": "collapsible_tree",
        "breakLine": true
      }
    }
  }
}