{
  "options_frame": {
    "type": "fieldset",
    "label": "Opções",
    "repeat": false,
    "fields": {
      "options.group_by": {
        "type": "select",
        "label": "Agrupar por",
        "required": true,
        "options": {
          "Region": {
            "label": "Região"
          },
          "Income Group": {
            "label": "Grupo de rendimento"
          }
        },
        "val": "Region"
      },
      "options.stat_var_name": {
        "type": "select",
        "label": "Dados Estatísticos",
        "required": true,
        "options": {
          "Count_Person": {
            "label": "População"
          },
          "GrowthRate_Count_Person": {
            "label": "Taxa de Crescimento Populacional"
          },
          "Count_Person_PerArea": {
            "label": "Densidade Populacional"
          },
          "Count_Person_IsInternetUser_PerCapita": {
            "label": "Percentagem de utilizadores da Internet"
          },
          "Count_Person_ResidingLessThan5MetersAboveSeaLevel_AsFractionOf_Count_Person": {
            "label": "Percentagem da população que vive em áreas abaixo dos 5 metros de altitude"
          },
          "Count_Person_Rural": {
            "label": "População rural"
          },
          "Count_Person_Urban": {
            "label": "População Urbana"
          }
        },
        "val": "Count_Person"
      },
      "options.per_capita": {
        "type": "checkbox",
        "label": "Per capita",
        "show_if": "false",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.all_countries": {
        "type": "checkbox",
        "label": "Todos os países",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.output_as_chart": {
        "type": "checkbox",
        "label": "Produzir um gráfico",
        "val": "true",
        "isOn": "true",
        "isOff": "false"
      },
      "options.graph_type": {
        "type": "select",
        "label": "Tipo de gráfico",
        "show_if": "options.output_as_chart=='true'",
        "required": true,
        "options": {
          "zoomable_sunburst": {
            "label": "Sunburst"
          },
          "tidy_tree": {
            "label": "Árvore"
          },
          "treemap": {
            "label": "Treemap"
          }
        },
        "val": "zoomable_sunburst",
        "breakLine": true
      }
    }
  }
}