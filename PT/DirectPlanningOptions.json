{
  "options": {
    "type": "fieldset",
    "label": "Opções de Seleção",
    "repeat": false,
    "fields": {
      "options.taskname": {
        "type": "hidden",
        "val": "direct_planning"
      },
      "options.type": {
        "type": "hidden",
        "val": "custom"
      },
      "options.custom.table": {
        "type": "fieldset",
        "label": "Posição de Planeamento",
        "repeat": true,
        "fields": {
          "position": {
            "type": "select",
            "label": "Posição",
            "options": {
              "Revenues": {
                "label": "Revenues"
              },
              "Cost of Goods Sold": {
                "label": "Cost of Goods Sold"
              },
              "Marketing Expenses": {
                "label": "Marketing Expenses"
              },
              "Operating Expenses": {
                "label": "Operating Expenses"
              },
              "General and Administration Expenses": {
                "label": "General and Administration Expenses"
              },
              "Personnel Expenses": {
                "label": "Personnel Expenses"
              },
              "Tax": {
                "label": "Tax"
              },
              "Capital Expenditure": {
                "label": "Capital Expenditure"
              },
              "Depreciation": {
                "label": "Depreciation"
              },
              "Amortization": {
                "label": "Amortization"
              },
              "Extraordinary Items": {
                "label": "Extraordinary Items"
              },
              "Depretiation & Amortisation": {
                "label": "Depretiation & Amortisation"
              }
            },
            "val": "Revenues",
            "required": true
          },
          "revenues__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Revenues'",
            "options": {
              "Sales": {
                "label": "Sales"
              },
              "Increase(+)/Decrease(-) Inventories": {
                "label": "Increase(+)/Decrease(-) Inventories"
              },
              "Other Revenues": {
                "label": "Other Revenues"
              }
            },
            "val": "Sales",
            "required": true
          },
          "cost_of_goods_sold__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Cost of Goods Sold'",
            "options": {
              "Material Costs": {
                "label": "Material Costs"
              },
              "Purchased Services": {
                "label": "Purchased Services"
              }
            },
            "val": "Material Costs",
            "required": true
          },
          "general_administration_expenses__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='General and Administration Expenses'",
            "options": {
              "Rental Expenses": {
                "label": "Rental Expenses"
              },
              "Cleaning": {
                "label": "Cleaning"
              },
              "Office Items": {
                "label": "Office Items"
              },
              "Consulting": {
                "label": "Consulting"
              },
              "Recruiting": {
                "label": "Recruiting"
              }
            },
            "val": "Rental Expenses",
            "required": true
          },
          "personnel_expenses__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Personnel Expenses'",
            "options": {
              "Fix Salary": {
                "label": "Fix Salary"
              },
              "Bonus": {
                "label": "Bonus"
              },
              "Other Compensation": {
                "label": "Other Compensation"
              }
            },
            "val": "Fix Salary",
            "required": true
          },
          "capital_expenditure__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Capital Expenditure'",
            "options": {
              "Maintenance Capex": {
                "label": "Maintenance Capex"
              },
              "Expansion Capex": {
                "label": "Expansion Capex"
              }
            },
            "val": "Maintenance Capex",
            "required": true
          },
          "extraordinary_items__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Extraordinary Items'",
            "options": {
              "Extraordinary Income": {
                "label": "Extraordinary Income"
              },
              "Extraordinary Expenses": {
                "label": "Extraordinary Expenses"
              }
            },
            "val": "Extraordinary Income",
            "required": true
          },
          "tax__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Tax'",
            "options": {
              "Value Added Tax": {
                "label": "Value Added Tax"
              },
              "Corporate Tax": {
                "label": "Corporate Tax"
              },
              "Trade Tax": {
                "label": "Trade Tax"
              }
            },
            "val": "Value Added Tax",
            "required": true
          },
          "interest__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Interest'",
            "options": {
              "Interest Income": {
                "label": "Interest Income"
              },
              "Interest Expenses": {
                "label": "Interest Expenses"
              }
            },
            "val": "Interest Income",
            "required": true
          },
          "depretiation_amortisation__sub_position": {
            "type": "select",
            "label": "Sub Position",
            "show_if": "this.position=='Depretiation & Amortisation'",
            "options": {
              "Depretiation": {
                "label": "Depretiation"
              },
              "Amortisation": {
                "label": "Amortisation"
              }
            },
            "val": "Depretiation",
            "required": true
          },
          "item": {
            "type": "text",
            "label": "Artigo",
            "val": ""
          },
          "amount": {
            "type": "number",
            "label": "Montante",
            "val": "",
            "required": true
          },
          "periodicy": {
            "type": "select",
            "label": "Periodicidade",
            "required": true,
            "options": {
              "One-Off: {
                "label": "One-Off
              },
              "Diariamente".: {
                "label": "Diariamente".
              },
              "Semanalmente": {
                "label": "Semanalmente"
              },
              "Mensal": {
                "label": "Mensal"
              },
              "Trimestralmente": {
                "label": "Trimestralmente"
              },
              "Anualmente": {
                "label": "Anualmente"
              }
            },
            "val": "Anualmente",
            "breakLine": true
          },
          "growth": {
            "type": "number",
            "label": "Growth in %",
            "show_if": "this.periodicy!='One-Off'",
            "val": "",
            "required": true
          },
          "growth_period": {
            "type": "select",
            "label": "Período de Crescimento",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Semanalmente": {
                "label": "Semana a Semana"
              },
              "Mensal": {
                "label": "Mês a Mês"
              },
              "Trimestralmente": {
                "label": "Trimestre a Trimestre"
              },
              "Anualmente": {
                "label": "Ano a Ano"
              }
            },
            "val": "Anualmente"
          },
          "growth_pattern": {
            "type": "select",
            "label": "Padrão de Crescimento",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Compostagem": {
                "label": "Compostagem"
              },
              "Linear": {
                "label": "Linear"
              },
              "Jump-Fix": {
                "label": "Jump-Fix"
              }
            },
            "val": "Jump-Fix",
            "breakLine": true
          },
          "initial_date": {
            "type": "date",
            "label": "Data Inicial",
            "val": "",
            "required": true
          },
          "final_date": {
            "type": "date",
            "label": "Data Final",
            "show_if": "this.periodicy!='One-Off'",
            "val": ""
          },
          "delete": {
            "type": "button",
            "label": "Apagar",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.output_type": {
        "type": "select",
        "label": "Output Type" (Tipo de saída),
        "required": true,
        "options": {
          "planning_table": {
            "label": "Planning Table"
          },
          "periodicy_table": {
            "label": "Periodicy Table"
          },
          "summary_table": {
            "label": "Summary Table"
          }
        },
        "val": "summary_table"
      },
      "options.summary_table__group_by": {
        "type": "select",
        "label": "Agrupar por",
        "show_if": "options.output_type=='summary_table'",
        "multiple": true,
        "options": {
          "Ano": {
            "label": "Ano"
          },
          "Trimestre": {
            "label": "Trimestre"
          },
          "Mês": {
            "label": "Mês"
          },
          "Semana": {
            "label": "Semana"
          },
          "Day": {
            "label": "Day"
          },
          "Posição": {
            "label": "Posição"
          },
          "Sub Position": {
            "label": "Sub Position"
          },
          "Artigo": {
            "label": "Artigo"
          }
        },
        "val": ["Ano", "Trimestre", "Mês", "Posição"],
        "required": true,
        "breakLine": true
      },
      "options.set_plan_config": {
        "type": "checkbox",
        "label": "Planning Configuration",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "planning_configuration_frame": {
        "type": "fieldset",
        "label": "Planning Configuration",
        "show_if": "options.set_plan_config=='true'",
        "repeat": false,
        "fields": {
          "options.add_categories": {
            "type": "checkbox",
            "label": "Add Categories",
            "val": "false",
            "isOn": "true",
            "isOff": "false"
          },
          "options.categories": {
            "type": "fieldset",
            "label": "Add Categories",
            "show_if": "options.add_categories=='true'",
            "repeat": true,
            "fields": {
              "category": {
                "type": "text",
                "label": "Category",
                "val": "",
                "required": true
              },
              "value": {
                "type": "text",
                "label": "Valor",
                "val": ""
              },
              "delete": {
                "type": "button",
                "label": "Apagar",
                "function": "DELETE_ROW"
              }
            },
            "breakLine": true
          },
          "options.set_amount_column_formatting": {
            "type": "checkbox",
            "label": "Set Amount Column Formatting",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "style": "margin-top: 10px"
          },
          "formatting_frame": {
            "type": "fieldset",
            "label": "Formatação da Coluna de Montante",
            "show_if": "options.set_amount_column_formatting=='true'",
            "repeat": false,
            "fields": {
              "options.amount.format__category": {
                "type": "select",
                "label": "Formato do montante",
                "required": true,
                "options": {
                  "standard": {
                    "label": "Padrão"
                  },
                  "number": {
                    "label": "Número"
                  },
                  "percentage": {
                    "label": "Percentagem"
                  },
                  "text": {
                    "label": "Texto"
                  },
                  "date": {
                    "label": "Data"
                  },
                  "currency": {
                    "label": "Moeda"
                  }
                },
                "val": "currency"
              },
              "options.amount.format__rounding": {
                "type": "select",
                "label": "Arredondamento",
                "show_if": "options.amount.format__category=='number' || options.amount.format__category=='percentage' || options.amount.format__category=='currency'",
                "required": true,
                "options": {
                  "no_rounding": {
                    "label": "Arredondamento de números"
                  },
                  "0": {
                    "label": "0 dígitos"
                  },
                  "1": {
                    "label": "1 dígito"
                  },
                  "2": {
                    "label": "2 dígitos"
                  },
                  "3": {
                    "label": "3 dígitos"
                  },
                  "4": {
                    "label": "4 dígitos"
                  },
                  "5": {
                    "label": "5 dígitos"
                  },
                  "6": {
                    "label": "6 dígitos"
                  },
                  "7": {
                    "label": "7 dígitos"
                  },
                  "8": {
                    "label": "8 dígitos"
                  },
                  "9": {
                    "label": "9 dígitos"
                  }
                },
                "val": "2"
              },
              "options.amount.format__use_1000_separator": {
                "type": "checkbox",
                "label": "Usar Separador(.) 1000",
                "show_if": "options.amount.format__category=='number' || options.amount.format__category=='percentage' || options.amount.format__category=='currency'",
                "val": "true",
                "isOn": "true",
                "isOff": "false"
              },
              "options.amount.format__currency_symbol": {
                "type": "select",
                "label": "Símbolo",
                "show_if": "options.amount.format__category=='currency'",
                "required": true,
                "options": {
                  "dollar": {
                    "label": "$"
                  },
                  "euro": {
                    "label": "€"
                  },
                  "pound": {
                    "label": "£"
                  }
                },
                "val": "dollar"
              },
              "options.amount.format__date_format": {
                "type": "select",
                "label": "Tipo",
                "show_if": "options.amount.format__category=='date'",
                "required": true,
                "options": {
                  "mm/dd/yyyy": {
                    "label": "3/14/2012"
                  },
                  "D, M dd, Y": {
                    "label": "Quarta-feira, 14 de Março de 2012"
                  },
                  "yyyy-mm-dd": {
                    "label": "2012-03-14"
                  }
                },
                "val": "mm/dd/yyyy",
                "breakLine": true
              }
            },
            "breakLine": true
          },
          "options.end_date": {
            "type": "date",
            "label": "Fim de Data de Tabela",
            "show_if": "options.type=='process' || options.type=='custom'",
            "val": "",
            "style": "width: 300px",
            "breakLine": true
          }
        }
      }
    }
  }
}