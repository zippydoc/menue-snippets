{
  "options": {
    "type": "fieldset",
    "etiqueta": "Opções de Seleção",
    "repeat": false,
    "fields": {
      "options.task_type": {
        "type": "select",
        "etiqueta": "Tipo de Tarefa",
        "required": true,
        "options": {
          "write_series": {
            "etiqueta": "Escrever séries de correio electrónico"
          },
          "write_email": {
            "etiqueta": "Escrever e-mail"
          },
          "read": {
            "etiqueta": "Ler e-mails"
          }
        },
        "val": "write_email"
      },
      "options.to": {
        "type": "text",
        "etiqueta": "Para",
        "show_if": "options.task_type=='write_email'",
        "required": true,
        "val": "",
        "placeholder": "user1@domain.com; user2@domain.com;",
        "width": "100%"
      },
      "options.cc": {
        "type": "text",
        "etiqueta": "CC",
        "show_if": "options.task_type=='write_email'",
        "required": true,
        "val": "",
        "placeholder": "ccuser1@domain.com; ccuser2@domain.com",
        "width": "100%"
      },
      "options.bcc": {
        "type": "text",
        "etiqueta": "BCC",
        "show_if": "options.task_type=='write_email'",
        "required": true,
        "val": "",
        "placeholder": "bccuser1@domain.com; bccuser1@domain.com",
        "width": "100%"
      },
      "options.subject": {
        "type": "text",
        "etiqueta": "Assunto",
        "show_if": "options.task_type=='write_email'",
        "required": true,
        "val": "",
        "placeholder": "Assunto",
        "width": "100%"
      },
      "options.body": {
        "type": "text",
        "etiqueta": "Corpo",
        "show_if": "options.task_type=='write_email'",
        "required": true,
        "val": "",
        "placeholder": "Texto",
        "width": "100%"
      }
    }
  },
  "smtp_config_frame": {
    "type": "fieldset",
    "etiqueta": "Ligação SMTP",
    "show_if": "options.task_type=='write_series' || options.task_type=='write_email'",
    "repeat": false,
    "fields": {
      "options.smtp.type": {
        "type": "select",
        "etiqueta": "Seleccionar Servidor SMTP",
        "options": {
          "gmail": {
            "etiqueta": "Gmail"
          },
          "custom": {
            "etiqueta": "Personalizado (em breve)"
          }
        },
        "val": "gmail",
        "required": true,
        "breakLine": true
      },
      "gmail_warning": {
        "type": "text",
        "etiqueta": "",
        "show_if": "options.smtp.type=='gmail'",
        "val": "Turn 'Allow less secure apps' ON in https://myaccount.google.com/lesssecureapps",
        "width": "100%",
        "disabled": true
      },
      "options.gmail.user": {
        "type": "text",
        "etiqueta": "Utilizador do Gmail",
        "show_if": "options.smtp.type=='gmail'",
        "required": true,
        "placeholder": "sender@gmail.com"
      },
      "options.gmail.password": {
        "type": "password",
        "etiqueta": "Senha Gmail",
        "show_if": "options.smtp.type=='gmail'",
        "required": true
      },
      "options.custom.host": {
        "type": "text",
        "etiqueta": "SMTP Host",
        "show_if": "options.smtp.type=='custom'",
        "required": true
      },
      "options.custom.port": {
        "type": "text",
        "etiqueta": "Porto SMTP",
        "show_if": "options.smtp.type=='custom'",
        "required": true
      },
      "options.custom.user": {
        "type": "text",
        "etiqueta": "Utilizador SMTP",
        "show_if": "options.smtp.type=='custom'",
        "required": true
      },
      "options.custom.password": {
        "type": "password",
        "etiqueta": "Senha SMTP",
        "show_if": "options.smtp.type=='custom'",
        "required": true
      }
    }
  }
}