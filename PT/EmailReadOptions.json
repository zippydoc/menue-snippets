{
  "options_frame": {
    "type": "fieldset",
    "label": "Opções de Seleção",
    "repeat": false,
    "fields": {
      "options.task_type": {
        "type": "hidden",
        "val": "read_email"
      },
      "options.all_folders": {
        "type": "checkbox",
        "label": "Importar todas as pastas de correio",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "options.read_folders": {
        "type": "select",
        "label": "Mail Folder(s) to import",
        "show_if": "options.all_folders=='false'",
        "required": true,
        "multiple": true,
        "options": {
          "Archive": {
            "label": "Archive"
          },
          "Conversation History": {
            "label": "História da Conversa"
          },
          "Deleted Items": {
            "label": "Itens Eliminados"
          },
          "Drafts": {
            "label": "Esboços"
          },
          "Inbox": {
            "label": "Caixa de entrada"
          },
          "Junk Email": {
            "label": "Correio não desejado"
          },
          "Outbox": {
            "label": "Caixa de saída"
          },
          "RSS Feeds": {
            "label": "Feeds RSS"
          },
          "Sent Items": {
            "label": "Artigos Enviados"
          },
          "Sync Issues": {
            "label": "Questões de Sincronização"
          }
        },
        "val": ["Inbox"],
        "breakLine": true
      },
      "options.all_columns": {
        "type": "checkbox",
        "label": "Importar todas as colunas",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "options.import_columns": {
        "type": "select",
        "label": "Colunas a importar",
        "show_if": "options.all_columns=='false'",
        "required": true,
        "multiple": true,
        "options": {
          "CreatedAt": {
            "label": "CriadoEm"
          },
          "ReceivedAt": {
            "label": "RecebidoEm"
          },
          "SentAt": {
            "label": "EnviadoEm"
          },
          "Subject": {
            "label": "Assunto"
          },
          "BodyPreview": {
            "label": "BodyPreview"
          },
          "From": {
            "label": "De"
          },
          "CC": {
            "label": "CC"
          },
          "BCC": {
            "label": "BCC"
          },
          "HasAttachments": {
            "label": "HasAttachments"
          },
          "IsRead": {
            "label": "IsRead"
          },
          "IsDraft": {
            "label": "IsDraft"
          },
          "WebLink": {
            "label": "WebLink"
          },
          "Body": {
            "label": "Corpo"
          }
        },
        "val": ["CreatedAt","Subject","BodyPreview","From","HasAttachments","WebLink"]
      },
      "info3": {
        "type": "text",
        "label": "",
        "val": "This task only supports users logged in via Microsoft Login",
        "disabled": true,
        "style": "width: 100%"
      }
    }
  }
}