{
  "options": {
    "type": "fieldset",
    "label": "Opções de Seleção",
    "repeat": false,
    "fields": {
      "task_type": {
        "type": "select",
        "label": "Tipo de Tarefa",
        "required": true,
        "options": {
          "encrypt": {
            "label": "Codificar (seguro)"
          },
          "decrypt": {
            "label": "Descodificar (seguro)"
          },
          "encrypt_simple": {
            "label": "Codificar (simples)"
          },
          "decrypt_simple": {
            "label": "Descodificar (simples)"
          },
          "mask": {
            "label": "Máscara"
          }
        },
        "val": "encrypt"
      },
      "mask_type": {
        "type": "select",
        "label": "Tipo de Máscara",
        "show_if": "task_type == 'mask'",
        "required": true,
        "options": {
          "trailing": {
            "label": "Primeiros N caracteres"
          },
          "leading": {
            "label": "Primeiros N Caracteres"
          },
          "numbers": {
            "label": "Números"
          },
          "alphabets": {
            "label": "Caracteres"
          },
          "regex": {
            "label": "Expressão Regular"
          }
        },
        "val": "trailing"
      },
      "password": {
        "type": "password",
        "label": "Palavra-passe",
        "show_if": "task_type != 'mask'",
        "required": true,
        "minLength": 1,
        "maxLength": 31,
        "val": ""
      },
      "varn": {
        "type": "number",
        "label": "N",
        "show_if": "task_type == 'mask' && (mask_type == 'trailing' || mask_type == 'leading')",
        "required": true,
        "val": "1"
      },
      "regexp": {
        "type": "text",
        "label": "Expressão",
        "show_if": "task_type == 'mask' && (mask_type == 'regex')",
        "required": true,
        "val": "",
        "placeholder": "[a-fA-F0-9]"
      },
      "replace": {
        "type": "text",
        "label": "Máscara de string",
        "show_if": "task_type == 'mask' && (mask_type == 'regex')",
        "required": true,
        "val": "*",
        "breakLine": true
      }
    }
  }
}