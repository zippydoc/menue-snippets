{
  "options": {
    "type": "fieldset",
    "etiqueta": "Opções de Seleção",
    "repeat": false,
    "fields": {
      "options.to": {
        "type": "select",
        "etiqueta": "Tipo",
        "options": {
          "database": {
            "etiqueta": "Exportar para base de dados"
          },
          "file": {
            "etiqueta": "Exportar para ficheiro"
          }
        },
        "val": "database",
        "required": true
      },
      "options.export_series": {
        "type": "checkbox",
        "etiqueta": "Exportar Série",
        "show_if": "options.to=='file'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.file_name_column": {
        "type": "select",
        "etiqueta": "Selecionar Coluna de Nome de Ficheiro",
        "show_if": "options.to=='file' && options.export_series=='true'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "postgresql_db_credential_box": {
        "type": "fieldset",
        "etiqueta": "Credenciais de Ligação à Base de Dados",
        "show_if": "options.to=='database'",
        "repeat": false,
        "fields": {
          "options.dbms": {
            "type": "select",
            "etiqueta": "Selecionar SGBD",
            "options": {
              "postgresql": {
                "etiqueta": "PostgreSQL"
              },
              "mysql": {
                "etiqueta": "MySQL"
              },
              "sql_server": {
                "etiqueta": "Servidor MS SQL"
              },
              "oracle": {
                "etiqueta": "Oracle"
              }
            },
            "val": "postgresql",
            "required": true,
            "breakLine": true
          },
          "options.postgresql_credential.user": {
            "type": "text",
            "etiqueta": "Utilizador",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.postgresql_credential.password": {
            "type": "text",
            "etiqueta": "Palavra-passe",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.postgresql_credential.host": {
            "type": "text",
            "etiqueta": "Anfitrião",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.postgresql_credential.database": {
            "type": "text",
            "etiqueta": "Base de Dados",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          }
        }
      },
      "options.schema_name_to_export": {
        "type": "text",
        "etiqueta": "Nome do modelo a exportar para",
        "show_if": "options.to=='database' && options.dbms=='postgresql'",
        "required": true,
        "val": "public",
        "width": "100%",
        "breakLine": true
      },
      "options.webservice": {
        "type": "select",
        "etiqueta": "Selecionar Serviço Web",
        "show_if": "options.to=='file' || options.to=='mytask'",
        "options": {
          "github": {
            "etiqueta": "Github"
          },
          "dropbox": {
            "etiqueta": "Dropbox"
          },
          "ms_one_drive": {
            "etiqueta": "Microsoft OneDrive"
          },
          "google_drive": {
            "etiqueta": "Google Drive"
          }
        },
        "val": "github",
        "required": true
      },
      "options.export_format": {
        "type": "select",
        "etiqueta": "Exportar Formato",
        "show_if": "options.to=='file'",
        "options": {
          "csv_file": {
            "etiqueta": "Ficheiro(s) Csv"
          },
          "word_by_word": {
            "etiqueta": "Palavra a Palavra"
          },
          "line_by_line": {
            "etiqueta": "Linha a Linha"
          }
        },
        "val": "csv_file",
        "required": true,
        "breakLine": true
      },
      "options.github_create_pr": {
        "type": "checkbox",
        "etiqueta": "Criar pedido de extração",
        "show_if": "options.to=='file' && options.webservice=='github'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.github_token": {
        "type": "text",
        "etiqueta": "Especifique o código de acesso pessoal Github que tem permissão de escrita:",
        "show_if": "options.to=='file' && options.webservice=='github'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.github_url": {
        "type": "text",
        "etiqueta": "Introduzir hiperligação, por exemplo https://github.com/zippydoc/test",
        "show_if": "options.to=='file' && options.webservice=='github'",
        "val": "https://github.com/zippydoc/public-tables",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.ms_one_drive_token": {
        "type": "text",
        "etiqueta": "Microsoft Graph API token de acesso. Pode obtê-lo aqui https://ms-oauth.herokuapp.com/".,
        "show_if": "options.to=='file' && options.webservice=='ms_one_drive'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.google_authorization_code": {
        "type": "text",
        "etiqueta": "Google OAuth Authorization Code with scope https://www.googleapis.com/auth/drive. Pode obtê-lo aqui https://developers.google.com/oauthplayground/",
        "show_if": "options.to=='file' && options.webservice=='google_drive'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.dropbox_authorization_code": {
        "type": "text",
        "etiqueta": "Código de Autorização Dropbox". Pode obtê-lo aqui https://www.dropbox.com/oauth2/authorize?client_id=9i7woztjp94jrkw&response_type=code",
        "show_if": "options.to=='file' && options.webservice=='dropbox'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.if_duplicated": {
        "type": "select",
        "etiqueta": "Se duplicado",
        "show_if": "options.to=='database' || (options.to=='file' && options.webservice=='github')",
        "val": "drop_if_exist",
        "options": {
          "drop_if_exist": {
            "etiqueta": "Criar ou Descartar (se já existir)"
          },
          "error_if_exist": {
            "etiqueta": "Criar Novo (gera erro se existir)"
          },
          "error_if_not_exist": {
            "etiqueta": "Descartar (gera erro se não existir)"
          },
          "append": {
            "etiqueta": "Anexar"
          }
        }
      },
      "options.export_task_name": {
        "type": "text",
        "etiqueta": "Introduzir Nome da Tarefa",
        "show_if": "options.to=='mytask'",
        "required": true,
        "val": "Flow6_Task1_AddColumns",
        "width": "100%",
        "breakLine": true
      }
    }
  }
}