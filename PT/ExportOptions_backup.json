{
  "options": {
    "type": "fieldset",
    "label": "Opções de Seleção",
    "repeat": false,
    "fields": {
      "options.to": {
        "type": "select",
        "label": "Tipo",
        "options": {
          "database": {
            "label": "Exportar para base de dados"
          },
          "file": {
            "label": "Exportar para ficheiro"
          },
          "mytask": {
            "label": "Exportar MyTask"
          }
        },
        "val": "database",
        "required": true
      },
      "options.export_series": {
        "type": "checkbox",
        "label": "Exportar Série",
        "show_if": "options.to=='file'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.file_name_column": {
        "type": "select",
        "label": "Selecionar Coluna de Nome de Ficheiro",
        "show_if": "options.to=='file' && options.export_series=='true'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "postgresql_db_credential_box": {
        "type": "fieldset",
        "label": "Credenciais de Ligação à Base de Dados",
        "show_if": "options.to=='database'",
        "repeat": false,
        "fields": {
          "options.dbms": {
            "type": "select",
            "label": "Selecionar SGBD",
            "options": {
              "postgresql": {
                "label": "PostgreSQL"
              },
              "mysql": {
                "label": "MySQL"
              },
              "sql_server": {
                "label": "Servidor MS SQL"
              },
              "oracle": {
                "label": "Oracle"
              }
            },
            "val": "postgresql",
            "required": true,
            "breakLine": true
          },
          "options.postgresql_credential.user": {
            "type": "text",
            "label": "Utilizador",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.postgresql_credential.password": {
            "type": "text",
            "label": "Palavra-passe",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.postgresql_credential.host": {
            "type": "text",
            "label": "Anfitrião",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.postgresql_credential.database": {
            "type": "text",
            "label": "Base de Dados",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          }
        }
      },
      "options.schema_name_to_export": {
        "type": "text",
        "label": "Nome do modelo a exportar para",
        "show_if": "options.to=='database' && options.dbms=='postgresql'",
        "required": true,
        "val": "public",
        "width": "100%",
        "breakLine": true
      },
      "options.webservice": {
        "type": "select",
        "label": "Selecionar Serviço Web",
        "show_if": "options.to=='file' || options.to=='mytask'",
        "options": {
          "github": {
            "label": "Github"
          }
        },
        "val": "github",
        "required": true
      },
      "options.export_format": {
        "type": "select",
        "label": "Exportar Formato",
        "show_if": "options.to=='file'",
        "options": {
          "csv_file": {
            "label": "Ficheiro(s) Csv"
          },
          "word_by_word": {
            "label": "Palavra a Palavra"
          },
          "line_by_line": {
            "label": "Linha a Linha"
          }
        },
        "val": "csv_file",
        "required": true,
        "breakLine": true
      },
      "options.github_token": {
        "type": "text",
        "label": "Especificar a ficha de acesso pessoal github com permissão de escrita:",
        "show_if": "options.to=='file' || options.to=='mytask'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.github_url": {
        "type": "text",
        "label": "Introduzir hiperligação, por exemplo https://github.com/zippydoc/test",
        "show_if": "options.to=='file' || options.to=='mytask'",
        "val": "https://github.com/zippydoc/public-tables",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.if_duplicated": {
        "type": "select",
        "label": "Se duplicado",
        "val": "drop_if_exist",
        "options": {
          "drop_if_exist": {
            "label": "Criar ou Descartar (se já existir)"
          },
          "error_if_exist": {
            "label": "Criar Novo (gera erro se existir)"
          },
          "error_if_not_exist": {
            "label": "Descartar (gera erro se não existir)"
          },
          "append": {
            "label": "Anexar"
          }
        }
      },
      "options.export_task_name": {
        "type": "text",
        "label": "Introduzir Nome da Tarefa",
        "show_if": "options.to=='mytask'",
        "required": true,
        "val": "Flow6_Task1_AddColumns",
        "width": "100%",
        "breakLine": true
      }
    }
  }
}