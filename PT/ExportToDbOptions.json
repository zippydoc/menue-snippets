{
  "options": {
    "type": "fieldset",
    "label": "Opções de Seleção",
    "repeat": false,
    "fields": {
      "options.to": {
        "type": "hidden",
        "val": "database"
      },
      "postgresql_db_credential_box": {
        "type": "fieldset",
        "label": "Credenciais de Ligação à Base de Dados",
        "repeat": false,
        "fields": {
          "options.dbms": {
            "type": "select",
            "label": "Selecionar SGBD",
            "options": {
              "postgresql": {
                "label": "PostgreSQL"
              },
              "mysql": {
                "label": "MySQL"
              },
              "sql_server": {
                "label": "Servidor MS SQL"
              },
              "oracle": {
                "label": "Oracle"
              }
            },
            "val": "postgresql",
            "required": true,
            "breakLine": true
          },
          "options.host": {
            "type": "text",
            "label": "Anfitrião",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.user": {
            "type": "text",
            "label": "Utilizador",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.password": {
            "type": "password",
            "label": "Palavra-passe",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.database": {
            "type": "text",
            "label": "Base de Dados",
            "required": true,
            "width": "100%",
            "breakLine": true
          }
        }
      },
      "options.schema_name_to_export": {
        "type": "text",
        "label": "Nome do modelo a exportar para",
        "show_if": "options.dbms=='postgresql' || options.dbms=='sql_server' || options.dbms=='oracle'",
        "required": true,
        "val": "public",
        "width": "100%",
        "breakLine": true
      },
      "options.if_duplicated": {
        "type": "select",
        "label": "Se duplicado",
        "val": "drop_if_exist",
        "options": {
          "drop_if_exist": {
            "label": "Criar ou Descartar (se já existir)"
          },
          "error_if_exist": {
            "label": "Criar Novo (gera erro se existir)"
          },
          "error_if_not_exist": {
            "label": "Descartar (gera erro se não existir)"
          },
          "append": {
            "label": "Anexar"
          }
        },
        "breakLine": true
      },
      "output.output_as_new_table": {
        "type": "hidden",
        "val": "true"
      }
    }
  }
}