{
  "options": {
    "type": "fieldset",
    "label": "Opções de Seleção",
    "repeat": false,
    "fields": {
      "options.to": {
        "type": "hidden",
        "val": "file"
      },
      "options.webservice": {
        "type": "hidden",
        "val": "github"
      },
      "options.export_format": {
        "type": "select",
        "label": "Exportar Formato",
        "options": {
          "csv_file": {
            "label": "Ficheiro(s) Csv"
          },
          "word_by_word": {
            "label": "Palavra a Palavra"
          },
          "line_by_line": {
            "label": "Linha a Linha"
          }
        },
        "val": "csv_file",
        "required": true,
        "breakLine": true
      },
      "options.if_duplicated": {
        "type": "select",
        "label": "Se existir",
        "show_if": "options.webservice=='github'",
        "val": "drop_if_exist",
        "options": {
          "drop_if_exist": {
            "label": "Criar ou Descartar (se já existir)"
          },
          "error_if_exist": {
            "label": "Criar Novo (gera erro se existir)"
          },
          "error_if_not_exist": {
            "label": "Descartar (gera erro se não existir)"
          },
          "append": {
            "label": "Anexar"
          }
        },
        "breakLine": true
      },
      "options.export_series": {
        "type": "checkbox",
        "label": "Exportar Série",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.file_name_column": {
        "type": "select",
        "label": "Selecionar Coluna de Nome de Ficheiro",
        "show_if": "options.export_series=='true'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.set_file_path_column": {
        "type": "checkbox",
        "label": "Exportar para o caminho especificado",
        "show_if": "options.export_series=='true'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.file_path_column": {
        "type": "select",
        "label": "Seleccionar coluna de caminho de ficheiro",
        "show_if": "options.export_series=='true' && options.set_file_path_column=='true'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      }
    }
  },
  "export_link_token_frame": {
    "type": "fieldset",
    "label": "Export Link",
    "repeat": false,
    "fields": {
      "options.github_url": {
        "type": "text",
        "label": "Introduzir hiperligação, por exemplo https://github.com/zippydoc/test",
        "show_if": "options.webservice=='github'",
        "val": "",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.export_dir": {
        "type": "text",
        "label": "Introduza por exemplo /MeuZippyDocFiles/SubDir/",
        "show_if": "options.webservice!='github'",
        "val": "/",
        "width": "100%",
        "breakLine": true
      },
      "options.github_token": {
        "type": "text",
        "label": "Especifique o código de acesso pessoal Github que tem permissão de escrita:",
        "show_if": "options.webservice=='github'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.github_create_pr": {
        "type": "checkbox",
        "label": "Criar pedido de extração",
        "show_if": "options.webservice=='github'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.ms_one_drive_token": {
        "type": "text",
        "label": "Microsoft Graph API token de acesso. Pode obtê-lo aqui https://ms-oauth.herokuapp.com/",
        "show_if": "options.webservice=='ms_one_drive'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.google_authorization_code": {
        "type": "text",
        "label": "Google OAuth Authorization Code with scope https://www.googleapis.com/auth/drive. Pode obtê-lo aqui https://developers.google.com/oauthplayground/",
        "show_if": "options.webservice=='google_drive'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.dropbox_authorization_code": {
        "type": "text",
        "label": "Dropbox Authorization Code. You can get it here https://www.dropbox.com/oauth2/authorize?client_id=9i7woztjp94jrkw&response_type=code",
        "show_if": "options.webservice=='dropbox'",
        "required": true,
        "width": "100%",
        "breakLine": true
      }
    }
  }
}