{
  "options_box": {
    "type": "fieldset",
    "label": "Opções de Seleção",
    "repeat": false,
    "fields": {
      "options.column": {
        "type": "select",
        "label": "Coluna a aplicar",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true
      },
      "options.column_value_type": {
        "type": "select",
        "label": "Tipo",
        "required": true,
        "options": {
          "static_value": {
            "label": "Valor Estático"
          },
          "numeric_formula": {
            "label": "Fórmula Numérica"
          },
          "text_formula": {
            "label": "Fórmula de Texto"
          },
          "inc_dec_percent": {
            "label": "Aumentar / Diminuir (%)"
          },
          "inc_dec_abs": {
            "label": "Aumentar / Diminuir (Absoluto)"
          }
        },
        "val": "static_value"
      },
      "options.inc_or_dec": {
        "type": "select",
        "label": "Tipo de aumento",
        "show_if": "options.column_value_type=='inc_dec_percent' || options.column_value_type=='inc_dec_abs'",
        "required": true,
        "options": {
          "increase": {
            "label": "Aumentar"
          },
          "decrease": {
            "label": "Diminuir"
          }
        },
        "val": "increase"
      },
      "options.inc_or_dec_val": {
        "type": "text",
        "label": "Introduzir Valor",
        "show_if": "options.column_value_type=='inc_dec_percent' || options.column_value_type=='inc_dec_abs'",
        "val": "1",
        "breakLine": true
      },
      "options.static_value": {
        "type": "text",
        "label": "Introduzir Valor",
        "show_if": "options.column_value_type=='static_value'",
        "val": "",
        "width": "100%"
      },
      "options.numeric_formula": {
        "type": "text",
        "label": "Input Formula, e.g. [Column1] + 2 * ([Row-1:Column3] - [Column1])",
        "show_if": "options.column_value_type=='numeric_formula'",
        "val": "",
        "width": "100%"
      },
      "options.text_formula": {
        "type": "text",
        "label": "Input Formula, e.g. [firstName] + ' ' + [lastName] + ' ' + [Row-1:Column3]",
        "show_if": "options.column_value_type=='text_formula'",
        "val": "",
        "width": "100%"
      },
      "options.rounding": {
        "type": "select",
        "label": "Arredondamento",
        "show_if": "options.column_value_type=='numeric_formula' || options.column_value_type=='inc_dec_percent' || options.column_value_type=='inc_dec_abs'",
        "required": true,
        "options": {
          "no_rounding": {
            "label": "Arredondamento de números"
          },
          "0": {
            "label": "0 dígitos"
          },
          "1": {
            "label": "1 dígito"
          },
          "2": {
            "label": "2 dígitos"
          },
          "3": {
            "label": "3 dígitos"
          },
          "4": {
            "label": "4 dígitos"
          },
          "5": {
            "label": "5 dígitos"
          },
          "6": {
            "label": "6 dígitos"
          },
          "7": {
            "label": "7 dígitos"
          },
          "8": {
            "label": "8 dígitos"
          },
          "9": {
            "label": "9 dígitos"
          }
        },
        "val": "0"
      },
      "options.use_multi_row": {
        "type": "checkbox",
        "label": "Opções Multi-Linha",
        "show_if": "options.column_value_type=='numeric_formula' || options.column_value_type=='text_formula'",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "options.if_row_not_exist": {
        "type": "select",
        "label": "Se a fila referida não existir",
        "show_if": "(options.column_value_type=='numeric_formula' || options.column_value_type=='text_formula') && options.use_multi_row=='true'",
        "required": true,
        "options": {
          "empty": {
            "label": "Vazio ou 0"
          },
          "closest": {
            "label": "Valor Mais Próximo da Linha"
          }
        },
        "val": "empty",
        "breakLine": true
      },
      "options.use_filter": {
        "type": "checkbox",
        "label": "Utilizar Filtro",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "filter_box": {
        "type": "fieldset",
        "label": "Opções de Filtro",
        "show_if": "options.use_filter=='true'",
        "repeat": false,
        "fields": {
          "options.filter": {
            "type": "fieldset",
            "label": "Adicionar Condições de Filtro",
            "show_if": "options.use_filter=='true'",
            "repeat": true,
            "fields": {
              "initial_op": {
                "type": "select",
                "label": "Selecionar Operador Lógico",
                "required": true,
                "show_if" :  "$index == 0",
                "options": {
                  "if": {
                    "label": "IF"
                  },
                  "if_not": {
                    "label": "IF NOT"
                  }
                },
                "val": "if"
              },
              "op": {
                "type": "select",
                "label": "Selecionar Operador Lógico",
                "required": true,
                "show_if" :  "$index > 0",
                "options": {
                  "and": {
                    "label": "AND"
                  },
                  "or": {
                    "label": "OR"
                  },
                  "and_not": {
                    "label": "AND NOT"
                  },
                  "or_not": {
                    "label": "OR NOT"
                  }
                },
                "val": "and"
              },
              "column": {
                "type": "select",
                "label": "Selecionar Coluna",
                "table": "table_id",
                "bind": "COLUMNS",
                "required": true
              },
              "condition": {
                "type": "select",
                "label": "Selecionar Operador",
                "required": true,
                "options": {
                  "CONTAINS": {
                    "label": "CONTÉM"
                  },
                  "CONTAINED IN STRING": {
                    "label": "CONTIDO EM"
                  },
                  "STARTS WITH": {
                    "label": "INICIA COM"
                  },
                  "ENDS WITH": {
                    "label": "TERMINA COM"
                  },
                  "=": {
                    "label": "IGUAL"
                  },
                  ">": {
                    "label": "MAIOR QUE"
                  },
                  ">=": {
                    "label": "MAIOR OU IGUAL"
                  },
                  "<": {
                    "label": "MENOR QUE"
                  },
                  "<=": {
                    "label": "MENOR OU IGUAL"
                  },
                  "EMPTY": {
                    "label": "ESTÁ VAZIO"
                  },
                  "BLANK": {
                    "label": "ESTÁ EM BRANCO"
                  },
                  "IS NULL": {
                    "label": "IS NULL"
                  },
                  "IS TRUE": {
                    "label": "É VERDADEIRA"
                  },
                  "IS FALSE": {
                    "label": "É FALSO"
                  },
                  "REGEX MATCH": {
                    "label": "CORRESPONDÊNCIA COM EXPRESSÃO REGULAR"
                  },
                  "CONTAINED IN TABLE": {
                    "label": "NA TABELA"
                  },
                  "IN REGEX TABLE": {
                    "label": "NA TABELA DE EXPRESSÕES REGULARES"
                  },
                  "DATE": {
                    "label": "DATA"
                  }
                },
                "val": "CONTAINS"
              },
              "date_condition": {
                "type": "select",
                "label": "Selecionar Operador de Data",
                "required": true,
                "show_if": "this.condition == 'DATE'",
                "options": {
                  "<": {
                    "label": "ANTERIOR"
                  },
                  "<=": {
                    "label": "ANTERIOR OU IGUAL"
                  },
                  "=": {
                    "label": "IGUAL"
                  },
                  ">": {
                    "label": "DEPOIS"
                  },
                  ">=": {
                    "label": "DEPOIS OU IGUAL"
                  }
                },
                "val": "="
              },
              "compare_with": {
                "type": "select",
                "label": "Compare with",
                "required": true,
                "show_if": "this.condition=='CONTAINS' || this.condition=='CONTAINED IN STRING' || this.condition=='STARTS WITH' || this.condition=='ENDS WITH' || this.condition=='=' || this.condition=='>' || this.condition=='>=' || this.condition=='<' || this.condition=='<='",
                "options": {
                  "custom_value": {
                    "label": "Custom value"
                  },
                  "column_value": {
                    "label": "Column value"
                  }
                },
                "val": "custom_value"
              },
              "self_compare_column": {
                "type": "select",
                "label": "Select Compare Column",
                "table": "table_id",
                "bind": "COLUMNS",
                "show_if": "this.compare_with=='column_value' && (this.condition=='CONTAINS' || this.condition=='CONTAINED IN STRING' || this.condition=='STARTS WITH' || this.condition=='ENDS WITH' || this.condition=='=' || this.condition=='>' || this.condition=='>=' || this.condition=='<' || this.condition=='<=')",
                "required": true
              },
              "date_value": {
                "type": "date",
                "label": "Selecionar Data",
                "show_if": "this.condition=='DATE'",
                "val": "",
                "required": true
              },
              "value": {
                "type": "text",
                "label": "Introduzir Valor",
                "show_if": "this.compare_with=='custom_value' && this.condition != 'DATE' && this.condition != 'EMPTY' && this.condition != 'NOT EMPTY' && this.condition != 'BLANK' && this.condition != 'NOT BLANK' && this.condition != 'IS NULL' && this.condition != 'IS NOT NULL' && this.condition != 'IS TRUE' && this.condition != 'IS FALSE' && this.condition != 'CONTAINED IN TABLE' && this.condition != 'NOT CONTAINED IN TABLE' && this.condition != 'IN REGEX TABLE' && this.condition != 'NOT IN REGEX TABLE'",
                "val": "",
                "required": true
              },
              "case_sensitive": {
                "type": "select",
                "label": "Selecionar Sensibilidade a Maiúsculas e Minúsculasl",
                "required": true,
                "show_if": "this.condition == 'CONTAINS' || this.condition == 'CONTAINED IN STRING' || this.condition == '=' || this.condition == 'STARTS WITH' || this.condition == 'ENDS WITH' || this.condition == 'REGEX MATCH' || this.condition == 'NOT REGEX MATCH' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "options": {
                  "yes": {
                    "label": "Sensível a Maiúsculas e Minúsculas"
                  },
                  "no": {
                    "label": "Insensível a Maiúsculas e Minúsculas"
                  }
                },
                "val": "yes"
              },
              "compare_table_id": {
                "type": "select",
                "label": "Selecionar Tabela",
                "bind": "TABLES",
                "empty": "",
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "required": true
              },
              "compare_column": {
                "type": "select",
                "label": "Selecionar Coluna",
                "table": "this.compare_table_id",
                "bind": "COLUMNS",
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "required": true
              },
              "delete": {
                "type": "button",
                "label": "Apagar",
                "function": "DELETE_ROW"
              }
            }
          },
          "options.apply_to_record": {
            "type": "checkbox",
            "label": "Aplicar ao Registo",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "style": "margin-top: 10px",
            "breakLine": true
          },
          "apply_to_group_box": {
            "type": "fieldset",
            "label": "Aplicar ao Grupo",
            "show_if": "options.apply_to_record=='false'",
            "repeat": false,
            "fields": {
              "options.apply_to_group_columns": {
                "type": "select",
                "label": "Selecionar Colunas de Grupo",
                "required": true,
                "width": "100%",
                "table": "table_id",
                "multiple": true,
                "bind": "COLUMNS",
                "breakLine": true
              }
            }
          }
        }
      }
    }
  }
}