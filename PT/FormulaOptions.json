{
  "options_box": {
    "type": "fieldset",
    "etiqueta": "Opções de Seleção",
    "repeat": false,
    "fields": {
      "options.column": {
        "type": "select",
        "etiqueta": "Coluna a aplicar",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true
      },
      "options.column_value_type": {
        "type": "select",
        "etiqueta": "Tipo",
        "required": true,
        "options": {
          "static_value": {
            "etiqueta": "Valor Estático"
          },
          "numeric_formula": {
            "etiqueta": "Fórmula Numérica"
          },
          "text_formula": {
            "etiqueta": "Fórmula de Texto"
          },
          "inc_dec_percent": {
            "etiqueta": "Aumentar / Diminuir (%)"
          },
          "inc_dec_abs": {
            "etiqueta": "Aumentar / Diminuir (Absoluto)"
          }
        },
        "val": "static_value"
      },
      "options.inc_or_dec": {
        "type": "select",
        "etiqueta": "Tipo de aumento",
        "show_if": "options.column_value_type=='inc_dec_percent' || options.column_value_type=='inc_dec_abs'",
        "required": true,
        "options": {
          "increase": {
            "etiqueta": "Aumentar"
          },
          "decrease": {
            "etiqueta": "Diminuir"
          }
        },
        "val": "increase"
      },
      "options.inc_or_dec_val": {
        "type": "text",
        "etiqueta": "Introduzir Valor",
        "show_if": "options.column_value_type=='inc_dec_percent' || options.column_value_type=='inc_dec_abs'",
        "val": "1",
        "breakLine": true
      },
      "options.static_value": {
        "type": "text",
        "etiqueta": "Introduzir Valor",
        "show_if": "options.column_value_type=='static_value'",
        "val": "",
        "width": "100%"
      },
      "options.numeric_formula": {
        "type": "text",
        "etiqueta": "Fórmula de entrada, por exemplo [Coluna1] + 2 * ([Linha-1:Coluna3] - [Coluna1])",
        "show_if": "options.column_value_type=='numeric_formula'",
        "val": "",
        "width": "100%"
      },
      "options.text_formula": {
        "type": "text",
        "etiqueta": "Input Formula, e.g. [firstName] + ' ' + [lastName] + ' ' + [Row-1:Column3]",
        "show_if": "options.column_value_type=='text_formula'",
        "val": "",
        "width": "100%"
      },
      "options.use_multi_row": {
        "type": "checkbox",
        "etiqueta": "Opções Multi-Linha",
        "show_if": "options.column_value_type=='numeric_formula' || options.column_value_type=='text_formula'",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "options.if_row_not_exist": {
        "type": "select",
        "etiqueta": "Se a fila referida não existir",
        "show_if": "(options.column_value_type=='numeric_formula' || options.column_value_type=='text_formula') && options.use_multi_row=='true'",
        "required": true,
        "options": {
          "empty": {
            "etiqueta": "Vazio ou 0"
          },
          "closest": {
            "etiqueta": "Valor Mais Próximo da Linha"
          }
        },
        "val": "empty",
        "breakLine": true
      },
      "options.use_filter": {
        "type": "checkbox",
        "etiqueta": "Utilizar Filtro",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "filter_box": {
        "type": "fieldset",
        "etiqueta": "Opções de Filtro",
        "show_if": "options.use_filter=='true'",
        "repeat": false,
        "fields": {
          "options.filter": {
            "type": "fieldset",
            "etiqueta": "Adicionar Condições de Filtro",
            "show_if": "options.use_filter=='true'",
            "repeat": true,
            "fields": {
              "initial_op": {
                "type": "select",
                "etiqueta": "Selecionar Operador Lógico",
                "required": true,
                "show_if" :  "$index == 0",
                "options": {
                  "if": {
                    "etiqueta": "IF"
                  },
                  "if_not": {
                    "etiqueta": "IF NOT"
                  }
                },
                "val": "if"
              },
              "op": {
                "type": "select",
                "etiqueta": "Selecionar Operador Lógico",
                "required": true,
                "show_if" :  "$index > 0",
                "options": {
                  "and": {
                    "etiqueta": "AND"
                  },
                  "or": {
                    "etiqueta": "OR"
                  },
                  "and_not": {
                    "etiqueta": "AND NOT"
                  },
                  "or_not": {
                    "etiqueta": "OR NOT"
                  }
                },
                "val": "and"
              },
              "column": {
                "type": "select",
                "etiqueta": "Selecionar Coluna",
                "table": "input_table",
                "bind": "COLUMNS",
                "required": true
              },
              "condition": {
                "type": "select",
                "etiqueta": "Selecionar Operador",
                "required": true,
                "options": {
                  "CONTÉM": {
                    "etiqueta": "CONTÉM"
                  },
                  "CONTAINED IN STRING": {
                    "etiqueta": "CONTIDO EM"
                  },
                  "INICIA COM": {
                    "etiqueta": "INICIA COM"
                  },
                  "TERMINA COM": {
                    "etiqueta": "TERMINA COM"
                  },
                  "=": {
                    "etiqueta": "IGUAL"
                  },
                  ">": {
                    "etiqueta": "MAIOR QUE"
                  },
                  ">=": {
                    "etiqueta": "MAIOR OU IGUAL"
                  },
                  "<": {
                    "etiqueta": "MENOR QUE"
                  },
                  "<=": {
                    "etiqueta": "MENOR OU IGUAL"
                  },
                  "EMPTY": {
                    "etiqueta": "ESTÁ VAZIO"
                  },
                  "BLANK": {
                    "etiqueta": "ESTÁ EM BRANCO"
                  },
                  "IS NULL": {
                    "etiqueta": "IS NULL"
                  },
                  "CORRESPONDÊNCIA COM EXPRESSÃO REGULAR": {
                    "etiqueta": "CORRESPONDÊNCIA COM EXPRESSÃO REGULAR"
                  },
                  "CONTAINED IN TABLE": {
                    "etiqueta": "NA TABELA"
                  },
                  "NA TABELA DE EXPRESSÕES REGULARES": {
                    "etiqueta": "NA TABELA DE EXPRESSÕES REGULARES"
                  },
                  "DATA": {
                    "etiqueta": "DATA"
                  }
                },
                "val": "CONTÉM"
              },
              "date_condition": {
                "type": "select",
                "etiqueta": "Selecionar Operador de Data",
                "required": true,
                "show_if": "this.condition == 'DATE'",
                "options": {
                  "<": {
                    "etiqueta": "ANTERIOR"
                  },
                  "<=": {
                    "etiqueta": "ANTERIOR OU IGUAL"
                  },
                  "=": {
                    "etiqueta": "IGUAL"
                  },
                  ">": {
                    "etiqueta": "DEPOIS"
                  },
                  ">=": {
                    "etiqueta": "DEPOIS OU IGUAL"
                  }
                },
                "val": "="
              },
              "case_sensitive": {
                "type": "select",
                "etiqueta": "Selecionar Sensibilidade a Maiúsculas e Minúsculasl",
                "required": true,
                "show_if": "this.condition == 'CONTAINS' || this.condition == 'CONTAINED IN STRING' || this.condition == '=' || this.condition == 'STARTS WITH' || this.condition == 'ENDS WITH' || this.condition == 'REGEX MATCH' || this.condition == 'NOT REGEX MATCH' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "options": {
                  "yes": {
                    "etiqueta": "Sensível a Maiúsculas e Minúsculas"
                  },
                  "no": {
                    "etiqueta": "Insensível a Maiúsculas e Minúsculas"
                  }
                },
                "val": "yes"
              },
              "date_value": {
                "type": "date",
                "etiqueta": "Selecionar Data",
                "show_if": "this.condition=='DATE'",
                "val": "",
                "required": true
              },
              "value": {
                "type": "text",
                "etiqueta": "Introduzir Valor",
                "show_if": "this.condition != 'DATE' && this.condition != 'EMPTY' && this.condition != 'NOT EMPTY' && this.condition != 'BLANK' && this.condition != 'NOT BLANK' && this.condition != 'IS NULL' && this.condition != 'IS NOT NULL' && this.condition != 'CONTAINED IN TABLE' && this.condition != 'NOT CONTAINED IN TABLE' && this.condition != 'IN REGEX TABLE' && this.condition != 'NOT IN REGEX TABLE'",
                "val": "",
                "required": true
              },
              "compare_table": {
                "type": "select",
                "etiqueta": "Selecionar Tabela",
                "bind": "TABLES",
                "empty": "",
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "required": true
              },
              "compare_column": {
                "type": "select",
                "etiqueta": "Selecionar Coluna",
                "table": "this.compare_table",
                "bind": "COLUMNS",
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'",
                "required": true
              },
              "delete": {
                "type": "button",
                "etiqueta": "Apagar",
                "function": "DELETE_ROW"
              }
            }
          },
          "options.apply_to_record": {
            "type": "checkbox",
            "etiqueta": "Aplicar ao Registo",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "style": "margin-top: 10px",
            "breakLine": true
          },
          "apply_to_group_box": {
            "type": "fieldset",
            "etiqueta": "Aplicar ao Grupo",
            "show_if": "options.apply_to_record=='false'",
            "repeat": false,
            "fields": {
              "options.apply_to_group_columns": {
                "type": "select",
                "etiqueta": "Selecionar Colunas de Grupo",
                "required": true,
                "width": "100%",
                "table": "input_table",
                "multiple": true,
                "bind": "COLUMNS",
                "breakLine": true
              }
            }
          }
        }
      }
    }
  }
}