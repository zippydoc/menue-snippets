{
  "options_box": {
    "type": "fieldset", 
    "label": "Opções de Seleção", 
    "repeat": false, 
    "fields": {
      "options.column": {
        "type": "select", 
        "label": "Coluna a aplicar", 
        "table": "input_table", 
        "bind": "COLUMNS", 
        "required": true
      }, 
      "options.column_value_type": {
        "type": "select", 
        "label": "Tipo de Valor da Coluna", 
        "required": true, 
        "options": {
          "static_value": {
            "label": "Valor Estático"
          }, 
          "numeric_formula": {
            "label": "Fórmula Numérica"
          }, 
          "text_formula": {
            "label": "Fórmula de Texto"
          }
        }, 
        "val": "static_value"
      }, 
      "options.static_value": {
        "type": "text", 
        "label": "Introduzir Valor", 
        "show_if": "options.column_value_type=='static_value'", 
        "val": "", 
        "width": "100%"
      }, 
      "options.numeric_formula": {
        "type": "text", 
        "label": "Fórmula de entrada, ex. [Coluna1] + 2 * ([Linha-1:Coluna3] - [Coluna1])", 
        "show_if": "options.column_value_type=='numeric_formula'", 
        "val": "", 
        "width": "100%"
      }, 
      "options.text_formula": {
        "type": "text", 
        "label": "Fórmula de entrada, ex. [primeiroNome] + ' ' + [últimoNome] + ' ' + [Linha-1:Coluna3]", 
        "show_if": "options.column_value_type=='text_formula'", 
        "val": "", 
        "width": "100%"
      }, 
      "options.use_multi_row": {
        "type": "checkbox", 
        "label": "Opções Multi-Linha", 
        "val": "false", 
        "isOn": "true", 
        "isOff": "false"
      }, 
      "options.if_row_not_exist": {
        "type": "select", 
        "label": "Se a fila referida não existir", 
        "show_if": "options.use_multi_row=='true'", 
        "required": true, 
        "options": {
          "empty": {
            "label": "Vazio ou 0"
          }, 
          "closest": {
            "label": "Valor Mais Próximo da Linha"
          }
        }, 
        "val": "empty", 
        "breakLine": true
      }, 
      "options.use_filter": {
        "type": "checkbox", 
        "label": "Utilizar Filtro", 
        "val": "false", 
        "isOn": "true", 
        "isOff": "false", 
        "breakLine": true
      }, 
      "filter_box": {
        "type": "fieldset", 
        "label": "Opções de Filtro", 
        "show_if": "options.use_filter=='true'", 
        "repeat": false, 
        "fields": {
          "options.filter": {
            "type": "fieldset", 
            "label": "Adicionar Condições de Filtro", 
            "show_if": "options.use_filter=='true'", 
            "repeat": true, 
            "fields": {
              "initial_op": {
                "type": "select", 
                "label": "Selecionar Operador Lógico", 
                "required": true, 
                "show_if" :  "$index == 0", 
                "options": {
                  "if": {
                    "label": "IF"
                  }, 
                  "if_not": {
                    "label": "IF NOT"
                  }
                }, 
                "val": "if"
              }, 
              "op": {
                "type": "select", 
                "label": "Selecionar Operador Lógico", 
                "required": true, 
                "show_if" :  "$index > 0", 
                "options": {
                  "and": {
                    "label": "AND"
                  }, 
                  "or": {
                    "label": "OR"
                  }, 
                  "and_not": {
                    "label": "AND NOT"
                  }, 
                  "or_not": {
                    "label": "OR NOT"
                  }
                }, 
                "val": "and"
              }, 
              "column": {
                "type": "select", 
                "label": "Selecionar Coluna", 
                "table": "input_table", 
                "bind": "COLUMNS", 
                "required": true
              }, 
              "condition": {
                "type": "select", 
                "label": "Selecionar Operador", 
                "required": true, 
                "options": {
                  "CONTÉM": {
                    "label": "CONTÉM"
                  }, 
                  "CONTAINED IN STRING": {
                    "label": "CONTIDO EM"
                  }, 
                  "INICIA COM": {
                    "label": "INICIA COM"
                  }, 
                  "TERMINA COM": {
                    "label": "TERMINA COM"
                  }, 
                  "=": {
                    "label": "IGUAL"
                  }, 
                  ">": {
                    "label": "MAIOR QUE"
                  }, 
                  ">=": {
                    "label": "MAIOR OU IGUAL"
                  }, 
                  "<": {
                    "label": "MENOR QUE"
                  }, 
                  "<=": {
                    "label": "MENOR OU IGUAL"
                  }, 
                  "EMPTY": {
                    "label": "ESTÁ VAZIO"
                  }, 
                  "BLANK": {
                    "label": "ESTÁ EM BRANCO"
                  }, 
                  "IS NULL": {
                    "label": "IS NULL"
                  }, 
                  "CORRESPONDÊNCIA COM EXPRESSÃO REGULAR": {
                    "label": "CORRESPONDÊNCIA COM EXPRESSÃO REGULAR"
                  }, 
                  "CONTAINED IN TABLE": {
                    "label": "NA TABELA"
                  }, 
                  "NA TABELA DE EXPRESSÕES REGULARES": {
                    "label": "NA TABELA DE EXPRESSÕES REGULARES"
                  }, 
                  "DATA": {
                    "label": "DATA"
                  }
                }, 
                "val": "CONTÉM"
              }, 
              "date_condition": {
                "type": "select", 
                "label": "Selecionar Operador de Data", 
                "required": true, 
                "show_if": "this.condition == 'DATE'", 
                "options": {
                  "<": {
                    "label": "ANTERIOR"
                  }, 
                  "<=": {
                    "label": "ANTERIOR OU IGUAL"
                  }, 
                  "=": {
                    "label": "IGUAL"
                  }, 
                  ">": {
                    "label": "DEPOIS"
                  }, 
                  ">=": {
                    "label": "DEPOIS OU IGUAL"
                  }
                }, 
                "val": "="
              }, 
              "case_sensitive": {
                "type": "select", 
                "label": "Selecionar Sensibilidade a Maiúsculas e Minúsculasl", 
                "required": true, 
                "show_if": "this.condition == 'CONTAINS' || this.condition == 'CONTAINED IN STRING' || this.condition == '=' || this.condition == 'STARTS WITH' || this.condition == 'ENDS WITH' || this.condition == 'REGEX MATCH' || this.condition == 'NOT REGEX MATCH' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'", 
                "options": {
                  "yes": {
                    "label": "Sensível a Maiúsculas e Minúsculas"
                  }, 
                  "no": {
                    "label": "Insensível a Maiúsculas e Minúsculas"
                  }
                }, 
                "val": "yes"
              }, 
              "date_value": {
                "type": "date", 
                "label": "Selecionar Data", 
                "show_if": "this.condition=='DATE'", 
                "val": "1/31/2020", 
                "required": true
              }, 
              "value": {
                "type": "text", 
                "label": "Introduzir Valor", 
                "show_if": "this.condition != 'DATE' && this.condition != 'EMPTY' && this.condition != 'NOT EMPTY' && this.condition != 'BLANK' && this.condition != 'NOT BLANK' && this.condition != 'IS NULL' && this.condition != 'IS NOT NULL' && this.condition != 'CONTAINED IN TABLE' && this.condition != 'NOT CONTAINED IN TABLE' && this.condition != 'IN REGEX TABLE' && this.condition != 'NOT IN REGEX TABLE'", 
                "val": "", 
                "required": true
              }, 
              "compare_table": {
                "type": "select", 
                "label": "Selecionar Tabela", 
                "bind": "TABLES", 
                "empty": "", 
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'", 
                "required": true
              }, 
              "compare_column": {
                "type": "select", 
                "label": "Selecionar Coluna", 
                "table": "this.compare_table", 
                "bind": "COLUMNS", 
                "show_if": "this.condition == 'CONTAINED IN TABLE' || this.condition == 'NOT CONTAINED IN TABLE' || this.condition == 'IN REGEX TABLE' || this.condition == 'NOT IN REGEX TABLE'", 
                "required": true
              }, 
              "delete": {
                "type": "button", 
                "label": "Eliminar", 
                "function": "DELETE_ROW"
              }
            }
          }, 
          "options.apply_to_record": {
            "type": "checkbox", 
            "label": "Aplicar ao Registo", 
            "val": "true", 
            "isOn": "true", 
            "isOff": "false", 
            "style": "margin-top: 10px", 
            "breakLine": true
          }, 
          "apply_to_group_box": {
            "type": "fieldset", 
            "label": "Aplicar ao Grupo", 
            "show_if": "options.apply_to_record=='false'", 
            "repeat": false, 
            "fields": {
              "options.apply_to_group_columns": {
                "type": "select", 
                "label": "Selecionar Colunas de Grupo", 
                "required": true, 
                "width": "100%", 
                "table": "input_table", 
                "multiple": true, 
                "bind": "COLUMNS", 
                "breakLine": true
              }
            }
          }
        }
      }
    }
  }
}