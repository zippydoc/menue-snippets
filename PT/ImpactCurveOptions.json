{
  "options": {
    "type": "fieldset",
    "label": "Opções de Seleção",
    "repeat": false,
    "fields": {
      "options.type": {
        "type": "select",
        "label": "Tipo",
        "options": {
          "standard": {
            "label": "Gerar Curva de Impacto Padrão"
          },
          "custom": {
            "label": "Gerar Curva de Impacto Personalizada"
          },
          "apply": {
            "label": "Aplicar Curva de Impacto"
          }
        },
        "val": "standard",
        "breakLine": true
      },
      "options.standard.start": {
        "type": "text",
        "label": "Período inicial",
        "show_if": "options.type=='standard' && options.standard.end_value_equals_initial_value=='no'",
        "val": "1",
        "required": true
      },
      "options.standard.maximum": {
        "type": "text",
        "label": "Período Máximo",
        "show_if": "options.type=='standard'",
        "val": "50",
        "required": true
      },
      "options.standard.end": {
        "type": "text",
        "label": "Fim de Período",
        "show_if": "options.type=='standard'",
        "val": "100",
        "required": true,
        "breakLine": true
      },
      "options.standard.multiplier_at_maximum_impact_level": {
        "type": "text",
        "label": "Multiplicador no Nível de Impacto Máximo",
        "show_if": "options.type=='standard'",
        "width": "100%",
        "val": "2",
        "required": true,
        "breakLine": true
      },
      "options.standard.end_value_equals_initial_value": {
        "type": "checkbox",
        "label": "Valor Final Igual ao Valor Inicial",
        "show_if": "options.type=='standard'",
        "width": "100%",
        "val": "yes",
        "isOn": "yes",
        "isOff": "no",
        "breakLine": true
      },
      "options.standard.multiplier_end_value": {
        "type": "text",
        "label": "Valor Final Multiplicador",
        "width": "100%",
        "show_if": "options.type=='standard' && options.standard.end_value_equals_initial_value=='no'",
        "val": "",
        "breakLine": true
      },
      "options.standard.maximum_plateau": {
        "type": "checkbox",
        "label": "Limite Máximo",
        "show_if": "options.type=='standard'",
        "width": "100%",
        "val": "yes",
        "isOn": "yes",
        "isOff": "no",
        "breakLine": true
      },
      "options.standard.no_of_periods_prior_defined_maximum_point": {
        "type": "text",
        "label": "Número de períodos antes do ponto máximo definido",
        "show_if": "options.type=='standard' && options.standard.maximum_plateau=='yes'",
        "val": "0",
        "style": "width: 250px"
      },
      "options.standard.no_of_periods_post_defined_maximum_point": {
        "type": "text",
        "label": "Número de períodos após o ponto máximo definido",
        "show_if": "options.type=='standard' && options.standard.maximum_plateau=='yes'",
        "val": "0",
        "style": "width: 250px",
        "breakLine": true
      },
      "options.standard.left_slope": {
        "type": "select",
        "label": "Declive Esquerdo",
        "show_if": "options.type=='standard'",
        "options": {
          "vertical": {
            "label": "Vertical"
          },
          "linear": {
            "label": "Linear"
          },
          "standard_distribution": {
            "label": "Distribuição Padrão"
          }
        },
        "val": "standard_distribution"
      },
      "options.standard.use_auto_calculated_sigma_for_left_slope": {
        "type": "checkbox",
        "label": "Sigma esquerdo calculado automaticamente",
        "show_if": "options.type=='standard' && options.standard.left_slope=='standard_distribution'",
        "val": "true",
        "isOn": "true",
        "isOff": "false"
      },
      "options.standard.left_slope_sigma": {
        "type": "text",
        "label": "Sigma do Declive Esquerdo",
        "show_if": "options.type=='standard' && options.standard.left_slope=='standard_distribution' && options.standard.use_auto_calculated_sigma_for_left_slope=='false'",
        "val": ""
      },
      "options.standard.right_slope": {
        "type": "select",
        "label": "Declive Direito",
        "show_if": "options.type=='standard'",
        "required": true,
        "options": {
          "vertical": {
            "label": "Vertical"
          },
          "linear": {
            "label": "Linear"
          },
          "standard_distribution": {
            "label": "Distribuição Padrão"
          }
        },
        "val": "standard_distribution"
      },
      "options.standard.use_auto_calculated_sigma_for_right_slope": {
        "type": "checkbox",
        "label": "Sigma direito calculado automaticamente",
        "show_if": "options.type=='standard' && options.standard.right_slope=='standard_distribution'",
        "val": "true",
        "isOn": "true",
        "isOff": "false"
      },
      "options.standard.right_slope_sigma": {
        "type": "text",
        "label": "Sigma do Declive Direito",
        "show_if": "options.type=='standard' && options.standard.right_slope=='standard_distribution' && options.standard.use_auto_calculated_sigma_for_right_slope=='false'",
        "val": "",
        "breakLine": true
      },
      "options.standard.event_name": {
        "type": "text",
        "label": "Nome do Evento",
        "show_if": "options.type=='standard'",
        "val": "Event"
      },
      "options.custom.event_table_id": {
        "type": "select",
        "label": "Tabela de Eventos",
        "show_if": "options.type=='custom'",
        "bind": "TABLES",
        "empty": "",
        "required": true,
        "breakLine": true
      },
      "options.custom.event_date_column": {
        "type": "select",
        "label": "Coluna de Data de Evento",
        "show_if": "options.type=='custom'",
        "required": true,
        "table": "options.custom.event_table_id",
        "bind": "COLUMNS"
      },
      "options.custom.event_name_column": {
        "type": "select",
        "label": "Coluna de Nomes de Evento",
        "show_if": "options.type=='custom'",
        "required": true,
        "table": "options.custom.event_table_id",
        "bind": "COLUMNS"
      },
      "options.custom.event_name": {
        "type": "text",
        "label": "Nome do Evento",
        "show_if": "options.type=='custom'",
        "val": "Weekend",
        "required": true,
        "breakLine": true
      },
      "options.custom.base_period": {
        "type": "select",
        "label": "Período Base",
        "show_if": "options.type=='custom'",
        "required": true,
        "options": {
          "months": {
            "label": "N Meses Anteriores"
          },
          "weeks": {
            "label": "N Semanas Anteriores"
          },
          "days": {
            "label": "N Dias Anteriores"
          }
        },
        "val": "days"
      },
      "options.custom.base_period_n": {
        "type": "text",
        "label": "N",
        "show_if": "options.type=='custom'",
        "val": "5",
        "required": true,
        "breakLine": true
      },
      "options.custom.leading_impact_days": {
        "type": "text",
        "label": "Primeiros Períodos de Impacto",
        "show_if": "options.type=='custom'",
        "val": "0",
        "required": true
      },
      "options.custom.trailing_impact_days": {
        "type": "text",
        "label": "Períodos de Impacto Móveis",
        "show_if": "options.type=='custom'",
        "val": "0",
        "required": true,
        "breakLine": true
      },
      "options.custom.value_column": {
        "type": "select",
        "label": "Coluna de Valores",
        "show_if": "options.type=='custom'",
        "required": true,
        "table": "options.custom.event_table_id",
        "bind": "COLUMNS",
        "breakLine": true
      },
      "options.custom.average": {
        "type": "hidden",
        "val": "true"
      },
      "options.apply.event_name": {
        "type": "text",
        "label": "Nome do Evento",
        "show_if": "options.type=='apply'",
        "val": "Weekend",
        "required": true,
        "breakLine": true
      },
      "apply_event_table_box": {
        "type": "fieldset",
        "label": "Selecionar Tabela de Eventos",
        "show_if": "options.type=='apply'",
        "repeat": false,
        "fields": {
          "options.apply.event_table_id": {
            "type": "select",
            "label": "Tabela de Eventos",
            "bind": "TABLES",
            "empty": "",
            "required": true,
            "breakLine": true
          },
          "options.apply.event_table_event_date_column": {
            "type": "select",
            "label": "Coluna de Data de Evento",
            "required": true,
            "table": "options.apply.event_table_id",
            "bind": "COLUMNS"
          },
          "options.apply.event_table_event_name_column": {
            "type": "select",
            "label": "Coluna de Nomes de Evento",
            "required": true,
            "table": "options.apply.event_table_id",
            "bind": "COLUMNS"
          },
          "options.apply.event_table_value_column": {
            "type": "select",
            "label": "Coluna de Valores",
            "required": true,
            "table": "options.apply.event_table_id",
            "bind": "COLUMNS",
            "breakLine": true
          }
        }
      },
      "apply_impact_table_box": {
        "type": "fieldset",
        "label": "Selecionar Tabela de Impacto",
        "show_if": "options.type=='apply'",
        "repeat": false,
        "fields": {
          "options.apply.impact_table_id": {
            "type": "select",
            "label": "Tabela de Impacto",
            "bind": "TABLES",
            "empty": "",
            "required": true,
            "breakLine": true
          },
          "options.apply.on_average": {
            "type": "hidden",
            "val": "true"
          },
          "options.apply.impact_table_event_date_column": {
            "type": "select",
            "label": "Coluna de Data de Evento",
            "required": true,
            "table": "options.apply.impact_table_id",
            "bind": "COLUMNS"
          },
          "options.apply.impact_table_event_name_column": {
            "type": "select",
            "label": "Coluna de Nomes de Evento",
            "required": true,
            "table": "options.apply.impact_table_id",
            "bind": "COLUMNS"
          },
          "options.apply.impact_table_impact_column": {
            "type": "select",
            "label": "Coluna de Impacto",
            "required": true,
            "table": "options.apply.impact_table_id",
            "bind": "COLUMNS",
            "breakLine": true
          }
        }
      }
    }
  }
}