{
  "options": {
    "type": "fieldset",
    "label": "Opções de Seleção",
    "repeat": false,
    "fields": {
      "options.from": {
        "type": "hidden",
        "val": "web"
      },
      "options.webservice": {
        "type": "hidden",
        "val": "dropbox"
      },
      "options.output_format": {
        "type": "select",
        "label": "Selecionar Tipo",
        "options": {
          "csv_table": {
            "label": "Tabela CSV"
          },
          "line_by_line": {
            "label": "Linha a Linha"
          },
          "word_by_word": {
            "label": "Texto"
          }
        },
        "val": "csv_table",
        "required": true
      },
      "options.word_pattern_type": {
        "type": "select",
        "label": "Padrão de Palavras",
        "show_if": "options.output_format=='word_by_word' && options.specify_word_pattern=='true'",
        "options": {
          "regex": {
            "label": "Expressão Regular"
          }
        },
        "val": "regex",
        "required": true
      },
      "options.word_pattern_regex": {
        "type": "text",
        "label": "Expressão Regular",
        "show_if": "options.output_format=='word_by_word' && options.specify_word_pattern=='true' && options.word_pattern_type=='regex'",
        "required": true,
        "val": "[a-z][1-9]",
        "breakLine": true
      },
      "options.column_setting": {
        "type": "checkbox",
        "label": "Column Settings (Definições de colunas)",
        "show_if": "options.output_format!='file_list'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "column_setting_frame": {
        "type": "fieldset",
        "label": "Column Settings (Definições de colunas)",
        "show_if": "options.output_format!='file_list' && options.column_setting=='true'",
        "repeat": false,
        "fields": {
          "options.add_row_column": {
            "type": "checkbox",
            "label": "Adicionar Coluna Fila",
            "show_if": "options.output_format=='word_by_word'",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "options.add_word_count_column": {
            "type": "checkbox",
            "label": "Coluna 'Contagem de Palavras'",
            "show_if": "options.output_format=='word_by_word'",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "options.add_word_nonword_column": {
            "type": "checkbox",
            "label": "Acrescentar coluna 'Palavra & Não-Palavra",
            "show_if": "options.output_format=='word_by_word'",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "options.add_section_column": {
            "type": "checkbox",
            "label": "Adicionar Coluna Secção",
            "show_if": "options.output_format=='word_by_word'",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "section_column_types_frame": {
            "type": "fieldset",
            "label": "Tipos de colunas de secção",
            "show_if": "options.output_format=='word_by_word' && options.add_section_column=='true'",
            "repeat": false,
            "fields": {
              "options.section_columns.add_paragraph_section_column": {
                "type": "checkbox",
                "label": "Parágrafo",
                "val": "false",
                "isOn": "true",
                "isOff": "false",
                "breakLine": true
              },
              "options.section_columns.add_custom_section_column": {
                "type": "checkbox",
                "label": "Personalizar Delimitador de Secção",
                "val": "false",
                "isOn": "true",
                "isOff": "false"
              },
              "options.section_columns.custom_delimiter": {
                "type": "text",
                "label": "Delimitador (1 caracter)",
                "show_if": "options.section_columns.add_custom_section_column=='true'",
                "maxLength": 1,
                "required": true,
                "breakLine": true
              },
              "options.section_columns.add_brackets_punctuation_section_column": {
                "type": "checkbox",
                "label": "Parêntesis e Pontuação",
                "val": "false",
                "isOn": "true",
                "isOff": "false"
              },
              "options.section_columns.brackets_punctuation_section_column_type": {
                "type": "select",
                "label": "Tipo de parênteses",
                "show_if": "options.section_columns.add_brackets_punctuation_section_column=='true'",
                "options": {
                  "nesting_structure": {
                    "label": "Estrutura de nidificação"
                  },
                  "inner_bracket": {
                    "label": "Suporte interior"
                  },
                  "brackets_only": {
                    "label": "Brackets Only"
                  },
                  "show_all": {
                    "label": "Mostrar Todos"
                  }
                },
                "val": "show_all",
                "required": true,
                "breakLine": true
              }
            }
          },
          "options.add_filename_column": {
            "type": "checkbox",
            "label": "Adicionar Coluna Para Nome de Ficheiro",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "style": "margin-top: 10px",
            "breakLine": true
          },
          "options.add_filepath_column": {
            "type": "checkbox",
            "label": "Adicionar Coluna para Caminho de Ficheiro",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "style": "margin-top: 10px",
            "breakLine": true
          }
        }
      },
      "options.is_cloud_dir": {
        "type": "hidden",
        "val": "false"
      },
      "if_dir_frame": {
        "type": "fieldset",
        "label": "Opções de importação de directório",
        "show_if": "options.output_format!='file_list' && options.is_cloud_dir=='true'",
        "repeat": false,
        "fields": {
          "options.unify_in_one_table": {
            "type": "checkbox",
            "label": "Unificar numa só tabela",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "options.suffix": {
            "type": "select",
            "label": "Sufixo das tabelas de saída",
            "show_if": "options.unify_in_one_table=='false'",
            "options": {
              "number": {
                "label": "Número"
              },
              "filename": {
                "label": "Nome do Ficheiro"
              }
            },
            "val": "number",
            "required": true,
            "breakLine": true
          },
          "options.include_subdir": {
            "type": "checkbox",
            "label": "Incluir Subdiretórios",
            "show_if": "options.output_format!='file_list' && options.is_cloud_dir=='true'",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true,
            "style": "margin-top: 10px"
          }
        }
      },
      "options.file_list.include_subdir": {
        "type": "checkbox",
        "label": "Incluir Subdiretórios",
        "show_if": "options.output_format=='file_list'",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true,
        "style": "margin-top: 10px"
      },
      "options.file_list.add_change_date_column": {
        "type": "checkbox",
        "label": "Adicionar Coluna de Mudança de Data",
        "show_if": "options.output_format=='file_list'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      }
    }
  },
  "import_link_token_frame": {
    "type": "fieldset",
    "label": "Ligação de Importação",
    "repeat": false,
    "fields": {
      "options.link_csv_file": {
        "type": "text",
        "label": "Introduzir hiperligação, por exemplo https://github.com/zippydoc/test/blob/main/example.csv",
        "show_if": "options.webservice=='github' && options.is_cloud_dir=='false' && options.output_format=='csv_table'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.link_text_file": {
        "type": "text",
        "label": "Introduza o link por exemplo https://github.com/zippydoc/test/blob/main/example.txt(json, csv, etc)",
        "show_if": "options.webservice=='github' && options.is_cloud_dir=='false' && options.output_format!='csv_table' && options.output_format!='file_list'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.one_drive.file_path": {
        "type": "text",
        "label": "Introduza o caminho para o ficheiro, por exemplo ZippyDoc/Subdir1/test.txt",
        "show_if": "options.webservice=='ms_one_drive' && options.output_format!='file_list' && options.is_cloud_dir=='false'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.dropbox.file_path": {
        "type": "text",
        "label": "Introduza o caminho para o ficheiro, por exemplo ZippyDoc/Subdir1/test.txt",
        "show_if": "options.webservice=='dropbox' && options.output_format!='file_list' && options.is_cloud_dir=='false'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.dir_path_filter": {
        "type": "fieldset",
        "label": "Import Path and File Filter (Caminho de Importação e Filtro de Ficheiros)",
        "show_if": "options.output_format=='file_list' || options.is_cloud_dir=='true'",
        "repeat": true,
        "fields": {
          "github__link_directory": {
            "type": "text",
            "label": "Introduzir hiperligação, por exemplo https://github.com/zippydoc/test",
            "show_if": "options.webservice=='github'",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "one_drive__dir_path": {
            "type": "text",
            "label": "Introduza o caminho para o dir, por exemplo, ZippyDoc/Subdir1",
            "show_if": "options.webservice=='ms_one_drive'",
            "width": "100%",
            "breakLine": true
          },
          "dropbox__dir_path": {
            "type": "text",
            "label": "Introduza o caminho para o dir, por exemplo, ZippyDoc/Subdir1",
            "show_if": "options.webservice=='dropbox'",
            "width": "100%",
            "breakLine": true
          },
          "google_drive__dir_path": {
            "type": "text",
            "label": "Entrar no caminho para a terra",
            "show_if": "options.webservice=='google_drive'",
            "width": "100%",
            "breakLine": true
          },
          "dir_filter__filter_type": {
            "type": "select",
            "label": "Tipo de Filtro",
            "options": {
              "all": {
                "label": "Todos"
              },
              "contains": {
                "label": "Contém"
              },
              "starts_with": {
                "label": "Inicia com"
              },
              "ends_with": {
                "label": "Termina Com"
              },
              "regex": {
                "label": "Expressão Regular"
              }
            },
            "val": "all",
            "required": true
          },
          "dir_filter__filter_string": {
            "type": "text",
            "label": "Filtrar",
            "show_if": "this.dir_filter__filter_type!='all'",
            "required": true
          },
          "delete": {
            "type": "button",
            "label": "Apagar",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.is_github_private": {
        "type": "checkbox",
        "label": "Repositório Github é privado",
        "show_if": "options.webservice=='github'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "style": "margin-top: 10px",
        "breakLine": true
      },
      "options.github_token": {
        "type": "text",
        "label": "Ficha de acesso pessoal de Github",
        "show_if": "options.webservice=='github' && options.is_github_private=='true'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.one_drive.access_token": {
        "type": "text",
        "label": "Ficha de Acesso de Uma Unidade",
        "show_if": "options.webservice=='ms_one_drive'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.dropbox.auth_code": {
        "type": "text",
        "label": "Código de Autorização Dropbox",
        "show_if": "options.webservice=='dropbox'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.google_drive.access_token": {
        "type": "text",
        "label": "Ficha de Acesso Google Drive",
        "show_if": "options.webservice=='google_drive'",
        "required": true,
        "width": "100%",
        "breakLine": true
      }
    }
  }
}