{
  "options": {
    "type": "fieldset", 
    "label": "Opções de Seleção", 
    "repeat": false, 
    "fields": {
      "options.from": {
        "type": "hidden", 
        "val": "database"
      }, 
      "postgresql_db_credential_box": {
        "type": "fieldset", 
        "label": "Credenciais de Ligação à Base de Dados", 
        "repeat": false, 
        "fields": {
          "options.dbms": {
            "type": "select", 
            "label": "Selecionar SGBD", 
            "options": {
              "postgresql": {
                "label": "PostgreSQL"
              }, 
              "mysql": {
                "label": "MySQL (Brevemente...)"
              }, 
              "sql_server": {
                "label": "Servidor MS SQL(Brevemente...)"
              }, 
              "oracle": {
                "label": "Oracle (Em breve...)"
              }
            }, 
            "val": "postgresql", 
            "required": true, 
            "breakLine": true
          }, 
          "options.postgresql_credential.user": {
            "type": "text", 
            "label": "Utilizador", 
            "show_if": "options.dbms=='postgresql'", 
            "required": true, 
            "width": "100%", 
            "breakLine": true
          }, 
          "options.postgresql_credential.password": {
            "type": "text", 
            "label": "Palavra-passe", 
            "show_if": "options.dbms=='postgresql'", 
            "required": true, 
            "width": "100%", 
            "breakLine": true
          }, 
          "options.postgresql_credential.host": {
            "type": "text", 
            "label": "Anfitrião", 
            "show_if": "options.dbms=='postgresql'", 
            "required": true, 
            "width": "100%", 
            "breakLine": true
          }, 
          "options.postgresql_credential.database": {
            "type": "text", 
            "label": "Base de Dados", 
            "show_if": "options.dbms=='postgresql'", 
            "required": true, 
            "width": "100%", 
            "breakLine": true
          }
        }
      }, 
      "options.schema_name_to_import": {
        "type": "text", 
        "label": "Nome do modelo que contém tabela a importar", 
        "show_if": "options.dbms=='postgresql'", 
        "required": true, 
        "val": "public", 
        "width": "100%", 
        "breakLine": true
      }, 
      "options.table_name_to_import": {
        "type": "text", 
        "label": "Nome da tabela a importar", 
        "show_if": "options.dbms=='postgresql'", 
        "required": true, 
        "width": "100%", 
        "breakLine": true
      }
    }
  }
}