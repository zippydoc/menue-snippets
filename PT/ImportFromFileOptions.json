{
  "options": {
    "type": "fieldset", 
    "label": "Opções de Seleção", 
    "repeat": false, 
    "fields": {
      "options.from": {
        "type": "hidden", 
        "val": "web"
      }, 
      "options.webservice": {
        "type": "select", 
        "label": "Selecionar Serviço Web", 
        "options": {
          "github": {
            "label": "Github"
          }, 
          "ms_one_drive": {
            "label": "Microsoft OneDrive"
          }, 
          "dropbox": {
            "label": "Dropbox"
          }, 
          "google_drive": {
            "label": "Google Drive (Coming soon)"
          }
        }, 
        "val": "github", 
        "required": true, 
        "breakLine": true
      }, 
      "options.output_format": {
        "type": "select", 
        "label": "Selecionar Tipo", 
        "options": {
          "csv_table": {
            "label": "Tabela CSV"
          }, 
          "line_by_line": {
            "label": "Linha a Linha"
          }, 
          "word_by_word": {
            "label": "Palavra a Palavra"
          }, 
          "file_list": {
            "label": "Lista de Ficheiros"
          }
        }, 
        "val": "csv_table", 
        "required": true
      }, 
      "options.word_pattern_type": {
        "type": "select", 
        "label": "Padrão de Palavras", 
        "show_if": "options.output_format=='word_by_word' && options.specify_word_pattern=='true'", 
        "options": {
          "regex": {
            "label": "Expressão Regular"
          }
        }, 
        "val": "regex", 
        "required": true
      }, 
      "options.word_pattern_regex": {
        "type": "text", 
        "label": "Expressão Regular", 
        "show_if": "options.output_format=='word_by_word' && options.specify_word_pattern=='true' && options.word_pattern_type=='regex'", 
        "required": true, 
        "val": "[a-z][1-9]", 
        "breakLine": true
      }, 
      "options.column_setting": {
        "type": "checkbox", 
        "label": "Column Settings", 
        "show_if": "options.output_format!='file_list'", 
        "val": "false", 
        "isOn": "true", 
        "isOff": "false", 
        "breakLine": true
      }, 
      "column_setting_frame": {
        "type": "fieldset", 
        "label": "Column Settings", 
        "show_if": "options.output_format!='file_list' && options.column_setting=='true'", 
        "repeat": false, 
        "fields": {
          "options.add_row_column": {
            "type": "checkbox", 
            "label": "Adicionar Coluna Fila", 
            "show_if": "options.output_format=='word_by_word'", 
            "val": "true", 
            "isOn": "true", 
            "isOff": "false", 
            "breakLine": true
          }, 
          "options.add_word_count_column": {
            "type": "checkbox", 
            "label": "Add 'Word Count' Column", 
            "show_if": "options.output_format=='word_by_word'", 
            "val": "false", 
            "isOn": "true", 
            "isOff": "false", 
            "breakLine": true
          }, 
          "options.add_word_nonword_column": {
            "type": "checkbox", 
            "label": "Add 'Word & Non-Word' Column", 
            "show_if": "options.output_format=='word_by_word'", 
            "val": "false", 
            "isOn": "true", 
            "isOff": "false", 
            "breakLine": true
          }, 
          "options.add_section_column": {
            "type": "checkbox", 
            "label": "Adicionar Coluna Secção", 
            "show_if": "options.output_format=='word_by_word'", 
            "val": "true", 
            "isOn": "true", 
            "isOff": "false", 
            "breakLine": true
          }, 
          "section_column_types_frame": {
            "type": "fieldset", 
            "label": "Section Column Types", 
            "show_if": "options.output_format=='word_by_word' && options.add_section_column=='true'", 
            "repeat": false, 
            "fields": {
              "options.section_columns.add_paragraph_section_column": {
                "type": "checkbox", 
                "label": "Parágrafo", 
                "val": "false", 
                "isOn": "true", 
                "isOff": "false", 
                "breakLine": true
              }, 
              "options.section_columns.add_custom_section_column": {
                "type": "checkbox", 
                "label": "Personalizar Delimitador de Secção", 
                "val": "false", 
                "isOn": "true", 
                "isOff": "false"
              }, 
              "options.section_columns.custom_delimiter": {
                "type": "text", 
                "label": "Delimitador (1 caracter)", 
                "show_if": "options.section_columns.add_custom_section_column=='true'", 
                "maxLength": 1, 
                "required": true, 
                "breakLine": true
              }, 
              "options.section_columns.add_brackets_punctuation_section_column": {
                "type": "checkbox", 
                "label": "Parêntesis e Pontuação", 
                "val": "false", 
                "isOn": "true", 
                "isOff": "false"
              }, 
              "options.section_columns.brackets_punctuation_section_column_type": {
                "type": "select", 
                "label": "Brackets Type", 
                "show_if": "options.section_columns.add_brackets_punctuation_section_column=='true'", 
                "options": {
                  "nesting_structure": {
                    "label": "Nesting Structure"
                  }, 
                  "inner_bracket": {
                    "label": "Inner Bracket"
                  }, 
                  "show_all": {
                    "label": "Mostrar Todos"
                  }
                }, 
                "val": "nesting_structure", 
                "required": true, 
                "breakLine": true
              }
            }
          }, 
          "options.add_filename_column": {
            "type": "checkbox", 
            "label": "Adicionar Coluna Para Nome de Ficheiro", 
            "val": "false", 
            "isOn": "true", 
            "isOff": "false", 
            "style": "margin-top: 10px", 
            "breakLine": true
          }
        }
      }, 
      "options.is_cloud_dir": {
        "type": "checkbox", 
        "label": "Importar Diretório", 
        "show_if": "options.output_format!='file_list'", 
        "val": "false", 
        "isOn": "true", 
        "isOff": "false", 
        "style": "margin-top: 10px", 
        "breakLine": true
      }, 
      "options.use_filename_as_output_table_name": {
        "type": "checkbox", 
        "label": "Usar nome de ficheiro como nome de tabela", 
        "show_if": "options.output_format!='file_list' && options.is_cloud_dir=='false'", 
        "val": "false", 
        "isOn": "true", 
        "isOff": "false", 
        "breakLine": true
      }, 
      "options.unify_in_one_table": {
        "type": "checkbox", 
        "label": "Unificar numa só tabela", 
        "show_if": "options.output_format!='file_list' && options.is_cloud_dir=='true'", 
        "val": "false", 
        "isOn": "true", 
        "isOff": "false"
      }, 
      "options.suffix": {
        "type": "select", 
        "label": "Sufixo", 
        "show_if": "options.output_format!='file_list' && options.is_cloud_dir=='true' && options.unify_in_one_table=='false'", 
        "options": {
          "number": {
            "label": "Número"
          }, 
          "filename": {
            "label": "Nome do Ficheiro"
          }
        }, 
        "val": "number", 
        "required": true, 
        "breakLine": true
      }, 
      "options.is_github_private": {
        "type": "checkbox", 
        "label": "Repositório é privado", 
        "show_if": "options.webservice=='github'", 
        "val": "false", 
        "isOn": "true", 
        "isOff": "false", 
        "breakLine": true
      }, 
      "options.include_subdir": {
        "type": "checkbox", 
        "label": "Incluir Subdiretórios", 
        "show_if": "options.output_format=='file_list'", 
        "val": "true", 
        "isOn": "true", 
        "isOff": "false", 
        "breakLine": true
      }, 
      "options.file_list.add_change_date_column": {
        "type": "checkbox", 
        "label": "Adicionar Coluna de Mudança de Data", 
        "show_if": "options.output_format=='file_list'", 
        "val": "false", 
        "isOn": "true", 
        "isOff": "false", 
        "breakLine": true
      }, 
      "options.github_token": {
        "type": "text", 
        "label": "Especificar a ficha de acesso pessoal Github", 
        "show_if": "options.webservice=='github' && options.is_github_private=='true'", 
        "required": true, 
        "width": "100%", 
        "breakLine": true
      }, 
      "options.link_directory": {
        "type": "text", 
        "label": "Introduzir hiperligação, por exemplo https://github.com/zippydoc/test", 
        "show_if": "options.webservice=='github' && options.output_format!='file_list' && options.is_cloud_dir=='true'", 
        "required": true, 
        "width": "100%", 
        "breakLine": true
      }, 
      "options.link_directory_4_file_list": {
        "type": "text", 
        "label": "Introduzir hiperligação, por exemplo https://github.com/zippydoc/test", 
        "show_if": "options.webservice=='github' && options.output_format=='file_list'", 
        "required": true, 
        "width": "100%", 
        "breakLine": true
      }, 
      "options.link_file": {
        "type": "text", 
        "label": "Introduzir hiperligação, por exemplo https://github.com/zippydoc/test/blob/main/example.csv", 
        "show_if": "options.webservice=='github' && options.is_cloud_dir=='false' && options.output_format=='csv_table'", 
        "required": true, 
        "width": "100%", 
        "breakLine": true
      }, 
      "options.link_text_file": {
        "type": "text", 
        "label": "Introduzir hiperligação, ex. https://github.com/zippydoc/test/blob/main/example.txt(json,  csv,  etc)", 
        "show_if": "options.webservice=='github' && options.is_cloud_dir=='false' && options.output_format!='csv_table' && options.output_format!='file_list'", 
        "required": true, 
        "width": "100%", 
        "breakLine": true
      }, 
      "options.one_drive.access_token": {
        "type": "text", 
        "label": "OAuth Access Token", 
        "show_if": "options.webservice=='ms_one_drive' && options.is_cloud_dir=='false'", 
        "required": true, 
        "width": "100%", 
        "breakLine": true
      }, 
      "options.one_drive.file_path": {
        "type": "text", 
        "label": "Enter path to file e.g. ZippyDoc/Subdir1/test.txt", 
        "show_if": "options.webservice=='ms_one_drive' && options.output_format!='file_list' && options.is_cloud_dir=='false'", 
        "required": true, 
        "width": "100%", 
        "breakLine": true
      }, 
      "options.one_drive.dir_path": {
        "type": "text", 
        "label": "Enter path to dir e.g. ZippyDoc/Subdir1", 
        "show_if": "options.webservice=='ms_one_drive' && (options.output_format=='file_list' || options.is_cloud_dir=='true')", 
        "width": "100%", 
        "breakLine": true
      }, 
      "options.dropbox.auth_code": {
        "type": "text", 
        "label": "Dropbox Authorization Code", 
        "show_if": "options.webservice=='dropbox' && options.is_cloud_dir=='false'", 
        "required": true, 
        "width": "100%", 
        "breakLine": true
      }, 
      "options.dropbox.file_path": {
        "type": "text", 
        "label": "Enter path to file e.g. ZippyDoc/Subdir1/test.txt", 
        "show_if": "options.webservice=='dropbox' && options.output_format!='file_list' && options.is_cloud_dir=='false'", 
        "required": true, 
        "width": "100%", 
        "breakLine": true
      }, 
      "options.dropbox.dir_path": {
        "type": "text", 
        "label": "Enter path to dir e.g. ZippyDoc/Subdir1", 
        "show_if": "options.webservice=='dropbox' && (options.output_format=='file_list' || options.is_cloud_dir=='true')", 
        "width": "100%", 
        "breakLine": true
      }, 
      "dir_filter_frame": {
        "type": "fieldset", 
        "label": "Filtrar ficheiros no diretório", 
        "show_if": "options.output_format!='file_list' && options.is_cloud_dir=='true'", 
        "repeat": false, 
        "fields": {
          "options.dir_filter.filter_type": {
            "type": "select", 
            "label": "Tipo de Filtro", 
            "options": {
              "all": {
                "label": "Todos"
              }, 
              "contains": {
                "label": "Contém"
              }, 
              "starts_with": {
                "label": "Inicia com"
              }, 
              "ends_with": {
                "label": "Termina Com"
              }, 
              "regex": {
                "label": "Expressão Regular"
              }
            }, 
            "val": "all", 
            "required": true
          }, 
          "options.dir_filter.filter_string": {
            "type": "text", 
            "label": "Introduzir string", 
            "show_if": "options.dir_filter.filter_type!='all'", 
            "required": true, 
            "width": "100%"
          }
        }
      }
    }
  }
}