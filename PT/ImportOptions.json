{
  "options": {
    "type": "fieldset",
    "etiqueta": "Opções de Seleção",
    "repeat": false,
    "fields": {
      "options.from": {
        "type": "select",
        "etiqueta": "Fonte de Dados",
        "options": {
          "web": {
            "etiqueta": "Importar a partir de Serviço Web"
          },
          "database": {
            "etiqueta": "Importar a partir de Base de Dados"
          }
        },
        "val": "web",
        "required": true,
        "breakLine": true
      },
      "postgresql_db_credential_box": {
        "type": "fieldset",
        "etiqueta": "Credenciais de Ligação à Base de Dados",
        "show_if": "options.from=='database'",
        "repeat": false,
        "fields": {
          "options.dbms": {
            "type": "select",
            "etiqueta": "Selecionar SGBD",
            "options": {
              "postgresql": {
                "etiqueta": "PostgreSQL"
              },
              "mysql": {
                "etiqueta": "MySQL (Brevemente...)"
              },
              "sql_server": {
                "etiqueta": "Servidor MS SQL(Brevemente...)"
              },
              "oracle": {
                "etiqueta": "Oracle (Em breve...)"
              }
            },
            "val": "postgresql",
            "required": true,
            "breakLine": true
          },
          "options.postgresql_credential.user": {
            "type": "text",
            "etiqueta": "Utilizador",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.postgresql_credential.password": {
            "type": "text",
            "etiqueta": "Palavra-passe",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.postgresql_credential.host": {
            "type": "text",
            "etiqueta": "Anfitrião",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.postgresql_credential.database": {
            "type": "text",
            "etiqueta": "Base de Dados",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          }
        }
      },
      "options.schema_name_to_import": {
        "type": "text",
        "etiqueta": "Nome do modelo que contém tabela a importar",
        "show_if": "options.from=='database' && options.dbms=='postgresql'",
        "required": true,
        "val": "public",
        "width": "100%",
        "breakLine": true
      },
      "options.table_name_to_import": {
        "type": "text",
        "etiqueta": "Nome da tabela a importar",
        "show_if": "options.from=='database' && options.dbms=='postgresql'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.webservice": {
        "type": "select",
        "etiqueta": "Selecionar Serviço Web",
        "show_if": "options.from=='web'",
        "options": {
          "github": {
            "etiqueta": "Github"
          },
          "ms_one_drive": {
            "etiqueta": "Microsoft OneDrive"
          },
          "dropbox": {
            "etiqueta": "Dropbox"
          },
          "google_drive": {
            "etiqueta": "Google Drive (em breve)"
          }
        },
        "val": "github",
        "required": true,
        "breakLine": true
      },
      "options.output_format": {
        "type": "select",
        "etiqueta": "Selecionar Tipo",
        "show_if": "options.from=='web'",
        "options": {
          "csv_table": {
            "etiqueta": "Tabela CSV"
          },
          "line_by_line": {
            "etiqueta": "Linha a Linha"
          },
          "word_by_word": {
            "etiqueta": "Palavra a Palavra"
          },
          "file_list": {
            "etiqueta": "Lista de Ficheiros"
          }
        },
        "val": "csv_table",
        "required": true
      },
      "options.word_pattern_type": {
        "type": "select",
        "etiqueta": "Padrão de Palavras",
        "show_if": "options.from=='web' && options.output_format=='word_by_word' && options.specify_word_pattern=='true'",
        "options": {
          "regex": {
            "etiqueta": "Expressão Regular"
          }
        },
        "val": "regex",
        "required": true
      },
      "options.word_pattern_regex": {
        "type": "text",
        "etiqueta": "Expressão Regular",
        "show_if": "options.from=='web' && options.output_format=='word_by_word' && options.specify_word_pattern=='true' && options.word_pattern_type=='regex'",
        "required": true,
        "val": "[a-z][1-9]",
        "breakLine": true
      },
      "options.column_setting": {
        "type": "checkbox",
        "etiqueta": "Column Settings" (Definições de colunas),
        "show_if": "options.from=='web' && options.output_format!='file_list'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "column_setting_frame": {
        "type": "fieldset",
        "etiqueta": "Column Settings" (Definições de colunas),
        "show_if": "options.from=='web' && options.output_format!='file_list' && options.column_setting=='true'",
        "repeat": false,
        "fields": {
          "options.add_row_column": {
            "type": "checkbox",
            "etiqueta": "Adicionar Coluna Fila",
            "show_if": "options.from=='web' && options.output_format=='word_by_word'",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "options.add_word_count_column": {
            "type": "checkbox",
            "etiqueta": "Coluna 'Contagem de Palavras'".,
            "show_if": "options.from=='web' && options.output_format=='word_by_word'",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "options.add_word_nonword_column": {
            "type": "checkbox",
            "etiqueta": "Acrescentar coluna 'Palavra & Não-Palavra,
            "show_if": "options.from=='web' && options.output_format=='word_by_word'",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "options.add_section_column": {
            "type": "checkbox",
            "etiqueta": "Adicionar Coluna Secção",
            "show_if": "options.from=='web' && options.output_format=='word_by_word'",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "section_column_types_frame": {
            "type": "fieldset",
            "etiqueta": "Tipos de colunas de secção",
            "show_if": "options.from=='web' && options.output_format=='word_by_word' && options.add_section_column=='true'",
            "repeat": false,
            "fields": {
              "options.section_columns.add_paragraph_section_column": {
                "type": "checkbox",
                "etiqueta": "Parágrafo",
                "val": "false",
                "isOn": "true",
                "isOff": "false",
                "breakLine": true
              },
              "options.section_columns.add_custom_section_column": {
                "type": "checkbox",
                "etiqueta": "Personalizar Delimitador de Secção",
                "val": "false",
                "isOn": "true",
                "isOff": "false"
              },
              "options.section_columns.custom_delimiter": {
                "type": "text",
                "etiqueta": "Delimitador (1 caracter)",
                "show_if": "options.section_columns.add_custom_section_column=='true'",
                "maxLength": 1,
                "required": true,
                "breakLine": true
              },
              "options.section_columns.add_brackets_punctuation_section_column": {
                "type": "checkbox",
                "etiqueta": "Parêntesis e Pontuação",
                "val": "false",
                "isOn": "true",
                "isOff": "false"
              },
              "options.section_columns.brackets_punctuation_section_column_type": {
                "type": "select",
                "etiqueta": "Tipo de parênteses",
                "show_if": "options.section_columns.add_brackets_punctuation_section_column=='true'",
                "options": {
                  "nesting_structure": {
                    "etiqueta": "Estrutura de nidificação"
                  },
                  "inner_bracket": {
                    "etiqueta": "Suporte interior"
                  },
                  "show_all": {
                    "etiqueta": "Mostrar Todos"
                  }
                },
                "val": "nesting_structure",
                "required": true,
                "breakLine": true
              }
            }
          },
          "options.add_filename_column": {
            "type": "checkbox",
            "etiqueta": "Adicionar Coluna Para Nome de Ficheiro",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "style": "margin-top: 10px",
            "breakLine": true
          }
        }
      },
      "options.is_cloud_dir": {
        "type": "checkbox",
        "etiqueta": "Importar Diretório",
        "show_if": "options.from=='web' && options.output_format!='file_list'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "style": "margin-top: 10px",
        "breakLine": true
      },
      "options.use_filename_as_output_table_name": {
        "type": "checkbox",
        "etiqueta": "Usar nome de ficheiro como nome de tabela",
        "show_if": "options.from=='web' && options.output_format!='file_list' && options.is_cloud_dir=='false'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.unify_in_one_table": {
        "type": "checkbox",
        "etiqueta": "Unificar numa só tabela",
        "show_if": "options.from=='web' && options.output_format!='file_list' && options.is_cloud_dir=='true'",
        "val": "true",
        "isOn": "true",
        "isOff": "false"
      },
      "options.suffix": {
        "type": "select",
        "etiqueta": "Sufixo",
        "show_if": "options.from=='web' && options.output_format!='file_list' && options.is_cloud_dir=='true' && options.unify_in_one_table=='false'",
        "options": {
          "number": {
            "etiqueta": "Número"
          },
          "filename": {
            "etiqueta": "Nome do Ficheiro"
          }
        },
        "val": "number",
        "required": true,
        "breakLine": true
      },
      "options.is_github_private": {
        "type": "checkbox",
        "etiqueta": "Repositório é privado",
        "show_if": "options.from=='web' && options.webservice=='github'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.include_subdir": {
        "type": "checkbox",
        "etiqueta": "Incluir Subdiretórios",
        "show_if": "options.from=='web' && options.output_format=='file_list'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.file_list.add_change_date_column": {
        "type": "checkbox",
        "etiqueta": "Adicionar Coluna de Mudança de Data",
        "show_if": "options.from=='web' && options.output_format=='file_list'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.github_token": {
        "type": "text",
        "etiqueta": "Especificar a ficha de acesso pessoal Github",
        "show_if": "options.from=='web' && options.webservice=='github' && options.is_github_private=='true'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.link_directory": {
        "type": "text",
        "etiqueta": "Introduzir hiperligação, por exemplo https://github.com/zippydoc/test",
        "show_if": "options.from=='web' && options.webservice=='github' && options.output_format!='file_list' && options.is_cloud_dir=='true'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.link_directory_4_file_list": {
        "type": "text",
        "etiqueta": "Introduzir hiperligação, por exemplo https://github.com/zippydoc/test",
        "show_if": "options.from=='web' && options.webservice=='github' && options.output_format=='file_list'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.link_file": {
        "type": "text",
        "etiqueta": "Introduzir hiperligação, por exemplo https://github.com/zippydoc/test/blob/main/example.csv",
        "show_if": "options.from=='web' && options.webservice=='github' && options.is_cloud_dir=='false' && options.output_format=='csv_table'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.link_text_file": {
        "type": "text",
        "etiqueta": "Introduza o link por exemplo https://github.com/zippydoc/test/blob/main/example.txt(json, csv, etc)",
        "show_if": "options.from=='web' && options.webservice=='github' && options.is_cloud_dir=='false' && options.output_format!='csv_table' && options.output_format!='file_list'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.one_drive.access_token": {
        "type": "text",
        "etiqueta": "Ficha de Acesso OAuth",
        "show_if": "options.from=='web' && options.webservice=='ms_one_drive' && options.is_cloud_dir=='false'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.one_drive.file_path": {
        "type": "text",
        "etiqueta": "Introduza o caminho para o ficheiro, por exemplo ZippyDoc/Subdir1/test.txt",
        "show_if": "options.from=='web' && options.webservice=='ms_one_drive' && options.output_format!='file_list' && options.is_cloud_dir=='false'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.one_drive.dir_path": {
        "type": "text",
        "etiqueta": "Introduza o caminho para o dir, por exemplo, ZippyDoc/Subdir1".,
        "show_if": "options.from=='web' && options.webservice=='ms_one_drive' && (options.output_format=='file_list' || options.is_cloud_dir=='true')",
        "width": "100%",
        "breakLine": true
      },
      "options.dropbox.auth_code": {
        "type": "text",
        "etiqueta": "Código de Autorização Dropbox",
        "show_if": "options.from=='web' && options.webservice=='dropbox' && options.is_cloud_dir=='false'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.dropbox.file_path": {
        "type": "text",
        "etiqueta": "Introduza o caminho para o ficheiro, por exemplo ZippyDoc/Subdir1/test.txt",
        "show_if": "options.from=='web' && options.webservice=='dropbox' && options.output_format!='file_list' && options.is_cloud_dir=='false'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.dropbox.dir_path": {
        "type": "text",
        "etiqueta": "Introduza o caminho para o dir, por exemplo, ZippyDoc/Subdir1".,
        "show_if": "options.from=='web' && options.webservice=='dropbox' && (options.output_format=='file_list' || options.is_cloud_dir=='true')",
        "width": "100%",
        "breakLine": true
      },
      "dir_filter_frame": {
        "type": "fieldset",
        "etiqueta": "Filtrar ficheiros no diretório",
        "show_if": "options.from=='web' && options.output_format!='file_list' && options.is_cloud_dir=='true'",
        "repeat": false,
        "fields": {
          "options.dir_filter.filter_type": {
            "type": "select",
            "etiqueta": "Tipo de Filtro",
            "options": {
              "all": {
                "etiqueta": "Todos"
              },
              "contains": {
                "etiqueta": "Contém"
              },
              "starts_with": {
                "etiqueta": "Inicia com"
              },
              "ends_with": {
                "etiqueta": "Termina Com"
              },
              "regex": {
                "etiqueta": "Expressão Regular"
              }
            },
            "val": "all",
            "required": true
          },
          "options.dir_filter.filter_string": {
            "type": "text",
            "etiqueta": "Introduzir string",
            "show_if": "options.dir_filter.filter_type!='all'",
            "required": true,
            "width": "100%"
          }
        }
      }
    }
  }
}