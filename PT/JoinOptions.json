{
  "options": {
    "type": "fieldset",
    "label": "Selecionar Opções de Junção",
    "repeat": false,
    "fields": {
      "join_type": {
        "type": "radio",
        "label": "Juntar por",
        "val": "join_by_specific_field",
        "values": {
          "join_by_specific_field": "Specific Field",
          "join_by_record_position": "Record Position"
        },
        "breakLine": true
      },
      "join_fields": {
        "type": "fieldset",
        "label": "Juntar por Colunas",
        "show_if": "join_type==''join_by_specific_field''",
        "repeat": true,
        "fields": {
          "left_table_field": {
            "type": "select",
            "label": "Coluna da Tabela da Esquerda",
            "table": "left_table.table_id",
            "bind": "COLUMNS"
          },
          "right_table_field": {
            "type": "select",
            "label": "Coluna da Tabela da Direita",
            "table": "right_table.table_id",
            "bind": "COLUMNS"
          },
          "delete": {
            "type": "button",
            "label": "Apagar",
            "function": "DELETE_ROW"
          }
        }
      }
    }
  }
}