{
  "options": {
    "type": "fieldset",
    "etiqueta": "Opções de Seleção",
    "repeat": false,
    "fields": {
      "transpose_type": {
        "type": "hidden",
        "val": "mirror_matrix"
      },
      "mirror_matrix.convert_header_to_label": {
        "type": "checkbox",
        "etiqueta": "Converter cabeçalho para rótulo",
        "show_if": "transpose_type=='mirror_matrix'",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "column_name_to_label.columns_to_label": {
        "type": "select",
        "etiqueta": "Selecionar Colunas para Converter em Rótulos",
        "show_if": "transpose_type=='column_name_to_label'",
        "table": "input_table",
        "multiple": true,
        "bind": "COLUMNS",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "column_name_to_label.label_column_name": {
        "type": "text",
        "etiqueta": "Nome da Coluna de Rótulos",
        "show_if": "transpose_type=='column_name_to_label'",
        "required": true,
        "val": "Rotular",
        "width": "100%",
        "breakLine": true
      },
      "column_name_to_label.value_column_name": {
        "type": "text",
        "etiqueta": "Noma da Coluna de Valores",
        "show_if": "transpose_type=='column_name_to_label'",
        "required": true,
        "val": "Valor",
        "width": "100%",
        "breakLine": true
      },
      "crosstab.group_data_by_these_values": {
        "type": "select",
        "etiqueta": "Agrupar dados por estes valores",
        "show_if": "transpose_type=='crosstab'",
        "table": "input_table",
        "multiple": true,
        "bind": "COLUMNS",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "crosstab.change_column_headers": {
        "type": "select",
        "etiqueta": "Alterar Cabeçalho da Coluna",
        "show_if": "transpose_type=='crosstab'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "crosstab.values_for_new_columns": {
        "type": "select",
        "etiqueta": "Valores para Novas Colunas",
        "show_if": "transpose_type=='crosstab'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "crosstab.method_for_aggregating_values": {
        "type": "select",
        "etiqueta": "Método de Agregação de Valores",
        "show_if": "transpose_type=='crosstab'",
        "options": {
          "Concatenar": {
            "etiqueta": "Concatenar"
          },
          "Primeiro": {
            "etiqueta": "Primeiro"
          },
          "Último": {
            "etiqueta": "Último"
          },
          "Soma": {
            "etiqueta": "Soma"
          },
          "Média": {
            "etiqueta": "Média"
          },
          "Contar": {
            "etiqueta": "Contar"
          },
          "Definido pelo Utilizador": {
            "etiqueta": "Definido pelo Utilizador"
          }
        },
        "val": "Concatenar",
        "required": true
      },
      "crosstab.user_defined_str": {
        "type": "text",
        "etiqueta": "Valor Definido pelo Utilizador",
        "show_if": "transpose_type=='crosstab' && crosstab.method_for_aggregating_values=='User Defined'",
        "val": "x",
        "trim": "false",
        "breakLine": true
      },
      "crosstab.separator": {
        "type": "text",
        "etiqueta": "Separador",
        "show_if": "transpose_type=='crosstab' && method_for_aggregating_values=='Concatenate'",
        "val": ",",
        "trim": "false",
        "required": true,
        "breakLine": true
      }
    }
  }
}