{
  "options_box": {
    "type": "fieldset",
    "etiqueta": "Opções",
    "repeat": false,
    "fields": {
      "options.provider": {
        "type": "select",
        "etiqueta": "Prestador de pagamentos",
        "options": {
          "stripe": {
            "etiqueta": "Listra"
          },
          "paypal": {
            "etiqueta": "Paypal"
          },
          "payoneer": {
            "etiqueta": "Payoneer"
          }
        },
        "val": "stripe",
        "required": true
      },
      "options.type": {
        "type": "select",
        "etiqueta": "Tipo de pagamento,
        "options": {
          "charge": {
            "etiqueta": "Carga"
          },
          "transfer": {
            "etiqueta": "Transferência"
          }
        },
        "val": "charge",
        "required": true
      },
      "options.stripe.secret_key": {
        "type": "text",
        "etiqueta": "Chave Secreta de Listras",
        "show_if": "options.provider=='stripe'",
        "required": true,
        "val": "",
        "width": "100%",
        "breakLine": true
      }
    }
  }
}