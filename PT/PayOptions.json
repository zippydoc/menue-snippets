{
  "options": {
    "type": "fieldset",
    "label": "Opções",
    "repeat": false,
    "fields": {
      "options.provider": {
        "type": "select",
        "label": "Prestador de pagamentos",
        "options": {
          "stripe": {
            "label": "Listra"
          },
          "paypal": {
            "label": "Paypal"
          },
          "payoneer": {
            "label": "Payoneer"
          }
        },
        "val": "stripe",
        "required": true
      },
      "options.type": {
        "type": "select",
        "label": "Tipo de pagamento",
        "options": {
          "charge": {
            "label": "Carga"
          },
          "transfer": {
            "label": "Transferência"
          }
        },
        "val": "charge",
        "required": true
      },
      "options.stripe.secret_key": {
        "type": "password",
        "label": "Chave Secreta de Listras",
        "show_if": "options.provider=='stripe'",
        "required": true,
        "val": "",
        "width": "100%",
        "breakLine": true
      }
    }
  }
}