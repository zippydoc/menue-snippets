{
  "options": {
    "type": "fieldset",
    "label": "Opções",
    "repeat": false,
    "fields": {
      "options.provider": {
        "type": "hidden",
        "val": "stripe"
      },
      "options.type": {
        "type": "select",
        "label": "Tipo de pagamento",
        "options": {
          "charge": {
            "label": "Carga"
          },
          "transfer": {
            "label": "Transferência"
          }
        },
        "val": "charge",
        "required": true
      },
      "options.charge_type": {
        "type": "select",
        "label": "Tipo de Carga",
        "show_if": "options.provider=='stripe' && options.type=='charge'",
        "options": {
          "charge_without_invoice": {
            "label": "Cobrança imediata sem envio de factura"
          },
          "send_invoice": {
            "label": "Só enviar factura"
          },
          "send_invoice_immediate_charge": {
            "label": "Enviar factura e cobrança imediata"
          }
        },
        "val": "send_invoice_immediate_charge",
        "required": true
      },
      "options.stripe.secret_key": {
        "type": "password",
        "label": "Chave Secreta de Listras",
        "show_if": "options.provider=='stripe'",
        "required": true,
        "val": "",
        "width": "100%",
        "breakLine": true
      }
    }
  }
}