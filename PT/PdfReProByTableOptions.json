          "only_open_in_browser": {
            "label": "Abrir apenas PDF no browser"
          },
          "only_export_to_cloud": {
            "label": "Apenas exportar para a nuvem"
          },
          "both_export_to_cloud_and_open_in_browser": {
            "label": "Ambos exportam para a nuvem e abrem pdf no browser"
          }
