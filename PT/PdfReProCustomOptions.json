{
  "options_box": {
    "type": "fieldset",
    "label": "Opções",
    "repeat": false,
    "fields": {
      "options.script_name": {
        "type": "hidden",
        "val": "PdfReProCustom"
      },
      "options.type": {
        "type": "select",
        "label": "Tipo de Tarefa",
        "options": {
          "get_placeholders_of_all_templates": {
            "label": "Get Placeholders of all Templates"
          },
          "get_placeholders_of_template": {
            "label": "Get Placeholders of a Template"
          },
          "create": {
            "label": "Criar PDF e exportar para a nuvem"
          }
        },
        "val": "get_placeholders_of_all_templates",
        "required": true,
        "breakLine": true
      },
      "options.where_to_create": {
        "type": "select",
        "label": "Onde criar",
        "options": {
          "only_open_in_browser": {
            "label": "Abrir apenas PDF no browser"
          },
          "only_export_to_cloud": {
            "label": "Apenas exportar para a nuvem"
          },
          "both_export_to_cloud_and_open_in_browser": {
            "label": "Ambos exportam para a nuvem e abrem pdf no browser"
          }
        },
        "val": "only_open_in_browser",
        "required": true,
        "breakLine": true
      },
      "options.configure_by_table_help": {
        "type": "text",
        "label": "",
        "show_if": "options.type=='create'",
        "val": "Table Structure ( Template ID | Placeholder | Replace-Text )",
        "disabled": true,
        "width": "100%"
      },
      "options.table_id": {
        "type": "select",
        "label": "Selecionar Tabela",
        "show_if": "options.type=='create'",
        "bind": "TABLES",
        "empty": "",
        "required": true,
        "breakLine": true
      },
      "pdfrepro_credential_box": {
        "type": "fieldset",
        "label": "A sua própria chave API da conta PDFrePRO",
        "repeat": false,
        "fields": {
          "options.pdfrepro_credentials.api_key": {
            "type": "text",
            "label": "Chave API",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.pdfrepro_credentials.shared_key": {
            "type": "text",
            "label": "Chave Partilhada",
            "required": true,
            "width": "100%",
            "breakLine": true
          }
        }
      },
      "options.template_id": {
        "type": "text",
        "label": "Identificação do modelo",
        "show_if": "options.type=='get_placeholders_of_template'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.webservice": {
        "type": "select",
        "label": "Selecionar Serviço Web",
        "show_if": "options.type=='create'",
        "options": {
          "ms_one_drive": {
            "label": "Microsoft OneDrive"
          },
          "dropbox": {
            "label": "Dropbox"
          },
          "google_drive": {
            "label": "Google Drive"
          }
        },
        "val": "ms_one_drive",
        "required": true,
        "breakLine": true
      },
      "export_link_token_frame": {
        "type": "fieldset",
        "label": "Export Link",
        "show_if": "options.type=='create'",
        "repeat": false,
        "fields": {
          "options.github_url": {
            "type": "text",
            "label": "Introduzir hiperligação, por exemplo https://github.com/zippydoc/test",
            "show_if": "options.webservice=='github'",
            "val": "",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.export_dir": {
            "type": "text",
            "label": "Introduza por exemplo /MeuZippyDocFiles/SubDir/",
            "show_if": "options.webservice!='github'",
            "val": "",
            "width": "100%",
            "breakLine": true
          },
          "options.github_token": {
            "type": "text",
            "label": "Especifique o código de acesso pessoal Github que tem permissão de escrita:",
            "show_if": "options.webservice=='github'",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.google_authorization_code": {
            "type": "text",
            "label": "Google OAuth Authorization Code with scope https://www.googleapis.com/auth/drive. Pode obtê-lo aqui https://developers.google.com/oauthplayground/",
            "show_if": "options.webservice=='google_drive'",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.dropbox_authorization_code": {
            "type": "text",
            "label": "Dropbox Authorization Code. You can get it here https://www.dropbox.com/oauth2/authorize?client_id=9i7woztjp94jrkw&response_type=code",
            "show_if": "options.webservice=='dropbox'",
            "required": true,
            "width": "100%",
            "breakLine": true
          }
        }
      }
    }
  }
}