{
  "options": {
    "type": "fieldset",
    "label": "Opções de Seleção",
    "repeat": false,
    "fields": {
      "options.task_symbol": {
        "type": "hidden",
        "val": "periodicy_by_menu"
      },
      "options.custom.table": {
        "type": "fieldset",
        "label": "Posição de Planeamento",
        "repeat": true,
        "fields": {
          "item": {
            "type": "text",
            "label": "Artigo",
            "val": "",
            "required": true
          },
          "position": {
            "type": "text",
            "label": "Posição",
            "val": "",
            "required": true,
            "breakLine": true
          },
          "amount": {
            "type": "number",
            "label": "Montante",
            "val": "",
            "required": true
          },
          "initial_date": {
            "type": "date",
            "label": "Data Inicial",
            "val": "",
            "required": true
          },
          "periodicy": {
            "type": "select",
            "label": "Periodicidade",
            "required": true,
            "options": {
              "One-Off": {
                "label": "One-Off"
              },
              "Daily": {
                "label": "Diariamente"
              },
              "Weekly": {
                "label": "Semanalmente"
              },
              "Monthly": {
                "label": "Mensal"
              },
              "Quarterly": {
                "label": "Trimestralmente"
              },
              "Yearly": {
                "label": "Anualmente"
              }
            },
            "val": "One-Off"
          },
          "growth": {
            "type": "number",
            "label": "Crescimento em %",
            "show_if": "this.periodicy!='One-Off'",
            "val": "",
            "required": true
          },
          "growth_period": {
            "type": "select",
            "label": "Período de Crescimento",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Weekly": {
                "label": "Semanalmente"
              },
              "Monthly": {
                "label": "Mês a Mês"
              },
              "Quarterly": {
                "label": "Trimestre a Trimestre"
              },
              "Yearly": {
                "label": "Ano a Ano"
              }
            },
            "val": "Weekly"
          },
          "growth_pattern": {
            "type": "select",
            "label": "Padrão de Crescimento",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Linear": {
                "label": "Linear"
              },
              "Compounding": {
                "label": "Compostagem"
              },
              "Jump-Fix Linear": {
                "label": "Jump-Fix Linear"
              },
              "Jump-Fix Compounding": {
                "label": "Jump-Fix Compounding"
              }
            },
            "val": "Compounding"
          },
          "final_date": {
            "type": "date",
            "label": "Data Final",
            "show_if": "this.periodicy!='One-Off'",
            "val": ""
          },
          "delete": {
            "type": "button",
            "label": "Apagar",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.end_date": {
        "type": "date",
        "label": "Fim de Data de Tabela",
        "val": "",
        "required": true,
        "style": "width: 300px"
      }
    }
  }
}