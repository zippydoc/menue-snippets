{
  "options": {
    "type": "fieldset",
    "label": "Opções de Seleção",
    "repeat": false,
    "fields": {
      "options.type": {
        "type": "hidden",
        "val": "custom"
      },
      "options.custom.table": {
        "type": "fieldset",
        "label": "Posição de Planeamento",
        "show_if": "options.type=='custom'",
        "repeat": true,
        "fields": {
          "item": {
            "type": "text",
            "label": "Artigo",
            "val": "",
            "required": true
          },
          "position": {
            "type": "text",
            "label": "Posição",
            "val": "",
            "required": true,
            "breakLine": true
          },
          "amount": {
            "type": "number",
            "label": "Montante",
            "val": "",
            "required": true
          },
          "initial_date": {
            "type": "date",
            "label": "Data Inicial",
            "val": "",
            "required": true
          },
          "periodicy": {
            "type": "select",
            "label": "Periodicidade",
            "required": true,
            "options": {
              "One-Off: {
                "label": "One-Off
              },
              "Diariamente".: {
                "label": "Diariamente".
              },
              "Semanalmente": {
                "label": "Semanalmente"
              },
              "Mensal": {
                "label": "Mensal"
              },
              "Trimestralmente": {
                "label": "Trimestralmente"
              },
              "Anualmente": {
                "label": "Anualmente"
              }
            },
            "val": "One-Off
          },
          "growth": {
            "type": "number",
            "label": "Growth in %",
            "show_if": "this.periodicy!='One-Off'",
            "val": "",
            "required": true
          },
          "growth_period": {
            "type": "select",
            "label": "Período de Crescimento",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Semanalmente": {
                "label": "Semanalmente"
              },
              "Mensal": {
                "label": "Mês a Mês"
              },
              "Trimestralmente": {
                "label": "Trimestre a Trimestre"
              },
              "Anualmente": {
                "label": "Ano a Ano"
              }
            },
            "val": "Semanalmente"
          },
          "growth_pattern": {
            "type": "select",
            "label": "Padrão de Crescimento",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Compostagem": {
                "label": "Compostagem"
              },
              "Linear": {
                "label": "Linear"
              },
              "Jump-Fix": {
                "label": "Jump-Fix"
              }
            },
            "val": "Compostagem"
          },
          "final_date": {
            "type": "date",
            "label": "Data Final",
            "show_if": "this.periodicy!='One-Off'",
            "val": ""
          },
          "delete": {
            "type": "button",
            "label": "Apagar",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.end_date": {
        "type": "date",
        "label": "Fim de Data de Tabela",
        "show_if": "options.type=='process' || options.type=='custom'",
        "val": "",
        "required": true,
        "style": "width: 300px"
      }
    }
  }
}