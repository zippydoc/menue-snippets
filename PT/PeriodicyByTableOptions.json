{
  "options": {
    "type": "fieldset",
    "label": "Selecionar Opções de Periodicidade",
    "repeat": false,
    "fields": {
      "options.task_symbol": {
        "type": "hidden",
        "val": "periodicy_by_table"
      },
      "options.standard_table": {
        "type": "checkbox",
        "label": "Tabela de Periodicidade Padrão",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "style": "margin-top: 10px",
        "breakLine": true
      },
      "options.initial_date": {
        "type": "select",
        "label": "Data Inicial",
        "show_if": "options.standard_table=='false'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true
      },
      "options.period": {
        "type": "select",
        "label": "Periodicidade (por exemplo, Mensal, Trimestral)",
        "show_if": "options.standard_table=='false'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true
      },
      "options.final_date": {
        "type": "select",
        "label": "Data Final",
        "show_if": "options.standard_table=='false'",
        "table": "table_id",
        "bind": "COLUMNS",
        "breakLine": true
      },
      "options.volume": {
        "type": "select",
        "label": "Montante",
        "show_if": "options.standard_table=='false'",
        "table": "table_id",
        "bind": "COLUMNS"
      },
      "options.growth": {
        "type": "select",
        "label": "Crescimento",
        "show_if": "options.standard_table=='false'",
        "table": "table_id",
        "bind": "COLUMNS"
      },
      "options.growth_period": {
        "type": "select",
        "label": "Período de Crescimento",
        "show_if": "options.standard_table=='false'",
        "options": {
          "selected_period": {
            "label": "Igual à Periodicidade"
          },
          "week_on_week": {
            "label": "Semana a Semana"
          },
          "month_on_month": {
            "label": "Mês a Mês"
          },
          "quarter_on_quarter": {
            "label": "Trimestre a Trimestre"
          },
          "year_on_year": {
            "label": "Ano a Ano"
          },
          "column": {
            "label": "Selecionar Coluna"
          }
        },
        "val": "selected_period"
      },
      "options.growth_period_column": {
        "type": "select",
        "label": "Coluna de Período de Crescimento",
        "show_if": "options.standard_table=='false' && options.growth_period=='column'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.use_growth_pattern_column": {
        "type": "checkbox",
        "label": "Usar Padrão de Crescimento",
        "show_if": "options.standard_table=='false'",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "options.growth_pattern_column": {
        "type": "select",
        "label": "Padrão de Crescimento",
        "show_if": "options.standard_table=='false' && options.use_growth_pattern_column=='true'",
        "table": "table_id",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.end_date": {
        "type": "date",
        "label": "Fim de Data de Tabela",
        "val": "",
        "required": true,
        "style": "width: 300px"
      }
    }
  }
}