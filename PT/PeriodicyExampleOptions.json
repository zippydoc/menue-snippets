{
  "options": {
    "type": "fieldset",
    "label": "Selecionar Opções de Periodicidade",
    "repeat": false,
    "fields": {
      "options.type": {
        "type": "hidden",
        "val": "generate"
      },
      "input": {
        "type": "fieldset",
        "label": "Selecionar Tabela de Entrada",
        "show_if": "options.type=='process'",
        "repeat": false,
        "fields": {
          "input_table": {
            "type": "select",
            "label": "Selecionar Tabela",
            "bind": "TABLES",
            "empty": "",
            "required": true
          },
          "remove_input_table_after_processing": {
            "type": "hidden",
            "val": "false"
          },
          "is_word": {
            "type": "hidden",
            "val": "false"
          }
        },
        "breakLine": true
      },
      "amount_formatting_frame": {
        "type": "fieldset",
        "label": "Formatação da Coluna de Montante",
        "show_if": "options.type=='generate'",
        "repeat": false,
        "fields": {
          "options.amount.format__category": {
            "type": "select",
            "label": "Formato",
            "required": true,
            "options": {
              "standard": {
                "label": "Padrão"
              },
              "number": {
                "label": "Número"
              },
              "percentage": {
                "label": "Percentagem"
              },
              "currency": {
                "label": "Moeda"
              }
            },
            "val": "currency"
          },
          "options.amount.format__rounding": {
            "type": "select",
            "label": "Arredondamento",
            "show_if": "options.amount.format__category=='number' || options.amount.format__category=='percentage' || options.amount.format__category=='currency'",
            "required": true,
            "options": {
              "no_rounding": {
                "label": "Arredondamento de números"
              },
              "0": {
                "label": "0 dígitos"
              },
              "1": {
                "label": "1 dígito"
              },
              "2": {
                "label": "2 dígitos"
              },
              "3": {
                "label": "3 dígitos"
              },
              "4": {
                "label": "4 dígitos"
              },
              "5": {
                "label": "5 dígitos"
              },
              "6": {
                "label": "6 dígitos"
              },
              "7": {
                "label": "7 dígitos"
              },
              "8": {
                "label": "8 dígitos"
              },
              "9": {
                "label": "9 dígitos"
              }
            },
            "val": "2"
          },
          "options.amount.format__use_1000_separator": {
            "type": "checkbox",
            "label": "Use 1000 Separator(.)",
            "show_if": "options.amount.format__category=='number' || options.amount.format__category=='percentage' || options.amount.format__category=='currency'",
            "val": "true",
            "isOn": "true",
            "isOff": "false"
          },
          "options.amount.format__currency_symbol": {
            "type": "select",
            "label": "Símbolo",
            "show_if": "options.amount.format__category=='currency'",
            "required": true,
            "options": {
              "dollar": {
                "label": "$"
              },
              "euro": {
                "label": "€"
              },
              "pound": {
                "label": "£"
              }
            },
            "val": "dollar"
          }
        }
      },
      "options.standard_table": {
        "type": "checkbox",
        "label": "Tabela de Periodicidade Padrão",
        "show_if": "options.type=='process'",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "style": "margin-top: 10px",
        "breakLine": true
      },
      "options.initial_date": {
        "type": "select",
        "label": "Data Inicial",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true
      },
      "options.period": {
        "type": "select",
        "label": "Periodicidade (por exemplo, Mensal, Trimestral)",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true
      },
      "options.final_date": {
        "type": "select",
        "label": "Data Final",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS",
        "breakLine": true
      },
      "options.volume": {
        "type": "select",
        "label": "Montante",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS"
      },
      "options.growth": {
        "type": "select",
        "label": "Crescimento",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS"
      },
      "options.growth_period": {
        "type": "select",
        "label": "Período de Crescimento",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "options": {
          "selected_period": {
            "label": "Igual à Periodicidade"
          },
          "week_on_week": {
            "label": "Semana a Semana"
          },
          "month_on_month": {
            "label": "Mês a Mês"
          },
          "quarter_on_quarter": {
            "label": "Trimestre a Trimestre"
          },
          "year_on_year": {
            "label": "Ano a Ano"
          },
          "column": {
            "label": "Selecionar Coluna"
          }
        },
        "val": "selected_period"
      },
      "options.growth_period_column": {
        "type": "select",
        "label": "Coluna de Período de Crescimento",
        "show_if": "options.type=='process' && options.standard_table=='false' && options.growth_period=='column'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.use_growth_pattern_column": {
        "type": "checkbox",
        "label": "Usar Padrão de Crescimento",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "options.growth_pattern_column": {
        "type": "select",
        "label": "Padrão de Crescimento",
        "show_if": "options.type=='process' && options.standard_table=='false' && options.use_growth_pattern_column=='true'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.custom.table": {
        "type": "fieldset",
        "label": "Posição de Planeamento",
        "show_if": "options.type=='custom'",
        "repeat": true,
        "fields": {
          "item": {
            "type": "text",
            "label": "Artigo",
            "val": "",
            "required": true
          },
          "position": {
            "type": "text",
            "label": "Posição",
            "val": "",
            "required": true,
            "breakLine": true
          },
          "amount": {
            "type": "number",
            "label": "Montante",
            "val": "",
            "required": true
          },
          "amount_format__category": {
            "type": "select",
            "label": "Formato do montante",
            "show_if" : "$index == 0",
            "required": true,
            "options": {
              "standard": {
                "label": "Padrão"
              },
              "number": {
                "label": "Número"
              },
              "percentage": {
                "label": "Percentagem"
              },
              "text": {
                "label": "Texto"
              },
              "date": {
                "label": "Data"
              },
              "currency": {
                "label": "Moeda"
              }
            },
            "val": "number"
          },
          "amount_format__rounding": {
            "type": "select",
            "label": "Arredondamento",
            "show_if": "$index == 0 && (this.amount_format__category=='number' || this.amount_format__category=='percentage' || this.amount_format__category=='currency')",
            "required": true,
            "options": {
              "no_rounding": {
                "label": "Arredondamento de números"
              },
              "0": {
                "label": "0 dígitos"
              },
              "1": {
                "label": "1 dígito"
              },
              "2": {
                "label": "2 dígitos"
              },
              "3": {
                "label": "3 dígitos"
              },
              "4": {
                "label": "4 dígitos"
              },
              "5": {
                "label": "5 dígitos"
              },
              "6": {
                "label": "6 dígitos"
              },
              "7": {
                "label": "7 dígitos"
              },
              "8": {
                "label": "8 dígitos"
              },
              "9": {
                "label": "9 dígitos"
              }
            },
            "val": "2"
          },
          "amount_format__use_1000_separator": {
            "type": "checkbox",
            "label": "Use 1000 Separator(.)",
            "show_if": "$index == 0 && (this.amount_format__category=='number' || this.amount_format__category=='percentage' || this.amount_format__category=='currency')",
            "val": "true",
            "isOn": "true",
            "isOff": "false"
          },
          "amount_format__currency_symbol": {
            "type": "select",
            "label": "Símbolo",
            "show_if": "$index == 0 && (this.amount_format__category=='currency')",
            "required": true,
            "options": {
              "dollar": {
                "label": "$"
              },
              "euro": {
                "label": "€"
              },
              "pound": {
                "label": "£"
              }
            },
            "val": "dollar"
          },
          "amount_format__date_format": {
            "type": "select",
            "label": "Tipo",
            "show_if": "$index == 0 && (this.amount_format__category=='date')",
            "required": true,
            "options": {
              "mm/dd/yyyy": {
                "label": "3/14/2012"
              },
              "D, M dd, Y": {
                "label": "Quarta-feira, 14 de Março de 2012"
              },
              "yyyy-mm-dd": {
                "label": "2012-03-14"
              }
            },
            "val": "mm/dd/yyyy",
            "breakLine": true
          },
          "initial_date": {
            "type": "date",
            "label": "Data Inicial",
            "val": "",
            "required": true
          },
          "initial_date_format__date_format": {
            "type": "select",
            "label": "Formato da Data Inicial",
            "show_if": "$index == 0",
            "required": true,
            "options": {
              "mm/dd/yyyy": {
                "label": "3/14/2012"
              },
              "D, M dd, Y": {
                "label": "Quarta-feira, 14 de Março de 2012"
              },
              "yyyy-mm-dd": {
                "label": "2012-03-14"
              }
            },
            "val": "mm/dd/yyyy",
            "breakLine": true
          },
          "periodicy": {
            "type": "select",
            "label": "Periodicidade",
            "required": true,
            "options": {
              "One-Off: {
                "label": "One-Off
              },
              "Diariamente".: {
                "label": "Diariamente".
              },
              "Work-Daily": {
                "label": "Work-Daily"
              },
              "Semanalmente": {
                "label": "Semanalmente"
              },
              "Mensal": {
                "label": "Mensal"
              },
              "Trimestralmente": {
                "label": "Trimestralmente"
              },
              "Anualmente": {
                "label": "Anualmente"
              }
            },
            "val": "One-Off
          },
          "growth": {
            "type": "number",
            "label": "Crescimento",
            "show_if": "this.periodicy!='One-Off'",
            "val": "",
            "required": true
          },
          "growth_period": {
            "type": "select",
            "label": "Período de Crescimento",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Semanalmente": {
                "label": "Semanalmente"
              },
              "Mensal": {
                "label": "Mês a Mês"
              },
              "Trimestralmente": {
                "label": "Trimestre a Trimestre"
              },
              "Anualmente": {
                "label": "Ano a Ano"
              }
            },
            "val": "Semanalmente"
          },
          "growth_pattern": {
            "type": "select",
            "label": "Padrão de Crescimento",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Compostagem": {
                "label": "Compostagem"
              },
              "Linear": {
                "label": "Linear"
              },
              "Jump-Fix": {
                "label": "Jump-Fix"
              }
            },
            "val": "Compostagem"
          },
          "final_date": {
            "type": "date",
            "label": "Data Final",
            "show_if": "this.periodicy!='One-Off'",
            "val": ""
          },
          "delete": {
            "type": "button",
            "label": "Apagar",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.end_date": {
        "type": "date",
        "label": "Fim de Data de Tabela",
        "show_if": "options.type=='process' || options.type=='custom'",
        "val": "",
        "required": true,
        "style": "width: 300px"
      }
    }
  }
}