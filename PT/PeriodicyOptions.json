{
  "options": {
    "type": "fieldset", 
    "label": "Selecionar Opções de Periodicidade", 
    "repeat": false, 
    "fields": {
      "options.type": {
        "type": "select", 
        "label": "Tipo", 
        "options": {
          "generate": {
            "label": "Gerar Exemplo de Periodicidade"
          }, 
          "process": {
            "label": "Processar Tabela de Periodicidade"
          }
        }, 
        "val": "generate", 
        "breakLine": true
      }, 
      "amount_formatting_frame": {
        "type": "fieldset", 
        "label": "Amount Column Formatting", 
        "show_if": "options.type=='generate'", 
        "repeat": false, 
        "fields": {
          "options.amount.format__category": {
            "type": "select", 
            "label": "Formato", 
            "required": true, 
            "options": {
              "standard": {
                "label": "Padrão"
              }, 
              "number": {
                "label": "Número"
              }, 
              "percentage": {
                "label": "Percentagem"
              }, 
              "currency": {
                "label": "Moeda"
              }
            }, 
            "val": "currency"
          }, 
          "options.amount.format__rounding": {
            "type": "select", 
            "label": "Arredondamento", 
            "show_if": "options.amount.format__category=='number' || options.amount.format__category=='percentage' || options.amount.format__category=='currency'", 
            "required": true, 
            "options": {
              "no_rounding": {
                "label": "Arredondamento de números"
              }, 
              "0": {
                "label": "0 dígitos"
              }, 
              "1": {
                "label": "1 dígito"
              }, 
              "2": {
                "label": "2 dígitos"
              }, 
              "3": {
                "label": "3 dígitos"
              }, 
              "4": {
                "label": "4 dígitos"
              }, 
              "5": {
                "label": "5 dígitos"
              }, 
              "6": {
                "label": "6 dígitos"
              }, 
              "7": {
                "label": "7 dígitos"
              }, 
              "8": {
                "label": "8 dígitos"
              }, 
              "9": {
                "label": "9 dígitos"
              }
            }, 
            "val": "2"
          }, 
          "options.amount.format__use_1000_separator": {
            "type": "checkbox", 
            "label": "Usar Separador(.) 1000", 
            "show_if": "options.amount.format__category=='number' || options.amount.format__category=='percentage' || options.amount.format__category=='currency'", 
            "val": "true", 
            "isOn": "true", 
            "isOff": "false"
          }, 
          "options.amount.format__currency_symbol": {
            "type": "select", 
            "label": "Símbolo", 
            "show_if": "options.amount.format__category=='currency'", 
            "required": true, 
            "options": {
              "dollar": {
                "label": "$"
              }, 
              "euro": {
                "label": "€"
              }, 
              "pound": {
                "label": "£"
              }
            }, 
            "val": "dollar"
          }
        }
      }, 
      "options.standard_table": {
        "type": "checkbox", 
        "label": "Tabela de Periodicidade Padrão", 
        "show_if": "options.type=='process'", 
        "val": "true", 
        "isOn": "true", 
        "isOff": "false", 
        "breakLine": true
      }, 
      "options.initial_date": {
        "type": "select", 
        "label": "Data Inicial", 
        "show_if": "options.type=='process' && options.standard_table=='false'", 
        "table": "input_table", 
        "bind": "COLUMNS", 
        "required": true
      }, 
      "options.period": {
        "type": "select", 
        "label": "Periodicidade (ex. Mensal, Trimestral)", 
        "show_if": "options.type=='process' && options.standard_table=='false'", 
        "table": "input_table", 
        "bind": "COLUMNS", 
        "required": true
      }, 
      "options.final_date": {
        "type": "select", 
        "label": "Data Final", 
        "show_if": "options.type=='process' && options.standard_table=='false'", 
        "table": "input_table", 
        "bind": "COLUMNS", 
        "breakLine": true
      }, 
      "options.volume": {
        "type": "select", 
        "label": "Montante", 
        "show_if": "options.type=='process' && options.standard_table=='false'", 
        "table": "input_table", 
        "bind": "COLUMNS"
      }, 
      "options.growth": {
        "type": "select", 
        "label": "Crescimento", 
        "show_if": "options.type=='process' && options.standard_table=='false'", 
        "table": "input_table", 
        "bind": "COLUMNS"
      }, 
      "options.growth_period": {
        "type": "select", 
        "label": "Período de Crescimento", 
        "show_if": "options.type=='process' && options.standard_table=='false'", 
        "options": {
          "selected_period": {
            "label": "Igual à Periodicidade"
          }, 
          "week_on_week": {
            "label": "Semana a Semana"
          }, 
          "month_on_month": {
            "label": "Mês a Mês"
          }, 
          "quarter_on_quarter": {
            "label": "Trimestre a Trimestre"
          }, 
          "year_on_year": {
            "label": "Ano a Ano"
          }, 
          "column": {
            "label": "Selecionar Coluna"
          }
        }, 
        "val": "selected_period"
      }, 
      "options.growth_period_column": {
        "type": "select", 
        "label": "Coluna de Período de Crescimento", 
        "show_if": "options.type=='process' && options.standard_table=='false' && options.growth_period=='column'", 
        "table": "input_table", 
        "bind": "COLUMNS", 
        "required": true, 
        "breakLine": true
      }, 
      "options.use_growth_pattern_column": {
        "type": "checkbox", 
        "label": "Usar Padrão de Crescimento", 
        "show_if": "options.type=='process' && options.standard_table=='false'", 
        "val": "false", 
        "isOn": "true", 
        "isOff": "false"
      }, 
      "options.growth_pattern_column": {
        "type": "select", 
        "label": "Padrão de Crescimento", 
        "show_if": "options.type=='process' && options.standard_table=='false' && options.use_growth_pattern_column=='true'", 
        "table": "input_table", 
        "bind": "COLUMNS", 
        "required": true, 
        "breakLine": true
      }, 
      "options.end_date": {
        "type": "date", 
        "label": "Fim de Data de Tabela", 
        "show_if": "options.type=='process'", 
        "val": "", 
        "required": true, 
        "style": "width: 300px"
      }
    }
  }
}