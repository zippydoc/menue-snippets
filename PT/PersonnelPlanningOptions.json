{
  "options": {
    "type": "fieldset",
    "label": "Opções de Seleção",
    "repeat": false,
    "fields": {
      "task_label": {
        "type": "hidden",
        "val": "personnel_planning"
      },
      "options.type": {
        "type": "hidden",
        "val": "custom"
      },
      "options.custom.table": {
        "type": "fieldset",
        "label": "Posição de Planeamento",
        "repeat": true,
        "fields": {
          "item": {
            "type": "text",
            "label": "Nome",
            "val": "",
            "required": true
          },
          "position": {
            "type": "select",
            "label": "Posição",
            "options": {
              "fix salary": {
                "label": "fixar salário"
              },
              "bonus": {
                "label": "bónus"
              },
              "other compensation": {
                "label": "outra compensação"
              }
            },
            "val": "fix salary",
            "required": true
          },
          "amount": {
            "type": "number",
            "label": "Montante",
            "val": "",
            "required": true
          },
          "initial_date": {
            "type": "date",
            "label": "Data Inicial",
            "val": "",
            "required": true
          },
          "periodicy": {
            "type": "select",
            "label": "Periodicidade",
            "required": true,
            "options": {
              "One-Off": {
                "label": "One-Off"
              },
              "Daily": {
                "label": "Diariamente"
              },
              "Work-Daily": {
                "label": "Work-Daily"
              },
              "Weekly": {
                "label": "Semanalmente"
              },
              "Monthly": {
                "label": "Mensal"
              },
              "Quarterly": {
                "label": "Trimestralmente"
              },
              "Yearly": {
                "label": "Anualmente"
              }
            },
            "val": "One-Off"
          },
          "growth": {
            "type": "number",
            "label": "Crescimento",
            "show_if": "this.periodicy!='One-Off'",
            "val": "",
            "required": true
          },
          "growth_period": {
            "type": "select",
            "label": "Período de Crescimento",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Weekly": {
                "label": "Semanalmente"
              },
              "Monthly": {
                "label": "Mês a Mês"
              },
              "Quarterly": {
                "label": "Trimestre a Trimestre"
              },
              "Yearly": {
                "label": "Ano a Ano"
              }
            },
            "val": "Weekly"
          },
          "growth_pattern": {
            "type": "select",
            "label": "Padrão de Crescimento",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Compounding": {
                "label": "Compostagem"
              },
              "Linear": {
                "label": "Linear"
              },
              "Jump-Fix": {
                "label": "Jump-Fix"
              }
            },
            "val": "Compounding"
          },
          "final_date": {
            "type": "date",
            "label": "Data Final",
            "show_if": "this.periodicy!='One-Off'",
            "val": ""
          },
          "delete": {
            "type": "button",
            "label": "Apagar",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.end_date": {
        "type": "date",
        "label": "Fim de Data de Tabela",
        "show_if": "options.type=='process' || options.type=='custom'",
        "val": "",
        "required": true,
        "style": "width: 300px"
      }
    }
  }
}