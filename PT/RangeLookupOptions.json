{
  "options": {
    "type": "fieldset",
    "label": "Opções de Seleção",
    "repeat": false,
    "fields": {
      "options.task_type": {
        "type": "select",
        "label": "Tipo de Tarefa",
        "required": true,
        "options": {
          "generate_lookup_table": {
            "label": "Gerar Tabela de Pesquisa"
          },
          "apply_lookup_table": {
            "label": "Aplicar Tabela de Pesquisa"
          },
          "apply_lookup_table_to_cells": {
            "label": "Aplicar Tabela de Pesquisa às Células"
          }
        },
        "val": "generate_lookup_table"
      },
      "options.pattern_type": {
        "type": "hidden",
        "val": "number_range"
      },
      "duplicate_option_box": {
        "type": "fieldset",
        "label": "Opção de Duplicar Padrões",
        "show_if": "options.task_type=='label_duplicates' || (options.task_type=='generate_lookup_table' && options.pattern_type=='duplicate_pattern')",
        "repeat": false,
        "fields": {
          "options.minimum_number_of_matching_characters": {
            "type": "text",
            "label": "Número Mínimo de Caracteres Correspondentes",
            "val": "3",
            "required": true,
            "style": "min-width: 240px"
          },
          "options.minimum_number_of_duplicates": {
            "type": "text",
            "label": "Número Mínimo de Duplicados",
            "val": "2",
            "required": true,
            "style": "min-width: 240px",
            "breakLine": true
          }
        }
      },
      "number_range_option_box": {
        "type": "fieldset",
        "label": "Opção de Intervalos Numéricos",
        "show_if": "options.task_type=='generate_lookup_table' && options.pattern_type=='number_range'",
        "repeat": false,
        "fields": {
          "options.number_range.range_type": {
            "type": "select",
            "label": "Tipo de Intervalo",
            "required": true,
            "options": {
              "equal_interval": {
                "label": "N Intervalos Iguais"
              },
              "equal_range": {
                "label": "Igualar Intervalo"
              },
              "custom_range": {
                "label": "Personalizar Intervalo"
              }
            },
            "val": "equal_interval"
          },
          "options.number_range.n_value": {
            "type": "text",
            "label": "N",
            "show_if": "options.number_range.range_type=='equal_interval'",
            "val": "3",
            "required": true
          },
          "options.number_range.range_value": {
            "type": "text",
            "label": "Intervalo",
            "show_if": "options.number_range.range_type=='equal_range'",
            "val": "10",
            "required": true
          },
          "options.number_range.custom_ranges": {
            "type": "fieldset",
            "label": "Adicionar Intervalo Padrão Personalizado",
            "show_if": "options.number_range.range_type=='custom_range'",
            "repeat": true,
            "fields": {
              "pattern": {
                "type": "text",
                "label": "Padrão",
                "val": "0<=x<10",
                "required": true
              },
              "label": {
                "type": "text",
                "label": "Rotular",
                "val": "positive10",
                "required": true
              },
              "delete": {
                "type": "button",
                "label": "Apagar",
                "function": "DELETE_ROW"
              }
            }
          }
        }
      },
      "options.is_custom_lookup_table": {
        "type": "checkbox",
        "label": "Tabela de Procura Personalizada",
        "show_if": "options.task_type=='apply_lookup_table' || options.task_type=='apply_regex_table' || options.task_type=='apply_lookup_table_to_cells' || options.task_type=='apply_regex_table_to_cells'",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "lookup_table_frame": {
        "type": "fieldset",
        "label": "",
        "show_if": "options.task_type=='apply_lookup_table' || options.task_type=='apply_regex_table' || options.task_type=='apply_lookup_table_to_cells' || options.task_type=='apply_regex_table_to_cells'",
        "repeat": false,
        "fields": {
          "options.lookup_table_id": {
            "type": "select",
            "label": "Tabela de Pesquisa",
            "show_if": "options.is_custom_lookup_table=='false'",
            "bind": "TABLES",
            "empty": "",
            "required": true,
            "breakLine": true
          },
          "options.custom_lookup_table": {
            "type": "fieldset",
            "label": "Tabela de Procura Personalizada",
            "show_if": "options.is_custom_lookup_table=='true'",
            "repeat": true,
            "fields": {
              "lookup": {
                "type": "text",
                "label": "Pesquisar",
                "placeholder": "10 < x <= 100",
                "val": "",
                "required": true
              },
              "label": {
                "type": "text",
                "label": "Rotular",
                "placeholder": "10 < x <= 100",
                "val": "",
                "required": true
              },
              "delete": {
                "type": "button",
                "label": "Apagar",
                "function": "DELETE_ROW"
              }
            }
          },
          "options.partial_match": {
            "type": "checkbox",
            "label": "Correspondência Parcial",
            "show_if": "options.pattern_type=='duplicate_pattern' && (options.task_type=='apply_lookup_table' || options.task_type=='apply_lookup_table_to_cells')",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "style": "margin-top: 10px",
            "breakLine": true
          },
          "options.case_sensitive": {
            "type": "checkbox",
            "label": "Sensível a Maiúsculas e Minúsculas",
            "show_if": "options.pattern_type=='duplicate_pattern' && (options.task_type=='apply_lookup_table' || options.task_type=='apply_lookup_table_to_cells')",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "options.use_delimiter": {
            "type": "checkbox",
            "label": "Personalizar Delimitador",
            "show_if": "options.task_type=='apply_lookup_table' || options.task_type=='apply_lookup_table_to_cells'",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "style": "margin-top: 10px"
          },
          "options.delimiter": {
            "type": "text",
            "label": "Introduzir Delimitador",
            "show_if": "options.use_delimiter=='true' && (options.task_type=='apply_lookup_table' || options.task_type=='apply_lookup_table_to_cells')",
            "val": ";",
            "required": true,
            "breakLine": true
          }
        }
      },
      "options.input_table.use_filter": {
        "type": "checkbox",
        "label": "Utilizar Filtro para Tabela de Entrada",
        "show_if": "options.task_type=='apply_lookup_table' || options.task_type=='apply_regex_table' || options.task_type=='apply_lookup_table_to_cells' || options.task_type=='apply_regex_table_to_cells'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "style": "margin-top: 10px",
        "breakLine": true
      },
      "input_table_filter_box": {
        "type": "fieldset",
        "label": "Introduzir Opções de Filtro da Tabela",
