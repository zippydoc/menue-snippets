{
  "options": {
    "type": "fieldset",
    "label": "Opções de Seleção",
    "repeat": false,
    "fields": {
      "type": {
        "type": "select",
        "label": "Selecionar Tipo",
        "val": "first_n",
        "options": {
          "first_n": {
            "label": "Primeiro N"
          },
          "last_n": {
            "label": "Último N"
          },
          "custom_selection": {
            "label": "Personalizar Seleção"
          },
          "skip_first_n": {
            "label": "Avançar Primeiro N"
          },
          "skip_last_n": {
            "label": "Avançar Último N"
          },
          "first_n_percent": {
            "label": "Primeiro N%"
          },
          "last_n_percent": {
            "label": "Último N%"
          },
          "random_n_records": {
            "label": "N Aleatório"
          },
          "random_n_percent": {
            "label": "N% Aleatório"
          },
          "random_choice_1_n": {
            "label": "Escolha Aleatória 1:N"
          },
          "every_nth_record": {
            "label": "Cada Nº Registo"
          }
        },
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "n": {
        "type": "text",
        "label": "Introduzir N",
        "show_if": "type!='custom_selection'",
        "val": "1",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "ranges": {
        "type": "text",
        "label": "Introduzir Intervalos",
        "show_if": "type=='custom_selection'",
        "val": "-2; 4-6; 9; 12+",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "set_offset": {
        "type": "checkbox",
        "label": "Compensação",
        "show_if": "type=='every_nth_record'",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "offset": {
        "type": "text",
        "label": "Compensação",
        "show_if": "type=='every_nth_record' && set_offset=='true'",
        "val": "1",
        "required": true,
        "breakLine": true
      },
      "group_by_column": {
        "type": "checkbox",
        "label": "Agrupar por coluna",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "columns_to_group_box": {
        "type": "fieldset",
        "label": "Agrupar por coluna",
        "show_if": "group_by_column=='true'",
        "repeat": false,
        "fields": {
          "columns_to_group": {
            "type": "select",
            "label": "Selecionar Colunas de Grupo",
            "required": true,
            "width": "100%",
            "table": "table_id",
            "multiple": true,
            "bind": "COLUMNS",
            "breakLine": true
          }
        }
      }
    }
  }
}