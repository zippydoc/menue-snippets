{
  "options": {
    "type": "fieldset",
    "label": "Opções de Seleção",
    "repeat": false,
    "fields": {
      "options.split_method": {
        "type": "select",
        "label": "Método de Divisão",
        "required": true,
        "options": {
          "standard": {
            "label": "Padrão"
          },
          "regex": {
            "label": "Expressão Regular"
          }
        },
        "val": "standard"
      },
      "options.split_type": {
        "type": "select",
        "label": "Tipo de divisão",
        "required": true,
        "options": {
          "split_to_columns": {
            "label": "Dividir em Colunas"
          },
          "split_to_rows": {
            "label": "Dividir em Linhas"
          }
        },
        "val": "split_to_columns"
      },
      "options.standard_delimiter": {
        "type": "select",
        "label": "Delimitador de Divisão",
        "show_if": "options.split_method=='standard'",
        "required": true,
        "options": {
          "tabs": {
            "label": "Janelas"
          },
          "space": {
            "label": "Espaço"
          },
          "whitespace": {
            "label": "Espaço em Branco"
          },
          "linebreak": {
            "label": "Quebra de linha"
          },
          "punctuation": {
            "label": "Pontuação"
          },
          "punctuation_whitespace": {
            "label": "Pontuação e Espaço em Branco"
          },
          "custom": {
            "label": "Personalizar"
          }
        },
        "val": "punctuation"
      },
      "options.delimiter": {
        "type": "text",
        "label": "Delimitador de Divisão",
        "show_if": "options.split_method=='standard' && options.standard_delimiter=='custom'",
        "val": ",",
        "trim": "false",
        "required": true,
        "breakLine": true
      },
      "format_frame": {
        "type": "fieldset",
        "label": "Formatar para Análise e Divisão",
        "show_if": "options.split_method=='regex'",
        "repeat": false,
        "fields": {
          "options.format_to_convert.regular_expression": {
            "type": "text",
            "label": "Parse Regular Expression ( ex: ([a-z]+)\\s([a-z]+) )",
            "val": "[a-z]+\\s[a-z]+",
            "required": true,
            "width": "100%",
            "trim": "false",
            "breakLine": true
          },
          "options.format_to_convert.case_insensitive": {
            "type": "checkbox",
            "label": "Insensível a Maiúsculas e Minúsculas",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          }
        }
      },
      "options.n_multi_n": {
        "type": "checkbox",
        "label": "N x N split if multiple columns are selected",
        "show_if": "options.split_type=='split_to_rows'",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      }
    }
  }
}