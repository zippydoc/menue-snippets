{
  "actions": {
    "type": "fieldset", 
        "options": {
    "label": "Adicionar acções", 
    "repeat": true, 
    "fields": {
      "column": {
        "type": "select", 
        "label": "Coluna", 
        "table": "input_table", 
\	\	"assign_selected_value_to":"this.output_column_name", 
        "bind": "COLUMNS"
      }, 
      "action": {
        "type": "select", 
        "label": "Acção", 
        "options": {
          "group_by": {
            "label": "Grupo Por"
          }, 
          "count": {
            "label": "Conde"
          }, 
          "sum": {
            "label": "Soma"
          }, 
          "first": {
            "label": "Primeiro"
          }, 
          "last": {
            "label": "Último"
          }, 
          "shortest": {
            "label": "O mais curto"
          }, 
          "longest": {
            "label": "O mais longo"
          }, 
          "concatenate": {
            "label": "Concatenar"
          }, 
          "mathematics": {
            "label": "Matemática"
          }
        }
      }, 
      "count_action_category": {
        "type": "select", 
        "label": "Tipo de acção", 
        "show_if": "this.action=='count'", 
        "options": {
          "all": {
            "label": "Todos"
          }, 
          "distinct": {
            "label": "Distinto"
          }, 
          "empty_or_zero": {
            "label": "Vazio ou 0"
          }, 
          "non_empty_or_zero": {
            "label": "Não Vazio ou 0"
          }
        }, 
        "val": "all"
      }, 
      "action_type1": {
        "type": "select", 
        "label": "Acção Subtipo", 
        "show_if": "this.action=='count' && (this.count_action_category=='all' || this.count_action_category=='distinct')", 
        "options": {
          "-": {
            "label": "-"
          }, 
          "non_zero": {
            "label": "Não 0"
          }, 
          "non_empty": {
            "label": "Não Vazio"
          }, 
          "non_null": {
            "label": "Não Nulo"
          }, 
          "non_blank": {
            "label": "Não em branco"
          }
        }, 
        "val": "-"
      }, 
      "action_type2": {
        "type": "select", 
        "label": "Acção Subtipo", 
        "show_if": "this.action=='count' && this.count_action_category=='empty_or_zero'", 
        "options": {
          "zero": {
            "label": "0"
          }, 
          "empty": {
            "label": "Vazio (Nulo e em branco)"
          }, 
          "null": {
            "label": "Nulo"
          }, 
          "blank": {
            "label": "Em branco"
          }
        }, 
        "val": "zero"
      }, 
      "action_type3": {
        "type": "select", 
        "label": "Acção Subtipo", 
        "show_if": "this.action=='count' && this.count_action_category=='non_empty_or_zero'", 
          "non_zero": {
            "label": "Não 0"
          }, 
          "non_empty": {
            "label": "Não Vazio"
          }, 
          "non_null": {
            "label": "Não Nulo"
          }, 
          "non_blank": {
            "label": "Não em branco"
          }
        }, 
        "val": "non_zero"
      }, 
      "mathematics_action_category": {
        "type": "select", 
        "label": "Tipo de acção", 
        "show_if": "this.action=='mathematics'", 
        "options": {
          "min": {
            "label": "Min"
          }, 
          "max": {
            "label": "Max"
          }, 
          "average": {
            "label": "Média"
          }, 
          "median": {
            "label": "Median"
          }, 
          "standard_deviation": {
            "label": "Desvio padrão"
          }, 
          "variance": {
            "label": "Variância"
          }
        }, 
        "val": "min"
      }, 
      "action_type4": {
        "type": "select", 
        "label": "Acção Subtipo", 
        "show_if": "this.action=='mathematics'", 
        "options": {
          "include_zero": {
            "label": "Incluir 0"
          }, 
          "exclude_zero": {
            "label": "Excluir 0"
          }
        }, 
        "val": "include_zero"
      }, 
      "concatenate_separator": {
        "type": "text", 
        "label": "Separador", 
        "show_if": "this.action=='concatenate'", 
        "val": ", \
      },\
      output_column_name": {
        "type": "text", 
        "label": "Nome da coluna de saída", 
        "val": ""
      }, 
      "delete": {
        "type": "button", 
        "label": "Eliminar", 
        "function": "DELETE_ROW"
      }
    }
  }
}
