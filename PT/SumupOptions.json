{
  "actions": {
    "type": "fieldset",
    "label": "Adicionar Ações",
    "repeat": true,
    "fields": {
      "columns": {
        "type": "select",
        "label": "Column(s)",
        "table": "table_id",
		"assign_selected_value_to":"this.output_column_name",
        "bind": "COLUMNS",
        "multiple": true,
        "required": true
      },
      "action": {
        "type": "select",
        "label": "Ação",
        "options": {
          "group_by": {
            "label": "Agrupar por"
          },
          "count": {
            "label": "Contar"
          },
          "sum": {
            "label": "Soma"
          },
          "first": {
            "label": "Primeiro"
          },
          "last": {
            "label": "Último"
          },
          "shortest": {
            "label": "Mais curto"
          },
          "longest": {
            "label": "Mais comprido"
          },
          "concatenate": {
            "label": "Concatenar"
          },
          "mathematics": {
            "label": "Matemática"
          }
        },
        "val": "group_by"
      },
      "count_action_category": {
        "type": "select",
        "label": "Tipo de Ação",
        "show_if": "this.action=='count'",
        "options": {
          "all": {
            "label": "Todos"
          },
          "distinct": {
            "label": "Distinto"
          },
          "empty_or_zero": {
            "label": "Vazio ou 0"
          },
          "non_empty_or_zero": {
            "label": "Não Vazio ou 0"
          }
        },
        "val": "all"
      },
      "action_type1": {
        "type": "select",
        "label": "Subtipo de Ação",
        "show_if": "this.action=='count' && (this.count_action_category=='all' || this.count_action_category=='distinct')",
        "options": {
          "-": {
            "label": "-"
          },
          "non_zero": {
            "label": "Não 0"
          },
          "non_empty": {
            "label": "Não Vazio"
          },
          "non_null": {
            "label": "Não Nulo"
          },
          "non_blank": {
            "label": "Não Em Branco"
          }
        },
        "val": "-"
      },
      "action_type2": {
        "type": "select",
        "label": "Subtipo de Ação",
        "show_if": "this.action=='count' && this.count_action_category=='empty_or_zero'",
        "options": {
          "zero": {
            "label": "0"
          },
          "empty": {
            "label": "Vazio (Nulo e Em Branco)"
          },
          "null": {
            "label": "Null"
          },
          "blank": {
            "label": "Em Branco"
          }
        },
        "val": "zero"
      },
      "action_type3": {
        "type": "select",
        "label": "Subtipo de Ação",
        "show_if": "this.action=='count' && this.count_action_category=='non_empty_or_zero'",
        "options": {
          "non_zero": {
            "label": "Não 0"
          },
          "non_empty": {
            "label": "Não Vazio"
          },
          "non_null": {
            "label": "Não Nulo"
          },
          "non_blank": {
            "label": "Não Em Branco"
          }
        },
        "val": "non_zero"
      },
      "mathematics_action_category": {
        "type": "select",
        "label": "Tipo de Ação",
        "show_if": "this.action=='mathematics'",
        "options": {
          "min": {
            "label": "Mín"
          },
          "max": {
            "label": "Máx"
          },
          "average": {
            "label": "Média"
          },
          "median": {
            "label": "Mediana"
          },
          "standard_deviation": {
            "label": "Desvio Padrão"
          },
          "variance": {
            "label": "Variância"
          }
        },
        "val": "min"
      },
      "action_type4": {
        "type": "select",
        "label": "Subtipo de Ação",
        "show_if": "this.action=='mathematics'",
        "options": {
          "include_zero": {
            "label": "Incluir 0"
          },
          "exclude_zero": {
            "label": "Excluir 0"
          }
        },
        "val": "include_zero"
      },
      "concatenate_separator": {
        "type": "text",
        "label": "Separador",
        "show_if": "this.action=='concatenate'",
        "val": ","
      },
      "output_column_name": {
        "type": "text",
        "label": "Mostrar Nome da Coluna",
        "val": ""
      },
      "rounding": {
        "type": "select",
        "label": "Arredondamento",
        "show_if": "this.action=='sum' || this.action=='mathematics'",
        "required": true,
        "options": {
          "no_rounding": {
            "label": "Arredondamento de números"
          },
          "0": {
            "label": "0 dígitos"
          },
          "1": {
            "label": "1 dígito"
          },
          "2": {
            "label": "2 dígitos"
          },
          "3": {
            "label": "3 dígitos"
          },
          "4": {
            "label": "4 dígitos"
          },
          "5": {
            "label": "5 dígitos"
          },
          "6": {
            "label": "6 dígitos"
          },
          "7": {
            "label": "7 dígitos"
          },
          "8": {
            "label": "8 dígitos"
          },
          "9": {
            "label": "9 dígitos"
          }
        },
        "val": "no_rounding"
      },
      "delete": {
        "type": "button",
        "label": "Apagar",
        "function": "DELETE_ROW"
      }
    }
  },
  "info1": {
    "type": "textarea",
    "label": "",
    "val": "If more than one columns selected, Output Column Name input value should be used as suffix",
    "disabled": true,
    "style": "width: 100%"
  }
}