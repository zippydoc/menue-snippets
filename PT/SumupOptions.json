{
  "actions": {
    "type": "fieldset",
    "label": "Adicionar Ações",
    "repeat": true,
    "fields": {
      "column": {
        "type": "select",
        "label": "Coluna",
        "table": "input_table",
		"assign_selected_value_to":"this.output_column_name",
        "bind": "COLUMNS"
      },
      "action": {
        "type": "select",
        "label": "Ação",
        "options": {
          "group_by": {
            "label": "Agrupar por"
          },
          "count": {
            "label": "Contar"
          },
          "sum": {
            "label": "Soma"
          },
          "first": {
            "label": "Primeiro"
          },
          "last": {
            "label": "Último"
          },
          "shortest": {
            "label": "Mais curto"
          },
          "longest": {
            "label": "Mais comprido"
          },
          "concatenate": {
            "label": "Concatenar"
          },
          "mathematics": {
            "label": "Matemática"
          }
        }
      },
      "count_action_category": {
        "type": "select",
        "label": "Tipo de Ação",
        "show_if": "this.action=='count'",
        "options": {
          "all": {
            "label": "Todos"
          },
          "distinct": {
            "label": "Distinto"
          },
          "empty_or_zero": {
            "label": "Vazio ou 0"
          },
          "non_empty_or_zero": {
            "label": "Não Vazio ou 0"
          }
        },
        "val": "all"
      },
      "action_type1": {
        "type": "select",
        "label": "Subtipo de Ação",
        "show_if": "this.action=='count' && (this.count_action_category=='all' || this.count_action_category=='distinct')",
        "options": {
          "-": {
            "label": "-"
          },
          "non_zero": {
            "label": "Não 0"
          },
          "non_empty": {
            "label": "Não Vazio"
          },
          "non_null": {
            "label": "Não Nulo"
          },
          "non_blank": {
            "label": "Não Em Branco"
          }
        },
        "val": "-"
      },
      "action_type2": {
        "type": "select",
        "label": "Subtipo de Ação",
        "show_if": "this.action=='count' && this.count_action_category=='empty_or_zero'",
        "options": {
          "zero": {
            "label": "0"
          },
          "empty": {
            "label": "Vazio (Nulo e Em Branco)"
          },
          "null": {
            "label": "Null"
          },
          "blank": {
            "label": "Em Branco"
          }
        },
        "val": "zero"
      },
      "action_type3": {
        "type": "select",
        "label": "Subtipo de Ação",
        "show_if": "this.action=='count' && this.count_action_category=='non_empty_or_zero'",
        "options": {
          "non_zero": {
            "label": "Não 0"
          },
          "non_empty": {
            "label": "Não Vazio"
          },
          "non_null": {
            "label": "Não Nulo"
          },
          "non_blank": {
            "label": "Não Em Branco"
          }
        },
        "val": "non_zero"
      },
      "mathematics_action_category": {
        "type": "select",
        "label": "Tipo de Ação",
        "show_if": "this.action=='mathematics'",
        "options": {
          "min": {
            "label": "Mín"
          },
          "max": {
            "label": "Máx"
          },
          "average": {
            "label": "Média"
          },
          "median": {
            "label": "Mediana"
          },
          "standard_deviation": {
            "label": "Desvio Padrão"
          },
          "variance": {
            "label": "Variância"
          }
        },
        "val": "min"
      },
      "action_type4": {
        "type": "select",
        "label": "Subtipo de Ação",
        "show_if": "this.action=='mathematics'",
        "options": {
          "include_zero": {
            "label": "Incluir 0"
          },
          "exclude_zero": {
            "label": "Excluir 0"
          }
        },
        "val": "include_zero"
      },
      "concatenate_separator": {
        "type": "text",
        "label": "Separador",
        "show_if": "this.action=='concatenate'",
        "val": ","
      },
      "output_column_name": {
        "type": "text",
        "label": "Mostrar Nome da Coluna",
        "val": ""
      },
      "delete": {
        "type": "button",
        "label": "Apagar",
        "function": "DELETE_ROW"
      }
    }
  }
}