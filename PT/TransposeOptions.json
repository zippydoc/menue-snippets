{
  "options": {
    "type": "fieldset",
    "label": "Opções de Seleção",
    "repeat": false,
    "fields": {
      "transpose_type": {
        "type": "select",
        "label": "Tipo de Transposição",
        "options": {
          "mirror_matrix": {
            "label": "Espelhar Matriz"
          },
          "column_name_to_label": {
            "label": "Nome da Coluna a Rotular"
          },
          "crosstab": {
            "label": "Referência Cruzada"
          }
        },
        "val": "mirror_matrix",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "mirror_matrix.convert_header_to_label": {
        "type": "checkbox",
        "label": "Converter cabeçalho para rótulo",
        "show_if": "transpose_type==''mirror_matrix''",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "column_name_to_label.columns_to_label": {
        "type": "select",
        "label": "Selecionar Colunas para Converter em Rótulos",
        "show_if": "transpose_type==''column_name_to_label''",
        "table": "input_table",
        "multiple": true,
        "bind": "COLUMNS",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "column_name_to_label.label_column_name": {
        "type": "text",
        "label": "Nome da Coluna de Rótulos",
        "show_if": "transpose_type==''column_name_to_label''",
        "required": true,
        "val": "Rotular",
        "width": "100%",
        "breakLine": true
      },
      "column_name_to_label.value_column_name": {
        "type": "text",
        "label": "Noma da Coluna de Valores",
        "show_if": "transpose_type==''column_name_to_label''",
        "required": true,
        "val": "Valor",
        "width": "100%",
        "breakLine": true
      },
      "crosstab.group_data_by_these_values": {
        "type": "select",
        "label": "Agrupar dados por estes valores",
        "show_if": "transpose_type==''crosstab''",
        "table": "input_table",
        "multiple": true,
        "bind": "COLUMNS",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "crosstab.change_column_headers": {
        "type": "select",
        "label": "Alterar Cabeçalho da Coluna",
        "show_if": "transpose_type==''crosstab''",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "crosstab.values_for_new_columns": {
        "type": "select",
        "label": "Valores para Novas Colunas",
        "show_if": "transpose_type==''crosstab''",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "crosstab.method_for_aggregating_values": {
        "type": "select",
        "label": "Método de Agregação de Valores",
        "show_if": "transpose_type==''crosstab''",
        "options": {
          "Concatenar": {
            "label": "Concatenar"
          },
          "Primeiro": {
            "label": "Primeiro"
          },
          "Último": {
            "label": "Último"
          },
          "Soma": {
            "label": "Soma"
          },
          "Média": {
            "label": "Média"
          },
          "Contar": {
            "label": "Contar"
          },
          "Definido pelo Utilizador": {
            "label": "Definido pelo Utilizador"
          }
        },
        "val": "Concatenar",
        "required": true
      },
      "crosstab.user_defined_str": {
        "type": "text",
        "label": "Valor Definido pelo Utilizador",
        "show_if": "transpose_type==''crosstab'' && crosstab.method_for_aggregating_values==''User Defined''",
        "val": "x",
        "trim": "false",
        "breakLine": true
      },
      "crosstab.separator": {
        "type": "text",
        "label": "Separador",
        "show_if": "transpose_type==''crosstab'' && method_for_aggregating_values==''Concatenate''",
        "val": ",,
        trim": "false",
        "required": true,
        "breakLine": true
      }
    }
  }
}