{
  "options": {
    "type": "fieldset",
    "label": "Opções de União",
    "repeat": false,
    "fields": {
      "options.union_type": {
        "type": "select",
        "label": "Selecionar Tipo de União",
        "val": "auto_config_by_name",
        "options": {
          "auto_config_by_name": {
            "label": "Configuração Automática por Nome"
          },
          "auto_config_by_position": {
            "label": "Configuração Automática por Posição"
          }
        }
      },
      "options.field_output_type": {
        "type": "select",
        "label": "Tipo de Saída da Coluna",
        "show_if": "options.union_type=='auto_config_by_name' || options.union_type=='auto_config_by_position'",
        "val": "output_all_fields",
        "options": {
          "output_all_fields": {
            "label": "Mostrar Todas as Colunas"
          },
          "output_common_fields": {
            "label": "Mostrar Colunas Comuns"
          }
        },
        "breakLine": true
      },
      "options.add_table_name_column": {
        "type": "checkbox",
        "label": "Adicionar coluna do nome da tabela",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      }
    }
  }
}