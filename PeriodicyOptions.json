{
  "options": {
    "type": "fieldset",
    "label": "Select Options",
    "repeat": false,
    "fields": {
      "options.type": {
        "type": "radio",
        "label": "",
        "val": "generate",
        "values": {
          "generate": "Generate Periodicy Example",
          "process": "Process Periodicy Table"
        },
        "breakLine": true
      },
      "options.standard_table": {
        "type": "checkbox",
        "label": "Standard Periodicy Table",
        "show_if": "options.type=='process'",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.initial_date": {
        "type": "select",
        "label": "Initial Date",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true
      },
      "options.period": {
        "type": "select",
        "label": "Periodicy (e.g. Monthly, Quarterly)",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true
      },
      "options.final_date": {
        "type": "select",
        "label": "Final Date",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS",
        "breakLine": true
      },
      "options.volume": {
        "type": "select",
        "label": "Amount",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS"
      },
      "options.growth": {
        "type": "select",
        "label": "Growth Rate",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "table": "input_table",
        "bind": "COLUMNS"
      },
      "options.growth_period": {
        "type": "select",
        "label": "Growth Period",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "options": {
          "selected_period": {
            "label": "Equal to Periodicy"
          },
          "week_on_week": {
            "label": "Week on Week"
          },
          "month_on_month": {
            "label": "Month on Month"
          },
          "quarter_on_quarter": {
            "label": "Quarter on Quarter"
          },
          "year_on_year": {
            "label": "Year on Year"
          },
          "column": {
            "label": "Select Column"
          }
        },
        "val": "selected_period"
      },
      "options.growth_period_column": {
        "type": "select",
        "label": "Growth Period Column",
        "show_if": "options.type=='process' && options.standard_table=='false' && options.growth_period=='column'",
        "table": "input_table",
        "bind": "COLUMNS",
        "breakLine": true
      },
      "options.use_growth_pattern_column": {
        "type": "checkbox",
        "label": "Use Growth Pattern Column",
        "show_if": "options.type=='process' && options.standard_table=='false'",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "options.growth_pattern_column": {
        "type": "select",
        "label": "Growth Pattern Column",
        "show_if": "options.type=='process' && options.standard_table=='false' && options.use_growth_pattern_column=='true'",
        "table": "input_table",
        "bind": "COLUMNS",
        "breakLine": true
      },
      "options.end_date": {
        "type": "date",
        "label": "End Date of Table",
        "show_if": "options.type=='process'",
        "val": "",
        "required": true,
        "style": "width: 300px"
      }
    }
  }
}