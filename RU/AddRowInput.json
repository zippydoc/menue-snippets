{
  "input": {
    "type": "fieldset",
    "label": "Выбрать входную таблицу",
    "repeat": false,
    "fields": {
      "input_table": {
        "type": "select",
        "label": "Выбрать таблицу",
        "bind": "TABLES",
        "empty": "",
        "required": true
      },
      "remove_input_table_after_processing": {
        "type": "hidden",
        "val": "false"
      },
      "is_word": {
        "type": "hidden",
        "val": "false"
      },
      "table_type": {
        "type": "select",
        "label": "Тип таблицы",
        "required": true,
        "options": {
          "header_only": {
            "label": "Только заголовок"
          },
          "label_only": {
            "label": "Только метка"
          },
          "matrix": {
            "label": "Матрица"
          }
        },
        "val": "header_only",
        "breakLine": true
      },
      "apply_to_all_columns": {
        "type": "checkbox",
        "label": "Применить ко всем столбцам",
        "show_if": "table_type=='header_only' || table_type=='matrix'",
        "val": "true",
        "isOn": "true",
        "isOff": "false"
      },
      "columns_to_apply": {
        "type": "select",
        "label": "Столбец для применения",
        "show_if": "apply_to_all_columns=='false' && (table_type=='header_only' || table_type=='matrix')",
        "table": "input_table",
        "bind": "COLUMNS",
        "multiple": true,
        "required": true,
        "breakLine": true
      }
    }
  }
}