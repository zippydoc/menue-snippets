{
  "input": {
    "type": "fieldset",
    "label": "Выбрать таблицу поиска",
    "repeat": false,
    "fields": {
      "tables": {
        "type": "fieldset",
        "label": "Выбрать таблицы",
        "repeat": true,
        "fields": {
          "table_id": {
            "type": "select",
            "label": "Таблица поиска",
            "bind": "TABLES",
            "required": true
          },
          "lookup_header_column": {
            "type": "select",
            "label": "Заголовок столбца",
            "table": "this.table_id",
            "bind": "COLUMNS",
            "required": true
          },
          "lookup_value_column": {
            "type": "select",
            "label": "Значение столбца",
            "table": "this.table_id",
            "bind": "COLUMNS",
            "required": true
          },
          "lookup_mapping_column": {
            "type": "select",
            "label": "Сопоставление таблицы",
            "table": "this.table_id",
            "bind": "COLUMNS"
          },
          "delete": {
            "type": "button",
            "label": "Удалить",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.treatment": {
        "type": "select",
        "label": "Обработка множества случаев",
        "required": true,
        "options": {
          "sum": {
            "label": "Сумма"
          },
          "min": {
            "label": "Мин"
          },
          "max": {
            "label": "Макс"
          },
          "shortest": {
            "label": "Кратчайший"
          },
          "longest": {
            "label": "Самый длинный"
          },
          "first": {
            "label": "Первый"
          },
          "last": {
            "label": "Последний"
          },
          "concatenate": {
            "label": "Обхединить"
          }
        },
        "val": "sum",
        "style": "min-width: 200px"
      },
      "options.treatment_delimiter": {
        "type": "text",
        "label": "Разделитель",
        "show_if": "options.treatment=='concatenate'",
        "required": true,
        "minLength": 1,
        "maxLength": 255,
        "val": ";",
        "breakLine": true
      }
    }
  }
}