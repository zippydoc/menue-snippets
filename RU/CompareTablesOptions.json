{
  "options": {
    "type": "fieldset",
    "label": "Опции",
    "repeat": false,
    "fields": {
      "compare_set": {
        "type": "fieldset",
        "label": "Выбрать шаблоны",
        "repeat": true,
        "fields": {
          "pattern": {
            "type": "select",
            "label": "Тип шаблона таблицы",
            "options": {
              "all_col": {
                "label": "Все столбцы идентичны"
              },
              "two_col": {
                "label": "Два одинаковых столбца"
              }
            },
            "val": "all_col",
            "required": true
          },
          "compare_type": {
            "type": "select",
            "label": "Тип шаблона ячейки",
            "options": {
              "equal": {
                "label": "Равный"
              },
              "contain": {
                "label": "Содержит"
              },
              "start_with": {
                "label": "Начинается с"
              },
              "end_with": {
                "label": "Заканчивается С"
              },
              "reg_exp": {
                "label": "Регулярное выражение"
              }
            },
            "val": "equal",
            "required": true
          },
          "case_sensitive": {
            "type": "select",
            "label": "С учетом случая",
            "required": true,
            "options": {
              "yes": {
                "label": "С учетом регистра"
              },
              "no": {
                "label": "Без учета регистра"
              }
            },
            "val": "no"
          },
          "expression": {
            "type": "text",
            "label": "Выражение",
            "show_if": "this.compare_type != 'equal'",
            "required": true,
            "val": ""
          },
          "delete": {
            "show_if": "this.field_name != ''",
            "type": "button",
            "label": "Удалить",
            "function": "DELETE_ROW"
          }
        },
        "breakLine": true
      },
      "target": {
        "type": "select",
        "label": "Цель",
        "options": {
          "to_table": {
            "label": "Применить в таблице"
          },
          "to_rows": {
            "label": "Строка за строкой"
          }
        },
        "val": "to_table",
        "required": true
      },
      "match_type": {
        "type": "select",
        "show_if": "target != 'to_table'",
        "label": "Тип совпадения",
        "options": {
          "match": {
            "label": "Только совпадения"
          },
          "nonmatch": {
            "label": "Нет точных совпадений"
          },
          "all": {
            "label": "Все"
          }
        },
        "val": "match",
        "required": true,
        "breakLine": true
      },
      "create_sql": {
        "type": "checkbox",
        "label": "Показать детали SQL",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      }
    }
  }
}