{
  "options": {
    "type": "fieldset",
    "label": "Выбрать параметры",
    "repeat": false,
    "fields": {
      "options.standard.start": {
        "type": "hidden",
        "val": "1"
      },
      "options.standard.multiplier_at_maximum_impact_level": {
        "type": "text",
        "label": "Максимальное значение",
        "val": "2",
        "required": true
      },
      "options.standard.maximum": {
        "type": "text",
        "label": "Максимальный период",
        "val": "50",
        "required": true
      },
      "options.standard.multiplier_end_value": {
        "type": "text",
        "label": "Конечное значение",
        "show_if": "options.standard.end_value_equals_initial_value=='no'",
        "val": "1",
        "required": true
      },
      "options.standard.end": {
        "type": "text",
        "label": "Конечный период",
        "val": "100",
        "required": true,
        "breakLine": true
      },
      "options.standard.end_value_equals_initial_value": {
        "type": "checkbox",
        "label": "Начальное значение и конечное значение равны 1",
        "width": "100%",
        "val": "yes",
        "isOn": "yes",
        "isOff": "no",
        "breakLine": true
      },
      "options.standard.maximum_plateau": {
        "type": "checkbox",
        "label": "Максимальное плато",
        "width": "100%",
        "val": "yes",
        "isOn": "yes",
        "isOff": "no",
        "breakLine": true
      },
      "options.standard.no_of_periods_prior_defined_maximum_point": {
        "type": "text",
        "label": "Количество периодов, предшествующих определенной максимальной точке",
        "show_if": "options.standard.maximum_plateau=='yes'",
        "val": "0",
        "style": "width: 250px"
      },
      "options.standard.no_of_periods_post_defined_maximum_point": {
        "type": "text",
        "label": "Количество периодов после определенной максимальной точки",
        "show_if": "options.standard.maximum_plateau=='yes'",
        "val": "0",
        "style": "width: 250px",
        "breakLine": true
      },
      "options.standard.left_slope": {
        "type": "select",
        "label": "Левый наклон",
        "options": {
          "vertical": {
            "label": "Вертикальный"
          },
          "linear": {
            "label": "Линейный"
          },
          "standard_distribution": {
            "label": "Стандартное распределение"
          }
        },
        "val": "standard_distribution"
      },
      "options.standard.use_auto_calculated_sigma_for_left_slope": {
        "type": "checkbox",
        "label": "Автоматически рассчитанная левая сигма",
        "show_if": "options.standard.left_slope=='standard_distribution'",
        "val": "true",
        "isOn": "true",
        "isOff": "false"
      },
      "options.standard.left_slope_sigma": {
        "type": "text",
        "label": "Левый наклон сигмы",
        "show_if": "options.standard.left_slope=='standard_distribution' && options.standard.use_auto_calculated_sigma_for_left_slope=='false'",
        "val": "",
        "breakLine": true
      },
      "options.standard.right_slope": {
        "type": "select",
        "label": "Правый наклон",
        "required": true,
        "options": {
          "vertical": {
            "label": "Вертикальный"
          },
          "linear": {
            "label": "Линейный"
          },
          "standard_distribution": {
            "label": "Стандартное распределение"
          }
        },
        "val": "standard_distribution"
      },
      "options.standard.use_auto_calculated_sigma_for_right_slope": {
        "type": "checkbox",
        "label": "Автоматически рассчитанная правая сигма",
        "show_if": "options.standard.right_slope=='standard_distribution'",
        "val": "true",
        "isOn": "true",
        "isOff": "false"
      },
      "options.standard.right_slope_sigma": {
        "type": "text",
        "label": "Правый наклон сигмы",
        "show_if": "options.standard.right_slope=='standard_distribution' && options.standard.use_auto_calculated_sigma_for_right_slope=='false'",
        "val": "",
        "breakLine": true
      }
    }
  }
}