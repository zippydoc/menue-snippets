{
  "options": {
    "type": "fieldset",
    "Метка": "Выбрать параметры",
    "repeat": false,
    "fields": {
      "task_type": {
        "type": "select",
        "Метка": "Тип задачи",
        "required": true,
        "options": {
          "encrypt": {
            "Метка": "Зашифровка (безопасная)"
          },
          "decrypt": {
            "Метка": "Расшифровка (безопасная)"
          },
          "encrypt_simple": {
            "Метка": "Зашифровка (обычная)"
          },
          "decrypt_simple": {
            "Метка": "Расшифровка (обычная)"
          },
          "mask": {
            "Метка": "Маска"
          }
        },
        "val": "encrypt"
      },
      "mask_type": {
        "type": "select",
        "Метка": "Тип маски",
        "show_if": "task_type == 'mask'",
        "required": true,
        "options": {
          "trailing": {
            "Метка": "Первые N символов"
          },
          "leading": {
            "Метка": "N символов вперед"
          },
          "numbers": {
            "Метка": "Числа"
          },
          "alphabets": {
            "Метка": "Символы"
          },
          "regex": {
            "Метка": "Регулярное выражение"
          }
        },
        "val": "trailing"
      },
      "password": {
        "type": "password",
        "Метка": "Пароль",
        "show_if": "task_type != 'mask'",
        "required": true,
        "minLength": 1,
        "maxLength": 31,
        "val": ""
      },
      "varn": {
        "type": "number",
        "Метка": "N",
        "show_if": "task_type == 'mask' && (mask_type == 'trailing' || mask_type == 'leading')",
        "required": true,
        "val": "1"
      },
      "regexp": {
        "type": "text",
        "Метка": "Выражение",
        "show_if": "task_type == 'mask' && (mask_type == 'regex')",
        "required": true,
        "val": "",
        "placeholder": "[a-fA-F0-9]"
      },
      "replace": {
        "type": "text",
        "Метка": "Строка маски",
        "show_if": "task_type == 'mask' && (mask_type == 'regex')",
        "required": true,
        "val": "*"
      }
    }
  }
}