{
  "options": {
    "type": "fieldset",
    "label": "Выбрать параметры",
    "repeat": false,
    "fields": {
      "task_type": {
        "type": "select",
        "label": "Тип задачи",
        "required": true,
        "options": {
          "encrypt": {
            "label": "Зашифровка (безопасная)"
          },
          "decrypt": {
            "label": "Расшифровка (безопасная)"
          },
          "encrypt_simple": {
            "label": "Зашифровка (обычная)"
          },
          "decrypt_simple": {
            "label": "Расшифровка (обычная)"
          },
          "mask": {
            "label": "Маска"
          }
        },
        "val": "encrypt"
      },
      "mask_type": {
        "type": "select",
        "label": "Тип маски",
        "show_if": "task_type == 'mask'",
        "required": true,
        "options": {
          "trailing": {
            "label": "Первые N символов"
          },
          "leading": {
            "label": "N символов вперед"
          },
          "numbers": {
            "label": "Числа"
          },
          "alphabets": {
            "label": "Символы"
          },
          "regex": {
            "label": "Регулярное выражение"
          }
        },
        "val": "trailing"
      },
      "password": {
        "type": "password",
        "label": "Пароль",
        "show_if": "task_type != 'mask'",
        "required": true,
        "minLength": 1,
        "maxLength": 31,
        "val": ""
      },
      "varn": {
        "type": "number",
        "label": "N",
        "show_if": "task_type == 'mask' && (mask_type == 'trailing' || mask_type == 'leading')",
        "required": true,
        "val": "1"
      },
      "regexp": {
        "type": "text",
        "label": "Выражение",
        "show_if": "task_type == 'mask' && (mask_type == 'regex')",
        "required": true,
        "val": "",
        "placeholder": "[a-fA-F0-9]"
      },
      "replace": {
        "type": "text",
        "label": "Строка маски",
        "show_if": "task_type == 'mask' && (mask_type == 'regex')",
        "required": true,
        "val": "*",
        "breakLine": true
      }
    }
  }
}