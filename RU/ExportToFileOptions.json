{
  "options": {
    "type": "fieldset",
    "label": "Выбрать параметры",
    "repeat": false,
    "fields": {
      "options.to": {
        "type": "hidden",
        "val": "file"
      },
      "options.webservice": {
        "type": "select",
        "label": "Выбрать Веб-сервис",
        "options": {
          "github": {
            "label": "Github"
          },
          "dropbox": {
            "label": "Dropbox"
          },
          "ms_one_drive": {
            "label": "Microsoft OneDrive"
          },
          "google_drive": {
            "label": "Google Drive"
          }
        },
        "val": "github",
        "required": true,
        "breakLine": true
      },
      "options.export_format": {
        "type": "select",
        "label": "Формат экспорта",
        "options": {
          "csv_file": {
            "label": "Csv-файл(ы)"
          },
          "word_by_word": {
            "label": "Слово за словом"
          },
          "line_by_line": {
            "label": "Линия за линией"
          }
        },
        "val": "csv_file",
        "required": true,
        "breakLine": true
      },
      "options.if_duplicated": {
        "type": "select",
        "label": "Если существует",
        "show_if": "options.webservice=='github'",
        "val": "drop_if_exist",
        "options": {
          "drop_if_exist": {
            "label": "Создать или сбросить (если уже существует)"
          },
          "error_if_exist": {
            "label": "Создать новое (убрать ошибку, если есть)"
          },
          "error_if_not_exist": {
            "label": "Отменить (убрать ошибку, если ее нет)"
          },
          "append": {
            "label": "Прикрепить"
          }
        },
        "breakLine": true
      },
      "options.export_series": {
        "type": "checkbox",
        "label": "Экспорт серий",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.file_name_column": {
        "type": "select",
        "label": "Выбрать столбец с названием файла",
        "show_if": "options.export_series=='true'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      },
      "options.set_file_path_column": {
        "type": "checkbox",
        "label": "Экспортировать в указанный путь",
        "show_if": "options.export_series=='true'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.file_path_column": {
        "type": "select",
        "label": "Выбрать колонку пути к файлу",
        "show_if": "options.export_series=='true' && options.set_file_path_column=='true'",
        "table": "input_table",
        "bind": "COLUMNS",
        "required": true,
        "breakLine": true
      }
    }
  },
  "export_link_token_frame": {
    "type": "fieldset",
    "label": "Экспортировать ссылку",
    "repeat": false,
    "fields": {
      "options.github_url": {
        "type": "text",
        "label": "Введите ссылку, например, https://github.com/zippydoc/test.",
        "show_if": "options.webservice=='github'",
        "val": "",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.github_token": {
        "type": "text",
        "label": "Укажите персональный токен доступа Github, имеющий право на запись:",
        "show_if": "options.webservice=='github'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.github_create_pr": {
        "type": "checkbox",
        "label": "Создать пул-реквест",
        "show_if": "options.webservice=='github'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.ms_one_drive_token": {
        "type": "text",
        "label": "Токен доступа к Microsoft Graph API. Вы можете получить его здесь https://ms-oauth.herokuapp.com/",
        "show_if": "options.webservice=='ms_one_drive'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.google_authorization_code": {
        "type": "text",
        "label": "Код авторизации Google OAuth с областью действия https://www.googleapis.com/auth/drive. Вы можете получить его здесь https://developers.google.com/oauthplayground/",
        "show_if": "options.webservice=='google_drive'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.dropbox_authorization_code": {
        "type": "text",
        "label": "Код авторизации Dropbox. Вы можете получить его здесь https://www.dropbox.com/oauth2/authorize?client_id=9i7woztjp94jrkw&response_type=code",
        "show_if": "options.webservice=='dropbox'",
        "required": true,
        "width": "100%",
        "breakLine": true
      }
    }
  }
}