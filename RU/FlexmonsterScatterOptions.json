{
  "options_box": {
    "type": "fieldset",
    "label": "Опция отчетов Flexmonster",
    "show_if": "options.configure_manual=='true'",
    "repeat": false,
    "fields": {
      "options.type": {
        "type": "hidden",
        "val": "scatter_chart"
      },
      "options.chart_type": {
        "type": "hidden",
        "val": "scatter"
      },
      "options.add_column_cols": {
        "type": "checkbox",
        "label": "по категориям",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.column_cols": {
        "type": "fieldset",
        "label": "Category column(s)",
        "show_if": "options.add_column_cols=='true'",
        "repeat": true,
        "fields": {
          "column_col": {
            "type": "select",
            "label": "Колонка категории",
            "table": "table_id",
            "bind": "COLUMNS",
            "required": true
          },
          "is_date": {
            "type": "checkbox",
            "label": "Is Date",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "delete": {
            "type": "button",
            "label": "Удалить",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.row_cols": {
        "type": "fieldset",
        "label": "Series column(s)",
        "repeat": true,
        "fields": {
          "row_col": {
            "type": "select",
            "label": "Series column",
            "table": "table_id",
            "bind": "COLUMNS",
            "required": true
          },
          "is_date": {
            "type": "checkbox",
            "label": "Is Date",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "delete": {
            "type": "button",
            "label": "Удалить",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.measure_cols": {
        "type": "fieldset",
        "label": "Value column(s)",
        "repeat": true,
        "fields": {
          "measure_col": {
            "type": "select",
            "label": "Значение столбца",
            "table": "table_id",
            "bind": "COLUMNS",
            "required": true
          },
          "aggregation": {
            "type": "select",
            "label": "Функция агрегации",
            "options": {
              "sum": {
                "label": "Сумма"
              },
              "count": {
                "label": "Посчитать"
              },
              "distinctcount": {
                "label": "Различительный счет"
              },
              "average": {
                "label": "Средний"
              },
              "median": {
                "label": "Медиана"
              },
              "product": {
                "label": "Продукт"
              },
              "min": {
                "label": "Мин"
              },
              "max": {
                "label": "Макс"
              },
              "stdevp": {
                "label": "Population Standard Deviation"
              },
              "stdevs": {
                "label": "Sample Standard Deviation"
              },
              "percent": {
                "label": "Percent"
              }
            },
            "val": "sum",
            "required": true,
            "breakLine": true
          },
          "delete": {
            "type": "button",
            "label": "Удалить",
            "function": "DELETE_ROW"
          }
        }
      }
    }
  }
}