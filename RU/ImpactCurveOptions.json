{
  "options": {
    "type": "fieldset",
    "label": "Выбрать параметры",
    "repeat": false,
    "fields": {
      "options.type": {
        "type": "select",
        "label": "Тип",
        "options": {
          "standard": {
            "label": "Создать стандартную кривую"
          },
          "custom": {
            "label": "Сгенерировать настраиваемую кривую"
          },
          "apply": {
            "label": "Применить кривую"
          }
        },
        "val": "standard",
        "breakLine": true
      },
      "options.standard.start": {
        "type": "text",
        "label": "Начальный период",
        "show_if": "options.type=='standard' && options.standard.end_value_equals_initial_value=='no'",
        "val": "1",
        "required": true
      },
      "options.standard.maximum": {
        "type": "text",
        "label": "Максимальный период",
        "show_if": "options.type=='standard'",
        "val": "50",
        "required": true
      },
      "options.standard.end": {
        "type": "text",
        "label": "Конечный период",
        "show_if": "options.type=='standard'",
        "val": "100",
        "required": true,
        "breakLine": true
      },
      "options.standard.multiplier_at_maximum_impact_level": {
        "type": "text",
        "label": "Умножитель при максимальном уровне воздействия",
        "show_if": "options.type=='standard'",
        "width": "100%",
        "val": "2",
        "required": true,
        "breakLine": true
      },
      "options.standard.end_value_equals_initial_value": {
        "type": "checkbox",
        "label": "Конечное значение равно начальному значению",
        "show_if": "options.type=='standard'",
        "width": "100%",
        "val": "yes",
        "isOn": "yes",
        "isOff": "no",
        "breakLine": true
      },
      "options.standard.multiplier_end_value": {
        "type": "text",
        "label": "Конечное значение множителя",
        "width": "100%",
        "show_if": "options.type=='standard' && options.standard.end_value_equals_initial_value=='no'",
        "val": "",
        "breakLine": true
      },
      "options.standard.maximum_plateau": {
        "type": "checkbox",
        "label": "Максимальное плато",
        "show_if": "options.type=='standard'",
        "width": "100%",
        "val": "yes",
        "isOn": "yes",
        "isOff": "no",
        "breakLine": true
      },
      "options.standard.no_of_periods_prior_defined_maximum_point": {
        "type": "text",
        "label": "Количество периодов, предшествующих определенной максимальной точке",
        "show_if": "options.type=='standard' && options.standard.maximum_plateau=='yes'",
        "val": "0",
        "style": "width: 250px"
      },
      "options.standard.no_of_periods_post_defined_maximum_point": {
        "type": "text",
        "label": "Количество периодов после определенной максимальной точки",
        "show_if": "options.type=='standard' && options.standard.maximum_plateau=='yes'",
        "val": "0",
        "style": "width: 250px",
        "breakLine": true
      },
      "options.standard.left_slope": {
        "type": "select",
        "label": "Левый наклон",
        "show_if": "options.type=='standard'",
        "options": {
          "vertical": {
            "label": "Вертикальный"
          },
          "linear": {
            "label": "Линейный"
          },
          "standard_distribution": {
            "label": "Стандартное распределение"
          }
        },
        "val": "standard_distribution"
      },
      "options.standard.use_auto_calculated_sigma_for_left_slope": {
        "type": "checkbox",
        "label": "Автоматически рассчитанная левая сигма",
        "show_if": "options.type=='standard' && options.standard.left_slope=='standard_distribution'",
        "val": "true",
        "isOn": "true",
        "isOff": "false"
      },
      "options.standard.left_slope_sigma": {
        "type": "text",
        "label": "Левый наклон сигмы",
        "show_if": "options.type=='standard' && options.standard.left_slope=='standard_distribution' && options.standard.use_auto_calculated_sigma_for_left_slope=='false'",
        "val": ""
      },
      "options.standard.right_slope": {
        "type": "select",
        "label": "Правый наклон",
        "show_if": "options.type=='standard'",
        "required": true,
        "options": {
          "vertical": {
            "label": "Вертикальный"
          },
          "linear": {
            "label": "Линейный"
          },
          "standard_distribution": {
            "label": "Стандартное распределение"
          }
        },
        "val": "standard_distribution"
      },
      "options.standard.use_auto_calculated_sigma_for_right_slope": {
        "type": "checkbox",
        "label": "Автоматически рассчитанная правая сигма",
        "show_if": "options.type=='standard' && options.standard.right_slope=='standard_distribution'",
        "val": "true",
        "isOn": "true",
        "isOff": "false"
      },
      "options.standard.right_slope_sigma": {
        "type": "text",
        "label": "Правый наклон сигмы",
        "show_if": "options.type=='standard' && options.standard.right_slope=='standard_distribution' && options.standard.use_auto_calculated_sigma_for_right_slope=='false'",
        "val": "",
        "breakLine": true
      },
      "options.standard.event_name": {
        "type": "text",
        "label": "Название события",
        "show_if": "options.type=='standard'",
        "val": "Event"
      },
      "options.custom.event_table_id": {
        "type": "select",
        "label": "Таблица события",
        "show_if": "options.type=='custom'",
        "bind": "TABLES",
        "empty": "",
        "required": true,
        "breakLine": true
      },
      "options.custom.event_date_column": {
        "type": "select",
        "label": "Столбец даты события",
        "show_if": "options.type=='custom'",
        "required": true,
        "table": "options.custom.event_table_id",
        "bind": "COLUMNS"
      },
      "options.custom.event_name_column": {
        "type": "select",
        "label": "Столбец даты события",
        "show_if": "options.type=='custom'",
        "required": true,
        "table": "options.custom.event_table_id",
        "bind": "COLUMNS"
      },
      "options.custom.event_name": {
        "type": "text",
        "label": "Название события",
        "show_if": "options.type=='custom'",
        "val": "Weekend",
        "required": true,
        "breakLine": true
      },
      "options.custom.base_period": {
        "type": "select",
        "label": "Базовый период",
        "show_if": "options.type=='custom'",
        "required": true,
        "options": {
          "months": {
            "label": "N предыдущих месяцев"
          },
          "weeks": {
            "label": "N предыдущих недель"
          },
          "days": {
            "label": "N предыдущих дней"
          }
        },
        "val": "days"
      },
      "options.custom.base_period_n": {
        "type": "text",
        "label": "N",
        "show_if": "options.type=='custom'",
        "val": "5",
        "required": true,
        "breakLine": true
      },
      "options.custom.leading_impact_days": {
        "type": "text",
        "label": "Периоды наибольшего воздействия",
        "show_if": "options.type=='custom'",
        "val": "0",
        "required": true
      },
      "options.custom.trailing_impact_days": {
        "type": "text",
        "label": "Частота конечного воздействия",
        "show_if": "options.type=='custom'",
        "val": "0",
        "required": true,
        "breakLine": true
      },
      "options.custom.value_column": {
        "type": "select",
        "label": "Значение столбца",
        "show_if": "options.type=='custom'",
        "required": true,
        "table": "options.custom.event_table_id",
        "bind": "COLUMNS",
        "breakLine": true
      },
      "options.custom.average": {
        "type": "hidden",
        "val": "true"
      },
      "options.apply.event_name": {
        "type": "text",
        "label": "Название события",
        "show_if": "options.type=='apply'",
        "val": "Weekend",
        "required": true,
        "breakLine": true
      },
      "apply_event_table_box": {
        "type": "fieldset",
        "label": "Выбрать таблицу событий",
        "show_if": "options.type=='apply'",
        "repeat": false,
        "fields": {
          "options.apply.event_table_id": {
            "type": "select",
            "label": "Таблица события",
            "bind": "TABLES",
            "empty": "",
            "required": true,
            "breakLine": true
          },
          "options.apply.event_table_event_date_column": {
            "type": "select",
            "label": "Столбец даты события",
            "required": true,
            "table": "options.apply.event_table_id",
            "bind": "COLUMNS"
          },
          "options.apply.event_table_event_name_column": {
            "type": "select",
            "label": "Столбец даты события",
            "required": true,
            "table": "options.apply.event_table_id",
            "bind": "COLUMNS"
          },
          "options.apply.event_table_value_column": {
            "type": "select",
            "label": "Значение столбца",
            "required": true,
            "table": "options.apply.event_table_id",
            "bind": "COLUMNS",
            "breakLine": true
          }
        }
      },
      "apply_impact_table_box": {
        "type": "fieldset",
        "label": "Выбрать таблицу влияния",
        "show_if": "options.type=='apply'",
        "repeat": false,
        "fields": {
          "options.apply.impact_table_id": {
            "type": "select",
            "label": "Таблица влияния",
            "bind": "TABLES",
            "empty": "",
            "required": true,
            "breakLine": true
          },
          "options.apply.on_average": {
            "type": "hidden",
            "val": "true"
          },
          "options.apply.impact_table_event_date_column": {
            "type": "select",
            "label": "Столбец даты события",
            "required": true,
            "table": "options.apply.impact_table_id",
            "bind": "COLUMNS"
          },
          "options.apply.impact_table_event_name_column": {
            "type": "select",
            "label": "Столбец даты события",
            "required": true,
            "table": "options.apply.impact_table_id",
            "bind": "COLUMNS"
          },
          "options.apply.impact_table_impact_column": {
            "type": "select",
            "label": "Столбец влияния",
            "required": true,
            "table": "options.apply.impact_table_id",
            "bind": "COLUMNS",
            "breakLine": true
          }
        }
      }
    }
  }
}