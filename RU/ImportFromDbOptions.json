{
  "options": {
    "type": "fieldset",
    "label": "Выбрать параметры",
    "repeat": false,
    "fields": {
      "options.from": {
        "type": "hidden",
        "val": "database"
      },
      "postgresql_db_credential_box": {
        "type": "fieldset",
        "label": "Учетные данные для подключения к базе данных",
        "repeat": false,
        "fields": {
          "options.dbms": {
            "type": "select",
            "label": "Выбрать СУБД",
            "options": {
              "postgresql": {
                "label": "PostgreSQL"
              },
              "mysql": {
                "label": "MySQL"
              },
              "sql_server": {
                "label": "MS SQL Сервер"
              },
              "oracle": {
                "label": "Oracle"
              }
            },
            "val": "postgresql",
            "required": true,
            "breakLine": true
          },
          "options.host": {
            "type": "text",
            "label": "Хост",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.user": {
            "type": "text",
            "label": "Пользователь",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.password": {
            "type": "password",
            "label": "Пароль",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.database": {
            "type": "text",
            "label": "База данных",
            "required": true,
            "width": "100%",
            "breakLine": true
          }
        }
      },
      "options.schema_name_to_import": {
        "type": "text",
        "label": "Название схемы, включающее таблицу для импорта",
        "show_if": "options.dbms=='postgresql' || options.dbms=='sql_server' || options.dbms=='oracle'",
        "required": true,
        "val": "public",
        "width": "100%",
        "breakLine": true
      },
      "options.table_name_to_import": {
        "type": "text",
        "label": "Название таблицы для импорта",
        "required": true,
        "width": "100%",
        "breakLine": true
      }
    }
  }
}