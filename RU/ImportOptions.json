{
  "options": {
    "type": "fieldset",
    "Метка": "Выбрать параметры",
    "repeat": false,
    "fields": {
      "options.from": {
        "type": "select",
        "Метка": "Источник данных",
        "options": {
          "web": {
            "Метка": "Импорт из Веб-сервиса"
          },
          "database": {
            "Метка": "Импорт из базы данных"
          }
        },
        "val": "web",
        "required": true,
        "breakLine": true
      },
      "postgresql_db_credential_box": {
        "type": "fieldset",
        "Метка": "Учетные данные для подключения к базе данных",
        "show_if": "options.from=='database'",
        "repeat": false,
        "fields": {
          "options.dbms": {
            "type": "select",
            "Метка": "Выбрать СУБД",
            "options": {
              "postgresql": {
                "Метка": "PostgreSQL"
              },
              "mysql": {
                "Метка": "MySQL (Скоро будет...)"
              },
              "sql_server": {
                "Метка": "MS SQL Сервер (Скоро будет...)"
              },
              "oracle": {
                "Метка": "Oracle (Скоро будет...)"
              }
            },
            "val": "postgresql",
            "required": true,
            "breakLine": true
          },
          "options.postgresql_credential.user": {
            "type": "text",
            "Метка": "Пользователь",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.postgresql_credential.password": {
            "type": "text",
            "Метка": "Пароль",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.postgresql_credential.host": {
            "type": "text",
            "Метка": "Хост",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          },
          "options.postgresql_credential.database": {
            "type": "text",
            "Метка": "База данных",
            "show_if": "options.dbms=='postgresql'",
            "required": true,
            "width": "100%",
            "breakLine": true
          }
        }
      },
      "options.schema_name_to_import": {
        "type": "text",
        "Метка": "Название схемы, включающее таблицу для импорта",
        "show_if": "options.from=='database' && options.dbms=='postgresql'",
        "required": true,
        "val": "public",
        "width": "100%",
        "breakLine": true
      },
      "options.table_name_to_import": {
        "type": "text",
        "Метка": "Название таблицы для импорта",
        "show_if": "options.from=='database' && options.dbms=='postgresql'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.webservice": {
        "type": "select",
        "Метка": "Выбрать Веб-сервис",
        "show_if": "options.from=='web'",
        "options": {
          "github": {
            "Метка": "Github"
          },
          "ms_one_drive": {
            "Метка": "Microsoft OneDrive"
          },
          "dropbox": {
            "Метка": "Dropbox"
          },
          "google_drive": {
            "Метка": "Google Drive (скоро появится)"
          }
        },
        "val": "github",
        "required": true,
        "breakLine": true
      },
      "options.output_format": {
        "type": "select",
        "Метка": "Выбрать тип",
        "show_if": "options.from=='web'",
        "options": {
          "csv_table": {
            "Метка": "CSV-таблица"
          },
          "line_by_line": {
            "Метка": "Линия за линией"
          },
          "word_by_word": {
            "Метка": "Слово за словом"
          },
          "file_list": {
            "Метка": "Список файлов"
          }
        },
        "val": "csv_table",
        "required": true
      },
      "options.word_pattern_type": {
        "type": "select",
        "Метка": "Словесный шаблон",
        "show_if": "options.from=='web' && options.output_format=='word_by_word' && options.specify_word_pattern=='true'",
        "options": {
          "regex": {
            "Метка": "Регулярное выражение"
          }
        },
        "val": "regex",
        "required": true
      },
      "options.word_pattern_regex": {
        "type": "text",
        "Метка": "Регулярное выражение",
        "show_if": "options.from=='web' && options.output_format=='word_by_word' && options.specify_word_pattern=='true' && options.word_pattern_type=='regex'",
        "required": true,
        "val": "[a-z][1-9]",
        "breakLine": true
      },
      "options.column_setting": {
        "type": "checkbox",
        "Метка": "Настройки колонок",
        "show_if": "options.from=='web' && options.output_format!='file_list'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "column_setting_frame": {
        "type": "fieldset",
        "Метка": "Настройки колонок",
        "show_if": "options.from=='web' && options.output_format!='file_list' && options.column_setting=='true'",
        "repeat": false,
        "fields": {
          "options.add_row_column": {
            "type": "checkbox",
            "Метка": "Добавить строку столбца",
            "show_if": "options.from=='web' && options.output_format=='word_by_word'",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "options.add_word_count_column": {
            "type": "checkbox",
            "Метка": "Добавить колонку 'Word Count'",
            "show_if": "options.from=='web' && options.output_format=='word_by_word'",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "options.add_word_nonword_column": {
            "type": "checkbox",
            "Метка": "Добавить колонку "Слово и не-слово"",
            "show_if": "options.from=='web' && options.output_format=='word_by_word'",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "options.add_section_column": {
            "type": "checkbox",
            "Метка": "Добавить столбец раздела",
            "show_if": "options.from=='web' && options.output_format=='word_by_word'",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          },
          "section_column_types_frame": {
            "type": "fieldset",
            "Метка": "Типы столбцов раздела",
            "show_if": "options.from=='web' && options.output_format=='word_by_word' && options.add_section_column=='true'",
            "repeat": false,
            "fields": {
              "options.section_columns.add_paragraph_section_column": {
                "type": "checkbox",
                "Метка": "Параграф",
                "val": "false",
                "isOn": "true",
                "isOff": "false",
                "breakLine": true
              },
              "options.section_columns.add_custom_section_column": {
                "type": "checkbox",
                "Метка": "Пользовательский разделитель",
                "val": "false",
                "isOn": "true",
                "isOff": "false"
              },
              "options.section_columns.custom_delimiter": {
                "type": "text",
                "Метка": "Разделитель (1 символ)",
                "show_if": "options.section_columns.add_custom_section_column=='true'",
                "maxLength": 1,
                "required": true,
                "breakLine": true
              },
              "options.section_columns.add_brackets_punctuation_section_column": {
                "type": "checkbox",
                "Метка": "Скобки и пунктуация",
                "val": "false",
                "isOn": "true",
                "isOff": "false"
              },
              "options.section_columns.brackets_punctuation_section_column_type": {
                "type": "select",
                "Метка": "Тип скобок",
                "show_if": "options.section_columns.add_brackets_punctuation_section_column=='true'",
                "options": {
                  "nesting_structure": {
                    "Метка": "Структура вложенности"
                  },
                  "inner_bracket": {
                    "Метка": "Внутренняя скобка"
                  },
                  "show_all": {
                    "Метка": "Показать все"
                  }
                },
                "val": "nesting_structure",
                "required": true,
                "breakLine": true
              }
            }
          },
          "options.add_filename_column": {
            "type": "checkbox",
            "Метка": "Добавить колонку в Название Файла",
            "val": "false",
            "isOn": "true",
            "isOff": "false",
            "style": "margin-top: 10px",
            "breakLine": true
          }
        }
      },
      "options.is_cloud_dir": {
        "type": "checkbox",
        "Метка": "Импортировать каталог",
        "show_if": "options.from=='web' && options.output_format!='file_list'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "style": "margin-top: 10px",
        "breakLine": true
      },
      "options.use_filename_as_output_table_name": {
        "type": "checkbox",
        "Метка": "Использовать имя файла в качестве имени таблицы",
        "show_if": "options.from=='web' && options.output_format!='file_list' && options.is_cloud_dir=='false'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.unify_in_one_table": {
        "type": "checkbox",
        "Метка": "Объединить в одну таблицу",
        "show_if": "options.from=='web' && options.output_format!='file_list' && options.is_cloud_dir=='true'",
        "val": "true",
        "isOn": "true",
        "isOff": "false"
      },
      "options.suffix": {
        "type": "select",
        "Метка": "Суффикс",
        "show_if": "options.from=='web' && options.output_format!='file_list' && options.is_cloud_dir=='true' && options.unify_in_one_table=='false'",
        "options": {
          "number": {
            "Метка": "Число"
          },
          "filename": {
            "Метка": "Название файла"
          }
        },
        "val": "number",
        "required": true,
        "breakLine": true
      },
      "options.is_github_private": {
        "type": "checkbox",
        "Метка": "Репозиторий является частным",
        "show_if": "options.from=='web' && options.webservice=='github'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.include_subdir": {
        "type": "checkbox",
        "Метка": "Включить подкаталоги",
        "show_if": "options.from=='web' && options.output_format=='file_list'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.file_list.add_change_date_column": {
        "type": "checkbox",
        "Метка": "Добавить столбец изменения даты",
        "show_if": "options.from=='web' && options.output_format=='file_list'",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.github_token": {
        "type": "text",
        "Метка": "указать токен персонального доступа Github",
        "show_if": "options.from=='web' && options.webservice=='github' && options.is_github_private=='true'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.link_directory": {
        "type": "text",
        "Метка": "Введите ссылку, например, https://github.com/zippydoc/test.",
        "show_if": "options.from=='web' && options.webservice=='github' && options.output_format!='file_list' && options.is_cloud_dir=='true'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.link_directory_4_file_list": {
        "type": "text",
        "Метка": "Введите ссылку, например, https://github.com/zippydoc/test.",
        "show_if": "options.from=='web' && options.webservice=='github' && options.output_format=='file_list'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.link_file": {
        "type": "text",
        "Метка": "Введите ссылку, например, https://github.com/zippydoc/test/blob/main/example.csv.",
        "show_if": "options.from=='web' && options.webservice=='github' && options.is_cloud_dir=='false' && options.output_format=='csv_table'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.link_text_file": {
        "type": "text",
        "Метка": "Введите ссылку, например, https://github.com/zippydoc/test/blob/main/example.txt(json, csv, etc)",
        "show_if": "options.from=='web' && options.webservice=='github' && options.is_cloud_dir=='false' && options.output_format!='csv_table' && options.output_format!='file_list'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.one_drive.access_token": {
        "type": "text",
        "Метка": "Токен доступа OAuth",
        "show_if": "options.from=='web' && options.webservice=='ms_one_drive' && options.is_cloud_dir=='false'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.one_drive.file_path": {
        "type": "text",
        "Метка": "Введите путь к файлу, например, ZippyDoc/Subdir1/test.txt",
        "show_if": "options.from=='web' && options.webservice=='ms_one_drive' && options.output_format!='file_list' && options.is_cloud_dir=='false'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.one_drive.dir_path": {
        "type": "text",
        "Метка": "Введите путь к каталогу, например ZippyDoc/Subdir1",
        "show_if": "options.from=='web' && options.webservice=='ms_one_drive' && (options.output_format=='file_list' || options.is_cloud_dir=='true')",
        "width": "100%",
        "breakLine": true
      },
      "options.dropbox.auth_code": {
        "type": "text",
        "Метка": "Код авторизации Dropbox",
        "show_if": "options.from=='web' && options.webservice=='dropbox' && options.is_cloud_dir=='false'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.dropbox.file_path": {
        "type": "text",
        "Метка": "Введите путь к файлу, например, ZippyDoc/Subdir1/test.txt",
        "show_if": "options.from=='web' && options.webservice=='dropbox' && options.output_format!='file_list' && options.is_cloud_dir=='false'",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "options.dropbox.dir_path": {
        "type": "text",
        "Метка": "Введите путь к каталогу, например ZippyDoc/Subdir1",
        "show_if": "options.from=='web' && options.webservice=='dropbox' && (options.output_format=='file_list' || options.is_cloud_dir=='true')",
        "width": "100%",
        "breakLine": true
      },
      "dir_filter_frame": {
        "type": "fieldset",
        "Метка": "Фильтровать файлы в каталоге",
        "show_if": "options.from=='web' && options.output_format!='file_list' && options.is_cloud_dir=='true'",
        "repeat": false,
        "fields": {
          "options.dir_filter.filter_type": {
            "type": "select",
            "Метка": "Тип фильтра",
            "options": {
              "all": {
                "Метка": "Все"
              },
              "contains": {
                "Метка": "Содержит"
              },
              "starts_with": {
                "Метка": "Начинается с"
              },
              "ends_with": {
                "Метка": "Заканчивается С"
              },
              "regex": {
                "Метка": "Регулярное выражение"
              }
            },
            "val": "all",
            "required": true
          },
          "options.dir_filter.filter_string": {
            "type": "text",
            "Метка": "Введите строку",
            "show_if": "options.dir_filter.filter_type!='all'",
            "required": true,
            "width": "100%"
          }
        }
      }
    }
  }
}