{
  "options_box": {
    "type": "fieldset",
    "Метка": "Опции",
    "repeat": false,
    "fields": {
      "options.provider": {
        "type": "select",
        "Метка": "Поставщик платежа",
        "options": {
          "stripe": {
            "Метка": "Stripe"
          },
          "paypal": {
            "Метка": "Paypal"
          },
          "payoneer": {
            "Метка": "Payoneer"
          }
        },
        "val": "stripe",
        "required": true
      },
      "options.type": {
        "type": "select",
        "Метка": "Тип платежа",
        "options": {
          "charge": {
            "Метка": "Charge"
          },
          "transfer": {
            "Метка": "Перевод"
          }
        },
        "val": "charge",
        "required": true
      },
      "options.stripe.secret_key": {
        "type": "text",
        "Метка": "Секретный ключ Stripe",
        "show_if": "options.provider=='stripe'",
        "required": true,
        "val": "",
        "width": "100%",
        "breakLine": true
      }
    }
  }
}