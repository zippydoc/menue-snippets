{
  "options": {
    "type": "fieldset",
    "label": "Выбрать параметры",
    "repeat": false,
    "fields": {
      "task_label": {
        "type": "hidden",
        "val": "personnel_planning"
      },
      "options.type": {
        "type": "hidden",
        "val": "custom"
      },
      "options.custom.table": {
        "type": "fieldset",
        "label": "Плановая позиция",
        "repeat": true,
        "fields": {
          "item": {
            "type": "text",
            "label": "наименование",
            "val": "",
            "required": true
          },
          "position": {
            "type": "select",
            "label": "Позиция",
            "options": {
              "fix salary": {
                "label": "фиксированный оклад"
              },
              "bonus": {
                "label": "премия"
              },
              "other compensation": {
                "label": "другие компенсации"
              }
            },
            "val": "fix salary",
            "required": true
          },
          "amount": {
            "type": "number",
            "label": "Сумма",
            "val": "",
            "required": true
          },
          "initial_date": {
            "type": "date",
            "label": "Начальная дата",
            "val": "",
            "required": true
          },
          "periodicy": {
            "type": "select",
            "label": "Частота",
            "required": true,
            "options": {
              "One-Off": {
                "label": "разовые"
              },
              "Daily": {
                "label": "Ежедневно"
              },
              "Work-Daily": {
                "label": "Рабочий день"
              },
              "Weekly": {
                "label": "Еженедельно"
              },
              "Monthly": {
                "label": "Ежемесячно"
              },
              "Quarterly": {
                "label": "Ежеквартально"
              },
              "Yearly": {
                "label": "Ежегодно"
              }
            },
            "val": "One-Off"
          },
          "growth": {
            "type": "number",
            "label": "Рост",
            "show_if": "this.periodicy!='One-Off'",
            "val": "",
            "required": true
          },
          "growth_period": {
            "type": "select",
            "label": "Период роста",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Weekly": {
                "label": "Еженедельно"
              },
              "Monthly": {
                "label": "Месяц в месяц"
              },
              "Quarterly": {
                "label": "Квартал за кварталом"
              },
              "Yearly": {
                "label": "Год за годом"
              }
            },
            "val": "Weekly"
          },
          "growth_pattern": {
            "type": "select",
            "label": "Модель роста",
            "show_if": "this.periodicy!='One-Off'",
            "options": {
              "Compounding": {
                "label": "Компаундирование"
              },
              "Linear": {
                "label": "Линейный"
              },
              "Jump-Fix": {
                "label": "Jump-Fix"
              }
            },
            "val": "Compounding"
          },
          "final_date": {
            "type": "date",
            "label": "Заключительная дата",
            "show_if": "this.periodicy!='One-Off'",
            "val": ""
          },
          "delete": {
            "type": "button",
            "label": "Удалить",
            "function": "DELETE_ROW"
          }
        }
      },
      "options.end_date": {
        "type": "date",
        "label": "Конечная дата таблицы",
        "show_if": "options.type=='process' || options.type=='custom'",
        "val": "",
        "required": true,
        "style": "width: 300px"
      }
    }
  }
}