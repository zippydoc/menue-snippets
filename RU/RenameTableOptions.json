{
  "options": {
    "type": "fieldset",
    "label": "Опции",
    "repeat": false,
    "fields": {
      "rename_columns": {
        "type": "checkbox",
        "label": "Переименовать столбцы",
        "show_if": "false",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "columns": {
        "type": "fieldset",
        "label": "Выбрать строки",
        "show_if": "$table_id.numOfHeader >= 1",
        "repeat": true,
        "fields": {
          "field_name": {
            "type": "select",
            "label": "Выбрать столбец",
            "table": "table_id",
            "bind": "COLUMNS",
            "required": true
          },
          "rename": {
            "show_if": "this.field_name != ''",
            "type": "text",
            "required": true,
            "minLength": 1,
            "maxLength": 255,
            "label": "Переименовать на"
          },
          "delete": {
            "show_if": "this.field_name != ''",
            "type": "button",
            "label": "Удалить",
            "function": "DELETE_ROW"
          }
        },
        "breakLine": true
      },
      "rename_rows": {
        "type": "checkbox",
        "label": "Переименовать метки",
        "show_if": "false",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "style": "margin-top: 10px"
      },
      "rows": {
        "type": "fieldset",
        "label": "Выбрать метки",
        "show_if": "$table_id.numOfLabel >= 1",
        "repeat": true,
        "fields": {
          "label_name": {
            "type": "select",
            "label": "Выбрать метку",
            "table": "table_id",
            "bind": "LABELS",
            "required": true
          },
          "rename": {
            "show_if": "this.label_name != ''",
            "type": "text",
            "required": true,
            "minLength": 1,
            "maxLength": 255,
            "label": "Переименовать на"
          },
          "delete": {
            "show_if": "this.label_name != ''",
            "type": "button",
            "label": "Удалить",
            "function": "DELETE_ROW"
          }
        },
        "breakLine": true
      }
    }
  }
}