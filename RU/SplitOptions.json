{
  "options": {
    "type": "fieldset",
    "label": "Выбрать параметры",
    "repeat": false,
    "fields": {
      "options.split_method": {
        "type": "select",
        "label": "Сплит-метод",
        "required": true,
        "options": {
          "standard": {
            "label": "Стандартный"
          },
          "regex": {
            "label": "Регулярное выражение"
          }
        },
        "val": "standard"
      },
      "options.split_type": {
        "type": "select",
        "label": "Разделить тип",
        "required": true,
        "options": {
          "split_to_columns": {
            "label": "Разделить на столбцы"
          },
          "split_to_rows": {
            "label": "Разделить на строки"
          }
        },
        "val": "split_to_columns"
      },
      "options.standard_delimiter": {
        "type": "select",
        "label": "Сплит-разделитель",
        "show_if": "options.split_method=='standard'",
        "required": true,
        "options": {
          "tabs": {
            "label": "Вкладки"
          },
          "space": {
            "label": "Пробел"
          },
          "whitespace": {
            "label": "Пробел"
          },
          "linebreak": {
            "label": "Разрыв строки"
          },
          "punctuation": {
            "label": "Пунктуация"
          },
          "punctuation_whitespace": {
            "label": "Пунктуация и пробел"
          },
          "custom": {
            "label": "Пользовательский"
          }
        },
        "val": "punctuation"
      },
      "options.delimiter": {
        "type": "text",
        "label": "Сплит-разделитель",
        "show_if": "options.split_method=='standard' && options.standard_delimiter=='custom'",
        "val": ",",
        "trim": "false",
        "required": true,
        "breakLine": true
      },
      "format_frame": {
        "type": "fieldset",
        "label": "Формат для разделения на части",
        "show_if": "options.split_method=='regex'",
        "repeat": false,
        "fields": {
          "options.format_to_convert.regular_expression": {
            "type": "text",
            "label": "Parse Regular Expression ( ex: ([a-z]+)\\s([a-z]+) )",
            "val": "[a-z]+\\s[a-z]+",
            "required": true,
            "width": "100%",
            "trim": "false",
            "breakLine": true
          },
          "options.format_to_convert.case_insensitive": {
            "type": "checkbox",
            "label": "Без учета регистра",
            "val": "true",
            "isOn": "true",
            "isOff": "false",
            "breakLine": true
          }
        }
      },
      "options.n_multi_n": {
        "type": "checkbox",
        "label": "N x N split if multiple columns are selected",
        "show_if": "options.split_type=='split_to_rows'",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      }
    }
  }
}