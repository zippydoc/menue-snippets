{
  "options": {
    "type": "fieldset",
    "label": "Заголовок и метка таблицы",
    "repeat": false,
    "fields": {
      "has_header": {
        "type": "button",
        "label": "Имеет заголовок!",
        "show_if": "$input_table.numOfHeader >= 1"
      },
      "has_label": {
        "type": "button",
        "label": "Имеет метку!",
        "show_if": "$input_table.numOfLabel >= 1"
      },
      "has_both": {
        "type": "button",
        "label": "Имеет оба!",
        "show_if": "$input_table.numOfHeader >= 1 && $input_table.numOfLabel >= 1"
      },
      "has_both2": {
        "type": "text",
        "label": "Имеет оба2!",
        "show_if": "$input_table.numOfHeader>=1 && $input_table.numOfLabel>=1",
        "val": "both"
      },
      "header_only": {
        "type": "button",
        "label": "Только заголовок!",
        "show_if": "$input_table.numOfHeader >= 1 && $input_table.numOfLabel < 1"
      },
      "label_only": {
        "type": "button",
        "label": "Только этикетка!",
        "show_if": "$input_table.numOfHeader < 1 && $input_table.numOfLabel >= 1"
      },
      "no_header": {
        "type": "button",
        "label": "Без заголовка!",
        "show_if": "$input_table.numOfHeader < 1"
      },
      "no_label": {
        "type": "button",
        "label": "Без этикетки!",
        "show_if": "$input_table.numOfLabel < 1"
      }
    }
  }
}