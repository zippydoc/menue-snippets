{
  "placeholder": {
    "breakLine": true
  }, 
  "apply_to_all_columns": {
    "type": "checkbox", 
    "label": "Все колонки",
    "val": "true", 
    "isOn": "true", 
    "isOff": "false"
  }, 
  "apply_columns": {
    "type": "select", 
    "label": "Выбрать колонки чтобы применить",
    "show_if": "apply_to_all_columns=='false'", 
    "required": true, 
    "table": "input_table", 
    "multiple": true, 
    "bind": "COLUMNS", 
    "breakLine": true
  }, 
  "apply_to_all_rows": {
    "type": "checkbox", 
    "label": "Все строки",
    "val": "true", 
    "isOn": "true", 
    "isOff": "false"
  }, 
  "apply_rows": {
    "type": "select", 
    "label": "Выбрать строки и применить",
    "show_if": "apply_to_all_rows=='false'", 
    "required": true, 
    "table": "input_table", 
    "multiple": true, 
    "bind": "LABELS", 
    "breakLine": true
  }, 
  "intersection": {
    "type": "select", 
    "label": "Выбор",
    "show_if": "apply_to_all_columns=='false' && apply_to_all_rows=='false'", 
    "options": {
      "all": {
        "label": "Все выбранные строки/столбцы"
      }, 
      "intersection": {
        "label": "Общее в выбранных строках / столбцах"
      }
    }, 
    "val": "intersection"
  }
}
