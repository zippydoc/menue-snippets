{
  "input": {
    "type": "fieldset",
    "label": "Select Flow",
    "repeat": false,
    "fields": {
      "flow_id": {
        "type": "select",
        "label": "Select Flow",
        "bind": "FLOWS",
        "empty": "",
        "required": true,
        "breakLine": true
      },
      "replace_first_table_of_selected_flow": {
        "type": "checkbox",
        "label": "Replace first table of selected flow",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "style": "margin-right: 20px"
      },
      "table_id": {
        "type": "select",
        "label": "Select Input Table",
        "show_if": "options.manual_config=='false' && replace_first_table_of_selected_flow=='true'",
        "bind": "TABLES",
        "empty": ""
      }
    }
  }
}
