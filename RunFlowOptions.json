{
  "options_box": {
    "type": "fieldset",
    "label": "Flow Configuration",
    "repeat": false,
    "fields": {
      "options.output_last_table_of_selected_flow": {
        "type": "checkbox",
        "label": "Output last table of selected flow",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.run_temporary_copy": {
        "type": "checkbox",
        "label": "Run temporary copy",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.manual_config": {
        "type": "checkbox",
        "label": "Manual configuration",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "options.input_tables_map": {
        "type": "fieldset",
        "label": "Input Tables Mapping",
        "show_if": "options.manual_config=='true'",
        "repeat": true,
        "fields": {
          "caller_input_table": {
            "type": "select",
            "label": "Caller Input Table",
            "bind": "TABLES",
            "empty": "",
            "required": true
          },
          "callee_input_table": {
            "type": "select",
            "label": "Callee Input Table",
            "bind": "TABLES",
            "empty": "",
            "breakLine": true
          },
          "delete": {
            "type": "button",
            "label": "Delete",
            "function": "DELETE_ROW"
          }
        }
      },
      "note1": {
        "type": "textarea",
        "label": "",
        "show_if": "options.manual_config=='true'",
        "val": "Ensure, that the relevant column name(s) of the target table(s) flow table(s) match",
        "disabled": true,
        "width": "100%"
      },
      "options.output_tables_map": {
        "type": "fieldset",
        "label": "Output Tables Mapping",
        "show_if": "options.manual_config=='true'",
        "repeat": true,
        "fields": {
          "caller_output_table": {
            "type": "select",
            "label": "Caller Output Table",
            "bind": "TABLES",
            "empty": "",
            "required": true
          },
          "callee_output_table": {
            "type": "select",
            "label": "Callee Output Table",
            "bind": "TABLES",
            "empty": "",
            "breakLine": true
          },
          "delete": {
            "type": "button",
            "label": "Delete",
            "function": "DELETE_ROW"
          }
        }
      }
    }
  }
}