{
  "options_box": {
    "type": "fieldset",
    "label": "Flow Configuration",
    "repeat": false,
    "fields": {
      "options.replace_tables": {
        "type": "fieldset",
        "label": "Input Tables to replace",
        "repeat": true,
        "fields": {
          "tbl_id_to_replace": {
            "type": "select",
            "label": "Table to replace",
            "show_if": "this.tbl_id_to_replace__by_text=='false'",
            "bind": "TABLES",
            "empty": "",
            "required": true
          },
          "tbl_id_to_replace__by_text": {
            "type": "checkbox",
            "label": "Configure by ID",
            "val": "false",
            "isOn": "true",
            "isOff": "false"
          },
          "tbl_id_to_replace__text": {
            "type": "text",
            "label": "Table to replace",
            "show_if": "this.tbl_id_to_replace__by_text=='true'",
            "val": "",
            "breakLine": true
          },
          "replace_with_tbl_id": {
            "type": "select",
            "label": "`Replace With` table",
            "bind": "TABLES",
            "empty": "",
            "breakLine": true
          },
          "delete": {
            "type": "button",
            "label": "Delete",
            "function": "DELETE_ROW"
          }
        }
      },
      "note1": {
        "type": "textarea",
        "label": "",
        "val": "Ensure, that the relevant column name(s) of the target table(s) flow table(s) match",
        "disabled": true,
        "width": "100%"
      }
    }
  }
}