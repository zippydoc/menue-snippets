{
  "input": {
    "type": "fieldset",
    "label": "Select Input Table",
    "style": "border-radius: 3px; border: 1px solid #ccc",
    "repeat": false,
    "fields": {
      "input.table_or_flow": {
        "type": "hidden",
        "val": "set_table_permissions"
      },
      "input.table_id": {
        "type": "select",
        "label": "Select Table",
        "show_if": "input.table_or_flow=='set_table_permissions'",
        "bind": "TABLES",
        "empty": "",
        "required": true
      }
    }
  }
}
