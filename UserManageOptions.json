{
  "options": {
    "type": "fieldset",
    "label": "Select Options",
    "repeat": false,
    "fields": {
      "options.manage_type": {
        "type": "select",
        "label": "Type",
        "required": true,
        "options": {
          "add_user": {
            "label": "Add user"
          },
          "delete_user": {
            "label": "Delete user"
          }
        },
        "val": "add_user",
        "breakLine": true
      },
      "options.email": {
        "type": "text",
        "label": "MS login email",
        "show_if": "options.manage_type=='add_user'",
        "required": true,
        "val": "",
        "breakLine": true
      },
      "options.user_role": {
        "type": "select",
        "label": "User role",
        "show_if": "options.manage_type=='add_user'",
        "options": {
          "non_admin": {
            "label": "User"
          },
          "admin": {
            "label": "Admin"
          }
        },
        "val": "non_admin",
        "breakLine": true
      },
      "options.points": {
        "type": "number",
        "label": "Available points",
        "show_if": "options.manage_type=='add_user'",
        "required": true,
        "val": "100",
        "breakLine": true
      },
      "options.user_id_to_delete": {
        "type": "number",
        "label": "User ID",
        "show_if": "options.manage_type=='delete_user'",
        "required": true,
        "val": "",
        "breakLine": true
      }
    }
  }
}
