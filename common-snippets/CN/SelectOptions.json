{
  "options": {
    "type": "fieldset",
    "label": "选择选项",
    "repeat": false,
    "fields": {
      "type": {
        "type": "select",
        "label": "选择类型",
        "val": "first_n",
        "options": {
          "first_n": {
            "label": "前 N"
          },
          "last_n": {
            "label": "后 N"
          },
          "custom_selection": {
            "label": "自定义选择"
          },
          "skip_first_n": {
            "label": "跳过前 N"
          },
          "skip_last_n": {
            "label": "跳过后 N"
          },
          "first_n_percent": {
            "label": "前 N%"
          },
          "last_n_percent": {
            "label": "后 N%"
          },
          "random_n_records": {
            "label": "随机 N"
          },
          "random_n_percent": {
            "label": "随机 N%"
          },
          "random_choice_1_n": {
            "label": "随机选择 1:N"
          },
          "every_nth_record": {
            "label": "每 N 条记录"
          }
        },
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "n": {
        "type": "text",
        "label": "输入 N",
        "show_if": "type!='custom_selection'",
        "val": "1",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "ranges": {
        "type": "text",
        "label": "输入范围",
        "show_if": "type=='custom_selection'",
        "val": "-2; 4-6; 9; 12+",
        "required": true,
        "width": "100%",
        "breakLine": true
      },
      "set_offset": {
        "type": "checkbox",
        "label": "偏移",
        "show_if": "type=='every_nth_record'",
        "val": "false",
        "isOn": "true",
        "isOff": "false"
      },
      "offset": {
        "type": "text",
        "label": "偏移",
        "show_if": "type=='every_nth_record' && set_offset=='true'",
        "val": "1",
        "required": true,
        "breakLine": true
      },
      "group_by_column": {
        "type": "checkbox",
        "label": "按列分组",
        "val": "false",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "columns_to_group_box": {
        "type": "fieldset",
        "label": "按列分组",
        "show_if": "group_by_column=='true'",
        "repeat": false,
        "fields": {
          "columns_to_group": {
            "type": "select",
            "label": "选择组列",
            "required": true,
            "width": "100%",
            "table": "table_id",
            "multiple": true,
            "bind": "COLUMNS",
            "breakLine": true
          }
        }
      }
    }
  }
}