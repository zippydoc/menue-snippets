          },
          "order": {
            "type": "select",
            "label": "顺序",
            "options": {
              "asc": {
                "label": "ASC"
              },
              "desc": {
                "label": "DESC"
              }
            },
            "val": "asc"
          },
          "delete": {
            "type": "button",
            "label": "删除",
            "function": "DELETE_ROW"
          }
        },
        "breakLine": true
      }
    }
  }
}