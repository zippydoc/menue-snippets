{
  "placeholder": {
    "breakLine": true
  },
  "apply_to_all_columns": {
    "type": "checkbox",
    "Etiqueta": "Todas las Columnas",
    "val": "true",
    "isOn": "true",
    "isOff": "false",
    "breakLine": true	
  },
  "apply_columns": {
    "type": "select",
    "Etiqueta": "Seleccionar Columnas a Aplicar",
    "show_if": "apply_to_all_columns=='false'",
    "required": true,
    "table": "input_table",
    "multiple": true,
    "bind": "COLUMNS",
    "breakLine": true
  },
  "apply_to_all_rows": {
    "type": "checkbox",
    "Etiqueta": "Todas las filas",
    "val": "true",
    "isOn": "true",
    "isOff": "false",
    "breakLine": true
  },
  "apply_rows": {
    "type": "select",
    "Etiqueta": "Seleccionar Filas A Aplicar",
    "show_if": "apply_to_all_rows=='false'",
    "required": true,
    "table": "input_table",
    "multiple": true,
    "bind": "LABELS",
    "breakLine": true
  },
  "intersection": {
    "type": "select",
    "Etiqueta": "Selección",
    "show_if": "false",
    "options": {
      "all": {
        "Etiqueta": "Todas las Filas y Columnas seleccionadas"
      },
      "intersection": {
        "Etiqueta": "Intersección de Filas y Columnas seleccionadas"
      }
    },
    "val": "intersection"
  }
}