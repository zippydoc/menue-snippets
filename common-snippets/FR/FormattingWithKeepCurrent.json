{
  "options.format__category": {
    "type": "select",
    "label": "Format",
    "required": true,
    "options": {
      "keep_current": {
        "label": "Tenez-vous au courant"
      },
      "standard": {
        "label": "Standard"
      },
      "number": {
        "label": "Numéro"
      },
      "percentage": {
        "label": "Pourcentage"
      },
      "text": {
        "label": "Texte"
      },
      "date": {
        "label": "Date"
      },
      "currency": {
        "label": "Monnaie"
      }
    },
    "val": "keep_current"
  },
  "options.format__rounding": {
    "type": "select",
    "label": "Arrondi",
    "show_if": "options.format__category=='number' || options.format__category=='percentage' || options.format__category=='currency'",
    "required": true,
    "options": {
      "no_rounding": {
        "label": "Pas d'arrondi"
      },
      "0": {
        "label": "0 chiffre"
      },
      "1": {
        "label": "1 chiffre"
      },
      "2": {
        "label": "2 chiffres"
      },
      "3": {
        "label": "3 chiffres"
      },
      "4": {
        "label": "4 chiffres"
      },
      "5": {
        "label": "5 chiffres"
      },
      "6": {
        "label": "6 chiffres"
      },
      "7": {
        "label": "7 chiffres"
      },
      "8": {
        "label": "8 chiffres"
      },
      "9": {
        "label": "9 chiffres"
      }
    },
    "val": "2"
  },
  "options.format__use_1000_separator": {
    "type": "checkbox",
    "label": "Utilisez le séparateur 1000 (.)",
    "show_if": "options.format__category=='number' || options.format__category=='percentage' || options.format__category=='currency'",
    "val": "true",
    "isOn": "true",
    "isOff": "false"
  },
  "options.format__currency_symbol": {
    "type": "select",
    "label": "Symbole",
    "show_if": "options.format__category=='currency'",
    "required": true,
    "options": {
      "dollar": {
        "label": "$"
      },
      "euro": {
        "label": "€"
      },
      "pound": {
        "label": "£"
      }
    },
    "val": "dollar"
  },
  "options.format__date_format": {
    "type": "select",
    "label": "Type",
    "show_if": "options.format__category=='date'",
    "required": true,
    "options": {
      "mm/dd/yyyy": {
        "label": "3/14/2012"
      },
      "D, M dd, Y": {
        "label": "Mercredi 14 mars 2012"
      },
      "yyyy-mm-dd": {
        "label": "2012-03-14"
      }
    },
    "val": "mm/dd/yyyy",
    "breakLine": true
  }
}