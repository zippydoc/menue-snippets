{
  "placeholder": {
    "breakLine": true
  },
  "apply_to_all_columns": {
    "type": "checkbox",
    "label": "Все столбцы",
    "val": "true",
    "isOn": "true",
    "isOff": "false",
    "breakLine": true	
  },
  "apply_columns": {
    "type": "select",
    "label": "Выбрать столбцы для применения",
    "show_if": "apply_to_all_columns=='false'",
    "required": true,
    "table": "input_table",
    "multiple": true,
    "bind": "COLUMNS",
    "breakLine": true
  },
  "apply_to_all_rows": {
    "type": "checkbox",
    "label": "Все строки",
    "val": "true",
    "isOn": "true",
    "isOff": "false",
    "breakLine": true
  },
  "apply_rows": {
    "type": "select",
    "label": "Выберите строки для применения",
    "show_if": "apply_to_all_rows=='false'",
    "required": true,
    "table": "input_table",
    "multiple": true,
    "bind": "LABELS",
    "breakLine": true
  },
  "intersection": {
    "type": "select",
    "label": "Отбор",
    "show_if": "false",
    "options": {
      "all": {
        "label": "Все выбранные строки и столбцы"
      },
      "intersection": {
        "label": "Пересечение выбранных строк и столбцов"
      }
    },
    "val": "intersection"
  }
}