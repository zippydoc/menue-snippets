{
  "placeholder": {
    "breakLine": true
  },
  "apply_to_all_columns": {
    "type": "checkbox",
    "label": "All Columns",
    "show_if": "false",
    "val": "'$input_table.numOfHeader < 1'",
    "isOn": "true",
    "isOff": "false",
    "breakLine": true	
  },
  "apply_columns": {
    "type": "select",
    "label": "Select Columns to Apply",
    "show_if": "'$input_table.numOfHeader >= 1'",
    "required": true,
    "table": "input_table",
    "multiple": true,
    "bind": "COLUMNS",
    "breakLine": true
  },
  "apply_to_all_rows": {
    "type": "checkbox",
    "label": "All Rows",
    "show_if": "false",
    "val": "$input_table.numOfLabel < 1",
    "isOn": "true",
    "isOff": "false",
    "breakLine": true
  },
  "apply_rows": {
    "type": "select",
    "label": "Select Rows to Apply",
    "show_if": "$input_table.numOfLabel >= 1",
    "required": true,
    "table": "input_table",
    "multiple": true,
    "bind": "LABELS",
    "breakLine": true
  },
  "intersection": {
    "type": "select",
    "label": "Selection",
    "show_if": "false",
    "options": {
      "all": {
        "label": "All selected Rows & Columns"
      },
      "intersection": {
        "label": "Intersection of selected Rows & Columns"
      }
    },
    "val": "intersection"
  }
}
