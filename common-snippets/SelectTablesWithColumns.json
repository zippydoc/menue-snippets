{
  "input": {
    "type": "fieldset",
    "label": "Select Input Table",
    "repeat": false,
    "fields": {
      "input_table1": {
        "type": "select",
        "label": "Select Table",
        "bind": "TABLES",
        "empty": "",
        "required": true
      },
      "apply_to_all_columns1": {
        "type": "checkbox",
        "label": "All Columns",
        "val": "true",
        "isOn": "true",
        "isOff": "false"
      },
      "apply_columns1": {
        "type": "select",
        "label": "Select Columns to Apply",
        "show_if": "apply_to_all_columns1=='false'",
        "required": true,
        "table": "input_table1",
        "multiple": true,
        "bind": "COLUMNS",
        "breakLine": true
      },
      "input_table2": {
        "type": "select",
        "label": "Select Table",
        "bind": "TABLES",
        "empty": "",
        "required": true
      },
      "apply_to_all_columns2": {
        "type": "checkbox",
        "label": "All Columns",
        "val": "true",
        "isOn": "true",
        "isOff": "false"
      },
      "apply_columns2": {
        "type": "select",
        "label": "Select Columns to Apply",
        "show_if": "apply_to_all_columns2=='false'",
        "required": true,
        "table": "input_table2",
        "multiple": true,
        "bind": "COLUMNS",
        "breakLine": true
      }
    }
  }
}