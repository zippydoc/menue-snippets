{
  "input": {
    "type": "fieldset",
    "label": "Select Input Table",
    "repeat": false,
    "fields": {
      "configure_input_tables": {
        "type": "select",
        "label": "Select Source",
        "options": {
          "zippydoc_table": {
            "label": "ZIPPYDOC Table"
          },
          "excel_sheet": {
            "label": "Excel Sheet"
          },
          "excel_column_and_row_range": {
            "label": "Excel Column & Row Range"
          },
          "excel_range_name": {
            "label": "Excel Range Name"
          }
        },
        "val": "zippydoc_table"
      },
      "table_id": {
        "type": "select",
        "label": "Select Table",
        "show_if": "configure_input_tables=='zippydoc_table'",
        "bind": "TABLES",
        "empty": "",
        "required": true
      },
      "excel_sheet__table_has_header": {
        "type": "checkbox",
        "label": "Table has header",
        "show_if": "configure_input_tables!='zippydoc_table'",
        "val": "true",
        "isOn": "true",
        "isOff": "false",
        "breakLine": true
      },
      "excel_sheet__active_sheet": {
        "type": "checkbox",
        "label": "Active Sheet",
        "show_if": "configure_input_tables!='zippydoc_table'",
        "val": "true",
        "isOn": "true",
        "isOff": "false"
      },
      "excel_sheet__sheet_name": {
        "type": "text",
        "label": "Sheet Name",
        "show_if": "configure_input_tables!='zippydoc_table' && excel_sheet__active_sheet=='false'",
        "val": "",
        "style": "margin-left: 15px",
        "breakLine": true
      },
      "excel_sheet__named_range": {
        "type": "text",
        "label": "Named Range",
        "show_if": "configure_input_tables=='excel_range_name'",
        "val": ""
      },
      "remove_input_table_after_processing": {
        "type": "hidden",
        "val": "false"
      },
      "is_word": {
        "type": "hidden",
        "val": "false"
      }
    }
  }
}
